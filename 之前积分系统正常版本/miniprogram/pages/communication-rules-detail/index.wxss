/* 通信规范详情页面样式 */
.detail-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.detail-container[data-theme="dark"] {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.detail-container[data-theme="dark"] .header-title {
  color: #ecf0f1;
}

.header-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.detail-container[data-theme="dark"] .header-subtitle {
  color: #bdc3c7;
}

/* 搜索栏 */
.search-container {
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 内容容器 */
.content-container {
  margin-bottom: 40rpx;
}

/* 章节容器 */
.section-container {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e8ecf0;
  overflow: hidden;
}

.detail-container[data-theme="dark"] .section-container {
  background: #34495e;
  border-color: #4a5f7a;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

/* 章节标题 */
.section-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
  transition: background-color 0.2s;
}

.section-header:active {
  background: rgba(52, 152, 219, 0.1);
}

.detail-container[data-theme="dark"] .section-header:active {
  background: rgba(52, 152, 219, 0.2);
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.detail-container[data-theme="dark"] .section-title {
  color: #ecf0f1;
}

.section-arrow {
  font-size: 24rpx;
  color: #7f8c8d;
  transition: transform 0.3s;
}

.section-arrow.expanded {
  transform: rotate(180deg);
}

/* 章节内容 */
.section-content {
  padding: 0 24rpx 24rpx 24rpx;
  border-top: 1rpx solid #e8ecf0;
  animation: slideDown 0.3s ease-out;
}

.detail-container[data-theme="dark"] .section-content {
  border-top-color: #4a5f7a;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 1000rpx;
  }
}

/* 文本内容 */
.text-content .text-item {
  padding: 16rpx;
  margin-bottom: 12rpx;
  background: rgba(52, 152, 219, 0.05);
  border-radius: 12rpx;
  border-left: 4rpx solid #3498db;
  font-size: 28rpx;
  line-height: 1.6;
  color: #2c3e50;
  cursor: pointer;
  transition: all 0.2s;
}

.text-content .text-item:active {
  background: rgba(52, 152, 219, 0.1);
  transform: translateX(4rpx);
}

.detail-container[data-theme="dark"] .text-content .text-item {
  color: #ecf0f1;
  background: rgba(52, 152, 219, 0.1);
}

/* 列表内容 */
.list-content .list-item {
