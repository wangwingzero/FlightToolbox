/* 通信规范页面样式 */

/* 页面容器 */
.communication-rules-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #16a085 0%, #27ae60 50%, #2ecc71 100%);
  padding: 20rpx;
  position: relative;
  overflow-x: hidden;
}

/* 动态背景效果 */
.communication-rules-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(22, 160, 133, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(46, 204, 113, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(39, 174, 96, 0.2) 0%, transparent 50%);
  pointer-events: none;
  z-index: 1;
}

/* 暗黑模式背景 */
.communication-rules-container[data-theme="dark"] {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

/* 页面标题 */
.communication-rules-container .page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
  position: relative;
  z-index: 10;
}

.communication-rules-container .header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.communication-rules-container[data-theme="dark"] .header-title {
  color: #ecf0f1;
}

.communication-rules-container .header-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.communication-rules-container[data-theme="dark"] .header-subtitle {
  color: #bdc3c7;
}

/* 卡片容器 */
.communication-rules-container .cards-container {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 10;
}

/* 程序卡片 */
.communication-rules-container .procedure-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e8ecf0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.communication-rules-container[data-theme="dark"] .procedure-card {
  background: #34495e;
  border-color: #4a5f7a;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.communication-rules-container .procedure-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.communication-rules-container[data-theme="dark"] .procedure-card:hover {
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.4);
}

/* 卡片顶部 */
.communication-rules-container .card-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: inline-block;
}

.communication-rules-container .card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.communication-rules-container[data-theme="dark"] .card-title {
  color: #ecf0f1;
}

.communication-rules-container .card-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
}

.communication-rules-container[data-theme="dark"] .card-subtitle {
  color: #bdc3c7;
}

/* 卡片详情 */
.communication-rules-container .card-details {
  margin-bottom: 20rpx;
}

.communication-rules-container .detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.communication-rules-container .detail-item:last-child {
  margin-bottom: 0;
}

.communication-rules-container .detail-label {
  color: #7f8c8d;
  min-width: 120rpx;
  font-weight: 500;
}

.communication-rules-container[data-theme="dark"] .detail-label {
  color: #95a5a6;
}

.communication-rules-container .detail-value {
  color: #2c3e50;
  flex: 1;
}

.communication-rules-container[data-theme="dark"] .detail-value {
  color: #ecf0f1;
}

/* 卡片箭头 */
.communication-rules-container .card-arrow {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #3498db;
  font-weight: bold;
}

.communication-rules-container[data-theme="dark"] .card-arrow {
  color: #5dade2;
}

/* 卡片颜色主题 */
.communication-rules-container .requirements-card {
  border-left: 6rpx solid #e74c3c;
}

.communication-rules-container .pronunciation-card {
  border-left: 6rpx solid #f39c12;
}

.communication-rules-container .phrases-card {
  border-left: 6rpx solid #2ecc71;
}

.communication-rules-container .callsign-card {
  border-left: 6rpx solid #9b59b6;
}

.communication-rules-container .weather-card {
  border-left: 6rpx solid #3498db;
}

/* 快速提示 */
.communication-rules-container .quick-tips {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e8ecf0;
  position: relative;
  z-index: 10;
}

.communication-rules-container[data-theme="dark"] .quick-tips {
  background: rgba(52, 73, 94, 0.95);
  border-color: #4a5f7a;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.communication-rules-container .tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
  text-align: center;
}

.communication-rules-container[data-theme="dark"] .tips-title {
  color: #ecf0f1;
}

.communication-rules-container .tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.communication-rules-container .tip-item:last-child {
  margin-bottom: 0;
}

.communication-rules-container .tip-number {
  background: #3498db;
  color: #ffffff;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.communication-rules-container .tip-text {
  color: #2c3e50;
  line-height: 1.6;
  flex: 1;
}

.communication-rules-container[data-theme="dark"] .tip-text {
  color: #ecf0f1;
}