/* 通信失效页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.container[data-theme="dark"] {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.container[data-theme="dark"] .header-title {
  color: #ecf0f1;
}

.header-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

.container[data-theme="dark"] .header-subtitle {
  color: #bdc3c7;
}

/* 卡片容器 */
.cards-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

/* 程序卡片 */
.procedure-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.procedure-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.container[data-theme="dark"] .procedure-card {
  background: #34495e;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 国内程序卡片 */
.domestic-card {
  border-left: 8rpx solid #e74c3c;
}

.domestic-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100%;
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  opacity: 0.1;
}

