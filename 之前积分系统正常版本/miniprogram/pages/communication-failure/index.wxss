}

/* 紧急信息区域 */
.emergency-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 15rpx;
}

.emergency-item {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid;
  background: rgba(255, 255, 255, 0.1);
}

/* 关键差异 - 红色警告 */
.emergency-item.critical {
  border-left-color: #e74c3c;
  background: rgba(231, 76, 60, 0.05);
}

/* 重要程序 - 橙色提醒 */
.emergency-item.important {
  border-left-color: #f39c12;
  background: rgba(243, 156, 18, 0.05);
}

/* 一般信息 - 蓝色标识 */
.emergency-item.normal {
  border-left-color: #3498db;
  background: rgba(52, 152, 219, 0.05);
}

.emergency-label {
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 8rpx;
  min-width: 100rpx;
  flex-shrink: 0;
}

.emergency-value {
  font-size: 24rpx;
  font-weight: 500;
  color: #2c3e50;
  line-height: 1.3;
}

/* 暗黑模式适配 */
.container[data-theme="dark"] .emergency-item {
  background: rgba(0, 0, 0, 0.2);
}

.container[data-theme="dark"] .emergency-item.critical {
  background: rgba(231, 76, 60, 0.15);
}

.container[data-theme="dark"] .emergency-item.important {
  background: rgba(243, 156, 18, 0.15);
}

.container[data-theme="dark"] .emergency-item.normal {
  background: rgba(52, 152, 219, 0.15);
}

.container[data-theme="dark"] .emergency-value {
  color: #ecf0f1;
}

/* 箭头 */
.card-arrow {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #bdc3c7;
  font-weight: bold;
}

.container[data-theme="dark"] .card-arrow {
  color: #7f8c8d;
}

/* 快速提示 */
.quick-tips {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
}

.container[data-theme="dark"] .quick-tips {
  background: #3a3a3a;
  border-color: #555;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 20rpx;
  text-align: center;
}

.container[data-theme="dark"] .tips-title {
  color: #f39c12;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.tip-number {
  width: 50rpx;
  height: 50rpx;
  background: #e17055;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 28rpx;
  color: #856404;
  line-height: 1.4;
}

.container[data-theme="dark"] .tip-text {
  color: #f39c12;
}

/* 响应式设计 */
@media (min-width: 768rpx) {
  .cards-container {
    flex-direction: row;
    gap: 40rpx;
  }
  
  .procedure-card {
    flex: 1;
  }
}