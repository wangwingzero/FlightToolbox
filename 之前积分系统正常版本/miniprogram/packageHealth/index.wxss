/* 健康管理页面样式 - 基于性能详解设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 20%, #d1fae5 40%, #f0fdf4 60%, #f0f9ff 80%, #f0fdf4 100%),
    radial-gradient(circle at 30% 40%, rgba(34, 197, 94, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(59, 130, 246, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-content[data-theme='dark'] {
  background: #1a1a1a;
}

/* 标签页系统 */
.container .van-tabs {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 0;
  box-shadow: 
    0 2rpx 32rpx rgba(34, 197, 94, 0.12),
    0 8rpx 64rpx rgba(34, 197, 94, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  margin: 0;
  overflow: hidden;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(34, 197, 94, 0.1);
}

.container .van-tabs__wrap {
  overflow-x: auto !important;
  background: transparent;
  border-bottom: none;
  padding: 16rpx 0;
  position: relative;
  scroll-behavior: smooth;
}

.container .van-tabs__line {
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 50%, #8b5cf6 100%) !important;
  border-radius: 12rpx !important;
  height: 10rpx !important;
  box-shadow: 
    0 3rpx 16rpx rgba(34, 197, 94, 0.5),
    0 6rpx 32rpx rgba(34, 197, 94, 0.25),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
  transform: translateY(-3rpx);
}

.container .van-tab {
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border-radius: 20rpx;
  margin: 0 8rpx;
  overflow: hidden;
  backdrop-filter: blur(16rpx);
}

.container .van-tab__text {
  font-weight: 500 !important;
  font-size: 30rpx !important;
  color: #64748b !important;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  z-index: 1;
  line-height: 1.3;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.container .van-tab--active .van-tab__text {
  color: #22c55e !important;
  font-weight: 700 !important;
  text-shadow: 
    0 1rpx 3rpx rgba(34, 197, 94, 0.3),
    0 2rpx 6rpx rgba(34, 197, 94, 0.15);
  transform: scale(1.1);
  letter-spacing: 1.5rpx;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx 32rpx;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.health-search::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 50%, #22c55e 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-section .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow: 
    0 8rpx 32rpx rgba(34, 197, 94, 0.12),
    0 16rpx 64rpx rgba(34, 197, 94, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(34, 197, 94, 0.1);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(34, 197, 94, 0.2);
}

.search-section .van-search:focus-within {
  border-color: rgba(34, 197, 94, 0.4);
  box-shadow: 
    0 12rpx 40rpx rgba(34, 197, 94, 0.15),
    0 20rpx 80rpx rgba(34, 197, 94, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 28rpx !important;
  position: relative;
  z-index: 2;
}

.search-section .van-field__input {
  font-size: 30rpx !important;
  color: #1e293b !important;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding: 20rpx 32rpx !important;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #94a3b8 !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

/* 健康管理列表区域 */
.parameters-section {
  padding: 0 32rpx 40rpx;
}

.context7-content-container {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  min-height: auto !important;
  background: transparent;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 健康管理卡片 */
.health-item-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(34, 197, 94, 0.12),
    0 16rpx 64rpx rgba(34, 197, 94, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(34, 197, 94, 0.1);
  position: relative;
  overflow: hidden;
}

.health-item-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(34, 197, 94, 0.15),
    0 8rpx 32rpx rgba(34, 197, 94, 0.1);
}

.item-card-header {
  margin-bottom: 24rpx;
}

.item-primary {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-name-zh {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
  line-height: 1.3;
  flex: 1;
  margin-right: 16rpx;
}

.item-badges {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.category-badge {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(34, 197, 94, 0.3);
}

.category-badge[data-category="fitness"] {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
}

.category-badge[data-category="hearing"] {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.category-badge[data-category="vision"] {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.category-badge[data-category="medical"] {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.type-badge {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 4rpx;
  box-shadow: 0 2rpx 6rpx rgba(245, 158, 11, 0.3);
}

.item-secondary {
  margin-top: 8rpx;
}

.item-name-en {
  font-size: 28rpx;
  color: #64748b;
  font-style: italic;
  line-height: 1.4;
}

.item-card-content {
  margin-bottom: 24rpx;
}

.item-definition {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #64748b;
}

.item-arrow {
  color: #94a3b8;
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(16rpx);
  margin: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(34, 197, 94, 0.1);
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #22c55e;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 28rpx;
  color: #64748b;
}

/* 无结果状态 */
.no-results {
  text-align: center;
  padding: 120rpx 32rpx;
}

.no-results-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.no-results-text {
  font-size: 32rpx;
  color: #718096;
  margin-bottom: 16rpx;
}

.no-results-tip {
  font-size: 28rpx;
  color: #a0aec0;
}

/* 详情弹窗 */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  padding: 32rpx;
  border-bottom: 2rpx solid rgba(34, 197, 94, 0.1);
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 100%);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}

.popup-header-content {
  flex: 1;
  margin-right: 16rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-style: italic;
}

.popup-close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(16rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.popup-close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.popup-content {
  flex: 1;
  padding: 32rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.detail-label::before {
  content: '';
  width: 6rpx;
  height: 24rpx;
  background: #22c55e;
  border-radius: 3rpx;
}

.detail-content {
  font-size: 30rpx;
  color: #4b5563;
  line-height: 1.7;
}

/* 出版信息样式 */
.publication-info {
  background: rgba(34, 197, 94, 0.05);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #22c55e;
}

.publication-item {
  margin-bottom: 12rpx;
  display: flex;
  gap: 12rpx;
}

.publication-label {
  font-weight: 600;
  color: #22c55e;
  min-width: 120rpx;
}

.publication-value {
  color: #374151;
  flex: 1;
}

/* 章节内容样式 */
.section-content {
  background: rgba(249, 250, 251, 0.8);
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(34, 197, 94, 0.1);
}

.section-text {
  margin-bottom: 20rpx;
  line-height: 1.8;
}

.points-list, .components-list {
  margin-top: 20rpx;
}

.point-item {
  margin: 8rpx 0;
  padding-left: 16rpx;
  color: #374151;
  line-height: 1.6;
}

.component-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border-left: 4rpx solid #22c55e;
}

.component-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #22c55e;
  margin-bottom: 8rpx;
}

.component-description {
  color: #374151;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.component-examples {
  margin-top: 12rpx;
}

.examples-title {
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.example-item {
  margin: 4rpx 0;
  padding-left: 16rpx;
  color: #4b5563;
  font-size: 28rpx;
}

/* 深色模式支持 */
.page-content[data-theme='dark'] .container .van-tabs {
  background: rgba(45, 55, 72, 0.95);
  border-bottom-color: rgba(34, 197, 94, 0.2);
}

.page-content[data-theme='dark'] .container .van-tab__text {
  color: #a0aec0 !important;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.page-content[data-theme='dark'] .container .van-tab--active .van-tab__text {
  color: #4ade80 !important;
}

.page-content[data-theme='dark'] .search-section .van-search {
  background: rgba(45, 55, 72, 0.95);
  border-color: rgba(34, 197, 94, 0.3);
}

.page-content[data-theme='dark'] .search-section .van-field__input {
  color: #e2e8f0 !important;
}

.page-content[data-theme='dark'] .health-item-card {
  background: rgba(45, 55, 72, 0.95);
  border-color: rgba(34, 197, 94, 0.2);
}

.page-content[data-theme='dark'] .item-name-zh {
  color: #e2e8f0;
}

.page-content[data-theme='dark'] .item-name-en {
  color: #a0aec0;
}

.page-content[data-theme='dark'] .item-definition {
  color: #cbd5e0;
}

.page-content[data-theme='dark'] .item-meta {
  color: #a0aec0;
}

.page-content[data-theme='dark'] .stats-section {
  background: rgba(45, 55, 72, 0.8);
}

.page-content[data-theme='dark'] .stats-number {
  color: #4ade80;
}

.page-content[data-theme='dark'] .stats-label {
  color: #a0aec0;
}

.page-content[data-theme='dark'] .popup-header {
  background: linear-gradient(135deg, #166534 0%, #1e40af 100%);
}

.page-content[data-theme='dark'] .detail-label {
  color: #e2e8f0;
}

.page-content[data-theme='dark'] .detail-content {
  color: #cbd5e0;
}

.page-content[data-theme='dark'] .section-content {
  background: rgba(55, 65, 81, 0.8);
  border-color: rgba(34, 197, 94, 0.2);
}

.page-content[data-theme='dark'] .component-item {
  background: rgba(55, 65, 81, 0.8);
}

/* 体检标准样式 */
.standard-content {
  background: rgba(249, 250, 251, 0.8);
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(245, 158, 11, 0.1);
}

.standard-category {
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.category-label, .id-label, .notes-label {
  font-weight: 600;
  color: #f59e0b;
  margin-right: 8rpx;
}

.category-value, .subcategory-value, .id-value {
  color: #374151;
  font-weight: 500;
}

.standard-id {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.standard-conditions {
  margin-top: 20rpx;
}

.standard-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  border-left: 4rpx solid #f59e0b;
}

.assessment-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  text-align: center;
  color: white;
}

.assessment-qualified {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
}

.assessment-unqualified {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.assessment-conditional {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.conditions-list {
  margin-bottom: 12rpx;
}

.condition-item {
  margin: 8rpx 0;
  padding-left: 16rpx;
  color: #374151;
  line-height: 1.6;
  font-size: 28rpx;
}

.standard-notes {
  background: rgba(245, 158, 11, 0.1);
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 12rpx;
  border-left: 3rpx solid #f59e0b;
}

.notes-text {
  color: #92400e;
  line-height: 1.5;
  font-size: 26rpx;
}

/* 深色模式下的体检标准样式 */
.page-content[data-theme='dark'] .standard-content {
  background: rgba(55, 65, 81, 0.8);
  border-color: rgba(245, 158, 11, 0.2);
}

.page-content[data-theme='dark'] .standard-item {
  background: rgba(55, 65, 81, 0.8);
}

.page-content[data-theme='dark'] .category-value,
.page-content[data-theme='dark'] .subcategory-value,
.page-content[data-theme='dark'] .id-value {
  color: #e2e8f0;
}

.page-content[data-theme='dark'] .condition-item {
  color: #cbd5e0;
}

.page-content[data-theme='dark'] .standard-notes {
  background: rgba(245, 158, 11, 0.2);
}

.page-content[data-theme='dark'] .notes-text {
  color: #fbbf24;
}