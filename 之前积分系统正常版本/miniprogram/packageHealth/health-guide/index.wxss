/* 健康指南页面样式 - 基于体检标准页面设计 */

.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 主题样式 */
.page-content[data-theme="light"] {
  background-color: #f5f5f5;
  color: #333;
}

.page-content[data-theme="dark"] {
  background-color: #1a1a1a;
  color: #e0e0e0;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

[data-theme="dark"] .search-section {
  background-color: #2d2d2d;
}

/* 健康指南列表区域 */
.guides-section {
  padding: 0 20rpx;
}

.context7-content-container {
  margin-bottom: 40rpx;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 健康指南卡片 */
.health-item-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1rpx solid #f0f0f0;
}

[data-theme="dark"] .health-item-card {
  background-color: #2d2d2d;
  border: 1rpx solid #404040;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.health-item-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.item-card-header {
  margin-bottom: 24rpx;
}

.item-primary {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.item-name-zh {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

[data-theme="dark"] .item-name-zh {
  color: #ffffff;
}

.item-badges {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.category-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.category-badge[data-category="飞行体能"] {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.category-badge[data-category="太阳眼镜"] {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.category-badge[data-category="听力保护"] {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.publication-badge {
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #667eea;
  font-weight: 500;
}

[data-theme="dark"] .publication-badge {
  background: rgba(102, 126, 234, 0.2);
  color: #8fa4ff;
}

.item-secondary {
  margin-top: 8rpx;
}

.item-name-en {
  font-size: 28rpx;
  color: #666;
  font-style: italic;
}

[data-theme="dark"] .item-name-en {
  color: #999;
}

/* 卡片内容 */
.item-card-content {
  margin-bottom: 24rpx;
}

.item-summary {
  font-size: 28rpx;
  color: #4a4a4a;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

[data-theme="dark"] .item-summary {
  color: #c0c0c0;
}

.item-source {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  flex-wrap: wrap;
}

.source-label {
  font-size: 24rpx;
  color: #888;
  flex-shrink: 0;
}

[data-theme="dark"] .source-label {
  color: #aaa;
}

.source-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

[data-theme="dark"] .source-text {
  color: #999;
}

/* 卡片底部 */
.item-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

[data-theme="dark"] .item-meta {
  color: #777;
}

.item-arrow {
  color: #ccc;
}

[data-theme="dark"] .item-arrow {
  color: #666;
}

/* 无结果状态 */
.no-results {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

[data-theme="dark"] .no-results {
  color: #666;
}

.no-results-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.no-results-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  color: #666;
}

[data-theme="dark"] .no-results-text {
  color: #888;
}

.no-results-tip {
  font-size: 28rpx;
  color: #999;
}

[data-theme="dark"] .no-results-tip {
  color: #666;
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  padding: 40rpx 20rpx;
  margin-top: 40rpx;
  background: white;
  border-radius: 16rpx;
  margin: 40rpx 20rpx 0;
}

[data-theme="dark"] .stats-section {
  background: #2d2d2d;
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

[data-theme="dark"] .stats-label {
  color: #777;
}

/* 详情弹窗 */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 40rpx 32rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: sticky;
  top: 0;
  z-index: 100;
}

.popup-header-content {
  flex: 1;
  padding-right: 20rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  font-style: italic;
}

.popup-close-btn {
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.popup-content {
  flex: 1;
  padding: 32rpx;
  background: #f8f9fa;
}

[data-theme="dark"] .popup-content {
  background: #1a1a1a;
}

/* 详情内容区域 */
.detail-section {
  margin-bottom: 32rpx;
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
}

[data-theme="dark"] .detail-section {
  background: #2d2d2d;
}

.detail-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

[data-theme="dark"] .detail-label {
  color: #e0e0e0;
  border-bottom-color: #404040;
}

.detail-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

[data-theme="dark"] .detail-content {
  color: #c0c0c0;
}

/* 内容详情样式 */
.content-paragraph {
  margin-bottom: 24rpx;
  line-height: 1.7;
}

/* 健身组成部分 */
.components-section .component-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

[data-theme="dark"] .components-section .component-item {
  background: #333;
}

.component-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 12rpx;
}

.component-description {
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.examples-title {
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

[data-theme="dark"] .examples-title {
  color: #e0e0e0;
}

.example-item {
  padding: 4rpx 0;
  padding-left: 16rpx;
}

/* 要点列表 */
.points-section .point-item {
  margin-bottom: 12rpx;
  padding-left: 16rpx;
  line-height: 1.6;
}

.point-term {
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

[data-theme="dark"] .point-term {
  color: #e0e0e0;
}

.point-description {
  line-height: 1.6;
}

/* 材料信息 */
.materials-section .material-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

[data-theme="dark"] .materials-section .material-item {
  background: #333;
}

.material-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f5576c;
  margin-bottom: 12rpx;
}

.material-description {
  line-height: 1.6;
}

/* 表格样式 */
.table-section {
  margin: 24rpx 0;
}

.table-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

[data-theme="dark"] .table-title {
  color: #e0e0e0;
}

.table-wrapper {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

[data-theme="dark"] .table-wrapper {
  border-color: #404040;
}

.table-header {
  display: flex;
  background: #f8f9fa;
}

[data-theme="dark"] .table-header {
  background: #333;
}

.table-row {
  display: flex;
  border-top: 1rpx solid #e0e0e0;
}

[data-theme="dark"] .table-row {
  border-top-color: #404040;
}

.table-cell {
  flex: 1;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  text-align: center;
  border-right: 1rpx solid #e0e0e0;
}

[data-theme="dark"] .table-cell {
  border-right-color: #404040;
}

.table-cell:last-child {
  border-right: none;
}

.header-cell {
  font-weight: 600;
  color: #333;
}

[data-theme="dark"] .header-cell {
  color: #e0e0e0;
}

/* 子章节 */
.subsections .subsection-item {
  margin-bottom: 20rpx;
}

.subsection-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #00f2fe;
  margin-bottom: 12rpx;
}

.subsection-content {
  line-height: 1.6;
}

/* 噪音类型 */
.types-section .type-item {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

[data-theme="dark"] .types-section .type-item {
  background: #333;
}

.type-name {
  font-weight: 600;
  color: #00f2fe;
  margin-bottom: 8rpx;
}

.type-description {
  line-height: 1.6;
}

/* 影响效果 */
.effects-section .effect-category {
  margin-bottom: 24rpx;
}

.effect-category-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 12rpx;
}

.effect-point {
  margin-bottom: 8rpx;
  padding-left: 16rpx;
  line-height: 1.6;
}

/* 保护方法 */
.methods-section .method-item {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

[data-theme="dark"] .methods-section .method-item {
  background: #333;
}

.method-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 16rpx;
}

.method-details {
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.method-table {
  margin: 20rpx 0;
}

/* 设备信息 */
.devices-section .device-item {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

[data-theme="dark"] .devices-section .device-item {
  background: rgba(102, 126, 234, 0.1);
}

.device-name {
  font-weight: 600;
  color: #667eea;
  margin-bottom: 8rpx;
}

.device-description {
  line-height: 1.6;
}