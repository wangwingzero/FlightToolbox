<view class="container" data-theme="{{ isDarkMode ? 'dark' : 'light' }}">
  <view class="page-header">
    <view class="header-title">📐 下滑线高度计算</view>
    <view class="header-subtitle">计算下滑线上的高度</view>
  </view>

  <view class="calculation-module">
    <view class="input-section">
      <view class="input-group">
        <view class="input-label">📐 下滑角</view>
        <van-field
          value="{{ glideslope.angle }}"
          placeholder="请输入下滑角"
          type="digit"
          bind:change="onAngleChange"
        >
          <view slot="right-icon" class="unit-label">度</view>
        </van-field>
      </view>

      <view class="input-group">
        <view class="input-label">📍 距离跑道头</view>
        <van-field
          value="{{ glideslope.distance }}"
          placeholder="请输入距离"
          type="digit"
          bind:change="onDistanceChange"
        >
          <view slot="right-icon" class="unit-label">海里</view>
        </van-field>
      </view>

      <view class="input-group">
        <view class="input-label">🏔️ 机场标高</view>
        <van-field
          value="{{ glideslope.elevation }}"
          placeholder="请输入机场标高"
          type="digit"
          bind:change="onElevationChange"
        >
          <view slot="right-icon" class="unit-label">英尺</view>
        </van-field>
      </view>
    </view>

    <view class="action-buttons">
      <van-button type="primary" bind:click="calculateGlideslope" block>
        🚀 计算下滑线高度
      </van-button>
      <van-button type="default" bind:click="clearGlideslope" block>
        🗑️ 清空数据
      </van-button>
    </view>

    <view wx:if="{{ glideslope.altitude }}" class="result-section">
      <view class="result-title">📊 计算结果</view>
      <view class="result-grid">
        <view class="result-item">
          <view class="result-label">下滑线高度</view>
          <view class="result-value">{{ glideslope.altitude }} 英尺</view>
        </view>
        <view class="result-item">
          <view class="result-label">绝对高度</view>
          <view class="result-value">{{ glideslope.absoluteAltitude }} 英尺</view>
        </view>
      </view>
    </view>
  </view>

</view>