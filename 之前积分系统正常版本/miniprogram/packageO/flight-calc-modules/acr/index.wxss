/* 结论区域 */
.conclusion-section {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 24rpx;
}

.conclusion-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.conclusion-icon {
  font-size: 36rpx;
}

.conclusion-title {
  font-size: 28rpx;
