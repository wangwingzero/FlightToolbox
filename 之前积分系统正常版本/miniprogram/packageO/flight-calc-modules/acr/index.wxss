/* ACR-PCR页面 - 道面承载主题精美设计 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
}

/* 道面承载主题动画背景 */
.animated-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

/* 跑道灯光效果 */
.runway-light {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.4) 0%, transparent 70%);
  border-radius: 50%;
  animation: runwayFlash 3s ease-in-out infinite;
}

.runway-light1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.runway-light2 {
  top: 50%;
  right: 15%;
  animation-delay: -1s;
}

.runway-light3 {
  bottom: 25%;
  left: 20%;
  animation-delay: -2s;
}

@keyframes runwayFlash {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.2);
  }
}

/* 飞机阴影 */
.aircraft-shadow {
  position: absolute;
  top: 30%;
  right: 20%;
  width: 120rpx;
  height: 60rpx;
  background: radial-gradient(ellipse, rgba(118, 75, 162, 0.3) 0%, transparent 70%);
  animation: aircraftMove 8s ease-in-out infinite;
}

@keyframes aircraftMove {
  0%, 100% {
    transform: translateX(0) translateY(0);
  }
  50% {
    transform: translateX(50rpx) translateY(-20rpx);
  }
}

/* 承载指示器 */
.bearing-indicator {
  position: absolute;
  top: 70%;
  left: 50%;
  width: 80rpx;
  height: 80rpx;
  margin-left: -40rpx;
  background: radial-gradient(circle, rgba(240, 147, 251, 0.4) 0%, transparent 60%);
  border-radius: 50%;
  animation: bearingPulse 4s ease-in-out infinite;
}

@keyframes bearingPulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.2;
  }
}

/* 英雄区域 */
.hero-section {
  position: relative;
  z-index: 10;
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
}

.hero-content {
  animation: heroFadeIn 1s ease-out;
}

@keyframes heroFadeIn {
  0% { opacity: 0; transform: translateY(30rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

.hero-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: aircraftLanding 3s ease-in-out infinite;
}

@keyframes aircraftLanding {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0) rotate(0deg); }
  40% { transform: translateY(-10rpx) rotate(-2deg); }
  60% { transform: translateY(-5rpx) rotate(1deg); }
}

.hero-title {
  font-size: 52rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 32rpx;
  font-weight: 500;
}

.hero-features {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-top: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  font-size: 24rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.feature-item text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 步骤指示器 */
.step-indicator {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx 32rpx;
  margin-bottom: 24rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 80rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  transform: scale(1.1);
}

.step-item.completed .step-number {
  background: linear-gradient(135deg, #43a047 0%, #388e3c 100%);
  color: white;
}

.step-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  text-align: center;
}

.step-item.active .step-label {
  color: white;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 16rpx;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

.step-line.completed {
  background: linear-gradient(90deg, #43a047 0%, #388e3c 100%);
}

/* 主要内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 24rpx 40rpx;
  animation: contentSlideUp 1s ease-out 0.3s both;
}

@keyframes contentSlideUp {
  0% { opacity: 0; transform: translateY(50rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

