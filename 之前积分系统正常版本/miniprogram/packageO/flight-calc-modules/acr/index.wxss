/* 对比数据 */
.comparison-data {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
  padding: 24rpx;
}

.data-item {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.data-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.data-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
}

.data-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.data-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.acr-icon {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.pcr-icon {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}

.margin-icon {
  background: linear-gradient(135deg, #43a047 0%, #388e3c 100%);
}

.data-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
}

.data-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a202c;
  text-align: center;
}

.data-value.acr-value {
  color: #e74c3c;
}

.data-value.pcr-value {
  color: #3498db;
}

.data-value.positive {
  color: #43a047;
}

.data-value.negative {
  color: #e74c3c;
}

/* 详细结果 */
.detailed-results {
  padding: 24rpx;
}

.detail-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #8e44ad;
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.detail-grid {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
