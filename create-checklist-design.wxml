<!-- 高端优雅的检查单创建界面设计 -->
<view class="container">
  <!-- 页面头部状态区域 -->
  <view class="header-section">
    <view class="status-card">
      <view class="status-content">
        <view class="status-left">
          <view class="completion-ring">
            <view class="ring-bg"></view>
            <view class="ring-progress" style="stroke-dasharray: 0 251.2;"></view>
            <text class="completion-text">0%</text>
          </view>
        </view>
        <view class="status-right">
          <view class="status-title">个人检查单</view>
          <view class="status-subtitle">Personal Checklist</view>
          <view class="status-numbers">
            <view class="number-item">
              <text class="number">0</text>
              <text class="label">已完成</text>
            </view>
            <view class="divider"></view>
            <view class="number-item">
              <text class="number">3</text>
              <text class="label">总项目</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 创建检查单弹窗蒙层 -->
  <view class="modal-overlay" wx:if="{{showCreateModal}}" bindtap="hideCreateModal">
    <!-- 创建检查单弹窗 -->
    <view class="create-modal" catchtap="stopPropagation">
      <!-- 弹窗头部 -->
      <view class="modal-header">
        <view class="modal-title-section">
          <view class="modal-icon">
            <view class="icon-checklist"></view>
          </view>
          <view class="modal-title-content">
            <text class="modal-title">创建检查单</text>
            <text class="modal-subtitle">Create New Checklist</text>
          </view>
        </view>
        <view class="close-btn" bindtap="hideCreateModal">
          <view class="close-icon"></view>
        </view>
      </view>

      <!-- 弹窗内容 -->
      <view class="modal-content">
        <!-- 基本信息区域 -->
        <view class="form-section">
          <view class="section-header">
            <view class="section-icon basic-info-icon"></view>
            <view class="section-title">
              <text class="title-main">基本信息</text>
              <text class="title-sub">Basic Information</text>
            </view>
          </view>
          
          <view class="input-group">
            <view class="input-label">
              <text class="label-text">检查单名称</text>
              <text class="label-required">*</text>
            </view>
            <view class="input-wrapper">
              <input 
                class="form-input" 
                placeholder="请输入检查单名称"
                placeholder-class="input-placeholder"
                value="{{checklistName}}"
                bindinput="onNameInput"
                maxlength="50"
              />
              <view class="input-border"></view>
            </view>
            <view class="input-counter">
              <text class="counter-text">{{checklistName.length}}/50</text>
            </view>
          </view>
        </view>

        <!-- 检查项目区域 -->
        <view class="form-section">
          <view class="section-header">
            <view class="section-icon items-icon"></view>
            <view class="section-title">
              <text class="title-main">检查项目</text>
              <text class="title-sub">Check Items</text>
            </view>
            <view class="items-count">
              <text class="count-number">{{checkItems.length}}</text>
              <text class="count-label">项</text>
            </view>
          </view>

          <!-- 项目列表 -->
          <view class="items-list" wx:if="{{checkItems.length > 0}}">
            <view class="item-card" wx:for="{{checkItems}}" wx:key="index">
              <view class="item-content">
                <view class="item-number">{{index + 1}}</view>
                <view class="item-text">{{item.name}}</view>
                <view class="item-actions">
                  <view class="action-btn edit-btn" bindtap="editItem" data-index="{{index}}">
                    <view class="edit-icon"></view>
                  </view>
                  <view class="action-btn delete-btn" bindtap="deleteItem" data-index="{{index}}">
                    <view class="delete-icon"></view>
                  </view>
                </view>
              </view>
            </view>
          </view>

          <!-- 空状态 -->
          <view class="empty-state" wx:else>
            <view class="empty-icon"></view>
            <text class="empty-text">暂无检查项目</text>
            <text class="empty-subtitle">点击下方按钮添加第一个检查项目</text>
          </view>

          <!-- 添加项目按钮 -->
          <view class="add-item-btn" bindtap="showAddItemDialog">
            <view class="add-icon"></view>
            <text class="add-text">添加检查项目</text>
          </view>
        </view>
      </view>

      <!-- 弹窗底部操作区 -->
      <view class="modal-footer">
        <view class="footer-actions">
          <view class="cancel-btn" bindtap="hideCreateModal">
            <text class="btn-text">取消</text>
          </view>
          <view class="create-btn" bindtap="createChecklist">
            <view class="btn-gradient"></view>
            <text class="btn-text">创建检查单</text>
            <view class="btn-icon"></view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 添加项目输入弹窗 -->
  <view class="input-modal-overlay" wx:if="{{showAddItemModal}}" bindtap="hideAddItemModal">
    <view class="input-modal" catchtap="stopPropagation">
      <view class="input-modal-header">
        <text class="input-modal-title">添加检查项目</text>
      </view>
      <view class="input-modal-content">
        <view class="input-wrapper">
          <input 
            class="item-input" 
            placeholder="请输入检查项目内容"
            placeholder-class="input-placeholder"
            value="{{newItemName}}"
            bindinput="onItemNameInput"
            maxlength="100"
            focus="{{showAddItemModal}}"
          />
        </view>
        <view class="input-counter">
          <text class="counter-text">{{newItemName.length}}/100</text>
        </view>
      </view>
      <view class="input-modal-footer">
        <view class="input-cancel-btn" bindtap="hideAddItemModal">取消</view>
        <view class="input-confirm-btn" bindtap="addItem">确认</view>
      </view>
    </view>
  </view>
</view>