/* 高端优雅的检查单创建界面样式 */

/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafe 0%, #f1f8ff 100%);
  padding: 0;
}

/* ========== 页面头部状态区域 ========== */
.header-section {
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafe 100%);
}

.status-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(59, 130, 246, 0.08),
    0 4rpx 16rpx rgba(59, 130, 246, 0.04),
    0 0 0 1rpx rgba(59, 130, 246, 0.06);
  position: relative;
  overflow: hidden;
}

.status-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #3b82f6 0%, #1d4ed8 100%);
}

.status-content {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

/* 进度环形图 */
.completion-ring {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ring-bg, .ring-progress {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 8rpx solid;
}

.ring-bg {
  border-color: #e5f3ff;
}

.ring-progress {
  border-color: #3b82f6;
  border-top-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  transform: rotate(-90deg);
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.completion-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e40af;
  z-index: 1;
}

/* 状态信息 */
.status-right {
  flex: 1;
}

.status-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.status-subtitle {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.status-numbers {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.number-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.number {
  font-size: 40rpx;
  font-weight: 800;
  color: #3b82f6;
  line-height: 1;
  margin-bottom: 8rpx;
}

.label {
  font-size: 20rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.divider {
  width: 2rpx;
  height: 40rpx;
  background: linear-gradient(to bottom, transparent, #cbd5e1, transparent);
}

/* ========== 弹窗样式 ========== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(8rpx);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  animation: fadeIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.create-modal {
  width: 100%;
  max-width: 680rpx;
  max-height: 90vh;
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 
    0 24rpx 64rpx rgba(15, 23, 42, 0.15),
    0 8rpx 32rpx rgba(15, 23, 42, 0.1);
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 1rpx solid #e2e8f0;
}

.modal-title-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.modal-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.icon-checklist {
  width: 32rpx;
  height: 32rpx;
  background: #ffffff;
  border-radius: 4rpx;
  position: relative;
}

.icon-checklist::before {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 8rpx;
  width: 4rpx;
  height: 8rpx;
  border: 2rpx solid #3b82f6;
  border-top: none;
  border-left: none;
  transform: rotate(45deg);
}

.modal-title-content {
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  line-height: 1.2;
}

.modal-subtitle {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
  margin-top: 4rpx;
  letter-spacing: 0.5rpx;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: rgba(148, 163, 184, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: rgba(148, 163, 184, 0.2);
  transform: scale(0.95);
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.close-icon::before,
.close-icon::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 16rpx;
  height: 2rpx;
  background: #64748b;
  border-radius: 1rpx;
}

.close-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.close-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

/* 弹窗内容区域 */
.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 0 40rpx;
}

/* 表单区域 */
.form-section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-top: 32rpx;
}

.section-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.basic-info-icon {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
}

.basic-info-icon::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  background: #ffffff;
  border-radius: 50%;
  position: relative;
}

.basic-info-icon::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 12rpx;
  background: #06b6d4;
  border-radius: 1rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.items-icon {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.items-icon::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #ffffff;
  border-radius: 4rpx;
  background: transparent;
}

.section-title {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-main {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  line-height: 1.2;
}

.title-sub {
  font-size: 20rpx;
  color: #64748b;
  font-weight: 500;
  margin-top: 4rpx;
  letter-spacing: 0.5rpx;
}

.items-count {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.count-number {
  font-size: 24rpx;
  font-weight: 700;
  color: #7c3aed;
}

.count-label {
  font-size: 20rpx;
  color: #7c3aed;
  font-weight: 500;
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
}

.label-required {
  font-size: 26rpx;
  color: #ef4444;
  font-weight: 700;
}

.input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1e293b;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-input:focus {
  border-color: #3b82f6;
  background: #fefefe;
}

.input-border {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 1rpx;
  transform: scaleX(0);
  transition: transform 0.2s ease;
}

.form-input:focus + .input-border {
  transform: scaleX(1);
}

.input-placeholder {
  color: #9ca3af;
  font-size: 26rpx;
}

.input-counter {
  text-align: right;
  margin-top: 8rpx;
}

.counter-text {
  font-size: 20rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* 项目列表 */
.items-list {
  margin-bottom: 24rpx;
}

.item-card {
  background: #ffffff;
  border: 1rpx solid #f1f5f9;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  transition: all 0.2s ease;
}

.item-card:hover {
  border-color: #e2e8f0;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.1);
}

.item-content {
  display: flex;
  align-items: center;
  padding: 20rpx;
  gap: 16rpx;
}

.item-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: #64748b;
  flex-shrink: 0;
}

.item-text {
  flex: 1;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.4;
}

.item-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.edit-btn {
  background: rgba(59, 130, 246, 0.1);
}

.edit-btn:active {
  background: rgba(59, 130, 246, 0.2);
  transform: scale(0.95);
}

.delete-btn {
  background: rgba(239, 68, 68, 0.1);
}

.delete-btn:active {
  background: rgba(239, 68, 68, 0.2);
  transform: scale(0.95);
}

.edit-icon,
.delete-icon {
  width: 20rpx;
  height: 20rpx;
  position: relative;
}

.edit-icon::before {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border: 1.5rpx solid #3b82f6;
  border-radius: 2rpx;
  top: 2rpx;
  right: 2rpx;
}

.edit-icon::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 1.5rpx;
  background: #3b82f6;
  bottom: 3rpx;
  left: 3rpx;
  transform: rotate(-45deg);
}

.delete-icon::before,
.delete-icon::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 12rpx;
  height: 2rpx;
  background: #ef4444;
  border-radius: 1rpx;
}

.delete-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.delete-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 24rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 2rpx dashed #cbd5e1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.empty-icon::before {
  content: '';
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #cbd5e1;
  border-radius: 8rpx;
  background: transparent;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.empty-subtitle {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
}

/* 添加项目按钮 */
.add-item-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  border: 2rpx dashed #cbd5e1;
  border-radius: 16rpx;
  background: #ffffff;
  transition: all 0.2s ease;
}

.add-item-btn:active {
  border-color: #3b82f6;
  background: #f8faff;
  transform: scale(0.98);
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  position: relative;
}

.add-icon::before,
.add-icon::after {
  content: '';
  position: absolute;
  background: #ffffff;
  border-radius: 1rpx;
}

.add-icon::before {
  width: 16rpx;
  height: 2rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.add-icon::after {
  width: 2rpx;
  height: 16rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.add-text {
  font-size: 26rpx;
  color: #3b82f6;
  font-weight: 600;
}

/* 弹窗底部 */
.modal-footer {
  padding: 32rpx 40rpx 40rpx;
  background: #ffffff;
  border-top: 1rpx solid #f1f5f9;
}

.footer-actions {
  display: flex;
  gap: 16rpx;
}

.cancel-btn,
.create-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.2s ease;
}

.cancel-btn {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
}

.cancel-btn .btn-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 600;
}

.cancel-btn:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.create-btn {
  background: #ffffff;
  border: 2rpx solid transparent;
  overflow: hidden;
}

.btn-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
}

.create-btn .btn-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 700;
  position: relative;
  z-index: 1;
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  position: relative;
  z-index: 1;
}

.btn-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  width: 12rpx;
  height: 2rpx;
  background: #ffffff;
  transform: translateY(-50%);
}

.btn-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  width: 8rpx;
  height: 8rpx;
  border: 2rpx solid #ffffff;
  border-left: none;
  border-bottom: none;
  transform: translateY(-50%) rotate(45deg);
}

.create-btn:active {
  transform: scale(0.98);
}

/* ========== 添加项目弹窗 ========== */
.input-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(8rpx);
  z-index: 1100;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  animation: fadeIn 0.3s ease;
}

.input-modal {
  width: 100%;
  max-width: 560rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 24rpx 64rpx rgba(15, 23, 42, 0.15),
    0 8rpx 32rpx rgba(15, 23, 42, 0.1);
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.input-modal-header {
  padding: 32rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 1rpx solid #e2e8f0;
}

.input-modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  text-align: center;
}

.input-modal-content {
  padding: 32rpx;
}

.input-modal-content .input-wrapper {
  margin-bottom: 16rpx;
}

.item-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1e293b;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.item-input:focus {
  border-color: #3b82f6;
  background: #fefefe;
}

.input-modal-footer {
  display: flex;
  padding: 24rpx 32rpx 32rpx;
  gap: 16rpx;
}

.input-cancel-btn,
.input-confirm-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.input-cancel-btn {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.input-cancel-btn:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.input-confirm-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.input-confirm-btn:active {
  transform: scale(0.98);
}

/* ========== 动画效果 ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* ========== 响应式优化 ========== */
@media (max-width: 400px) {
  .status-card {
    padding: 32rpx;
  }
  
  .status-content {
    gap: 24rpx;
  }
  
  .completion-ring {
    width: 100rpx;
    height: 100rpx;
  }
  
  .status-title {
    font-size: 32rpx;
  }
  
  .modal-header {
    padding: 32rpx 32rpx 24rpx;
  }
  
  .modal-content {
    padding: 0 32rpx;
  }
  
  .modal-footer {
    padding: 24rpx 32rpx 32rpx;
  }
}