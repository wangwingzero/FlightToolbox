/* 绕机检查入口页面 - 优化版 */

/* 页面容器 - 深色渐变背景 */
.page {
  background: linear-gradient(135deg, #0a1929 0%, #0d1f33 50%, #0a1929 100%),
              radial-gradient(circle at 30% 20%, rgba(33, 150, 243, 0.05) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(102, 187, 255, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  color: #f5f7fa;
  animation: pageFadeIn 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  flex-direction: column;
}

@keyframes pageFadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

/* 页面顶部引导标题 */
.page-guide-title {
  text-align: center;
  padding: 32rpx 24rpx 24rpx;
  background: linear-gradient(180deg, rgba(11, 26, 39, 0.95) 0%, rgba(15, 33, 55, 0.9) 100%);
  border-bottom: 1rpx solid rgba(33, 150, 243, 0.15);
}

.page-guide-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.page-guide-tip {
  font-size: 24rpx;
  color: rgba(100, 181, 246, 0.85);
  margin-left: 12rpx;
  letter-spacing: 0.5rpx;
}

/* 搜索栏 - 现代化设计 */
.search-container {
  padding: 20rpx 24rpx;
  background: linear-gradient(180deg, rgba(11, 26, 39, 0.98) 0%, rgba(15, 33, 55, 0.95) 100%);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(33, 150, 243, 0.15);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.2);
  flex-shrink: 0;
}

.search-wrapper {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(20, 45, 75, 0.6) 0%, rgba(16, 36, 64, 0.6) 100%);
  border: 1rpx solid rgba(33, 150, 243, 0.25);
  border-radius: 48rpx;
  padding: 0 24rpx;
  height: 72rpx;
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.08);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.search-wrapper:active {
  transform: scale(0.99);
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.08);
}

.search-icon {
  font-size: 36rpx;
  color: rgba(33, 150, 243, 0.8);
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  color: #ffffff;
  background: transparent;
  border: none;
  outline: none;
}

.search-placeholder {
  color: rgba(245, 247, 250, 0.4);
  font-size: 26rpx;
}

.search-clear {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(33, 150, 243, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  animation: fadeInScale 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.search-clear:active {
  transform: scale(0.9);
  background: rgba(33, 150, 243, 0.25);
}

.clear-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

@keyframes fadeInScale {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 搜索结果 */
.search-results {
  padding: 24rpx;
  max-height: calc(100vh - 120rpx);
  overflow-y: auto;
  flex: 1;
}

.search-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, rgba(16, 36, 64, 0.85) 0%, rgba(20, 45, 75, 0.7) 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(33, 150, 243, 0.2);
  box-shadow:
    0 4rpx 20rpx rgba(0, 0, 0, 0.25),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.08);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.search-item:active {
  transform: scale(0.98);
  box-shadow:
    0 2rpx 12rpx rgba(0, 0, 0, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.08);
  background: linear-gradient(135deg, rgba(20, 45, 75, 0.9) 0%, rgba(24, 52, 85, 0.8) 100%);
}

.search-item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.search-area-badge {
  display: inline-block;
  font-size: 22rpx;
  color: #ffffff;
  background: linear-gradient(135deg, rgba(33, 150, 243, 0.9) 0%, rgba(25, 118, 210, 0.9) 100%);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  width: fit-content;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.3);
}

.search-component-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 0.5rpx;
}

.search-component-name-en {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.65);
  letter-spacing: 0.3rpx;
}

.search-item-right {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.search-area-name {
  font-size: 26rpx;
  color: rgba(33, 150, 243, 0.95);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 无搜索结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.no-results-icon {
  font-size: 120rpx;
  color: rgba(33, 150, 243, 0.3);
  margin-bottom: 32rpx;
}

.no-results-text {
  font-size: 30rpx;
  color: rgba(245, 247, 250, 0.7);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.no-results-tip {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.4);
}

/* 内容容器 */
.content-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

/* Canvas容器 - 卡片效果 */
.canvas-scroll-container {
  flex: 1;
  width: 100%;
  overflow-y: auto;
}

.canvas-container {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: canvasFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.2s both;
  position: relative;
  z-index: 1;
}

@keyframes canvasFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.canvas-tip {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.5);
  margin-bottom: 24rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
  font-weight: 400;
}

.canvas {
  display: block;
  border-radius: 24rpx;
  background: rgba(17, 34, 51, 0.95);
  box-shadow:
    0 12rpx 48rpx rgba(0, 0, 0, 0.4),
    0 0 0 1rpx rgba(255, 255, 255, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
    0 0 32rpx rgba(33, 150, 243, 0.1);
  border: 2rpx solid rgba(33, 150, 243, 0.2);
  max-width: 100%;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.canvas:active {
  transform: scale(0.995);
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.35),
    0 0 0 1rpx rgba(255, 255, 255, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
    0 0 24rpx rgba(33, 150, 243, 0.15);
}

/* 横向滚动区域列表 */
.areas-scroll-container {
  flex-shrink: 0;
  background: linear-gradient(180deg, rgba(11, 26, 39, 0.95) 0%, rgba(15, 33, 55, 0.98) 100%);
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.3);
  padding: 24rpx 0;
  position: relative;
  z-index: 1;
}

.areas-scroll {
  white-space: nowrap;
  padding: 0 24rpx;
}

.area-card {
  display: inline-block;
  width: 280rpx;
  background: linear-gradient(135deg, rgba(16, 36, 64, 0.9) 0%, rgba(20, 45, 75, 0.85) 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-right: 20rpx;
  border: 1rpx solid rgba(33, 150, 243, 0.2);
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.25),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.08);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  vertical-align: top;
}

.area-card:active {
  transform: scale(0.96);
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.08);
  background: linear-gradient(135deg, rgba(20, 45, 75, 0.95) 0%, rgba(24, 52, 85, 0.9) 100%);
}

.area-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.area-number {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(33, 150, 243, 0.25) 0%, rgba(25, 118, 210, 0.2) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(33, 150, 243, 1);
  box-shadow:
    0 2rpx 8rpx rgba(33, 150, 243, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(33, 150, 243, 0.3);
}

.area-category {
  font-size: 20rpx;
  color: rgba(245, 247, 250, 0.5);
  background: rgba(33, 150, 243, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  letter-spacing: 0.5rpx;
}

.area-card-body {
  margin-bottom: 16rpx;
  white-space: normal;
}

.area-name-zh {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.area-name-en {
  display: block;
  font-size: 22rpx;
  color: rgba(245, 247, 250, 0.6);
  line-height: 1.4;
  letter-spacing: 0.3rpx;
}

.area-card-footer {
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.area-components-count {
  font-size: 22rpx;
  color: rgba(33, 150, 243, 0.8);
  letter-spacing: 0.3rpx;
}

/* 弹窗样式 */
.popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #0f2137 0%, #162d47 100%);
  animation: popupSlideUp 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

/* 自定义关闭按钮 */
.popup-close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
}

.popup-close-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.15);
}

.popup-close-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

@keyframes popupSlideUp {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.popup-header {
  padding: 56rpx 32rpx 24rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
  background: linear-gradient(135deg, rgba(15, 33, 55, 0.95) 0%, rgba(22, 45, 71, 0.9) 100%);
}

.popup-title-group {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.popup-seq {
  font-size: 24rpx;
  color: rgba(33, 150, 243, 0.95);
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 0.5rpx;
}

.popup-subtitle {
  font-size: 26rpx;
  color: rgba(245, 247, 250, 0.65);
  letter-spacing: 0.3rpx;
}

.popup-meta {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.55);
  letter-spacing: 0.3rpx;
}

.popup-content {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow-y: auto;
}

/* 区块标题 */
.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(33, 150, 243, 0.2);
}

.section-icon {
  font-size: 32rpx;
  color: rgba(33, 150, 243, 0.9);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(33, 150, 243, 0.95);
  letter-spacing: 0.5rpx;
}

/* 区域部件模块 */
.components-section {
  margin-bottom: 24rpx;
}

.components-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.component-card {
  background: linear-gradient(135deg, rgba(16, 36, 64, 0.6) 0%, rgba(20, 45, 75, 0.5) 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(33, 150, 243, 0.15);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.component-card:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(20, 45, 75, 0.7) 0%, rgba(24, 52, 85, 0.6) 100%);
}

.component-card-header {
  display: flex;
  justify-content: flex-start;
}

.component-category-badge {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(33, 150, 243, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  letter-spacing: 0.3rpx;
}

.component-card-body {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.component-card-name-zh {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 0.3rpx;
  line-height: 1.4;
}

.component-card-name-en {
  font-size: 22rpx;
  color: rgba(245, 247, 250, 0.6);
  letter-spacing: 0.2rpx;
  line-height: 1.3;
}

.component-card-footer {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.function-icon {
  font-size: 24rpx;
  color: rgba(33, 150, 243, 0.7);
  flex-shrink: 0;
  margin-top: 2rpx;
}

.component-function {
  font-size: 22rpx;
  color: rgba(245, 247, 250, 0.65);
  line-height: 1.5;
  letter-spacing: 0.2rpx;
}

/* 检查要求模块 */
.checks-section {
  margin-bottom: 48rpx;
}

/* 检查项样式 */
.check-item {
  background: linear-gradient(135deg, rgba(16, 36, 64, 0.7) 0%, rgba(20, 45, 75, 0.6) 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.06);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.check-item:active {
  transform: scale(0.99);
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.25),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.06);
}

.check-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.check-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(33, 150, 243, 0.25) 0%, rgba(25, 118, 210, 0.2) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(33, 150, 243, 1);
  flex-shrink: 0;
  box-shadow:
    0 2rpx 12rpx rgba(33, 150, 243, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(33, 150, 243, 0.3);
}

.check-component {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.component-name-zh {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 0.5rpx;
}

.component-name-en {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.6);
  letter-spacing: 0.3rpx;
}

/* 部件缩略图 */
.component-thumbnail {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(33, 150, 243, 0.3);
  flex-shrink: 0;
  object-fit: cover;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.25);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.component-thumbnail:active {
  transform: scale(1.05);
  border-color: rgba(33, 150, 243, 0.6);
  box-shadow: 0 6rpx 24rpx rgba(33, 150, 243, 0.3);
}

.check-requirement {
  background: rgba(11, 26, 39, 0.7);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
}

.requirement-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.requirement-row.en {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.requirement-label {
  font-size: 26rpx;
  color: rgba(33, 150, 243, 0.95);
  font-weight: 600;
  flex-shrink: 0;
  letter-spacing: 0.5rpx;
}

.requirement-value {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.7;
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

.requirement-value-en {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.7);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
}

/* 部件作用样式 */
.check-function {
  background: rgba(11, 26, 39, 0.5);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-top: 16rpx;
  border-left: 4rpx solid rgba(33, 150, 243, 0.6);
}

.function-label {
  font-size: 24rpx;
  color: rgba(100, 181, 246, 0.9);
  font-weight: 600;
  margin-right: 8rpx;
  letter-spacing: 0.5rpx;
}

.function-value {
  font-size: 26rpx;
  color: rgba(245, 247, 250, 0.85);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
}

.popup-footer-space {
  height: 60rpx;
}

/* 横幅广告容器 */
.ad-banner-container {
  width: 100%;
  padding: 20rpx 0;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

