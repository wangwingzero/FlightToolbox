.page {
  background: #0b1a27;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  color: #f5f7fa;
}

.canvas-container {
  display: flex;
  justify-content: center;
  padding: 12rpx 0 24rpx;
  width: 100%;
}

.canvas {
  display: block;
  border-radius: 16rpx;
  background: rgba(17, 34, 51, 0.9);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  max-width: 100%;
}

/* 当前选中区域提示 */
.current-area-hint {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(33, 150, 243, 0.12);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin: 16rpx 0;
  border-left: 6rpx solid rgba(33, 150, 243, 0.8);
}

.hint-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #f5f7fa;
}

/* 弹窗样式 */
.popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #0f2137;
}

.popup-header {
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.08);
  flex-shrink: 0;
}

.popup-title-group {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.popup-seq {
  font-size: 24rpx;
  color: rgba(33, 150, 243, 0.9);
  font-weight: 500;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.popup-subtitle {
  font-size: 26rpx;
  color: rgba(245, 247, 250, 0.6);
}

.popup-meta {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.5);
}

.popup-content {
  flex: 1;
  padding: 20rpx 32rpx;
}

/* 检查项样式 */
.check-item {
  background: rgba(16, 36, 64, 0.6);
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
}

.check-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.check-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(33, 150, 243, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(33, 150, 243, 1);
  flex-shrink: 0;
}

.check-component {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.component-name-zh {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
}

.component-name-en {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.55);
}

.check-requirement {
  background: rgba(11, 26, 39, 0.6);
  border-radius: 12rpx;
  padding: 20rpx;
}

.requirement-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.requirement-row.en {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
}

.requirement-label {
  font-size: 26rpx;
  color: rgba(33, 150, 243, 0.9);
  font-weight: 500;
  flex-shrink: 0;
}

.requirement-value {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.6;
  font-weight: 500;
}

.requirement-value-en {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.65);
  line-height: 1.5;
}

.popup-footer-space {
  height: 40rpx;
}

