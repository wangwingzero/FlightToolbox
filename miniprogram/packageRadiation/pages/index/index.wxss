/* 辐射计算页面样式 - 现代化设计 */

.radiation-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4f8 0%, #e9ecef 100%);
  padding-bottom: 40rpx;
}

/* Tab内容 */
.tab-content {
  padding: 20rpx;
}

/* 卡片样式 - 现代化设计 */
.section-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.section-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #667eea;
  letter-spacing: 0.5rpx;
}

/* 快捷机场输入 */
.field-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #64748b;
}

.airport-suggestion-list {
  margin-top: 20rpx;
  border-top: 1rpx solid #e2e8f0;
}

.airport-suggestion-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.airport-suggestion-item:last-child {
  border-bottom: none;
}

.airport-suggestion-item:active {
  background: rgba(99, 102, 241, 0.08);
}

.suggestion-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.suggestion-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.suggestion-code {
  font-size: 24rpx;
  color: #6366f1;
  margin-left: 12rpx;
}

.suggestion-location {
  font-size: 24rpx;
  color: #64748b;
}

.airport-info.quick {
  margin-top: 16rpx;
}

/* 输入组 */
.input-group {
  margin-bottom: 24rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
  margin-bottom: 12rpx;
}

.altitude-tips {
  margin-left: 12rpx;
}

/* 机场选择器 */
.airport-selector {
  background: rgba(248, 250, 252, 0.8);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.airport-selector:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

.selector-label {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.selector-value {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
}

.selector-icon {
  margin-left: 12rpx;
  color: #94a3b8;
}

/* 机场信息 */
.airport-info {
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
}

.airport-info-compact {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #64748b;
  text-align: center;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.info-label {
  color: #64748b;
}

.info-value {
  color: #1e293b;
  font-weight: 600;
}

/* 日期选择器 */
.date-selector {
  background: rgba(248, 250, 252, 0.8);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1e293b;
  transition: all 0.3s;
}

.date-selector:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

/* 操作按钮 */
.action-section {
  margin: 30rpx 0;
}

/* 结果卡片 - 现代化设计 */
.result-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(16, 185, 129, 0.08) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.25);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 30rpx;
  animation: slideUp 0.5s ease;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.12);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.result-main {
  text-align: center;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.1);
}

.result-value-large {
  font-size: 80rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1.2;
}

.result-unit {
  font-size: 32rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.result-label {
  font-size: 28rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

.result-details {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  font-size: 26rpx;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  color: #64748b;
}

.detail-value {
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.detail-subsection {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(100, 116, 139, 0.25);
}

.detail-subtitle {
  display: block;
  font-size: 26rpx;
  color: #475569;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.comparison-item {
  display: flex;
  flex-direction: column;
  padding: 12rpx 0;
  border-bottom: 1rpx dashed rgba(148, 163, 184, 0.4);
}

.comparison-item:last-child {
  border-bottom: none;
}

.comparison-label {
  font-size: 26rpx;
  color: #1f2937;
}

.comparison-value {
  font-size: 24rpx;
  color: #475569;
  margin-top: 4rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.comparison-subvalue {
  color: #64748b;
}

.detail-note-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #475569;
  line-height: 1.5;
}

/* 职业剂量限制警告样式 - 醒目设计 */
.dose-limit-warning {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  border: 3rpx solid #ffc107;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.25);
  animation: pulseWarning 2s ease-in-out infinite;
}

@keyframes pulseWarning {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.25);
  }
  50% {
    box-shadow: 0 6rpx 20rpx rgba(255, 193, 7, 0.4);
  }
}

.warning-icon {
  font-size: 48rpx;
  line-height: 1;
  flex-shrink: 0;
  animation: shake 3s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% {
    transform: rotate(0deg);
  }
  10%, 30% {
    transform: rotate(-5deg);
  }
  20%, 40% {
    transform: rotate(5deg);
  }
  50%, 90% {
    transform: rotate(0deg);
  }
}

.warning-content {
  flex: 1;
}

.warning-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #d97706;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.6;
  font-weight: 500;
}

/* 免责声明 - 现代化设计 */
.disclaimer-card {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border: 2rpx solid #ffb74d;
  border-radius: 20rpx;
  padding: 28rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.15);
}

.disclaimer-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #e65100;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.disclaimer-content {
  font-size: 26rpx;
  color: #e65100;
  line-height: 1.7;
  font-weight: 500;
}

/* 极地航线开关样式 */
.polar-route-section {
  padding: 0;
}

.polar-switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 12rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.polar-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a202c;
}

/* 机场选择弹窗 */
.airport-picker {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: white;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.airport-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.airport-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.airport-item:active {
  background: rgba(102, 126, 234, 0.05);
  transform: scale(0.98);
}

.airport-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.airport-code {
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 8rpx;
}

.airport-location {
  font-size: 24rpx;
  color: #94a3b8;
}

