/* 辐射计算页面样式 */

.radiation-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  text-align: center;
  padding: 40rpx 30rpx;
  color: white;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* Tab内容 */
.tab-content {
  padding: 20rpx;
}

/* 卡片样式 */
.section-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid #667eea;
}

/* 输入模式切换 */
.input-mode-tabs {
  display: flex;
  gap: 16rpx;
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #667eea;
  transition: all 0.3s;
}

.mode-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 输入组 */
.input-group {
  margin-bottom: 24rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
  margin-bottom: 12rpx;
}

.altitude-tips {
  margin-left: 12rpx;
}

/* 机场选择器 */
.airport-selector {
  background: rgba(248, 250, 252, 0.8);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.airport-selector:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

.selector-label {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.selector-value {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
}

.selector-icon {
  margin-left: 12rpx;
  color: #94a3b8;
}

/* 机场信息 */
.airport-info {
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
}

.airport-info-compact {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #64748b;
  text-align: center;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.info-label {
  color: #64748b;
}

.info-value {
  color: #1e293b;
  font-weight: 600;
}

/* 日期选择器 */
.date-selector {
  background: rgba(248, 250, 252, 0.8);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1e293b;
  transition: all 0.3s;
}

.date-selector:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

/* 操作按钮 */
.action-section {
  margin: 30rpx 0;
}

/* 结果卡片 */
.result-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(16, 185, 129, 0.05) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  animation: slideUp 0.5s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.result-main {
  text-align: center;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.1);
}

.result-value-large {
  font-size: 80rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1.2;
}

.result-unit {
  font-size: 32rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.result-label {
  font-size: 28rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

.result-details {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  font-size: 26rpx;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  color: #64748b;
}

.detail-value {
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.detail-subsection {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(100, 116, 139, 0.25);
}

.detail-subtitle {
  display: block;
  font-size: 26rpx;
  color: #475569;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.comparison-item {
  display: flex;
  flex-direction: column;
  padding: 12rpx 0;
  border-bottom: 1rpx dashed rgba(148, 163, 184, 0.4);
}

.comparison-item:last-child {
  border-bottom: none;
}

.comparison-label {
  font-size: 26rpx;
  color: #1f2937;
}

.comparison-value {
  font-size: 24rpx;
  color: #475569;
  margin-top: 4rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.comparison-subvalue {
  color: #64748b;
}

.detail-note-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #475569;
  line-height: 1.5;
}

/* 免责声明 */
.disclaimer-card {
  background: rgba(245, 158, 11, 0.1);
  border: 2rpx solid rgba(245, 158, 11, 0.3);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #d97706;
  margin-bottom: 12rpx;
}

.disclaimer-content {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 机场选择弹窗 */
.airport-picker {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: white;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.airport-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.airport-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.airport-item:active {
  background: rgba(102, 126, 234, 0.05);
  transform: scale(0.98);
}

.airport-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.airport-code {
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 8rpx;
}

.airport-location {
  font-size: 24rpx;
  color: #94a3b8;
}

/* Vant组件样式覆盖 */
.van-tabs {
  background: transparent !important;
}

.van-field {
  background: rgba(248, 250, 252, 0.8) !important;
  border-radius: 12rpx !important;
  border: 2rpx solid rgba(102, 126, 234, 0.1) !important;
}

.van-button--primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  border-radius: 16rpx !important;
  font-size: 32rpx !important;
  font-weight: bold !important;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3) !important;
}
