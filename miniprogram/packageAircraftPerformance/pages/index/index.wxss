/* 飞机性能页面样式 - 简洁优雅苹果风格 */

/* 页面根元素 - 渐变背景 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  background: transparent;
  padding: 0;
  position: relative;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(99, 102, 241, 0.2) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 页面头部 - Hero 区域 */
.page-hero {
  padding: 32rpx 32rpx 24rpx;
  background: transparent;
  color: #ffffff;
  position: relative;
  z-index: 1;
  animation: fadeInDown 0.6s ease-out;
}

.hero-pill {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  color: #ffffff;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.hero-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 1rpx;
}

.hero-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  opacity: 1;
  line-height: 1.5;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx 16rpx;
  position: relative;
  z-index: 1;
}

.search-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx) saturate(180%);
  border-radius: 28rpx;
  padding: 8rpx 12rpx;
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.15),
    0 4rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: slideInUp 0.6s ease-out 0.1s both;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 类型 Tabs */
.type-tabs {
  display: flex;
  padding: 16rpx 32rpx 12rpx;
  gap: 16rpx;
  position: relative;
  z-index: 1;
  animation: fadeIn 0.6s ease-out 0.2s both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.type-tab {
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.type-tab.active {
  color: #667eea;
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(255, 255, 255, 0.8);
  transform: translateY(-2rpx);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  font-weight: 600;
}

.type-tab:active {
  transform: scale(0.95);
}

/* 标签区域 */
.tag-section {
  padding: 12rpx 0 16rpx;
  position: relative;
  z-index: 1;
  animation: fadeIn 0.6s ease-out 0.3s both;
}

.tag-scroll {
  white-space: nowrap;
}

.tag-wrapper {
  display: flex;
  padding: 0 32rpx 8rpx;
  gap: 12rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  font-weight: 500;
}

.tag-item.active {
  color: #667eea;
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(255, 255, 255, 0.8);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  font-weight: 600;
}

.tag-item:active {
  transform: scale(0.95);
}

/* 列表区域 */
.list-section {
  padding: 24rpx 32rpx 40rpx;
  position: relative;
  z-index: 1;
}

.entry-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 性能条目卡片 - 优雅设计 */
.entry-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  animation: cardFadeIn 0.5s ease-out backwards;
}

.entry-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg,
    rgba(102, 126, 234, 0.02) 0%,
    rgba(118, 75, 162, 0.02) 100%);
  pointer-events: none;
}

.entry-card:active {
  transform: translateY(2rpx) scale(0.995);
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.15),
    0 1rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
}

@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片延迟动画 */
.entry-card:nth-child(1) { animation-delay: 0.1s; }
.entry-card:nth-child(2) { animation-delay: 0.15s; }
.entry-card:nth-child(3) { animation-delay: 0.2s; }
.entry-card:nth-child(4) { animation-delay: 0.25s; }
.entry-card:nth-child(5) { animation-delay: 0.3s; }

.entry-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  gap: 16rpx;
  position: relative;
  z-index: 2;
}

.entry-title {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 6rpx;
}

.title-zh {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a202c;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.title-en {
  font-size: 26rpx;
  color: #718096;
  font-style: italic;
  line-height: 1.3;
  font-weight: 500;
}

.entry-tags {
  flex-shrink: 0;
}

.entry-summary {
  font-size: 28rpx;
  color: #2d3748;
  margin: 12rpx 0 16rpx;
  line-height: 1.7;
  background: rgba(248, 250, 252, 0.6);
  padding: 20rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #667eea;
  position: relative;
  z-index: 2;
}

.entry-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #718096;
  margin-top: 12rpx;
  position: relative;
  z-index: 2;
  gap: 12rpx;
}

.chapter {
  flex: 1;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 12rpx;
  color: #667eea;
  font-weight: 500;
}

.regs {
  padding: 8rpx 16rpx;
  background: rgba(118, 75, 162, 0.08);
  border-radius: 12rpx;
  color: #764ba2;
  font-weight: 500;
  text-align: right;
}

/* 加载更多 */
.load-more {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 999rpx;
  color: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.load-more:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.load-more-text {
  font-size: 28rpx;
  font-weight: 500;
}

.loading-mask {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}
