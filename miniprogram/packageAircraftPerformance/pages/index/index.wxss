}

/* 默认主题 */
.entry-card.theme-default .card-accent {
  background: linear-gradient(90deg, #8E8E93 0%, #AEAEB2 100%);
}
.entry-card.theme-default .tag {
  background: rgba(142, 142, 147, 0.12);
  color: #8E8E93;
}

/* 广告容器 */
.ad-banner-container {
  margin: 24rpx -16rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态 */
.loading-mask {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}
