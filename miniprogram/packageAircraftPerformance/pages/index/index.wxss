/* 飞机性能页面样式 - 高级Apple风格 */

/* 页面根元素 */
page {
  background: linear-gradient(180deg, #F8F9FA 0%, #F5F5F7 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Hiragino Sans GB', sans-serif;
}

.container {
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

/* 顶部装饰背景 */
.bg-accent {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 520rpx;
  background: linear-gradient(165deg, rgba(0,122,255,0.05) 0%, rgba(88,86,214,0.05) 100%);
  border-radius: 0 0 48rpx 48rpx;
  z-index: 0;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding-bottom: 60rpx;
}

/* 页面头部 - Hero 区域 */
.page-hero {
  padding: 48rpx 40rpx 32rpx;
  color: #000000;
  margin-bottom: 16rpx;
}

.hero-pill {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, rgba(0,122,255,0.12) 0%, rgba(88,86,214,0.12) 100%);
  backdrop-filter: blur(20rpx);
  color: #007AFF;
  margin-bottom: 24rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,122,255,0.08);
}

.hero-title {
  font-size: 64rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #1D1D1F 0%, #48484A 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 16rpx;
  letter-spacing: -1.5rpx;
  line-height: 1.1;
}

.hero-subtitle {
  font-size: 30rpx;
  color: #636366;
  line-height: 1.6;
  max-width: 95%;
  font-weight: 500;
}

/* 搜索区域 */
.search-section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.custom-search {
  padding: 0 !important;
  background: transparent !important;
}

.van-search__content {
  background: rgba(255, 255, 255, 0.98) !important;
  border-radius: 28rpx !important;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  padding: 16rpx 28rpx !important;
  border: 1rpx solid rgba(0, 122, 255, 0.08);
  backdrop-filter: blur(20rpx);
}

/* 列表区域 */
.list-section {
  padding: 0 32rpx;
}

.entry-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 卡片样式 - 基础 */
.entry-card {
  position: relative;
  background: #ffffff;
  border-radius: 36rpx;
  padding: 36rpx;
  overflow: hidden;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.02),
    0 16rpx 40rpx rgba(0, 0, 0, 0.08);
}

.entry-card:active {
  transform: scale(0.97) translateY(2rpx);
  box-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.02),
    0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 卡片顶部装饰条 */
.card-accent {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  border-radius: 36rpx 36rpx 0 0;
}

.card-main {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.entry-image {
  width: 100%;
  height: 320rpx;
  border-radius: 24rpx;
  background: #f5f5f7;
  object-fit: cover;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease;
}

.entry-card:active .entry-image {
  transform: scale(0.98);
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 标签 */
.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 4rpx;
}

.tag {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  letter-spacing: 0.5rpx;
}

.entry-title {
  font-size: 38rpx;
  font-weight: 800;
  color: #1d1d1f;
  line-height: 1.25;
  letter-spacing: -0.5rpx;
}

.title-zh {
  display: block;
}

.entry-summary {
  font-size: 28rpx;
  color: #636366;
  line-height: 1.7;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

/* 主题色样式 - 蓝色（基础概念）*/
.entry-card.theme-blue .card-accent {
  background: linear-gradient(90deg, #007AFF 0%, #5AC8FA 100%);
}
.entry-card.theme-blue .tag {
  background: rgba(0, 122, 255, 0.12);
  color: #007AFF;
}
.entry-card.theme-blue .entry-image {
  border: 2rpx solid rgba(0, 122, 255, 0.08);
}

