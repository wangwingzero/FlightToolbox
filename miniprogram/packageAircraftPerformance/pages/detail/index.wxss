/* 飞机性能详情页样式 - 高级Apple风格 */

/* 页面根元素 */
page {
  background: #F5F5F7;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Hiragino Sans GB', sans-serif;
}

.container {
  min-height: 100vh;
  position: relative;
  padding: 0;
  overflow-x: hidden;
}

/* 顶部装饰背景 - 默认 */
.bg-accent {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 480rpx;
  background: linear-gradient(165deg, rgba(142, 142, 147, 0.15) 0%, rgba(174, 174, 178, 0.1) 100%);
  border-bottom-left-radius: 56rpx;
  border-bottom-right-radius: 56rpx;
  z-index: 0;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding-bottom: 60rpx;
}

/* 空状态 */
.empty {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #86868b;
  font-size: 32rpx;
}

/* 页面头部 */
.page-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.header-tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.header-tags .tag {
  font-size: 26rpx;
  font-weight: 700;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  letter-spacing: 0.5rpx;
}

.title-zh {
  font-size: 56rpx;
  font-weight: 900;
  color: #1D1D1F;
  line-height: 1.2;
  margin-bottom: 16rpx;
  letter-spacing: -1rpx;
}

.header-summary {
  font-size: 28rpx;
  color: #636366;
  line-height: 1.6;
  font-weight: 500;
  margin-top: 16rpx;
  padding: 0 20rpx;
}

/* 内容卡片 */
.content-card {
  margin: 0 32rpx 60rpx;
  background: #ffffff;
  border-radius: 40rpx;
  padding: 48rpx 40rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.03),
    0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

/* 章节区域 */
.section {
  margin-bottom: 56rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1d1d1f;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid;
  letter-spacing: -0.5rpx;
  display: inline-block;
  position: relative;
}

.section-content {
  font-size: 30rpx;
  color: #48484a;
  line-height: 1.9;
  font-weight: 500;
}

/* 内容行样式 */
.content-line-wrapper {
  margin-bottom: 16rpx;
}

.content-line--heading {
  font-weight: 700;
  color: #1d1d1f;
  margin-top: 24rpx;
  margin-bottom: 8rpx;
}

.content-line--body {
  text-align: justify;
}

/* 公式样式 */
.formula-item {
  margin-bottom: 36rpx;
  padding: 40rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F7 100%);
  border: 2rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.formula-item:last-child {
  margin-bottom: 0;
}

.formula-item mp-html {
  display: block;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
}

.formula-explain {
  margin-top: 28rpx;
  padding-top: 28rpx;
  border-top: 2rpx solid rgba(0,0,0,0.06);
  font-size: 28rpx;
  color: #636366;
}

.formula-line {
  margin-bottom: 12rpx;
  line-height: 1.7;
  font-weight: 500;
}

/* 图片样式 */
.figure-item {
  margin-bottom: 36rpx;
}

.figure-item:last-child {
  margin-bottom: 0;
}

.figure-item image {
  width: 100%;
  border-radius: 24rpx;
  display: block;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  background: #f5f5f7;
  border: 2rpx solid rgba(0, 0, 0, 0.03);
}

.figure-caption {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 20rpx;
  text-align: center;
  font-weight: 600;
  line-height: 1.5;
}

/* ========== 主题色样式 ========== */

/* 蓝色主题（基础概念）*/
.container.theme-blue .bg-accent {
  background: linear-gradient(165deg, rgba(0, 122, 255, 0.15) 0%, rgba(90, 200, 250, 0.1) 100%);
}
.container.theme-blue .header-tags .tag {
  background: rgba(0, 122, 255, 0.15);
  color: #007AFF;
}
.container.theme-blue .section-title {
  border-bottom-color: #007AFF;
  color: #007AFF;
}

