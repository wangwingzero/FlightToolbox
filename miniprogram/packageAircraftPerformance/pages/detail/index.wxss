/* 飞机性能详情页样式 - 简洁优雅苹果风格 */

/* 页面根元素 - 统一紫色背景 */
page {
  background: #667eea;
  min-height: 100vh;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  padding: 0;
  background: transparent;
  position: relative;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  pointer-events: none;
  z-index: 0;
}

/* 空状态 */
.empty {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 32rpx;
  font-weight: 500;
}

/* 页面头部卡片 */
.page-header {
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 1;
  animation: slideInDown 0.6s ease-out;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 徽章行 */
.badge-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.badge-type {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 0.3rpx;
  background: linear-gradient(135deg, #e5f2ff 0%, #d4e9ff 100%);
  color: #007aff;
  border: 1rpx solid rgba(0, 122, 255, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.1);
}

.badge-type--success {
  background: linear-gradient(135deg, #e7f5ec 0%, #d6f0e0 100%);
  color: #34c759;
  border-color: rgba(52, 199, 89, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.1);
}

.badge-type--warning {
  background: linear-gradient(135deg, #fff4e5 0%, #ffe8cc 100%);
  color: #ff9f0a;
  border-color: rgba(255, 159, 10, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 10, 0.1);
}

.badge-chapter {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.08);
  font-weight: 600;
}

/* 标题 */
.page-header .title-zh {
  font-size: 38rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
  line-height: 1.3;
  letter-spacing: 0.5rpx;
  text-align: center;
}

.page-header .title-en {
  font-size: 28rpx;
  color: #718096;
  font-style: italic;
  margin-bottom: 16rpx;
  line-height: 1.4;
  font-weight: 500;
}

/* 元信息 */
.page-header .meta {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #718096;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.page-header .meta .chapter {
  padding: 6rpx 14rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 12rpx;
  color: #667eea;
  font-weight: 500;
}

.page-header .meta .regs {
  padding: 6rpx 14rpx;
  background: rgba(118, 75, 162, 0.08);
  border-radius: 12rpx;
  color: #764ba2;
  font-weight: 500;
}

/* 内容卡片 */
.content-card {
  margin: 0 32rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 1;
  animation: slideInUp 0.6s ease-out 0.15s both;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 章节区域 */
.content-card .section {
  margin-bottom: 36rpx;
  position: relative;
}

.content-card .section:last-child {
  margin-bottom: 0;
}

.content-card .section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.1);
  letter-spacing: 0.5rpx;
}

.content-card .section-content {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.8;
  background: rgba(248, 250, 252, 0.6);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #667eea;
}

.content-card .section-content.en {
  font-size: 26rpx;
  color: #4a5568;
  font-style: italic;
  margin-top: 16rpx;
  border-left-color: #764ba2;
  background: rgba(248, 250, 252, 0.4);
}

/* 中文说明结构化行样式 */
.content-line-wrapper {
  margin-bottom: 6rpx;
}

.content-line {
  line-height: 1.7;
}

.content-line--heading {
  font-weight: 600;
  color: #1a202c;
  margin-top: 6rpx;
  margin-bottom: 2rpx;
}

.content-line--body {
  padding-left: 20rpx;
  color: #2d3748;
}

/* 公式样式 */
.formula-item {
  margin-bottom: 28rpx;
  padding: 24rpx 24rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(248, 250, 252, 0.96);
  border: 1rpx solid rgba(129, 140, 248, 0.18);
  box-shadow:
    0 10rpx 26rpx rgba(15, 23, 42, 0.07),
    0 0 0 1rpx rgba(255, 255, 255, 0.8) inset;
}

.formula-item:last-child {
  margin-bottom: 0;
}

/* 公式主体：整体居中，稍微放大一点 */
.formula-item mp-html {
  display: block;
  text-align: center;
  font-size: 30rpx;
  white-space: normal;
  word-break: break-all;
}

.formula-item .katex,
.formula-item .katex-display {
  white-space: normal !important;
  word-break: break-all;
}

.formula-explain {
  margin-top: 14rpx;
  padding-left: 16rpx;
  border-left: 3rpx solid rgba(148, 163, 184, 0.45);
  font-size: 26rpx;
  color: #4a5568;
}

.formula-line {
  margin-bottom: 6rpx;
  line-height: 1.6;
}

.formula-line:last-child {
  margin-bottom: 0;
}

/* 图片样式 */
.figure-item {
  margin-bottom: 24rpx;
  background: rgba(248, 250, 252, 0.4);
  padding: 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.figure-item:last-child {
  margin-bottom: 0;
}

.figure-item image {
  width: 100%;
  border-radius: 12rpx;
  display: block;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.figure-caption {
  font-size: 24rpx;
  color: #718096;
  margin-top: 12rpx;
  text-align: center;
  font-weight: 500;
  line-height: 1.5;
}
