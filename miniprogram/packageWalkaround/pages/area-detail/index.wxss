.page {
  min-height: 100vh;
  background: #0b1a27;
  padding: 32rpx;
  box-sizing: border-box;
  color: #f5f7fa;
}

.header {
  background: rgba(19, 47, 68, 0.85);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.sequence {
  font-size: 28rpx;
  color: #7aa7d9;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin: 12rpx 0 8rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.7;
}

.btn {
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

van-divider {
  color: rgba(245, 247, 250, 0.6);
}

.manual-card {
  margin-top: 32rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  background: rgba(16, 36, 64, 0.75);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.manual-note {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.8);
}

.note-card {
  background: rgba(16, 36, 64, 0.7);
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 32rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.note-item {
  display: block;
  font-size: 26rpx;
  color: rgba(245, 247, 250, 0.85);
  line-height: 1.6;
}

.section-header {
  margin-top: 32rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(245, 247, 250, 0.9);
  letter-spacing: 2rpx;
}

.check-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.check-card {
  background: rgba(18, 44, 70, 0.78);
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  border: 2rpx solid rgba(33, 150, 243, 0.25);
}

.check-head {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.check-index {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1f62a0, #184675);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #fff;
  font-weight: 600;
}

.check-names {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.check-name-zh {
  font-size: 32rpx;
  font-weight: 600;
}

.check-name-en {
  font-size: 24rpx;
  color: rgba(245, 247, 250, 0.65);
}

/* 部件图片样式 */
.component-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin: 20rpx 0;
  background: rgba(12, 28, 44, 0.5);
}

.check-body {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  color: rgba(245, 247, 250, 0.85);
}

/* 部件作用样式 */
.check-function {
  padding: 16rpx 20rpx;
  background: rgba(33, 150, 243, 0.15);
  border-left: 4rpx solid #2196F3;
  border-radius: 8rpx;
}

.function-label {
  font-size: 24rpx;
  color: #64B5F6;
  font-weight: 600;
  margin-right: 8rpx;
}

.function-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(245, 247, 250, 0.85);
}

/* 检查要求样式 */
.check-requirement {
  padding: 16rpx 20rpx;
  background: rgba(255, 152, 0, 0.12);
  border-left: 4rpx solid #FF9800;
  border-radius: 8rpx;
}

.check-deicing {
  padding: 16rpx 20rpx;
  background: rgba(3, 169, 244, 0.15);
  border-left: 4rpx solid #03A9F4;
  border-radius: 8rpx;
}

.deicing-label {
  display: block;
  font-size: 24rpx;
  color: #81D4FA;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.deicing-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(245, 247, 250, 0.9);
}

.requirement-label {
  display: block;
  font-size: 24rpx;
  color: #FFB74D;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.requirement-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(245, 247, 250, 0.9);
  font-weight: 500;
}

.requirement-text-en {
  display: block;
  font-size: 24rpx;
  color: rgba(162, 219, 255, 0.85);
  text-transform: uppercase;
  margin-top: 6rpx;
  line-height: 1.5;
}

