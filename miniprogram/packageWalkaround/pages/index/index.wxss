/* 绕机检查入口页面 - iOS 17 白色背景风格 */

/* CSS Variables */
page {
  --ios-blue: #007AFF;
  --ios-green: #34C759;
  --ios-orange: #FF9500;
  --ios-red: #FF3B30;
  --ios-purple: #AF52DE;
  --ios-teal: #5AC8FA;
  --ios-indigo: #5856D6;
  
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: #E5E5EA;
  
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  --border-color: rgba(60, 60, 67, 0.1);
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  
  --transition-fast: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 页面容器 - 浅色背景 */
.page {
  background: var(--bg-primary);
  min-height: 100vh;
  color: var(--text-primary);
  display: flex;
  flex-direction: column;
}

/* 页面顶部引导标题 */
.page-guide-title {
  text-align: center;
  padding: 24rpx 24rpx 20rpx;
  background: var(--bg-secondary);
  border-bottom: 1rpx solid var(--border-color);
}

.page-guide-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 1rpx;
}

.page-guide-tip {
  font-size: 24rpx;
  color: var(--ios-blue);
  margin-left: 12rpx;
  letter-spacing: 0.5rpx;
}

/* 搜索栏 - iOS风格 */
.search-container {
  padding: 16rpx 24rpx;
  background: var(--bg-secondary);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid var(--border-color);
  flex-shrink: 0;
}

.search-wrapper {
  display: flex;
  align-items: center;
  background: var(--bg-tertiary);
  border-radius: var(--radius-md);
  padding: 0 24rpx;
  height: 72rpx;
  transition: var(--transition-normal);
}

.search-wrapper:active {
  transform: scale(0.99);
}

.search-icon {
  font-size: 32rpx;
  color: var(--text-tertiary);
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  outline: none;
}

.search-placeholder {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

.search-clear {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: var(--text-quaternary);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
  transition: var(--transition-fast);
}

.search-clear:active {
  transform: scale(0.9);
  background: var(--text-tertiary);
}

.clear-icon {
  font-size: 24rpx;
  color: var(--bg-secondary);
}

/* 搜索结果 */
.search-results {
  padding: 24rpx;
  max-height: calc(100vh - 120rpx);
  overflow-y: auto;
  flex: 1;
}

.search-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-md);
  transition: var(--transition-normal);
}

.search-item:active {
  transform: scale(0.98);
  background: var(--bg-tertiary);
}

.search-item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.search-area-badge {
  display: inline-block;
  font-size: 22rpx;
  color: var(--bg-secondary);
  background: var(--ios-blue);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  width: fit-content;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.search-component-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 0.5rpx;
}

.search-component-name-en {
  font-size: 24rpx;
  color: var(--text-tertiary);
  letter-spacing: 0.3rpx;
}

.search-item-right {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.search-area-name {
  font-size: 26rpx;
  color: var(--ios-blue);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 无搜索结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.no-results-icon {
  font-size: 120rpx;
  color: var(--text-quaternary);
  margin-bottom: 32rpx;
}

.no-results-text {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.no-results-tip {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 内容容器 */
.content-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

/* Canvas容器 - 卡片效果 */
.canvas-scroll-container {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  background: var(--bg-secondary);
}

.canvas-container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.canvas-tip {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-bottom: 24rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
  font-weight: 400;
}

.canvas {
  display: block;
  border-radius: var(--radius-lg);
  background: #1a2634;
  box-shadow: var(--shadow-lg);
  max-width: 100%;
  transition: var(--transition-normal);
}

.canvas:active {
  transform: scale(0.995);
}

/* 横向滚动区域列表 */
.areas-scroll-container {
  flex-shrink: 0;
  background: var(--bg-primary);
  border-top: 1rpx solid var(--border-color);
  padding: 20rpx 0;
  position: relative;
  z-index: 1;
}

.areas-scroll {
  white-space: nowrap;
  padding: 0 24rpx;
}

.area-card {
  display: inline-block;
  width: 280rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  margin-right: 16rpx;
  box-shadow: var(--shadow-md);
  transition: var(--transition-normal);
  vertical-align: top;
  position: relative;
  overflow: hidden;
}

/* 左侧蓝色装饰条 */
.area-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--ios-blue);
  opacity: 0;
  transition: var(--transition-fast);
}

/* 选中状态高亮样式 */
.area-card-selected {
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.2);
  transform: scale3d(1.02, 1.02, 1);
  transform-origin: center center;
  z-index: 10;
}

.area-card-selected::before {
  opacity: 1;
}

.area-card:active {
  transform: scale(0.96);
}

.area-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.area-number {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: var(--ios-blue);
  transition: var(--transition-normal);
}

/* 选中状态的区域数字高亮 */
.area-card-selected .area-number {
  background: var(--ios-blue);
  color: var(--bg-secondary);
  transform: scale(1.1);
}

.area-category {
  font-size: 20rpx;
  color: var(--text-tertiary);
  background: var(--bg-tertiary);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  letter-spacing: 0.5rpx;
}

.area-card-body {
  margin-bottom: 16rpx;
  white-space: normal;
}

.area-name-zh {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.area-name-en {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
  letter-spacing: 0.3rpx;
}

.area-card-footer {
  padding-top: 12rpx;
  border-top: 1rpx solid var(--border-color);
}

.area-components-count {
  font-size: 22rpx;
  color: var(--ios-blue);
  letter-spacing: 0.3rpx;
}

/* 弹窗样式 */
.popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: var(--bg-primary);
  position: relative;
}

/* 自定义关闭按钮 */
.popup-close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: var(--bg-tertiary);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  transition: var(--transition-normal);
}

.popup-close-btn:active {
  transform: scale(0.9);
  background: var(--text-quaternary);
}

.popup-close-icon {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.popup-header {
  padding: 48rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
  flex-shrink: 0;
  background: var(--bg-secondary);
}

.popup-title-group {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.popup-seq {
  font-size: 24rpx;
  color: var(--ios-blue);
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 0.5rpx;
}

.popup-subtitle {
  font-size: 26rpx;
  color: var(--text-tertiary);
  letter-spacing: 0.3rpx;
}

.popup-meta {
  font-size: 24rpx;
  color: var(--text-tertiary);
  letter-spacing: 0.3rpx;
}

.popup-content {
  flex: 1;
  padding: 24rpx 24rpx;
  overflow-y: auto;
  background: var(--bg-primary);
}

/* 区块标题 */
.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.section-icon {
  font-size: 32rpx;
  color: var(--ios-blue);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ios-blue);
  letter-spacing: 0.5rpx;
}

/* 区域部件模块 */
.components-section {
  margin-bottom: 24rpx;
}

.components-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.component-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: 20rpx;
  box-shadow: var(--shadow-sm);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  transition: var(--transition-normal);
}

.component-card:active {
  transform: scale(0.98);
  background: var(--bg-tertiary);
}

.component-card-header {
  display: flex;
  justify-content: flex-start;
}

.component-category-badge {
  font-size: 20rpx;
  color: var(--ios-blue);
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  letter-spacing: 0.3rpx;
}

.component-card-body {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.component-card-name-zh {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 0.3rpx;
  line-height: 1.4;
}

.component-card-name-en {
  font-size: 22rpx;
  color: var(--text-tertiary);
  letter-spacing: 0.2rpx;
  line-height: 1.3;
}

.component-card-footer {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid var(--border-color);
}

.function-icon {
  font-size: 24rpx;
  color: var(--ios-blue);
  flex-shrink: 0;
  margin-top: 2rpx;
}

.component-function {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  letter-spacing: 0.2rpx;
}

/* 检查要求模块 */
.checks-section {
  margin-bottom: 48rpx;
}

/* 检查项样式 */
.check-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-md);
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
}

/* 左侧蓝色装饰条 */
.check-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--ios-blue);
}

.check-item:active {
  transform: scale(0.99);
}

.check-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.check-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  color: var(--ios-blue);
  flex-shrink: 0;
}

.check-component {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.component-name-zh {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 0.5rpx;
}

.component-name-en {
  font-size: 24rpx;
  color: var(--text-tertiary);
  letter-spacing: 0.3rpx;
}

/* 部件缩略图 */
.component-thumbnail {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-sm);
  flex-shrink: 0;
  object-fit: cover;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
}

.component-thumbnail:active {
  transform: scale(1.05);
}

.check-requirement {
  background: var(--bg-primary);
  border-radius: var(--radius-md);
  padding: 20rpx;
}

.requirement-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.requirement-row.en {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-color);
}

.requirement-label {
  font-size: 26rpx;
  color: var(--ios-blue);
  font-weight: 600;
  flex-shrink: 0;
  letter-spacing: 0.5rpx;
}

.requirement-value {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.7;
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

.requirement-value-en {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
}

/* 部件作用样式 */
.check-function {
  background: rgba(0, 122, 255, 0.05);
  border-radius: var(--radius-md);
  padding: 16rpx 20rpx;
  margin-top: 16rpx;
  border-left: 4rpx solid var(--ios-blue);
}

.function-label {
  font-size: 24rpx;
  color: var(--ios-blue);
  font-weight: 600;
  margin-right: 8rpx;
  letter-spacing: 0.5rpx;
}

.function-value {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
}

.check-deicing {
  background: rgba(90, 200, 250, 0.08);
  border-radius: var(--radius-md);
  padding: 16rpx 20rpx;
  margin-top: 16rpx;
  border-left: 4rpx solid var(--ios-teal);
}

.deicing-label {
  font-size: 24rpx;
  color: var(--ios-teal);
  font-weight: 600;
  margin-right: 8rpx;
  letter-spacing: 0.5rpx;
}

.deicing-value {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
}

.popup-footer-space {
  height: 60rpx;
}

/* 横幅广告容器 */
.ad-banner-container {
  width: 100%;
  padding: 16rpx 0;
  background: var(--bg-primary);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 响应式适配 - 小屏幕 */
@media (max-width: 375px) {
  .page-guide-text {
    font-size: 32rpx;
  }
  
  .page-guide-tip {
    font-size: 22rpx;
  }
  
  .area-card {
    width: 240rpx;
    padding: 20rpx;
  }
  
  .area-name-zh {
    font-size: 26rpx;
  }
  
  .check-item {
    padding: 24rpx;
  }
  
  .component-name-zh {
    font-size: 28rpx;
  }
}

