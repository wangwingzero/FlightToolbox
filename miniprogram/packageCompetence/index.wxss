/* 胜任力页面样式 - Apple Style Refined */

page {
  background-color: #F2F2F7; /* iOS System Grouped Background */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  --primary-blue: #007AFF;
  --primary-orange: #FF9500;
  --text-main: #1C1C1E;
  --text-secondary: #3A3A3C;
  --text-tertiary: #8E8E93;
  --card-bg: #FFFFFF;
  --page-bg: #F2F2F7;
}

.container {
  min-height: 100vh;
  background-color: var(--page-bg);
  padding: 0;
  box-sizing: border-box;
}

/* Remove old gradients and pseudo-elements */
.container::before {
  display: none;
}

/* 分类标签页 */
.category-tabs-container {
  background-color: var(--card-bg);
  padding-bottom: 10rpx;
  box-shadow: 0 1px 0 rgba(0,0,0,0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 32rpx;
  background-color: var(--card-bg);
  margin-bottom: 1px; /* Separator */
}

.premium-search-box {
  display: flex;
  align-items: center;
  background-color: #E5E5EA; /* iOS Search Bar Gray */
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  transition: all 0.3s ease;
}

.premium-search-box.focused {
  background-color: #D1D1D6;
}

.search-icon-wrapper {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
}

.premium-search-input {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-main);
  height: 44rpx;
  line-height: 44rpx;
}

.premium-search-placeholder {
  color: var(--text-tertiary);
}

.search-clear-btn {
  padding: 10rpx;
  display: flex;
  align-items: center;
}

/* 搜索统计 */
.search-stats {
  padding: 16rpx 32rpx 0;
  display: flex;
  justify-content: flex-end;
}

.stats-content {
  display: inline-flex;
  align-items: center;
  background-color: rgba(0,0,0,0.03);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.stats-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.stats-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 胜任力列表容器 */
.competencies-container {
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 卡片通用样式 */
.competency-card {
  background: var(--card-bg);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  position: relative;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.competency-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}

/* 核心胜任力卡片特色 */
.competency-card.card-core {
  border-left: 8rpx solid var(--primary-blue);
}

/* 检查员/教员胜任力卡片特色 */
.competency-card.card-instructor {
  border-left: 8rpx solid var(--primary-orange);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
  line-height: 1.4;
  flex: 1;
  margin-right: 20rpx;
}

/* 徽章样式 */
.category-badge {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 999rpx; /* Pill shape */
  white-space: nowrap;
}

.category-badge.badge-core {
  color: var(--primary-blue);
  background-color: rgba(0, 122, 255, 0.1);
}

.category-badge.badge-instructor {
  color: var(--primary-orange);
  background-color: rgba(255, 149, 0, 0.1);
}

/* 英文名称 */
.english-name {
  font-size: 28rpx;
  color: var(--text-tertiary);
  font-weight: 400;
  font-style: italic;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

/* 描述文本 */
.description-box {
  margin-bottom: 24rpx;
}

.description-text {
  font-size: 30rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* Limit to 3 lines */
  overflow: hidden;
}

/* 行为指标统计 */
.behavior-stats {
  display: flex;
  margin-bottom: 24rpx;
}

.behavior-stats .van-tag {
  padding: 8rpx 16rpx !important;
  border-radius: 12rpx !important;
  font-size: 24rpx !important;
  background-color: #F2F2F7 !important; /* Light gray bg */
  color: var(--text-secondary) !important;
  border: none !important;
}

/* 操作提示 */
.action-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F2F2F7;
}

.hint-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
  color: var(--primary-blue);
}

.hint-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* 加载更多/完成 */
.load-more-container,
.load-complete {
  padding: 32rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-more-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: #fff;
  border-radius: 999rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.load-more-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.load-complete-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
  position: relative;
  padding: 0 20rpx;
}

.load-complete-text::before,
.load-complete-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 40rpx;
  height: 1rpx;
  background-color: #E5E5EA;
}

.load-complete-text::before { left: -40rpx; }
.load-complete-text::after { right: -40rpx; }

/* -------------------------
   弹窗样式 - Sheet Modal
   ------------------------- */

/* Override Vant Popup */
van-popup, .van-popup {
  background-color: transparent !important;
}

.detail-popup-container {
  background-color: var(--card-bg);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: hidden;
}

/* 弹窗头部 */
.detail-header {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left {
  width: 60rpx;
}

.detail-title {
  flex: 1;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  color: var(--text-main);
}

.header-right {
  width: 60rpx;
  display: flex;
  justify-content: flex-end;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #F2F2F7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.close-btn:active {
  background-color: #E5E5EA;
}

.close-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 弹窗内容 */
.detail-content {
  flex: 1;
  overflow-y: auto;
  padding: 0;
  background-color: #F2F2F7; /* Grouped background for content */
}

.competency-detail {
  padding: 32rpx;
}

/* 详情分组 */
.detail-section {
  display: block;
  margin-bottom: 32rpx;
  background-color: var(--card-bg);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.detail-section .van-cell-group__title {
  padding: 24rpx 32rpx 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-tertiary);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.detail-section .van-cell {
  padding: 24rpx 32rpx;
  font-size: 30rpx;
  color: var(--text-main);
  background-color: var(--card-bg);
}

.detail-section .van-cell::after {
  left: 32rpx;
  right: 0;
}

/* 描述内容 */
.description-content {
  padding: 24rpx 32rpx 32rpx;
  font-size: 30rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.description-text-en {
  margin-top: 24rpx;
  font-style: italic;
  color: var(--text-tertiary);
}

/* 行为指标 */
.behaviors-list {
  padding: 0;
}

.behavior-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.behavior-item:last-child {
  border-bottom: none;
}

.behavior-code {
  font-size: 26rpx;
  color: var(--primary-blue);
  font-weight: 700;
  margin-bottom: 8rpx;
}

.behavior-chinese {
  font-size: 30rpx;
  color: var(--text-main);
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.behavior-english {
  font-size: 26rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
}

/* 条件 */
.condition-item {
  margin-bottom: 16rpx;
  display: flex;
}

.condition-label {
  font-weight: 600;
  min-width: 140rpx;
  color: var(--text-secondary);
}

.condition-text {
  flex: 1;
}

/* 底部按钮 */
.detail-footer {
  padding: 24rpx 32rpx;
  background-color: var(--card-bg);
  border-top: 1rpx solid rgba(0,0,0,0.05);
}

.copy-button .van-button {
  height: 88rpx !important;
  border-radius: 24rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  background-color: #F2F2F7 !important;
  color: var(--primary-blue) !important;
  border: none !important;
}

.button-icon {
  margin-right: 8rpx;
  vertical-align: middle;
}

/* Reset Vant internal styles overrides */
.van-cell-group, .van-cell {
  background-color: transparent !important;
}

.van-tabs__nav {
  background-color: transparent !important;
}
