{
  "name": "flighttoolbox-miniprogram",
  "version": "3.1.0",
  "description": "专为航空飞行员设计的微信小程序 - 离线优先",
  "main": "app.js",
  "scripts": {
    "lint": "find . -name '*.js' -not -path './node_modules/*' -not -path './miniprogram_npm/*' -exec node -c {} \\;",
    "dev": "echo '请在微信开发者工具中预览'",
    "build": "echo '请在微信开发者工具中构建npm'",
    "postinstall": "node scripts/fix-vant-fonts.js",
    "fix-fonts": "node scripts/fix-vant-fonts.js",
    "generate-version": "node scripts/generate-version.js",
    "preversion": "npm run generate-version",
    "postversion": "npm run generate-version",
    "cleanup-vant": "node scripts/remove-unused-vant-components.js",
    "prepare:ci-js": "node scripts/prepare-ci-js.js",
    "check:preload-size": "node scripts/check-preload-size.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "aviation",
    "flight",
    "miniprogram",
    "wechat",
    "offline"
  ],
  "author": "FlightToolbox Team",
  "license": "MIT",
  "dependencies": {
    "@vant/weapp": "^1.11.7"
  },
  "miniprogram": {
    "framework": "glass-easel",
    "lazyCodeLoading": "requiredComponents",
    "typescript": true
  },
  "devDependencies": {
    "@types/wechat-miniprogram": "^3.4.9",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "terser": "^5.46.0",
    "typescript": "^5.9.3"
  }
}
