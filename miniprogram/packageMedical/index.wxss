/* 体检标准页面样式 - Apple Style Refined */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: linear-gradient(135deg, #F2F2F7 0%, #E8E8ED 100%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  position: relative;
  overflow-x: hidden; 
  -webkit-font-smoothing: antialiased;
}

.mode-switcher-container {
  padding: 16rpx 32rpx 8rpx 32rpx;
}

.mode-switcher {
  display: flex;
  background: rgba(118, 118, 128, 0.12);
  border-radius: 18rpx;
  padding: 4rpx;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 14rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.mode-option-active {
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

.mode-option:active {
  transform: scale(0.98);
}

.mode-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-right: 8rpx;
}

.mode-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}

.mode-option-active .mode-label {
  color: #007AFF;
}

/* 顶部导航区域容器 - 整合搜索和分类 */
.header-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9); /* 更清晰的白色毛玻璃 */
  backdrop-filter: blur(30px) saturate(150%);
  -webkit-backdrop-filter: blur(30px) saturate(150%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.03);
}

/* 分类菜单系统 */
.category-tabs-container {
  background: transparent; /* 背景由 header-section 统一管理 */
  padding-bottom: 16rpx;
  box-shadow: none;
  border-bottom: none;
}

.category-tabs-scroll {
  height: 88rpx; /* 略微减小高度 */
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 20rpx;
}

/* 胶囊式选项卡设计 */
.category-tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 14rpx 28rpx;
  border-radius: 40rpx;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  cursor: pointer;
  background: #F5F5F7;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
}

.category-tab-item.active {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
  box-shadow: 0 6rpx 20rpx rgba(0, 122, 255, 0.35);
  transform: translateY(-2rpx) scale(1.03);
  border-color: rgba(255, 255, 255, 0.2);
}

/* 为不同分类定制活跃状态渐变 */
.category-tab-item.active[data-category="一般条件"] {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
  box-shadow: 0 6rpx 20rpx rgba(0, 122, 255, 0.35);
}

.category-tab-item.active[data-category="精神科"] {
  background: linear-gradient(135deg, #AF52DE 0%, #8E44AD 100%);
  box-shadow: 0 6rpx 20rpx rgba(175, 82, 222, 0.35);
}

.category-tab-item.active[data-category="内科"] {
  background: linear-gradient(135deg, #FF9500 0%, #FF6B00 100%);
  box-shadow: 0 6rpx 20rpx rgba(255, 149, 0, 0.35);
}

.category-tab-item.active[data-category="外科"] {
  background: linear-gradient(135deg, #FF3B30 0%, #E60000 100%);
  box-shadow: 0 6rpx 20rpx rgba(255, 59, 48, 0.35);
}

.category-tab-item.active[data-category="耳鼻咽喉及口腔科"] {
  background: linear-gradient(135deg, #32ADE6 0%, #0099CC 100%);
  box-shadow: 0 6rpx 20rpx rgba(50, 173, 230, 0.35);
}

.category-tab-item.active[data-category="眼科"] {
  background: linear-gradient(135deg, #34C759 0%, #28A745 100%);
  box-shadow: 0 6rpx 20rpx rgba(52, 199, 89, 0.35);
}

.category-badge {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(60, 60, 67, 0.1);
  color: #3C3C43;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.category-tab-item.active .category-badge {
  background: rgba(255, 255, 255, 0.3);
  color: #FFFFFF;
  box-shadow: none;
}

.category-title {
  font-size: 28rpx;
  color: #3C3C43; /* iOS 主要文本颜色 */
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.category-tab-item.active .category-title {
  color: #FFFFFF;
  font-weight: 600;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 32rpx 10rpx; /* 调整 padding */
  background: transparent;
}

.medical-search::before {
  display: none; /* 移除之前的装饰线条，保持简洁 */
}

.search-section .van-search {
  background: transparent !important;
  padding: 0 !important;
}

.search-section .van-search__content {
  background: #F5F5F7 !important;
  border-radius: 24rpx !important;
  border: 2rpx solid rgba(0, 0, 0, 0.03) !important;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.03) !important;
}

.search-section .van-field__input {
  color: #000000 !important;
  font-size: 32rpx !important; /* 增大字体 */
}

.search-section .van-field__placeholder {
  color: #8E8E93 !important; /* iOS 占位符颜色 */
}

/* 标准列表区域 */
.standards-section {
  padding: 32rpx;
}

.context7-content-container {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  min-height: auto !important;
  background: transparent;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 32rpx; /* 增加间距 */
}

/* 体检标准卡片 - 升级版 Apple Card */
.medical-item-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 36rpx;
  padding: 44rpx;
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.03),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: visible;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  display: flex;
  flex-direction: column;
  min-height: auto;
}

.medical-item-card:active {
  transform: scale(0.97);
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.04),
    0 1rpx 3rpx rgba(0, 0, 0, 0.02);
}

/* 卡片左侧装饰条 - 动态颜色 */
.medical-item-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 36rpx;
  bottom: 36rpx;
  width: 10rpx;
  background: linear-gradient(180deg, #007AFF 0%, #0051D5 100%);
  border-radius: 0 10rpx 10rpx 0;
  box-shadow: 2rpx 0 8rpx rgba(0, 122, 255, 0.25);
  transition: all 0.3s ease;
}

/* 不同分类的卡片装饰条颜色 */
.medical-item-card[data-category="一般条件"]::before {
  background: linear-gradient(180deg, #007AFF 0%, #0051D5 100%);
  box-shadow: 2rpx 0 8rpx rgba(0, 122, 255, 0.25);
}

.medical-item-card[data-category="精神科"]::before {
  background: linear-gradient(180deg, #AF52DE 0%, #8E44AD 100%);
  box-shadow: 2rpx 0 8rpx rgba(175, 82, 222, 0.25);
}

.medical-item-card[data-category="内科"]::before {
  background: linear-gradient(180deg, #FF9500 0%, #FF6B00 100%);
  box-shadow: 2rpx 0 8rpx rgba(255, 149, 0, 0.25);
}

.medical-item-card[data-category="外科"]::before {
  background: linear-gradient(180deg, #FF3B30 0%, #E60000 100%);
  box-shadow: 2rpx 0 8rpx rgba(255, 59, 48, 0.25);
}

.medical-item-card[data-category="耳鼻咽喉及口腔科"]::before {
  background: linear-gradient(180deg, #32ADE6 0%, #0099CC 100%);
  box-shadow: 2rpx 0 8rpx rgba(50, 173, 230, 0.25);
}

.medical-item-card[data-category="眼科"]::before {
  background: linear-gradient(180deg, #34C759 0%, #28A745 100%);
  box-shadow: 2rpx 0 8rpx rgba(52, 199, 89, 0.25);
}

.item-card-header {
  margin-bottom: 28rpx;
}

.item-primary {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.item-name-zh {
  font-size: 42rpx;
