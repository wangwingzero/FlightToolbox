  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #F2F2F7 0%, #E8E8ED 100%);
}

.popup-header {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(250, 250, 252, 0.95) 100%);
  backdrop-filter: blur(30px) saturate(150%);
  -webkit-backdrop-filter: blur(30px) saturate(150%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  color: #000000;
  padding: 24rpx calc(32rpx + env(safe-area-inset-right)) 24rpx calc(32rpx + env(safe-area-inset-left));
