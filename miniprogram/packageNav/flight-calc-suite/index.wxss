/* ========== 基础容器 ========== */
.container {
  padding: 0;
  margin: 0;
  background: #F2F2F7;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* ========== 页面头部 ========== */
.page-header {
  padding: 32rpx 32rpx 24rpx 32rpx;
  background: linear-gradient(180deg, #F2F2F7 0%, rgba(242, 242, 247, 0) 100%);
}

.page-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #000000;
  letter-spacing: -0.5rpx;
  line-height: 1.2;
}

.page-subtitle {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #8E8E93;
  line-height: 1.4;
  font-weight: 400;
}

/* ========== 分类标签 ========== */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.category-tabs-scroll {
  height: 128rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 16rpx 28rpx;
  gap: 20rpx;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 20rpx;
  border-radius: 18rpx;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  flex-shrink: 0;
}

.category-tab-item:active {
  transform: scale(0.95);
}

.category-tab-item.active {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.12) 0%, rgba(0, 122, 255, 0.06) 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.15);
}

.category-badge {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #E5E5EA;
  color: #8E8E93;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.category-tab-item.active .category-badge {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.category-title {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 500;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-tab-item.active .category-title {
  color: #007AFF;
  font-weight: 600;
}

/* ========== 计算器卡片列表 ========== */
.calculator-list {
  padding: 24rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.calculator-card {
  position: relative;
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 28rpx;
  padding-left: 36rpx;
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.06),
    0 1rpx 4rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

/* 左侧彩色accent条 */
.calculator-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, var(--accent-color) 0%, var(--accent-color-dark) 100%);
  opacity: 0;
  transition: opacity 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.calculator-card:active::before {
  opacity: 1;
}

.calculator-card:active {
  transform: scale(0.985);
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.card-title-group {
  flex: 1;
  min-width: 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1.3;
  margin-bottom: 4rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #8E8E93;
  line-height: 1.4;
}

.card-tag {
  padding: 10rpx 18rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #FFFFFF;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.card-tag-flight {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
}

.card-tag-convert {
  background: linear-gradient(135deg, #34C759 0%, #248A3D 100%);
}

.card-tag-meteo {
  background: linear-gradient(135deg, #FF9500 0%, #C76A00 100%);
}

.card-desc {
  font-size: 26rpx;
  color: #3C3C43;
  line-height: 1.6;
  letter-spacing: 0.2rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .page-title {
    font-size: 48rpx;
  }

  .page-subtitle {
    font-size: 26rpx;
  }

  .category-badge {
    width: 56rpx;
    height: 56rpx;
    font-size: 24rpx;
  }

  .category-title {
    font-size: 22rpx;
  }

  .calculator-card {
    padding: 24rpx;
    padding-left: 32rpx;
    border-radius: 24rpx;
  }

  .card-icon {
    font-size: 44rpx;
    margin-right: 16rpx;
  }

  .card-title {
    font-size: 30rpx;
  }

  .card-subtitle {
    font-size: 22rpx;
  }

  .card-tag {
    padding: 8rpx 14rpx;
    font-size: 20rpx;
  }

  .card-desc {
    font-size: 24rpx;
  }
}
