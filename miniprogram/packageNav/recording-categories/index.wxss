/* 录音分类页面 - 全新友好设计 */

/* ========== 容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 20rpx 40rpx 20rpx;
}

/* ========== 页面头部 ========== */
.page-header {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.header-country {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.country-flag-large {
  font-size: 80rpx;
  line-height: 1;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.country-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.country-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1f2937;
  line-height: 1.2;
}

.country-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 500;
}

.header-guide {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ede9fe, #ddd6fe);
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
}

.guide-icon {
  font-size: 28rpx;
  line-height: 1;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(6rpx); }
}

.guide-text {
  font-size: 24rpx;
  color: #5b21b6;
  font-weight: 600;
}

/* ========== 分类列表 ========== */
.categories-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-item {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #9f7aea);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.category-item:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.category-item:active::before {
  transform: scaleX(1);
}

/* 图标区域 */
.category-icon-area {
  flex-shrink: 0;
}

.icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.category-emoji {
  font-size: 44rpx;
  line-height: 1;
}

.category-item:active .icon-circle {
  transform: scale(1.1) rotate(5deg);
}

/* 信息区域 */
.category-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.category-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.category-description {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 箭头区域 */
.category-arrow {
  flex-shrink: 0;
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.arrow-icon {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 700;
  line-height: 1;
}

.category-item:active .category-arrow {
  transform: translateX(4rpx);
}

/* ========== 广告区域 ========== */
.ad-section {
  margin: 32rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: 40rpx;
}

/* ========== 响应式优化 ========== */
@media screen and (max-width: 375px) {
  .country-title {
    font-size: 42rpx;
  }
  
  .country-flag-large {
    font-size: 64rpx;
  }
  
  .category-title {
    font-size: 28rpx;
  }
  
  .category-emoji {
    font-size: 40rpx;
  }
  
  .icon-circle {
    width: 72rpx;
    height: 72rpx;
  }
}

/* ========== Emoji图标样式 ========== */
.emoji-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
  vertical-align: middle;
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
  font-style: normal;
  font-weight: normal;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.emoji-icon.large {
  font-size: 64rpx;
}
