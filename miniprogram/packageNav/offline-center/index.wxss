.offline-container {
  padding: 24rpx;
}

.section-card {
  margin-bottom: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
}

.section-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
}

.button-row {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.button-row .van-button + .van-button {
  margin-left: 16rpx;
}

.progress-row {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.progress-text {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #666666;
}

/* 广告容器 */
.ad-banner-container {
  margin-top: 32rpx;
  padding: 0 8rpx;
}
