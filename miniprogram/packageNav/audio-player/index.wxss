/* =====================================================
   航线录音播放器 - 重新设计
   ===================================================== */

/* ========== 页面容器 ========== */
.audio-player-page {
  min-height: 100vh;
  background: #F2F2F7;
  padding-bottom: env(safe-area-inset-bottom);
}

/* ========== 沉浸式头部 ========== */
.page-header {
  background: linear-gradient(160deg, #1C1C3A 0%, #2D2B55 40%, #5856D6 100%);
  padding: 56rpx 32rpx 48rpx;
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: -60rpx;
  right: -40rpx;
  width: 240rpx;
  height: 240rpx;
  background: radial-gradient(circle, rgba(175,82,222,0.35) 0%, transparent 70%);
  pointer-events: none;
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -30rpx;
  left: 40rpx;
  width: 160rpx;
  height: 160rpx;
  background: radial-gradient(circle, rgba(88,86,214,0.25) 0%, transparent 70%);
  pointer-events: none;
}

.header-region {
  font-size: 42rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}

.header-category {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 6rpx;
}

.header-badge {
  display: inline-flex;
  margin-top: 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 9999rpx;
  padding: 8rpx 20rpx;
}

.header-badge .badge-text {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  font-variant-numeric: tabular-nums;
}

/* ========== 主播放器区域 ========== */
.player-section {
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
  padding: 40rpx 32rpx 24rpx;
}

/* ========== 唱片封面 ========== */
.disc-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 28rpx;
}

.disc {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #2D2B55, #5856D6, #AF52DE);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 8rpx 32rpx rgba(88, 86, 214, 0.3),
    inset 0 0 0 8rpx rgba(255,255,255,0.1);
  transition: box-shadow 0.3s ease;
}

.disc.spinning {
  animation: disc-spin 4s linear infinite;
  box-shadow:
    0 12rpx 48rpx rgba(88, 86, 214, 0.45),
    inset 0 0 0 8rpx rgba(255,255,255,0.15);
}

@keyframes disc-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.disc-inner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.disc-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #5856D6;
  font-variant-numeric: tabular-nums;
}

.disc-label {
  margin-top: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1C1E;
  text-align: center;
}

/* ========== 录音文本 ========== */
.transcript-area {
  margin-bottom: 28rpx;
}

.transcript-collapsed {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border: 2rpx dashed #D1D1D6;
  border-radius: 16rpx;
  background: #F9F9FB;
}

.transcript-collapsed:active {
  background: #F2F2F7;
}

.transcript-toggle-icon {
  font-size: 28rpx;
}

.transcript-toggle-text {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
}

.transcript-expanded {
  padding: 20rpx;
  line-height: 1.8;
  font-size: 28rpx;
  color: #1C1C1E;
  background: linear-gradient(135deg, #F0EFFF, #EBE9FF);
  border-radius: 16rpx;
  border-left: 6rpx solid #5856D6;
}

/* ========== 进度条 ========== */
.progress-area {
  margin-bottom: 28rpx;
}

.progress-track {
  width: 100%;
  height: 6rpx;
  background: #E5E5EA;
  border-radius: 9999rpx;
  position: relative;
  overflow: visible;
}

.progress-filled {
  height: 100%;
  background: linear-gradient(90deg, #5856D6, #AF52DE);
  border-radius: 9999rpx;
  position: relative;
  transition: width 0.15s linear;
}

.progress-thumb {
  position: absolute;
  right: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow:
    0 2rpx 6rpx rgba(0, 0, 0, 0.15),
    0 0 0 3rpx rgba(88, 86, 214, 0.25);
}

.progress-time {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #8E8E93;
  font-weight: 500;
  font-variant-numeric: tabular-nums;
}

/* ========== 播放控制 ========== */
.controls-area {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 48rpx;
  margin-bottom: 24rpx;
}

.ctrl-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #F2F2F7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
}

.ctrl-btn:active {
  transform: scale(0.92);
  background: #E5E5EA;
}

.ctrl-btn .ctrl-icon {
  font-size: 32rpx;
  color: #1C1C1E;
  line-height: 1;
}

.ctrl-btn.play-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(145deg, #5856D6, #AF52DE);
  box-shadow: 0 6rpx 24rpx rgba(88, 86, 214, 0.35);
}

.ctrl-btn.play-btn .ctrl-icon {
  font-size: 44rpx;
  color: #FFFFFF;
}

.ctrl-btn.play-btn:active {
  background: linear-gradient(145deg, #4B49B8, #9B45C4);
}

.ctrl-btn.play-btn.playing {
  animation: glow 2s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 6rpx 24rpx rgba(88, 86, 214, 0.35);
  }
  50% {
    box-shadow: 0 10rpx 40rpx rgba(88, 86, 214, 0.55);
  }
}

/* ========== 音量控制 ========== */
.volume-area {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 0 16rpx;
  margin-bottom: 8rpx;
}

.volume-icon-small,
.volume-icon-large {
  font-size: 24rpx;
  flex-shrink: 0;
}

.volume-slider {
  flex: 1;
  margin: 0;
}

/* ========== 快捷操作栏 ========== */
.action-bar {
  display: flex;
  gap: 0;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  padding-top: 8rpx;
  padding-bottom: 16rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
  transition: all 0.15s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon-wrap {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #F2F2F7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
}

.action-icon-wrap.learned {
  background: #34C759;
}

.action-icon-wrap.unlearned {
  background: #FF9500;
}

.action-icon-wrap.active {
  background: #007AFF;
}

.action-icon-wrap.downloading {
  background: #5856D6;
  animation: pulse-download 1.2s ease-in-out infinite;
}

@keyframes pulse-download {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.action-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1;
}

.action-icon-wrap:not(.learned):not(.unlearned):not(.active):not(.downloading) .action-icon {
  color: #8E8E93;
}

.action-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #8E8E93;
}

.action-item.learned .action-label {
  color: #34C759;
}

.action-item.active .action-label {
  color: #007AFF;
}

/* ========== 录音列表 ========== */
.playlist-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 0 24rpx 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.playlist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.playlist-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.playlist-badge {
  font-size: 22rpx;
  font-weight: 600;
  color: #FFFFFF;
  background: linear-gradient(135deg, #5856D6, #AF52DE);
  padding: 4rpx 14rpx;
  border-radius: 9999rpx;
  min-width: 40rpx;
  text-align: center;
}

.playlist-scroll {
  max-height: 520rpx;
}

.playlist-row {
  display: flex;
  align-items: center;
  padding: 14rpx 24rpx;
  transition: background 0.15s ease;
  position: relative;
}

.playlist-row::after {
  content: '';
  position: absolute;
  left: 72rpx;
  right: 24rpx;
  bottom: 0;
  height: 1rpx;
  background: #F2F2F7;
}

.playlist-row:last-child::after {
  display: none;
}

.playlist-row:active {
  background: #F9F9FB;
}

.playlist-row.current {
  background: linear-gradient(90deg, #F5F4FF 0%, #FFFFFF 100%);
}

.playlist-row.current::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #5856D6, #AF52DE);
}

.row-index {
  width: 44rpx;
  height: 44rpx;
  border-radius: 12rpx;
  background: #F2F2F7;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  color: #8E8E93;
  flex-shrink: 0;
  margin-right: 14rpx;
}

.row-index.current {
  background: linear-gradient(135deg, #5856D6, #AF52DE);
  color: #FFFFFF;
}

.row-playing-icon {
  font-size: 18rpx;
}

.row-content {
  flex: 1;
  min-width: 0;
  margin-right: 12rpx;
}

.row-label {
  font-size: 22rpx;
  color: #5856D6;
  font-weight: 600;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.row-preview {
  font-size: 24rpx;
  color: #8E8E93;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 2rpx;
}

.playlist-row.learned .row-preview {
  color: #3C3C43;
}

.row-badge {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.row-badge.learned {
  background: #34C759;
  color: #FFFFFF;
}

/* ========== 广告区域 ========== */
.ad-section {
  margin: 0 24rpx 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: calc(32rpx + env(safe-area-inset-bottom));
}

/* ========== 响应式 ========== */
@media (max-width: 375px) {
  .player-section {
    padding: 32rpx 24rpx 20rpx;
  }

  .disc {
    width: 160rpx;
    height: 160rpx;
  }

  .disc-inner {
    width: 64rpx;
    height: 64rpx;
  }

  .disc-number {
    font-size: 28rpx;
  }

  .ctrl-btn {
    width: 76rpx;
    height: 76rpx;
  }

  .ctrl-btn.play-btn {
    width: 104rpx;
    height: 104rpx;
  }

  .ctrl-btn .ctrl-icon {
    font-size: 28rpx;
  }

  .ctrl-btn.play-btn .ctrl-icon {
    font-size: 38rpx;
  }

  .controls-area {
    gap: 36rpx;
  }

  .playlist-section {
    margin: 0 16rpx 16rpx;
  }
}
