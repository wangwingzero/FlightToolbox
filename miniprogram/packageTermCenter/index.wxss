  .term-header .title {
    font-size: 42rpx;
  }

  .term-header .subtitle {
    font-size: 26rpx;
  }

  .term-tab {
    font-size: 22rpx;
    padding: 12rpx 0;
  }

  .tab-count {
    font-size: 18rpx;
  }

  .type-icon {
    width: 44rpx;
    height: 44rpx;
    font-size: 16rpx;
  }

  .type-label {
    font-size: 22rpx;
  }

  .result-title {
    font-size: 30rpx;
  }

  .result-subtitle {
    font-size: 24rpx;
  }

  .result-desc {
    font-size: 22rpx;
  }

  .result-source {
    font-size: 18rpx;
    max-width: 140rpx;
  }

  .load-more-button {
    font-size: 26rpx;
    padding: 10rpx var(--spacing-md);
  }

  .detail-title {
    font-size: 36rpx;
  }

  .detail-content {
    font-size: 26rpx;
  }

  .section-icon {
    font-size: 28rpx;
  }
}