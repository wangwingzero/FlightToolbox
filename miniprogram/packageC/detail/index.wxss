/* 机场详情页面样式 - 重新设计 */

/* 设计系统变量 */
:root {
  --primary-gradient: #FFFFFF;
  --secondary-gradient: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  --glass-bg: rgba(255, 255, 255, 0.8);
  --glass-border: rgba(0, 0, 0, 0.05);
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --accent-blue: #007AFF;
  --accent-purple: #5856D6;
  --accent-pink: #FF2D55;
  --shadow-premium: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  --shadow-soft: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  --border-radius: 24rpx;
  --border-radius-large: 32rpx;
  --transition: all 0.3s ease;
}

.container {
  background: #F5F5F7;
  min-height: 100vh;
}

/* 高端机场信息卡片 - iOS Style */
.airport-header-premium {
  background: #FFFFFF;
  color: #000000;
  padding: 40rpx 32rpx;
  margin: 24rpx 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  backdrop-filter: none;
  border: none;
}

/* 毛玻璃层 */
.airport-header-premium::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: none;
  backdrop-filter: none;
  border-radius: 32rpx;
  z-index: -1;
}

/* 装饰性背景元素 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

/* 通用装饰圆形基础样式 - 详情页版本（静态，渐变背景） */
.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: none;
  backdrop-filter: none;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  background: none;
}

.circle-2 {
  width: 120rpx;
  height: 120rpx;
  bottom: -60rpx;
  left: -30rpx;
  background: none;
}

.circle-3 {
  width: 80rpx;
  height: 80rpx;
  top: 50%;
  right: 20rpx;
  background: none;
}

/* 顶部代码显示区域 */
.header-codes-section {
  position: relative;
  z-index: 1;
  text-align: center;
  margin-bottom: 40rpx;
}

.codes-display {
  display: inline-flex;
  align-items: baseline;
  gap: 16rpx;
  background: #F5F5F7;
  padding: 16rpx 32rpx;
  border-radius: 100rpx;
  border: none;
  backdrop-filter: none;
  box-shadow: none;
}

.primary-code {
  font-size: 48rpx;
  font-weight: 700;
  font-family: -apple-system, SF UI Text, Helvetica Neue, Arial, sans-serif;
  color: #000000;
  text-shadow: none;
  letter-spacing: 0;
}

.secondary-code {
  font-size: 32rpx;
  font-weight: 600;
  font-family: -apple-system, SF UI Text, Helvetica Neue, Arial, sans-serif;
  color: #8E8E93;
  letter-spacing: 0;
}

/* 地图操作区域 - 醒目设计 */
.map-action-section {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.map-action-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #007AFF;
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  border: 3rpx solid #007AFF;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  backdrop-filter: blur(20rpx);
  position: relative;
  overflow: hidden;
}

/* 地图按钮发光效果 */
.map-action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.map-action-btn:active::before {
  left: 100%;
}

.map-action-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

.map-btn-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.map-btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

/* 主信息区域 */
.header-main-info {
  position: relative;
  z-index: 1;
  text-align: center;
  margin-bottom: 40rpx;
}

.airport-name-primary {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 8rpx;
  text-shadow: none;
  letter-spacing: 0;
  line-height: 1.3;
}

.airport-name-secondary {
  font-size: 32rpx;
  font-weight: 400;
  color: #8E8E93;
  font-style: normal;
  opacity: 1;
}

/* 位置信息行 */
.header-location-info {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.location-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #F5F5F7;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  border: none;
  backdrop-filter: none;
  box-shadow: none;
  transition: all 0.2s ease;
}

.location-item:hover {
  transform: none;
  box-shadow: none;
  background: #E5E5EA;
}

.location-icon {
  font-size: 28rpx;
  color: #007AFF;
}

.location-text {
  font-size: 26rpx;
  color: #3C3C43;
  font-weight: 500;
}

/* 标高信息特殊样式 */
.location-item:nth-child(3) {
  background: rgba(255, 149, 0, 0.1);
  border: none;
}

.location-item:nth-child(3) .location-text {
  color: #FF9500;
}

/* 移除旧的底部操作区域样式 */

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 动画效果 */
.airport-header-premium {
  animation: slideInScale 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideInScale {
  0% {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 响应式设计 */
@media screen and (max-width: 480px) {
  .header-location-info {
    flex-direction: column;
    align-items: center;
    gap: 16rpx;
  }
  
  .header-actions {
    flex-direction: row;
    justify-content: space-around;
  }
  
  .header-action-btn {
    min-width: 80rpx;
    padding: 12rpx 16rpx;
  }
  
  .airport-name-primary {
    font-size: 40rpx;
  }
  
  .primary-code {
    font-size: 36rpx;
  }
}

/* 地图 */
.airport-map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 相关机场 */
.related-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.related-airports {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320rpx, 1fr));
  gap: 15rpx;
}

.related-airport-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  cursor: pointer;
}

.related-airport-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.related-codes {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.related-icao {
  font-size: 26rpx;
  font-weight: bold;
  color: #1989fa;
  font-family: 'Monaco', 'Consolas', monospace;
}

.related-iata {
  font-size: 22rpx;
  color: #646566;
  font-family: 'Monaco', 'Consolas', monospace;
  background: #f0f0f0;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

.related-info {
  font-size: 24rpx;
}

.related-name {
  color: #323233;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.related-english,
.related-distance {
  color: #969799;
  font-size: 22rpx;
}

.related-distance {
  font-weight: bold;
  color: #ff976a;
}

/* 底部操作 */
.bottom-actions {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

/* 响应式设计 */
@media screen and (max-width: 480px) {
  .airport-codes {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .main-code {
    font-size: 40rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .info-row {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .info-label {
    margin-bottom: 5rpx;
    min-width: auto;
  }
  
  .related-airports {
    grid-template-columns: 1fr;
  }
}

/* 动画效果 */
.info-card {
  animation: slideInUp 0.3s ease-out;
}

.related-airport-item {
  animation: fadeIn 0.4s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 地图标记样式优化 */
.airport-map {
  border: 2rpx solid #f0f0f0;
}

/* 坐标显示优化 */
.coord-value {
  display: block;
  line-height: 1.4;
}

/* 按钮组优化 */
.action-buttons .van-button {
  min-width: 120rpx;
}

/* 信息行优化 */
.info-row .info-value {
  padding-left: 10rpx;
}

/* 相关机场卡片悬停效果 */
.related-airport-item {
  border: 1rpx solid transparent;
}

.related-airport-item:hover {
  border-color: #1989fa;
}