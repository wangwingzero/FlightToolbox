/* ============================================
   机场数据搜索页面样式 - Premium iOS Design
   设计系统: Apple Human Interface Guidelines
   配色方案: iOS 17 标准色
   ============================================ */

/* === CSS Variables === */
page {
  --ios-blue: #007AFF;
  --ios-green: #34C759;
  --ios-orange: #FF9500;
  --ios-red: #FF3B30;
  --ios-purple: #AF52DE;
  --ios-teal: #5AC8FA;
  --ios-pink: #FF2D55;
  
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: rgba(118, 118, 128, 0.12);
  
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  --separator: rgba(60, 60, 67, 0.12);
  --fill-primary: rgba(120, 120, 128, 0.2);
  --fill-secondary: rgba(120, 120, 128, 0.16);
  --fill-tertiary: rgba(118, 118, 128, 0.12);
  
  --shadow-sm: 0 1rpx 3rpx rgba(0,0,0,0.08);
  --shadow-md: 0 4rpx 12rpx rgba(0,0,0,0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0,0,0,0.12);
  --shadow-xl: 0 16rpx 48rpx rgba(0,0,0,0.16);
  
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  --radius-xl: 40rpx;
  --radius-full: 100rpx;
  
  --transition-fast: 0.15s ease;
  --transition-normal: 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-smooth: 0.35s cubic-bezier(0.25, 0.1, 0.25, 1);
}

/* === 页面容器 === */
.container {
  min-height: 100vh;
  background: var(--bg-primary);
  padding: 0;
  position: relative;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.container::before {
  display: none;
}

.page-content {
  position: relative;
  z-index: 1;
}

/* === 分类标签系统 - iOS Segmented Control 风格 === */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 16rpx 0;
  border-bottom: 0.5rpx solid var(--separator);
}

.category-tabs-scroll {
  height: 88rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  gap: 16rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 24rpx;
  background: var(--fill-tertiary);
  border-radius: var(--radius-full);
  transition: var(--transition-normal);
  cursor: pointer;
  min-width: auto;
  border: none;
}

.category-tab-item:active {
  transform: scale(0.96);
  opacity: 0.8;
}

.category-tab-item.active {
  background: var(--ios-blue);
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.35);
}

/* 数字徽章 */
.category-badge {
  width: auto;
  min-width: 40rpx;
  height: 36rpx;
  padding: 0 10rpx;
  border-radius: var(--radius-full);
  background: rgba(0, 0, 0, 0.08);
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  font-family: -apple-system, 'SF Pro Text', sans-serif;
  transition: var(--transition-fast);
}

.category-tab-item.active .category-badge {
  background: rgba(255, 255, 255, 0.3);
  color: #FFFFFF;
}

.category-title {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  text-align: left;
  line-height: 1.2;
  transition: var(--transition-fast);
  letter-spacing: -0.2rpx;
  font-family: -apple-system, 'SF Pro Text', 'PingFang SC', sans-serif;
}

.category-tab-item.active .category-title {
  color: #FFFFFF;
  font-weight: 600;
}

/* === 搜索区域 === */
.elegant-search-container {
  position: relative;
  padding: 20rpx 24rpx;
  overflow: visible;
  background: transparent;
}

/* 背景装饰 - 隐藏 */
.search-bg-decoration { display: none; }
.decoration-circle { display: none; }
.circle-1, .circle-2, .circle-3 { display: none; }

/* 主搜索包装器 */
.main-search-wrapper {
  position: relative;
  z-index: 1;
}

/* 搜索标题 - 隐藏 */
.search-title { display: none; }
.title-icon { display: none; }
.title-text { display: none; }

/* === iOS 风格搜索框 === */
.premium-search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--fill-tertiary);
  border-radius: var(--radius-sm);
  padding: 0 20rpx;
  height: 72rpx;
  border: none;
  transition: var(--transition-normal);
}

.premium-search-box::before { display: none; }

.premium-search-box.focused {
  background: var(--bg-secondary);
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.2);
}

.premium-search-box.focused::before { display: none; }

.search-icon-wrapper {
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  opacity: 0.5;
}

.premium-search-box.focused .search-icon-wrapper {
  opacity: 1;
}

.premium-search-input {
  flex: 1;
  height: 72rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  outline: none;
  font-weight: 400;
  font-family: -apple-system, 'SF Pro Text', 'PingFang SC', sans-serif;
}

.premium-search-placeholder {
  color: var(--text-tertiary);
  font-size: 32rpx;
  font-weight: 400;
}

.search-clear-btn,
.search-loading-indicator {
  margin-left: 12rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--fill-secondary);
  color: var(--text-tertiary);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-fast);
}

.search-clear-btn:active {
  background: var(--fill-primary);
  transform: scale(0.9);
}

/* === 搜索状态 === */
.search-status-elegant {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  padding: 12rpx 20rpx;
  background: rgba(0, 122, 255, 0.08);
  border-radius: var(--radius-full);
}

.status-indicator {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}

.pulse-dot {
  width: 10rpx;
  height: 10rpx;
  background: var(--ios-blue);
  border-radius: 50%;
  animation: pulse 1.2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.4; transform: scale(0.7); }
}

.status-text-elegant {
  font-size: 26rpx;
  color: var(--ios-blue);
  font-weight: 500;
  letter-spacing: -0.2rpx;
}

/* === 快速筛选 - 隐藏（已有分类标签） === */
.quick-filters { display: none; }
.filter-scroll { display: none; }
.filter-tags { display: none; }
.filter-tag { display: none; }
.tag-text { display: none; }
.tag-count { display: none; }

/* === 建议卡片 (iOS Action Sheet 风格) === */
.suggestions-card {
  position: absolute;
  top: calc(100% + 12rpx);
  left: 0;
  right: 0;
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  overflow: hidden;
  border: 0.5rpx solid var(--separator);
  animation: slideDown 0.2s ease-out;
  z-index: 10;
  max-height: 480rpx;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.suggestions-header-elegant {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: var(--bg-primary);
  border-bottom: 0.5rpx solid var(--separator);
}

.suggestions-title-elegant {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

.suggestions-close-elegant {
  padding: 8rpx;
  border-radius: 50%;
  background: var(--fill-tertiary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-fast);
}

.suggestions-close-elegant:active {
  background: var(--fill-primary);
  transform: scale(0.9);
}

.suggestions-content-elegant {
  padding: 8rpx 0;
  max-height: 360rpx;
  overflow-y: auto;
}

.suggestion-item-elegant {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  transition: var(--transition-fast);
  position: relative;
}

.suggestion-item-elegant::before { display: none; }

.suggestion-item-elegant:active {
  background: var(--fill-tertiary);
}

.suggestion-icon-elegant {
  margin-right: 16rpx;
  opacity: 0.6;
}

.suggestion-content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.suggestion-code-elegant {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  font-family: 'SF Mono', 'Menlo', monospace;
}

.suggestion-name-elegant {
  font-size: 26rpx;
  color: var(--text-tertiary);
  font-weight: 400;
}

.suggestion-arrow-elegant {
  margin-left: 16rpx;
  opacity: 0.3;
  transition: var(--transition-fast);
}

.suggestion-item-elegant:active .suggestion-arrow-elegant {
  transform: translateX(4rpx);
  opacity: 0.5;
}

/* === 结果预览卡片 === */
.results-preview-card {
  position: absolute;
  top: calc(100% + 12rpx);
  left: 0;
  right: 0;
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  overflow: hidden;
  border: 0.5rpx solid var(--separator);
  animation: slideDown 0.2s ease-out;
  z-index: 10;
  max-height: 480rpx;
}

.preview-header-elegant {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: var(--bg-primary);
  border-bottom: 0.5rpx solid var(--separator);
}

.preview-title-elegant {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

.preview-close-elegant {
  padding: 8rpx;
  border-radius: 50%;
  background: var(--fill-tertiary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-fast);
}

.preview-close-elegant:active {
  background: var(--fill-primary);
  transform: scale(0.9);
}

.preview-content-elegant {
  padding: 8rpx 0;
  max-height: 320rpx;
  overflow-y: auto;
}

.preview-item-elegant {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  transition: var(--transition-fast);
  position: relative;
  border-bottom: 0.5rpx solid var(--separator);
}

.preview-item-elegant:last-child {
  border-bottom: none;
}

.preview-item-elegant::before { display: none; }

.preview-item-elegant:active {
  background: var(--fill-tertiary);
}

.preview-codes-elegant {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-right: 20rpx;
  min-width: 110rpx;
}

.preview-icao-elegant {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--ios-blue);
  font-family: 'SF Mono', 'Menlo', monospace;
}

.preview-iata-elegant {
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-family: 'SF Mono', 'Menlo', monospace;
  font-weight: 500;
}

.preview-info-elegant {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.preview-name-elegant {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.3;
}

.preview-country-elegant {
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 400;
}

.preview-elevation-elegant {
  font-size: 22rpx;
  color: var(--ios-orange);
  font-weight: 600;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.preview-arrow-elegant {
  margin-left: 16rpx;
  opacity: 0.3;
  transition: var(--transition-fast);
}

.preview-item-elegant:active .preview-arrow-elegant {
  transform: translateX(4rpx);
  opacity: 0.5;
}

.preview-more-elegant {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx;
  background: rgba(0, 122, 255, 0.06);
  transition: var(--transition-fast);
}

.preview-more-elegant::before { display: none; }

.preview-more-elegant:active {
  background: rgba(0, 122, 255, 0.12);
}

.more-text {
  color: var(--ios-blue);
  font-size: 28rpx;
  font-weight: 600;
}

/* === 搜索统计 === */
.search-stats-elegant {
  margin: 0 24rpx 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(52, 199, 89, 0.08);
  border-radius: var(--radius-md);
}

.stats-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stats-text {
  font-size: 26rpx;
  color: var(--ios-green);
  font-weight: 500;
}

/* === 筛选区域 - 隐藏 === */
.filter-container { display: none; }
.filter-main { display: none; }
.filter-item { display: none; }
.sort-selector { display: none; }
.search-stats-enhanced { display: none; }
.stats-main { display: none; }
.search-result-text { display: none; }
.search-keyword { display: none; }
.keyword-label { display: none; }
.keyword-value { display: none; }
.keyword-clear { display: none; }

/* === 机场列表 === */
.airport-list {
  padding: 0 24rpx;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 40rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* 空状态 */
.empty-container {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.empty-tips {
  font-size: 26rpx;
  color: var(--text-tertiary);
  font-weight: 400;
}

/* === 机场卡片 - iOS Grouped Table Style === */
.airport-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  margin-bottom: 16rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
}

/* 左侧颜色条 */
.airport-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--ios-blue);
  border-radius: var(--radius-lg) 0 0 var(--radius-lg);
  opacity: 0;
  transition: var(--transition-fast);
}

.airport-item:active {
  transform: scale(0.98);
  background: var(--bg-primary);
}

.airport-item:active::before {
  opacity: 1;
}

/* 机场主体内容 */
.airport-main {
  display: flex;
  align-items: flex-start;
}

/* 代码区域 */
.airport-codes {
  margin-right: 20rpx;
  min-width: 100rpx;
  flex-shrink: 0;
}

.icao-code {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  font-family: 'SF Mono', 'Menlo', -apple-system, monospace;
  letter-spacing: -0.5rpx;
  line-height: 1.2;
}

.iata-code {
  display: inline-block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--ios-blue);
  font-family: 'SF Mono', 'Menlo', monospace;
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-full);
  font-weight: 600;
}

/* 信息区域 */
.airport-info {
  flex: 1;
  min-width: 0;
}

.airport-name {
  margin-bottom: 12rpx;
}

.name-chinese {
  font-size: 34rpx;
  color: var(--text-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
  line-height: 1.35;
  font-family: -apple-system, 'SF Pro Display', 'PingFang SC', sans-serif;
  word-wrap: break-word;
  word-break: break-word;
}

.name-english {
  font-size: 22rpx;
  color: var(--text-tertiary);
  display: block;
  font-weight: 400;
  line-height: 1.4;
}

/* 位置信息标签 */
.airport-location {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 12rpx;
}

.country {
  font-size: 22rpx;
  color: var(--ios-blue);
  display: inline-flex;
  align-items: center;
  font-weight: 500;
  padding: 6rpx 14rpx;
  background: rgba(0, 122, 255, 0.1);
  border-radius: var(--radius-full);
}

.coordinates {
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-family: 'SF Mono', 'Menlo', monospace;
  background: var(--fill-tertiary);
  padding: 6rpx 14rpx;
  border-radius: var(--radius-full);
  font-weight: 500;
}

.elevation {
  font-size: 22rpx;
  color: var(--ios-orange);
  font-family: -apple-system, 'SF Pro Text', sans-serif;
  background: rgba(255, 149, 0, 0.1);
  padding: 6rpx 14rpx;
  border-radius: var(--radius-full);
  font-weight: 600;
}

/* 地图按钮 */
.map-btn-container {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
}

.map-btn {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(52, 199, 89, 0.1);
  color: var(--ios-green);
  padding: 10rpx 20rpx;
  border-radius: var(--radius-full);
  font-size: 24rpx;
  font-weight: 600;
  transition: var(--transition-fast);
}

.map-btn:active {
  transform: scale(0.95);
  background: rgba(52, 199, 89, 0.2);
}

.map-btn-icon {
  font-size: 24rpx;
  line-height: 1;
}

.map-btn-text {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--ios-green);
}

/* 匹配指示器 */
.match-indicator {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}

/* === 加载更多 === */
.load-more-container {
  text-align: center;
  padding: 32rpx 24rpx;
}

.load-more-btn {
  background: var(--bg-secondary);
  color: var(--ios-blue);
  border: none;
  border-radius: var(--radius-md);
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: var(--transition-fast);
  box-shadow: var(--shadow-sm);
}

.load-more-btn::before { display: none; }

.load-more-btn:active {
  background: var(--bg-primary);
  transform: scale(0.98);
}

/* === 统计信息 - 隐藏 === */
.statistics-section { display: none; }
.stats-title { display: none; }
.stats-grid { display: none; }
.stat-item { display: none; }
.stat-number { display: none; }
.stat-label { display: none; }

/* === 使用说明 - 隐藏 === */
.tips-section { display: none; }
.tips-title { display: none; }
.tips-content { display: none; }
.tip-item { display: none; }

/* === 响应式设计 - 小屏适配 === */
@media screen and (max-width: 375px) {
  .category-tabs-wrapper {
    padding: 0 20rpx;
    gap: 12rpx;
  }
  
  .category-tab-item {
    padding: 12rpx 20rpx;
  }
  
  .category-badge {
    font-size: 20rpx;
    min-width: 36rpx;
    height: 32rpx;
  }
  
  .category-title {
    font-size: 26rpx;
  }
  
  .premium-search-box {
    height: 68rpx;
    padding: 0 16rpx;
  }
  
  .premium-search-input {
    height: 68rpx;
    font-size: 30rpx;
  }
  
  .airport-item {
    padding: 20rpx;
    margin-bottom: 12rpx;
  }
  
  .icao-code {
    font-size: 32rpx;
  }
  
  .iata-code {
    font-size: 20rpx;
    padding: 3rpx 10rpx;
  }
  
  .name-chinese {
    font-size: 30rpx;
  }
  
  .name-english {
    font-size: 20rpx;
  }
  
  .country,
  .coordinates,
  .elevation {
    font-size: 20rpx;
    padding: 5rpx 12rpx;
  }
  
  .map-btn {
    padding: 8rpx 16rpx;
    font-size: 22rpx;
  }
  
  .map-btn-text {
    font-size: 22rpx;
  }
}

/* === 暗黑模式适配 === */
@media (prefers-color-scheme: dark) {
  page {
    --bg-primary: #000000;
    --bg-secondary: #1C1C1E;
    --bg-tertiary: rgba(118, 118, 128, 0.24);
    
    --text-primary: #FFFFFF;
    --text-secondary: #EBEBF5;
    --text-tertiary: #8E8E93;
    
    --separator: rgba(84, 84, 88, 0.65);
    --fill-primary: rgba(120, 120, 128, 0.36);
    --fill-secondary: rgba(120, 120, 128, 0.32);
    --fill-tertiary: rgba(118, 118, 128, 0.24);
  }
  
  .container {
    background: var(--bg-primary);
  }
  
  .category-tabs-container {
    background: rgba(28, 28, 30, 0.92);
    border-bottom-color: var(--separator);
  }
  
  .category-tab-item {
    background: var(--fill-tertiary);
  }
  
  .category-tab-item.active {
    background: var(--ios-blue);
  }
  
  .category-badge {
    background: rgba(255, 255, 255, 0.12);
    color: var(--text-secondary);
  }
  
  .premium-search-box {
    background: var(--fill-tertiary);
  }
  
  .premium-search-box.focused {
    background: var(--bg-secondary);
    box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.3);
  }
  
  .suggestions-card,
  .results-preview-card {
    background: var(--bg-secondary);
    border-color: var(--separator);
  }
  
  .suggestions-header-elegant,
  .preview-header-elegant {
    background: rgba(44, 44, 46, 0.9);
  }
  
  .airport-item {
    background: var(--bg-secondary);
    box-shadow: none;
  }
  
  .airport-item:active {
    background: rgba(44, 44, 46, 0.8);
  }
}

/* === 排序弹窗样式 === */
.sort-popup {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 0.5rpx solid var(--separator);
  background: var(--bg-primary);
}

.popup-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.popup-close {
  padding: 8rpx;
  border-radius: 50%;
  background: var(--fill-tertiary);
}

.popup-close:active {
  background: var(--fill-primary);
  transform: scale(0.9);
}

.sort-options {
  padding: 8rpx 0;
  max-height: 60vh;
  overflow-y: auto;
}

.sort-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  transition: var(--transition-fast);
}

.sort-option:active {
  background: var(--fill-tertiary);
}

.sort-option.active {
  background: rgba(0, 122, 255, 0.08);
}

.option-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.option-content text {
  margin-left: 12rpx;
}

.option-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.sort-option.active .option-text {
  color: var(--ios-blue);
}

.option-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-left: 12rpx;
}

.option-check {
  margin-left: 16rpx;
}

/* === 动画效果 === */
.airport-item {
  animation: cardSlideIn 0.25s ease-out;
}

@keyframes cardSlideIn {
  from {
    opacity: 0;
    transform: translateY(12rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.search-suggestions {
  animation: slideDown 0.2s ease-out;
}

/* === 横幅广告容器 === */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 16rpx 24rpx 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-md);
}
