/* 机场数据搜索页面样式 - 优雅苹果风格 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F7FA 0%, #F0F2F5 100%);
  padding: 0;
  position: relative;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.container::before {
  display: none;
}

.page-content {
  position: relative;
  z-index: 1;
}

/* 分类菜单系统 - 优雅Pill Pills */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
}

.category-tabs-scroll {
  height: 100rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 0 28rpx;
  gap: 20rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 100rpx;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  min-width: auto;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  border: 1.5rpx solid rgba(0,0,0,0.04);
}

.category-tab-item:active {
  transform: scale(0.96);
}

/* 根据不同类型分配主题色 */
.category-tab-item.active {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
  transform: scale(1.03);
  box-shadow: 0 6rpx 20rpx rgba(0, 122, 255, 0.35);
  border-color: transparent;
}

/* 数字徽章 */
.category-badge {
  width: auto;
  min-width: 44rpx;
  height: 40rpx;
  padding: 0 12rpx;
  border-radius: 100rpx;
  background: rgba(0, 0, 0, 0.06);
  color: #3C3C43;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
  transition: all 0.25s ease;
}

.category-tab-item.active .category-badge {
  background: rgba(255, 255, 255, 0.25);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}

.category-title {
  font-size: 30rpx;
  color: #1C1C1E;
  font-weight: 600;
  text-align: left;
  line-height: 1.2;
  transition: all 0.25s ease;
  max-width: none;
  word-wrap: normal;
  letter-spacing: 0.3rpx;
}

.category-tab-item.active .category-title {
  color: #FFFFFF;
  font-weight: 700;
}

/* 优雅搜索容器 */
.elegant-search-container {
  position: relative;
  padding: 32rpx 28rpx 28rpx;
  overflow: visible;
  background: transparent;
}

/* 背景装饰 */
.search-bg-decoration {
  display: none;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -75rpx;
  left: -30rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  right: 20rpx;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(180deg); }
}

/* 主搜索包装器 */
.main-search-wrapper {
  position: relative;
  z-index: 1;
}

/* 搜索标题 */
.search-title {
  text-align: center;
  margin-bottom: 50rpx;
  animation: fadeInUp 0.8s ease-out;
}

.title-icon {
  font-size: 72rpx;
  margin-bottom: 20rpx;
  display: block;
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.3));
  animation: float 3s ease-in-out infinite;
}

.title-text {
  font-size: 42rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 2rpx;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8rpx); }
}

/* 高端搜索框 */
.premium-search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 0 28rpx;
  height: 96rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  border: 2rpx solid rgba(0,0,0,0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.premium-search-box::before { display: none; }

.premium-search-box.focused {
  background: #FFFFFF;
  box-shadow: 0 8rpx 28rpx rgba(0, 122, 255, 0.15), 0 0 0 3rpx rgba(0, 122, 255, 0.08);
  transform: translateY(-2rpx);
  border-color: rgba(0, 122, 255, 0.3);
}

.premium-search-box.focused::before { display: none; }

.search-icon-wrapper {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  padding: 0;
  background: transparent;
}

.premium-search-box.focused .search-icon-wrapper {
  transform: none;
  background: transparent;
  box-shadow: none;
}

.premium-search-input {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
  color: #1C1C1E;
  background: transparent;
  border: none;
  outline: none;
  font-weight: 500;
}

.premium-search-placeholder {
  color: #8E8E93;
  font-size: 30rpx;
  font-weight: 400;
}

.search-clear-btn,
.search-loading-indicator {
  margin-left: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(120, 120, 128, 0.16);
  color: #3C3C43;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.search-clear-btn:active {
  background: rgba(120, 120, 128, 0.24);
  transform: scale(0.92);
}

/* 搜索状态优雅版 */
.search-status-elegant {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 100rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  border: 1rpx solid rgba(0,0,0,0.04);
}

.status-indicator {
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}

.pulse-dot {
  width: 12rpx;
  height: 12rpx;
  background: #007AFF;
  border-radius: 50%;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(0.8); }
}

.status-text-elegant {
  font-size: 28rpx;
  color: #3C3C43;
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

/* 快速筛选标签优雅版 */
