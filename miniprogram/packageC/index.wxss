  font-weight: 500;
  margin-right: 8rpx;
}

.filter-tag.active .tag-text {
  color: #1f2937;
  font-weight: 600;
}

.tag-count {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
  font-weight: 500;
}

