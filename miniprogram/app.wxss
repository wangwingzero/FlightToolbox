/* 全局深色模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #1f1f1f;
    color: #ffffff;
  }
  
  /* Vant 组件深色模式适配 */
  .van-cell {
    background-color: #2a2a2a;
    color: #ffffff;
  }
  
  .van-cell-group {
    background-color: #2a2a2a;
  }
  
  .van-field__control {
    background-color: #2a2a2a;
    color: #ffffff;
  }
  
  .van-button--primary {
    background-color: #51a937;
    border-color: #51a937;
  }
}
