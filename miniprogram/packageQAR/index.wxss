/* ===============================================
   QAR红色事件监控项页面 - 现代苹果风格设计（与缩写定义页面风格一致）
   =============================================== */

/* ===== 全局变量 - 颜色主题系统 ===== */
page {
  --color-primary: #5856D6;           /* QAR - iOS Indigo */
  --color-primary-light: #E8E7FF;
  --color-success: #34C759;
  --color-warning: #FF9500;
  --color-danger: #FF3B30;
  
  --color-bg-primary: #F2F2F7;        /* iOS System Grouped Background */
  --color-bg-secondary: #FFFFFF;
  --color-text-primary: #000000;
  --color-text-secondary: #3C3C43;
  --color-text-tertiary: #8E8E93;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  
  --radius-sm: 16rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  --radius-xl: 32rpx;
}

/* ===== 页面容器 ===== */
.qar-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: var(--spacing-lg);
  background-color: var(--color-bg-primary);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* ===== 页面头部 ===== */
.qar-header {
  padding: var(--spacing-xs) 4rpx var(--spacing-lg);
}

.header-content {
  position: relative;
}

.qar-header .title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--color-text-primary);
  letter-spacing: -0.5rpx;
  margin-bottom: var(--spacing-xs);
}

.qar-header .subtitle {
  font-size: 28rpx;
  color: var(--color-text-tertiary);
  font-weight: 400;
  line-height: 1.4;
}

/* ===== 分类标签页 ===== */
.qar-tabs {
  display: flex;
  margin-bottom: var(--spacing-md);
  padding: 6rpx;
  border-radius: 999rpx;
  background-color: #E5E5EA;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
}

.qar-tab {
  flex: 1;
  padding: 14rpx 0;
  border-radius: 999rpx;
  text-align: center;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.qar-tab.active {
  background-color: var(--color-bg-secondary);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12),
              0 2rpx 4rpx rgba(0, 0, 0, 0.08);
  color: #5856D6;
  font-weight: 600;
  transform: scale(1.02);
}

.tab-label {
  margin-right: 6rpx;
}

.tab-count {
  font-size: 20rpx;
  color: var(--color-text-tertiary);
  font-weight: 600;
  opacity: 0.8;
}

/* ===== 机型筛选器 ===== */
.aircraft-type-filter {
  margin: 0 0 var(--spacing-md);
}

.type-filter-scroll {
  white-space: nowrap;
}

.type-filter-inner {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.type-pill {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: var(--color-text-secondary);
  background-color: #E5E5EA;
  border: 1rpx solid transparent;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.type-pill.active {
  color: #FFFFFF;
  background: linear-gradient(135deg, #5856D6 0%, #7B52AB 100%);
  box-shadow: 0 4rpx 12rpx rgba(88, 86, 214, 0.3);
}

.type-pill-label {
  white-space: nowrap;
}

.type-pill-count {
  font-size: 20rpx;
  opacity: 0.8;
}

.limits-pill {
  background: linear-gradient(135deg, #FF9500 0%, #FF6B00 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 149, 0, 0.3);
}

.limits-pill:active {
  transform: scale(0.96);
}

/* ===== 搜索区域 ===== */
.search-wrapper {
  margin: var(--spacing-md) 0 var(--spacing-xs);
}

/* ===== 滚动区域 ===== */
.result-scroll {
  margin-top: var(--spacing-xs);
  height: calc(100vh - 380rpx);
}

/* ===== 空结果状态 ===== */
.no-results {
  padding: 120rpx var(--spacing-lg);
  text-align: center;
}

.no-results-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.6;
}

.no-results-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.no-results-tip {
  font-size: 26rpx;
  color: var(--color-text-tertiary);
  line-height: 1.5;
}

/* ===== 结果列表 ===== */
.result-list {
  padding-bottom: var(--spacing-xl);
}

/* ===== 结果卡片 - 简洁优雅风格 ===== */
.result-card {
  margin-bottom: var(--spacing-md);
  border-radius: var(--radius-lg);
  background-color: var(--color-bg-secondary);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.04),
              0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: all 0.2s ease;
}

.result-card:active {
  transform: scale(0.98);
  background-color: #FAFAFA;
}

/* 卡片内容区 */
.card-content {
  padding: 20rpx 24rpx;
}

/* 卡片顶部：序号 + 标题 */
.card-top {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.item-number {
  flex-shrink: 0;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #5856D6 0%, #7B52AB 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 14rpx;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: 1.4;
  margin-bottom: 6rpx;
}

.result-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meta-tag {
  font-size: 22rpx;
  color: #5856D6;
  font-weight: 500;
}

.meta-duration {
  font-size: 22rpx;
  color: #FF9500;
  font-weight: 500;
}

/* 卡片主体：信息行 */
.card-body {
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
}

.info-row {
  display: flex;
  padding: 10rpx 0;
}

.info-row + .info-row {
  border-top: 1rpx solid rgba(0, 0, 0, 0.03);
}

.info-label {
  flex-shrink: 0;
  width: 80rpx;
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.info-value.highlight {
  color: #FF3B30;
  font-weight: 600;
}

/* ===== 广告容器 ===== */
.ad-banner-container {
  margin: var(--spacing-md) 0;
  border-radius: var(--radius-md);
  overflow: hidden;
}

/* ===== 加载更多按钮 ===== */
.load-more {
  margin-top: var(--spacing-md);
  padding: var(--spacing-md) 0 var(--spacing-xl);
  text-align: center;
}

.load-more-button {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: 999rpx;
  background: linear-gradient(135deg, #5856D6 0%, #7B52AB 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(88, 86, 214, 0.3);
  transition: all 0.25s ease;
}

.load-more-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(88, 86, 214, 0.4);
}

.load-more-text {
  font-size: 28rpx;
}

.load-more-icon {
  font-size: 24rpx;
  animation: bounce 1.5s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(4rpx);
  }
}

.no-more {
  margin-top: var(--spacing-md);
  padding: var(--spacing-md) 0 var(--spacing-xl);
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  font-weight: 500;
}

/* ===== 详情弹窗 - 简洁优雅风格 ===== */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #F8F8F8;
}

/* 弹窗头部 */
.popup-header {
  padding: 16rpx 24rpx 20rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.popup-handle {
  width: 64rpx;
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  margin: 0 auto 16rpx;
}

.popup-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.popup-badges {
  display: flex;
  gap: 10rpx;
}

.popup-badge {
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.popup-badge.number {
  background: linear-gradient(135deg, #5856D6, #7B52AB);
  color: #FFFFFF;
}

.popup-badge.type {
  background: #F0F0F5;
  color: #5856D6;
}

.popup-badge.limits {
  background: linear-gradient(135deg, #FF9500, #FF6B00);
  color: #FFFFFF;
}

.popup-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F0F0;
  border-radius: 50%;
  font-size: 28rpx;
  color: #666;
}

.popup-close:active {
  background: #E0E0E0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1A1A;
  line-height: 1.3;
}

/* 弹窗主体 */
.popup-body {
  flex: 1;
  padding: 20rpx;
}

/* 信息卡片 - 独立卡片式布局 */
.info-card {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 24rpx;
  gap: 16rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.info-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F7;
  border-radius: 12rpx;
}

.info-text {
  flex: 1;
  min-width: 0;
}

.info-title {
  display: block;
  font-size: 22rpx;
  color: #8E8E93;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.info-desc {
  display: block;
  font-size: 28rpx;
  color: #1A1A1A;
  line-height: 1.5;
  font-weight: 500;
}

.info-desc.danger {
  color: #FF3B30;
  font-weight: 700;
  font-size: 32rpx;
}

.highlight-item {
  background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 100%);
  border: 1rpx solid rgba(255, 59, 48, 0.1);
}

.highlight-item .info-icon {
  background: rgba(255, 59, 48, 0.1);
}

/* 备注卡片 */
.remark-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 18rpx 20rpx;
  margin-bottom: 16rpx;
}

.remark-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.remark-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
}

/* 操作卡片 */
.action-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFF8F0, #FFFFFF);
  border: 1rpx solid rgba(255, 149, 0, 0.15);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  gap: 12rpx;
}

.action-card:active {
  background: #FFF0E0;
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  flex: 1;
  font-size: 28rpx;
  color: #FF9500;
  font-weight: 600;
}

.action-arrow {
  font-size: 28rpx;
  color: #FF9500;
}

/* 来源卡片 */
.source-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
}

.source-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.source-number {
  display: block;
  font-size: 22rpx;
  color: #BBB;
  margin-top: 4rpx;
}

/* 底部按钮 */
.popup-footer {
  padding: 16rpx 20rpx calc(16rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.close-btn {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #34C759, #30D158);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

.close-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 限制值弹窗特殊样式 */
.limits-header {
  background: #FFFFFF;
}

.limits-badge {
  background: linear-gradient(135deg, #FF9500, #FF6B00) !important;
}

/* ===== 响应式适配 ===== */
@media (max-width: 375px) {
  .qar-header .title {
    font-size: 42rpx;
  }

  .qar-header .subtitle {
    font-size: 26rpx;
  }

  .qar-tab {
    font-size: 22rpx;
    padding: 12rpx 0;
  }

  .tab-count {
    font-size: 18rpx;
  }

  .type-icon {
    min-width: 44rpx;
    height: 44rpx;
    font-size: 16rpx;
  }

  .type-label {
    font-size: 22rpx;
  }

  .result-title {
    font-size: 30rpx;
  }

  .result-subtitle {
    font-size: 24rpx;
  }

  .result-desc {
    font-size: 22rpx;
  }

  .load-more-button {
    font-size: 26rpx;
    padding: 10rpx var(--spacing-md);
  }

  .detail-title {
    font-size: 36rpx;
  }

  .detail-content {
    font-size: 26rpx;
  }

  .section-icon {
    font-size: 28rpx;
  }
}
