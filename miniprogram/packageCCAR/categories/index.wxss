    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  max-width: 80rpx;
  text-align: center;
  line-height: 1.2;
}

.validity-badge.valid {
  background: linear-gradient(135deg, #F6FFED 0%, #E6F7FF 100%);
