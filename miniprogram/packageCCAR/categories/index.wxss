/* CCAR规章分类页面样式 - Glass Morphism现代化设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #f8fafc 0%, #f1f5f9 20%, #e2e8f0 40%, #f8fafc 60%, #f0f9ff 80%, #f8fafc 100%),
    radial-gradient(circle at 30% 40%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(168, 85, 247, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 现代化搜索区域 */
.search-section {
  padding: 24rpx;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.search-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #667eea 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.ccar-search {
  flex: 1;
}

.ccar-search .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.5);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.ccar-search .van-search:focus-within {
  border-color: rgba(99, 102, 241, 0.4);
  box-shadow: 
    0 12rpx 40rpx rgba(99, 102, 241, 0.15),
    0 20rpx 80rpx rgba(99, 102, 241, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.ccar-search .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 28rpx !important;
  position: relative;
  z-index: 2;
}

.ccar-search .van-field__input {
  font-size: 30rpx !important;
  color: #1e293b !important;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding: 20rpx 32rpx !important;
  background: transparent !important;
}

.ccar-search .van-field__placeholder {
  color: #94a3b8 !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

/* 有效性筛选按钮组 */
.validity-filter {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 20rpx;
  padding: 6rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.5);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
  gap: 4rpx;
}

.filter-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 68rpx;
  padding: 12rpx 8rpx;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  position: relative;
  background: transparent;
}

.filter-btn:active {
  transform: scale(0.95);
}

.filter-btn.active {
  background: linear-gradient(135deg, 
    rgba(99, 102, 241, 0.15) 0%, 
    rgba(139, 92, 246, 0.15) 50%, 
    rgba(168, 85, 247, 0.15) 100%);
  box-shadow: 
    0 4rpx 16rpx rgba(99, 102, 241, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  transform: translateY(-1rpx);
}

.filter-icon {
  font-size: 24rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  transition: all 0.3s ease;
  filter: grayscale(0.3);
}

.filter-btn.active .filter-icon {
  filter: grayscale(0);
  transform: scale(1.1);
}

.filter-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s ease;
  line-height: 1;
  text-align: center;
}

.filter-btn.active .filter-text {
  color: #6366f1;
  font-weight: 600;
}

/* 为不同筛选状态添加专属色彩 */
.filter-btn[data-filter="all"].active {
  background: linear-gradient(135deg, 
    rgba(100, 116, 139, 0.15) 0%, 
    rgba(148, 163, 184, 0.15) 100%);
}

.filter-btn[data-filter="all"].active .filter-text {
  color: #64748b;
}

.filter-btn[data-filter="valid"].active {
  background: linear-gradient(135deg, 
    rgba(34, 197, 94, 0.15) 0%, 
    rgba(16, 185, 129, 0.15) 100%);
}

.filter-btn[data-filter="valid"].active .filter-text {
  color: #059669;
}

.filter-btn[data-filter="invalid"].active {
  background: linear-gradient(135deg, 
    rgba(239, 68, 68, 0.15) 0%, 
    rgba(220, 38, 38, 0.15) 100%);
}

.filter-btn[data-filter="invalid"].active .filter-text {
  color: #dc2626;
}

/* 现代化标签页系统 */
.modern-tabs-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-bottom: 2rpx solid rgba(226, 232, 240, 0.3);
  box-shadow: 0 2rpx 16rpx rgba(148, 163, 184, 0.08);
}

.tabs-scroll {
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
}

.tabs-wrapper {
  display: flex;
  padding: 0 24rpx;
  min-width: 100%;
}

.modern-tab {
  position: relative;
  flex-shrink: 0;
  margin-right: 8rpx;
  padding: 20rpx 24rpx 16rpx;
  border-radius: 16rpx 16rpx 0 0;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
}

.modern-tab:last-child {
  margin-right: 0;
}

.modern-tab.active {
  background: linear-gradient(135deg, 
    rgba(99, 102, 241, 0.08) 0%, 
    rgba(139, 92, 246, 0.08) 50%, 
    rgba(168, 85, 247, 0.08) 100%);
  transform: translateY(-2rpx);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.tab-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s ease;
  line-height: 1.2;
  text-align: center;
}

.modern-tab.active .tab-title {
  color: #6366f1;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: -16rpx;  
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
  border-radius: 6rpx;
  box-shadow: 
    0 2rpx 12rpx rgba(99, 102, 241, 0.4),
    0 4rpx 24rpx rgba(99, 102, 241, 0.2);
  animation: indicatorSlideIn 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes indicatorSlideIn {
  0% {
    width: 0;
    opacity: 0;
  }
  100% {
    width: 60rpx;
    opacity: 1;
  }
}

/* 搜索结果区域 */
.search-results {
  padding: 32rpx;
}

.result-section {
  margin-bottom: 32rpx;
}

.section-header {
  padding: 0 0 24rpx 0;
  background: transparent;
  border: none;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(99, 102, 241, 0.3));
}

.section-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.modern-result-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.modern-result-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.modern-result-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(148, 163, 184, 0.15),
    0 8rpx 32rpx rgba(148, 163, 184, 0.1);
}

.card-main {
  flex: 1;
  margin-right: 16rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.regulation-card .card-title {
  color: #2563eb;
}

.normative-card .card-title {
  color: #059669;
}

.card-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.meta-badge {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(226, 232, 240, 0.3);
}

.meta-badge.primary {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
  color: #4338ca;
}

.meta-badge.secondary {
  background: rgba(248, 250, 252, 0.8);
  color: #64748b;
}

.meta-badge.date {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(249, 115, 22, 0.15) 100%);
  color: #d97706;
}

.meta-badge.validity {
  font-weight: 600;
  border: 1rpx solid transparent;
}

.meta-badge.validity.valid {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(16, 185, 129, 0.15) 100%);
  color: #059669;
  border-color: rgba(34, 197, 94, 0.2);
}

.meta-badge.validity.invalid {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(220, 38, 38, 0.15) 100%);
  color: #dc2626;
  border-color: rgba(239, 68, 68, 0.2);
}

.card-arrow {
  color: #94a3b8;
  font-size: 28rpx;
  transform: translateX(0);
  transition: all 0.3s ease;
}

.modern-result-card:active .card-arrow {
  color: #6366f1;
  transform: translateX(4rpx);
}

/* 分类列表区域 */
.categories-content {
  padding: 32rpx;
}

.modern-categories-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.modern-category-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.modern-category-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(148, 163, 184, 0.15),
    0 8rpx 32rpx rgba(148, 163, 184, 0.1);
}

.category-header {
  flex: 1;
  margin-right: 16rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.category-badge {
  display: inline-block;
  font-size: 22rpx;
  font-weight: 500;
  color: #6366f1;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
  border-radius: 12rpx;
  backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(99, 102, 241, 0.2);
}

.category-stats {
  display: flex;
  gap: 16rpx;
  margin-right: 16rpx;
}

.stat-card {
  text-align: center;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(226, 232, 240, 0.3);
}

.regulation-stat {
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
}

.normative-stat {
  background: linear-gradient(135deg, rgba(5, 150, 105, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
}

.stat-number {
  font-size: 24rpx;
  font-weight: 600;
  line-height: 1;
  margin-bottom: 4rpx;
}

.regulation-stat .stat-number {
  color: #2563eb;
}

.normative-stat .stat-number {
  color: #059669;
}

.stat-label {
  font-size: 18rpx;
  color: #64748b;
  line-height: 1;
}

.category-arrow {
  color: #94a3b8;
  font-size: 28rpx;
  transform: translateX(0);
  transition: all 0.3s ease;
}

.modern-category-card:active .category-arrow {
  color: #6366f1;
  transform: translateX(4rpx);
}

/* 现代化空状态 */
.modern-empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
  filter: drop-shadow(0 4rpx 16rpx rgba(148, 163, 184, 0.2));
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 现代化统计底部 */
.modern-stats-footer {
  padding: 32rpx;
}

.stats-container {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #6366f1;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stats-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.stats-divider {
  width: 2rpx;
  height: 40rpx;
  background: linear-gradient(135deg, rgba(226, 232, 240, 0.5) 0%, rgba(148, 163, 184, 0.3) 100%);
  margin: 0 24rpx;
  border-radius: 1rpx;
}

/* 响应式设计优化 */
.validity-filter-responsive {
  padding: 4rpx;
}

.filter-btn-responsive {
  min-width: 56rpx;
  padding: 10rpx 6rpx;
}

.filter-text-responsive {
  font-size: 18rpx;
}

.filter-icon-responsive {
  font-size: 22rpx;
}

/* 媒体查询替代方案 - 使用class切换 */
.mobile-view .category-stats {
  display: none;
}

.mobile-view .category-header {
  margin-right: 10rpx;
}

.mobile-view .card-meta {
  flex-direction: column;
  gap: 8rpx;
}

.mobile-view .stats-container {
  flex-direction: column;
  gap: 16rpx;
}

.mobile-view .stats-divider {
  width: 40rpx;
  height: 2rpx;
  margin: 0;
}

.mobile-view .validity-filter {
  padding: 4rpx;
}

.mobile-view .filter-btn {
  min-width: 56rpx;
  padding: 10rpx 6rpx;
}

.mobile-view .filter-text {
  font-size: 18rpx;
}

.mobile-view .filter-icon {
  font-size: 22rpx;
}