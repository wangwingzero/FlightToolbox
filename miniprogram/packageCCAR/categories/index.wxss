/* Apple风格设计系统 */
page {
  /* 品牌色系 */
  --brand-gradient: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  --primary-color: #007AFF;
  --primary-light: rgba(0, 122, 255, 0.1);
  --primary-ultra-light: rgba(0, 122, 255, 0.05);
  
  /* 功能色系 */
  --success-color: #34C759;
  --success-gradient: linear-gradient(135deg, #34C759, #30D158);
  --warning-color: #FF9500;
  --danger-color: #FF3B30;
  --danger-gradient: linear-gradient(135deg, #FF3B30, #FF453A);
  --info-color: #5856D6;
  
  /* 文本色 - iOS规范 */
  --text-primary: #000000;
  --text-secondary: #8E8E93;
  --text-tertiary: #AEAEB2;
  --text-quaternary: #C7C7CC;
  --text-white: #FFFFFF;
  
  /* 背景色 */
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-elevated: #FFFFFF;
  
  /* 布局 */
  --radius-large: 28rpx;
  --radius-medium: 20rpx;
  --radius-small: 12rpx;
  --radius-pill: 999rpx;
  
  /* 阴影 */
  --shadow-small: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-large: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --shadow-colored: 0 4rpx 20rpx rgba(0, 122, 255, 0.15);
  --shadow-float: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.page-container {
  min-height: 100vh;
  background-color: var(--bg-primary);
  position: relative;
  padding-bottom: 80rpx;
}

/* 顶部背景 - 优雅渐变 */
.header-bg {
  height: 360rpx;
  background: var(--brand-gradient);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  box-shadow: var(--shadow-large);
  overflow: hidden;
}

.header-bg::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
  pointer-events: none;
}

/* 搜索栏容器 */
.search-box-container {
  padding: 40rpx 32rpx 24rpx;
  position: relative;
  z-index: 10;
}

/* 搜索框 - iOS风格 */
.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  padding: 24rpx 32rpx;
  border-radius: var(--radius-pill);
  box-shadow: var(--shadow-float);
  border: 1.5rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-box:active {
  transform: scale(0.97);
  box-shadow: var(--shadow-medium);
}

.search-input {
  flex: 1;
  margin-left: 24rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  height: 48rpx;
  line-height: 48rpx;
}

.search-placeholder {
  color: var(--text-tertiary);
}

.search-action {
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  opacity: 0.6;
  transition: opacity 0.2s;
}

.search-action:active {
  opacity: 1;
}

/* 数据视图切换 */
.view-switch-wrap {
  padding: 0 32rpx;
  margin-top: -4rpx;
  position: relative;
  z-index: 9;
}

.view-switch {
  display: flex;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
  border-radius: var(--radius-pill);
  padding: 6rpx;
  box-shadow: var(--shadow-medium);
}

.view-switch-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 10rpx;
  border-radius: var(--radius-pill);
  color: var(--text-secondary);
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.25s ease;
}

.view-switch-item.active {
  background: var(--bg-elevated);
  color: var(--primary-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 统计与筛选卡片 - Apple Cards */
.stats-filter-card {
  margin: 24rpx 32rpx 32rpx;
  background: var(--bg-elevated);
  border-radius: var(--radius-large);
  padding: 36rpx;
  box-shadow: var(--shadow-medium);
  position: relative;
  z-index: 1;
  border: 0.5rpx solid rgba(0, 0, 0, 0.04);
}

/* 状态 Tab - iOS Segmented Control */
.status-tabs {
  display: flex;
  justify-content: space-between;
  background: var(--bg-primary);
  padding: 6rpx;
  border-radius: var(--radius-medium);
  margin-bottom: 36rpx;
}

.status-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: calc(var(--radius-medium) - 6rpx);
  font-size: 26rpx;
  color: var(--text-secondary);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.status-tab.active {
  background: var(--bg-elevated);
  color: var(--primary-color);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08), 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
  font-weight: 600;
  transform: scale(1.02);
}

.status-tab text:first-child {
  margin-bottom: 8rpx;
  font-size: 26rpx;
  letter-spacing: 0.3rpx;
}

.count-badge {
  font-size: 40rpx;
  font-family: -apple-system, 'SF Pro Display', 'Helvetica Neue', sans-serif;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1;
  letter-spacing: -0.5rpx;
}

.status-tab.active .count-badge {
  color: var(--primary-color);
  transform: scale(1.05);
}

.divider {
  height: 1px;
  background: var(--text-quaternary);
  margin: 28rpx 0;
  opacity: 0.3;
}

/* 时间筛选 */
.time-filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0 8rpx;
}

.time-filter-label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

.time-filter-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--info-color);
  background: rgba(88, 86, 214, 0.1);
  padding: 8rpx 24rpx;
  border-radius: var(--radius-pill);
  font-weight: 500;
  transition: all 0.2s;
}

.time-filter-value:active {
  background: rgba(88, 86, 214, 0.15);
}

.rotate-180 {
  transform: rotate(180deg);
}

.filter-clear-btn {
  margin-top: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--primary-color);
  background: var(--primary-light);
  padding: 20rpx;
  border-radius: var(--radius-medium);
  font-weight: 600;
  letter-spacing: 0.3rpx;
  transition: all 0.2s;
}

.filter-clear-btn:active {
  background: var(--primary-ultra-light);
  transform: scale(0.98);
}

/* 下拉菜单 - Apple Sheet */
.dropdown-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  z-index: 99;
  opacity: 0;
  transition: opacity 0.3s;
}

.dropdown-mask.show {
  opacity: 1;
}

.dropdown-panel {
  position: absolute;
  top: 420rpx;
  left: 32rpx;
  right: 32rpx;
  background: var(--bg-elevated);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-large);
  z-index: 100;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(-30rpx) scale(0.95);
  border: 0.5rpx solid rgba(0, 0, 0, 0.04);
}

.dropdown-panel.show {
  max-height: 1000rpx;
  opacity: 1;
  padding-bottom: 24rpx;
  transform: translateY(0) scale(1);
}

.dropdown-option {
  padding: 32rpx 40rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  border-bottom: 0.5rpx solid var(--text-quaternary);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background-color 0.2s;
}

.dropdown-option:last-child {
  border-bottom: none;
}

.dropdown-option:active {
  background-color: var(--bg-primary);
}

.dropdown-option.active {
  color: var(--primary-color);
  background: var(--primary-ultra-light);
  font-weight: 600;
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: 0 32rpx;
}

/* 搜索结果标题 */
.search-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 36rpx 0 24rpx;
  padding: 0 12rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: 0.3rpx;
}

.section-count {
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--bg-primary);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-pill);
  font-weight: 600;
}

/* 分类卡片 - Apple Cards */
.category-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.category-card {
  background: var(--bg-elevated);
  border-radius: var(--radius-large);
  padding: 36rpx 28rpx;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-medium);
  border: 0.5rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(135deg, var(--primary-color), var(--info-color));
  opacity: 0;
  transition: opacity 0.3s;
}

.category-card:active {
  transform: scale(0.97);
  box-shadow: var(--shadow-small);
}

.category-card:active::before {
  opacity: 1;
}

.category-icon-box {
  width: 108rpx;
  height: 108rpx;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.12) 0%, rgba(88, 86, 214, 0.08) 100%);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  flex-shrink: 0;
  box-shadow: inset 0 0 0 1.5rpx rgba(0, 122, 255, 0.15);
  position: relative;
  overflow: hidden;
}

.category-icon-box::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.4) 0%, transparent 70%);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0%, 100% { transform: translate(-50%, -50%) scale(0); opacity: 0; }
  50% { transform: translate(0, 0) scale(1); opacity: 1; }
}

.category-char {
  font-size: 48rpx;
  color: var(--primary-color);
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
  z-index: 1;
}

.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
}

.category-main {
  margin-bottom: 20rpx;
}

.category-name {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
  letter-spacing: 0.3rpx;
}

.category-sub {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.category-stats-row {
  display: flex;
  gap: 12rpx;
}

.stat-tag {
  background: var(--bg-primary);
  border-radius: var(--radius-small);
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: var(--text-secondary);
  font-weight: 500;
}

.stat-tag .num {
  font-weight: 600;
  margin-right: 6rpx;
  color: var(--text-primary);
  font-size: 26rpx;
  font-family: -apple-system, 'SF Pro Display', sans-serif;
}

.stat-tag.secondary {
  background: rgba(52, 199, 89, 0.1);
  color: var(--success-color);
}

.stat-tag.secondary .num {
  color: var(--success-color);
}

/* 搜索结果卡片 - Apple Cards */
.modern-result-card {
  background: var(--bg-elevated);
  border-radius: var(--radius-large);
  padding: 36rpx 32rpx;
  box-shadow: var(--shadow-medium);
  position: relative;
  display: flex;
  align-items: flex-start;
  overflow: hidden;
  margin-bottom: 24rpx;
  border: 0.5rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modern-result-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-small);
}

/* 有效性标签 */
.validity-tag {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-bottom-left-radius: var(--radius-medium);
  border-top-right-radius: var(--radius-large);
  color: #FFFFFF;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  box-shadow: -2rpx 2rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.validity-tag.valid {
  background: var(--success-gradient);
  box-shadow: -2rpx 2rpx 16rpx rgba(52, 199, 89, 0.3);
}

.validity-tag.abolished {
  background: var(--danger-gradient);
  box-shadow: -2rpx 2rpx 16rpx rgba(255, 59, 48, 0.3);
}

.validity-tag.invalid {
  background: linear-gradient(135deg, #8E8E93, #AEAEB2);
  box-shadow: -2rpx 2rpx 12rpx rgba(142, 142, 147, 0.2);
}

.card-main {
  flex: 1;
  margin-right: 24rpx;
  padding-top: 12rpx;
}

.card-title {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.4;
  letter-spacing: 0.3rpx;
}

.card-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meta-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: var(--radius-small);
  display: inline-block;
  font-weight: 500;
}

.meta-tag.primary {
  color: var(--primary-color);
  background: var(--primary-light);
  font-weight: 600;
}

.meta-tag.secondary {
  background: var(--bg-primary);
  color: var(--text-secondary);
}

.meta-tag.date {
  background: rgba(255, 149, 0, 0.1);
  color: var(--warning-color);
  font-weight: 600;
}

.standard-load-more {
  text-align: center;
  padding: 20rpx 0 30rpx;
}

.standard-load-more-text {
  color: var(--text-secondary);
  font-size: 24rpx;
}

.standard-load-more-text.end {
  color: var(--text-tertiary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
  padding-bottom: 80rpx;
}

.empty-text {
  margin-top: 32rpx;
  font-size: 32rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* 自定义日期选择面板 */
.custom-date-panel {
  padding: 32rpx 40rpx 24rpx;
  background: var(--bg-primary);
  border-radius: var(--radius-medium);
  margin: 24rpx 0;
}

.date-inputs {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.date-input {
  flex: 1;
  padding: 20rpx 28rpx;
  background: var(--bg-elevated);
  border-radius: var(--radius-medium);
  color: var(--text-tertiary);
  font-size: 28rpx;
  text-align: center;
  border: 1.5rpx solid var(--text-quaternary);
  transition: all 0.2s;
}

.date-input.filled {
  color: var(--text-primary);
  border-color: var(--primary-color);
  font-weight: 600;
}

.date-separator {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.quick-tags {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.quick-tag {
  padding: 12rpx 32rpx;
  background: var(--bg-elevated);
  border-radius: var(--radius-pill);
  color: var(--primary-color);
  font-size: 26rpx;
  font-weight: 600;
  border: 1.5rpx solid var(--primary-light);
  transition: all 0.2s;
}

.quick-tag:active {
  background: var(--primary-light);
  transform: scale(0.96);
}
