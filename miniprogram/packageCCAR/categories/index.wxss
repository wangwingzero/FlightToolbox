/* CCAR规章分类页面样式 - Glass Morphism现代化设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: linear-gradient(135deg, #fafbff 0%, #f0f4ff 30%, #fff5f0 70%, #f8fff8 100%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 顶部有效性筛选标签 - 新增 */
.modern-tabs-container {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 255, 0.95) 100%);
  backdrop-filter: blur(20px);
  padding: 15rpx 0;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(99, 102, 241, 0.06),
    0 2rpx 8rpx rgba(139, 92, 246, 0.03),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
}

.modern-tabs-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.02) 0%, rgba(139, 92, 246, 0.02) 100%);
  border-radius: 44rpx;
  pointer-events: none;
}

.tabs-wrapper {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  padding: 0 20rpx;
}

.modern-tab {
  position: relative;
  padding: 0 24rpx;
  min-width: 120rpx;
  border-radius: 30rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.modern-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  backdrop-filter: blur(30rpx);
  box-shadow: 
    0 16rpx 50rpx rgba(102, 126, 234, 0.25),
    0 8rpx 24rpx rgba(118, 75, 162, 0.15),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.3);
  transform: translateY(-4rpx);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  gap: 8rpx;
  position: relative;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  filter: grayscale(1);
  transition: all 0.4s ease;
}

.modern-tab.active .tab-icon {
  filter: grayscale(0);
}

.tab-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  transition: all 0.4s ease;
  line-height: 1.2;
  text-align: center;
}

.modern-tab.active .tab-title {
  color: white;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.tab-count {
  font-size: 18rpx;
  color: #9ca3af;
  margin-top: 4rpx;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.08) 0%, rgba(139, 92, 246, 0.08) 100%);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  text-align: center;
  border: 1rpx solid rgba(99, 102, 241, 0.1);
  font-weight: 500;
}

.modern-tab.active .tab-count {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.tab-indicator {
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 8rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border-radius: 4rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  animation: slideIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideIn {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 40rpx;
    opacity: 1;
  }
}

/* 现代化搜索区域 */
.search-section {
