  text-shadow: 0 1rpx 2rpx rgba(82, 196, 26, 0.2);
}

.validity-badge.valid::before {
  content: '✓';
  margin-right: 4rpx;
  font-weight: 900;
}

.validity-badge.invalid {
  background: linear-gradient(135deg, #FFF2F0 0%, #FFF1F0 100%);
