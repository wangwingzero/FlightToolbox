/* 右上角有效性状态标签 */
.validity-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 18rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 14rpx;
  z-index: 2;
