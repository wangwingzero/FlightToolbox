/* CCAR规章列表页面样式 - 现代化重构版本 */
/* 引入统一设计系统 */
@import "../styles/design-system.wxss";

/* ============================================
   规章列表专用样式优化
   ============================================ */

/* 顶部区域整体优化 */
.modern-header {
  background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFE 100%) !important;
  padding: 24rpx 24rpx 32rpx 24rpx;
  border-bottom: none;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

/* 添加装饰性背景元素 */
.modern-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(24, 144, 255, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.modern-header::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(82, 196, 26, 0.06) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* 面包屑导航优化 */
.modern-breadcrumb {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(240, 240, 240, 0.6);
}

.modern-breadcrumb-item {
  font-size: 24rpx;
  color: #8C8C8C;
  font-weight: 500;
  transition: color 0.2s ease;
}

.modern-breadcrumb-separator {
  margin: 0 12rpx;
  color: #D9D9D9;
  font-size: 20rpx;
  font-weight: 600;
}

.modern-breadcrumb-current {
  color: #1890FF !important;
  font-weight: 600;
  background: linear-gradient(135deg, #E6F7FF 0%, #F0F9FF 100%);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.2);
}

/* 头部内容区域优化 */
.modern-header-content {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  position: relative;
  z-index: 2;
}

.modern-header-left {
  flex: 1;
  margin-right: 24rpx;
}

/* 页面标题优化 */
.modern-header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #262626;
  margin-bottom: 8rpx;
  line-height: 1.2;
  background: linear-gradient(135deg, #262626 0%, #595959 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 页面副标题优化 */
.modern-header-subtitle {
  font-size: 26rpx;
  color: #8C8C8C;
  line-height: 1.4;
  font-weight: 500;
  padding: 4rpx 12rpx;
  background: rgba(140, 140, 140, 0.1);
  border-radius: 8rpx;
  display: inline-block;
  border: 1rpx solid rgba(140, 140, 140, 0.15);
}

/* 筛选控件组优化 */
.modern-filter-controls {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(240, 240, 240, 0.8);
}

/* 筛选按钮优化 */
.modern-filter-button {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
  height: 64rpx;
  padding: 0 16rpx;
  border-radius: 12rpx;
  background: rgba(245, 245, 245, 0.8) !important;
  border: 1rpx solid rgba(240, 240, 240, 0.8);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-size: 22rpx;
  color: #595959;
  font-weight: 600;
  position: relative;
  overflow: hidden;
}

/* 按钮悬浮效果 */
.modern-filter-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s ease;
}

.modern-filter-button:active::before {
  left: 100%;
}

.modern-filter-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 激活状态样式 */
.modern-filter-button.active {
  background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%) !important;
  border-color: #1890FF !important;
  color: #FFFFFF !important;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  transform: translateY(-2rpx);
}

.modern-filter-button.success.active {
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%) !important;
  border-color: #52C41A !important;
  box-shadow: 0 4rpx 16rpx rgba(82, 196, 26, 0.4);
}

.modern-filter-button.error.active {
  background: linear-gradient(135deg, #FF4D4F 0%, #FF7875 100%) !important;
  border-color: #FF4D4F !important;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.4);
}

/* 规章卡片容器 - 增强视觉分隔 */
.modern-card-container {
  padding: 16rpx 24rpx;
  background: #FAFAFA !important;
}

/* 规章卡片列表 - 移除统一背景，让每个卡片独立 */
.modern-card-list {
  background: transparent !important;
  box-shadow: none;
  border-radius: 0;
  overflow: visible;
}

/* 规章卡片项 - 增强独立性和视觉层次 */
.modern-card-item {
  background: #FFFFFF !important;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  padding: 28rpx 24rpx;
  border: 1rpx solid #F0F0F0;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.modern-card-item:last-child {
  margin-bottom: 0;
}

.modern-card-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
  background-color: #FAFAFA !important;
}

/* 规章卡片主要内容区域 */
.modern-card-main {
  flex: 1;
  position: relative;
  padding-bottom: 60rpx; /* 为底部按钮留出空间 */
}

/* 规章编号样式优化 */
.modern-card-number {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  display: inline-block;
}

/* 规章标题样式优化 */
.modern-card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #262626;
  line-height: 1.4;
  margin-bottom: 20rpx;
  padding-right: 90rpx; /* 为右上角有效性徽章留出空间 */
  word-break: break-all;
}

/* 规范性文件数量显示 - 重新设计 */
.modern-card-normative-count {
  display: flex;
  align-items: center;
  margin: 16rpx 0 12rpx 0;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #E6F7FF 0%, #F0F9FF 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #1890FF;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.1);
}

.normative-count-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #1890FF;
}

.normative-count-text {
  font-size: 26rpx;
  color: #1890FF;
  font-weight: 600;
}

/* 规章类别标签 */
.modern-card-footer {
  font-size: 24rpx;
  color: #8C8C8C;
  line-height: 1.5;
  margin-top: 8rpx;
  padding: 8rpx 12rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  display: inline-block;
}

/* 卡片操作区域 - 移动到右下方 */
.modern-card-actions {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 复制链接按钮 - 修复样式和对齐 */
.modern-action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  background: #F8F9FA !important;
  border: 1rpx solid #E8E9EA;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #595959;
  font-weight: 500;
  min-width: 120rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
}

.modern-action-button:active {
  background: #E8E9EA !important;
  transform: scale(0.96);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.modern-action-button.primary {
  background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%) !important;
  color: #FFFFFF !important;
  border-color: #1890FF !important;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.modern-action-button.primary:active {
  background: linear-gradient(135deg, #096DD9 0%, #1890FF 100%) !important;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
}

/* 有效性徽章 - 位置和样式优化 */
.modern-validity-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.modern-validity-badge.valid {
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%) !important;
  color: #FFFFFF !important;
}

.modern-validity-badge.invalid {
  background: linear-gradient(135deg, #FF4D4F 0%, #FF7875 100%) !important;
  color: #FFFFFF !important;
}

