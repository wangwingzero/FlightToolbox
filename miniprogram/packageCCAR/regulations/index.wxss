/* CCAR规章列表页面样式 - 现代化重构版本 */
/* 引入统一设计系统 */
@import "../styles/design-system.wxss";

/* 规范性文件数量显示 */
.modern-card-normative-count {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
  padding: 12rpx 16rpx;
  background: rgba(24, 144, 255, 0.08);
  border-radius: 12rpx;
  border-left: 4rpx solid #1890FF;
}

.normative-count-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.normative-count-text {
  font-size: 26rpx;
  color: #1890FF;
  font-weight: 500;
}