/* Apple风格设计系统 */
page {
  /* 品牌色系 - 精致的航空蓝 */
  --brand-gradient: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  --primary-color: #007AFF;
  --primary-light: rgba(0, 122, 255, 0.1);
  --primary-ultra-light: rgba(0, 122, 255, 0.05);
  
  /* 功能色系 */
  --success-color: #34C759;
  --success-gradient: linear-gradient(135deg, #34C759, #30D158);
  --warning-color: #FF9500;
  --danger-color: #FF3B30;
  --danger-gradient: linear-gradient(135deg, #FF3B30, #FF453A);
  --info-color: #5856D6;
  
  /* 文本色 - iOS规范 */
  --text-primary: #000000;
  --text-secondary: #8E8E93;
  --text-tertiary: #AEAEB2;
  --text-quaternary: #C7C7CC;
  
  /* 背景色 - iOS System */
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-elevated: #FFFFFF;
  
  /* 布局 - Apple圆角标准 */
  --radius-large: 28rpx;
  --radius-medium: 20rpx;
  --radius-small: 12rpx;
  --radius-pill: 999rpx;
  
  /* 阴影 - 细腻柔和 */
  --shadow-small: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-large: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --shadow-colored: 0 4rpx 20rpx rgba(0, 122, 255, 0.15);
}

.page-container {
  min-height: 100vh;
  background-color: var(--bg-primary);
  position: relative;
  padding-bottom: 80rpx;
}

/* 头部 - 优雅的渐变背景 */
.header-bg {
  height: 380rpx;
  background: var(--brand-gradient);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
  box-shadow: var(--shadow-large);
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  overflow: hidden;
}

.header-bg::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
  pointer-events: none;
}

.page-header {
  position: relative;
  z-index: 1;
  padding: 40rpx 48rpx 48rpx;
}

.header-content {
  margin-bottom: 36rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  line-height: 1.25;
  letter-spacing: 0.5rpx;
}

.header-subtitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

/* 筛选器 - iOS Segmented Control */
.filter-tabs {
  display: inline-flex;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  padding: 4rpx;
  border-radius: var(--radius-medium);
  border: 1.5rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12), inset 0 1rpx 0 rgba(255, 255, 255, 0.5);
}

.filter-tab {
  padding: 14rpx 40rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  border-radius: calc(var(--radius-medium) - 4rpx);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  position: relative;
  letter-spacing: 0.3rpx;
}

.filter-tab:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.96);
}

.filter-tab.active {
  background: #FFFFFF;
  color: var(--primary-color);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15), 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  font-weight: 600;
  transform: scale(1.02);
}

/* 列表容器 */
.list-container {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  margin-top: -30rpx;
}

/* 卡片 - Apple Cards */
.regulation-card {
  background: var(--bg-elevated);
  border-radius: var(--radius-large);
  padding: 40rpx 32rpx;
  box-shadow: var(--shadow-medium);
  position: relative;
  display: flex;
  justify-content: space-between;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 0.5rpx solid rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.regulation-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: var(--primary-color);
  opacity: 0;
  transition: opacity 0.3s;
}

.regulation-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-small);
}

.regulation-card:active::before {
  opacity: 1;
}

/* 状态标签 - 精致徽章 */
.validity-tag {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-bottom-left-radius: var(--radius-medium);
  border-top-right-radius: var(--radius-large);
  color: #FFFFFF;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  box-shadow: -2rpx 2rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.validity-tag.valid {
  background: var(--success-gradient);
  box-shadow: -2rpx 2rpx 16rpx rgba(52, 199, 89, 0.3);
}

.validity-tag.abolished {
  background: var(--danger-gradient);
  box-shadow: -2rpx 2rpx 16rpx rgba(255, 59, 48, 0.3);
}

.validity-tag.invalid {
  background: linear-gradient(135deg, #8E8E93, #AEAEB2);
  box-shadow: -2rpx 2rpx 12rpx rgba(142, 142, 147, 0.2);
}

.card-content {
  flex: 1;
  margin-right: 28rpx;
}

.card-header {
  margin-bottom: 20rpx;
}

/* 规章编号 - iOS风格徽章 */
.doc-number {
  font-size: 26rpx;
  color: var(--primary-color);
  background: var(--primary-light);
  padding: 8rpx 20rpx;
  border-radius: var(--radius-pill);
  font-weight: 600;
  display: inline-block;
  letter-spacing: 0.5rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 28rpx;
  line-height: 1.4;
  letter-spacing: 0.3rpx;
}

.card-footer {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
  background: var(--bg-primary);
  padding: 8rpx 18rpx;
  border-radius: var(--radius-small);
  font-weight: 500;
}

.card-action {
  display: flex;
  align-items: flex-end;
  padding-bottom: 6rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 14rpx;
  background: var(--primary-ultra-light);
  border-radius: var(--radius-medium);
  width: 88rpx;
  height: 88rpx;
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid var(--primary-light);
}

.action-btn:active {
  background: var(--primary-light);
  transform: scale(0.92);
}

.action-btn text {
  font-size: 22rpx;
  color: var(--primary-color);
  margin-top: 6rpx;
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
  padding-bottom: 80rpx;
}

.empty-text {
  margin-top: 32rpx;
  font-size: 32rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}
