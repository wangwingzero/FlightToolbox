/* CCAR规范性文件页面样式 */

.container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  padding: 30rpx 20rpx;
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 搜索区域 */
.search-section {
  background: white;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-action {
  color: #1989fa;
  font-size: 28rpx;
  padding: 0 20rpx;
}

/* 内容区域 */
.normatives-content {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #969799;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #c8c9cc;
}

/* 规范性文件列表 */
.normatives-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.normative-item {
  display: flex;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.normative-item:last-child {
  border-bottom: none;
}

.normative-main {
  flex: 1;
  margin-right: 15rpx;
  transition: background-color 0.2s;
  padding: 8rpx;
  border-radius: 8rpx;
}

.normative-main:active {
  background-color: #f7f8fa;
}

.normative-title {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.normative-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.normative-number {
  font-size: 22rpx;
  color: #52c41a;
  background: #f0f9ff;
  padding: 6rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.normative-date {
  font-size: 22rpx;
  color: #969799;
  background: #f5f5f5;
  padding: 6rpx 10rpx;
  border-radius: 10rpx;
}

.normative-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.normative-office {
  font-size: 24rpx;
  color: #969799;
}

.normative-status {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-valid {
  color: #07c160;
  background: #e8f5e8;
}

.status-invalid {
  color: #ff976a;
  background: #fff2e8;
}

.normative-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  justify-content: center;
}

.copy-button,
.detail-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 16rpx;
  background: #f2f3f5;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #646566;
  transition: background-color 0.2s;
  min-width: 120rpx;
}

.copy-button:active,
.detail-button:active {
  background: #e5e6ea;
}

.copy-button text,
.detail-button text {
  margin-left: 6rpx;
}

.copy-button {
  background: #e8f3ff;
  color: #1989fa;
}

.detail-button {
  background: #f0f9ff;
  color: #52c41a;
}

/* 底部统计 */
.stats-footer {
  padding: 30rpx 20rpx;
  text-align: center;
}

.stats-text {
  font-size: 24rpx;
  color: #969799;
  line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 750px) {
  .normative-actions {
    flex-direction: row;
    gap: 8rpx;
  }
  
  .copy-button,
  .detail-button {
    min-width: 80rpx;
    padding: 8rpx 12rpx;
    font-size: 20rpx;
  }
  
  .copy-button text,
  .detail-button text {
    display: none;
  }
}