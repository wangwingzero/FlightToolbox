/* 引入全局变量 */
page {
  --brand-gradient: linear-gradient(135deg, #2B5C9E 0%, #1989fa 100%);
  --primary-color: #1989fa;
  --primary-light: rgba(25, 137, 250, 0.08);
  --text-main: #1f1f1f;
  --text-sub: #858b9c;
  --bg-color: #f4f6f8;
  --card-bg: #ffffff;
  --border-radius: 20rpx;
  --shadow-card: 0 8rpx 24rpx rgba(25, 137, 250, 0.06), 0 2rpx 8rpx rgba(25, 137, 250, 0.04);
}

.page-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  position: relative;
  padding-bottom: 60rpx;
}

.header-bg {
  height: 300rpx;
  background: var(--brand-gradient);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
  box-shadow: 0 4rpx 20rpx rgba(25, 137, 250, 0.2);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.page-header {
  position: relative;
  z-index: 1;
  padding: 30rpx 40rpx 40rpx;
}

.header-content {
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  line-height: 1.4;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
  backdrop-filter: blur(4px);
}

.list-container {
  padding: 0 30rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: -20rpx;
}

.normative-card {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 36rpx 30rpx;
  box-shadow: var(--shadow-card);
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(0,0,0,0.01);
  transition: all 0.2s;
}

.normative-card:active {
  transform: scale(0.99);
  background-color: #fcfcfc;
}

.validity-tag {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-bottom-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  color: #fff;
  font-weight: 600;
  box-shadow: -2rpx 2rpx 8rpx rgba(0,0,0,0.05);
}

.validity-tag.valid {
  background: linear-gradient(135deg, #07c160, #34d07d);
}

.validity-tag.abolished {
  background: linear-gradient(135deg, #ee0a24, #ff4d4f);
}

.validity-tag.invalid {
  background: #c8c9cc;
}

.card-content {
  flex: 1;
  margin-right: 24rpx;
}

.card-header {
  margin-bottom: 16rpx;
}

.doc-number {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(25, 137, 250, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-weight: 600;
  display: inline-block;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.card-footer {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-sub);
  background: #f7f9fc;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.card-action {
  display: flex;
  align-items: center;
  opacity: 0.5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 120rpx;
  opacity: 0.6;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 30rpx;
  color: var(--text-sub);
}
