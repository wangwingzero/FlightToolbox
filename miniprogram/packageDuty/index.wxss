  animation: noticeSlideIn 0.3s ease-out;
}

@keyframes noticeSlideIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.notice-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(255, 152, 0, 0.15);
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.notice-title {
  font-size: 30rpx;
