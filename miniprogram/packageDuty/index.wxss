  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
  position: relative;
  overflow: hidden;
}

.limit-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.limit-card:last-child {
  margin-bottom: 0;
}

.limit-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
  padding-top: 8rpx;
}

.limit-value {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.limit-regulation {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(226, 232, 240, 0.4);
}

.rest-card {
  background: rgba(255, 249, 240, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
}

.rest-card::before {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.rest-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.rest-label {
  font-size: 26rpx;
  color: #64748b;
  margin-right: 8rpx;
}

.rest-value {
  font-size: 26rpx;
  color: #f59e0b;
  font-weight: 600;
}

/* ========== 法规表格标签页 ========== */
.tables-content {
  background: transparent;
}

.table-wrapper {
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
