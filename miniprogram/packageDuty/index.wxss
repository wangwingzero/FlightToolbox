.extend-notice {
  margin: 24rpx 0 0;
  background: linear-gradient(135deg, #fff9e6 0%, #fff3e0 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 152, 0, 0.2);
