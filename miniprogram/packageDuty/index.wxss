/* P章执勤期计算器页面样式 */

.duty-calculator-container {
  min-height: 100vh;
  background: 
    linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 20%, #bae6fd 40%, #f0f9ff 60%, #f0fdfa 80%, #f0f9ff 100%),
    radial-gradient(circle at 30% 40%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(139, 92, 246, 0.03) 0%, transparent 50%);
  padding-bottom: 32rpx;
  position: relative;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 机组类型切换标签 ========== */
.crew-type-tabs {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-bottom: 2rpx solid rgba(226, 232, 240, 0.4);
  box-shadow: 
    0 2rpx 32rpx rgba(148, 163, 184, 0.12),
    0 8rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: sticky;
  top: 0;
  z-index: 100;
}

/* ========== 输入区域卡片 ========== */
.input-section {
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.input-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.input-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.card-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-top: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  display: flex;
  align-items: center;
}

.header-clear-btn {
  background: rgba(255, 255, 255, 0.8) !important;
  border: 2rpx solid rgba(226, 232, 240, 0.6) !important;
  color: #64748b !important;
  border-radius: 16rpx !important;
  font-weight: 600 !important;
  padding: 0 24rpx !important;
  height: 56rpx !important;
  line-height: 56rpx !important;
  font-size: 26rpx !important;
}

.header-clear-btn:active {
  background: rgba(248, 250, 252, 0.9) !important;
  transform: scale(0.95);
}

/* 日期时间选择提示 */
.duty-datetime-wrapper {
  margin: 0 24rpx 16rpx;
  padding: 12rpx 20rpx 16rpx;
  border: 1px dashed rgba(91, 99, 245, 0.45);
  border-radius: 18rpx;
  background: rgba(91, 99, 245, 0.06);
}

.datetime-cell {
  background: transparent !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

.datetime-value {
  font-weight: 600;
  color: #1E293B;
}

.datetime-helper {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #5B63F5;
  letter-spacing: 0.5rpx;
}

.helper-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 执勤期开始时间样式 */
.duty-time-section {
  padding: 28rpx 32rpx 20rpx;
  background: rgba(91, 99, 245, 0.04);
  border-bottom: 1px solid rgba(241, 245, 249, 0.8);
}

.duty-time-header {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.duty-time-definition {
  font-size: 24rpx;
  line-height: 1.6;
  color: #64748b;
}

.facility-group {
  margin-top: 24rpx;
}

.calculate-btn-wrapper {
  margin-top: 32rpx;
}

/* ========== 结果展示卡片 ========== */
.result-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  animation: resultFadeIn 0.4s ease-out;
}

@keyframes resultFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-card {
  background: linear-gradient(135deg, #5B63F5 0%, #7C3AED 100%);
  border-radius: 28rpx;
  padding: 0;
  overflow: hidden;
  box-shadow: 
    0 20rpx 50rpx -12rpx rgba(91, 99, 245, 0.35),
    0 10rpx 25rpx -8rpx rgba(91, 99, 245, 0.25);
}

.result-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.result-body {
  padding: 32rpx;
}

.result-main {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.result-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.result-item.primary {
  background: rgba(255, 255, 255, 0.25);
}

.result-item.info {
  background: rgba(165, 243, 252, 0.25);
  border: 2rpx solid rgba(165, 243, 252, 0.6);
}

.result-item.warning {
  background: rgba(255, 152, 0, 0.2);
  border: 2rpx solid rgba(255, 152, 0, 0.6);
}

.result-item.success {
  background: rgba(76, 175, 80, 0.2);
  border: 2rpx solid rgba(76, 175, 80, 0.6);
}

.result-item.error {
  background: rgba(244, 67, 54, 0.3);
  border: 2rpx solid rgba(244, 67, 54, 0.8);
  animation: shake 0.5s ease-in-out;
}

/* 最晚滑出时间 */
.result-item.latest-takeoff {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  flex-basis: 100%;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(245, 87, 108, 0.4);
}

.result-item.latest-takeoff .result-label {
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
}

.result-item.latest-takeoff .result-value {
  color: #fff;
  font-size: 44rpx;
  font-weight: 800;
  margin-top: 8rpx;
  letter-spacing: 1rpx;
}

.result-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.result-value {
  font-size: 56rpx;
  font-weight: 900;
  color: #ffffff;
  line-height: 1;
  text-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.25);
}

.result-details {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.detail-item {
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-text {
  font-size: 26rpx;
  color: #ffffff;
  line-height: 1.6;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* ========== 最早下次执勤期开始时间 ========== */
.result-item.next-duty {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  flex-basis: 100%;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(118, 75, 162, 0.4);
}

.result-item.next-duty .result-label {
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
}

.result-item.next-duty .result-value {
  color: #fff;
  font-size: 44rpx;
  font-weight: 800;
  margin-top: 8rpx;
  letter-spacing: 1rpx;
}

/* ========== 执勤结束时间 ========== */
.result-item.end-time {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  flex-basis: 100%;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.result-item.end-time .result-label {
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
}

.result-item.end-time .result-value {
  color: #fff;
  font-size: 44rpx;
  font-weight: 800;
  margin-top: 8rpx;
  letter-spacing: 1rpx;
}

.result-sub-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
  font-weight: 600;
}

/* ========== 倒计时部分 ========== */
.countdown-section {
  margin-top: 0;
}

.result-item.countdown {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  flex-basis: 100%;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(245, 87, 108, 0.4);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

.result-item.countdown .result-label {
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  font-weight: 600;
}

.countdown-value {
  color: #fff;
  font-size: 52rpx;
  font-weight: 900;
  margin-top: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.result-item.countdown.expired {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  animation: shake 0.5s ease-in-out;
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-10rpx);
  }
  75% {
    transform: translateX(10rpx);
  }
}

.result-item.countdown.expired .result-label {
  font-size: 32rpx;
  font-weight: 800;
}

/* ========== 意外延长说明高亮 ========== */
.detail-item.extension-note {
  background: rgba(255, 193, 7, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 215, 0, 0.8);
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.3);
}

.extension-highlight {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
}

/* 意外运行情况选项 */
.unexpected-section {
  margin-top: 24rpx;
}

/* 意外运行情况切换按钮 */
.unexpected-tabs {
  display: flex;
  margin: 24rpx 0;
  background: rgba(241, 245, 249, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 8rpx;
  gap: 8rpx;
  border: 2rpx solid rgba(203, 213, 225, 0.5);
}

.unexpected-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  background: transparent;
  border: 2rpx solid transparent;
}

.unexpected-tab.active {
  background: linear-gradient(135deg, #5B63F5 0%, #7C3AED 100%);
  box-shadow: 
    0 4rpx 16rpx rgba(91, 99, 245, 0.3),
    0 8rpx 32rpx rgba(91, 99, 245, 0.15);
  transform: translateY(-2rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.unexpected-tab .tab-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 600;
  margin-bottom: 4rpx;
  transition: all 0.3s ease;
}

.unexpected-tab.active .tab-text {
  color: #ffffff;
  font-weight: 700;
}

.unexpected-tab .tab-desc {
  font-size: 22rpx;
  color: #94a3b8;
  text-align: center;
  line-height: 1.3;
  transition: all 0.3s ease;
}

.unexpected-tab.active .tab-desc {
  color: rgba(255, 255, 255, 0.9);
}

