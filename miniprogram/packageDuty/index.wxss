  align-items: center;
  justify-content: center;
  border-right: 2rpx solid rgba(226, 232, 240, 0.4);
}

.table-cell:last-child {
  border-right: none;
}

.table-cell.small {
  flex: 0.7;
  font-size: 24rpx;
}

.table-cell.time {
  font-size: 22rpx;
