.facility-notes {
  margin-top: 24rpx;
  padding: 24rpx;
  background: rgba(255, 249, 240, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(245, 158, 11, 0.2);
  box-shadow: 
    0 4rpx 16rpx rgba(245, 158, 11, 0.1),
    0 8rpx 32rpx rgba(245, 158, 11, 0.05);
}

.note-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.note-item {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.note-item:last-child {
  margin-bottom: 0;
}

.note-label {
  font-size: 26rpx;
  color: #f59e0b;
  font-weight: 700;
  min-width: 80rpx;
}

.note-text {
  font-size: 26rpx;
  color: #64748b;
  flex: 1;
}

