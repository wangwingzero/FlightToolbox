}

.table-regulation {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 16rpx;
  padding: 16rpx 24rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  border-left: 4rpx solid #667eea;
