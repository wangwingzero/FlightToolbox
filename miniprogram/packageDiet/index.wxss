/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #f8fafc; /* 极淡的蓝灰背景，更护眼 */
  box-sizing: border-box;
  padding-top: 220rpx; /* 给固定头部留出空间 */
}

/* --- 顶部固定区域 --- */
.header-section {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  padding-bottom: 16rpx;
}

.search-wrapper {
  padding: 10rpx 16rpx 0;
}

/* 覆盖 vant search 默认样式，使其更通透 */
.van-search {
  padding: 10px 12px !important;
}
.van-search__content {
  background-color: #f1f5f9 !important; /* 浅灰背景 */
}

/* --- 分类 Tab --- */
.tabs-wrapper {
  height: 80rpx;
  width: 100%;
}

.tabs-scroll {
  height: 100%;
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  padding: 0 24rpx;
  align-items: center;
  height: 100%;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 28rpx;
  margin-right: 20rpx;
  border-radius: 999rpx; /* 胶囊圆角 */
  background-color: #f1f5f9;
  color: #64748b;
  font-size: 26rpx;
  transition: all 0.2s ease;
}

.tab-item.active {
  background-color: #ecfdf5; /* 浅绿背景 */
  color: #059669; /* 森林绿文字 */
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(5, 150, 105, 0.1);
}

.tab-count {
  margin-left: 8rpx;
  font-size: 20rpx;
  background: rgba(0, 0, 0, 0.05);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.tab-item.active .tab-count {
  background: rgba(5, 150, 105, 0.15);
  color: #059669;
}

/* --- 列表内容 --- */
.content-section {
  padding: 24rpx 32rpx 48rpx;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.guide-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  /* 极其微弱的阴影，营造浮起感 */
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.02), 0 8rpx 16rpx rgba(0, 0, 0, 0.02);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.guide-card-hover {
  transform: scale(0.99);
  background-color: #fafafa;
}

