.card-header {
  margin-bottom: 20rpx;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.title-zh {
  font-size: 34rpx; /* 更大 */
  font-weight: 700;
  color: #1e293b;
  letter-spacing: 1rpx;
}

.tag-badge {
  font-size: 20rpx;
  color: #059669;
  background: #ecfdf5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.title-en {
  display: block;
  font-size: 22rpx;
  color: #94a3b8;
  font-weight: 400;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.card-body {
  margin-bottom: 24rpx;
}

.brief-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* 最多显示3行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
}

.view-detail-btn {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  color: #059669;
  font-weight: 500;
  background: #f0fdf4;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
}

/* --- 状态提示 --- */
.loading-state, .end-state {
  padding: 32rpx 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.loading-text, .end-state text {
  font-size: 24rpx;
  color: #94a3b8;
}

.empty-state {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-text {
  font-size: 30rpx;
  color: #64748b;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.empty-sub {
  font-size: 24rpx;
  color: #94a3b8;
}

/* --- 详情弹窗 --- */
.popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.popup-nav {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.nav-close {
  padding: 10rpx;
}

.nav-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #334155;
}

.nav-placeholder {
  width: 40rpx; /* 保持居中 */
}

.popup-scroll {
  flex: 1;
}

.popup-inner {
  padding: 32rpx 40rpx;
}

.detail-header {
  margin-bottom: 40rpx;
}

.detail-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #059669;
  background: #ecfdf5;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.detail-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #0f172a;
  line-height: 1.3;
  margin-bottom: 8rpx;
}

.detail-subtitle {
  font-size: 26rpx;
  color: #64748b;
}

.detail-card {
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.detail-card.theme-green {
  background: #f0fdf4; /* 极淡绿 */
}

.detail-card.theme-orange {
  background: #fff7ed; /* 极淡橙 */
}

.detail-card-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
}

.detail-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.list-item {
  display: flex;
  align-items: flex-start;
}

.list-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #059669;
  margin-top: 14rpx; /* 对齐文字 */
  margin-right: 16rpx;
  flex-shrink: 0;
}

.list-dot.orange {
  background-color: #ea580c;
}

.list-content {
  font-size: 28rpx;
  color: #334155;
  line-height: 1.6;
  flex: 1;
  text-align: justify;
}

.source-note {
  margin-top: 40rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #e2e8f0;
  font-size: 22rpx;
  color: #94a3b8;
  text-align: center;
}

.popup-footer {
  padding: 24rpx 40rpx calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #e2e8f0;
  background: #ffffff;
}

.popup-footer-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 不同分类的颜色语义化 Tab */
.tab-item.active[data-name="慢性病管理"] {
  background-color: #fff7ed;
  color: #ea580c;
  box-shadow: 0 2rpx 8rpx rgba(234, 88, 12, 0.15);
}

.tab-item.active[data-name="机上配餐"] {
  background-color: #eff6ff;
  color: #2563eb;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.15);
}

.tab-item.active[data-name="基础原则"] {
  background-color: #f5f3ff;
  color: #7c3aed;
  box-shadow: 0 2rpx 8rpx rgba(124, 58, 237, 0.15);
}

/* 卡片左侧彩色条，根据 group 区分 */
.guide-card[data-group="慢性病管理"]::before,
.guide-card[data-group="机上配餐"]::before,
.guide-card[data-group="基础原则"]::before {
  content: '';
  position: absolute;
  left: 0;
  top: 28rpx;
  bottom: 28rpx;
  width: 8rpx;
  border-radius: 0 6rpx 6rpx 0;
}

.guide-card[data-group="慢性病管理"]::before {
  background: linear-gradient(180deg, #fb923c 0%, #ea580c 100%);
}

.guide-card[data-group="机上配餐"]::before {
  background: linear-gradient(180deg, #60a5fa 0%, #2563eb 100%);
}

.guide-card[data-group="基础原则"]::before {
  background: linear-gradient(180deg, #a855f7 0%, #7c3aed 100%);
}

/* 对应标签的色彩区分 */
.tag-badge[data-group="慢性病管理"] {
  color: #ea580c;
  background: #fff7ed;
}

.tag-badge[data-group="机上配餐"] {
  color: #2563eb;
  background: #eff6ff;
}

.tag-badge[data-group="基础原则"] {
  color: #7c3aed;
  background: #f5f3ff;
}

/* 小屏手机适配（如 iPhone SE 等） */
@media screen and (max-width: 375px) {
  .container {
    padding-top: 200rpx;
  }

  .content-section {
    padding: 20rpx 24rpx 40rpx;
  }

  .guide-card {
    padding: 28rpx;
    border-radius: 20rpx;
  }

  .title-zh {
    font-size: 32rpx;
  }

  .brief-text {
    font-size: 24rpx;
  }

  .detail-title {
    font-size: 38rpx;
  }

  .list-content {
    font-size: 26rpx;
  }
}
