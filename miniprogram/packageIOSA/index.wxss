/* IOSA审计页面样式 - 参考事件调查页面设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #e0f2ff 0%, #bfdbfe 20%, #93c5fd 40%, #e0f2ff 60%, #dbeafe 80%, #e0f2ff 100%),
    radial-gradient(circle at 30% 40%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(37, 99, 235, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 搜索区域 */
.search-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(59, 130, 246, 0.2);
  box-shadow: 
    0 2rpx 32rpx rgba(59, 130, 246, 0.12),
    0 8rpx 64rpx rgba(59, 130, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  padding: 20rpx 32rpx;
}

.incident-search {
  /* 继承父类样式 */
}

/* 内容区域 */
.tab-content {
  padding: 0 32rpx;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-section {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 结果区域 */
.results-section {
  margin-top: 32rpx;
}

/* 定义单元格样式 */
.definition-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 
    0 2rpx 16rpx rgba(59, 130, 246, 0.08),
    0 4rpx 32rpx rgba(59, 130, 246, 0.04);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.definition-cell:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 24rpx rgba(59, 130, 246, 0.15),
    0 8rpx 48rpx rgba(59, 130, 246, 0.08);
}

.definition-category {
  /* 标签样式 */
}

/* 加载更多区域 */
.load-more-section {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.load-more-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 40rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
}

.load-more-btn:active {
  background: rgba(59, 130, 246, 0.15);
  transform: scale(0.95);
}

.load-more-text {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 500;
}

.load-more-icon {
  font-size: 24rpx;
}

.load-more-tip {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
}

/* 加载动画 */
.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 没有更多数据 */
.no-more-section {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.no-more-icon {
  font-size: 48rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 详情弹窗样式 */
.detail-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

/* 弹窗头部 */
.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f1f5f9;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.back-btn, .close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active, .close-btn:active {
  background: rgba(59, 130, 246, 0.2);
  transform: scale(0.9);
}

.back-icon, .close-icon {
  font-size: 32rpx;
  color: #3b82f6;
}

.detail-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  line-height: 1.4;
  padding: 0 20rpx;
}

/* 滚动内容区域 */
.detail-content {
  flex: 1;
  height: 0;
  padding: 0;
}

/* 详情内容 */
.definition-detail {
  padding-bottom: 40rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

.description-content {
  padding: 32rpx;
  background: #f8fafc;
  margin: 0 32rpx;
  border-radius: 16rpx;
}

.description-text {
  font-size: 30rpx;
  color: #334155;
  line-height: 1.8;
  word-break: break-all;
}

.source-text {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 自定义单元格行样式 - 解决van-cell slot渲染问题 */
.custom-cell-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #ebedf0;
  font-size: 28rpx;
  line-height: 1.4;
}

.custom-cell-row .cell-title {
  color: #323233;
  font-weight: 400;
  flex-shrink: 0;
  width: 160rpx;
}

.custom-cell-row .cell-value {
  color: #646566;
  flex: 1;
  text-align: right;
  word-wrap: break-word;
}

/* 等效术语链接区域 */
.equivalent-terms-links {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.equivalent-terms-links .term-highlight {
  margin-bottom: 8rpx;
}

.equivalent-terms-links .plain-text {
  color: #64748b;
  font-size: 28rpx;
}

/* 参见链接区域 */
.see-also-links {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.see-also-item {
  /* 链接项样式 */
}

.term-highlight {
  display: inline-block;
  background: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
}

.clickable-term:active {
  background: #3b82f6;
  color: white;
  transform: scale(0.95);
}

/* 底部操作栏 */
.detail-footer {
  padding: 32rpx 40rpx;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-top: 2rpx solid #f1f5f9;
}

.footer-buttons {
  display: flex;
  gap: 24rpx;
}

.back-button, .close-button {
  flex: 1;
  height: 88rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.button-icon {
  font-size: 28rpx;
}

/* 统计信息 */
.stats-section {
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin: 32rpx;
  box-shadow: 
    0 4rpx 24rpx rgba(59, 130, 246, 0.08),
    0 8rpx 48rpx rgba(59, 130, 246, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.stats-grid {
  display: flex;
  gap: 40rpx;
  justify-content: center;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3b82f6;
  line-height: 1;
}

.stats-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}