/* IOSA Audit - Premium iOS Design (Enhanced) */

/* ============================================
   Base Layout & Color System
   ============================================ */
page {
  background: linear-gradient(180deg, #F8F9FB 0%, #F2F2F7 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  color: #000000;
  
  /* Enhanced Color Palette with Vibrant Tones */
  --color-blue: #007AFF;
  --color-blue-light: #5AC8FA;
  --color-blue-deep: #0051D5;
  --color-green: #34C759;
  --color-green-light: #30D158;
  --color-green-deep: #248A3D;
  --color-orange: #FF9500;
  --color-orange-light: #FF9F0A;
  --color-orange-deep: #C93400;
  --color-purple: #AF52DE;
  --color-purple-light: #BF5AF2;
  --color-purple-deep: #8E24AA;
  --color-red: #FF3B30;
  --color-red-light: #FF453A;
  --color-red-deep: #D70015;
  --color-indigo: #5856D6;
  --color-indigo-light: #5E5CE6;
  --color-indigo-deep: #3F3DBD;
  
  /* Enhanced Gradients with More Depth */
  --gradient-blue: linear-gradient(135deg, #64B5FF 0%, #007AFF 50%, #0051D5 100%);
  --gradient-green: linear-gradient(135deg, #52D580 0%, #34C759 50%, #248A3D 100%);
  --gradient-orange: linear-gradient(135deg, #FFB340 0%, #FF9500 50%, #FF6B00 100%);
  --gradient-purple: linear-gradient(135deg, #D084FF 0%, #AF52DE 50%, #8E24AA 100%);
  --gradient-red: linear-gradient(135deg, #FF6B65 0%, #FF3B30 50%, #D70015 100%);
  --gradient-indigo: linear-gradient(135deg, #7B79FF 0%, #5856D6 50%, #3F3DBD 100%);
  
  /* Subtle Card Backgrounds */
  --card-bg: #FFFFFF;
  --card-shadow-sm: 0 2rpx 12rpx rgba(0, 0, 0, 0.04), 0 1rpx 4rpx rgba(0, 0, 0, 0.02);
  --card-shadow-md: 0 6rpx 24rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --card-shadow-lg: 0 12rpx 48rpx rgba(0, 0, 0, 0.12), 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  --nav-bg: rgba(248, 249, 251, 0.92);
}

.ios-container {
  min-height: 100vh;
  width: 100%;
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
}

/* ============================================
   Header Section (Sticky + Blur)
   ============================================ */
.header-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(180deg, rgba(248, 249, 251, 0.95) 0%, rgba(248, 249, 251, 0.88) 100%);
  backdrop-filter: blur(40px) saturate(180%);
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03), 0 1rpx 4rpx rgba(0, 0, 0, 0.02);
}

/* Page Title - Enhanced with Depth */
.page-title {
  font-size: 72rpx;
  font-weight: 800;
  padding: 24rpx 32rpx 20rpx;
  color: #1C1C1E;
  letter-spacing: -1.5rpx;
  background: linear-gradient(135deg, #1C1C1E 0%, #3A3A3C 80%, #5A5A5C 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* Search Bar - Clean & Refined iOS Style */
.search-container {
  padding: 0 24rpx 16rpx;
}

/* Force Vant Search to look native iOS */
.van-search {
  padding: 8rpx 0 !important;
}
.van-search__content {
  background: rgba(118, 118, 128, 0.12) !important;
  border-radius: 22rpx !important;
  border: none;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.van-search__content:focus-within {
  background: rgba(118, 118, 128, 0.15) !important;
  box-shadow: 
    inset 0 2rpx 6rpx rgba(0, 0, 0, 0.08),
    0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

/* Categories (Pills) - Refined Capsule Design */
.category-scroll {
  height: 88rpx;
  width: 100%;
  margin-top: 16rpx;
}

.category-wrapper {
  display: flex;
  padding: 0 24rpx;
  align-items: center;
  height: 100%;
  gap: 12rpx;
}

.category-chip {
  padding: 14rpx 32rpx;
  border-radius: 40rpx;
  background: rgba(118, 118, 128, 0.08);
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s cubic-bezier(0.34, 1.25, 0.64, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.chip-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #8E8E93;
  transition: all 0.25s ease;
  white-space: nowrap;
  letter-spacing: 0.3rpx;
}

/* Active State - Different colors for each category */
.category-chip.active {
  background: #007AFF;
  box-shadow: 
    0 6rpx 20rpx rgba(0, 122, 255, 0.35),
    0 2rpx 8rpx rgba(0, 122, 255, 0.2);
  transform: scale(1.05);
}

.category-chip.active .chip-text {
  color: #FFFFFF;
  font-weight: 700;
}

/* Individual Category Colors */
.category-chip.active[data-name="全部"] {
  background: var(--gradient-blue);
  box-shadow: 
    0 6rpx 20rpx rgba(0, 122, 255, 0.35),
    0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

.category-chip.active[data-name="A-D"] {
  background: var(--gradient-blue);
  box-shadow: 
    0 6rpx 20rpx rgba(0, 122, 255, 0.35),
    0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

.category-chip.active[data-name="E-H"] {
  background: var(--gradient-green);
  box-shadow: 
    0 6rpx 20rpx rgba(52, 199, 89, 0.35),
    0 2rpx 8rpx rgba(52, 199, 89, 0.2);
}

.category-chip.active[data-name="I-L"] {
  background: var(--gradient-orange);
  box-shadow: 
    0 6rpx 20rpx rgba(255, 149, 0, 0.35),
    0 2rpx 8rpx rgba(255, 149, 0, 0.2);
}

.category-chip.active[data-name="M-P"] {
  background: var(--gradient-purple);
  box-shadow: 
    0 6rpx 20rpx rgba(175, 82, 222, 0.35),
    0 2rpx 8rpx rgba(175, 82, 222, 0.2);
}

.category-chip.active[data-name="Q-T"] {
  background: var(--gradient-red);
  box-shadow: 
    0 6rpx 20rpx rgba(255, 59, 48, 0.35),
    0 2rpx 8rpx rgba(255, 59, 48, 0.2);
}

.category-chip.active[data-name="U-Z"] {
  background: var(--gradient-indigo);
  box-shadow: 
    0 6rpx 20rpx rgba(88, 86, 214, 0.35),
    0 2rpx 8rpx rgba(88, 86, 214, 0.2);
}

/* ============================================
   Content & List
   ============================================ */
.content-section {
  padding: 36rpx 32rpx;
}

.list-header {
  padding: 0 12rpx 24rpx;
}

.list-count {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1.2rpx;
}

/* Card Styling - Modern Elegant Design with Enhanced Visual Hierarchy */
.term-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx 36rpx;
  margin-bottom: 24rpx;
  position: relative;
  display: flex;
  align-items: center;
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.04),
    0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  border: 2rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.25s cubic-bezier(0.34, 1.25, 0.64, 1);
  overflow: hidden;
  min-height: 160rpx;
}

/* Dynamic Colored Background Glow */
.term-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  opacity: 1;
  transition: opacity 0.3s ease;
  pointer-events: none;
  z-index: 0;
}

.term-card:active {
  transform: scale(0.975);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.06),
    0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

/* Category-Specific Background Tints - Enhanced with Radial Gradients */
.term-card.color-blue::before { 
  background: 
    radial-gradient(circle at 0% 50%, rgba(0, 122, 255, 0.08) 0%, transparent 60%),
    linear-gradient(90deg, rgba(0, 122, 255, 0.04) 0%, transparent 50%);
}
.term-card.color-green::before { 
  background: 
    radial-gradient(circle at 0% 50%, rgba(52, 199, 89, 0.08) 0%, transparent 60%),
    linear-gradient(90deg, rgba(52, 199, 89, 0.04) 0%, transparent 50%);
}
.term-card.color-orange::before { 
  background: 
    radial-gradient(circle at 0% 50%, rgba(255, 149, 0, 0.08) 0%, transparent 60%),
    linear-gradient(90deg, rgba(255, 149, 0, 0.04) 0%, transparent 50%);
}
.term-card.color-purple::before { 
  background: 
    radial-gradient(circle at 0% 50%, rgba(175, 82, 222, 0.08) 0%, transparent 60%),
    linear-gradient(90deg, rgba(175, 82, 222, 0.04) 0%, transparent 50%);
}
.term-card.color-red::before { 
  background: 
    radial-gradient(circle at 0% 50%, rgba(255, 59, 48, 0.08) 0%, transparent 60%),
    linear-gradient(90deg, rgba(255, 59, 48, 0.04) 0%, transparent 50%);
}
.term-card.color-indigo::before { 
  background: 
    radial-gradient(circle at 0% 50%, rgba(88, 86, 214, 0.08) 0%, transparent 60%),
    linear-gradient(90deg, rgba(88, 86, 214, 0.04) 0%, transparent 50%);
}

/* Color Indicators - Bolder & More Prominent */
.card-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  border-radius: 24rpx 0 0 24rpx;
  background: #E5E5EA;
  z-index: 1;
  transition: all 0.3s ease;
}

.term-card.color-blue .card-indicator { 
  background: var(--gradient-blue);
  box-shadow: 4rpx 0 12rpx rgba(0, 122, 255, 0.25);
}
.term-card.color-green .card-indicator { 
  background: var(--gradient-green);
  box-shadow: 4rpx 0 12rpx rgba(52, 199, 89, 0.25);
}
.term-card.color-orange .card-indicator { 
  background: var(--gradient-orange);
  box-shadow: 4rpx 0 12rpx rgba(255, 149, 0, 0.25);
}
.term-card.color-purple .card-indicator { 
  background: var(--gradient-purple);
  box-shadow: 4rpx 0 12rpx rgba(175, 82, 222, 0.25);
}
.term-card.color-red .card-indicator { 
  background: var(--gradient-red);
  box-shadow: 4rpx 0 12rpx rgba(255, 59, 48, 0.25);
}
.term-card.color-indigo .card-indicator { 
  background: var(--gradient-indigo);
  box-shadow: 4rpx 0 12rpx rgba(88, 86, 214, 0.25);
}

/* Inner Content - Improved Spacing */
.card-content {
  flex: 1;
  padding-left: 28rpx;
  padding-right: 16rpx;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.term-english {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C1C1E;
  line-height: 1.4;
  word-break: break-word;
  letter-spacing: -0.2rpx;
  flex: 1;
  max-width: 100%;
}

/* Category Badge - Refined Capsule Design */
.term-category-badge {
  font-size: 22rpx;
  font-weight: 900;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #F2F2F7 0%, #E5E5EA 100%);
  color: #8E8E93;
  line-height: 1.2;
  min-width: 48rpx;
  text-align: center;
  letter-spacing: 1rpx;
  text-transform: uppercase;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  align-self: flex-start;
}

.term-card.color-blue .term-category-badge { 
  color: #FFFFFF; 
  background: var(--gradient-blue);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 122, 255, 0.4),
    0 2rpx 4rpx rgba(0, 122, 255, 0.25);
}
.term-card.color-green .term-category-badge { 
  color: #FFFFFF; 
  background: var(--gradient-green);
  box-shadow: 
    0 4rpx 12rpx rgba(52, 199, 89, 0.4),
    0 2rpx 4rpx rgba(52, 199, 89, 0.25);
}
.term-card.color-orange .term-category-badge { 
  color: #FFFFFF; 
  background: var(--gradient-orange);
  box-shadow: 
    0 4rpx 12rpx rgba(255, 149, 0, 0.4),
    0 2rpx 4rpx rgba(255, 149, 0, 0.25);
}
.term-card.color-purple .term-category-badge { 
  color: #FFFFFF; 
  background: var(--gradient-purple);
  box-shadow: 
    0 4rpx 12rpx rgba(175, 82, 222, 0.4),
    0 2rpx 4rpx rgba(175, 82, 222, 0.25);
}
.term-card.color-red .term-category-badge { 
  color: #FFFFFF; 
  background: var(--gradient-red);
  box-shadow: 
    0 4rpx 12rpx rgba(255, 59, 48, 0.4),
    0 2rpx 4rpx rgba(255, 59, 48, 0.25);
}
.term-card.color-indigo .term-category-badge { 
  color: #FFFFFF; 
  background: var(--gradient-indigo);
  box-shadow: 
    0 4rpx 12rpx rgba(88, 86, 214, 0.4),
    0 2rpx 4rpx rgba(88, 86, 214, 0.25);
}

.term-chinese {
  font-size: 28rpx;
  color: #636366;
  line-height: 1.6;
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

.card-arrow {
  color: #C7C7CC;
  font-size: 32rpx;
  position: relative;
  z-index: 2;
  flex-shrink: 0;
  opacity: 0.5;
  transition: all 0.25s ease;
  align-self: center;
}

.term-card:active .card-arrow {
  opacity: 0.8;
  transform: translateX(4rpx);
}

/* ============================================
   Load More & States
   ============================================ */
.load-more-trigger {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  color: #007AFF;
  font-size: 28rpx;
  font-weight: 600;
  background: rgba(0, 122, 255, 0.05);
  border-radius: 20rpx;
  border: 2rpx solid rgba(0, 122, 255, 0.15);
  transition: all 0.25s ease;
}

.load-more-trigger:active {
  opacity: 0.7;
  transform: scale(0.98);
  background: rgba(0, 122, 255, 0.08);
}

.bottom-loading {
  display: flex;
  justify-content: center;
  padding: 48rpx;
}

.end-mark {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 72rpx 0;
  gap: 24rpx;
}

.end-mark::before,
.end-mark::after {
  content: '';
  width: 120rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(0, 0, 0, 0.08) 50%, transparent 100%);
}

.end-dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(0, 0, 0, 0.12);
  border-radius: 50%;
}

.loading-container {
  padding-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 50vh;
}

.empty-state {
  padding-top: 200rpx;
  padding-bottom: 100rpx;
  text-align: center;
  min-height: 50vh;
}

/* ============================================
   Detail Popup (iOS Sheet)
   ============================================ */
.sheet-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #F2F2F7;
}

.sheet-header {
  flex-shrink: 0;
  background: linear-gradient(180deg, rgba(248, 249, 251, 0.98) 0%, rgba(248, 249, 251, 0.92) 100%);
  backdrop-filter: blur(30px) saturate(180%);
  padding-bottom: 16rpx;
  position: relative;
  border-radius: 28rpx 28rpx 0 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04), 0 1rpx 4rpx rgba(0, 0, 0, 0.02);
}

.sheet-handle {
  width: 80rpx;
  height: 10rpx;
  background: rgba(60, 60, 67, 0.3);
  border-radius: 10rpx;
  margin: 20rpx auto 12rpx;
}

.sheet-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 32rpx 12rpx;
  height: 88rpx;
}

.nav-btn {
  font-size: 34rpx;
  color: #007AFF;
  font-weight: 400;
  display: flex;
  align-items: center;
  transition: all 0.25s ease;
  min-width: 80rpx;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
}

.nav-btn:active {
  opacity: 0.6;
  background: rgba(0, 122, 255, 0.08);
  transform: scale(0.96);
}

.nav-btn.back text {
  margin-left: 8rpx;
}

.nav-btn.done {
  font-weight: 600;
}

.nav-left,
.nav-right {
  min-width: 80rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.sheet-content {
  flex: 1;
  overflow-y: auto;
}

.detail-body {
  padding: 24rpx 32rpx 60rpx;
}

/* Detail Cards - Clean & Modern Design */
.detail-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

.header-card {
  text-align: center;
  padding: 48rpx 32rpx;
  position: relative;
  overflow: hidden;
  border-radius: 24rpx;
  background: linear-gradient(180deg, rgba(0, 122, 255, 0.02) 0%, #FFFFFF 100%);
}

.detail-english {
  font-size: 38rpx;
  font-weight: 700;
  color: #1C1C1E;
  margin-bottom: 20rpx;
  line-height: 1.35;
  letter-spacing: -0.3rpx;
}

.detail-chinese {
  font-size: 30rpx;
  color: #3A3A3C;
  margin-bottom: 28rpx;
  font-weight: 600;
  line-height: 1.5;
  letter-spacing: 0.2rpx;
}

.detail-tag {
  display: inline-block;
  background: var(--gradient-blue);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 800;
  padding: 10rpx 24rpx;
  border-radius: 100rpx;
  box-shadow: 
    0 4rpx 16rpx rgba(0, 122, 255, 0.3),
    0 2rpx 6rpx rgba(0, 122, 255, 0.2);
  letter-spacing: 0.8rpx;
  text-transform: uppercase;
}

.section-title {
  font-size: 24rpx;
  color: #6D6D72;
  margin-bottom: 20rpx;
  margin-left: 8rpx;
  margin-top: 16rpx;
  font-weight: 700;
  letter-spacing: 1.2rpx;
  text-transform: uppercase;
}

.content-card {
  padding: 0;
  overflow: hidden;
}

.detail-text {
  padding: 36rpx;
  font-size: 34rpx;
  line-height: 1.8;
  color: #1C1C1E;
  letter-spacing: 0.3rpx;
  font-weight: 500;
}

.detail-text.secondary {
  color: #8E8E93;
  font-size: 30rpx;
}

.detail-text.source {
  font-size: 28rpx;
  color: #8E8E93;
  font-style: italic;
  font-weight: 400;
}

/* Links in Detail - Refined iOS List Style */
.link-group {
  display: flex;
  flex-direction: column;
}

.link-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  position: relative;
  background: transparent;
}

.link-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--gradient-blue);
  opacity: 0;
  transition: opacity 0.2s ease;
  border-radius: 0 6rpx 6rpx 0;
}

.link-item:last-child {
  border-bottom: none;
}

.link-item:active {
  background: rgba(0, 122, 255, 0.05);
}

.link-item:active::before {
  opacity: 1;
}

.link-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #007AFF;
  flex: 1;
  padding-right: 16rpx;
  letter-spacing: 0.1rpx;
}

.bottom-spacer {
  height: 100rpx;
}

/* Ads */
.ad-wrapper, .footer-ad {
  margin: 32rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}