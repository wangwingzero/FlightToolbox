/* IOSA审计页面样式 - 参考事件调查页面设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #e0f2ff 0%, #bfdbfe 20%, #93c5fd 40%, #e0f2ff 60%, #dbeafe 80%, #e0f2ff 100%),
    radial-gradient(circle at 30% 40%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(37, 99, 235, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 分类菜单系统 */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(59, 130, 246, 0.2);
  box-shadow:
    0 2rpx 32rpx rgba(59, 130, 246, 0.12),
    0 8rpx 64rpx rgba(59, 130, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.category-tabs-scroll {
  height: 140rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  gap: 24rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 80rpx;
}

.category-tab-item.active {
  background: rgba(59, 130, 246, 0.1);
  transform: scale(1.05);
}

.category-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #94a3b8;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.category-tab-item.active .category-badge {
  background: #3b82f6;
  box-shadow:
    0 4rpx 16rpx rgba(59, 130, 246, 0.3),
    0 8rpx 32rpx rgba(59, 130, 246, 0.15);
  transform: scale(1.1);
}

.category-title {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.category-tab-item.active .category-title {
  color: #3b82f6;
  font-weight: 600;
}

/* 搜索区域 */
.search-section {
  background: transparent;
  padding: 24rpx 32rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.incident-search::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-section .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow:
    0 8rpx 32rpx rgba(59, 130, 246, 0.12),
    0 16rpx 64rpx rgba(59, 130, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.5);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.search-section .van-search:focus-within {
  border-color: rgba(59, 130, 246, 0.4);
  box-shadow:
    0 12rpx 40rpx rgba(59, 130, 246, 0.15),
    0 20rpx 80rpx rgba(59, 130, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

/* 内容区域 */
.tab-content {
  padding: 0 32rpx;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-section {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 结果区域 */
.results-section {
  margin-top: 32rpx;
}

/* 定义单元格样式 */
.definition-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 
    0 2rpx 16rpx rgba(59, 130, 246, 0.08),
    0 4rpx 32rpx rgba(59, 130, 246, 0.04);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.definition-cell:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 24rpx rgba(59, 130, 246, 0.15),
    0 8rpx 48rpx rgba(59, 130, 246, 0.08);
}

.definition-category {
  /* 标签样式 */
}

/* 加载更多区域 */
.load-more-section {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.load-more-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 40rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
}

.load-more-btn:active {
  background: rgba(59, 130, 246, 0.15);
  transform: scale(0.95);
}

.load-more-text {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 500;
}

.load-more-icon {
  font-size: 24rpx;
}

.load-more-tip {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
}

/* 加载动画 */
.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 没有更多数据 */
.no-more-section {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.no-more-icon {
  font-size: 48rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 详情弹窗样式 - 精美现代化设计 */
.detail-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #ffffff 0%, #fefefe 50%, #fdfdfd 100%);
  position: relative;
  overflow: hidden;
}

.detail-popup-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(135deg, #1e40af 0%, #3b82f6 35%, #60a5fa 70%, #93c5fd 100%);
  opacity: 0.03;
  z-index: 0;
}

/* 弹窗头部 - 航空专业风格 */
.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 48rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.98) 100%);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-bottom: 1rpx solid rgba(59, 130, 246, 0.08);
  box-shadow: 
    0 2rpx 24rpx rgba(30, 64, 175, 0.06),
    0 8rpx 64rpx rgba(59, 130, 246, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: sticky;
  top: 0;
  z-index: 50;
}

.header-left, .header-right {
  width: 88rpx;
  display: flex;
  justify-content: center;
}

.back-btn, .close-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(37, 99, 235, 0.12) 100%);
  border: 1rpx solid rgba(59, 130, 246, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 
    0 2rpx 8rpx rgba(59, 130, 246, 0.12),
    0 4rpx 16rpx rgba(59, 130, 246, 0.08);
}

.back-btn:active, .close-btn:active {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  transform: scale(0.92) translateY(1rpx);
  box-shadow: 
    0 4rpx 16rpx rgba(59, 130, 246, 0.25),
    0 8rpx 32rpx rgba(59, 130, 246, 0.15);
}

.back-btn:active .back-icon,
.back-btn:active .close-icon,
.close-btn:active .back-icon,
.close-btn:active .close-icon {
  color: #ffffff;
}

.back-icon, .close-icon {
  font-size: 36rpx;
  color: #3b82f6;
  font-weight: 600;
  transition: color 0.3s ease;
}

.detail-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  line-height: 1.3;
  padding: 0 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(30, 41, 59, 0.1);
  letter-spacing: 0.5rpx;
}

/* 滚动内容区域 */
.detail-content {
  flex: 1;
  height: 0;
  padding: 0;
  background: transparent;
  position: relative;
  z-index: 1;
}

/* 详情内容 */
.definition-detail {
  padding: 24rpx 0 80rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

/* 现代化卡片容器 */
.description-content {
  padding: 32rpx;
  background: #f8fafc;
  margin: 0 32rpx;
  border-radius: 16rpx;
}

.description-text {
  font-size: 32rpx;
  color: #334155;
  line-height: 1.75;
  word-break: break-all;
  font-weight: 400;
  letter-spacing: 0.3rpx;
  text-align: justify;
}

.source-text {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 术语信息卡片 - 简化样式 */
.detail-section .van-cell-group {
  margin: 0 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #ffffff;
}

.detail-section .van-cell-group::before {
  display: none; /* 移除默认边框 */
}

.detail-section .van-cell-group__title {
  padding: 24rpx 32rpx 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #3b82f6;
}

.detail-section .van-cell {
  background: transparent;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid rgba(59, 130, 246, 0.06);
  transition: all 0.3s ease;
}

.detail-section .van-cell:last-child {
  border-bottom: none;
}

.detail-section .van-cell__title {
  font-size: 30rpx;
  font-weight: 500;
  color: #475569;
  letter-spacing: 0.3rpx;
}

.detail-section .van-cell__value {
  font-size: 30rpx;
  color: #334155;
  font-weight: 400;
  text-align: right;
  word-wrap: break-word;
  line-height: 1.5;
}

/* 等效术语和参见链接的容器样式优化 */
.equivalent-terms-content {
  padding: 0;
  margin: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  width: 100%;
}

.equivalent-terms-links {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: flex-start;
  justify-content: flex-end;
  width: 100%;
}

.equivalent-terms-links .term-highlight {
  margin-bottom: 0;
}

.equivalent-terms-links .plain-text,
.plain-text {
  color: #64748b;
  font-size: 30rpx;
  line-height: 1.6;
  text-align: right;
  display: block;
  width: 100%;
}

/* 参见链接区域样式优化 */
.see-also-links {
  padding: 32rpx;
  margin: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: flex-start;
  justify-content: flex-start;
  width: 100%;
  box-sizing: border-box;
}

.see-also-item {
  /* 允许术语标签自然换行 */
  flex-shrink: 1;
  min-width: 0;
  max-width: 100%;
}

/* 精美的术语高亮标签 */
.term-highlight {
  display: inline-block;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(37, 99, 235, 0.12) 100%);
  color: #3b82f6;
  padding: 14rpx 22rpx;
  border-radius: 26rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  letter-spacing: 0.3rpx;
  text-shadow: 0 1rpx 2rpx rgba(59, 130, 246, 0.1);
  box-shadow: 
    0 2rpx 8rpx rgba(59, 130, 246, 0.12),
    0 4rpx 16rpx rgba(59, 130, 246, 0.08);
  word-break: break-all;
  overflow-wrap: break-word;
  white-space: normal;
  line-height: 1.4;
  max-width: calc(100vw - 160rpx);
  box-sizing: border-box;
}

.term-highlight::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.clickable-term:active {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  transform: scale(0.95) translateY(1rpx);
  border-color: #2563eb;
  box-shadow: 
    0 4rpx 16rpx rgba(59, 130, 246, 0.3),
    0 8rpx 32rpx rgba(37, 99, 235, 0.2);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.clickable-term:active::before {
  left: 100%;
}

/* 底部操作栏 - 现代化专业设计 */
.detail-footer {
  padding: 36rpx 48rpx 42rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(248, 250, 252, 0.99) 100%);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-top: 1rpx solid rgba(59, 130, 246, 0.08);
  box-shadow: 
    0 -4rpx 24rpx rgba(30, 64, 175, 0.06),
    0 -8rpx 48rpx rgba(59, 130, 246, 0.04);
  position: relative;
}

.detail-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #3b82f6 25%, #60a5fa 50%, #93c5fd 75%, transparent 100%);
  opacity: 0.4;
}

.footer-buttons {
  display: flex;
  gap: 32rpx;
  align-items: center;
}

.back-button, .close-button {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(37, 99, 235, 0.12) 100%);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  box-shadow: 
    0 2rpx 16rpx rgba(59, 130, 246, 0.12),
    0 4rpx 32rpx rgba(59, 130, 246, 0.08);
}

.back-button:active {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(37, 99, 235, 0.2) 100%);
  transform: scale(0.96) translateY(1rpx);
  box-shadow: 
    0 4rpx 20rpx rgba(59, 130, 246, 0.2),
    0 8rpx 40rpx rgba(59, 130, 246, 0.12);
}

.close-button {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: 1rpx solid #2563eb;
  color: #ffffff;
  box-shadow: 
    0 4rpx 20rpx rgba(59, 130, 246, 0.25),
    0 8rpx 40rpx rgba(37, 99, 235, 0.15);
}

.close-button:active {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  transform: scale(0.96) translateY(1rpx);
  box-shadow: 
    0 6rpx 24rpx rgba(59, 130, 246, 0.3),
    0 12rpx 48rpx rgba(37, 99, 235, 0.2);
}

.button-icon {
  font-size: 32rpx;
  font-weight: 600;
}

/* 单按钮样式 */
.detail-footer .van-button {
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: 1rpx solid #2563eb;
  box-shadow: 
    0 4rpx 20rpx rgba(59, 130, 246, 0.25),
    0 8rpx 40rpx rgba(37, 99, 235, 0.15);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.detail-footer .van-button:active {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  transform: scale(0.98) translateY(1rpx);
  box-shadow: 
    0 6rpx 24rpx rgba(59, 130, 246, 0.3),
    0 12rpx 48rpx rgba(37, 99, 235, 0.2);
}

/* 响应式和细节优化 */

/* 弹窗容器的呼吸动画效果 */
@keyframes popupFadeIn {
  0% {
    opacity: 0;
    transform: translateY(80rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.detail-popup-container {
  animation: popupFadeIn 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 卡片组悬停效果（虽然小程序不支持hover，但可以通过JS实现类似效果） */
.detail-section .van-cell-group {
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 优化长文本显示效果 */
.description-text {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

/* 术语标签的微动画效果 */
.term-highlight::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  pointer-events: none;
}

.clickable-term:active::after {
  width: 200%;
  height: 200%;
}

/* 优化滚动条样式（如果小程序支持） */
.detail-content::-webkit-scrollbar {
  display: none;
}

/* 针对不同屏幕尺寸的响应式优化 */
@media screen and (max-width: 320px) {
  .detail-title {
    font-size: 30rpx;
  }
  
  .description-text {
    font-size: 28rpx;
  }
  
  .term-highlight {
    font-size: 26rpx;
    padding: 12rpx 18rpx;
  }
}

@media screen and (min-width: 768px) {
  .detail-header {
    padding: 40rpx 56rpx;
  }
  
  .detail-footer {
    padding: 40rpx 56rpx 48rpx;
  }
  
  .description-content {
    margin: 0 48rpx;
    padding: 48rpx 44rpx;
  }
}