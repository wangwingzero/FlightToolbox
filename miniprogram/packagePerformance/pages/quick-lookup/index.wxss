.container {
  min-height: 100vh;
  background: #f7f8fa;
}

.loading-container {
  display: flex;
  height: 70vh;
  align-items: center;
  justify-content: center;
}

.filters {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 0 32rpx;
}

.chip {
  padding: 12rpx 20rpx;
  background: #eef2ff;
  color: #6366f1;
  border-radius: 9999rpx;
  font-size: 24rpx;
}

.chip.active {
  background: #6366f1;
  color: white;
}

.list {
  padding: 16rpx 32rpx 32rpx 32rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.card-title .name {
  font-size: 30rpx;
  font-weight: 600;
}

.summary {
  color: #666;
  font-size: 26rpx;
  line-height: 1.6;
}

.empty-state {
  padding: 120rpx 32rpx;
}

.empty-img{width:360rpx;height:220rpx}
.empty-block{display:flex;flex-direction:column;align-items:center;justify-content:center;gap:16rpx;min-height:300rpx;background:#fff;margin:0 32rpx;border-radius:16rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,.06)}
.empty-icon{font-size:64rpx}
.empty-text{color:#6b7280;font-size:26rpx}
