.container { min-height: 100vh; background: #f7f8fa; }
.loading-container { display:flex; height:70vh; align-items:center; justify-content:center; }
.header { display:flex; align-items:baseline; gap:16rpx; padding:24rpx 32rpx; }
.header .query { font-size: 32rpx; font-weight: 700; color:#111827; }
.header .count { color:#6b7280; font-size: 26rpx; }
.list { padding: 8rpx 32rpx 32rpx 32rpx; }
.item { background:#fff; border-radius:20rpx; padding:24rpx; margin-bottom:20rpx; box-shadow:0 8rpx 20rpx rgba(0,0,0,0.04); }
.title-row { display:flex; align-items:center; gap:12rpx; margin-bottom:6rpx; }
.code { color:#6b7280; font-size:24rpx; }
.title { font-size:30rpx; font-weight:600; color:#111827; }
.subtitle { color:#6b7280; font-size:24rpx; margin-bottom:6rpx; }
.summary { color:#374151; font-size:26rpx; line-height:1.6; }
.empty-state { padding: 120rpx 32rpx; }
.empty-block{display:flex;flex-direction:column;align-items:center;justify-content:center;gap:16rpx;min-height:300rpx;background:#fff;margin:0 32rpx;border-radius:16rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,.06)}
.empty-icon{font-size:64rpx}
.empty-text{color:#6b7280;font-size:26rpx}

.empty-img{width:360rpx;height:220rpx}
