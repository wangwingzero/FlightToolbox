/**
 * 章节详情页样式
 */

/* ==================== 容器 ==================== */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e9ecef 100%);
}

.page-content {
  padding-bottom: 40rpx;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* ==================== 面包屑导航 ==================== */
.breadcrumb {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: white;
  font-size: 26rpx;
  color: #666;
}

.breadcrumb-item {
  color: #6366f1;
}

.breadcrumb-divider {
  margin: 0 12rpx;
  color: #ccc;
}

.breadcrumb-current {
  color: #333;
  font-weight: 500;
}

/* ==================== 章节标题卡片 ==================== */
.section-title-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 24rpx 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  color: white;
}

.title-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.title-icon {
  font-size: 72rpx;
  margin-right: 24rpx;
}

.title-text-wrapper {
  flex: 1;
}

.title-code {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.title-zh {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.title-en {
  font-size: 28rpx;
  opacity: 0.9;
  font-style: italic;
}

.title-description {
  font-size: 28rpx;
  opacity: 0.85;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.title-meta {
  display: flex;
  gap: 16rpx;
}

/* ==================== 子章节列表 ==================== */
.subsections-list {
  padding: 0 32rpx;
}

.subsection-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.subsection-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.subsection-left {
  flex: 1;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.subsection-code {
  font-size: 40rpx;
  font-weight: bold;
  color: #6366f1;
  line-height: 1;
  flex-shrink: 0;
}

.subsection-title-wrapper {
  flex: 1;
}

.subsection-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.subsection-title-en {
  font-size: 26rpx;
  color: #666;
  font-style: italic;
}

.subsection-page {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

/* ==================== 主题列表 ==================== */
.topics-list {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.topic-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid #6366f1;
}

.topic-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.topic-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #6366f1;
  flex-shrink: 0;
}

.topic-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.topic-title-en {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-style: italic;
}

.topic-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.keyword-tag {
  margin: 0 !important;
}

.topic-regulations {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.regulations-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.regulations-items {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.regulation-item {
  font-size: 24rpx;
  color: #6366f1;
  background: #eef2ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.topic-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* ==================== 空状态 ==================== */
.empty-state {
  padding: 120rpx 32rpx;
}

/* 本地空状态占位样式 */
.empty-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  min-height: 300rpx;
  background: #fff;
  margin: 0 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.empty-icon {
  font-size: 64rpx;
}

.empty-text {
  color: #6b7280;
  font-size: 26rpx;
}

.empty-img {
  width: 360rpx;
  height: 220rpx;
}
