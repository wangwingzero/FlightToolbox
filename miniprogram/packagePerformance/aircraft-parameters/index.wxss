    0 0 0 1rpx rgba(255, 255, 255, 0.5) inset;
  position: relative;
  z-index: 2;
  overflow: hidden;
}

.search-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
  border-radius: 32rpx;
  z-index: -1;
