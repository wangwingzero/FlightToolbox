/**
 * 飞机性能 - 分包首页样式
 * 设计风格：渐变卡片 + 现代化布局
 */

/* ==================== 容器 ==================== */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e9ecef 100%);
}

.page-content {
  padding-bottom: 40rpx;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* ==================== 搜索框 ==================== */
.search-section {
  padding: 24rpx 32rpx;
  background: white;
}

.premium-search-box {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 48rpx;
  padding: 20rpx 32rpx;
  gap: 16rpx;
}

.premium-search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.premium-search-input::placeholder {
  color: #999;
}

.quick-lookup-entry {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin: 16rpx 32rpx 0 32rpx;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.25);
}

.quick-lookup-entry:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.quick-lookup-entry .entry-icon {
  font-size: 40rpx;
}

.quick-lookup-entry .entry-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* ==================== 文档信息卡片 ==================== */
.doc-info-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 24rpx 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  color: white;
}

.doc-icon {
  font-size: 72rpx;
  margin-right: 24rpx;
}

.doc-content {
  flex: 1;
}

.doc-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.doc-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.doc-meta {
  font-size: 22rpx;
  opacity: 0.8;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.doc-divider {
  opacity: 0.5;
}

/* ==================== 章节列表 ==================== */
.sections-container {
  padding: 0 32rpx;
}

.section-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  color: white;
  transition: transform 0.2s;
}

.section-card:active {
  transform: scale(0.98);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-icon {
  font-size: 64rpx;
  margin-right: 20rpx;
}

.section-title-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-code {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.2;
}

.section-title-en {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
  font-style: italic;
}

.section-description {
  font-size: 28rpx;
  opacity: 0.85;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.section-stats {
  display: flex;
  gap: 16rpx;
  margin-top: 12rpx;
}

/* ==================== 广告位 ==================== */
.ad-banner-container {
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* ==================== 附录区域 ==================== */
.appendices-section {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

.section-divider {
  position: relative;
  text-align: center;
  margin-bottom: 32rpx;
}

.section-divider::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ddd 20%, #ddd 80%, transparent);
}

.divider-text {
  position: relative;
  display: inline-block;
  padding: 0 24rpx;
  background: linear-gradient(180deg, #f5f7fa 0%, #e9ecef 100%);
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  letter-spacing: 4rpx;
}

.appendices-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.appendix-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(240, 147, 251, 0.3);
  color: white;
  transition: transform 0.2s;
}

.appendix-card:active {
  transform: scale(0.95);
}

.appendix-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.appendix-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.appendix-code {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.appendix-page {
  font-size: 20rpx;
  opacity: 0.8;
}

/* ==================== 空状态 ==================== */
.empty-state {
  padding: 120rpx 32rpx;
}

.empty-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  min-height: 300rpx;
  background: #fff;
  margin: 0 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.empty-img {
  width: 360rpx;
  height: 220rpx;
}

.empty-text {
  color: #6b7280;
  font-size: 26rpx;
}
