  position: relative;
  overflow: hidden;
}

.performance-item-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(148, 163, 184, 0.15),
    0 8rpx 32rpx rgba(148, 163, 184, 0.1);
