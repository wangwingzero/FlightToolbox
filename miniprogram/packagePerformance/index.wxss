/* 性能术语页面样式 - 参考资料查询设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #f8fafc 0%, #f1f5f9 20%, #e2e8f0 40%, #f8fafc 60%, #f0f9ff 80%, #f8fafc 100%),
    radial-gradient(circle at 30% 40%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(168, 85, 247, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载更多按钮样式 */
.load-more-container {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-more-btn {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 24rpx 40rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 123, 255, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.load-more-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 123, 255, 0.15),
    0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.loading-text, .load-more-text {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-direction: column;
}

.loading-label, .load-more-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #007bff;
  margin: 0;
}

.remaining-count {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
}

/* 加载完成提示样式 */
.load-complete-container {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-complete-text {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #28a745;
  font-weight: 500;
}


/* 现代化标签页系统 */
.modern-tabs-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-bottom: 2rpx solid rgba(226, 232, 240, 0.3);
  box-shadow: 0 2rpx 16rpx rgba(148, 163, 184, 0.08);
}

.tabs-scroll {
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
}

.tabs-wrapper {
  display: flex;
  padding: 0 24rpx;
  min-width: 100%;
}

.modern-tab {
  position: relative;
  flex-shrink: 0;
  margin-right: 8rpx;
  padding: 20rpx 24rpx 16rpx;
  border-radius: 16rpx 16rpx 0 0;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
}

.modern-tab:last-child {
  margin-right: 0;
}

.modern-tab.active {
  background: linear-gradient(135deg, 
    rgba(99, 102, 241, 0.08) 0%, 
    rgba(139, 92, 246, 0.08) 50%, 
    rgba(168, 85, 247, 0.08) 100%);
  transform: translateY(-2rpx);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.tab-icon {
  font-size: 32rpx;
  line-height: 1;
  transition: all 0.3s ease;
  filter: grayscale(0.3);
}

.modern-tab.active .tab-icon {
  filter: grayscale(0);
  transform: scale(1.1);
}

.tab-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s ease;
  line-height: 1.2;
  text-align: center;
}

.modern-tab.active .tab-title {
  color: #6366f1;
  font-weight: 600;
}

.tab-count {
  position: absolute;
  top: -8rpx;
  right: -16rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
  color: white;
  font-size: 18rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
  transform: scale(0.9);
  transition: all 0.3s ease;
}

.modern-tab.active .tab-count {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  transform: scale(1);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.4);
}

.tab-indicator {
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
  border-radius: 6rpx;
  box-shadow: 
    0 2rpx 12rpx rgba(99, 102, 241, 0.4),
    0 4rpx 24rpx rgba(99, 102, 241, 0.2);
  animation: indicatorSlideIn 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes indicatorSlideIn {
  0% {
    width: 0;
    opacity: 0;
  }
  100% {
    width: 60rpx;
    opacity: 1;
  }
}


/* 搜索框样式优化 */
.search-section {
  padding: 24rpx;
  background: transparent;
}


/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx 32rpx;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.performance-search::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #667eea 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-section .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.5);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.search-section .van-search:focus-within {
  border-color: rgba(99, 102, 241, 0.4);
  box-shadow: 
    0 12rpx 40rpx rgba(99, 102, 241, 0.15),
    0 20rpx 80rpx rgba(99, 102, 241, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 28rpx !important;
  position: relative;
  z-index: 2;
}

.search-section .van-field__input {
  font-size: 30rpx !important;
  color: #1e293b !important;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding: 20rpx 32rpx !important;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #94a3b8 !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

