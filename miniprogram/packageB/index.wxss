  transform: translateY(2rpx) scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(66, 153, 225, 0.2);
}

.load-more-text {
  font-size: 28rpx;
  font-weight: 600;
}

.load-more-icon {
  font-size: 32rpx;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.load-more-btn:active .load-more-icon {
  transform: rotate(15deg);
}

.load-more-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
}

