/* 缩写查询页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 20rpx;
}

/* 现代标签页样式 */
.modern-tabs-container {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  padding: 20rpx 0;
  margin: 20rpx;
  border-radius: 20rpx;
}

.tabs-scroll {
  width: 100%;
}

.tabs-wrapper {
  display: flex;
  white-space: nowrap;
  padding: 0 20rpx;
}

.modern-tab {
  position: relative;
  margin: 0 10rpx;
  padding: 0 20rpx;
  min-width: 120rpx;
  border-radius: 30rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modern-tab.active {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  filter: grayscale(1);
  transition: filter 0.3s ease;
}

.modern-tab.active .tab-icon {
  filter: grayscale(0);
}

.tab-title {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.7);
  transition: color 0.3s ease;
}

.modern-tab.active .tab-title {
  color: white;
  font-weight: 600;
}

.tab-count {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 4rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.modern-tab.active .tab-count {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
  border-radius: 3rpx;
  animation: slideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideIn {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 60rpx;
    opacity: 1;
  }
}

/* 搜索框样式 */
.search-section {
  margin: 30rpx 20rpx;
}

.abbreviation-search {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 20rpx;
}

/* Context7卡片样式 */
.context7-content-container {
  margin: 0 20rpx;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.context7-item-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.context7-item-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.abbreviation-item-card .item-card-header {
  margin-bottom: 20rpx;
}

.item-primary {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-abbreviation {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.item-badges {
  display: flex;
  gap: 12rpx;
}

.context7-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.category-badge {
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
  color: #d53f8c;
}

.item-secondary {
  margin-bottom: 8rpx;
}

.item-english-full {
  font-size: 28rpx;
  color: #4a5568;
  line-height: 1.4;
  font-style: italic;
}

.item-card-content {
  margin-bottom: 20rpx;
}

.item-chinese-translation {
  font-size: 30rpx;
  color: #2d3748;
  line-height: 1.5;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.item-pronunciation {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #e6fffa, #b2f5ea);
  border-radius: 12rpx;
  border-left: 4rpx solid #38b2ac;
}

.pronunciation-label {
  font-size: 24rpx;
  color: #2c7a7b;
  font-weight: 600;
}

.pronunciation-text {
  font-size: 26rpx;
  color: #2d3748;
  font-family: "Courier New", monospace;
}

.item-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #718096;
}

.item-arrow {
  color: #cbd5e0;
  transition: transform 0.2s ease;
}

.context7-item-card:hover .item-arrow {
  transform: translateX(4rpx);
}

/* 无结果样式 */
.no-results {
  text-align: center;
  padding: 100rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
}

.no-results-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.no-results-text {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.no-results-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 统计信息样式 */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin: 40rpx 20rpx 20rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 详情弹窗样式 */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-radius: 20rpx 20rpx 0 0;
}

.popup-header-content {
  flex: 1;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

.popup-close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
}

.popup-content {
  flex: 1;
  padding: 30rpx;
}

.detail-section {
  margin-bottom: 40rpx;
}

.detail-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-button {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #4299e1, #3182ce);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.copy-button:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #3182ce, #2c5282);
}

.detail-content {
  font-size: 30rpx;
  color: #4a5568;
  line-height: 1.6;
  padding: 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #e2e8f0;
}

.abbreviation-content {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  background: linear-gradient(135deg, #e6fffa, #b2f5ea);
  border-left-color: #38b2ac;
}

.english-content {
  font-style: italic;
  background: linear-gradient(135deg, #fef5e7, #fbd38d);
  border-left-color: #ed8936;
}

.chinese-content {
  font-weight: 500;
  background: linear-gradient(135deg, #e6ffed, #9ae6b4);
  border-left-color: #48bb78;
}

.pronunciation-content {
  font-family: "Courier New", monospace;
  background: linear-gradient(135deg, #edf2f7, #cbd5e0);
  border-left-color: #718096;
}

.source-content {
  background: linear-gradient(135deg, #faf5ff, #d6bcfa);
  border-left-color: #9f7aea;
}