/* ========== 强制标签样式覆盖文件 ========== */
/* 专门用于覆盖Vant Tag组件样式的独立文件 */

/* 使用深度选择器强制覆盖 */
.module-points /deep/ .van-tag,
.module-count /deep/ .van-tag {
  border-radius: 12rpx !important;
  font-size: 24rpx !important;
  padding: 8rpx 16rpx !important;
  font-weight: 600 !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1) !important;
}

/* 颜色覆盖 */
.module-points /deep/ .van-tag--warning,
.module-count /deep/ .van-tag--warning {
  background-color: #ff8a50 !important;
}

.module-points /deep/ .van-tag--success,
.module-count /deep/ .van-tag--success {
  background-color: #06ad56 !important;
}

.module-points /deep/ .van-tag--primary,
.module-count /deep/ .van-tag--primary {
  background-color: #0570de !important;
}

.module-points /deep/ .van-tag--default,
.module-count /deep/ .van-tag--default {
  background-color: #7d7e80 !important;
}

.module-points /deep/ .van-tag--danger,
.module-count /deep/ .van-tag--danger {
  background-color: #d60a21 !important;
}

/* 如果/deep/不支持，使用>>选择器 */
.module-points >>> .van-tag,
.module-count >>> .van-tag {
  border-radius: 12rpx !important;
  font-size: 24rpx !important;
  padding: 8rpx 16rpx !important;
  font-weight: 600 !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1) !important;
}