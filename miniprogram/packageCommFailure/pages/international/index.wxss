/* 国际通信失效程序页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}


/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 8rpx;
}


.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}


/* 快速操作栏 */
.quick-actions {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  min-width: 120rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}


.action-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #2c3e50;
  font-weight: 500;
}


/* 章节卡片 */
.section-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}


.section-title {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
}

.content-box {
  padding: 30rpx;
}

/* 语言切换器 */
.language-switcher {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  margin: 20rpx;
  border: 2rpx solid #e9ecef;
}


.lang-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  color: #7f8c8d;
  border-radius: 8rpx;
  cursor: pointer;
}

.lang-btn.active {
  background: #3498db;
  color: white;
  font-weight: 600;
}



/* 程序步骤 */
.procedure-step {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #3498db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}


.step-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #34495e;
}


/* 管制行动项目 */
.atc-action-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #3498db;
}


.action-number {
  width: 50rpx;
  height: 50rpx;
  background: #3498db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.action-content {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #2c3e50;
}


/* 气象条件选择标签 */
.weather-tabs {
  display: flex;
  margin-bottom: 25rpx;
  background: #f1f2f6;
  border-radius: 12rpx;
  padding: 6rpx;
}


.tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}


.tab-text {
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #2c3e50;
  font-weight: bold;
}


/* 气象内容 */
.weather-content {
  padding: 20rpx;
  background: #e8f4fd;
  border-radius: 15rpx;
  border: 2rpx solid #bee5eb;
}


.weather-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 20rpx;
}


/* 步骤列表 */
.steps-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
}

.step-bullet {
  width: 40rpx;
  height: 40rpx;
  background: #27ae60;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.step-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #0d47a1;
}


/* IMC部分 */
.imc-section {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: rgba(52, 152, 219, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(52, 152, 219, 0.2);
}


.imc-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #2980b9;
  margin-bottom: 15rpx;
}


.imc-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #34495e;
}


/* 间隔类型标签 */
.separation-tabs {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.separation-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 20rpx;
  background: #f1f2f6;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.separation-tab.active {
  background: #3498db;
}



.separation-tab .tab-text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.separation-tab.active .tab-text {
  color: white;
  font-weight: bold;
}

/* 间隔内容 */
.separation-content {
  padding: 15rpx;
  background: #fff3cd;
  border-radius: 10rpx;
  border: 2rpx solid #ffeaa7;
}


.separation-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #856404;
}


/* 关键提醒 */
.key-reminders {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
}


.reminder-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 20rpx;
  text-align: center;
}


.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.reminder-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.reminder-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.4;
}


/* 地区差异样式 */
.toggle-icon {
  margin-left: auto;
  font-size: 24rpx;
  color: white;
  opacity: 0.8;
}

/* 地区选择标签 */
.region-tabs {
  margin-bottom: 25rpx;
}

.region-scroll {
  white-space: nowrap;
}

.region-list {
  display: flex;
  gap: 15rpx;
  padding-bottom: 10rpx;
}

.region-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  flex-shrink: 0;
  min-width: 120rpx;
}

.region-tab.active {
  background: #3498db;
  border-color: #2980b9;
  transform: scale(1.05);
}



.region-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.region-name {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.region-tab.active .region-name {
  color: white;
  font-weight: bold;
}


/* 国家选择 */
.countries-section {
  margin-bottom: 25rpx;
}

.countries-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 15rpx;
}


.countries-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280rpx, 1fr));
  gap: 15rpx;
}

.country-card {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.country-card.active {
  background: #e3f2fd;
  border-color: #3498db;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
}



.country-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.country-name-en {
  font-size: 22rpx;
  color: #7f8c8d;
  font-style: italic;
}



/* 国家详情 */
.country-details {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
}


.country-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e9ecef;
}


.country-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}


.copy-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #3498db;
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.copy-btn:active {
  transform: scale(0.95);
  background: #2980b9;
}

/* 差异部分 */
.difference-section {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffc107;
}


.difference-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 12rpx;
}


.difference-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #856404;
}


/* 程序部分 */
.procedures-section {
  margin-bottom: 25rpx;
}

.procedures-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #27ae60;
  margin-bottom: 15rpx;
}


.procedures-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.procedure-item {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}


.procedure-number {
  width: 50rpx;
  height: 50rpx;
  background: #27ae60;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.procedure-content {
  flex: 1;
}

.procedure-text-cn {
  font-size: 26rpx;
  line-height: 1.6;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.procedure-text-en {
  font-size: 22rpx;
  line-height: 1.5;
  color: #7f8c8d;
  font-style: italic;
  opacity: 0.8;
}

.procedure-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #2c3e50;
}




/* 无选择状态 */
.no-selection {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #7f8c8d;
}


.no-selection-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  display: block;
}

.no-selection-text {
  font-size: 28rpx;
  font-weight: 500;
}


