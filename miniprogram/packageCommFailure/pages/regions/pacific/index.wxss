/* 太平洋地区通信差异页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  min-height: 100vh;
}


/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  position: relative;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 8rpx;
}


.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}


/* 语言切换器 */
.language-switcher {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  margin: 30rpx 0;
  border: 2rpx solid #e3f2fd;
}


.lang-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  color: #7f8c8d;
  border-radius: 8rpx;
  cursor: pointer;
}

.lang-btn.active {
  background: #2196f3;
  color: white;
  font-weight: 600;
}



/* 快速操作栏 */
.quick-actions {
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

/* 应答机编码组 */
.transponder-group {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 8rpx 32rpx rgba(33, 150, 243, 0.1);
  border: 2rpx solid #e3f2fd;
}


.transponder-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 20rpx;
  text-align: center;
}


.transponder-buttons {
  display: flex;
  justify-content: center;
}

.transponder-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  min-width: 120rpx;
  transition: all 0.2s ease;
}

.transponder-btn.primary {
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
}

.transponder-btn:active {
  transform: scale(0.95);
}

.transponder-code {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.transponder-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 卡片样式 */
.section-card {
  background: white;
  border-radius: 20rpx;
  margin: 0 20rpx 25rpx;
  box-shadow: 0 8rpx 32rpx rgba(33, 150, 243, 0.1);
  border: 2rpx solid #e3f2fd;
  overflow: hidden;
}


/* 卡片标题 */
.section-title {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 2rpx solid #e3f2fd;
}


.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}


/* 卡片内容 */
.content-box {
  padding: 30rpx;
}

/* 差异项目 */
.difference-item {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 6rpx solid #2196f3;
}


.diff-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 8rpx;
}


.diff-content {
  font-size: 26rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
}


.diff-note {
  font-size: 22rpx;
  color: #7f8c8d;
  opacity: 0.8;
}


/* 国家选择标签 */
.country-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.country-tab {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.2s ease;
}

.country-tab.active {
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
  border-color: #2196f3;
}



.country-flag {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.country-name {
  font-size: 24rpx;
  color: #2c3e50;
}

.country-tab.active .country-name {
  color: white;
}


/* 选中国家程序 */
.country-procedures {
  border-top: 2rpx solid #e9ecef;
  padding-top: 25rpx;
}


.country-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 15rpx;
}


.country-flag-large {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.country-info {
  flex: 1;
}

.country-name-cn {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
}


.country-name-en {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}


/* ICAO差异 */
.icao-differences {
  margin-bottom: 25rpx;
}

.diff-section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 15rpx;
}


.diff-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.6;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}


/* 程序步骤 */
.procedures-list {
  margin-top: 25rpx;
}

.procedures-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 20rpx;
}


.procedure-step {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 6rpx solid #2196f3;
}


.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #2196f3;
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}


.step-content {
  flex: 1;
}

.step-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.6;
}


/* 选择提示 */
.select-prompt {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #7f8c8d;
}


.prompt-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.prompt-text {
  font-size: 26rpx;
}

/* 注意事项 */
.note-item {
  margin-bottom: 15rpx;
}

.note-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.6;
}

