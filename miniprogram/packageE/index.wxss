/* 规范性文件分类展示页面样式 */

.container {
  padding: 0 16rpx !important;
  margin: 0 !important;
  background-color: #f7f8fa;
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
}

/* 搜索结果样式 */
.search-result-item {
  border-left: 4rpx solid #1989fa;
  padding-left: 16rpx;
}

/* 分类统计样式 */
.statistics-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 文档项样式 */
.document-item {
  border-left: 2rpx solid #07c160;
}

/* 最近更新样式 */
.recent-item {
  border-left: 2rpx solid #ff976a;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #969799;
}

/* 操作按钮组 */
.action-buttons {
  margin-top: 32rpx;
}

/* 说明文字样式 */
.description-text {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
}

/* 标签样式 */
.category-tag {
  display: inline-block;
  padding: 4rpx 8rpx;
  background-color: #f2f3f5;
  color: #646566;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.exact-match-tag {
  background-color: #e8f5e8;
  color: #07c160;
}

.fuzzy-match-tag {
  background-color: #fff7e6;
  color: #ff976a;
}

.manual-tag {
  background-color: #ffeaea;
  color: #ee0a24;
} 