/* 规范性文件分类展示页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索结果样式优化 */
.search-result-item {
  position: relative;
}

/* 有效性标签样式 */
.validity-tag {
  margin-left: 10rpx;
  font-size: 24rpx;
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1.2;
  font-weight: bold;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.validity-valid {
  color: #07c160;
  background-color: #e8f5e8;
  border: 1rpx solid #07c160;
}

.validity-invalid {
  color: #fa5151;
  background-color: #fef0f0;
  border: 1rpx solid #fa5151;
}

.validity-unknown {
  color: #969799;
  background-color: #f2f3f5;
  border: 1rpx solid #969799;
}

/* 分类卡片样式 */
.category-card {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 统计信息样式 */
.statistics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin: 20rpx 0;
}

.stat-item {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #969799;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .statistics-grid {
    grid-template-columns: 1fr;
  }
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #969799;
}

.empty-state .empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-state .empty-text {
  font-size: 28rpx;
}