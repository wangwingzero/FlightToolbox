/* ICAO出版物查询页面样式 - iOS Premium Design */
/* ==================== 全局样式 ==================== */
page {
  background: #F5F5F7;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  min-height: 100vh;
  background: #F5F5F7;
  position: relative;
}

/* 顶部装饰渐变 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(180deg, rgba(0, 122, 255, 0.08) 0%, rgba(0, 122, 255, 0.02) 60%, transparent 100%);
  pointer-events: none;
  z-index: 0;
}

/* ==================== 分类标签系统 ==================== */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(40rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.category-tabs-scroll {
  height: 160rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  gap: 32rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  border-radius: 24rpx;
  transition: all 0.25s ease;
  min-width: 100rpx;
  position: relative;
}

.category-tab-item.active {
  transform: translateY(-4rpx);
}

/* 分类徽章 - 为每个分类设置颜色 */
.category-badge {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #8E8E93;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.25s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 全部 - 蓝色 */
.category-tab-item:nth-child(1) .category-badge {
  background: #C7C7CC;
}

.category-tab-item:nth-child(1).active .category-badge {
  background: #007AFF;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.35);
}

/* 空中航行 - 天蓝色 */
.category-tab-item:nth-child(2) .category-badge {
  background: #C7C7CC;
}

.category-tab-item:nth-child(2).active .category-badge {
  background: #0A84FF;
  box-shadow: 0 8rpx 20rpx rgba(10, 132, 255, 0.35);
}

/* 空运经济 - 橙色 */
.category-tab-item:nth-child(3) .category-badge {
  background: #C7C7CC;
}

.category-tab-item:nth-child(3).active .category-badge {
  background: #FF9500;
  box-shadow: 0 8rpx 20rpx rgba(255, 149, 0, 0.35);
}

/* 标准附件 - 绿色 */
.category-tab-item:nth-child(4) .category-badge {
  background: #C7C7CC;
}

.category-tab-item:nth-child(4).active .category-badge {
  background: #34C759;
  box-shadow: 0 8rpx 20rpx rgba(52, 199, 89, 0.35);
}

/* 政策框架 - 紫色 */
.category-tab-item:nth-child(5) .category-badge {
  background: #C7C7CC;
}

.category-tab-item:nth-child(5).active .category-badge {
  background: #AF52DE;
  box-shadow: 0 8rpx 20rpx rgba(175, 82, 222, 0.35);
}

/* 大会决议 - 红色 */
.category-tab-item:nth-child(6) .category-badge {
  background: #C7C7CC;
}

.category-tab-item:nth-child(6).active .category-badge {
  background: #FF3B30;
  box-shadow: 0 8rpx 20rpx rgba(255, 59, 48, 0.35);
}

.category-title {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: color 0.25s ease;
  white-space: nowrap;
}

.category-tab-item.active .category-title {
  color: #1C1C1E;
  font-weight: 600;
}

/* ==================== 搜索区域 ==================== */
.search-section {
  padding: 24rpx 32rpx;
  background: transparent;
  position: relative;
  z-index: 10;
}

.search-section .van-search {
  background: rgba(142, 142, 147, 0.12) !important;
  border-radius: 20rpx !important;
  overflow: hidden;
  transition: all 0.2s ease;
  border: none !important;
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 20rpx !important;
  padding: 12rpx 16rpx !important;
}

.search-section .van-field__input {
  font-size: 32rpx !important;
  color: #1C1C1E !important;
  font-weight: 400;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #8E8E93 !important;
  font-weight: 400;
  font-size: 32rpx !important;
}

/* ==================== 统计信息 ==================== */
.stats-section {
  padding: 12rpx 32rpx 24rpx;
  background: transparent;
}

.stats-text {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

/* ==================== 出版物列表 ==================== */
.publications-list {
  padding: 0 32rpx 32rpx;
  position: relative;
  z-index: 1;
}

.publication-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.publication-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: #007AFF;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.publication-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.publication-card:active::before {
  opacity: 1;
}

.doc-number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.number-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #007AFF;
  letter-spacing: 0.3rpx;
}

.publication-title {
  margin-bottom: 20rpx;
}

.title-zh {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #1C1C1E;
  line-height: 1.5;
  margin-bottom: 12rpx;
  letter-spacing: 0.3rpx;
}

.title-en {
  display: block;
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.5;
  opacity: 0.8;
  font-weight: 400;
}

.publication-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.edition {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* ==================== 加载状态 ==================== */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #007AFF;
  font-size: 30rpx;
  font-weight: 500;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #8E8E93;
  font-size: 26rpx;
  font-weight: 500;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 48rpx;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* ==================== 详情弹窗 - iOS Sheet 风格 ==================== */
.detail-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #F5F5F7;
  position: relative;
  overflow: hidden;
}

/* 弹窗头部 */
.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(40rpx) saturate(180%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  position: sticky;
  top: 0;
  z-index: 50;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(142, 142, 147, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: rgba(142, 142, 147, 0.2);
  transform: scale(0.9);
}

.close-icon {
  font-size: 32rpx;
  color: #1C1C1E;
  font-weight: 600;
}

.detail-title-header {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #1C1C1E;
  line-height: 1.3;
  padding: 0 20rpx;
  letter-spacing: 0.3rpx;
}

/* 滚动内容区域 */
.detail-content {
  flex: 1;
  height: 0;
  padding: 0;
  background: transparent;
}

/* 详情内容 */
.publication-detail {
  padding: 32rpx 32rpx 120rpx;
}

/* 信息区块 */
.info-section {
  margin-bottom: 32rpx;
}

/* 区块标题 */
.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #8E8E93;
  margin-bottom: 16rpx;
  padding-left: 0;
  letter-spacing: 0.5rpx;
  text-transform: uppercase;
}

/* 信息卡片 - iOS 分组样式 */
.info-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 信息项 */
.info-item {
  display: flex;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  align-items: flex-start;
}

.info-item:last-child {
  border-bottom: none;
}

/* 信息标签 */
.info-label {
  min-width: 160rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #1C1C1E;
  letter-spacing: 0.2rpx;
  flex-shrink: 0;
}

/* 信息值 */
.info-value {
  flex: 1;
  font-size: 30rpx;
  color: #3C3C43;
  line-height: 1.6;
  word-break: break-all;
  text-align: right;
  font-weight: 400;
  opacity: 0.8;
}

.info-value-en {
  font-style: italic;
}

/* 描述卡片 */
.description-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.description-text {
  font-size: 32rpx;
  color: #1C1C1E;
  line-height: 1.7;
  word-break: break-all;
  margin-bottom: 24rpx;
  letter-spacing: 0.2rpx;
}

.description-text-en {
  font-size: 30rpx;
  color: #3C3C43;
  line-height: 1.6;
  word-break: break-all;
  font-style: italic;
  letter-spacing: 0.1rpx;
  opacity: 0.8;
}

.description-text:last-child,
.description-text-en:last-child {
  margin-bottom: 0;
}

/* 底部操作栏 */
.detail-footer {
  padding: 24rpx 32rpx 40rpx;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(40rpx) saturate(180%);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.04);
}

/* 关闭按钮 - iOS 风格 */
.close-button-single {
  height: 96rpx;
  border-radius: 24rpx;
  background: #007AFF;
  color: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 0.3rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.close-button-single:active {
  background: #0051D5;
  transform: scale(0.96);
  box-shadow: 0 2rpx 12rpx rgba(0, 122, 255, 0.4);
}

.button-icon {
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 优化滚动条样式 */
.detail-content::-webkit-scrollbar {
  display: none;
}

/* ==================== 广告容器 ==================== */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 20rpx 32rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
