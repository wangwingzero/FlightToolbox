/* ICAO出版物查询页面样式 */
.container {
  min-height: 100vh;
  background: #f5f6fa;
}

/* 现代标签栏 */
.modern-tabs-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tabs-wrapper {
  display: flex;
  padding: 20rpx;
  white-space: nowrap;
}

.modern-tab {
  position: relative;
  display: inline-block;
  margin-right: 30rpx;
  padding: 16rpx 24rpx;
  transition: all 0.3s ease;
}

.modern-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
}

.tab-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tab-icon {
  font-size: 32rpx;
}

.tab-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.modern-tab.active .tab-title {
  color: #fff;
}

.tab-count {
  font-size: 22rpx;
  color: #666;
  margin-left: 8rpx;
}

.modern-tab.active .tab-count {
  color: rgba(255, 255, 255, 0.9);
}

.tab-indicator {
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 3rpx;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx;
  background: #fff;
}

/* 统计信息 */
.stats-section {
  padding: 16rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.stats-text {
  font-size: 24rpx;
  color: #999;
}

/* 出版物列表 */
.publications-list {
  padding: 20rpx;
}

.publication-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.publication-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.doc-number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.number-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #667eea;
}

.publication-title {
  margin-bottom: 16rpx;
}

.title-zh {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.title-en {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.publication-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.edition {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
  color: #667eea;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 32rpx;
  color: #999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 详情弹窗样式 - 参考权威定义设计 */
.detail-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #ffffff 0%, #fefefe 50%, #fdfdfd 100%);
  position: relative;
  overflow: hidden;
}

.detail-popup-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 35%, #9f7aea 70%, #b794f4 100%);
  opacity: 0.03;
  z-index: 0;
}

/* 弹窗头部 */
.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 48rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.98) 100%);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  box-shadow:
    0 2rpx 24rpx rgba(102, 126, 234, 0.06),
    0 8rpx 64rpx rgba(118, 75, 162, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: sticky;
  top: 0;
  z-index: 50;
}

.header-left, .header-right {
  width: 88rpx;
  display: flex;
  justify-content: center;
}

.close-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.12) 100%);
  border: 1rpx solid rgba(102, 126, 234, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow:
    0 2rpx 8rpx rgba(102, 126, 234, 0.12),
    0 4rpx 16rpx rgba(118, 75, 162, 0.08);
}

.close-btn:active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transform: scale(0.92) translateY(1rpx);
  box-shadow:
    0 4rpx 16rpx rgba(102, 126, 234, 0.25),
    0 8rpx 32rpx rgba(118, 75, 162, 0.15);
}

.close-btn:active .close-icon {
  color: #ffffff;
}

.close-icon {
  font-size: 36rpx;
  color: #667eea;
  font-weight: 600;
  transition: color 0.3s ease;
}

.detail-title-header {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  line-height: 1.3;
  padding: 0 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(30, 41, 59, 0.1);
  letter-spacing: 0.5rpx;
}

/* 滚动内容区域 */
.detail-content {
  flex: 1;
  height: 0;
  padding: 0;
  background: transparent;
  position: relative;
  z-index: 1;
}

/* 详情内容 */
.publication-detail {
  padding: 24rpx 32rpx 80rpx;
}

/* 信息区块 */
.info-section {
  margin-bottom: 32rpx;
}

/* 区块标题 */
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
  letter-spacing: 0.5rpx;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.08);
}

/* 信息项 */
.info-item {
  display: flex;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.06);
  transition: background 0.2s ease;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item:active {
  background: rgba(102, 126, 234, 0.02);
}

/* 信息标签 */
.info-label {
  min-width: 160rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
  letter-spacing: 0.3rpx;
  flex-shrink: 0;
}

/* 信息值 */
.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
  word-break: break-all;
  text-align: right;
  font-weight: 400;
}

.info-value-en {
  font-style: italic;
  color: #475569;
}

/* 描述卡片 */
.description-card {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.06);
}

.description-text {
  font-size: 30rpx;
  color: #334155;
  line-height: 1.8;
  word-break: break-all;
  margin-bottom: 20rpx;
  letter-spacing: 0.3rpx;
  text-align: justify;
}

.description-text-en {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.7;
  word-break: break-all;
  font-style: italic;
  letter-spacing: 0.2rpx;
}

.description-text:last-child,
.description-text-en:last-child {
  margin-bottom: 0;
}

/* 底部操作栏 */
.detail-footer {
  padding: 36rpx 48rpx 42rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(248, 250, 252, 0.99) 100%);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-top: 1rpx solid rgba(102, 126, 234, 0.08);
  box-shadow:
    0 -4rpx 24rpx rgba(102, 126, 234, 0.06),
    0 -8rpx 48rpx rgba(118, 75, 162, 0.04);
  position: relative;
}

.detail-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #667eea 25%, #764ba2 50%, #9f7aea 75%, transparent 100%);
  opacity: 0.4;
}

/* 单按钮样式 */
.close-button-single {
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 1rpx solid #764ba2;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s ease;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  cursor: pointer;
  user-select: none;
}

.close-button-single:active {
  background: linear-gradient(135deg, #764ba2 0%, #5b21b6 100%);
  transform: scale(0.97);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.3);
}

.button-icon {
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗容器动画 */
@keyframes popupFadeIn {
  0% {
    opacity: 0;
    transform: translateY(80rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.detail-popup-container {
  animation: popupFadeIn 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 优化滚动条样式 */
.detail-content::-webkit-scrollbar {
  display: none;
}
