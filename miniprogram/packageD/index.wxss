/* 权威定义页面样式 - 机场数据样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  position: relative;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(99, 102, 241, 0.2) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.page-content {
  position: relative;
  z-index: 1;
}

/* 优雅搜索容器 */
.elegant-search-container {
  position: relative;
  padding: 80rpx 32rpx 50rpx;
  overflow: hidden;
}

/* 背景装饰 */
.search-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -75rpx;
  left: -30rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  right: 20rpx;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(180deg); }
}

/* 主搜索包装器 */
.main-search-wrapper {
  position: relative;
  z-index: 1;
}

/* 搜索标题 */
.search-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.title-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.title-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
}

/* 高级搜索框 */
.premium-search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px) saturate(180%);
  border-radius: 60rpx;
  padding: 20rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.premium-search-box.focused {
  transform: translateY(-2rpx);
  box-shadow: 
    0 12rpx 48rpx rgba(0, 0, 0, 0.15),
    0 4rpx 16rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

/* 搜索图标包装器 */
.search-icon-wrapper {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索输入框 */
.premium-search-input {
  flex: 1;
  font-size: 32rpx;
  color: #1f2937;
  background: transparent;
  border: none;
  outline: none;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: 500;
}

.premium-search-placeholder {
  color: #9ca3af;
  font-size: 30rpx;
  font-weight: 400;
}

/* 清除按钮 */
.search-clear-btn {
  margin-left: 16rpx;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(156, 163, 175, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.search-clear-btn:active {
  background: rgba(156, 163, 175, 0.2);
  transform: scale(0.95);
}

/* 搜索统计 */
.search-stats {
  margin-top: 16rpx;
  animation: slideInUp 0.3s ease-out;
}

.stats-content {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.stats-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 定义列表容器 */
.definitions-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 32rpx 32rpx 0 0;
  margin: 0 16rpx;
  padding: 32rpx 24rpx;
  min-height: calc(100vh - 400rpx);
  box-shadow: 
    0 -4rpx 32rpx rgba(0, 0, 0, 0.1),
    0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.definitions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 高端优雅定义卡片 */
.definition-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform: translateZ(0);
}

.definition-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(102, 126, 234, 0.03) 0%, 
    rgba(118, 75, 162, 0.03) 100%);
  pointer-events: none;
}

.definition-card:active {
  transform: translateY(2rpx) scale(0.995);
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.15),
    0 1rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
}

/* 卡片头部 - 优雅布局 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  gap: 24rpx;
  position: relative;
  z-index: 2;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a202c;
  line-height: 1.4;
  flex: 1;
  letter-spacing: 0.5rpx;
}

.source-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 20rpx;
  padding: 10rpx 18rpx;
  border-radius: 16rpx;
  white-space: nowrap;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  letter-spacing: 0.3rpx;
}

/* 英文名称 - 精致样式 */
.english-name {
  font-size: 26rpx;
  color: #718096;
  font-style: italic;
  margin-bottom: 24rpx;
  line-height: 1.4;
  font-weight: 500;
  letter-spacing: 0.3rpx;
  position: relative;
  z-index: 2;
}

/* 定义内容区域 - 毛玻璃效果 */
.definition-box {
  background: rgba(248, 250, 252, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  position: relative;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  box-shadow: 
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.definition-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 3rpx 3rpx 0;
}

.definition-box::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, 
    rgba(102, 126, 234, 0.6) 0%, 
    rgba(118, 75, 162, 0.6) 50%,
    transparent 100%);
  border-radius: 20rpx 20rpx 0 0;
}

.definition-text {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.7;
  word-break: break-all;
  font-weight: 400;
  letter-spacing: 0.3rpx;
  position: relative;
  z-index: 1;
}

/* 操作提示 - 精致交互 */
.action-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.5;
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

.definition-card:active .action-hint {
  opacity: 0.8;
  transform: translateY(-1rpx);
}

.hint-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
  filter: grayscale(0.3);
}

.hint-text {
  font-size: 22rpx;
  color: #a0aec0;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

/* 加载更多 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.load-more-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.load-more-btn:active {
  transform: scale(0.95);
}

.load-more-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #666;
}

/* 加载完成提示 */
.load-complete {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.load-complete-text {
  font-size: 24rpx;
  color: #95a5a6;
  padding: 16rpx 24rpx;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 功能说明区域 */
.tips-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.tips-content {
  line-height: 1.6;
}

.tip-item {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  position: relative;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #bdc3c7;
  border-radius: 50%;
}

/* 精美优雅浮窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  z-index: 9999;
  animation: modalFadeIn 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    backdrop-filter: blur(0rpx);
  }
  to {
    opacity: 1;
    backdrop-filter: blur(8rpx);
  }
}

.modal-container {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx 32rpx 0 0;
  max-width: 640rpx;
  width: 100%;
  max-height: 80vh;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 
    0 -20rpx 60rpx rgba(0, 0, 0, 0.15),
    0 -8rpx 24rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  animation: modalSlideUp 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes modalSlideUp {
  from {
    transform: translateX(-50%) translateY(100%);
  }
  to {
    transform: translateX(-50%) translateY(0);
  }
}

.modal-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(102, 126, 234, 0.02) 0%, 
    rgba(118, 75, 162, 0.02) 100%);
  pointer-events: none;
}

/* 浮窗头部 */
.modal-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 48rpx 48rpx 32rpx;
  position: relative;
  z-index: 2;
}

.modal-title-section {
  flex: 1;
  margin-right: 32rpx;
}

.modal-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #1a202c;
  line-height: 1.3;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.modal-source-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-weight: 600;
  display: inline-block;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  letter-spacing: 0.3rpx;
}

.modal-close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
  flex-shrink: 0;
}

.modal-close-btn:hover {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(1.05);
}

.close-icon {
  font-size: 36rpx;
  color: #718096;
  font-weight: 300;
  line-height: 1;
}

/* 英文名称 */
.modal-english-name {
  font-size: 32rpx;
  color: #718096;
  font-style: italic;
  margin: 0 48rpx 32rpx;
  line-height: 1.4;
  font-weight: 500;
  letter-spacing: 0.3rpx;
  position: relative;
  z-index: 2;
}

/* 浮窗内容区域 */
.modal-content {
  max-height: 400rpx;
  margin: 0 48rpx;
  position: relative;
  z-index: 2;
}

.modal-definition-text {
  background: rgba(248, 250, 252, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  font-size: 32rpx;
  color: #2d3748;
  line-height: 1.8;
  word-break: break-all;
  font-weight: 400;
  letter-spacing: 0.3rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  box-shadow: 
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: relative;
}

.modal-definition-text::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 4rpx 4rpx 0;
}

/* 浮窗底部操作 */
.modal-footer {
  padding: 32rpx 48rpx 48rpx;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.modal-copy-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  box-shadow: 
    0 8rpx 24rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 240rpx;
}

.modal-copy-btn:hover {
  transform: translateY(-2rpx) scale(1.02);
  box-shadow: 
    0 12rpx 32rpx rgba(102, 126, 234, 0.4),
    0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.modal-copy-btn:active {
  transform: translateY(1rpx) scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(102, 126, 234, 0.3),
    0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.copy-icon {
  font-size: 32rpx;
  filter: brightness(1.1);
}

.copy-text {
  font-size: 32rpx;
}

/* 响应式优化 */
@media (max-width: 640rpx) {
  .definition-card {
    padding: 24rpx;
  }
  
  .card-title {
    font-size: 30rpx;
  }
  
  .definition-text {
    font-size: 26rpx;
  }
  
  .card-header {
    gap: 15rpx;
  }
  
  .source-tag {
    font-size: 18rpx;
    padding: 6rpx 12rpx;
  }
}

/* 小屏幕适配 */
@media (max-width: 480rpx) {
  .card-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
  
  .source-tag {
    align-self: flex-end;
  }
}

/* 搜索结果高亮效果 */
.definition-card.search-result {
  border: 2rpx solid #667eea;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.15);
}

/* 空状态样式调整 */
.van-empty {
  padding: 60rpx 0;
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.definition-card {
  animation: slideInUp 0.3s ease-out;
}

/* 搜索中状态 */
.definitions-list.searching .definition-card {
  opacity: 0.6;
  pointer-events: none;
}

/* 定义内容样式增强 */
.definition-text {
  position: relative;
}

/* 来源标签颜色变化 */
.source-tag[data-source*="附件"] {
  background: #3498db;
}

.source-tag[data-source*="规定"] {
  background: #e67e22;
}

.source-tag[data-source*="标准"] {
  background: #27ae60;
}

/* 长按反馈 */
.definition-card:active {
  background: #f8f9fa;
}

