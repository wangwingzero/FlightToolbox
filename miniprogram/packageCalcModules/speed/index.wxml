<view class="container">
  <view class="calculation-module">
    <view class="input-section">
      <view class="input-group">
        <van-field
          value="{{ speedValues.meterPerSecond }}"
          label="📐 米/秒"
          placeholder="请输入数值"
          type="digit"
          bind:change="onSpeedInput"
          data-unit="meterPerSecond"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">m/s</view>
        </van-field>
      </view>

      <view class="input-group">
        <van-field
          value="{{ speedValues.kilometerPerHour }}"
          label="🚗 千米/时"
          placeholder="请输入数值"
          type="digit"
          bind:change="onSpeedInput"
          data-unit="kilometerPerHour"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">km/h</view>
        </van-field>
      </view>

      <view class="input-group">
        <van-field
          value="{{ speedValues.knot }}"
          label="⛵ 节"
          placeholder="请输入数值"
          type="digit"
          bind:change="onSpeedInput"
          data-unit="knot"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">kt</view>
        </van-field>
      </view>
    </view>

    <view class="action-buttons">
      <van-button type="default" bind:click="clearSpeed" block>
        🗑️ 清空数据
      </van-button>
    </view>
  </view>

  <!-- 广告位 -->
  <view wx:if="{{ !isAdFree && nativeAdEnabled }}" class="ad-banner-container">
    <ad
      unit-id="adunit-d7a3b71f5ce0afca"
      ad-type="banner"
      ad-intervals="30"
      bindload="onAdLoad"
      binderror="onAdError"
    ></ad>
  </view>
</view>