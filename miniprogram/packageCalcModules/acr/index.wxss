/* ACR计算器 - 优雅简洁的样式设计 */

/* ========== 页面容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
}

/* ========== 动画背景 ========== */
.animated-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

.runway-light {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.4) 0%, transparent 70%);
  border-radius: 50%;
  animation: runwayFlash 3s ease-in-out infinite;
}

.runway-light1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.runway-light2 {
  top: 50%;
  right: 15%;
  animation-delay: -1s;
}

.runway-light3 {
  bottom: 25%;
  left: 20%;
  animation-delay: -2s;
}

@keyframes runwayFlash {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.2);
  }
}

.aircraft-shadow {
  position: absolute;
  top: 30%;
  right: 20%;
  width: 120rpx;
  height: 60rpx;
  background: radial-gradient(ellipse, rgba(118, 75, 162, 0.3) 0%, transparent 70%);
  animation: aircraftMove 8s ease-in-out infinite;
}

@keyframes aircraftMove {
  0%, 100% {
    transform: translateX(0) translateY(0);
  }
  50% {
    transform: translateX(50rpx) translateY(-20rpx);
  }
}

/* ========== 步骤指示器 ========== */
.step-indicator {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 32rpx 32rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 60rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.step-item:active {
  transform: scale(0.95);
}

/* 添加点击涟漪效果 */
.step-item::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  transition: width 0.6s ease, height 0.6s ease, opacity 0.6s ease;
}

.step-item:active::before {
  width: 120rpx;
  height: 120rpx;
  opacity: 0;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  transform: scale(1.1);
  animation: pulse 2s ease-in-out infinite;
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  }
  50% {
    box-shadow: 0 4rpx 24rpx rgba(102, 126, 234, 0.6);
  }
}

.step-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.step-item.active .step-label {
  color: white;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 8rpx;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background: linear-gradient(90deg, #43a047 0%, #388e3c 100%);
  box-shadow: 0 2rpx 8rpx rgba(67, 160, 71, 0.3);
}

/* ========== 主要内容区域 ========== */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 24rpx 40rpx;
}

/* 步骤卡片 */
.step-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  animation: cardSlideIn 0.5s ease-out;
}

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

/* ========== 制造商选择 ========== */
.manufacturer-grid {
  padding: 24rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.manufacturer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.manufacturer-item.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #e8f2ff 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.manufacturer-item:active {
  transform: scale(0.98);
}

.manufacturer-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.mfr-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 800;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.mfr-icon.airbus {
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
}

.mfr-icon.boeing {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.mfr-icon.comac {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.mfr-icon.others {
  background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
}

.mfr-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2d3748;
}

.mfr-desc {
  font-size: 22rpx;
  color: #718096;
}

/* ========== 系列列表 ========== */
.series-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.series-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 14rpx;
  border: 2rpx solid #eef2ff;
  transition: all 0.3s ease;
}

.series-item.selected {
  border-color: #6366f1;
  background: #f5f7ff;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.2);
}

.series-item:active {
  transform: scale(0.99);
}

.series-icon {
  font-size: 32rpx;
}

.series-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

/* ========== 机型列表 ========== */
.model-list {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.model-item {
  flex: 1;
  min-width: 200rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 14rpx;
  border: 2rpx solid #eef2ff;
  transition: all 0.3s ease;
}

.model-item.selected {
  border-color: #6366f1;
  background: #f5f7ff;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.2);
}

.model-item:active {
  transform: scale(0.99);
}

.model-icon {
  font-size: 32rpx;
}

.model-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

/* ========== 改型列表 ========== */
.variant-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.variant-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 14rpx;
  border: 2rpx solid #eef2ff;
  transition: all 0.3s ease;
}

.variant-item.selected {
  border-color: #6366f1;
  background: #f5f7ff;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.2);
}

.variant-item:active {
  transform: scale(0.99);
}

.variant-icon {
  font-size: 28rpx;
}

.variant-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

/* ========== 重量输入 ========== */
.weight-input {
  padding: 24rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
}

.weight-range-hint {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  text-align: center;
  margin-bottom: 16rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #f0f4ff 0%, #e8f2ff 100%);
  border-radius: 8rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.3);
}

.custom-input {
  background: #f8fafc;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a202c;
}

/* ========== 参数选择区域 ========== */
.params-section {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.param-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.param-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.param-options {
  display: flex;
  gap: 12rpx;
}

.param-options.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.param-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.param-btn.small {
  padding: 16rpx;
}

.param-btn.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #e8f2ff 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.param-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: white;
}

.btn-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #2d3748;
  text-align: center;
}

/* ========== ACR结果显示 ========== */
.acr-result {
  margin: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #e8f4fd 0%, #dbeafe 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
  animation: resultPop 0.5s ease-out;
}

@keyframes resultPop {
  0% {
    opacity: 0;
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.result-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.result-icon {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.result-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e40af;
}

.result-value {
  font-size: 80rpx;
  font-weight: 800;
  color: #1e40af;
  text-align: center;
  margin: 20rpx 0;
  text-shadow: 0 2rpx 8rpx rgba(30, 64, 175, 0.2);
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(59, 130, 246, 0.2);
}

.result-info text {
  font-size: 24rpx;
  color: #64748b;
}

/* ========== 导航按钮 ========== */
.nav-buttons {
  display: flex;
  gap: 12rpx;
  padding: 24rpx;
}

.nav-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.nav-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.nav-btn.primary:active {
  transform: scale(0.95);
}

.nav-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #4a5568;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.nav-btn.secondary:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.nav-btn.restart {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
}

.nav-btn.restart:active {
  transform: scale(0.95);
}

/* ========== 横幅广告 ========== */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 20rpx 24rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
