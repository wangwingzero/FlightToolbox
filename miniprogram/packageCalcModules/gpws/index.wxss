/* GPWS页面 - 地面逼近警告主题精美设计 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 50%, #feca57 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
}

/* GPWS警告主题动画背景 */
.animated-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

/* 警告灯光效果 */
.warning-light {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(255, 107, 107, 0.5) 0%, transparent 70%);
  border-radius: 50%;
  animation: warningFlash 2s ease-in-out infinite;
}

.warning-light1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.warning-light2 {
  top: 60%;
  right: 20%;
  animation-delay: -0.7s;
}

.warning-light3 {
  bottom: 30%;
  left: 25%;
  animation-delay: -1.3s;
}

@keyframes warningFlash {
  0%, 100% {
    opacity: 0.2;
    transform: scale(0.8);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.3);
  }
}

/* 雷达扫描效果 */
.radar-sweep {
  position: absolute;
  top: 40%;
  right: 10%;
  width: 150rpx;
  height: 150rpx;
  border: 3rpx solid rgba(238, 90, 36, 0.3);
  border-radius: 50%;
  animation: radarSweep 4s linear infinite;
}

.radar-sweep::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 75rpx;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(238, 90, 36, 0.8) 0%, transparent 100%);
  transform-origin: 0 50%;
  animation: radarLine 4s linear infinite;
}

@keyframes radarSweep {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes radarLine {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

/* 地形指示器 */
.terrain-indicator {
  position: absolute;
  bottom: 20%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  margin-left: -50rpx;
  background: radial-gradient(circle, rgba(254, 202, 87, 0.4) 0%, transparent 60%);
  border-radius: 50%;
  animation: terrainPulse 3s ease-in-out infinite;
}

@keyframes terrainPulse {
  0%, 100% {
    transform: scale(0.7);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.4);
    opacity: 0.1;
  }
}

/* 步骤指示器 */
.step-indicator {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 32rpx 32rpx;
  margin-bottom: 24rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 80rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.4);
  transform: scale(1.1);
}

.step-item.completed .step-number {
  background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
  color: white;
}

.step-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  text-align: center;
}

.step-item.active .step-label {
  color: white;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 16rpx;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

.step-line.completed {
  background: linear-gradient(90deg, #00b894 0%, #00a085 100%);
}

/* 主要内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 24rpx 40rpx;
  animation: contentSlideUp 1s ease-out 0.3s both;
}

@keyframes contentSlideUp {
  0% { opacity: 0; transform: translateY(50rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

/* 步骤卡片通用样式 */
.step-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.step-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.3);
}

.card-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

/* GPWS模式选择器 */
.mode-selector {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mode-option {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-option.selected {
  border-color: #ff6b6b;
  background: linear-gradient(135deg, #fff0f0 0%, #ffe8e8 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
}

.mode-option:active {
  transform: scale(0.98);
}

.mode-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 800;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.mode-icon.mode1 {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
}

.mode-icon.mode2 {
  background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
}

.mode-icon.mode3 {
  background: linear-gradient(135deg, #48dbfb 0%, #0abde3 100%);
}

.mode-icon.mode4 {
  background: linear-gradient(135deg, #1dd1a1 0%, #10ac84 100%);
}

.mode-icon.mode5 {
  background: linear-gradient(135deg, #a55eea 0%, #8e44ad 100%);
}

.mode-info {
  flex: 1;
}

.mode-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 4rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.mode-detail {
  font-size: 20rpx;
  color: #a0aec0;
  font-style: italic;
  font-weight: 400;
}

/* 参数输入区域 */
.param-section {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.param-group {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
}

.param-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.param-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.altitude-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.descent-icon {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
}

.terrain-icon {
  background: linear-gradient(135deg, #1dd1a1 0%, #10ac84 100%);
}

.speed-icon {
  background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
}

.aircraft-icon {
  background: linear-gradient(135deg, #48dbfb 0%, #0abde3 100%);
}

.altitude-loss-icon {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
}

.submode-icon {
  background: linear-gradient(135deg, #a55eea 0%, #8e44ad 100%);
}

.max-altitude-icon {
  background: linear-gradient(135deg, #1dd1a1 0%, #10ac84 100%);
}

.glide-slope-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.param-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
}

.custom-input {
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a202c;
  transition: all 0.3s ease;
}

.custom-input:focus-within {
  border-color: #ff6b6b;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 107, 0.1);
}

/* 子模式选择器 */
.submode-selector {
  display: flex;
  gap: 12rpx;
}

.submode-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.submode-option.selected {
  border-color: #ff6b6b;
  background: linear-gradient(135deg, #fff0f0 0%, #ffe8e8 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
}

.submode-option:active {
  transform: scale(0.95);
}

.submode-icon {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: white;
}

.submode-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #2d3748;
  text-align: center;
}

/* 开关组 */
.switch-group {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
}

.switch-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.switch-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #ffffff;
  border-radius: 8rpx;
}

.switch-label {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 导航按钮 */
.navigation-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding: 0 24rpx;
}

.nav-button {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 600;
  font-size: 28rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.nav-button.primary {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
}

.nav-button.primary:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.nav-button.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #4a5568;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.nav-button.secondary:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.nav-icon {
  font-size: 28rpx;
}

.nav-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 结果卡片 */
.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  animation: resultAppear 0.8s ease-out;
}

@keyframes resultAppear {
  0% { opacity: 0; transform: translateY(30rpx) scale(0.95); }
  100% { opacity: 1; transform: translateY(0) scale(1); }
}

.result-header {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.result-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  font-weight: 700;
  font-size: 32rpx;
}

.result-status.safe {
  background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
  color: white;
}

/* 黄色警告：SINK RATE, TERRAIN, DON'T SINK, GLIDE SLOPE等 */
.result-status.warning {
  background: linear-gradient(135deg, #fdcb6e 0%, #f39c12 100%);
  color: white;
}

/* 红色危险：PULL UP等严重威胁 */
.result-status.alert {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
}

.status-icon {
  font-size: 40rpx;
}

.status-text {
  flex: 1;
}

/* 结果内容 */
.result-content {
  padding: 24rpx;
}

.result-message {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-align: center;
}

.result-threshold {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
  text-align: center;
  padding: 12rpx;
  background: #f8fafc;
  border-radius: 8rpx;
}

.result-detail {
  font-size: 22rpx;
  color: #4a5568;
  margin-bottom: 12rpx;
  text-align: center;
  line-height: 1.4;
}

.result-envelope {
  font-size: 20rpx;
  color: #a0aec0;
  text-align: center;
  font-style: italic;
}

/* 重新计算按钮 */
.restart-section {
  padding: 24rpx;
  text-align: center;
}

.restart-button {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
  cursor: pointer;
}

.restart-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.restart-icon {
  font-size: 28rpx;
  animation: rotateIcon 2s ease-in-out infinite;
}

@keyframes rotateIcon {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(180deg); }
}

.restart-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 广告容器样式 */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 20rpx 24rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

