/* PITCH警告页面 - 警告主题精美设计 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 50%, #ff9ff3 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
}

/* 警告主题动画背景 */
.animated-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

/* 警告闪烁动画 */
.warning-flash {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 107, 107, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: warningFlash 2s ease-in-out infinite;
}

.warning-flash1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.warning-flash2 {
  top: 60%;
  right: 20%;
  animation-delay: -1s;
}

@keyframes warningFlash {
  0%, 100% {
    opacity: 0.2;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.2);
  }
}

/* 警告脉冲 */
.warning-pulse {
  position: absolute;
  top: 40%;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  margin-left: -75rpx;
  margin-top: -75rpx;
  background: radial-gradient(circle, rgba(254, 202, 87, 0.4) 0%, transparent 60%);
  border-radius: 50%;
  animation: warningPulse 3s ease-in-out infinite;
}

@keyframes warningPulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.1;
  }
}

/* 雷达扫描效果 */
.radar-sweep {
  position: absolute;
  top: 10%;
  right: 10%;
  width: 100rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 107, 107, 0.6) 50%, transparent 100%);
  transform-origin: left center;
  animation: radarSweep 4s linear infinite;
}

@keyframes radarSweep {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 英雄区域 */
.hero-section {
  position: relative;
  z-index: 10;
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
}

.hero-content {
  animation: heroFadeIn 1s ease-out;
}

@keyframes heroFadeIn {
  0% { opacity: 0; transform: translateY(30rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

.hero-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

/* 步骤进度指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0;
  margin-top: 20rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.step-item.active .step-number {
  background: #ffffff;
  color: #ff6b6b;
  border-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.4);
  transform: scale(1.1);
}

.step-item.completed .step-number {
  background: rgba(255, 255, 255, 0.9);
  color: #10b981;
  border-color: rgba(255, 255, 255, 0.9);
}

.step-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  white-space: nowrap;
}

.step-item.active .step-label {
  color: #ffffff;
  font-weight: 700;
}

.step-line {
  width: 60rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 8rpx;
  margin-bottom: 28rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background: rgba(255, 255, 255, 0.8);
}

/* 主要内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 24rpx 40rpx;
  animation: contentSlideUp 1s ease-out 0.3s both;
  min-height: 60vh;
}

@keyframes contentSlideUp {
  0% { opacity: 0; transform: translateY(50rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

/* 已选机型显示区域 */
.selected-aircraft {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -32rpx -32rpx 28rpx -32rpx;
  color: white;
  min-height: 80rpx;
}

.selected-label {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 500;
  white-space: nowrap;
  margin-right: 16rpx;
}

.selected-value {
  flex: 1;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  line-height: 1.4;
}

.change-btn {
  font-size: 26rpx;
  padding: 10rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  font-weight: 600;
  transition: all 0.3s ease;
  white-space: nowrap;
  margin-left: 16rpx;
}

.change-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 卡片通用样式 */
.aircraft-card,
.input-card,
.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.aircraft-card:hover,
.input-card:hover,
.result-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.3);
}

.card-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

/* 飞机选择器 */
.aircraft-selector {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.aircraft-option {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.aircraft-option.selected {
  border-color: #ff6b6b;
  background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
}

.aircraft-option:active {
  transform: scale(0.98);
}

.aircraft-icon {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.aircraft-info {
  flex: 1;
}

.aircraft-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 4rpx;
}

.aircraft-desc {
  font-size: 22rpx;
  color: #718096;
  font-weight: 500;
}

/* 参数输入 */
.input-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 24rpx;
}

.input-item {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-item:focus-within {
  border-color: #ff6b6b;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 107, 0.1);
}

.input-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.height-icon {
  background: linear-gradient(135deg, #48cae4 0%, #0096c7 100%);
}

.pitch-icon {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
}

.rate-icon {
  background: linear-gradient(135deg, #a8dadc 0%, #457b9d 100%);
}

.input-info {
  flex: 1;
}

.input-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 2rpx;
}

.input-unit {
  font-size: 20rpx;
  color: #718096;
  font-weight: 500;
}

.custom-input {
  background: transparent;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a202c;
  text-align: center;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.primary-action,
.secondary-action {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 600;
  font-size: 28rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.primary-action {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
}

.primary-action:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.secondary-action {
  background: rgba(255, 255, 255, 0.9);
  color: #4a5568;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.secondary-action:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 警告状态 */
.warning-status {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.warning-status.normal {
  background: linear-gradient(135deg, #10b981 0%, #047857 100%);
  color: white;
}

.warning-status.critical {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  animation: criticalPulse 2s ease-in-out infinite;
}

@keyframes criticalPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}

.warning-status::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
  pointer-events: none;
}

.status-icon {
  font-size: 48rpx;
  animation: statusBounce 1s ease-in-out infinite;
}

@keyframes statusBounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.status-content {
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 500;
}

/* 关键数据 */
.key-data {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
  padding: 24rpx;
}

.data-item {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.data-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #feca57 100%);
}

.data-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
}

.data-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.data-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.prediction-icon {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.threshold-icon {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.margin-icon {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
}

.data-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
}

.data-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a202c;
  text-align: center;
}

.data-value.warning {
  color: #ef4444;
  animation: warningPulse 1s ease-in-out infinite;
}

.data-value.safe {
  color: #10b981;
}

/* 输入参数摘要 */
.input-summary {
  background: rgba(255, 107, 107, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 24rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.1);
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.summary-icon {
  font-size: 28rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.summary-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3748;
}

.summary-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

.summary-label {
  font-size: 22rpx;
  color: #4a5568;
  font-weight: 500;
}

.summary-value {
  font-size: 22rpx;
  font-weight: 600;
  color: #1a202c;
}

