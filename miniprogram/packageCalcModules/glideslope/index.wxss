/* 下降率计算页面样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 50%, #2563eb 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
}

/* 动态背景效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(37, 99, 235, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(29, 78, 216, 0.2) 0%, transparent 50%);
  animation: backgroundFloat 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes backgroundFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(1deg); }
  66% { transform: translateY(10px) rotate(-1deg); }
}

/* 计算模块样式 */
.calculation-module {
  margin: 20rpx 16rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(59, 130, 246, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 10;
}

/* 输入区域样式 */
.input-section {
  padding: 32rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.unit-label {
  font-size: 24rpx;
  color: #64748b;
  margin-right: 12rpx;
}

/* 按钮区域样式 */
.action-buttons {
  padding: 0 32rpx 32rpx 32rpx;
  display: flex;
  gap: 16rpx;
}

.action-buttons .van-button {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* 结果区域样式 */
.result-section {
  margin-top: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-top: 1rpx solid #e2e8f0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  text-align: center;
}

.result-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.result-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.1);
  text-align: center;
  transition: all 0.3s ease;
}

.result-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
}

.result-label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.result-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  word-break: break-word;
}

.result-description {
  font-size: 20rpx;
  color: #94a3b8;
  margin-top: 4rpx;
  line-height: 1.3;
}

/* PAPI灯显示样式 */
.papi-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.1);
  border: 2rpx solid #e0f2fe;
}

.papi-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 20rpx;
  text-align: center;
}

.papi-lights-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.papi-light {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  box-shadow:
    0 4rpx 12rpx rgba(0, 0, 0, 0.2),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

/* 红灯效果 */
.papi-light.red {
  background: radial-gradient(circle at 30% 30%, #ff6b6b, #dc2626);
  box-shadow:
    0 4rpx 12rpx rgba(220, 38, 38, 0.4),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.3),
    0 0 20rpx rgba(220, 38, 38, 0.6);
  border: 2rpx solid #991b1b;
}

.papi-light.red::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
  filter: blur(2rpx);
}

/* 白灯效果 */
.papi-light.white {
  background: radial-gradient(circle at 30% 30%, #ffffff, #f8fafc);
  box-shadow:
    0 4rpx 12rpx rgba(148, 163, 184, 0.4),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2),
    0 0 20rpx rgba(255, 255, 255, 0.8);
  border: 2rpx solid #cbd5e1;
}

.papi-light.white::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  filter: blur(2rpx);
}

.papi-description {
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 状态颜色 */
.papi-description.too-low {
  color: #dc2626;
  background: rgba(220, 38, 38, 0.1);
  border: 2rpx solid rgba(220, 38, 38, 0.3);
}

.papi-description.low {
  color: #ea580c;
  background: rgba(234, 88, 12, 0.1);
  border: 2rpx solid rgba(234, 88, 12, 0.3);
}

.papi-description.normal {
  color: #16a34a;
  background: rgba(22, 163, 74, 0.1);
  border: 2rpx solid rgba(22, 163, 74, 0.3);
}

.papi-description.high {
  color: #2563eb;
  background: rgba(37, 99, 235, 0.1);
  border: 2rpx solid rgba(37, 99, 235, 0.3);
}

.papi-description.too-high {
  color: #7c3aed;
  background: rgba(124, 58, 237, 0.1);
  border: 2rpx solid rgba(124, 58, 237, 0.3);
}

/* 广告容器样式 */
.ad-banner-container {
  padding: 20rpx 0;
  background: transparent;
}

