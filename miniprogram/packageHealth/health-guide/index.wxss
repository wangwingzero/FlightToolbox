/* 健康指南页面样式 - 基于体检标准页面设计 */

/* 页面容器优化 */
.container {
  background: 
    linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 20%, #d1fae5 40%, #f0fdf4 60%, #f0f9ff 80%, #f0fdf4 100%),
    radial-gradient(circle at 30% 40%, rgba(34, 197, 94, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(59, 130, 246, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片包装器动画 */
.context7-card-wrapper {
  animation: cardsSlideIn 0.6s ease-out;
}

@keyframes cardsSlideIn {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 健康指南卡片样式 */
.health-guide-card {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(40rpx) saturate(200%);
  border-radius: 28rpx;
  padding: 36rpx;
  box-shadow: 
    0 12rpx 48rpx rgba(34, 197, 94, 0.15),
    0 24rpx 96rpx rgba(34, 197, 94, 0.1),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.95),
    inset 0 -2rpx 0 rgba(34, 197, 94, 0.05);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 3rpx solid rgba(34, 197, 94, 0.12);
  position: relative;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.health-guide-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 50%, #8b5cf6 100%);
  opacity: 0.8;
}

.health-guide-card:hover {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: 
    0 20rpx 64rpx rgba(34, 197, 94, 0.2),
    0 32rpx 128rpx rgba(34, 197, 94, 0.15),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.95);
  border-color: rgba(34, 197, 94, 0.2);
}

.health-guide-card:active {
  transform: translateY(-4rpx) scale(0.99);
  box-shadow: 
    0 8rpx 32rpx rgba(34, 197, 94, 0.18),
    0 16rpx 64rpx rgba(34, 197, 94, 0.12);
}

/* 类型徽章样式 */
.type-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6rpx;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(16rpx);
}

.type-badge::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.type-badge:hover::before {
  left: 100%;
}

.type-badge.comprehensive {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 50%, #059669 100%);
  color: white;
  box-shadow: 
    0 4rpx 16rpx rgba(34, 197, 94, 0.4),
    0 8rpx 32rpx rgba(34, 197, 94, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.type-badge.quick {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #b45309 100%);
  color: white;
  box-shadow: 
    0 4rpx 16rpx rgba(245, 158, 11, 0.4),
    0 8rpx 32rpx rgba(245, 158, 11, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 高亮标识 */
.item-highlight {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: 
    linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(34, 197, 94, 0.08) 100%),
    radial-gradient(circle at 20% 50%, rgba(34, 197, 94, 0.1) 0%, transparent 50%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(34, 197, 94, 0.25);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(8rpx);
}

.item-highlight::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #22c55e, #3b82f6, #22c55e);
  animation: shimmer 2s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

.item-highlight text {
  font-size: 26rpx;
  color: #059669;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(5, 150, 105, 0.2);
}

