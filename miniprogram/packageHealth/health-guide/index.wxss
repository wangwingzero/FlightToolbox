  gap: 24rpx;
}

.stats-card {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  flex-wrap: wrap;
  width: 100%;
  max-width: 600rpx;
}

.stats-item {
  display: flex;
  align-items: center;
  gap: 18rpx;
  padding: 28rpx 36rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(40rpx) saturate(200%);
  border-radius: 28rpx;
  box-shadow: 
    0 8rpx 40rpx rgba(34, 197, 94, 0.15),
    0 16rpx 80rpx rgba(34, 197, 94, 0.1),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.95),
    inset 0 -1rpx 0 rgba(34, 197, 94, 0.08);
  border: 3rpx solid rgba(34, 197, 94, 0.12);
  flex: 1;
  min-width: 180rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.stats-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 50%, #8b5cf6 100%);
  opacity: 0.7;
  border-radius: 28rpx 28rpx 0 0;
}

.stats-item:hover {
  transform: translateY(-6rpx) scale(1.02);
  box-shadow: 
    0 12rpx 56rpx rgba(34, 197, 94, 0.2),
    0 24rpx 112rpx rgba(34, 197, 94, 0.15),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.95);
  border-color: rgba(34, 197, 94, 0.2);
}

.stats-item:hover::before {
  opacity: 1;
}

.stats-icon {
  font-size: 36rpx;
  line-height: 1;
  filter: drop-shadow(0 3rpx 12rpx rgba(34, 197, 94, 0.4));
  transition: all 0.3s ease;
  animation: iconFloat 3s ease-in-out infinite;
