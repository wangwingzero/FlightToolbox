.timezone-switcher-compact {
  display: flex;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.timezone-switcher-compact:active {
  transform: scale(0.95);
  background: #e8eaed;
}

.timezone-toggle-compact {
  display: flex;
  align-items: center;
}

.toggle-track-compact {
  position: relative;
  width: 60rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
}

.timezone-toggle-compact.beijing .toggle-track-compact {
  background: linear-gradient(135deg, #4fc3f7 0%, #29b6f6 100%);
  border-color: #29b6f6;
}

.timezone-toggle-compact.utc .toggle-track-compact {
  background: linear-gradient(135deg, #9c27b0 0%, #7b1fa2 100%);
  border-color: #7b1fa2;
}

.toggle-thumb-compact {
  position: absolute;
  top: 3rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  left: 3rpx;
}

.timezone-toggle-compact.beijing .toggle-thumb-compact {
  transform: translateX(28rpx);
}

.timezone-toggle-compact.utc .toggle-thumb-compact {
  transform: translateX(0);
}

.timezone-text-compact {
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  transition: all 0.3s ease;
}

.timezone-toggle-compact.beijing ~ .timezone-text-compact {
  color: #1976d2;
}

.timezone-toggle-compact.utc ~ .timezone-text-compact {
  color: #7b1fa2;
}

