/* 危险品查询页面样式 - Apple 风格 (Premium Design) */

/* ================== 基础设置 ================== */
page {
  background: linear-gradient(180deg, #F8F9FA 0%, #F2F2F7 100%); /* 柔和的渐变背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  -webkit-font-smoothing: antialiased;
  color: #1C1C1E;
  padding-bottom: env(safe-area-inset-bottom);
}

.container {
  padding: 0;
  background-color: transparent;
  min-height: 100vh;
  box-sizing: border-box;
}

/* ================== 顶部标签栏 ================== */
.modern-tabs-container {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  position: sticky;
  top: 0;
  z-index: 100;
  padding-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.02);
}

.tabs-scroll {
  height: 144rpx;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
}

.tabs-wrapper {
  display: inline-flex;
  padding: 20rpx 20rpx;
  gap: 12rpx;
  align-items: flex-start;
}

.modern-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 14rpx 20rpx;
  border-radius: 22rpx;
  background: #FFFFFF;
  transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid rgba(0, 0, 0, 0.02);
  position: relative;
  flex-shrink: 0;
}

/* 未激活状态的轻微背景色 */
.modern-tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.01) 0%, rgba(0, 0, 0, 0.02) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 22rpx;
  z-index: 0;
}

.modern-tab.active::before {
  opacity: 1;
}

/* 按功能区分的激活背景渐变 */
.modern-tab[data-tab="all"].active {
  background: linear-gradient(135deg, #E3F2FF 0%, #FFFFFF 100%);
  border-color: rgba(0, 122, 255, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.15);
}

.modern-tab[data-tab="emergency"].active {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFFFFF 100%);
  border-color: rgba(255, 59, 48, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(255, 59, 48, 0.15);
}

.modern-tab[data-tab="regulations"].active {
  background: linear-gradient(135deg, #E8F5E9 0%, #FFFFFF 100%);
  border-color: rgba(52, 199, 89, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(52, 199, 89, 0.15);
}

.modern-tab[data-tab="hidden"].active {
  background: linear-gradient(135deg, #F3E5F5 0%, #FFFFFF 100%);
  border-color: rgba(88, 86, 214, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(88, 86, 214, 0.15);
}

.modern-tab[data-tab="groundEmergency"].active {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFFFFF 100%);
  border-color: rgba(255, 149, 0, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(255, 149, 0, 0.15);
}

.modern-tab[data-tab="segregation"].active {
  background: linear-gradient(135deg, #F3E5F5 0%, #FFFFFF 100%);
  border-color: rgba(175, 82, 222, 0.2);
  box-shadow: 0 8rpx 24rpx rgba(175, 82, 222, 0.15);
}

.modern-tab.active {
  transform: translateY(-4rpx) scale(1.02);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
  width: 100%;
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
  filter: grayscale(80%);
  opacity: 0.6;
  transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.modern-tab.active .tab-icon {
  filter: grayscale(0);
  opacity: 1;
  transform: scale(1.1);
}

.tab-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #8E8E93;
  margin-bottom: 6rpx;
  transition: all 0.3s ease;
  text-align: center;
  line-height: 1.3;
  max-width: 100%;
  word-break: keep-all;
  white-space: nowrap;
}

.modern-tab.active .tab-title {
  font-weight: 700;
  letter-spacing: 0.3rpx;
}

/* 按功能区分的激活颜色 - 更鲜明的强调色 */
.modern-tab[data-tab="all"].active .tab-title { color: #007AFF; }
.modern-tab[data-tab="emergency"].active .tab-title { color: #FF3B30; }
.modern-tab[data-tab="regulations"].active .tab-title { color: #34C759; }
.modern-tab[data-tab="hidden"].active .tab-title { color: #5856D6; }
.modern-tab[data-tab="groundEmergency"].active .tab-title { color: #FF9500; }
.modern-tab[data-tab="segregation"].active .tab-title { color: #AF52DE; }

.tab-count {
  font-size: 20rpx;
  color: #C7C7CC;
  background: rgba(0, 0, 0, 0.05);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  white-space: nowrap;
}

/* 激活状态下数字标签使用主题色背景 */
.modern-tab[data-tab="all"].active .tab-count {
  background: rgba(0, 122, 255, 0.12);
  color: #007AFF;
}

.modern-tab[data-tab="emergency"].active .tab-count {
  background: rgba(255, 59, 48, 0.12);
  color: #FF3B30;
}

.modern-tab[data-tab="regulations"].active .tab-count {
  background: rgba(52, 199, 89, 0.12);
  color: #34C759;
}

.modern-tab[data-tab="hidden"].active .tab-count {
  background: rgba(88, 86, 214, 0.12);
  color: #5856D6;
}

.modern-tab[data-tab="groundEmergency"].active .tab-count {
  background: rgba(255, 149, 0, 0.12);
  color: #FF9500;
}

.modern-tab[data-tab="segregation"].active .tab-count {
  background: rgba(175, 82, 222, 0.12);
  color: #AF52DE;
}

/* ================== 搜索栏 ================== */
.search-section {
  padding: 12rpx 24rpx 28rpx;
  background: transparent;
}

.search-section .van-search {
  padding: 0 !important;
  background: transparent !important;
}

.search-section .van-search__content {
  background: #FFFFFF !important;
  border-radius: 28rpx !important;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  padding: 16rpx 28rpx !important;
  border: 2rpx solid rgba(0, 122, 255, 0.08);
  transition: all 0.3s ease;
}

.search-section .van-search__content:active {
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.12), 0 2rpx 10rpx rgba(0, 122, 255, 0.08);
  border-color: rgba(0, 122, 255, 0.2);
  transform: translateY(-2rpx);
}

.search-section .van-field__input {
  font-size: 32rpx;
  color: #1C1C1E;
  font-weight: 500;
}

/* ================== 内容区域 ================== */
.content-area {
  padding: 0 24rpx 40rpx;
}

.tab-content-area,
.all-section,
.regulations-section {
  width: 100%;
}

.content-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #8E8E93;
  margin: 36rpx 8rpx 20rpx;
  text-transform: uppercase;
  letter-spacing: 1.5rpx;
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(0, 122, 255, 0.04);
  border-radius: 20rpx;
  border-left: 6rpx solid rgba(0, 122, 255, 0.3);
}

.content-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
  filter: grayscale(0);
}

.results-section {
  margin-top: 8rpx;
}

/* ================== 列表卡片 (新设计) ================== */
.item-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 28rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05), 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  border: 2rpx solid rgba(0, 0, 0, 0.02);
  overflow: hidden;
}

/* 卡片左侧彩色条带 */
.item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.emergency-item::before { background: linear-gradient(180deg, #FF3B30 0%, #FF6B60 100%); }
.regulation-item::before { background: linear-gradient(180deg, #34C759 0%, #5DD679 100%); }
.hidden-item::before { background: linear-gradient(180deg, #5856D6 0%, #7F7EE6 100%); }
.ground-emergency-item::before { background: linear-gradient(180deg, #FF9500 0%, #FFB040 100%); }

.item:active {
  transform: translateY(-4rpx) scale(0.995);
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.08), 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.item:active::before {
  opacity: 1;
}

/* 左侧图标容器 */
.item-icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

/* 图标容器的光晕效果 */
.item-icon-box::after {
  content: '';
  position: absolute;
  inset: -8rpx;
  border-radius: 28rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.item:active .item-icon-box {
  transform: scale(1.05);
}

.item-icon {
  font-size: 48rpx;
  position: relative;
  z-index: 1;
}

/* 图标背景色 - 更鲜艳的渐变 */
.emergency-icon-bg {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFD0CF 100%);
  color: #FF3B30;
  border: 2rpx solid rgba(255, 59, 48, 0.15);
}

.emergency-icon-bg::after {
  background: radial-gradient(circle, rgba(255, 59, 48, 0.15) 0%, transparent 70%);
}

.regulation-icon-bg {
  background: linear-gradient(135deg, #E8F5E9 0%, #D1EAD2 100%);
  color: #34C759;
  border: 2rpx solid rgba(52, 199, 89, 0.15);
}

.regulation-icon-bg::after {
  background: radial-gradient(circle, rgba(52, 199, 89, 0.15) 0%, transparent 70%);
}

.hidden-icon-bg {
  background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
  color: #5856D6;
  border: 2rpx solid rgba(88, 86, 214, 0.15);
}

.hidden-icon-bg::after {
  background: radial-gradient(circle, rgba(88, 86, 214, 0.15) 0%, transparent 70%);
}

.ground-icon-bg {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE4B8 100%);
  color: #FF9500;
  border: 2rpx solid rgba(255, 149, 0, 0.15);
}

.ground-icon-bg::after {
  background: radial-gradient(circle, rgba(255, 149, 0, 0.15) 0%, transparent 70%);
}

/* 右侧内容 */
.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.item-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1C1C1E;
  line-height: 1.3;
  letter-spacing: -0.5rpx;
}

.item-desc {
  font-size: 28rpx;
  color: #636366;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.item-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  padding-left: 12rpx;
  opacity: 0.5;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.item:active .item-arrow {
  opacity: 0.8;
  transform: translateX(4rpx);
}

/* 标签样式 - 更现代的设计 */
.tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: 0.5rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid transparent;
}

.tag-success {
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.15) 0%, rgba(52, 199, 89, 0.1) 100%);
  color: #2FB055;
  border-color: rgba(52, 199, 89, 0.2);
}

.tag-danger {
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.15) 0%, rgba(255, 59, 48, 0.1) 100%);
  color: #E6342A;
  border-color: rgba(255, 59, 48, 0.2);
}

.tag-warning {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.15) 0%, rgba(255, 149, 0, 0.1) 100%);
  color: #E68500;
  border-color: rgba(255, 149, 0, 0.2);
}

.tag-primary {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.15) 0%, rgba(0, 122, 255, 0.1) 100%);
  color: #006FE6;
  border-color: rgba(0, 122, 255, 0.2);
}

.tag-purple {
  background: linear-gradient(135deg, rgba(88, 86, 214, 0.15) 0%, rgba(88, 86, 214, 0.1) 100%);
  color: #4C4ABD;
  border-color: rgba(88, 86, 214, 0.2);
}

/* ========== 分类分组标题 ========== */
.category-group {
  margin-bottom: 48rpx;
}

.category-header {
  padding: 20rpx 12rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid;
  border-image: linear-gradient(180deg, rgba(0, 122, 255, 0.6) 0%, rgba(0, 122, 255, 0.2) 100%) 1;
}

.category-title {
  font-size: 30rpx;
  font-weight: 800;
  color: #1C1C1E;
  letter-spacing: -0.5rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* ================== 详情弹窗：整体容器 ================== */
/* van-popup 组件样式覆盖 */
.custom-detail-popup {
  padding-right: env(safe-area-inset-right) !important;
  box-sizing: border-box !important;
}

.detail-popup-container {
  background: linear-gradient(180deg, #F8F9FA 0%, #F2F2F7 100%);
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 标题栏 */
.detail-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  padding: 24rpx 32rpx;
  padding-right: calc(32rpx + env(safe-area-inset-right));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.03);
  position: sticky;
  top: 0;
  z-index: 10;
  box-sizing: border-box;
}

.header-left,
.header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #1C1C1E;
  text-align: center;
  flex: 1;
  letter-spacing: -0.5rpx;
}

.back-btn,
.close-btn {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.06);
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.back-btn:active,
.close-btn:active {
  background: rgba(0, 122, 255, 0.15);
  transform: scale(0.95);
}

.back-icon,
.close-icon {
  font-size: 34rpx !important;
  color: #1C1C1E !important;
  font-weight: 700 !important;
}

/* 弹窗滚动内容 */
.detail-content {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  padding-right: calc(32rpx + env(safe-area-inset-right));
  background: transparent;
  box-sizing: border-box;
}

/* ========== 详情分组卡片 ========== */
.detail-section {
  background: #FFFFFF;
  border-radius: 28rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05), 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 2rpx solid rgba(0, 0, 0, 0.02);
}

.detail-section .van-cell-group {
  background: transparent !important;
}

.detail-section .van-cell-group__title {
  padding: 28rpx 32rpx 16rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #8E8E93;
  text-transform: uppercase;
  letter-spacing: 1.2rpx;
}

/* 不同类别标题颜色区分 */
/* 基本信息 - 蓝色 */
.detail-section.section-basic-info .van-cell-group__title {
  color: #007AFF;
  background: linear-gradient(90deg, rgba(0, 122, 255, 0.08) 0%, transparent 100%);
  padding-left: 40rpx;
  border-left: 6rpx solid #007AFF;
  border-radius: 8rpx 0 0 8rpx;
}

/* 详细说明/危险描述 - 橙色(主体内容,最醒目) */
.detail-section.section-detail-description .van-cell-group__title {
  color: #FF9500;
  background: linear-gradient(90deg, rgba(255, 149, 0, 0.08) 0%, transparent 100%);
  padding-left: 40rpx;
  border-left: 6rpx solid #FF9500;
  border-radius: 8rpx 0 0 8rpx;
  font-size: 30rpx;
}

/* 特殊条件/应急程序 - 紫色 */
.detail-section.section-special-condition .van-cell-group__title {
  color: #5856D6;
  background: linear-gradient(90deg, rgba(88, 86, 214, 0.08) 0%, transparent 100%);
  padding-left: 40rpx;
  border-left: 6rpx solid #5856D6;
  border-radius: 8rpx 0 0 8rpx;
}

.description-content {
  padding: 32rpx;
  padding-right: calc(32rpx + env(safe-area-inset-right));
  box-sizing: border-box;
}

.description-text {
  font-size: 32rpx;
  line-height: 1.7;
  color: #1C1C1E;
  word-wrap: break-word;
}

/* 主体内容文字加大 */
.description-text.description-main {
  font-size: 36rpx;
  line-height: 1.8;
  font-weight: 500;
  color: #1C1C1E;
  letter-spacing: 0.3rpx;
}

/* van-cell */
.detail-section .van-cell {
  padding: 32rpx;
  padding-right: calc(32rpx + env(safe-area-inset-right));
  font-size: 32rpx;
  background: #FFFFFF;
  transition: background 0.2s ease;
  box-sizing: border-box;
}

.detail-section .van-cell:active {
  background: rgba(0, 0, 0, 0.02);
}

.detail-section .van-cell::after {
  left: 32rpx;
  right: 32rpx;
  right: calc(32rpx + env(safe-area-inset-right));
  border-color: rgba(0, 0, 0, 0.04);
}

.detail-section .van-cell__title {
  color: #1C1C1E;
  font-weight: 600;
}

.detail-section .van-cell__value {
  color: #636366;
  font-weight: 500;
  word-break: break-all;
  text-align: right;
  padding-right: env(safe-area-inset-right);
}

/* 危险性描述 */
.hazard-section,
.procedure-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  padding-right: calc(24rpx + env(safe-area-inset-right));
  background: rgba(0, 122, 255, 0.03);
  border-radius: 20rpx;
  border-left: 6rpx solid rgba(0, 122, 255, 0.3);
  box-sizing: border-box;
}

.hazard-section:last-child,
.procedure-section:last-child {
  margin-bottom: 0;
}

.hazard-label,
.procedure-label {
  font-size: 28rpx;
  font-weight: 800;
  color: #007AFF;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 1.2rpx;
  word-wrap: break-word;
}

/* 危险描述区域的标签使用与详细说明相同的橙色 */
.section-detail-description .hazard-label {
  color: #FF9500;
}

/* 应急程序区域的标签使用紫色 */
.section-special-condition .procedure-label {
  color: #5856D6;
}

/* 术语高亮 */
.term-highlight {
  color: #007AFF;
  font-weight: 700;
  background: rgba(0, 122, 255, 0.08);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  transition: all 0.2s ease;
}

.clickable-term {
  text-decoration: underline;
  text-underline-offset: 4rpx;
  text-decoration-color: rgba(0, 122, 255, 0.4);
  cursor: pointer;
}

.clickable-term:active {
  background: rgba(0, 122, 255, 0.15);
}

/* ================== 底部操作栏 ================== */
.detail-footer {
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  padding-right: calc(32rpx + env(safe-area-inset-right));
  background: #FFFFFF;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

