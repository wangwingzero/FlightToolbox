/* 危险品查询页面样式 - iOS 17 Premium Design */
/* 升级版：更现代的视觉层次、微动效、深色模式支持 */

/* ================== CSS 变量定义 ================== */
page {
  /* iOS 17 标准色 */
  --color-primary: #007AFF;
  --color-red: #FF3B30;
  --color-orange: #FF9500;
  --color-yellow: #FFCC00;
  --color-green: #34C759;
  --color-mint: #00C7BE;
  --color-teal: #30B0C7;
  --color-cyan: #32ADE6;
  --color-blue: #007AFF;
  --color-indigo: #5856D6;
  --color-purple: #AF52DE;
  --color-pink: #FF2D55;
  
  /* 背景色 */
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: #F8F9FA;
  
  /* 文字色 */
  --text-primary: #1C1C1E;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  /* 分隔线 */
  --separator: rgba(60, 60, 67, 0.12);
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  --shadow-xl: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  
  /* 圆角 */
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  --radius-xl: 36rpx;
  
  /* 过渡 */
  --transition-fast: 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-normal: 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-bounce: 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  
  background: var(--bg-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: var(--text-primary);
  padding-bottom: env(safe-area-inset-bottom);
}

.container {
  padding: 0;
  background-color: transparent;
  min-height: 100vh;
  box-sizing: border-box;
}

/* ================== 顶部标签栏 - iOS 17 Pill 风格 ================== */
.modern-tabs-container {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 16rpx 0 20rpx;
  border-bottom: 1rpx solid var(--separator);
}

.tabs-scroll {
  height: 120rpx;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
}

.tabs-scroll::-webkit-scrollbar {
  display: none;
}

.tabs-wrapper {
  display: inline-flex;
  padding: 12rpx 24rpx;
  gap: 16rpx;
  align-items: center;
}

.modern-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: var(--radius-lg);
  background: rgba(120, 120, 128, 0.08);
  transition: var(--transition-bounce);
  position: relative;
  flex-shrink: 0;
  min-width: 140rpx;
}

/* 激活状态指示器 - 底部光条 */
.modern-tab::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%) scaleX(0);
  width: 48rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: var(--color-primary);
  transition: var(--transition-bounce);
  opacity: 0;
}

.modern-tab.active::after {
  transform: translateX(-50%) scaleX(1);
  opacity: 1;
}

/* 按功能区分的激活背景 - 更柔和的渐变 */
.modern-tab[data-tab="all"].active {
  background: linear-gradient(145deg, rgba(0, 122, 255, 0.12) 0%, rgba(0, 122, 255, 0.06) 100%);
}
.modern-tab[data-tab="all"].active::after { background: var(--color-blue); }

.modern-tab[data-tab="emergency"].active {
  background: linear-gradient(145deg, rgba(255, 59, 48, 0.12) 0%, rgba(255, 59, 48, 0.06) 100%);
}
.modern-tab[data-tab="emergency"].active::after { background: var(--color-red); }

.modern-tab[data-tab="regulations"].active {
  background: linear-gradient(145deg, rgba(52, 199, 89, 0.12) 0%, rgba(52, 199, 89, 0.06) 100%);
}
.modern-tab[data-tab="regulations"].active::after { background: var(--color-green); }

.modern-tab[data-tab="hidden"].active {
  background: linear-gradient(145deg, rgba(88, 86, 214, 0.12) 0%, rgba(88, 86, 214, 0.06) 100%);
}
.modern-tab[data-tab="hidden"].active::after { background: var(--color-indigo); }

.modern-tab[data-tab="groundEmergency"].active {
  background: linear-gradient(145deg, rgba(255, 149, 0, 0.12) 0%, rgba(255, 149, 0, 0.06) 100%);
}
.modern-tab[data-tab="groundEmergency"].active::after { background: var(--color-orange); }

.modern-tab[data-tab="segregation"].active {
  background: linear-gradient(145deg, rgba(175, 82, 222, 0.12) 0%, rgba(175, 82, 222, 0.06) 100%);
}
.modern-tab[data-tab="segregation"].active::after { background: var(--color-purple); }

.modern-tab.active {
  transform: scale(1.02);
}

.modern-tab:active {
  transform: scale(0.96);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
  width: 100%;
  gap: 6rpx;
}

.tab-icon {
  font-size: 40rpx;
  filter: grayscale(60%);
  opacity: 0.7;
  transition: var(--transition-bounce);
}

.modern-tab.active .tab-icon {
  filter: grayscale(0);
  opacity: 1;
  transform: scale(1.15);
}

.tab-title {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-tertiary);
  transition: var(--transition-normal);
  text-align: center;
  line-height: 1.2;
  white-space: nowrap;
}

.modern-tab.active .tab-title {
  font-weight: 700;
}

/* 按功能区分的激活颜色 */
.modern-tab[data-tab="all"].active .tab-title { color: var(--color-blue); }
.modern-tab[data-tab="emergency"].active .tab-title { color: var(--color-red); }
.modern-tab[data-tab="regulations"].active .tab-title { color: var(--color-green); }
.modern-tab[data-tab="hidden"].active .tab-title { color: var(--color-indigo); }
.modern-tab[data-tab="groundEmergency"].active .tab-title { color: var(--color-orange); }
.modern-tab[data-tab="segregation"].active .tab-title { color: var(--color-purple); }

.tab-count {
  font-size: 18rpx;
  color: var(--text-quaternary);
  background: rgba(120, 120, 128, 0.12);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 600;
  transition: var(--transition-normal);
  white-space: nowrap;
}

/* 激活状态下数字标签 */
.modern-tab[data-tab="all"].active .tab-count {
  background: rgba(0, 122, 255, 0.15);
  color: var(--color-blue);
}

.modern-tab[data-tab="emergency"].active .tab-count {
  background: rgba(255, 59, 48, 0.15);
  color: var(--color-red);
}

.modern-tab[data-tab="regulations"].active .tab-count {
  background: rgba(52, 199, 89, 0.15);
  color: var(--color-green);
}

.modern-tab[data-tab="hidden"].active .tab-count {
  background: rgba(88, 86, 214, 0.15);
  color: var(--color-indigo);
}

.modern-tab[data-tab="groundEmergency"].active .tab-count {
  background: rgba(255, 149, 0, 0.15);
  color: var(--color-orange);
}

.modern-tab[data-tab="segregation"].active .tab-count {
  background: rgba(175, 82, 222, 0.15);
  color: var(--color-purple);
}

/* ================== 搜索栏 - iOS 17 风格 ================== */
.search-section {
  padding: 8rpx 24rpx 24rpx;
  background: transparent;
}

.search-section .van-search {
  padding: 0 !important;
  background: transparent !important;
}

.search-section .van-search__content {
  background: rgba(120, 120, 128, 0.12) !important;
  border-radius: var(--radius-lg) !important;
  padding: 20rpx 28rpx !important;
  border: none;
  transition: var(--transition-normal);
}

.search-section .van-search__content:focus-within {
  background: var(--bg-secondary) !important;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.2), var(--shadow-md);
}

.search-section .van-field__input {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.search-section .van-field__input::placeholder {
  color: var(--text-tertiary);
}

/* ================== 内容区域 ================== */
.content-area {
  padding: 0 20rpx 40rpx;
}

.tab-content-area,
.all-section,
.regulations-section {
  width: 100%;
}

/* 内容标题 - 更简洁的设计 */
.content-title {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-tertiary);
  margin: 32rpx 8rpx 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 0;
  background: transparent;
  border: none;
}

.content-icon {
  font-size: 28rpx;
}

.results-section {
  margin-top: 8rpx;
}

/* ================== 列表卡片 - iOS 17 卡片设计 ================== */
.item-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  box-shadow: var(--shadow-sm);
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  transition: var(--transition-normal);
  overflow: hidden;
}

/* 卡片左侧彩色条带 - 始终可见但更细腻 */
.item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  opacity: 0.6;
  transition: var(--transition-fast);
}

.emergency-item::before { background: var(--color-red); }
.regulation-item::before { background: var(--color-green); }
.hidden-item::before { background: var(--color-indigo); }
.ground-emergency-item::before { background: var(--color-orange); }

.item:active {
  transform: scale(0.98);
  background: rgba(0, 0, 0, 0.02);
}

.item:active::before {
  opacity: 1;
  width: 8rpx;
}

/* 左侧图标容器 - 更精致 */
.item-icon-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
  transition: var(--transition-normal);
}

.item:active .item-icon-box {
  transform: scale(1.08);
}

.item-icon {
  font-size: 44rpx;
  position: relative;
  z-index: 1;
}

/* 图标背景色 - 更柔和的单色渐变 */
.emergency-icon-bg {
  background: linear-gradient(145deg, rgba(255, 59, 48, 0.15) 0%, rgba(255, 59, 48, 0.08) 100%);
}

.regulation-icon-bg {
  background: linear-gradient(145deg, rgba(52, 199, 89, 0.15) 0%, rgba(52, 199, 89, 0.08) 100%);
}

.hidden-icon-bg {
  background: linear-gradient(145deg, rgba(88, 86, 214, 0.15) 0%, rgba(88, 86, 214, 0.08) 100%);
}

.ground-icon-bg {
  background: linear-gradient(145deg, rgba(255, 149, 0, 0.15) 0%, rgba(255, 149, 0, 0.08) 100%);
}

/* 机组程序图标背景 */
.crew-icon-bg {
  background: linear-gradient(145deg, rgba(0, 122, 255, 0.15) 0%, rgba(0, 122, 255, 0.08) 100%);
}

/* 标签图标背景 */
.label-icon-bg {
  background: linear-gradient(145deg, rgba(175, 82, 222, 0.15) 0%, rgba(175, 82, 222, 0.08) 100%);
}

/* 右侧内容 */
.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.35;
  letter-spacing: -0.3rpx;
}

.item-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 6rpx;
}

.item-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  padding-left: 8rpx;
  opacity: 0.4;
  transition: var(--transition-fast);
}

.item:active .item-arrow {
  opacity: 0.7;
  transform: translateX(4rpx);
}

/* ================== 标签样式 - iOS 17 Pill 标签 ================== */
.tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 600;
  line-height: 1.2;
  letter-spacing: 0.2rpx;
}

.tag-success {
  background: rgba(52, 199, 89, 0.12);
  color: var(--color-green);
}

.tag-danger {
  background: rgba(255, 59, 48, 0.12);
  color: var(--color-red);
}

.tag-warning {
  background: rgba(255, 149, 0, 0.12);
  color: var(--color-orange);
}

.tag-primary {
  background: rgba(0, 122, 255, 0.12);
  color: var(--color-blue);
}

.tag-purple {
  background: rgba(88, 86, 214, 0.12);
  color: var(--color-indigo);
}

.tag-teal {
  background: rgba(48, 176, 199, 0.12);
  color: var(--color-teal);
}

/* ================== 分类分组标题 - 更轻量 ================== */
.category-group {
  margin-bottom: 40rpx;
}

.category-header {
  padding: 16rpx 8rpx;
  margin-bottom: 12rpx;
}

.category-title {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-tertiary);
  letter-spacing: 0.5rpx;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* ================== 详情弹窗 - iOS 17 Sheet 风格 ================== */
.custom-detail-popup {
  padding-right: env(safe-area-inset-right) !important;
  box-sizing: border-box !important;
}

.detail-popup-container {
  background: var(--bg-primary);
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 标题栏 - 毛玻璃效果 */
.detail-header {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
  padding: 20rpx 24rpx;
  padding-right: calc(24rpx + env(safe-area-inset-right));
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--separator);
  position: sticky;
  top: 0;
  z-index: 10;
  box-sizing: border-box;
}

.header-left,
.header-right {
  width: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  text-align: center;
  flex: 1;
  letter-spacing: -0.3rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.back-btn,
.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(120, 120, 128, 0.12);
  border-radius: 50%;
  transition: var(--transition-bounce);
}

.back-btn:active,
.close-btn:active {
  background: rgba(0, 122, 255, 0.2);
  transform: scale(0.92);
}

.back-icon,
.close-icon {
  font-size: 32rpx !important;
  color: var(--text-primary) !important;
  font-weight: 600 !important;
}

/* 弹窗滚动内容 */
.detail-content {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
  padding-right: calc(24rpx + env(safe-area-inset-right));
  background: transparent;
  box-sizing: border-box;
}

/* ================== 详情分组卡片 - iOS 17 Grouped Style ================== */
.detail-section {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.detail-section .van-cell-group {
  background: transparent !important;
}

.detail-section .van-cell-group__title {
  padding: 20rpx 24rpx 12rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-tertiary);
  text-transform: uppercase;
  letter-spacing: 0.8rpx;
}

/* 不同类别标题颜色区分 - 更微妙的设计 */
.detail-section.section-basic-info .van-cell-group__title {
  color: var(--color-blue);
}

.detail-section.section-detail-description .van-cell-group__title {
  color: var(--color-orange);
}

.detail-section.section-special-condition .van-cell-group__title {
  color: var(--color-indigo);
}

.description-content {
  padding: 20rpx 24rpx;
  padding-right: calc(24rpx + env(safe-area-inset-right));
  box-sizing: border-box;
}

.description-text {
  font-size: 30rpx;
  line-height: 1.65;
  color: var(--text-primary);
  word-wrap: break-word;
}

.description-text.description-main {
  font-size: 32rpx;
  line-height: 1.7;
  font-weight: 500;
}

/* van-cell 样式 */
.detail-section .van-cell {
  padding: 24rpx;
  padding-right: calc(24rpx + env(safe-area-inset-right));
  font-size: 30rpx;
  background: var(--bg-secondary);
  transition: var(--transition-fast);
  box-sizing: border-box;
}

.detail-section .van-cell:active {
  background: rgba(0, 0, 0, 0.02);
}

.detail-section .van-cell::after {
  left: 24rpx;
  right: calc(24rpx + env(safe-area-inset-right));
  border-color: var(--separator);
}

.detail-section .van-cell__title {
  color: var(--text-primary);
  font-weight: 500;
}

.detail-section .van-cell__value {
  color: var(--text-secondary);
  font-weight: 400;
  word-break: break-all;
  text-align: right;
  padding-right: env(safe-area-inset-right);
}

/* 危险性描述区块 - 更精致的卡片内嵌样式 */
.hazard-section,
.procedure-section {
  margin-bottom: 20rpx;
  padding: 20rpx;
  padding-right: calc(20rpx + env(safe-area-inset-right));
  background: rgba(120, 120, 128, 0.06);
  border-radius: var(--radius-md);
  box-sizing: border-box;
}

.hazard-section:last-child,
.procedure-section:last-child {
  margin-bottom: 0;
}

.hazard-label,
.procedure-label {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--color-blue);
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.section-detail-description .hazard-label {
  color: var(--color-orange);
}

.section-special-condition .procedure-label {
  color: var(--color-indigo);
}

/* 术语高亮 */
.term-highlight {
  color: var(--color-blue);
  font-weight: 600;
  background: rgba(0, 122, 255, 0.1);
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  transition: var(--transition-fast);
}

.clickable-term {
  text-decoration: underline;
  text-underline-offset: 4rpx;
  text-decoration-color: rgba(0, 122, 255, 0.3);
}

.clickable-term:active {
  background: rgba(0, 122, 255, 0.2);
}

/* ================== 底部操作栏 ================== */
.detail-footer {
  padding: 20rpx 24rpx calc(20rpx + env(safe-area-inset-bottom));
  padding-right: calc(24rpx + env(safe-area-inset-right));
  background: var(--bg-secondary);
  border-top: 1rpx solid var(--separator);
  box-sizing: border-box;
}

.close-button {
  background: var(--color-blue) !important;
  border: none !important;
  border-radius: var(--radius-md) !important;
  height: 88rpx !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
}

/* ================== 加载更多 & Loading ================== */
.load-more-section {
  padding: 40rpx;
  text-align: center;
}

.load-more-btn {
  background: var(--bg-secondary);
  color: var(--color-blue);
  padding: 20rpx 48rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: var(--shadow-md);
  transition: var(--transition-bounce);
}

.load-more-btn:active {
  transform: scale(0.96);
  background: rgba(0, 122, 255, 0.08);
}

.load-more-icon {
  font-size: 28rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-3rpx); }
}

.load-more-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.loading-section {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 5rpx solid rgba(0, 122, 255, 0.12);
  border-top-color: var(--color-blue);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ================== 广告容器 ================== */
.ad-banner-container {
  margin: 24rpx 0;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

/* ================== 隔离规则 - iOS 17 风格 ================== */
.segregation-intro {
  margin-bottom: 24rpx;
}

.intro-card {
  background: var(--bg-secondary);
  padding: 28rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.intro-title {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.intro-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: 10rpx;
  padding-left: 4rpx;
}

.selector-container {
  margin-bottom: 24rpx;
}

.selector-item {
  background: var(--bg-secondary);
  padding: 20rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 16rpx;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
}

.selector-item:active {
  transform: scale(0.98);
}

.selector-label {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-tertiary);
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.picker-display {
  font-size: 30rpx;
  color: var(--color-blue);
  font-weight: 600;
  padding: 20rpx;
  background: rgba(0, 122, 255, 0.08);
  border-radius: var(--radius-md);
  text-align: center;
  transition: var(--transition-normal);
  line-height: 1.4;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-container {
  margin: 24rpx 0;
}

.result-card {
  background: var(--bg-secondary);
  padding: 28rpx;
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.result-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
}

.result-segregate::before {
  background: var(--color-red);
}

.result-no-segregate::before {
  background: var(--color-green);
}

.result-note::before {
  background: var(--color-orange);
}

.result-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.result-text {
  flex: 1;
}

.result-main {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  color: var(--text-primary);
}

.result-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.notes-container {
  margin-top: 28rpx;
}

.notes-title {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-tertiary);
  margin-bottom: 16rpx;
  padding: 0 4rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.note-item {
  background: var(--bg-secondary);
  padding: 20rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 12rpx;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
}

.note-item:active {
  transform: scale(0.98);
  background: rgba(0, 122, 255, 0.04);
}

.note-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--color-blue);
  margin-bottom: 8rpx;
}

.note-preview {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.possible-items-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.possible-item {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  padding: 16rpx 20rpx;
  background: rgba(88, 86, 214, 0.06);
  border-radius: var(--radius-md);
  font-weight: 500;
}

.highlight-x {
  color: var(--color-red);
  font-weight: 700;
  padding: 0 4rpx;
  background: rgba(255, 59, 48, 0.12);
  border-radius: 4rpx;
}

.highlight-dash {
  color: var(--color-green);
  font-weight: 700;
  padding: 0 4rpx;
  background: rgba(52, 199, 89, 0.12);
  border-radius: 4rpx;
}

.highlight-note {
  color: var(--color-orange);
  font-weight: 700;
  padding: 0 4rpx;
  background: rgba(255, 149, 0, 0.12);
  border-radius: 4rpx;
}

/* Empty State */
.van-empty {
  background: transparent !important;
  padding: 48rpx 0 !important;
}

/* ================== Picker 弹窗美化 ================== */
.wx-picker-item {
  font-size: 52rpx !important;
  font-weight: 600 !important;
  height: 96rpx !important;
  line-height: 96rpx !important;
  color: var(--text-primary) !important;
  text-align: center !important;
}

.wx-picker {
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'PingFang SC', sans-serif !important;
}

.wx-picker-item.wx-picker-item_selected {
  font-weight: 700 !important;
  color: var(--color-blue) !important;
}

.wx-picker__action {
  height: 96rpx !important;
  line-height: 96rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
}

/* ================== 响应式适配 ================== */
@media (max-width: 375px) {
  .modern-tab {
    padding: 12rpx 18rpx;
    min-width: 120rpx;
  }
  
  .tab-icon {
    font-size: 36rpx;
  }
  
  .tab-title {
    font-size: 20rpx;
  }
  
  .tab-count {
    font-size: 16rpx;
    padding: 3rpx 8rpx;
  }
  
  .item {
    padding: 20rpx;
    gap: 16rpx;
  }
  
  .item-icon-box {
    width: 76rpx;
    height: 76rpx;
  }
  
  .item-icon {
    font-size: 38rpx;
  }
  
  .item-title {
    font-size: 28rpx;
  }
  
  .item-desc {
    font-size: 24rpx;
  }
  
  .tag {
    font-size: 18rpx;
    padding: 4rpx 10rpx;
  }
}

/* ================== 深色模式支持 ================== */
@media (prefers-color-scheme: dark) {
  page {
    --bg-primary: #000000;
    --bg-secondary: #1C1C1E;
    --bg-tertiary: #2C2C2E;
    --text-primary: #FFFFFF;
    --text-secondary: #EBEBF5;
    --text-tertiary: #8E8E93;
    --text-quaternary: #636366;
    --separator: rgba(84, 84, 88, 0.65);
  }
  
  .modern-tabs-container {
    background: rgba(28, 28, 30, 0.9);
  }
  
  .modern-tab {
    background: rgba(255, 255, 255, 0.08);
  }
  
  .detail-header {
    background: rgba(28, 28, 30, 0.9);
  }
  
  .search-section .van-search__content {
    background: rgba(255, 255, 255, 0.08) !important;
  }
  
  .search-section .van-search__content:focus-within {
    background: var(--bg-tertiary) !important;
  }
}
