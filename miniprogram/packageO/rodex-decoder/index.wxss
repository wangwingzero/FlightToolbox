/* RODEX 解码器 - 高端优雅风格 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 0;
  position: relative;
}


/* 头部区域 */
.header {
  padding: 50rpx 30rpx 40rpx;
  background: transparent;
  position: relative;
  z-index: 1;
}

.title-container {
  position: relative;
  display: inline-block;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  color: #0f172a;
  letter-spacing: 1px;
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  display: block;
}

.title-decoration {
  position: absolute;
  bottom: -10rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 2rpx;
  opacity: 0.8;
  animation: slideIn 0.6s ease;
}

@keyframes slideIn {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 0.8;
  }
}

/* 模式切换区域 */
.mode-toggle {
  margin: 30rpx 30rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mode-label {
  font-size: 30rpx;
  color: #475569;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.mode-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 显示屏区域 */
.display-section {
  margin: 0 30rpx 30rpx;
  background: #2d3748;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}


.input-display {
  font-size: 52rpx;
  color: #68d391;
  font-family: 'Courier New', monospace;
  font-weight: 600;
  letter-spacing: 6rpx;
  text-align: center;
  min-height: 80rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 闪烁光标 */
.cursor {
  display: inline-block;
  width: 4rpx;
  height: 50rpx;
  background: #68d391;
  margin-left: 4rpx;
  animation: blink 1s ease-in-out infinite;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

/* 空输入提示 */
.empty-hint {
  font-size: 36rpx;
  color: #64748b;
  font-weight: 400;
  letter-spacing: 2rpx;
  opacity: 0.8;
}

.placeholder {
  color: #4a5568;
  opacity: 0.5;
}

.prefix {
  color: #68d391;
  margin-right: 2rpx;
}

/* 提示信息 */
.hint-text {
  font-size: 26rpx;
  color: #94a3b8;
  text-align: center;
  margin-top: 20rpx;
  font-weight: 400;
  letter-spacing: 0.5px;
  min-height: 36rpx;
}

/* 计算器区域 */
.calculator-section {
  padding: 0 30rpx 30rpx;
}

.keyboard-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
}

/* 数字键盘区 */
.numpad-rows {
  margin-bottom: 20rpx;
}

.numpad-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.numpad-row:last-child {
  margin-bottom: 0;
}

.numpad-row .key {
  flex: 1;
  margin: 0 10rpx;
}

.numpad-row .key:first-child {
  margin-left: 0;
}

.numpad-row .key:last-child {
  margin-right: 0;
}

/* 备用flexbox布局 - 如果grid不工作 */
.numpad-section-flex {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.numpad-section-flex .key {
  width: calc(33.333% - 14rpx);
  flex-shrink: 0;
}

/* 特殊按键区 */
.special-rows {
  margin-bottom: 20rpx;
}

.special-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.special-row:last-child {
  margin-bottom: 0;
}

.special-row .key {
  flex: 1;
  margin: 0 10rpx;
}

.special-row .key:first-child {
  margin-left: 0;
}

.special-row .key:last-child {
  margin-right: 0;
}

/* 按键基础样式 */
.key {
  height: 110rpx;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
}


/* 数字按键 */
.num-key {
  background: #f7fafc;
  color: #2d3748;
  border: 1rpx solid #e2e8f0;
}

.num-key:active {
  background: #e2e8f0;
  transform: translateY(2rpx);
}

/* 特殊按键 */
.special-key {
  background: #e6f3ff;
  color: #2b6cb0;
  font-size: 32rpx;
  border: 1rpx solid #bfdbfe;
}

.special-key:active {
  background: #bfdbfe;
  transform: translateY(2rpx);
}

/* CLRD 按键 */
.clrd-key {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #92400e;
  font-weight: 700;
}

.clrd-key:active {
  background: linear-gradient(135deg, #fde68a 0%, #fbbf24 100%);
  transform: translateY(2rpx);
}

/* 方向按键 */
.dir-key {
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
  color: #4338ca;
  font-size: 28rpx;
}

.dir-key:active {
  background: linear-gradient(135deg, #c7d2fe 0%, #a5b4fc 100%);
  transform: translateY(2rpx);
}

/* 斜杠按键 */
.slash-key {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
  color: #be185d;
  font-weight: 700;
}

.slash-key:active {
  background: linear-gradient(135deg, #fbcfe8 0%, #f9a8d4 100%);
  transform: translateY(2rpx);
}

/* 删除按键 */
.delete-key,
.del-key {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  color: #dc2626;
}

.delete-key:active,
.del-key:active {
  background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
  transform: translateY(2rpx);
}

/* 重置按键 */
.reset-key {
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  color: #6b7280;
}

.reset-key:active {
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
  transform: translateY(2rpx);
}

/* 重置按钮区域 */
.reset-section {
  margin-top: 20rpx;
}

.full-width {
  grid-column: 1 / -1;
}

/* 操作按钮区 */
.action-buttons {
  margin-top: 30rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 解析按钮 */
.analyze-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.analyze-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.analyze-btn.disabled {
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
  color: #9ca3af;
  box-shadow: none;
}


/* 结果页面样式 */
.result-header {
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  position: relative;
  overflow: hidden;
}


.result-title {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
}

.code-display {
  font-size: 48rpx;
  font-family: 'Courier New', monospace;
  font-weight: 700;
  letter-spacing: 6rpx;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  display: inline-block;
  position: relative;
  z-index: 1;
}

/* 解析结果卡片 */
.analysis-cards {
  padding: 30rpx;
  padding-bottom: 0;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.info-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

/* 跑道图标 */
.runway-icon {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #2563eb;
}

/* 污染物图标 */
.contaminant-icon {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #d97706;
}

/* 刹车图标 */
.braking-icon {
  background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
  color: #16a34a;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.card-content {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 信息项样式 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.info-label {
  color: #94a3b8;
  font-size: 26rpx;
  flex-shrink: 0;
}

.info-value {
  color: #334155;
  font-size: 28rpx;
  font-weight: 500;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

/* 输入徽章 */
.input-badge {
  background: #fbbf24;
  color: #78350f;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  font-family: 'Courier New', monospace;
  letter-spacing: 1px;
  margin-left: auto;
}


/* 俄罗斯系数表格 */
.ru-coefficient-table {
  margin-top: 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  overflow: hidden;
  background: white;
}

.table-header {
  background: #f9fafb;
  padding: 15rpx 20rpx;
  display: flex;
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
  border-bottom: 1rpx solid #e5e7eb;
}

.table-row {
  padding: 15rpx 20rpx;
  display: flex;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 26rpx;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  text-align: center;
  color: #374151;
}

/* 底部按钮区域 */
.bottom-actions {
  padding: 40rpx 30rpx 60rpx;
  background: #f5f7fa;
}

/* 返回按钮 */
.back-button {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}

/* 动画效果 */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.info-card {
  animation: slideIn 0.4s ease backwards;
}

.info-card:nth-child(1) { animation-delay: 0.1s; }
.info-card:nth-child(2) { animation-delay: 0.2s; }
.info-card:nth-child(3) { animation-delay: 0.3s; }
.info-card:nth-child(4) { animation-delay: 0.4s; }

/* 响应式调整 */
@media (max-width: 350px) {
  .key {
    height: 90rpx;
    font-size: 32rpx;
  }
  
  .special-key,
  .dir-key {
    font-size: 28rpx;
  }
  
  .input-display {
    font-size: 48rpx;
    letter-spacing: 6rpx;
  }
}