.page-header::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transform: translateX(-100%);
  animation: headerShine 3s ease-in-out infinite;
}

@keyframes headerShine {
  0% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
  100% { transform: translateX(100%); }
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  position: relative;
  z-index: 1;
}

.title-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
  animation: rotate 4s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.title-text {
  font-size: 38rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
}

/* 美化的示例引导样式 */
.example-guide {
  margin: 20rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 25rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 25rpx rgba(168, 237, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.example-guide::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, #a8edea, #fed6e3, #a8edea);
  border-radius: 25rpx;
  z-index: -1;
  animation: borderGlow 2s ease-in-out infinite alternate;
}

@keyframes borderGlow {
  0% { opacity: 0.7; }
  100% { opacity: 1; }
}

.guide-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.guide-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.guide-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
}

.guide-description {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.guide-breakdown {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.guide-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 8rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.guide-item.highlight {
  opacity: 1;
  transform: scale(1.1);
}

.guide-code {
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  font-weight: bold;
  color: #2d3436;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 10rpx;
  border-radius: 6rpx;
  margin-bottom: 6rpx;
}

.guide-desc {
  font-size: 20rpx;
  color: #636e72;
  text-align: center;
}

.guide-separator {
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  font-weight: bold;
  color: #2d3436;
  margin: 0 4rpx;
}

.guide-action {
  text-align: center;
  margin-top: 15rpx;
}

/* 输入区域 */
.input-section {
  margin-bottom: 30rpx;
}

.input-tips {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
}

/* 解码按钮 */
.decode-button-section {
  margin: 30rpx 0;
}

.button-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 解码结果 */
.result-section {
  margin-bottom: 30rpx;
}

.result-content {
  padding: 20rpx;
}

/* 原始代码显示 */
.original-code {
  margin-bottom: 30rpx;
}

.code-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15rpx;
  color: white;
}

.code-label {
  font-size: 28rpx;
  font-weight: bold;
}

/* 解码部分卡片 */
.decoded-parts {
  margin-bottom: 30rpx;
}

.part-card {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #1989fa;
}

.part-header {
  margin-bottom: 15rpx;
}

.part-title-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.part-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.part-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 10rpx 0;
}

/* 俄罗斯模式卡片 */
.russia-mode-card {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #fdcb6e;
}

.mode-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.mode-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.mode-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
  flex: 1;
}

.mode-description {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.5;
}

/* 俄罗斯说明卡片 */
.russia-note-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  border-left: 6rpx solid #e17055;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.note-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.note-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.note-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
}

.note-content {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.6;
  white-space: pre-line;
}

/* 美化的帮助区域 */
.help-section {
  margin: 20rpx 20rpx 40rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border: 2rpx solid transparent;
  background-clip: padding-box;
  position: relative;
}

.help-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  border-radius: 25rpx;
  padding: 2rpx;
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
  z-index: -1;
}

/* 美化的格式说明 */
.help-content {
  padding: 30rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  position: relative;
}

.help-content::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
  animation: progressGlow 2s ease-in-out infinite;
}

@keyframes progressGlow {
  0%, 100% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
}

.format-explanation {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
}

.format-title {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f1f2f6;
}

.format-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.format-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
}

.format-breakdown {
  margin-top: 20rpx;
}

.format-item {
  display: flex;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #1989fa;
}

.format-code {
  background: #1989fa;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 120rpx;
  text-align: center;
  align-self: flex-start;
}

.format-desc {
  flex: 1;
}

.desc-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 8rpx;
}

.desc-detail {
  display: block;
  font-size: 24rpx;
  color: #636e72;
  line-height: 1.5;
}

/* 美化的示例区域 */
.examples-content {
  padding: 30rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  position: relative;
}

.examples-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #74b9ff, #0984e3, #74b9ff);
  animation: exampleGlow 2.5s ease-in-out infinite;
}

@keyframes exampleGlow {
  0%, 100% { transform: translateX(-100%) scaleX(0.5); }
  50% { transform: translateX(100%) scaleX(1); }
}

.examples-grid {
  display: grid;
  gap: 20rpx;
}

.example-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.example-card:active {
  transform: scale(0.98);
}

.example-header {
  margin-bottom: 15rpx;
}

.example-code {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  text-align: center;
  position: relative;
  cursor: pointer;
}

.code-display {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  font-family: 'Courier New', monospace;
}

.tap-hint {
  font-size: 22rpx;
  opacity: 0.8;
}

.example-explanation {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.5;
}



/* 响应式设计 */
@media (max-width: 750rpx) {
  .format-item {
    flex-direction: column;
  }
  
  .format-code {
    margin-right: 0;
    margin-bottom: 15rpx;
    align-self: flex-start;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .page-header,
  .part-card,
  .format-explanation,
  .example-card,
  .safety-content,
  .help-section,
  .help-content,
  .examples-content {
    background: #34495e;
    color: #ecf0f1;
  }
  
  .help-content::after,
  .examples-content::before {
    background: linear-gradient(90deg, #3498db, #9b59b6, #3498db);
  }
  
  .header-subtitle,
  .part-content,
  .mode-description,
  .note-content,
  .desc-detail,
  .example-explanation,
  .safety-text {
    color: #bdc3c7;
  }
}