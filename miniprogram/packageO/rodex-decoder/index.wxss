/* RODEX解码器样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

/* 美化的步骤指示器样式 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 20rpx;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 25rpx;
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  position: relative;
}

.step-indicator::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 25rpx;
  padding: 2rpx;
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
  z-index: -1;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step-item.clickable {
  cursor: pointer;
  transition: all 0.3s ease;
}

.step-item.clickable:hover {
  transform: scale(1.05);
}

.step-item.clickable:active {
  transform: scale(0.95);
}

.step-number {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e5e5e5 0%, #d3d3d3 100%);
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.1);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.4);
  animation: pulse 2s infinite;
}

.step-item.completed .step-number {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(81, 207, 102, 0.3);
}

.step-item.completed .step-number::after {
  content: '✓';
  position: absolute;
  font-size: 20rpx;
}

.step-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.step-item.active .step-label {
  color: #1989fa;
  font-weight: bold;
}

.step-item.completed .step-label {
  color: #07c160;
}

.step-line {
  flex: 1;
  height: 6rpx;
  background: linear-gradient(135deg, #e5e5e5 0%, #d3d3d3 100%);
  margin: 0 25rpx;
  margin-top: -35rpx;
  transition: all 0.3s ease;
  border-radius: 3rpx;
  position: relative;
  z-index: 0;
}

.step-line.completed {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  box-shadow: 0 2rpx 8rpx rgba(81, 207, 102, 0.3);
}

.step-line.completed::after {
  content: '';
  position: absolute;
  top: -1rpx;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  border-radius: 4rpx;
  animation: lineGlow 1s ease-in-out;
}

@keyframes lineGlow {
  0% { transform: scaleX(0); }
  100% { transform: scaleX(1); }
}

/* 步骤内容样式 */
.step-content {
  margin: 30rpx 0;
}

/* 美化的实时预览区域 */
.preview-section {
  margin: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 25rpx;
  padding: 35rpx;
  box-shadow: 0 8rpx 35rpx rgba(102, 126, 234, 0.25);
  position: relative;
  overflow: hidden;
}

.preview-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

