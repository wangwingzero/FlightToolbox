/* RODEX解码器样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
  opacity: 0.8;
}

/* 输入区域 */
.input-section {
  margin-bottom: 30rpx;
}

.input-tips {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
}

/* 解码按钮 */
.decode-button-section {
  margin: 30rpx 0;
}

.button-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 解码结果 */
.result-section {
  margin-bottom: 30rpx;
}

.result-content {
  padding: 20rpx;
}

/* 原始代码显示 */
.original-code {
  margin-bottom: 30rpx;
}

.code-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15rpx;
  color: white;
}

.code-label {
  font-size: 28rpx;
  font-weight: bold;
}

/* 解码部分卡片 */
.decoded-parts {
  margin-bottom: 30rpx;
}

.part-card {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #1989fa;
}

.part-header {
  margin-bottom: 15rpx;
}

.part-title-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.part-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.part-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 10rpx 0;
}

/* 俄罗斯模式卡片 */
.russia-mode-card {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #fdcb6e;
}

.mode-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.mode-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.mode-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
  flex: 1;
}

.mode-description {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.5;
}

/* 俄罗斯说明卡片 */
.russia-note-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  border-left: 6rpx solid #e17055;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.note-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.note-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.note-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
}

.note-content {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.6;
  white-space: pre-line;
}

/* 帮助区域 */
.help-section {
  margin-bottom: 40rpx;
}

/* 格式说明 */
.help-content {
  padding: 20rpx;
}

.format-explanation {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
}

.format-title {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f1f2f6;
}

.format-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.format-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
}

.format-breakdown {
  margin-top: 20rpx;
}

.format-item {
  display: flex;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #1989fa;
}

.format-code {
  background: #1989fa;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 120rpx;
  text-align: center;
  align-self: flex-start;
}

.format-desc {
  flex: 1;
}

.desc-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 8rpx;
}

.desc-detail {
  display: block;
  font-size: 24rpx;
  color: #636e72;
  line-height: 1.5;
}

/* 示例区域 */
.examples-content {
  padding: 20rpx;
}

.examples-grid {
  display: grid;
  gap: 20rpx;
}

.example-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.example-card:active {
  transform: scale(0.98);
}

.example-header {
  margin-bottom: 15rpx;
}

.example-code {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  text-align: center;
  position: relative;
  cursor: pointer;
}

.code-display {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  font-family: 'Courier New', monospace;
}

.tap-hint {
  font-size: 22rpx;
  opacity: 0.8;
}

.example-explanation {
  font-size: 26rpx;
  color: #636e72;
  line-height: 1.5;
}

/* 安全提醒 */
.safety-content {
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
}

.safety-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: #fff5f5;
  border-radius: 10rpx;
  border-left: 4rpx solid #ff6b6b;
}

.safety-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.safety-text {
  font-size: 26rpx;
  color: #2d3436;
  line-height: 1.6;
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .format-item {
    flex-direction: column;
  }
  
  .format-code {
    margin-right: 0;
    margin-bottom: 15rpx;
    align-self: flex-start;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .page-header,
  .part-card,
  .format-explanation,
  .example-card,
  .safety-content {
    background: #34495e;
    color: #ecf0f1;
  }
  
  .header-subtitle,
  .part-content,
  .mode-description,
  .note-content,
  .desc-detail,
  .example-explanation,
  .safety-text {
    color: #bdc3c7;
  }
}