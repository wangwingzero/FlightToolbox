/* 便当风格基础样式 */
.bento-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 0;
}

/* 顶部状态栏 */
.status-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.back-btn, .save-btn {
  width: 56rpx;
  height: 56rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active, .save-btn:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

.back-icon, .save-icon {
  font-size: 28rpx;
  color: #475569;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  flex: 1;
  text-align: center;
  margin-right: 72rpx;
}

/* 主要内容区域 */
.bento-content {
  padding: 24rpx 32rpx;
  height: calc(100vh - 120rpx);
}

/* 便当盒基础样式 */
.bento-box {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

/* 事件信息便当盒 */
.event-info-box {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  margin-bottom: 32rpx;
}

.event-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.event-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.event-icon {
  font-size: 48rpx;
}

.event-meta {
  flex: 1;
}

.event-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.event-details {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.urgency-chip, .deadline-chip {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.15);
}

.urgency-chip.urgent {
  background: rgba(239, 68, 68, 0.2);
}

.urgency-icon, .deadline-icon {
  font-size: 16rpx;
}

/* 进度便当格 */
.progress-section {
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  padding-top: 24rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 24rpx;
  font-weight: 500;
}

.progress-stats {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 600;
}

.progress-percent {
  font-size: 20rpx;
  opacity: 0.8;
}

.progress-track {
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10b981, #34d399);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.progress-tips {
  text-align: center;
}

.tip-text {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 表单字段便当盒 */
.form-fields-box {
  margin-bottom: 32rpx;
}

.fields-header {
  margin-bottom: 32rpx;
}

.fields-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.fields-subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.fields-bento {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.field-card {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.field-card:focus-within {
  background: white;
  border-color: #3b82f6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
  transform: translateY(-2rpx);
}

.field-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.field-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.field-info {
  flex: 1;
}

.field-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.required-mark {
  color: #ef4444;
  margin-left: 4rpx;
}

.field-status {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.field-status.empty {
  color: #94a3b8;
}

.field-status.filled {
  color: #10b981;
}

.field-status.required {
  color: #ef4444;
}

.status-icon {
  font-size: 16rpx;
}

/* 输入便当格 */
.input-bento {
  position: relative;
}

.bento-field {
  background: white !important;
  border-radius: 16rpx !important;
  border: 2rpx solid #e5e7eb !important;
  transition: all 0.3s ease !important;
}

.bento-field:focus-within {
  border-color: #3b82f6 !important;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1) !important;
}

.textarea-field {
  min-height: 120rpx !important;
}

.field-example {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #3b82f6;
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.example-icon {
  font-size: 20rpx;
  margin-top: 2rpx;
}

.example-text {
  font-size: 22rpx;
  color: #1e40af;
  line-height: 1.4;
  flex: 1;
}

/* 日期时间选择便当格 */
.datetime-picker {
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.datetime-picker:active {
  border-color: #3b82f6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.datetime-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.datetime-icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  background: #dbeafe;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.datetime-icon {
  font-size: 24rpx;
}

.datetime-text {
  flex: 1;
}

.datetime-value {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.datetime-value.has-value {
  color: #1e293b;
}

.datetime-value.placeholder {
  color: #94a3b8;
}

.datetime-hint {
  font-size: 22rpx;
  color: #64748b;
}

.datetime-arrow {
  font-size: 28rpx;
  color: #cbd5e1;
}

/* 操作按钮便当盒 */
.actions-box {
  margin-bottom: 32rpx;
}

.actions-header {
  margin-bottom: 24rpx;
}

.actions-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.actions-bento {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-card {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

.action-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.draft-card:active {
  background: #f1f5f9;
}

.submit-card.enabled {
  background: linear-gradient(135deg, #10b981, #059669);
  border-color: #10b981;
  color: white;
}

.submit-card.disabled {
  background: #f3f4f6;
  border-color: #d1d5db;
  opacity: 0.6;
}

.action-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.submit-card.enabled .action-icon-wrapper {
  background: rgba(255, 255, 255, 0.2);
}

.action-icon {
  font-size: 28rpx;
}

.submit-card.enabled .action-icon {
  color: white;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.submit-card.enabled .action-title {
  color: white;
}

.action-desc {
  font-size: 22rpx;
  color: #64748b;
}

.submit-card.enabled .action-desc {
  color: rgba(255, 255, 255, 0.8);
}

/* 日期时间选择器便当弹窗 */
.datetime-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
}

.datetime-bento {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx;
  max-height: 80vh;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.picker-actions {
  display: flex;
  gap: 16rpx;
}

.picker-btn {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.picker-btn.cancel {
  color: #64748b;
  background: #f1f5f9;
}

.picker-btn.confirm {
  color: white;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.picker-btn:active {
  transform: scale(0.95);
}

.picker-section {
  margin-bottom: 32rpx;
}

.picker-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.time-picker-bento {
  background: #f8fafc;
  border-radius: 16rpx;
  overflow: hidden;
}

.time-picker-view {
  height: 200rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #1e293b;
}

/* 快捷时间便当格 */
.quick-time-section {
  border-top: 1rpx solid #f3f4f6;
  padding-top: 24rpx;
}

.quick-time-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.quick-time-bento {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.quick-time-btn {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 16rpx 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.quick-time-btn:active {
  background: #3b82f6;
  border-color: #3b82f6;
  transform: scale(0.95);
}

.quick-time-btn:active .quick-icon,
.quick-time-btn:active .quick-text {
  color: white;
}

.quick-icon {
  font-size: 24rpx;
}

.quick-text {
  font-size: 20rpx;
  color: #475569;
  font-weight: 500;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 60rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .bento-content {
    padding: 20rpx 24rpx;
  }
  
  .bento-box {
    padding: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .quick-time-bento {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .actions-bento {
    gap: 12rpx;
  }
}