/* 事件信息填报页面 - 分步引导系统样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 50%, #cbd5e1 100%);
  padding: 20rpx;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.06) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(16, 185, 129, 0.06) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.container > view {
  position: relative;
  z-index: 1;
}

/* 步骤导航 */
.step-navigation {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.steps-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.6);
}

.steps-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.steps-subtitle {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  opacity: 0.9;
}

.steps-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.step-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 8rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  cursor: pointer;
}

.step-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -24rpx;
  top: 32rpx;
  width: 32rpx;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(203, 213, 225, 0.8), rgba(203, 213, 225, 0.4));
  z-index: -1;
}

.step-item.active:not(:last-child)::after {
  background: linear-gradient(90deg, #3b82f6, rgba(59, 130, 246, 0.4));
}

.step-item.active {
  background: rgba(59, 130, 246, 0.08);
  transform: translateY(-2rpx);
}

.step-item.completed {
  background: rgba(16, 185, 129, 0.08);
}

.step-icon {
  font-size: 32rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(203, 213, 225, 0.3);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(203, 213, 225, 0.5);
}

.step-item.active .step-icon {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-color: #3b82f6;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.step-item.completed .step-icon {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-color: #10b981;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.step-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #64748b;
  text-align: center;
  line-height: 1.3;
  transition: all 0.3s ease;
}

.step-item.active .step-text {
  color: #3b82f6;
}

.step-item.completed .step-text {
  color: #10b981;
}

/* 步骤内容 */
.step-content {
  margin-bottom: 120rpx;
}

.step-panel {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

/* 面板头部 */
.panel-header {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: relative;
  overflow: hidden;
}

.panel-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  pointer-events: none;
}

.panel-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.panel-title {
  flex: 1;
  position: relative;
  z-index: 1;
}

.panel-title .title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.panel-title .subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 表单部分 */
.form-sections {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-section {
  background: rgba(248, 250, 252, 0.8);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  transition: all 0.3s ease;
}

.form-section:hover {
  background: rgba(248, 250, 252, 0.95);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.4);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  display: block;
}

.field-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.field-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
}

.field-row.dual {
  gap: 20rpx;
}

.field-row.dual .field-item {
  flex: 1;
}

.field-item {
  position: relative;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.field-input {
  flex: 1;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.6);
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a202c;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.field-input.required {
  border-left: 4rpx solid #ef4444;
}

.field-input:focus {
  border-color: #3b82f6;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 0 6rpx rgba(59, 130, 246, 0.1);
  transform: translateY(-2rpx);
}

.field-textarea {
  width: 100%;
  min-height: 160rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.6);
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1a202c;
  box-sizing: border-box;
  resize: vertical;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.6;
}

.field-textarea.required {
  border-left: 4rpx solid #ef4444;
}

.field-textarea:focus {
  border-color: #3b82f6;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 0 6rpx rgba(59, 130, 246, 0.1);
  transform: translateY(-2rpx);
}

.quick-btn {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.quick-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.2);
}

.quick-text {
  font-size: 22rpx;
  color: white;
}

/* 确认页面摘要 */
.summary-sections {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.summary-card {
  background: rgba(248, 250, 252, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
}

.summary-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.4);
}

.summary-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  display: block;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.summary-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.4);
}

.summary-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #64748b;
  min-width: 120rpx;
  flex-shrink: 0;
}

.summary-value {
  font-size: 26rpx;
  color: #1e293b;
  flex: 1;
  line-height: 1.5;
}

/* 导航按钮 */
.navigation-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(226, 232, 240, 0.6);
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  z-index: 10;
}

.navigation-buttons .btn-secondary,
.navigation-buttons .btn-primary {
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.navigation-buttons .btn-secondary {
  background: rgba(100, 116, 139, 0.1);
  border: 2rpx solid rgba(100, 116, 139, 0.2);
  color: #64748b;
}

.navigation-buttons .btn-primary {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
}

.navigation-buttons .btn-secondary:active {
  transform: scale(0.98);
  background: rgba(100, 116, 139, 0.15);
}

.navigation-buttons .btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.navigation-buttons .btn-secondary.disabled,
.navigation-buttons .btn-primary.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.action-buttons.final {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-buttons.final .btn-secondary,
.action-buttons.final .btn-primary {
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-buttons.final .btn-secondary {
  background: rgba(100, 116, 139, 0.1);
  border: 2rpx solid rgba(100, 116, 139, 0.2);
  color: #64748b;
}

.action-buttons.final .btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 快捷输入弹窗 */
.quick-input-container {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 28rpx 28rpx 0 0;
  padding: 24rpx 24rpx 40rpx;
  max-height: 60vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.quick-header {
  text-align: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.6);
}

.quick-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.quick-content {
  flex: 1;
  overflow-y: auto;
}

.quick-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.quick-option {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  transition: all 0.3s ease;
}

.quick-option:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  background: rgba(59, 130, 246, 0.05);
  border-color: rgba(59, 130, 246, 0.2);
}

.quick-option.template {
  padding: 24rpx;
}

.option-text {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.option-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.option-desc {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}

/* 报告显示弹窗 */
.report-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  position: relative;
  overflow: hidden;
}

.report-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 0 0 48rpx 48rpx;
  padding: 24rpx 32rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.popup-handle {
  width: 80rpx;
  height: 8rpx;
  background: #e2e8f0;
  border-radius: 8rpx;
  margin: 0 auto 32rpx;
}

.report-header .header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.report-header .header-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.emoji-large {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.report-header .header-text {
  flex: 1;
}

.popup-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  opacity: 0.8;
}

.report-content {
  flex: 1;
  padding: 32rpx 24rpx;
  overflow-y: auto;
}

.report-text {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 26rpx;
  line-height: 1.8;
  color: #1e293b;
  white-space: pre-wrap;
  word-wrap: break-word;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.report-footer {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.footer-buttons {
  display: flex;
  gap: 16rpx;
}

.footer-buttons .btn-secondary,
.footer-buttons .btn-primary {
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.footer-buttons .btn-secondary {
  background: rgba(100, 116, 139, 0.1);
  border: 2rpx solid rgba(100, 116, 139, 0.2);
  color: #64748b;
}

.footer-buttons .btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
}

.footer-buttons .btn-secondary:active {
  transform: scale(0.98);
  background: rgba(100, 116, 139, 0.15);
}

.footer-buttons .btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 120rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx;
  }
  
  .step-navigation {
    padding: 24rpx;
  }
  
  .steps-progress {
    gap: 8rpx;
  }
  
  .step-item {
    padding: 12rpx 4rpx;
  }
  
  .step-icon {
    width: 56rpx;
    height: 56rpx;
    font-size: 28rpx;
  }
  
  .step-text {
    font-size: 20rpx;
  }
  
  .panel-header {
    padding: 24rpx;
  }
  
  .panel-icon {
    width: 80rpx;
    height: 80rpx;
    font-size: 48rpx;
  }
  
  .form-sections {
    padding: 24rpx;
  }
  
  .field-input,
  .field-textarea {
    font-size: 26rpx;
  }
  
  .navigation-buttons {
    padding: 20rpx;
  }
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.step-panel {
  animation: slideInUp 0.6s ease-out;
}

.form-section {
  animation: fadeIn 0.8s ease-out;
}

.form-section:nth-child(1) { animation-delay: 0.1s; }
.form-section:nth-child(2) { animation-delay: 0.2s; }
.form-section:nth-child(3) { animation-delay: 0.3s; }
.form-section:nth-child(4) { animation-delay: 0.4s; }
.form-section:nth-child(5) { animation-delay: 0.5s; }