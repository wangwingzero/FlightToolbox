.steps-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.step-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 8rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  cursor: pointer;
}

.step-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -24rpx;
  top: 32rpx;
  width: 32rpx;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(203, 213, 225, 0.8), rgba(203, 213, 225, 0.4));
  z-index: -1;
}

.step-item.active:not(:last-child)::after {
  background: linear-gradient(90deg, #3b82f6, rgba(59, 130, 246, 0.4));
}

.step-item.active {
  background: rgba(59, 130, 246, 0.08);
  transform: translateY(-2rpx);
}

.step-item.completed {
  background: rgba(16, 185, 129, 0.08);
}

.step-icon {
  font-size: 32rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(203, 213, 225, 0.3);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(203, 213, 225, 0.5);
}

.step-item.active .step-icon {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
