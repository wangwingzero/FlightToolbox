/* 便当风格基础样式 */
.bento-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 0;
}

/* 顶部状态栏 */
.status-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

.back-icon {
  font-size: 28rpx;
  color: #475569;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  flex: 1;
  text-align: center;
  margin-right: 72rpx; /* 平衡右侧按钮 */
}

.status-right {
  display: flex;
  gap: 12rpx;
}

.search-toggle {
  width: 56rpx;
  height: 56rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.search-toggle.active {
  background: #3b82f6;
}

.search-toggle:active {
  transform: scale(0.95);
}

.search-icon {
  font-size: 24rpx;
  color: #475569;
}

.search-toggle.active .search-icon {
  color: white;
}

/* 搜索栏便当盒 */
.search-bento {
  background: white;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transform: translateY(-100%);
  opacity: 0;
  transition: all 0.3s ease;
}

.search-bento.show {
  transform: translateY(0);
  opacity: 1;
}

/* 主要内容区域 */
.bento-content {
  padding: 24rpx 32rpx;
  height: calc(100vh - 120rpx);
}

/* 便当盒基础样式 */
.bento-box {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

/* 分类信息便当盒 */
.category-info-box {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  margin-bottom: 32rpx;
}

.info-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.category-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-icon {
  font-size: 48rpx;
}

.category-meta {
  flex: 1;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.category-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.stat-number {
  font-size: 28rpx;
  font-weight: 700;
}

.stat-label {
  font-size: 20rpx;
  opacity: 0.8;
}

.stat-item.urgent .stat-number {
  color: #fecaca;
}

.stat-divider {
  opacity: 0.5;
  font-size: 24rpx;
}

.info-description {
  font-size: 24rpx;
  opacity: 0.8;
  line-height: 1.4;
}

/* 过滤器便当盒 */
.filter-box {
  margin-bottom: 32rpx;
}

.filter-header {
  margin-bottom: 20rpx;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.filter-bento {
  display: flex;
  gap: 12rpx;
}

.filter-chip {
  flex: 1;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 16rpx 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.filter-chip.active {
  background: #3b82f6;
  border-color: #3b82f6;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.filter-chip:active {
  transform: scale(0.95);
}

.chip-icon {
  font-size: 24rpx;
}

.chip-text {
  font-size: 22rpx;
  color: #475569;
  font-weight: 500;
}

.filter-chip.active .chip-icon,
.filter-chip.active .chip-text {
  color: white;
}

/* 搜索结果标题便当盒 */
.results-header-box {
  margin-bottom: 24rpx;
}

.results-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.results-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.results-count {
  background: #dbeafe;
  color: #1d4ed8;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 事件列表便当盒 */
.events-list-box {
  margin-bottom: 32rpx;
}

.events-header {
  margin-bottom: 24rpx;
}

.events-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.events-subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.events-bento {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.event-card {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.event-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: #3b82f6;
}

.event-card:active {
  background: white;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.event-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.event-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
}

.urgency-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
}

.urgency-indicator.urgent {
  background: #ef4444;
}

.urgency-indicator.normal {
  background: #3b82f6;
}

.event-body {
  flex: 1;
}

.event-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.event-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.urgency-chip, .deadline-chip {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.urgency-chip {
  font-weight: 500;
}

.urgency-chip.urgent {
  background: #fef2f2;
  color: #dc2626;
}

.urgency-chip.normal {
  background: #eff6ff;
  color: #2563eb;
}

.deadline-chip {
  background: #f1f5f9;
  color: #64748b;
}

.urgency-icon, .deadline-icon {
  font-size: 16rpx;
}

.urgency-text, .deadline-text {
  font-size: 20rpx;
}

.event-info {
  margin-top: 8rpx;
}

.info-text {
  font-size: 20rpx;
  color: #94a3b8;
}

.event-action {
  margin-left: 16rpx;
}

.action-arrow {
  font-size: 28rpx;
  color: #cbd5e1;
  transition: all 0.3s ease;
}

.event-card:active .action-arrow {
  color: #3b82f6;
  transform: translateX(4rpx);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
  margin-bottom: 8rpx;
}

.empty-title {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.empty-desc {
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.empty-action {
  margin-top: 8rpx;
}

.clear-btn {
  background: #3b82f6;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.clear-btn:active {
  background: #1d4ed8;
  transform: scale(0.95);
}

/* 悬浮操作便当 */
.floating-bento {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  z-index: 100;
}

.fab-btn {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
  transition: all 0.3s ease;
}

.fab-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.fab-icon {
  font-size: 32rpx;
  color: white;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 120rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .bento-content {
    padding: 20rpx 24rpx;
  }
  
  .bento-box {
    padding: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .filter-bento {
    flex-direction: column;
  }
  
  .filter-chip {
    flex-direction: row;
    justify-content: center;
  }
  
  .event-meta {
    flex-direction: column;
    align-items: flex-start;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .bento-container {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  }
  
  .status-bar {
    background: rgba(15, 23, 42, 0.95);
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .status-title {
    color: #f1f5f9;
  }
  
  .back-btn, .search-toggle {
    background: #334155;
  }
  
  .back-icon, .search-icon {
    color: #cbd5e1;
  }
  
  .bento-box {
    background: #1e293b;
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .event-card {
    background: #334155;
    border-color: rgba(255, 255, 255, 0.1);
  }
}