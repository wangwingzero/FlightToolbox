/* 便当风格基础样式 */
.bento-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 0;
}

/* 顶部状态栏 */
.status-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-icon {
  font-size: 36rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.status-right {
  display: flex;
  gap: 12rpx;
}

.status-btn {
  width: 56rpx;
  height: 56rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.status-btn:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

.btn-icon {
  font-size: 24rpx;
}

/* 主要内容区域 */
.bento-content {
  padding: 24rpx 32rpx;
  height: calc(100vh - 120rpx);
}

/* 便当盒基础样式 */
.bento-box {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.bento-box:hover {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

/* 欢迎便当盒 */
.welcome-box {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  margin-bottom: 32rpx;
}

.box-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-text {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.stats-grid {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-card {
  text-align: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 20rpx;
  opacity: 0.7;
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 搜索便当盒 */
.search-box {
  margin-bottom: 32rpx;
}

.search-header {
  margin-bottom: 24rpx;
}

.search-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.search-subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.search-input-wrapper {
  background: #f8fafc;
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

/* 自定义搜索框样式 */
.bento-search {
  background: transparent !important;
}

/* 热门标签区域 */
.tags-section {
  border-top: 1rpx solid #f1f5f9;
  padding-top: 24rpx;
}

.tags-header {
  margin-bottom: 16rpx;
}

.tags-title {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.tags-bento {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.tag-item {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 16rpx 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.tag-item:active {
  background: #3b82f6;
  border-color: #3b82f6;
  transform: scale(0.95);
}

.tag-item:active .tag-icon,
.tag-item:active .tag-text {
  color: white;
}

.tag-icon {
  font-size: 28rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #475569;
  font-weight: 500;
}

/* 搜索结果便当盒 */
.results-box {
  margin-bottom: 32rpx;
}

.results-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.results-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.results-count {
  background: #dbeafe;
  color: #1d4ed8;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.results-bento {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-card {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.result-card:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.result-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.result-icon {
  font-size: 32rpx;
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.urgency-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
}

.urgency-dot.urgent {
  background: #ef4444;
}

.urgency-dot.normal {
  background: #3b82f6;
}

.result-content {
  flex: 1;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.result-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.result-urgency {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.result-urgency.urgent {
  background: #fef2f2;
  color: #dc2626;
}

.result-urgency.normal {
  background: #eff6ff;
  color: #2563eb;
}

.result-deadline {
  font-size: 22rpx;
  color: #64748b;
}

/* 空状态便当盒 */
.empty-box {
  text-align: center;
  padding: 80rpx 32rpx;
  margin-bottom: 32rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 事件分类便当盒 */
.categories-box {
  margin-bottom: 32rpx;
}

.categories-header {
  margin-bottom: 24rpx;
}

.categories-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.categories-subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.categories-bento {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.category-card {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #3b82f6, #1d4ed8);
}

.category-card:active {
  background: white;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  background: white;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  font-size: 36rpx;
}

.card-badge {
  background: #3b82f6;
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  min-width: 40rpx;
  text-align: center;
}

.card-body {
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.card-description {
  margin-bottom: 12rpx;
}

.urgent-info {
  font-size: 20rpx;
  color: #ef4444;
  font-weight: 500;
}

.card-footer {
  border-top: 1rpx solid #e2e8f0;
  padding-top: 12rpx;
}

.card-preview {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.preview-item {
  font-size: 20rpx;
  color: #64748b;
  line-height: 1.3;
}

/* 快速操作便当盒 */
.actions-box {
  margin-bottom: 32rpx;
}

.actions-header {
  margin-bottom: 24rpx;
}

.actions-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.actions-bento {
  display: flex;
  gap: 16rpx;
}

.action-card {
  flex: 1;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-card:active {
  background: white;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 28rpx;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 22rpx;
  color: #64748b;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 60rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .bento-content {
    padding: 20rpx 24rpx;
  }
  
  .bento-box {
    padding: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .categories-bento {
    grid-template-columns: 1fr;
  }
  
  .tags-bento {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .actions-bento {
    flex-direction: column;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .bento-container {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  }
  
  .status-bar {
    background: rgba(15, 23, 42, 0.95);
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .status-title {
    color: #f1f5f9;
  }
  
  .bento-box {
    background: #1e293b;
    border-color: rgba(255, 255, 255, 0.1);
  }
}