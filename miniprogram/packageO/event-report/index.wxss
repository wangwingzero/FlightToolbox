/* 事件信息填报主页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 50%, #cbd5e1 100%);
  padding: 24rpx;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 20%, rgba(59, 130, 246, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 60% 40%, rgba(99, 102, 241, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.container > view {
  position: relative;
  z-index: 1;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(59, 130, 246, 0.3);
  color: white;
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  pointer-events: none;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.header-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  display: block;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  line-height: 1.4;
}

/* 个人信息卡片 */
.info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  pointer-events: none;
}

.info-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.card-icon {
  font-size: 32rpx;
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.card-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a202c;
}

.card-action {
  font-size: 24rpx;
  color: #10b981;
  font-weight: 600;
  padding: 8rpx 16rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.2);
}

.info-content {
  position: relative;
  z-index: 1;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #374151;
  margin-bottom: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 16rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
}

.info-text:last-child {
  margin-bottom: 0;
}

/* 主要功能入口 */
.main-action {
  margin-bottom: 32rpx;
}

.action-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-card.primary {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(59, 130, 246, 0.3);
}

.action-card.primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
  pointer-events: none;
}

.action-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 16rpx 48rpx rgba(59, 130, 246, 0.4);
}

.action-card .card-header {
  margin-bottom: 20rpx;
}

.action-card.primary .card-icon {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.action-card.primary .card-title {
  color: white;
  font-size: 32rpx;
}

.card-content {
  position: relative;
  z-index: 1;
  margin-bottom: 24rpx;
}

.card-description {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
}

.card-subtitle {
  font-size: 22rpx;
  opacity: 0.8;
  display: block;
}

.card-footer {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.start-text {
  font-size: 28rpx;
  font-weight: 600;
}

.arrow {
  font-size: 24rpx;
  opacity: 0.8;
}


/* 个人信息设置弹窗样式 */
.profile-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  position: relative;
  overflow: hidden;
}

/* 弹窗头部 */
.profile-popup-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 0 0 48rpx 48rpx;
  padding: 24rpx 32rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.popup-handle {
  width: 80rpx;
  height: 8rpx;
  background: #e2e8f0;
  border-radius: 8rpx;
  margin: 0 auto 32rpx;
}

.profile-popup-header .header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.profile-popup-header .header-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.emoji-large {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.profile-popup-header .header-text {
  flex: 1;
}

.popup-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  opacity: 0.8;
}

/* 滚动内容区域 */
.profile-content {
  flex: 1;
  padding: 32rpx 24rpx;
  overflow-y: auto;
}

/* 信息卡片 */
.profile-content .info-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: slideInUp 0.6s ease-out;
}

.basic-info {
  animation-delay: 0.1s;
}

.professional-info {
  animation-delay: 0.2s;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片头部 */
.profile-content .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  gap: 16rpx;
}

.card-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(16, 185, 129, 0.3);
}

.professional-info .card-icon-wrapper {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  box-shadow: 0 6rpx 20rpx rgba(59, 130, 246, 0.3);
}

.profile-content .card-icon {
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.profile-content .card-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a202c;
}

.card-badge {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.card-badge.optional {
  background: linear-gradient(135deg, #64748b, #475569);
  box-shadow: 0 4rpx 12rpx rgba(100, 116, 139, 0.3);
}

/* 表单字段 */
.form-fields {
  space: 24rpx;
}

.field-item {
  margin-bottom: 32rpx;
}

.field-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 12rpx;
}

.label-icon {
  font-size: 24rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.label-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
}

.required-mark {
  color: #ef4444;
  font-size: 24rpx;
  font-weight: 600;
}

.field-input {
  width: 100%;
  height: 88rpx;
  background: rgba(248, 250, 252, 0.8);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(226, 232, 240, 0.6);
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a202c;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.field-input:focus {
  border-color: #10b981;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 0 6rpx rgba(16, 185, 129, 0.1);
  transform: translateY(-2rpx);
}

/* 安全提示 */
.security-notice {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.2);
  animation: slideInUp 0.6s ease-out 0.3s both;
}

.notice-icon {
  font-size: 32rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.notice-content {
  flex: 1;
}

.notice-title {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #059669;
  margin-bottom: 8rpx;
}

.notice-text {
  display: block;
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.5;
}

/* 底部操作区 */
.profile-popup-footer {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  background: rgba(100, 116, 139, 0.1);
  border: 2rpx solid rgba(100, 116, 139, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-cancel:active {
  transform: scale(0.98);
  background: rgba(100, 116, 139, 0.15);
}

.btn-save {
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-save:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

.btn-cancel .btn-text {
  color: #64748b;
}

.btn-save .btn-text {
  color: white;
}

.btn-icon {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 填报指南弹窗样式 */
.guide-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  position: relative;
  overflow: hidden;
}

.guide-popup-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 0 0 48rpx 48rpx;
  padding: 24rpx 32rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.guide-popup-header .header-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.guide-content {
  flex: 1;
  padding: 32rpx 24rpx;
  overflow-y: auto;
}

.guide-card, .timing-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.guide-header, .timing-header {
  margin-bottom: 24rpx;
}

.guide-title, .timing-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 8rpx;
}

.guide-subtitle {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
}

.guide-list {
  space: 16rpx;
}

.guide-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: rgba(59, 130, 246, 0.05);
  border-radius: 16rpx;
  border-left: 4rpx solid #3b82f6;
}

.guide-dot {
  width: 12rpx;
  height: 12rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.guide-text {
  flex: 1;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.5;
}

.timing-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  background: rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
}

.timing-icon {
  font-size: 36rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: rgba(59, 130, 246, 0.15);
}

.timing-content {
  flex: 1;
}

.timing-type {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 4rpx;
}

.timing-desc {
  display: block;
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
}

.guide-popup-footer {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.footer-actions {
  display: flex;
  justify-content: center;
}

.btn-understand {
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-understand:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 120rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 20rpx;
  }
  
  
  .page-header {
    padding: 24rpx;
    margin-bottom: 24rpx;
  }
  
  .action-card {
    padding: 32rpx 24rpx;
  }
}