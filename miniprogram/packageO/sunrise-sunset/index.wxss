/* ============================================================
   日出日落  夜航时间 - iOS 17 Premium Design System
   ============================================================ */

/* CSS Variables - iOS 17 Design Tokens */
page {
  --ios-blue: #007AFF;
  --ios-green: #34C759;
  --ios-orange: #FF9500;
  --ios-purple: #AF52DE;
  --ios-red: #FF3B30;
  --ios-teal: #5AC8FA;
  --ios-indigo: #5856D6;
  --ios-yellow: #FFCC00;
  
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: #E5E5EA;
  
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  --sunrise-start: #FFD54F;
  --sunrise-end: #FF9800;
  --sunset-start: #FF7043;
  --sunset-end: #E91E63;
  --night-start: #5C6BC0;
  --night-end: #3949AB;
  
  --card-shadow-sm: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
  --card-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  --card-shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  --radius-xl: 36rpx;
  
  --transition-fast: 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-normal: 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-slow: 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* ============================================================
   Container
   ============================================================ */
.container {
  padding: 0 24rpx 48rpx !important;
  margin: 0 !important;
  background-color: var(--bg-primary, #F2F2F7);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
}

/* ============================================================
   iOS 17 Segmented Control - 模式切换器
   ============================================================ */
.mode-switcher-container {
  padding: 16rpx 0 16rpx;
  background: linear-gradient(to bottom, #F2F2F7 0%, #F2F2F7 90%, transparent 100%);
  position: sticky;
  top: 0;
  z-index: 200;
}

.mode-switcher {
  display: flex;
  background: rgba(118, 118, 128, 0.12);
  border-radius: 20rpx;
  padding: 4rpx;
  position: relative;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  transition: all var(--transition-normal, 0.25s);
  position: relative;
  z-index: 1;
}

.mode-option-active {
  background: #FFFFFF;
  box-shadow:
    0 3rpx 12rpx rgba(0, 0, 0, 0.1),
    0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

.mode-option:active {
  transform: scale(0.97);
  opacity: 0.85;
}

.mode-icon {
  font-size: 36rpx;
  line-height: 1;
  transition: transform var(--transition-fast, 0.15s);
}

.mode-option-active .mode-icon {
  transform: scale(1.1);
}

.mode-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary, #3C3C43);
  letter-spacing: -0.02em;
  transition: color var(--transition-normal, 0.25s);
}

.mode-option-active .mode-label {
  color: var(--ios-blue, #007AFF);
}

/* Panel Animations */
.mode-panel-sunrise,
.mode-panel-night {
  animation-duration: 0.3s;
  animation-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  animation-fill-mode: both;
}

.mode-panel-enter-from-right {
  animation-name: modeFadeSlideFromRight;
}

.mode-panel-enter-from-left {
  animation-name: modeFadeSlideFromLeft;
}

@keyframes modeFadeSlideFromRight {
  from {
    opacity: 0;
    transform: translateX(40rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes modeFadeSlideFromLeft {
  from {
    opacity: 0;
    transform: translateX(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ============================================================
   Premium Card Design - 卡片设计
   ============================================================ */
.airport-input-card {
  background: var(--bg-secondary, #FFFFFF);
  border-radius: var(--radius-lg, 28rpx);
  padding: 28rpx;
  margin: 20rpx 0;
  box-shadow: var(--card-shadow, 0 2rpx 12rpx rgba(0, 0, 0, 0.08));
  border: none;
  position: relative;
  overflow: hidden;
  transition: all var(--transition-normal, 0.25s);
}

.airport-input-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, var(--ios-blue, #007AFF) 0%, var(--ios-teal, #5AC8FA) 100%);
  opacity: 0;
  transition: opacity var(--transition-normal, 0.25s);
}

.airport-input-card:active {
  transform: scale(0.985);
}

.airport-input-card:active::before {
  opacity: 1;
}

/* Card Header */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary, #000000);
  letter-spacing: -0.02em;
}

/* ============================================================
   iOS Style Timezone Switcher - 紧凑时区切换器
   ============================================================ */
.timezone-switcher-compact {
  display: flex;
  align-items: center;
  gap: 10rpx;
  cursor: pointer;
  padding: 10rpx 16rpx;
  border-radius: 24rpx;
  background: rgba(118, 118, 128, 0.08);
  transition: all var(--transition-normal, 0.25s);
}

.timezone-switcher-compact:active {
  transform: scale(0.94);
  background: rgba(118, 118, 128, 0.16);
}

.timezone-toggle-compact {
  display: flex;
  align-items: center;
}

.toggle-track-compact {
  position: relative;
  width: 56rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: var(--text-quaternary, #C7C7CC);
  transition: all var(--transition-normal, 0.25s);
}

.timezone-toggle-compact.beijing .toggle-track-compact {
  background: var(--ios-blue, #007AFF);
}

.timezone-toggle-compact.utc .toggle-track-compact {
  background: var(--ios-purple, #AF52DE);
}

.toggle-thumb-compact {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #FFFFFF;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  transition: all var(--transition-normal, 0.25s);
}

.timezone-toggle-compact.beijing .toggle-thumb-compact {
  transform: translateX(24rpx);
}

.timezone-toggle-compact.utc .toggle-thumb-compact {
  transform: translateX(0);
}

.timezone-text-compact {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary, #3C3C43);
  transition: all var(--transition-fast, 0.15s);
  min-width: 72rpx;
}

.timezone-toggle-compact.beijing ~ .timezone-text-compact {
  color: var(--ios-blue, #007AFF);
}

.timezone-toggle-compact.utc ~ .timezone-text-compact {
  color: var(--ios-purple, #AF52DE);
}

/* ============================================================
   iOS 17 Style Input - 输入框
   ============================================================ */
.input-section {
  margin-bottom: 24rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.airport-input {
  flex: 1;
  height: 96rpx;
  border: none;
  border-radius: var(--radius-md, 20rpx);
  padding: 0 24rpx;
  padding-right: 56rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary, #000000);
  background-color: rgba(118, 118, 128, 0.08);
  transition: all var(--transition-normal, 0.25s);
}

.airport-input::placeholder {
  color: var(--text-tertiary, #8E8E93);
  font-weight: 400;
}

.airport-input:focus {
  background-color: var(--bg-secondary, #FFFFFF);
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.2);
}

.input-clear {
  position: absolute;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: rgba(118, 118, 128, 0.12);
  border-radius: 50%;
  transition: all var(--transition-fast, 0.15s);
}

.input-clear:active {
  transform: scale(0.9);
  background: rgba(118, 118, 128, 0.2);
}

.input-hint {
  font-size: 24rpx;
  color: var(--text-tertiary, #8E8E93);
  margin-top: 12rpx;
  line-height: 1.4;
  padding-left: 8rpx;
}

/* ============================================================
   Airport Info Display - 机场信息展示
   ============================================================ */
.airport-info {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.08) 0%, rgba(90, 200, 250, 0.08) 100%);
  border-radius: var(--radius-md, 20rpx);
  padding: 20rpx 24rpx;
  margin: 16rpx 0;
  border-left: 6rpx solid var(--ios-blue, #007AFF);
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.info-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(0, 122, 255, 0.1);
}

.info-label {
  font-size: 26rpx;
  color: var(--text-tertiary, #8E8E93);
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: var(--text-primary, #000000);
  font-weight: 600;
  max-width: 60%;
  text-align: right;
}

/* ============================================================
   Date/Time Selector - 日期时间选择器
   ============================================================ */
.date-selector,
.time-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  border: none;
  border-radius: var(--radius-md, 20rpx);
  padding: 0 24rpx;
  background-color: rgba(118, 118, 128, 0.08);
  cursor: pointer;
  transition: all var(--transition-normal, 0.25s);
  margin-top: 8rpx;
}

.date-selector:active,
.time-selector:active {
  background-color: rgba(0, 122, 255, 0.12);
  transform: scale(0.98);
}

.date-label,
.time-label {
  font-size: 28rpx;
  color: var(--text-tertiary, #8E8E93);
  font-weight: 500;
}

.date-value,
.time-value {
  font-size: 30rpx;
  color: var(--text-primary, #000000);
  font-weight: 600;
}

/* ============================================================
   Calculate Button - 计算按钮
   ============================================================ */
.calculate-section {
  margin: 32rpx 0;
}

.calculate-button {
  position: relative;
  height: 104rpx;
  background: linear-gradient(135deg, var(--ios-indigo, #5856D6) 0%, var(--ios-purple, #AF52DE) 100%);
  border-radius: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(88, 86, 214, 0.35),
    0 4rpx 12rpx rgba(175, 82, 222, 0.25);
  cursor: pointer;
  overflow: hidden;
  transition: all var(--transition-normal, 0.25s);
}

.calculate-button::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
  pointer-events: none;
}

.calculate-button:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(88, 86, 214, 0.3),
    0 2rpx 8rpx rgba(175, 82, 222, 0.2);
}

.button-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 0.02em;
}

.button-ripple {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at center, rgba(255,255,255,0.3) 0%, transparent 70%);
  opacity: 0;
  transition: opacity var(--transition-fast, 0.15s);
}

.calculate-button:active .button-ripple {
  opacity: 1;
}

/* ============================================================
   Results Card - 结果卡片
   ============================================================ */
.results-card {
  background: var(--bg-secondary, #FFFFFF);
  border-radius: var(--radius-xl, 36rpx);
  padding: 32rpx;
  margin: 28rpx 0;
  box-shadow: var(--card-shadow-lg, 0 8rpx 32rpx rgba(0, 0, 0, 0.12));
  border: none;
  position: relative;
  overflow: hidden;
}

.results-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, 
    var(--ios-orange, #FF9500) 0%, 
    var(--ios-yellow, #FFCC00) 25%,
    var(--ios-green, #34C759) 50%,
    var(--ios-blue, #007AFF) 75%,
    var(--ios-purple, #AF52DE) 100%
  );
}

.results-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}

.results-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary, #000000);
  letter-spacing: -0.02em;
}

/* Results Grid */
.results-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.result-item {
  background: rgba(118, 118, 128, 0.06);
  border-radius: var(--radius-md, 20rpx);
  padding: 20rpx 16rpx;
  text-align: center;
  transition: all var(--transition-fast, 0.15s);
  position: relative;
  overflow: hidden;
}

.result-item::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--text-quaternary, #C7C7CC);
  transition: all var(--transition-fast, 0.15s);
}

.result-item.primary {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(90, 200, 250, 0.1) 100%);
}

.result-item.primary::before {
  background: var(--ios-blue, #007AFF);
}

.result-item.highlight {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.12) 0%, rgba(255, 204, 0, 0.12) 100%);
}

.result-item.highlight::before {
  background: var(--ios-orange, #FF9500);
}

.result-item.percentage {
  background: linear-gradient(135deg, rgba(175, 82, 222, 0.1) 0%, rgba(88, 86, 214, 0.1) 100%);
}

.result-item.percentage::before {
  background: var(--ios-purple, #AF52DE);
}

.result-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-tertiary, #8E8E93);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.result-value {
  display: block;
  font-size: 30rpx;
  color: var(--text-primary, #000000);
  font-weight: 700;
}

.result-item.highlight .result-value {
  color: #E65100;
}

.result-item.percentage .result-value {
  color: var(--ios-purple, #AF52DE);
}

/* ============================================================
   Sun Times Section - 两地日出日落时间
   ============================================================ */
.sun-times-section {
  border-top: 2rpx solid rgba(0, 0, 0, 0.06);
  padding-top: 24rpx;
  margin-top: 8rpx;
}

.sun-times-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.sun-times-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary, #3C3C43);
}

.location-sun-times {
  margin-bottom: 24rpx;
}

.location-sun-times:last-child {
  margin-bottom: 0;
}

.location-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-tertiary, #8E8E93);
  margin-bottom: 12rpx;
  padding-left: 4rpx;
}

/* Sun Time Cards */
.sun-times-main {
  display: flex;
  gap: 16rpx;
}

.sun-time-card {
  flex: 1;
  border-radius: var(--radius-lg, 28rpx);
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all var(--transition-normal, 0.25s);
  position: relative;
  overflow: hidden;
}

.sun-time-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.4) 0%, transparent 50%);
  pointer-events: none;
}

.sun-time-card:active {
  transform: scale(0.97);
}

.sun-time-card.sunrise {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 50%, #FFE082 100%);
  border: 2rpx solid rgba(255, 152, 0, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.2);
}

.sun-time-card.sunset {
  background: linear-gradient(135deg, #FCE4EC 0%, #F8BBD9 50%, #F48FB1 100%);
  border: 2rpx solid rgba(233, 30, 99, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(233, 30, 99, 0.2);
}

.sun-icon {
  font-size: 48rpx;
  line-height: 1;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.1));
}

.sun-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.sun-title {
  font-size: 24rpx;
  color: var(--text-secondary, #3C3C43);
  font-weight: 500;
}

.sun-time {
  font-size: 32rpx;
  color: var(--text-primary, #000000);
  font-weight: 700;
  letter-spacing: -0.02em;
}

.sun-subtitle {
  font-size: 22rpx;
  color: var(--text-tertiary, #8E8E93);
  font-weight: 400;
}

/* Basic Info Grid for Sun Results */
.basic-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.info-item-card {
  background: rgba(118, 118, 128, 0.06);
  border-radius: var(--radius-sm, 12rpx);
  padding: 16rpx;
  text-align: center;
}

.info-card-label {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary, #8E8E93);
  margin-bottom: 6rpx;
  font-weight: 500;
}

.info-card-value {
  display: block;
  font-size: 26rpx;
  color: var(--text-primary, #000000);
  font-weight: 600;
  word-break: break-all;
}

/* ============================================================
   Common Styles - 通用样式
   ============================================================ */
.emoji-icon {
  font-size: 32rpx;
  line-height: 1;
}

.emoji-icon.small {
  font-size: 24rpx;
}

.info-text {
  font-size: 28rpx;
  color: var(--text-secondary, #3C3C43);
  line-height: 1.6;
}

/* ============================================================
   Ad Banner Container - 广告容器
   ============================================================ */
.ad-banner-container {
  margin: 24rpx 0;
  padding: 0;
  border-radius: var(--radius-md, 20rpx);
  overflow: hidden;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: var(--radius-md, 20rpx);
  overflow: hidden;
}

/* ============================================================
   Night Definition Styles - 夜间定义说明
   ============================================================ */
.night-definition-note {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.08) 0%, rgba(90, 200, 250, 0.08) 100%);
  border-radius: var(--radius-md, 20rpx);
  margin: 12rpx 0;
}

.note-text {
  font-size: 24rpx;
  color: var(--ios-blue, #007AFF);
  line-height: 1.5;
  margin-left: 8rpx;
  flex: 1;
}

.night-definition-info {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 204, 0, 0.1) 100%);
  border-radius: var(--radius-md, 20rpx);
  margin: 12rpx 0;
  border-left: 6rpx solid var(--ios-orange, #FF9500);
}

.definition-text {
  font-size: 26rpx;
  color: #E65100;
  line-height: 1.5;
  margin-left: 12rpx;
  flex: 1;
  font-weight: 500;
}

.definition-example {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 16rpx;
  background: rgba(118, 118, 128, 0.06);
  border-radius: var(--radius-sm, 12rpx);
  margin: 8rpx 0;
}

.example-text {
  font-size: 24rpx;
  color: var(--text-tertiary, #8E8E93);
  line-height: 1.4;
  margin-left: 8rpx;
  flex: 1;
}

/* ============================================================
   Legacy Styles - 兼容旧样式
   ============================================================ */
.ad-section {
  margin: 20rpx 0;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 204, 0, 0.1) 100%);
  border-radius: var(--radius-md, 20rpx);
  border-left: 6rpx solid var(--ios-orange, #FF9500);
}

.ad-label {
  display: block;
  font-size: 24rpx;
  color: #E65100;
  margin-bottom: 12rpx;
  font-weight: 500;
  text-align: center;
  opacity: 0.8;
}

.ad-container {
  border-radius: var(--radius-sm, 12rpx);
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9);
}

.ad-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  color: var(--ios-orange, #FF9500);
  font-size: 28rpx;
}

.ad-error {
  display: none;
}

/* Timezone Switcher Card (large version) */
.timezone-switcher-card {
  background: linear-gradient(135deg, var(--ios-indigo, #5856D6) 0%, var(--ios-purple, #AF52DE) 100%);
  border-radius: var(--radius-md, 20rpx);
  padding: 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(88, 86, 214, 0.3);
  cursor: pointer;
  transition: all var(--transition-normal, 0.25s);
}

.timezone-switcher-card:active {
  transform: translateY(2rpx) scale(0.98);
}

.timezone-switcher {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all var(--transition-normal, 0.25s);
}

.timezone-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.timezone-toggle {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.toggle-track {
  position: relative;
  width: 100rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  transition: all var(--transition-normal, 0.25s);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.timezone-toggle.beijing .toggle-track {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  border-color: #29B6F6;
}

.timezone-toggle.utc .toggle-track {
  background: linear-gradient(135deg, #9C27B0 0%, #7B1FA2 100%);
  border-color: #7B1FA2;
}

.toggle-thumb {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all var(--transition-normal, 0.25s);
}

.timezone-toggle.beijing .toggle-thumb {
  transform: translateX(52rpx);
}

.timezone-toggle.utc .toggle-thumb {
  transform: translateX(0);
}

.timezone-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #FFFFFF;
  min-width: 120rpx;
  text-align: center;
}

.timezone-toggle.beijing .timezone-text {
  color: #4FC3F7;
}

.timezone-toggle.utc .timezone-text {
  color: #CE93D8;
}

.timezone-hint {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 6rpx;
  animation: hintPulse 2s ease-in-out infinite;
}

@keyframes hintPulse {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* Night Flight Status Card */
.night-flight-status-card {
  background: linear-gradient(135deg, #1E1E2E 0%, #2D1B69 100%);
  border-radius: var(--radius-lg, 28rpx);
  padding: 32rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(29, 27, 105, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.status-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.flight-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--ios-indigo, #5856D6) 0%, var(--ios-purple, #AF52DE) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-ring {
  position: absolute;
  width: 88rpx;
  height: 88rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  top: -4rpx;
  left: -4rpx;
  animation: avatarPulse 2s ease-in-out infinite;
}

@keyframes avatarPulse {
  0%, 100% { transform: scale(1); opacity: 0.7; }
  50% { transform: scale(1.05); opacity: 1; }
}

.flight-info {
  flex: 1;
  margin-left: 20rpx;
}

.flight-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.flight-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.3;
}

.night-definition-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-md, 20rpx);
  padding: 20rpx;
  border-left: 4rpx solid var(--ios-orange, #FF9500);
}

.definition-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.definition-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 12rpx;
}

.definition-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

