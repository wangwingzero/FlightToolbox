/* 个人检查单页面 - 航空主题精美设计 */

/* ===== 页面容器 - 浅色主题（默认） ===== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 30%, #e2e8f0 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
  color: #1a202c;
}

/* ===== 航空主题动画背景 ===== */
.animated-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

/* 航空光晕动画 - 浅色主题 */
.aviation-glow {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  animation: aviationGlow 3s ease-in-out infinite;
}

.aviation-glow1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.aviation-glow2 {
  top: 70%;
  right: 15%;
  animation-delay: -1.5s;
}

@keyframes aviationGlow {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.3);
  }
}

/* 航空脉冲 - 浅色主题 */
.aviation-pulse {
  position: absolute;
  top: 45%;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  margin-left: -75rpx;
  margin-top: -75rpx;
  background: radial-gradient(circle, rgba(16, 185, 129, 0.2) 0%, transparent 60%);
  border-radius: 50%;
  animation: aviationPulse 4s ease-in-out infinite;
}

@keyframes aviationPulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.8);
    opacity: 0.1;
  }
}

/* 雷达扫描效果 - 浅色主题 */
.radar-sweep {
  position: absolute;
  top: 20%;
  right: 20%;
  width: 120rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(59, 130, 246, 0.6) 50%, transparent 100%);
  transform-origin: left center;
  animation: radarSweep 6s linear infinite;
}

@keyframes radarSweep {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 浮动粒子 */
.floating-particles {
  position: absolute;
  width: 100%;
  height: 100%;
}

.floating-particles::before,
.floating-particles::after {
  content: '';
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: rgba(59, 130, 246, 0.6);
  border-radius: 50%;
  animation: floatingParticles 8s linear infinite;
}

.floating-particles::before {
  top: 30%;
  left: 20%;
  animation-delay: 0s;
}

.floating-particles::after {
  top: 60%;
  right: 30%;
  animation-delay: -4s;
}

@keyframes floatingParticles {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(-100vh) rotate(360deg);
    opacity: 0;
  }
}

/* ===== 英雄区域 ===== */
.hero-section {
  position: relative;
  z-index: 10;
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
}

.hero-content {
  animation: heroFadeIn 1.2s ease-out;
}

@keyframes heroFadeIn {
  0% { 
    opacity: 0; 
    transform: translateY(40rpx); 
  }
  100% { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

.hero-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: aviationBounce 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 12rpx rgba(59, 130, 246, 0.4));
}

@keyframes aviationBounce {
  0%, 20%, 50%, 80%, 100% { 
    transform: translateY(0) rotate(0deg) scale(1); 
  }
  40% { 
    transform: translateY(-20rpx) rotate(5deg) scale(1.1); 
  }
  60% { 
    transform: translateY(-10rpx) rotate(-3deg) scale(1.05); 
  }
}

.hero-title {
  font-size: 56rpx;
  font-weight: 800;
  color: #1a202c;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, #1a202c 0%, #2563eb 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: titleShimmer 3s ease-in-out infinite;
}

@keyframes titleShimmer {
  0%, 100% { filter: brightness(1); }
  50% { filter: brightness(1.2); }
}

.hero-subtitle {
  font-size: 30rpx;
  color: #4a5568;
  margin-bottom: 40rpx;
  font-weight: 500;
  text-shadow: none;
}

.hero-features {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 32rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  animation: featureFloat 4s ease-in-out infinite;
}

.feature-item:nth-child(2) { animation-delay: -1.3s; }
.feature-item:nth-child(3) { animation-delay: -2.6s; }

@keyframes featureFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.feature-icon {
  font-size: 28rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(37, 99, 235, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(37, 99, 235, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, 0.15);
}

.feature-item text {
  font-size: 22rpx;
  color: #374151;
  font-weight: 600;
}

/* ===== 主要内容区域 ===== */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 24rpx 60rpx;
  animation: contentSlideUp 1.2s ease-out 0.4s both;
}

@keyframes contentSlideUp {
  0% { 
    opacity: 0; 
    transform: translateY(60rpx); 
  }
  100% { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

/* ===== 统计卡片 ===== */
.stats-card {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(226, 232, 240, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  transition: all 0.3s ease;
}

.stat-item.completed {
  border-color: rgba(16, 185, 129, 0.3);
  background: rgba(16, 185, 129, 0.1);
}

.stat-item.progress {
  border-color: rgba(251, 191, 36, 0.3);
  background: rgba(251, 191, 36, 0.1);
}

.stat-item.total {
  border-color: rgba(59, 130, 246, 0.3);
  background: rgba(59, 130, 246, 0.1);
}

.stat-icon {
  font-size: 32rpx;
  animation: statPulse 2s ease-in-out infinite;
}

@keyframes statPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.stat-content {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a202c;
  line-height: 1;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #4a5568;
  font-weight: 500;
}

/* ===== 检查单网格 ===== */
.checklist-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

/* ===== 检查单卡片 ===== */
.checklist-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(226, 232, 240, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s ease-out;
}

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.checklist-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
}

.checklist-card.completed {
  border-color: rgba(16, 185, 129, 0.3);
  background: rgba(16, 185, 129, 0.08);
}

.checklist-card.in-progress {
  border-color: rgba(59, 130, 246, 0.3);
  background: rgba(59, 130, 246, 0.08);
}

/* 卡片状态指示器 */
.card-status-indicator {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #3b82f6 0%, #10b981 100%);
  opacity: 0.8;
}

.checklist-card.completed .card-status-indicator {
  background: linear-gradient(90deg, #10b981 0%, #059669 100%);
}

/* ===== 卡片头部 ===== */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a202c;
  line-height: 1.3;
  flex: 1;
  margin-right: 16rpx;
  text-shadow: none;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.edit-btn {
  background: rgba(59, 130, 246, 0.2);
  border: 1rpx solid rgba(59, 130, 246, 0.3);
}

.edit-btn:active {
  background: rgba(59, 130, 246, 0.3);
  transform: scale(0.9);
}

.delete-btn {
  background: rgba(239, 68, 68, 0.2);
  border: 1rpx solid rgba(239, 68, 68, 0.3);
}

.delete-btn:active {
  background: rgba(239, 68, 68, 0.3);
  transform: scale(0.9);
}

.btn-icon {
  font-size: 28rpx;
}

/* ===== 卡片内容 ===== */
.card-content {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

/* 进度环形图 */
.progress-circle-container {
  flex-shrink: 0;
}

.progress-circle {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}

.circle-bg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(from 0deg, rgba(255, 255, 255, 0.1) 0deg, rgba(255, 255, 255, 0.05) 360deg);
  position: absolute;
}

.circle-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(
    from -90deg,
    #3b82f6 0deg,
    #10b981 calc(var(--progress) * 3.6deg),
    transparent calc(var(--progress) * 3.6deg),
    transparent 360deg
  );
  position: absolute;
  animation: progressRotate 2s ease-out;
}

@keyframes progressRotate {
  0% { transform: rotate(-90deg) scale(0.8); }
  100% { transform: rotate(-90deg) scale(1); }
}

.circle-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.progress-percentage {
  font-size: 24rpx;
  font-weight: 800;
  color: #1a202c;
  line-height: 1;
}

.progress-label {
  font-size: 18rpx;
  color: #4a5568;
  font-weight: 500;
}

/* 详细进度信息 */
.progress-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.progress-numbers {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.progress-current {
  font-size: 48rpx;
  font-weight: 800;
  color: #3b82f6;
  line-height: 1;
}

.progress-divider {
  font-size: 32rpx;
  color: #a0aec0;
  font-weight: 600;
}

.progress-total {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a5568;
  line-height: 1;
}

.progress-text {
  font-size: 24rpx;
  color: #4a5568;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.completion-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.completion-badge.completed {
  background: rgba(16, 185, 129, 0.2);
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.completion-badge.in-progress {
  background: rgba(251, 191, 36, 0.2);
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

.badge-icon {
  font-size: 20rpx;
}

.badge-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #1a202c;
}

/* 悬浮操作按钮 */
.card-quick-actions {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
}

.quick-action-btn {
  width: 48rpx;
  height: 48rpx;
  background: rgba(59, 130, 246, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(59, 130, 246, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
  transition: all 0.3s ease;
}

.quick-action-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.quick-action-icon {
  font-size: 20rpx;
}

/* ===== 创建卡片 ===== */
.create-card {
  background: rgba(255, 255, 255, 0.7);
  border-radius: 28rpx;
  padding: 48rpx 32rpx;
  border: 2rpx dashed rgba(59, 130, 246, 0.6);
  backdrop-filter: blur(20rpx);
  transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  animation: createCardFloat 6s ease-in-out infinite;
}

@keyframes createCardFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.create-card:active {
  transform: translateY(-8rpx) scale(0.98);
  border-color: #3b82f6;
  border-style: solid;
  box-shadow: 0 16rpx 48rpx rgba(59, 130, 246, 0.3);
}

.create-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.03) 0%, rgba(16, 185, 129, 0.03) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.create-card:active .create-card-bg {
  opacity: 1;
}

.create-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.create-icon-container {
  position: relative;
}

.create-icon {
  font-size: 56rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.4);
  transition: all 0.4s ease;
}

.create-card:active .create-icon {
  transform: scale(1.1) rotate(90deg);
  box-shadow: 0 12rpx 40rpx rgba(59, 130, 246, 0.6);
}

.create-glow {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #10b981);
  opacity: 0;
  z-index: -1;
  animation: createGlow 3s ease-in-out infinite;
}

@keyframes createGlow {
  0%, 100% { opacity: 0; transform: scale(1); }
  50% { opacity: 0.3; transform: scale(1.1); }
}

.create-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.create-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a202c;
  text-shadow: none;
}

.create-subtitle {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.4;
  font-weight: 500;
}

/* 创建卡片粒子 */
.create-particles {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.particle {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: rgba(59, 130, 246, 0.6);
  border-radius: 50%;
  animation: particleFloat 4s ease-in-out infinite;
}

.particle1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.particle2 {
  top: 70%;
  right: 20%;
  animation-delay: -1.3s;
}

.particle3 {
  bottom: 30%;
  left: 70%;
  animation-delay: -2.6s;
}

@keyframes particleFloat {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.4;
  }
  50% {
    transform: translateY(-20rpx) scale(1.2);
    opacity: 0.8;
  }
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 48rpx;
  text-align: center;
}

.empty-animation {
  position: relative;
  margin-bottom: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.6;
  animation: emptyBounce 3s ease-in-out infinite;
}

@keyframes emptyBounce {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-20rpx) scale(1.1); }
}

.empty-pulse {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 160rpx;
  height: 160rpx;
  margin-left: -80rpx;
  margin-top: -80rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.3);
  border-radius: 50%;
  animation: emptyPulse 2s ease-in-out infinite;
}

@keyframes emptyPulse {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.empty-content {
  max-width: 480rpx;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 16rpx;
  text-shadow: none;
}

.empty-description {
  font-size: 28rpx;
  color: #4a5568;
  line-height: 1.5;
  font-weight: 500;
}

/* ===== 详情弹窗样式 ===== */
.detail-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.detail-header {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  padding: 40rpx 32rpx;
  color: #f8fafc;
  position: relative;
  overflow: hidden;
}

.detail-bg-animation {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
  animation: detailBgShift 4s ease-in-out infinite;
}

@keyframes detailBgShift {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 0.8; }
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 800;
  flex: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.close-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.9);
}

.close-icon {
  font-size: 28rpx;
  color: rgba(248, 250, 252, 0.8);
}

.progress-overview {
  display: flex;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 24rpx;
}

/* 大型进度环 */
.large-progress-circle {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.large-circle-bg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(from 0deg, rgba(255, 255, 255, 0.2) 0deg, rgba(255, 255, 255, 0.1) 360deg);
  position: absolute;
