  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(8rpx);
  z-index: 1100;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  animation: fadeIn 0.3s ease;
}

.input-modal {
  width: 100%;
  max-width: 560rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 24rpx 64rpx rgba(15, 23, 42, 0.15),
    0 8rpx 32rpx rgba(15, 23, 42, 0.1);
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.input-modal-header {
  padding: 32rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 1rpx solid #e2e8f0;
}

.input-modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  text-align: center;
}

.input-modal-content {
  padding: 32rpx;
}

.input-modal-content .input-wrapper {
  margin-bottom: 16rpx;
}

.item-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1e293b;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.item-input:focus {
  border-color: #3b82f6;
  background: #fefefe;
}

.input-modal-footer {
  display: flex;
  padding: 24rpx 32rpx 32rpx;
  gap: 16rpx;
}

.input-cancel-btn,
.input-confirm-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.input-cancel-btn {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.input-cancel-btn:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.input-confirm-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.input-confirm-btn:active {
  transform: scale(0.98);
}

/* ========== 动画效果 ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* ========== 响应式优化 ========== */
@media (max-width: 400px) {
  .modal-header {
    padding: 32rpx 32rpx 24rpx;
  }
  
  .modal-content {
    padding: 0 32rpx;
  }
  
  .modal-footer {
    padding: 24rpx 32rpx 32rpx;
  }
}