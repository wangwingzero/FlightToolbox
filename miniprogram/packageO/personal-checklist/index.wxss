/* 大型进度环 - 优雅浅色版本 - 压缩尺寸 */
.large-progress-circle {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  flex-shrink: 0;
}

.large-circle-bg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(from 0deg, 
    rgba(226, 232, 240, 0.3) 0deg, 
    rgba(241, 245, 249, 0.5) 360deg);
  position: absolute;
  box-shadow: 
    inset 0 4rpx 8rpx rgba(0, 0, 0, 0.05),
    0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.large-circle-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(
    from -90deg,
    #3b82f6 0deg,
    #06b6d4 calc(var(--progress) * 1.8deg),
    #10b981 calc(var(--progress) * 3.6deg),
    transparent calc(var(--progress) * 3.6deg),
    transparent 360deg
  );
  position: absolute;
  animation: largeProgressRotate 2.5s ease-out;
  filter: drop-shadow(0 4rpx 8rpx rgba(59, 130, 246, 0.2));
}

@keyframes largeProgressRotate {
  0% { 
    transform: rotate(-90deg) scale(0.8);
    opacity: 0;
  }
  100% { 
    transform: rotate(-90deg) scale(1);
    opacity: 1;
  }
}

.large-circle-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.large-progress-percentage {
  font-size: 36rpx;
  font-weight: 800;
  color: #1e293b;
  line-height: 1;
  margin-bottom: 6rpx;
