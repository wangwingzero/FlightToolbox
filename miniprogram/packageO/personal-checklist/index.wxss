/* ===== 个人检查单 - 简洁苹果风格 ===== */

page {
  --blue: #007AFF;
  --green: #34C759;
  --orange: #FF9500;
  --red: #FF3B30;
  --bg: #F2F2F7;
  --card: #FFFFFF;
  --text: #000000;
  --text2: #3C3C43;
  --text3: #8E8E93;
  --border: #E5E5EA;
}

.container {
  min-height: 100vh;
  background: var(--bg);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  -webkit-font-smoothing: antialiased;
}

/* ===== 主内容 ===== */
.main-content {
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* ===== 检查单列表 ===== */
.checklist-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* ===== 检查单卡片 ===== */
.checklist-card {
  background: var(--card);
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  position: relative;
  box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.04);
}

.checklist-card:active {
  opacity: 0.9;
  transform: scale(0.99);
}

.card-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  flex: 1;
  margin-right: 16rpx;
}

.card-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.card-progress {
  display: flex;
  align-items: center;
  padding: 4rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.04);
}

.progress-done {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--blue);
}

.checklist-card.completed .progress-done {
  color: var(--green);
}

.progress-sep {
  font-size: 24rpx;
  color: var(--text3);
  margin: 0 4rpx;
}

.progress-total {
  font-size: 24rpx;
  color: var(--text3);
}

/* 进度条 */
.card-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 6rpx;
  background: var(--border);
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--blue);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.checklist-card.completed .progress-fill {
  background: var(--green);
}

.card-status {
  font-size: 22rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.card-status.pending {
  color: var(--orange);
  background: rgba(255, 149, 0, 0.1);
}

.card-status.done {
  color: var(--green);
  background: rgba(52, 199, 89, 0.1);
}

/* 操作按钮（右上角小图标） */
.card-actions {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border: 1rpx solid var(--border);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

.action-btn:active {
  opacity: 0.7;
}

.action-btn.delete {
  border-color: rgba(255, 59, 48, 0.25);
}

.action-btn.delete .action-icon {
  color: var(--red);
}

.action-icon {
  font-size: 22rpx;
  color: var(--text3);
}

/* ===== 广告 ===== */
.ad-container {
  margin: 16rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

/* ===== 创建卡片 ===== */
.create-card {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: var(--card);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  border: 2rpx dashed var(--border);
}

.create-card:active {
  background: var(--bg);
}

.create-icon {
  width: 48rpx;
  height: 48rpx;
  background: var(--blue);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 300;
}

.create-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--blue);
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text3);
  line-height: 1.5;
}

/* ===== 详情弹窗 ===== */
.detail-sheet {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: var(--bg);
  border-radius: 24rpx 24rpx 0 0;
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  background: var(--card);
  border-bottom: 1rpx solid var(--border);
}

.sheet-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text);
}

.sheet-close {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--blue);
}

.sheet-close:active {
  opacity: 0.6;
}

/* 进度摘要 */
.sheet-summary {
  padding: 24rpx;
  background: var(--card);
  margin: 16rpx;
  border-radius: 16rpx;
}

.summary-progress {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.summary-done {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--blue);
}

.summary-sep {
  font-size: 32rpx;
  color: var(--text3);
  margin: 0 8rpx;
}

.summary-total {
  font-size: 32rpx;
  color: var(--text3);
}

.summary-bar {
  height: 8rpx;
  background: var(--border);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.summary-fill {
  height: 100%;
  background: var(--blue);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.summary-actions {
  display: flex;
  gap: 16rpx;
}

.summary-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--blue);
  background: rgba(0, 122, 255, 0.1);
  border-radius: 12rpx;
}

.summary-btn:active {
  opacity: 0.7;
}

.summary-btn.reset {
  color: var(--red);
  background: rgba(255, 59, 48, 0.1);
}

/* 检查项列表 */
.sheet-content {
  flex: 1;
  padding: 0 16rpx 24rpx;
}

.check-list {
  background: var(--card);
  border-radius: 16rpx;
  overflow: hidden;
}

.check-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid var(--border);
}

.check-item:last-child {
  border-bottom: none;
}

.check-item:active {
  background: var(--bg);
}

.check-item.checked {
  background: rgba(52, 199, 89, 0.05);
}

.check-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.4;
}

.check-item.checked .check-text {
  color: var(--text3);
  text-decoration: line-through;
}

/* ===== 编辑弹窗 ===== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.edit-modal {
  width: 100%;
  max-width: 640rpx;
  max-height: 80vh;
  background: var(--card);
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--border);
}

.modal-cancel,
.modal-save {
  font-size: 28rpx;
  font-weight: 500;
  min-width: 80rpx;
}

.modal-cancel {
  color: var(--text3);
}

.modal-save {
  color: var(--blue);
  text-align: right;
}

.modal-cancel:active,
.modal-save:active {
  opacity: 0.6;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
}

.modal-body {
  flex: 1;
  padding: 24rpx;
  max-height: 60vh;
}

/* 表单 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text2);
  margin-bottom: 12rpx;
}

.item-count {
  font-size: 22rpx;
  color: var(--text3);
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--text);
  background: var(--bg);
  border: none;
  border-radius: 12rpx;
  box-sizing: border-box;
}

/* 编辑项列表 */
.edit-items {
  background: var(--bg);
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.edit-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid var(--border);
}

.edit-item:last-child {
  border-bottom: none;
}

.edit-item-num {
  width: 36rpx;
  height: 36rpx;
  background: var(--blue);
  color: #fff;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.edit-item-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text);
  line-height: 1.4;
}

.edit-item-input {
  flex: 1;
  height: 56rpx;
  padding: 0 12rpx;
  font-size: 26rpx;
  color: var(--text);
  background: var(--card);
  border: 1rpx solid var(--blue);
  border-radius: 8rpx;
  box-sizing: border-box;
}

.edit-item-actions {
  display: flex;
  gap: 4rpx;
}

.item-action {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: var(--text3);
  border-radius: 8rpx;
}

.item-action:active {
  background: var(--border);
}

.item-action.save {
  color: var(--green);
}

.item-action.del {
  color: var(--red);
}

/* 空项 */
.empty-items {
  padding: 40rpx;
  text-align: center;
}

.empty-items-text {
  font-size: 24rpx;
  color: var(--text3);
}

/* 添加项 */
.add-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  background: rgba(0, 122, 255, 0.08);
  border-radius: 12rpx;
}

.add-item:active {
  opacity: 0.7;
}

.add-item-icon {
  font-size: 28rpx;
  color: var(--blue);
  font-weight: 300;
}

.add-item-text {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--blue);
}

/* ===== 添加项弹窗 ===== */
.add-modal {
  width: 560rpx;
  background: var(--card);
  border-radius: 20rpx;
  overflow: hidden;
}

.add-modal-title {
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
  text-align: center;
  border-bottom: 1rpx solid var(--border);
}

.add-modal-input {
  margin: 24rpx;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--text);
  background: var(--bg);
  border: none;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.add-modal-btns {
  display: flex;
  border-top: 1rpx solid var(--border);
}

.add-modal-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
}

.add-modal-btn.cancel {
  color: var(--text3);
  border-right: 1rpx solid var(--border);
}

.add-modal-btn.confirm {
  color: var(--blue);
}

.add-modal-btn:active {
  background: var(--bg);
}

/* ===== 底部广告 ===== */
.bottom-ad {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--card);
  z-index: 100;
  padding: 8rpx;
}

/* ===== 响应式 ===== */
@media (max-width: 375px) {
  .card-title {
    font-size: 28rpx;
  }
  .progress-done {
    font-size: 36rpx;
  }
  .main-content {
    padding: 16rpx;
  }
}
