  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.tips-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #27ae60;
}

.tips-content {
  margin-top: 15rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin: 12rpx 0;
}

.tip-number {
  font-size: 20rpx;
  font-weight: bold;
  color: #27ae60;
  margin-right: 10rpx;
  min-width: 30rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #2c3e50;
  line-height: 1.5;
  flex: 1;
}

.completion-note {
  background: linear-gradient(135deg, #27ae60, #229954);
  border-radius: 15rpx;
  padding: 25rpx;
  margin: 25rpx 0;
  color: white;
}

.completion-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.completion-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.completion-title {
  font-size: 28rpx;
  font-weight: bold;
}

.completion-content {
  font-size: 24rpx;
  line-height: 1.6;
  opacity: 0.95;
}