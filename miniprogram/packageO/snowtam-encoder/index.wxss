/* 雪情通告编码器样式文件 */

/* 全局输入框样式 - 防止溢出 */
input {
  box-sizing: border-box;
}

/* 雪情通告特定样式 */
.container {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f8fafc 100%);
  min-height: 100vh;
  padding: 20rpx;
}

/* 页面标题样式 - 调整为雪情主题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.98);
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.1);
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #1e40af;
  letter-spacing: 0.5rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

/* 双行步骤指示器样式调整 */
.step-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
  background: rgba(255, 255, 255, 0.95);
  padding: 24rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(59, 130, 246, 0.08);
  border: 1rpx solid rgba(59, 130, 246, 0.08);
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
  max-width: 100rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
  background: #e0e0e0;
  color: #999;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.step-item.completed .step-number {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
}

.step-label {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.step-item.active .step-label {
  color: #3498db;
  font-weight: bold;
}

.step-item.completed .step-label {
  color: #27ae60;
  font-weight: bold;
}

.step-line {
  flex: 1;
  height: 3rpx;
  background: #e0e0e0;
  margin: 0 10rpx;
  transition: background 0.3s ease;
}

.step-line.completed {
  background: linear-gradient(90deg, #27ae60, #229954);
}

/* 实时预览区域 - 雪情主题 */
.preview-section {
  margin: 20rpx 0;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.preview-header {
  text-align: center;
  margin-bottom: 20rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  background: linear-gradient(45deg, #3498db, #2980b9);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.preview-code-container {
  border: 2rpx dashed #3498db;
  border-radius: 10rpx;
  padding: 20rpx;
  background: #f8fafc;
}

.preview-code-parts {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 10rpx;
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  line-height: 1.5;
}

.code-part {
  padding: 5rpx 8rpx;
  margin: 2rpx;
  border-radius: 6rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.code-part.pending {
  background: #ecf0f1;
  color: #95a5a6;
}

.code-part.active {
  background: linear-gradient(45deg, #3498db, #2980b9);
  color: white;
  animation: pulse 1.5s infinite;
}

.code-part.completed {
  background: linear-gradient(45deg, #27ae60, #229954);
  color: white;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.current-input-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx;
  padding: 10rpx;
  background: rgba(52, 152, 219, 0.1);
  border-radius: 8rpx;
}

.hint-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.hint-text {
  font-size: 22rpx;
  color: #3498db;
  font-weight: 500;
}

/* 步骤卡片样式 */
.step-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
