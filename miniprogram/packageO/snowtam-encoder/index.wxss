/* SNOWTAM解码器样式 - 固定格式输入设计 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 30rpx;
}

/* 顶部标题 */
.header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.header-title .icon {
  font-size: 48rpx;
  margin-right: 15rpx;
}

.header-title text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

/* 固定格式单行显示 */
.fixed-format-display {
  display: flex;
  flex-wrap: wrap;  /* 允许换行 */
  align-items: center;
  justify-content: center;  /* 居中对齐 */
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  margin: 25rpx 0;
  min-height: 150rpx;  /* 增加高度以容纳两行 */
  box-sizing: border-box;
  line-height: 1.8;  /* 增加行高 */
}

.format-char {
  font-family: 'Courier New', monospace;
  font-size: 32rpx;  /* 增大字体 */
  font-weight: bold;
  display: inline-block;
  min-width: 26rpx;  /* 增加最小宽度 */
  text-align: center;
  padding: 10rpx 2rpx;  /* 增加内边距 */
  line-height: 1.4;
  transition: all 0.2s;
}

.format-char.char-separator {
  color: #999;
  min-width: 20rpx;  /* 分隔符宽度 */
  padding: 10rpx 1rpx;
  font-size: 30rpx;  /* 分隔符字体 */
}

.format-char.char-empty {
  color: #ccc;
  border-bottom: 2rpx solid #ddd;
  min-width: 26rpx;
}

.format-char.char-filled {
  color: #333;
  border-bottom: 2rpx solid transparent;
  min-width: 26rpx;
}

.format-char.char-active {
  color: #667eea;
  background: #f0f4ff;
  border-bottom: 3rpx solid #667eea;
  transform: scale(1.08);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.2);
  border-radius: 5rpx;
}

/* 换行样式 */
.line-break {
  width: 100%;
  height: 0;
  display: block;
}

.format-hint {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 15rpx;
}

.input-hint {
  font-size: 26rpx;
  color: #667eea;
  text-align: center;
  margin-top: 15rpx;
  font-weight: 500;
}

/* 固定格式输入区域 */
.fixed-input-section {
  margin: 20rpx 15rpx 0;  /* 添加顶部边距 */
  padding: 35rpx 10rpx;  /* 调整内边距 */
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* 快速示例 */
.examples-section {
  margin: 25rpx 30rpx;
}

.section-title {
  color: white;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.examples-list {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.example-button {
  padding: 15rpx 25rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.example-button:active {
  transform: scale(0.95);
  background: white;
}

/* 动态键盘 */
.keyboard-section {
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx 20rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.keyboard-title {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.keyboard-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.keyboard-grid.keyboard-special {
  grid-template-columns: repeat(4, 1fr);
}

.keyboard-grid.keyboard-rwycc {
  grid-template-columns: repeat(4, 1fr);
}

.keyboard-grid.keyboard-surface {
  grid-template-columns: repeat(4, 1fr);
}

/* 键盘按键 */
.key {
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  transition: all 0.2s;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  flex-direction: column;
}

.key:active {
  transform: scale(0.95);
  background: #e0e0e0;
}

.key-number {
  background: #fff;
  color: #667eea;
  border: 1rpx solid #667eea;
  font-size: 32rpx;
}

.key-direction {
  background: #f8f9fa;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}

.key-empty {
  background: #e0e0e0;
  color: #999;
}

/* RWYCC键盘特殊样式 */
.key-rwycc {
  height: 100rpx;
  padding: 10rpx;
}

.rwycc-num {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.rwycc-desc {
  font-size: 18rpx;
  color: #666;
}

.key-rwycc-6 {
  background: #f6ffed;
  border: 2rpx solid #52c41a;
}

.key-rwycc-5 {
  background: #f6ffed;
  border: 2rpx solid #73d13d;
}

.key-rwycc-4 {
  background: #fffbe6;
  border: 2rpx solid #fadb14;
}

.key-rwycc-3 {
  background: #fff7e6;
  border: 2rpx solid #fa8c16;
}

.key-rwycc-2 {
  background: #fff2e8;
  border: 2rpx solid #ff4d4f;
}

.key-rwycc-1 {
  background: #fff1f0;
  border: 2rpx solid #cf1322;
}

.key-rwycc-0 {
  background: #fff5f5;
  border: 2rpx solid #820014;
}

/* 覆盖率键盘 - 快捷模式 */
.keyboard-grid.keyboard-coverage-quick {
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.keyboard-coverage-quick .key {
  background: #e8f5e9;
  border: 2rpx solid #4caf50;
  color: #2e7d32;
  font-weight: bold;
  font-size: 28rpx;
  height: 90rpx;
}

.keyboard-coverage-quick .key:active {
  background: #c8e6c9;
  transform: scale(0.95);
}

/* 覆盖率键盘 - 原始样式保留 */
.key-coverage {
  background: #e8f5e9;
  border: 1rpx solid #4caf50;
  color: #2e7d32;
  font-weight: bold;
}

/* 深度键盘 */
.key-depth {
  background: #fff3e0;
  border: 1rpx solid #ff9800;
  color: #e65100;
  font-weight: bold;
  font-size: 24rpx;
}

/* 表面状况键盘 */
.key-surface {
  background: #e3f2fd;
  border: 1rpx solid #2196f3;
  color: #0d47a1;
  font-size: 20rpx;
  padding: 10rpx 5rpx;
  height: 90rpx;
}

/* 表面状况快捷键盘 */
.keyboard-surface-quick {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8rpx;
  margin-top: 20rpx;
}

.keyboard-surface-quick .key {
  height: 70rpx;
  background: linear-gradient(145deg, #e0f0ff, #c8e0ff);
  border: 2rpx solid #a0c8ff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 500;
  color: #1a5490;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 80, 200, 0.1);
  padding: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.keyboard-surface-quick .key:active {
  transform: scale(0.95);
  background: linear-gradient(145deg, #c8e0ff, #b0d0ff);
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 15rpx;
  margin-top: 30rpx;
  padding: 0 10rpx;
}

.btn {
  flex: 1;
  height: 90rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.btn-delete {
  background: #ff6b6b;
  color: white;
}

.btn-clear {
  background: #f0f0f0;
  color: #666;
}

.btn-decode {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

.btn:active {
  transform: scale(0.98);
}

.btn-decode.disabled {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

/* 输入完成时的脉冲动画效果 */
.btn-decode.complete-pulse {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 15rpx 40rpx rgba(102, 126, 234, 0.6);
  }
}

/* 结果视图 */
.result-header {
  background: white;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-back, .nav-new {
  color: #667eea;
  font-size: 28rpx;
  padding: 10rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 结果内容 */
.result-content {
  height: calc(100vh - 120rpx);
  background: #f5f7fa;
  padding-bottom: 30rpx;
}

.result-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #667eea05 0%, #764ba205 100%);
}

.section-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.section-body {
  padding: 25rpx 30rpx;
}

/* 跑道信息 */
.info-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.info-value.code {
  font-family: monospace;
  background: #f8f9fa;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
}

/* 性能评估卡片 */
.assessment-card {
  padding: 25rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  border-left: 6rpx solid #667eea;
}

.assessment-card.assessment-CRITICAL {
  border-left-color: #820014;
  background: #fff5f5;
}

.assessment-card.assessment-DANGEROUS {
  border-left-color: #cf1322;
  background: #fff1f0;
}

.assessment-card.assessment-WARNING {
  border-left-color: #ff4d4f;
  background: #fff2e8;
}

.assessment-card.assessment-CAUTION {
  border-left-color: #fa8c16;
  background: #fffbe6;
}

.assessment-card.assessment-NORMAL {
  border-left-color: #52c41a;
  background: #f6ffed;
}

.assessment-metrics {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.metric {
  display: flex;
  align-items: center;
}

.metric-label {
  color: #666;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.metric-value {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}

.assessment-recommendation {
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  padding-top: 15rpx;
  border-top: 1rpx dashed #e0e0e0;
}

/* 跑道段卡片 */
.segment-card {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.segment-card:last-child {
  margin-bottom: 0;
}

.segment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.segment-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.segment-rwycc {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
  font-weight: 500;
}

.segment-details {
  padding-top: 10rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}

.detail-label {
  color: #666;
  font-size: 26rpx;
  width: 160rpx;
}

.detail-value {
  color: #333;
  font-size: 26rpx;
  flex: 1;
}

.performance-badge {
  margin-top: 15rpx;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  display: inline-block;
}

/* 警告信息 */
.warning-item {
  display: flex;
  align-items: flex-start;
  padding: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  background: #f0f0f0;
}

.warning-item:last-child {
  margin-bottom: 0;
}

.warning-item.warning-DANGER {
  background: #fff1f0;
  border-left: 4rpx solid #cf1322;
}

.warning-item.warning-CRITICAL {
  background: #fff5f5;
  border-left: 4rpx solid #820014;
}

.warning-item.warning-WARNING {
  background: #fff7e6;
  border-left: 4rpx solid #faad14;
}

.warning-item.warning-INFO {
  background: #e6f7ff;
  border-left: 4rpx solid #1890ff;
}

.warning-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.warning-text {
  flex: 1;
  color: #333;
  font-size: 26rpx;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: white;
}

.action-buttons .btn {
  flex: 1;
  height: 90rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.btn-new {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 格子广告容器 */
.ad-grid-container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: transparent;
}

/* ==================== 输入模式切换 ==================== */
.mode-switcher {
  display: flex;
  margin: 20rpx 15rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.mode-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 15rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.mode-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.mode-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.mode-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.mode-btn.active .mode-text {
  color: white;
}

/* ==================== 粘贴解析区域 ==================== */
.paste-section {
  margin: 0 15rpx 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.paste-header {
  margin-bottom: 25rpx;
}

.paste-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.paste-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.paste-input {
  width: 100%;
  min-height: 200rpx;
  padding: 25rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-size: 26rpx;
  line-height: 1.6;
  font-family: 'Courier New', monospace;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.paste-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.paste-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 25rpx;
}

.btn-clear-paste {
  flex: 1;
  height: 80rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-parse {
  flex: 2;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.btn-parse.disabled {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

.btn-parse:active:not(.disabled) {
  transform: scale(0.98);
}

/* 解析结果提示 */
.parse-result {
  margin-top: 20rpx;
}

.parse-message {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.parse-message.success {
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  color: #52c41a;
}

.parse-message.error {
  background: #fff2f0;
  border: 1rpx solid #ffccc7;
  color: #ff4d4f;
}

.parse-message.info {
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  color: #1890ff;
}

.parse-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.parse-text {
  flex: 1;
  line-height: 1.5;
}

/* 格式说明 */
.format-guide {
  margin-top: 30rpx;
  padding: 25rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf3 100%);
  border-radius: 15rpx;
}

.guide-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.guide-item {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx dashed #ddd;
}

.guide-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.guide-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #667eea;
  margin-bottom: 5rpx;
}

.guide-example {
  display: block;
  font-size: 22rpx;
  color: #666;
  font-family: 'Courier New', monospace;
  word-break: break-all;
}
