.preview-item:nth-child(3) { animation: itemSlideIn 0.4s ease-out 0.3s forwards; }
.preview-item:nth-child(4) { animation: itemSlideIn 0.4s ease-out 0.4s forwards; }

@keyframes itemSlideIn {
