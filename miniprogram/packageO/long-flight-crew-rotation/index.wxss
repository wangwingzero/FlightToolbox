/* 长航线换班页面样式 - 分步引导式设计 */

/* 主容器 */
.container {
  padding: 0 0 40rpx 0;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

/* 美化的页面标题 */
.page-header {
  text-align: center;
  margin: 20rpx 20rpx 40rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(255, 149, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.page-header::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transform: translateX(-100%);
  animation: headerShine 3s ease-in-out infinite;
}

@keyframes headerShine {
  0% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
  100% { transform: translateX(100%); }
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  position: relative;
  z-index: 1;
}

.title-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
  animation: rotate 4s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.title-text {
  font-size: 38rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
}

/* 实时预览内容 */
.preview-content {
  width: 100%;
}

.preview-summary {
  margin-bottom: 20rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 8rpx 0;
}

.summary-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.summary-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin: 15rpx 0 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 步骤切换动画 */
.step-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #ff9500;
  opacity: 0;
  transform: translateY(30rpx);
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes slideInUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 输入组件交互动画 */
.input-field {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.input-field::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 149, 0, 0.1), transparent);
  transition: left 0.6s ease;
}

.input-field:active::before {
  left: 100%;
}

.input-field:active {
  border-color: #ff9500;
  background: #fff;
  transform: scale(0.98);
  box-shadow: 0 0 0 4rpx rgba(255, 149, 0, 0.1);
}

/* 步进器动画效果 */
.stepper-button {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.stepper-button::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.3s ease, height 0.3s ease;
}

.stepper-button:active::after {
  width: 100rpx;
  height: 100rpx;
}

.stepper-button:active {
  transform: scale(0.9);
  box-shadow: 0 1rpx 4rpx rgba(255, 149, 0, 0.4);
}

.stepper-value {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin: 0 20rpx;
  transition: all 0.2s ease;
  animation: numberPop 0.3s ease-out;
}

@keyframes numberPop {
  0% {
    transform: scale(0.8);
    color: #ff9500;
  }
  50% {
    transform: scale(1.1);
    color: #ff6b00;
  }
  100% {
    transform: scale(1);
    color: #333;
  }
}

/* 预览数据更新动画 */
.preview-content {
  animation: previewFadeIn 0.4s ease-out;
}

@keyframes previewFadeIn {
  0% {
    opacity: 0.7;
    transform: scale(0.98);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.summary-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  transition: all 0.3s ease;
}

.summary-value.updating {
  color: #ff9500;
  transform: scale(1.05);
  animation: valueUpdate 0.5s ease-out;
}

@keyframes valueUpdate {
  0% {
    transform: scale(1);
    color: #333;
  }
  50% {
    transform: scale(1.05);
    color: #ff9500;
    text-shadow: 0 0 8rpx rgba(255, 149, 0, 0.3);
  }
  100% {
    transform: scale(1);
    color: #333;
  }
}

/* 进度条动画 */
.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  border-radius: 4rpx;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.progress-fill::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: progressShine 2s infinite;
}

@keyframes progressShine {
  0% { transform: translateX(-100%) skewX(-15deg); }
  100% { transform: translateX(100%) skewX(-15deg); }
}

/* 验证提示动画 */
.validation-tip {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  margin-top: 20rpx;
  opacity: 0;
  transform: translateY(-20rpx);
  animation: tipSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.3s forwards;
}

@keyframes tipSlideIn {
  0% {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
  animation: checkBounce 0.6s ease-out 0.8s;
}

@keyframes checkBounce {
  0%, 20%, 60%, 100% {
    transform: scale(1);
  }
  40% {
    transform: scale(1.2);
  }
  80% {
    transform: scale(1.1);
  }
}

/* 卡片悬停效果增强 */
.info-card, .rule-card, .calculation-card, .summary-card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.info-card:hover, .rule-card:hover, .calculation-card:hover, .summary-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

/* 预览项目动画 */
