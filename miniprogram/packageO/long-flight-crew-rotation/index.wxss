  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.25);
  transition: all 0.2s ease;
}

.generate-button:active {
  transform: translateY(-1px) scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(40, 167, 69, 0.35);
}

.generate-button .button-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.generate-button .button-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 结果区域样式 */
.result-section {
  margin-top: 30rpx;
}

.success-header {
  text-align: center;
  margin: 40rpx 20rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(40, 167, 69, 0.3);
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 60%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  80% { transform: translateY(-5rpx); }
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.success-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 详细安排样式 */
.detailed-schedule {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.duty-list {
  padding: 20rpx;
}

.duty-card {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-left: 6rpx solid #ddd;
  transition: all 0.2s ease;
}

.duty-card:hover {
  transform: translateY(-2rpx);
}

.duty-card.takeoff-phase,
.duty-card.landing-phase {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-left-color: #2196f3;
}

.duty-card.crew-1 {
  background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);
  border-left-color: #ef4444;
}

.duty-card.crew-2 {
  background: linear-gradient(135deg, #f0fdfa 0%, #ccfbf1 100%);
  border-left-color: #14b8a6;
}

.duty-card.crew-3 {
  background: linear-gradient(135deg, #fefce8 0%, #fef3c7 100%);
  border-left-color: #f59e0b;
}

.duty-card.crew-4 {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
  border-left-color: #a855f7;
}

.duty-card.crew-5 {
  background: linear-gradient(135deg, #fff1f2 0%, #fce7f3 100%);
  border-left-color: #ec4899;
}

.duty-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.duty-tag {
  background: rgba(255, 255, 255, 0.8);
  color: #333;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.duty-crew {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.duty-content {
  margin-top: 10rpx;
}

.duty-time {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 5rpx;
}

.duty-duration {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  margin: 30rpx 20rpx;
  gap: 20rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-button.secondary {
  background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(108, 117, 125, 0.25);
}

.action-button.primary {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.25);
}

.action-button:active {
  transform: translateY(-1px) scale(0.98);
}

.action-button .button-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.action-button .button-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 分步预览详情样式 */
.step-preview-detail {
  margin-top: 25rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.preview-step-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.preview-step-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.preview-step-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
}

.preview-items-list {
  margin-top: 10rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  padding: 8rpx 12rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-item-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-item-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.preview-item-value {
  font-size: 22rpx;
  color: white;
  font-weight: 600;
}

.preview-item-indicator {
  margin-left: 10rpx;
}

.status-icon {
  font-size: 18rpx;
  font-weight: bold;
}

.status-success {
  color: #51cf66;
}

.status-warning {
  color: #ffd43b;
}

.status-error {
  color: #ff6b6b;
}

.status-info {
  color: #74c0fc;
}

/* 预览状态样式 */
.preview-status-success {
  background: rgba(81, 207, 102, 0.1);
  border-left: 3rpx solid #51cf66;
}

.preview-status-warning {
  background: rgba(255, 212, 59, 0.1);
  border-left: 3rpx solid #ffd43b;
}

.preview-status-error {
  background: rgba(255, 107, 107, 0.1);
  border-left: 3rpx solid #ff6b6b;
}

.preview-status-info {
  background: rgba(116, 192, 252, 0.1);
  border-left: 3rpx solid #74c0fc;
}

/* 效率评分颜色 */
.efficiency-good {
  color: #51cf66;
  font-weight: bold;
}

.efficiency-normal {
  color: #ffd43b;
  font-weight: bold;
}

.efficiency-poor {
  color: #ff6b6b;
  font-weight: bold;
}

/* 快速操作提示 */
.quick-tips {
  margin-top: 20rpx;
  text-align: center;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

.tip-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-style: italic;
}

.van-picker__toolbar {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%) !important;
}

.van-picker__title {
  color: white !important;
  font-weight: 600 !important;
}

.van-picker__confirm,
.van-picker__cancel {
  color: white !important;
  font-weight: 600 !important;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .page-header {
    padding: 30rpx 20rpx;
  }
  
  .title-icon {
    font-size: 48rpx;
  }
  
  .title-text {
    font-size: 32rpx;
  }
  
  .step-card {
    padding: 25rpx 20rpx;
    margin: 15rpx;
  }
  
  .stepper-button {
    width: 50rpx;
    height: 50rpx;
    font-size: 28rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 15rpx;
  }
}