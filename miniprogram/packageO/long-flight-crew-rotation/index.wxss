/* 长航线换班页面 - 分步式引导界面样式 */

/* 主容器 */
.container {
  padding: 0;
  background: #f5f6f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部进度指示器 */
.progress-container {
  background: #ffffff;
  padding: 30rpx 30rpx 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.progress-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 1rpx;
}

.progress-subtitle {
  font-size: 28rpx;
  color: #ff9500;
  font-weight: 600;
}

/* 步骤指示器 */
.steps-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.step-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  cursor: pointer;
}

.step-icon-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-bottom: 10rpx;
}

.step-item.active .step-icon-wrapper {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.3);
}

.step-item.current .step-icon-wrapper {
  transform: scale(1.2);
  box-shadow: 0 6rpx 24rpx rgba(255, 149, 0, 0.4);
}

.step-line {
  position: absolute;
  top: 30rpx;
  left: 60rpx;
  right: -60rpx;
  height: 4rpx;
  background: #e8e8e8;
  transition: all 0.3s ease;
}

.step-line.active {
  background: linear-gradient(90deg, #ff9500 0%, #ff6b00 100%);
}

.step-name {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  transition: all 0.3s ease;
}

.step-item.active .step-name {
  color: #333;
  font-weight: 600;
}

.step-item.current .step-name {
  color: #ff9500;
  font-weight: 700;
}

/* 步骤内容区域 */
.step-content {
  flex: 1;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.step-panel {
  animation: fadeInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 步骤头部 */
.step-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.05) 0%, rgba(255, 149, 0, 0.02) 100%);
  border-radius: 20rpx;
}

.step-header .van-icon {
  margin-bottom: 20rpx;
}

.step-title {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.step-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 表单组 */
.form-group {
  margin: 0 !important;
  border-radius: 20rpx !important;
  overflow: hidden !important;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05) !important;
}

/* 输入单元格 */
.input-cell {
  padding: 32rpx !important;
  transition: all 0.3s ease !important;
}

.input-cell:active {
  background: #f8f8f8 !important;
}

.cell-icon {
  margin-right: 20rpx !important;
}

.cell-title {
  font-size: 32rpx !important;
  font-weight: 600 !important;
  color: #333 !important;
}

.cell-value {
  font-size: 30rpx !important;
  color: #1a1a1a !important;
  font-weight: 500 !important;
}

.cell-placeholder {
  font-size: 30rpx !important;
  color: #999 !important;
}

/* 步进器单元格 */
.stepper-cell {
  padding: 24rpx 32rpx !important;
}

.stepper-wrapper {
  display: flex;
  align-items: center;
}

.custom-stepper {
  margin-right: 16rpx;
}

.custom-stepper .van-stepper__input {
  background: #f5f6f8 !important;
  font-weight: 600 !important;
  color: #ff9500 !important;
}

.custom-stepper .van-stepper__minus,
.custom-stepper .van-stepper__plus {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%) !important;
  color: #fff !important;
}

.stepper-hint {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 快速提示 */
.quick-tips {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 149, 0, 0.05) 100%);
  border-radius: 16rpx;
  margin-top: 30rpx;
}

.quick-tips .van-icon {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.quick-tips text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 换班规则说明 */
.rule-explanation {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.rule-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.rule-title .van-icon {
  margin-right: 12rpx;
}

.rule-title text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.rule-content {
  padding-left: 40rpx;
}

.rule-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: center;
}

.rule-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.rule-value {
  font-size: 26rpx;
  color: #ff9500;
  font-weight: 600;
}

/* 规则详解卡片 */
.rule-details {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.detail-card {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.detail-card:active {
  transform: scale(0.98);
}

.detail-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-header .van-icon {
  margin-right: 16rpx;
}

.detail-header text {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}

.detail-content {
  padding-left: 48rpx;
}

.detail-content text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 优雅的步骤头部 */
.step-header-elegant {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 50rpx 30rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.08) 0%, rgba(255, 149, 0, 0.03) 100%);
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}

.step-header-elegant::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" patternUnits="userSpaceOnUse" width="100" height="100"><circle cx="25" cy="25" r="1" fill="%23ff9500" fill-opacity="0.03"/><circle cx="75" cy="75" r="1" fill="%23ff9500" fill-opacity="0.03"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  pointer-events: none;
}

.step-header-elegant .van-icon {
  margin-bottom: 24rpx;
  position: relative;
  z-index: 2;
}

.step-title-elegant {
  display: block;
  font-size: 42rpx;
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 2;
}

.step-desc-elegant {
  display: block;
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  position: relative;
  z-index: 2;
}

/* 配置卡片组 */
.config-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 50rpx;
}

.config-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.config-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 32rpx 36rpx 24rpx;
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-bottom: 2rpx solid #f0f0f0;
}

.flight-info .card-header {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-bottom-color: #bae6fd;
}

.crew-config .card-header {
  background: linear-gradient(135deg, #f0fdfa 0%, #ccfbf1 100%);
  border-bottom-color: #99f6e4;
}

.timing-rules .card-header {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-bottom-color: #fed7aa;
}

.card-header .van-icon {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 1rpx;
}

.card-content {
  padding: 28rpx 36rpx 36rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.info-row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 700;
  text-align: right;
}

/* 计算状态指示器 */
.calculation-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.05) 0%, rgba(255, 149, 0, 0.02) 100%);
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  border: 2rpx dashed rgba(255, 149, 0, 0.2);
}

.status-icon {
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff9500;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
}

/* 计算完成提示 */
.calculation-complete {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.08) 0%, rgba(40, 167, 69, 0.03) 100%);
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(40, 167, 69, 0.15);
  animation: successPulse 0.8s ease-out;
}

@keyframes successPulse {
  0% {
    transform: scale(0.95);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.complete-icon {
  margin-bottom: 24rpx;
  animation: checkmarkBounce 0.6s ease-out 0.2s both;
}

@keyframes checkmarkBounce {
  0% {
    transform: scale(0) rotate(180deg);
    opacity: 0;
  }
  60% {
    transform: scale(1.2) rotate(-10deg);
    opacity: 1;
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.complete-text {
  font-size: 34rpx;
  font-weight: 800;
  color: #28a745;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.complete-desc {
  font-size: 26rpx;
  color: #155724;
  text-align: center;
  line-height: 1.6;
}

/* 底部导航栏 */
.navigation-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.nav-spacer {
  flex: 1;
}

.nav-button {
  flex: 1;
  height: 80rpx !important;
  border-radius: 40rpx !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease !important;
}

.prev-button {
  background: #f5f6f8 !important;
  color: #666 !important;
  border: none !important;
}

.prev-button:active {
  background: #e8e8e8 !important;
}

.next-button {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%) !important;
  color: #ffffff !important;
  border: none !important;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.25) !important;
}

.next-button:active {
  transform: scale(0.95) !important;
}

.next-button[disabled] {
  background: #e8e8e8 !important;
  color: #999 !important;
  box-shadow: none !important;
}

.nav-button .van-icon {
  margin: 0 8rpx;
}

/* 结果区域 */
.result-section {
  margin-top: 40rpx;
  padding: 0 30rpx 30rpx;
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 当前时间显示卡片 */
.current-time-display {
  margin: 20rpx 30rpx;
}

.time-card {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 149, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.time-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.time-card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.time-card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.time-card-content {
  position: relative;
  z-index: 1;
}

.current-time-value {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.current-time-value:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.25);
}

.time-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.time-unit {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 16rpx;
}

.edit-icon-inline {
  margin-left: auto;
  animation: pulse 2s infinite;
}

.time-description {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.edit-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.edit-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.edit-button text {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

/* 可编辑时间单元格样式 */
.editable-time-cell {
  background: linear-gradient(135deg, #fff8f0 0%, #fff4e6 100%) !important;
  border: 2rpx dashed #ff9500 !important;
  border-radius: 12rpx !important;
  margin: 10rpx 0 !important;
  transition: all 0.3s ease !important;
}

.editable-time-cell:active {
  transform: scale(0.98) !important;
  background: linear-gradient(135deg, #fff4e6 0%, #ffedd5 100%) !important;
}

.editable-time-value {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.time-display {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b00;
}

.edit-icon {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
  100% { opacity: 1; transform: scale(1); }
}

.edit-hint {
  font-size: 24rpx;
  color: #ff9500;
  margin-top: 4rpx;
  opacity: 0.8;
  font-weight: 500;
}

/* 优雅的结果标题 */
.result-header-elegant {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(40, 167, 69, 0.25);
  position: relative;
  overflow: hidden;
}

.result-header-elegant::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="80" cy="20" r="20" fill="rgba(255,255,255,0.1)"/><circle cx="90" cy="60" r="15" fill="rgba(255,255,255,0.08)"/></svg>') no-repeat right center;
  pointer-events: none;
}

.result-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  flex-shrink: 0;
  backdrop-filter: blur(10rpx);
}

.result-text-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.result-title-elegant {
  font-size: 36rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.result-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

/* 值勤安排容器 */
.duty-schedule-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.schedule-header {
  display: flex;
  align-items: center;
  padding: 32rpx 36rpx;
  background: linear-gradient(135deg, #fff8f0 0%, #fff5eb 100%);
  border-bottom: 2rpx solid #fed7aa;
}

.schedule-header .van-icon {
  margin-right: 16rpx;
}

.schedule-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 1rpx;
}

/* 时间线样式 */
.duty-timeline {
  padding: 0 36rpx;
}

.duty-item {
  display: flex;
  align-items: flex-start;
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  position: relative;
}

.duty-item:last-child {
  border-bottom: none;
  padding-bottom: 36rpx;
}

.duty-marker {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  position: relative;
  width: 32rpx;
}

.marker-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  position: relative;
}

.takeoff-dot, .landing-dot {
  background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
  box-shadow: 0 4rpx 16rpx rgba(14, 165, 233, 0.3);
}

.crew-1-dot {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.3);
}

.crew-2-dot {
  background: linear-gradient(135deg, #14b8a6 0%, #0f766e 100%);
  box-shadow: 0 4rpx 16rpx rgba(20, 184, 166, 0.3);
}

.crew-3-dot {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.3);
}

.crew-4-dot {
  background: linear-gradient(135deg, #a855f7 0%, #7c3aed 100%);
  box-shadow: 0 4rpx 16rpx rgba(168, 85, 247, 0.3);
}

.crew-5-dot {
  background: linear-gradient(135deg, #ec4899 0%, #be185d 100%);
  box-shadow: 0 4rpx 16rpx rgba(236, 72, 153, 0.3);
}

.marker-line {
  width: 4rpx;
  height: 80rpx;
  background: linear-gradient(to bottom, #e5e7eb 0%, #d1d5db 100%);
  margin-top: 16rpx;
  border-radius: 2rpx;
}

.duty-content {
  flex: 1;
}

.duty-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.duty-tag {
  font-size: 20rpx;
  font-weight: 700;
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.takeoff-tag, .landing-tag {
  background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
}

.crew-1-tag {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.crew-2-tag {
  background: linear-gradient(135deg, #14b8a6 0%, #0f766e 100%);
}

.crew-3-tag {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.crew-4-tag {
  background: linear-gradient(135deg, #a855f7 0%, #7c3aed 100%);
}

.crew-5-tag {
  background: linear-gradient(135deg, #ec4899 0%, #be185d 100%);
}

.duty-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.duty-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-range {
  display: flex;
  align-items: center;
  flex: 1;
}

.start-time, .end-time {
  font-size: 32rpx;
  font-weight: 700;
  color: #374151;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
}

.time-separator {
  display: flex;
  align-items: center;
  margin: 0 24rpx;
}

.separator-line {
  width: 40rpx;
  height: 2rpx;
  background: #d1d5db;
  margin-right: 8rpx;
}

.duration-badge {
  font-size: 26rpx;
  font-weight: 700;
  color: #ff9500;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 149, 0, 0.05) 100%);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 149, 0, 0.2);
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
}

/* 操作按钮 */
.result-actions {
  display: flex;
  gap: 24rpx;
  padding: 0 16rpx;
}

.action-button {
  flex: 1;
  height: 88rpx !important;
  border-radius: 24rpx !important;
  font-size: 30rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  border: none !important;
}

.secondary-button {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%) !important;
  color: #ffffff !important;
  box-shadow: 0 4rpx 16rpx rgba(107, 114, 128, 0.25) !important;
}

.secondary-button:active {
  transform: scale(0.95) !important;
  box-shadow: 0 2rpx 8rpx rgba(107, 114, 128, 0.4) !important;
}

.primary-button {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
  color: #ffffff !important;
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.25) !important;
}

.primary-button:active {
  transform: scale(0.95) !important;
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.4) !important;
}

.action-button .van-icon {
  margin-right: 12rpx;
}

/* 清理旧样式 - 这些样式已被新设计替代 */

/* 选择器美化 */
.van-picker__toolbar {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%) !important;
}

.van-picker__title {
  color: white !important;
  font-weight: 600 !important;
}

.van-picker__confirm,
.van-picker__cancel {
  color: white !important;
  font-weight: 600 !important;
}