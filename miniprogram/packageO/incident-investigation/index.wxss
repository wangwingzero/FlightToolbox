/* 事件调查页面样式 - 参考危险品精美设计 */

/* 子分类过滤器样式 */
.subcategory-filters {
  padding: 24rpx 20rpx;
  background: linear-gradient(135deg, rgba(248, 250, 252, 0.95) 0%, rgba(241, 245, 249, 0.95) 100%);
  margin: 12rpx 20rpx 24rpx 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(12rpx);
  border: 1px solid rgba(226, 232, 240, 0.6);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  position: relative;
}

.subcategory-filters::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(248, 250, 252, 0.8) 100%);
  border-radius: 20rpx;
  z-index: 0;
}

.filter-scroll {
  white-space: nowrap;
  position: relative;
  z-index: 1;
}

.filter-chips {
  display: inline-flex;
  gap: 20rpx;
  padding: 8rpx 0;
  align-items: center;
}

.filter-chip {
  margin: 0 !important;
  border-radius: 24rpx !important;
  padding: 16rpx 28rpx !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1) !important;
  backdrop-filter: blur(8rpx) !important;
  border: 2rpx solid rgba(71, 85, 105, 0.1) !important;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.95) 100%) !important;
  color: rgba(51, 65, 85, 0.9) !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06) !important;
  position: relative;
  overflow: hidden;
}

.filter-chip::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}

.filter-chip:hover::before {
  opacity: 1;
}

.filter-chip.van-tag--primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: white !important;
  border-color: transparent !important;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.35) !important;
  transform: translateY(-4rpx) scale(1.05);
}

.filter-chip.van-tag--primary::before {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%);
  opacity: 1;
}

/* 术语高亮样式 */
.term-highlight {
  color: #667eea !important;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%) !important;
  padding: 2rpx 8rpx !important;
  border-radius: 8rpx !important;
  font-weight: 600 !important;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1) !important;
  border: 1rpx solid rgba(102, 126, 234, 0.3) !important;
  display: inline-block !important;
  margin: 0 2rpx !important;
}

/* 可点击的术语样式 */
.clickable-term {
  color: #667eea !important;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.12) 0%, rgba(118, 75, 162, 0.12) 100%) !important;
  padding: 4rpx 12rpx !important;
  border-radius: 12rpx !important;
  font-weight: 600 !important;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1) !important;
  border: 1rpx solid rgba(102, 126, 234, 0.4) !important;
  display: inline-block !important;
  margin: 0 4rpx !important;
  position: relative;
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15) !important;
}

/* 可点击术语的触摸反馈 */
.clickable-term::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 14rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.clickable-term:active::before {
  opacity: 1;
}

.clickable-term:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.25) 0%, rgba(118, 75, 162, 0.25) 100%) !important;
  border-color: rgba(102, 126, 234, 0.7) !important;
  transform: translateY(-2rpx) scale(1.02) !important;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3) !important;
}

/* 非可点击的普通高亮样式 */
.term-highlight:not(.clickable-term):hover {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%) !important;
  border-color: rgba(102, 126, 234, 0.5) !important;
  transform: translateY(-1rpx) !important;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2) !important;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafb 0%, #f0f4f8 100%);
  position: relative;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="0.5" fill="%23000" opacity="0.02"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  pointer-events: none;
  z-index: 0;
}

/* 搜索区域 */
.search-section {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.search-section .van-search {
  background: transparent;
}

.search-section .van-search__content {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(25, 137, 250, 0.1);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 32rpx rgba(25, 137, 250, 0.08);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.search-section .van-search__content:focus-within {
  border-color: #ff976a;
  box-shadow: 0 8rpx 32rpx rgba(255, 151, 106, 0.15);
}

.search-left-icon {
  color: #ff976a;
}

/* 标签页样式 */
.van-tabs {
  background: transparent;
}

.van-tabs__wrap {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.van-tab {
  color: #666;
  font-weight: 500;
}

.van-tab--active {
  color: #ff976a;
  font-weight: 600;
}

.van-tabs__line {
  background: linear-gradient(90deg, #ff976a 0%, #ff6b35 100%);
  height: 6rpx;
  border-radius: 3rpx;
}

/* 内容区域 */
.results-section {
  padding: 20rpx;
}

/* van-cell-group 样式优化 */
.van-cell-group {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.06);
  border: none;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
}

.van-cell-group__title {
  padding: 30rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 70%, #ff976a 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* van-cell 样式优化 */
.van-cell {
  padding: 24rpx 30rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
}

.van-cell::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.van-cell:active {
  background: rgba(255, 151, 106, 0.08);
  transform: scale(0.995);
}

.van-cell:active::before {
  background: linear-gradient(180deg, #ff976a 0%, #ff6b35 100%);
}

.van-cell:last-child {
  border-bottom: none;
}

.van-cell__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.van-cell__label {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-top: 8rpx;
}

/* 事故等级标签 */
.accident-level,
.incident-category,
.emergency-event-category,
.general-event-category,
.definition-category {
  display: flex;
  align-items: center;
}

.van-tag {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: none;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.van-tag--danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
}

.van-tag--warning {
  background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
  color: white;
}

.van-tag--success {
  background: linear-gradient(135deg, #48cab3 0%, #2ed573 100%);
  color: white;
}

.van-tag--primary {
  background: linear-gradient(135deg, #3742fa 0%, #2f3542 100%);
  color: white;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 20rpx;
}

/* 空状态 */
.van-empty {
  padding: 80rpx 0;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 20rpx;
}

/* 统计信息 */
.stats-section {
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.06);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stats-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 151, 106, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 151, 106, 0.1);
  transition: all 0.3s ease;
}

.stats-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(255, 151, 106, 0.15) 0%, rgba(255, 107, 53, 0.08) 100%);
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ff976a;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 151, 106, 0.2);
}

.stats-label {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

/* 详情弹窗 */
.detail-popup-container {
  height: 85vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f8fafb 0%, #ffffff 100%);
}

.detail-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 70%, #ff976a 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.detail-header::before {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 100%);
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.back-btn,
.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  overflow: hidden;
}

.back-btn::before,
.close-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.back-btn:active,
.close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.back-btn:active::before,
.close-btn:active::before {
  opacity: 1;
}

.back-icon,
.close-icon {
  color: white;
  font-size: 32rpx;
  position: relative;
  z-index: 1;
}

.back-btn {
  margin-right: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.back-btn:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateX(-2rpx);
}

.detail-content {
  flex: 1;
  padding: 40rpx 30rpx;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.detail-section .van-cell-group__title {
  background: linear-gradient(135deg, #3742fa 0%, #5352ed 100%);
  color: white;
  font-size: 28rpx;
  padding: 24rpx 30rpx;
}

.description-content,
.examples-content {
  padding: 30rpx;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #2c3e50;
}

.example-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.example-item:last-child {
  border-bottom: none;
}

.example-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #5a6c7d;
}


.detail-footer {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
}

.back-button {
  flex: 1;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 25rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.back-button:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border-color: rgba(102, 126, 234, 0.5);
  transform: scale(0.98);
}

.close-button {
  flex: 1;
  background: linear-gradient(135deg, #ff976a 0%, #ff6b35 100%);
  border: none;
  border-radius: 25rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(255, 151, 106, 0.3);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.close-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 151, 106, 0.4);
}

.button-icon {
  margin-right: 12rpx;
}

/* 深色主题适配 */
[data-theme="dark"] .container {
  background: linear-gradient(180deg, #1a1a1a 0%, #2d2d2d 100%);
}

[data-theme="dark"] .van-cell-group {
  background: rgba(60, 60, 60, 0.9);
}

[data-theme="dark"] .van-cell__title {
  color: #f8f9fa;
}

[data-theme="dark"] .van-cell__label {
  color: #adb5bd;
}

[data-theme="dark"] .van-cell:active {
  background: rgba(255, 151, 106, 0.12);
}

[data-theme="dark"] .description-text {
  color: #f8f9fa;
}

[data-theme="dark"] .example-text {
  color: #adb5bd;
}