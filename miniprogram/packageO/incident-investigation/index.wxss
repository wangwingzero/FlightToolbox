/* 事件调查页面样式 - 基于体检标准页面成功设计模式 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #fff7ed 0%, #fed7aa 20%, #fdba74 40%, #fff7ed 60%, #fef3c7 80%, #fff7ed 100%),
    radial-gradient(circle at 30% 40%, rgba(255, 151, 106, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(255, 107, 53, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 分类菜单系统 */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(255, 151, 106, 0.2);
  box-shadow: 
    0 2rpx 32rpx rgba(255, 151, 106, 0.12),
    0 8rpx 64rpx rgba(255, 151, 106, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.category-tabs-scroll {
  height: 140rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  gap: 24rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 80rpx;
}

.category-tab-item.active {
  background: rgba(255, 151, 106, 0.1);
  transform: scale(1.05);
}

.category-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #94a3b8;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.category-tab-item.active .category-badge {
  background: #ff976a;
  box-shadow: 
    0 4rpx 16rpx rgba(255, 151, 106, 0.3),
    0 8rpx 32rpx rgba(255, 151, 106, 0.15);
  transform: scale(1.1);
}

.category-title {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.category-tab-item.active .category-title {
  color: #ff976a;
  font-weight: 600;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx 32rpx;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.incident-search::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #ff976a 0%, #ff6b35 50%, #ea580c 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-section .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow: 
    0 8rpx 32rpx rgba(255, 151, 106, 0.12),
    0 16rpx 64rpx rgba(255, 151, 106, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(255, 151, 106, 0.2);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(255, 151, 106, 0.3);
}

.search-section .van-search:focus-within {
  border-color: rgba(255, 151, 106, 0.4);
  box-shadow: 
    0 12rpx 40rpx rgba(255, 151, 106, 0.15),
    0 20rpx 80rpx rgba(255, 151, 106, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 28rpx !important;
  position: relative;
  z-index: 2;
}

.search-section .van-field__input {
  font-size: 30rpx !important;
  color: #1e293b !important;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding: 20rpx 32rpx !important;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #94a3b8 !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

/* 术语高亮样式 */
.term-highlight {
  color: #667eea !important;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%) !important;
  padding: 2rpx 8rpx !important;
  border-radius: 8rpx !important;
  font-weight: 600 !important;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1) !important;
  border: 1rpx solid rgba(102, 126, 234, 0.3) !important;
  display: inline-block !important;
  margin: 0 2rpx !important;
}

/* 可点击的术语样式 */
.clickable-term {
  color: #667eea !important;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.12) 0%, rgba(118, 75, 162, 0.12) 100%) !important;
  padding: 4rpx 12rpx !important;
  border-radius: 12rpx !important;
  font-weight: 600 !important;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1) !important;
  border: 1rpx solid rgba(102, 126, 234, 0.4) !important;
  display: inline-block !important;
  margin: 0 4rpx !important;
  position: relative;
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15) !important;
}

/* 可点击术语的触摸反馈 */
.clickable-term::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 14rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.clickable-term:active::before {
  opacity: 1;
}

.clickable-term:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.25) 0%, rgba(118, 75, 162, 0.25) 100%) !important;
  border-color: rgba(102, 126, 234, 0.7) !important;
  transform: translateY(-2rpx) scale(1.02) !important;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3) !important;
}

/* 非可点击的普通高亮样式 */
.term-highlight:not(.clickable-term):hover {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%) !important;
  border-color: rgba(102, 126, 234, 0.5) !important;
  transform: translateY(-1rpx) !important;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2) !important;
}

/* 内容区域样式 */
.tab-content {
  position: relative;
  z-index: 1;
}
.results-section {
  padding: 20rpx;
}

/* van-cell-group 样式优化 */
.van-cell-group {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.06);
  border: none;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
}

.van-cell-group__title {
  padding: 30rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 70%, #ff976a 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* van-cell 样式优化 */
.van-cell {
  padding: 24rpx 30rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
}

.van-cell::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.van-cell:active {
  background: rgba(255, 151, 106, 0.08);
  transform: scale(0.995);
}

.van-cell:active::before {
  background: linear-gradient(180deg, #ff976a 0%, #ff6b35 100%);
}

.van-cell:last-child {
  border-bottom: none;
}

.van-cell__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.van-cell__label {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-top: 8rpx;
}

/* 事故等级标签 */
.accident-level,
.incident-category,
.emergency-event-category,
.general-event-category,
.definition-category {
  display: flex;
  align-items: center;
}

.van-tag {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: none;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.van-tag--danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
}

.van-tag--warning {
  background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
  color: white;
}

.van-tag--success {
  background: linear-gradient(135deg, #48cab3 0%, #2ed573 100%);
  color: white;
}

.van-tag--primary {
  background: linear-gradient(135deg, #3742fa 0%, #2f3542 100%);
  color: white;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 20rpx;
}

/* 空状态 */
.van-empty {
  padding: 80rpx 0;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 20rpx;
}

/* 统计信息样式 - 橙色主题 */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  margin: 32rpx;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(255, 151, 106, 0.12),
    0 16rpx 64rpx rgba(255, 151, 106, 0.08);
  border: 2rpx solid rgba(255, 151, 106, 0.2);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
}

.stats-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 151, 106, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 151, 106, 0.1);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.stats-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(255, 151, 106, 0.15) 0%, rgba(255, 107, 53, 0.08) 100%);
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ff976a;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 151, 106, 0.2);
}

.stats-label {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

/* 详情弹窗 */
.detail-popup-container {
  height: 85vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f8fafb 0%, #ffffff 100%);
}

.detail-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 70%, #ff976a 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.detail-header::before {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 100%);
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.back-btn,
.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  overflow: hidden;
}

.back-btn::before,
.close-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.back-btn:active,
.close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.back-btn:active::before,
.close-btn:active::before {
  opacity: 1;
}

.back-icon,
.close-icon {
  color: white;
  font-size: 32rpx;
  position: relative;
  z-index: 1;
}

.back-btn {
  margin-right: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.back-btn:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateX(-2rpx);
}

.detail-content {
  flex: 1;
  padding: 40rpx 30rpx;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.detail-section .van-cell-group__title {
  background: linear-gradient(135deg, #3742fa 0%, #5352ed 100%);
  color: white;
  font-size: 28rpx;
  padding: 24rpx 30rpx;
}

.description-content,
.examples-content {
  padding: 30rpx;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #2c3e50;
}

.example-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.example-item:last-child {
  border-bottom: none;
}

.example-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #5a6c7d;
}


.detail-footer {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
}

.back-button {
  flex: 1;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 25rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.back-button:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border-color: rgba(102, 126, 234, 0.5);
  transform: scale(0.98);
}

.close-button {
  flex: 1;
  background: linear-gradient(135deg, #ff976a 0%, #ff6b35 100%);
  border: none;
  border-radius: 25rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(255, 151, 106, 0.3);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.close-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 151, 106, 0.4);
}

.button-icon {
  margin-right: 12rpx;
}

/* 加载更多按钮样式 */
.load-more-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  margin: 20rpx 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.9) 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(99, 102, 241, 0.1);
  backdrop-filter: blur(10rpx);
  animation: loadMoreFadeIn 0.6s ease-out;
}

@keyframes loadMoreFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.load-more-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: none;
  cursor: pointer;
}

.load-more-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.4);
}

.load-more-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

.load-more-icon {
  font-size: 32rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-6rpx);
  }
  60% {
    transform: translateY(-3rpx);
  }
}

.load-more-tip {
  color: #6b7280;
  font-size: 24rpx;
  margin-top: 12rpx;
  opacity: 0.8;
}

/* 加载中状态样式 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  margin: 20rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #6366f1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #6b7280;
  font-size: 26rpx;
  opacity: 0.8;
}

/* 没有更多数据状态样式 */
.no-more-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  margin: 20rpx 0;
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, rgba(22, 163, 74, 0.05) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.no-more-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
  animation: checkmark 1.5s ease-out;
}

@keyframes checkmark {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.no-more-text {
  color: #059669;
  font-size: 24rpx;
  font-weight: 500;
  opacity: 0.9;
}

/* 分割标识样式 */
.type-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 32rpx 0 24rpx;
  padding: 0 20rpx;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 151, 106, 0.3) 50%, transparent 100%);
}

.divider-text {
  padding: 0 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #ff976a;
  background: linear-gradient(135deg, rgba(255, 151, 106, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%);
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  border: 2rpx solid rgba(255, 151, 106, 0.2);
  white-space: nowrap;
  text-shadow: 0 1rpx 2rpx rgba(255, 151, 106, 0.1);
}

/* ========================================
   广告容器样式
   ======================================== */

.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 20rpx 24rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
