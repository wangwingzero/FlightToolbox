@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.module-card:hover {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: 
    0 16rpx 48rpx rgba(59, 130, 246, 0.2),
    0 0 0 2rpx rgba(59, 130, 246, 0.1);
}

