/* CPDLC电文查询页面样式 */

.page-content {
  background:
    linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 20%, #bae6fd 40%, #f0f9ff 60%, #f0fdfa 80%, #f0f9ff 100%),
    radial-gradient(circle at 30% 40%, rgba(102, 126, 234, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(118, 75, 162, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* ==================== 方向标签菜单系统 ==================== */

.direction-tabs-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(226, 232, 240, 0.4);
  box-shadow:
    0 2rpx 32rpx rgba(148, 163, 184, 0.12),
    0 8rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.direction-tabs-scroll {
  height: 140rpx;
  white-space: nowrap;
}

.direction-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  gap: 24rpx;
  min-width: max-content;
}

.direction-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 80rpx;
}

.direction-tab-item.active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(1.05);
}

.direction-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #94a3b8;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.direction-tab-item.active .direction-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow:
    0 4rpx 16rpx rgba(102, 126, 234, 0.3),
    0 8rpx 32rpx rgba(102, 126, 234, 0.15);
  transform: scale(1.1);
}

.direction-title {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.direction-tab-item.active .direction-title {
  color: #667eea;
  font-weight: 600;
}

/* ==================== 搜索区域 ==================== */

.search-section {
  padding: 24rpx 32rpx 32rpx;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.cpdlc-search::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-section .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow:
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.5);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.search-section .van-search:focus-within {
  border-color: rgba(102, 126, 234, 0.4);
  box-shadow:
    0 12rpx 40rpx rgba(102, 126, 234, 0.15),
    0 20rpx 80rpx rgba(102, 126, 234, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 28rpx !important;
  position: relative;
  z-index: 2;
}

.search-section .van-field__input {
  font-size: 30rpx !important;
  color: #1e293b !important;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding: 20rpx 32rpx !important;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #94a3b8 !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

/* ==================== 二级分类标签 ==================== */

.category-chips-container {
  background-color: #ffffff;
  padding: 20rpx 0 20rpx 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.category-chips-scroll {
  width: 100%;
  white-space: nowrap;
}

.category-chips {
  display: flex;
  gap: 16rpx;
  padding-right: 20rpx;
}

.category-chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #f3f4f6;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.category-chip.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.chip-text {
  font-size: 26rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.category-chip.active .chip-text {
  color: #ffffff;
  font-weight: 600;
}

.chip-count {
  font-size: 22rpx;
  color: #9ca3af;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
}

.category-chip.active .chip-count {
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
}

/* ==================== 电文列表 ==================== */

.messages-container {
  padding: 20rpx;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.message-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 卡片头部 */
.card-header {
  margin-bottom: 16rpx;
}

.card-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.message-id-badge {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.badge-uplink {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.badge-downlink {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.category-tag {
  font-size: 22rpx;
  color: #6b7280;
  background-color: #f3f4f6;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
}

/* 状态徽章 */
.status-badges {
  display: flex;
  gap: 12rpx;
}

.urgent-badge,
.alert-badge {
  font-size: 20rpx;
  color: #ffffff;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

/* 紧急级别徽章 */
.badge-distress {
  background-color: #dc2626; /* 遇险 - 红色 */
}

.badge-urgent {
  background-color: #f97316; /* 紧急 - 橙色 */
}

.badge-medium {
  background-color: #eab308; /* 中等 - 黄色 */
}

.badge-normal {
  background-color: #10b981; /* 正常 - 绿色 */
}

/* 告警级别徽章 */
.badge-alert-high {
  background-color: #dc2626; /* 高 - 红色 */
}

.badge-alert-medium {
  background-color: #f97316; /* 中 - 橙色 */
}

.badge-alert-low {
  background-color: #3b82f6; /* 低 - 蓝色 */
}

.badge-alert-none {
  background-color: #9ca3af; /* 无 - 灰色 */
}

/* 电文格式 */
.format-en {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
  font-family: 'Courier New', monospace;
}

.format-zh {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

/* 用途描述 */
.purpose-box {
  background-color: #f9fafb;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.purpose-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 6rpx;
}

.purpose-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 操作提示 */
.action-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed #e5e7eb;
}

.hint-icon {
  font-size: 24rpx;
}

.hint-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 加载更多 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.load-more-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.load-more-text {
  font-size: 26rpx;
  color: #6b7280;
}

.load-complete {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.load-complete-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 详情弹窗 - 参考体检标准UI设计 ==================== */

.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
  transform: translateZ(0);
  will-change: transform;
}

/* 弹窗标题栏 - 紫色渐变背景 */
.popup-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #e2e8f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  transform: translateZ(0);
}

.popup-header-content {
  flex: 1;
  margin-right: 16rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-style: italic;
}

.popup-close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
  transform: translateZ(0);
}

.popup-close-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.popup-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  will-change: scroll-position;
  transform: translateZ(0);
}

/* 信息区块样式 - 参考体检标准 */
.info-block {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-block-title {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
  color: #0369a1;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 24rpx;
  border-left: 6rpx solid #0ea5e9;
}

.info-block-content {
  padding: 24rpx;
  background: white;
}

/* 基本信息行布局 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  max-width: 60%;
}

/* 电文用途样式 */
.purpose-content {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.7;
}

/* 电文格式区块样式 */
.format-section {
  margin-bottom: 20rpx;
}

.format-section:last-child {
  margin-bottom: 0;
}

.format-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

.format-value-en {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
  font-family: 'Courier New', monospace;
  line-height: 1.6;
  background: rgba(59, 130, 246, 0.05);
  padding: 12rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #3b82f6;
}

.format-value-zh {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  background: rgba(34, 197, 94, 0.05);
  padding: 12rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #22c55e;
}

/* 电文属性区块样式 */
.attribute-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.attribute-row:last-child {
  border-bottom: none;
}

.attribute-label {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.attribute-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
}

/* 紧急级别徽章详情 */
.urgent-badge-detail,
.alert-badge-detail {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 紧急级别徽章颜色 */
.urgent-badge-detail.badge-distress {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.urgent-badge-detail.badge-urgent {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  box-shadow: 0 4rpx 16rpx rgba(249, 115, 22, 0.4);
}

.urgent-badge-detail.badge-medium {
  background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
  box-shadow: 0 4rpx 16rpx rgba(234, 179, 8, 0.4);
}

.urgent-badge-detail.badge-normal {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  box-shadow: 0 4rpx 16rpx rgba(34, 197, 94, 0.4);
}

/* 告警级别徽章颜色 */
.alert-badge-detail.badge-alert-high {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.alert-badge-detail.badge-alert-medium {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  box-shadow: 0 4rpx 16rpx rgba(249, 115, 22, 0.4);
}

.alert-badge-detail.badge-alert-low {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
}

.alert-badge-detail.badge-alert-none {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  box-shadow: 0 4rpx 16rpx rgba(107, 114, 128, 0.4);
}

/* 级别说明样式 */
.level-description {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.level-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.level-label {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 600;
}

.level-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
}

/* 数据来源样式 */
.source-content {
  background: rgba(245, 158, 11, 0.08);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #f59e0b;
}

.source-main {
  font-size: 28rpx;
  color: #92400e;
  font-weight: 600;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.source-subtitle {
  font-size: 24rpx;
  color: #d97706;
  line-height: 1.5;
}

/* 横幅广告容器样式 */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 20rpx 24rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
