/* CPDLC电文查询页面样式 */

.page-content {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* ==================== 优雅搜索区域 ==================== */

.elegant-search-container {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 30rpx 40rpx;
  overflow: hidden;
}

.search-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -50rpx;
  right: -50rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -30rpx;
  left: -30rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 10%;
  opacity: 0.5;
}

.main-search-wrapper {
  position: relative;
  z-index: 1;
}

.search-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.premium-search-box {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 50rpx;
  padding: 18rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.premium-search-box.focused {
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
  transform: translateY(-2rpx);
}

.search-icon-wrapper {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
}

.premium-search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.premium-search-placeholder {
  color: #9ca3af;
}

.search-clear-btn {
  margin-left: 12rpx;
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-stats {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.stats-content {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.stats-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* ==================== 方向标签页 ==================== */

.direction-tabs-container {
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* ==================== 二级分类标签 ==================== */

.category-chips-container {
  background-color: #ffffff;
  padding: 20rpx 0 20rpx 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.category-chips-scroll {
  width: 100%;
  white-space: nowrap;
}

.category-chips {
  display: flex;
  gap: 16rpx;
  padding-right: 20rpx;
}

.category-chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #f3f4f6;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.category-chip.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.chip-text {
  font-size: 26rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.category-chip.active .chip-text {
  color: #ffffff;
  font-weight: 600;
}

.chip-count {
  font-size: 22rpx;
  color: #9ca3af;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
}

.category-chip.active .chip-count {
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
}

/* ==================== 电文列表 ==================== */

.messages-container {
  padding: 20rpx;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.message-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 卡片头部 */
.card-header {
  margin-bottom: 16rpx;
}

.card-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.message-id-badge {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.badge-uplink {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.badge-downlink {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.category-tag {
  font-size: 22rpx;
  color: #6b7280;
  background-color: #f3f4f6;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
}

/* 状态徽章 */
.status-badges {
  display: flex;
  gap: 12rpx;
}

.urgent-badge,
.alert-badge {
  font-size: 20rpx;
  color: #ffffff;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

/* 紧急级别徽章 */
.badge-distress {
  background-color: #dc2626; /* 遇险 - 红色 */
}

.badge-urgent {
  background-color: #f97316; /* 紧急 - 橙色 */
}

.badge-medium {
  background-color: #eab308; /* 中等 - 黄色 */
}

.badge-normal {
  background-color: #10b981; /* 正常 - 绿色 */
}

/* 告警级别徽章 */
.badge-alert-high {
  background-color: #dc2626; /* 高 - 红色 */
}

.badge-alert-medium {
  background-color: #f97316; /* 中 - 橙色 */
}

.badge-alert-low {
  background-color: #3b82f6; /* 低 - 蓝色 */
}

.badge-alert-none {
  background-color: #9ca3af; /* 无 - 灰色 */
}

/* 电文格式 */
.format-en {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
  font-family: 'Courier New', monospace;
}

.format-zh {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

/* 用途描述 */
.purpose-box {
  background-color: #f9fafb;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.purpose-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 6rpx;
}

.purpose-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 操作提示 */
.action-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed #e5e7eb;
}

.hint-icon {
  font-size: 24rpx;
}

.hint-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 加载更多 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.load-more-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.load-more-text {
  font-size: 26rpx;
  color: #6b7280;
}

.load-complete {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.load-complete-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 功能说明 ==================== */

.tips-section {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* ==================== 详情弹窗 - 参考体检标准UI设计 ==================== */

.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
  transform: translateZ(0);
  will-change: transform;
}

/* 弹窗标题栏 - 紫色渐变背景 */
.popup-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #e2e8f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  transform: translateZ(0);
}

.popup-header-content {
  flex: 1;
  margin-right: 16rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-style: italic;
}

.popup-close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
  transform: translateZ(0);
}

.popup-close-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.popup-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  will-change: scroll-position;
  transform: translateZ(0);
}

/* 信息区块样式 - 参考体检标准 */
.info-block {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-block-title {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
  color: #0369a1;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 24rpx;
  border-left: 6rpx solid #0ea5e9;
}

.info-block-content {
  padding: 24rpx;
  background: white;
}

/* 基本信息行布局 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  max-width: 60%;
}

/* 电文用途样式 */
.purpose-content {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.7;
}

/* 电文格式区块样式 */
.format-section {
  margin-bottom: 20rpx;
}

.format-section:last-child {
  margin-bottom: 0;
}

.format-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

.format-value-en {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
  font-family: 'Courier New', monospace;
  line-height: 1.6;
  background: rgba(59, 130, 246, 0.05);
  padding: 12rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #3b82f6;
}

.format-value-zh {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  background: rgba(34, 197, 94, 0.05);
  padding: 12rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #22c55e;
}

/* 电文属性区块样式 */
.attribute-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.attribute-row:last-child {
  border-bottom: none;
}

.attribute-label {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.attribute-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
}

/* 紧急级别徽章详情 */
.urgent-badge-detail,
.alert-badge-detail {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 紧急级别徽章颜色 */
.urgent-badge-detail.badge-distress {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.urgent-badge-detail.badge-urgent {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  box-shadow: 0 4rpx 16rpx rgba(249, 115, 22, 0.4);
}

.urgent-badge-detail.badge-medium {
  background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
  box-shadow: 0 4rpx 16rpx rgba(234, 179, 8, 0.4);
}

.urgent-badge-detail.badge-normal {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  box-shadow: 0 4rpx 16rpx rgba(34, 197, 94, 0.4);
}

/* 告警级别徽章颜色 */
.alert-badge-detail.badge-alert-high {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.alert-badge-detail.badge-alert-medium {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  box-shadow: 0 4rpx 16rpx rgba(249, 115, 22, 0.4);
}

.alert-badge-detail.badge-alert-low {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.4);
}

.alert-badge-detail.badge-alert-none {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  box-shadow: 0 4rpx 16rpx rgba(107, 114, 128, 0.4);
}

/* 级别说明样式 */
.level-description {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.level-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.level-label {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 600;
}

.level-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
}

/* 数据来源样式 */
.source-content {
  background: rgba(245, 158, 11, 0.08);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #f59e0b;
}

.source-main {
  font-size: 28rpx;
  color: #92400e;
  font-weight: 600;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.source-subtitle {
  font-size: 24rpx;
  color: #d97706;
  line-height: 1.5;
}
