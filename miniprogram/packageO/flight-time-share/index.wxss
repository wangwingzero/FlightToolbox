.container {
  padding: 0 32rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* é¡µé¢å¤´éƒ¨ */
.page-header {
  text-align: center;
  padding: 40rpx 0 32rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
  opacity: 0.8;
}

/* å¡ç‰‡é€šç”¨æ ·å¼ */
.input-card, .mode-card, .result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-left: 16rpx;
}

/* æ—¶é—´è¾“å…¥æ ·å¼ */
.time-input-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.time-input-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.time-input {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #1989fa;
}

.time-unit {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.time-separator {
  font-size: 48rpx;
  font-weight: bold;
  color: #1989fa;
  margin: 0 16rpx;
}

/* æ¨¡å¼é€‰æ‹©æ ‡ç­¾ */
.mode-tabs {
  display: flex;
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
}

.mode-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-tab.active {
  background: #1989fa;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.mode-tab text {
  margin-left: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* æ¯”ä¾‹é€‰æ‹©ç½‘æ ¼ */
.ratio-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.ratio-item {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2rpx solid transparent;
}

.ratio-item.selected {
  background: #e6f7ff;
  border-color: #1989fa;
  transform: scale(1.05);
}

.ratio-display {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.ratio-percent {
  font-size: 24rpx;
  color: #666;
}

/* å›ºå®šæ—¶é—´è¾“å…¥ */
.fixed-time-input {
  animation: slideIn 0.3s ease;
}

.fixed-time-label {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.fixed-time-tip {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* è®¡ç®—æŒ‰é’® */
.calculate-section {
  margin: 40rpx 0;
  text-align: center;
}

.calculate-btn {
  background: linear-gradient(135deg, #1989fa 0%, #0066cc 100%);
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.4);
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  color: #fff;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  user-select: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  max-width: 500rpx;
  min-height: 88rpx;
}

.calculate-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.calculate-btn.disabled {
  background: #f5f5f5;
  color: #c8c9cc;
  box-shadow: none;
  cursor: not-allowed;
}

.calculate-btn.disabled:active {
  transform: none;
}

/* ç»“æœæ˜¾ç¤º */
.total-time-display {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.total-time-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.total-time-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1989fa;
}

.allocation-results {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.person-result {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.person-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.person-avatar {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.person-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.person-time {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
  text-align: center;
  margin-bottom: 8rpx;
}

.person-ratio {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 4rpx;
  transition: width 0.6s ease;
}

.verification-result {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.verification-result.correct {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.verification-result.error {
  background: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.verification-time {
  margin-left: 16rpx;
  font-size: 24rpx;
  opacity: 0.8;
}


