/* ============================================================
   资质管理页面样式 - iOS 17 设计系统
   ============================================================ */

/* CSS Variables - 设计令牌 */
page {
  /* iOS 17 标准色 */
  --color-blue: #007AFF;
  --color-green: #34C759;
  --color-orange: #FF9500;
  --color-red: #FF3B30;
  --color-purple: #AF52DE;
  --color-indigo: #5856D6;
  --color-teal: #5AC8FA;
  --color-yellow: #FFCC00;
  
  /* 语义色 */
  --color-valid: #34C759;
  --color-warning: #FF9500;
  --color-expired: #FF3B30;
  --color-primary: #5856D6;
  
  /* 背景色 */
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: #E5E5EA;
  
  /* 文字色 */
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  /* 圆角系统 */
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  --radius-xl: 36rpx;
  --radius-full: 9999rpx;
  
  /* 阴影系统 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.16);
  --shadow-colored: 0 8rpx 24rpx rgba(88, 86, 214, 0.25);
  
  /* 过渡动画 */
  --transition-fast: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  
  /* 间距系统 */
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  --spacing-2xl: 40rpx;
}

/* ============================================================
   基础容器
   ============================================================ */
.container {
  padding: var(--spacing-lg);
  margin: 0;
  background: var(--bg-primary);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* Emoji图标样式 */
.emoji-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
  vertical-align: middle;
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
  font-style: normal;
  font-weight: normal;
}

.emoji-icon.small { font-size: 28rpx; }
.emoji-icon.large { font-size: 64rpx; }
.emoji-icon.extra-large { font-size: 96rpx; }

/* ============================================================
   顶部状态卡片 - 全新设计
   ============================================================ */
.qualification-status-card {
  background: linear-gradient(135deg, var(--color-indigo) 0%, var(--color-purple) 100%);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: 
    0 12rpx 40rpx rgba(88, 86, 214, 0.35),
    0 4rpx 16rpx rgba(175, 82, 222, 0.2);
  position: relative;
  overflow: hidden;
}

/* 装饰光晕 */
.qualification-status-card::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  pointer-events: none;
}

.qualification-status-card::after {
  content: '';
  position: absolute;
  bottom: -80rpx;
  left: -80rpx;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

/* 状态头部 */
.status-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xl);
  position: relative;
  z-index: 2;
}

.qualification-avatar {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-lg);
  flex-shrink: 0;
}

.avatar-ring {
  display: none;
}

.qualification-info {
  flex: 1;
  min-width: 0;
}

.qualification-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 0.5rpx;
  line-height: 1.3;
  margin-bottom: 4rpx;
}

.qualification-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

/* 状态数值显示 */
.status-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md) var(--spacing-xl);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  min-width: 100rpx;
}

.status-value {
  font-size: 48rpx;
  font-weight: 800;
  color: #FFFFFF;
  line-height: 1;
  letter-spacing: -1rpx;
}

.status-unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  margin-top: 4rpx;
}

.status-ring {
  display: none;
}

/* ============================================================
   快速操作区
   ============================================================ */
.quick-actions {
  display: flex;
  gap: var(--spacing-sm);
  position: relative;
  z-index: 2;
  margin-bottom: var(--spacing-lg);
}

.action-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg) var(--spacing-md);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  transition: var(--transition-normal);
  min-height: 100rpx;
}

.action-item:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.3);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon .emoji-icon {
  font-size: 28rpx;
}

.action-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1.2;
}

.action-ripple {
  display: none;
}

/* ============================================================
   状态统计
   ============================================================ */
.status-stats {
  display: flex;
  gap: var(--spacing-sm);
  position: relative;
  z-index: 2;
}

.stat-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
}

.stat-item .emoji-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ============================================================
   资质列表卡片
   ============================================================ */
.qualification-list-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
}

.list-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.list-icon {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, var(--color-indigo) 0%, var(--color-purple) 100%);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-md);
}

.list-icon .emoji-icon {
  font-size: 24rpx;
}

.list-content {
  flex: 1;
}

.list-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.3;
}

.list-subtitle {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-top: 2rpx;
}

/* ============================================================
   资质卡片项
   ============================================================ */
.qualification-items {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.qualification-card {
  background: var(--bg-secondary);
  border: 1rpx solid var(--bg-tertiary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.qualification-card:active {
  transform: scale(0.98);
}

/* 左侧状态条 */
.qualification-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--color-valid);
  border-radius: 6rpx 0 0 6rpx;
}

.qualification-card.qualification-valid::before {
  background: var(--color-valid);
}

.qualification-card.qualification-warning::before {
  background: var(--color-warning);
}

.qualification-card.qualification-expired::before {
  background: var(--color-expired);
}

/* 警告状态背景 */
.qualification-card.qualification-warning {
  background: linear-gradient(135deg, #FFF9F0 0%, #FFFFFF 100%);
}

/* 过期状态背景 */
.qualification-card.qualification-expired {
  background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 100%);
}

/* 卡片头部 */
.qual-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.qual-status-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: var(--radius-full);
  margin-right: var(--spacing-sm);
  flex-shrink: 0;
}

.qualification-valid .qual-status-dot {
  background: var(--color-valid);
  box-shadow: 0 0 0 4rpx rgba(52, 199, 89, 0.2);
}

.qualification-warning .qual-status-dot {
  background: var(--color-warning);
  box-shadow: 0 0 0 4rpx rgba(255, 149, 0, 0.2);
  animation: pulse-warning 2s infinite;
}

.qualification-expired .qual-status-dot {
  background: var(--color-expired);
  box-shadow: 0 0 0 4rpx rgba(255, 59, 48, 0.2);
  animation: pulse-error 1.5s infinite;
}

@keyframes pulse-warning {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.7; }
}

@keyframes pulse-error {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0.6; }
}

.qual-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.qual-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  font-size: 28rpx;
  padding: var(--spacing-xs);
  border-radius: var(--radius-full);
  transition: var(--transition-fast);
  opacity: 0.6;
}

.delete-btn:active {
  transform: scale(0.9);
  opacity: 1;
  background: rgba(255, 59, 48, 0.1);
}

/* 卡片详情 */
.qual-details {
  margin-bottom: var(--spacing-md);
}

.qual-mode {
  font-size: 26rpx;
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-xs);
}

.qual-countdown {
  font-size: 24rpx;
  font-weight: 600;
}

.qualification-valid .qual-countdown { color: var(--color-valid); }
.qualification-warning .qual-countdown { color: var(--color-warning); }
.qualification-expired .qual-countdown { color: var(--color-expired); }

.countdown-text {
  font-size: 22rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.countdown-text.valid {
  color: var(--color-valid);
  background: rgba(52, 199, 89, 0.1);
}

.countdown-text.warning {
  color: var(--color-warning);
  background: rgba(255, 149, 0, 0.1);
}

.countdown-text.expired {
  color: var(--color-expired);
  background: rgba(255, 59, 48, 0.1);
}

/* 进度条 */
.qual-progress {
  margin-top: var(--spacing-md);
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-bottom: var(--spacing-xs);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-valid) 0%, #5ED578 100%);
  border-radius: var(--radius-full);
  transition: width var(--transition-slow);
}

.qualification-warning .progress-fill {
  background: linear-gradient(90deg, var(--color-warning) 0%, #FFB340 100%);
}

.qualification-expired .progress-fill {
  background: linear-gradient(90deg, var(--color-expired) 0%, #FF6B6B 100%);
}

.progress-text {
  font-size: 22rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* ============================================================
   空状态卡片
   ============================================================ */
.empty-state-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl) var(--spacing-xl);
  text-align: center;
  box-shadow: var(--shadow-md);
}

.empty-icon {
  margin-bottom: var(--spacing-lg);
  opacity: 0.8;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.empty-subtitle {
  font-size: 28rpx;
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-xl);
  line-height: 1.5;
}

.empty-actions {
  display: flex;
  gap: var(--spacing-lg);
  justify-content: center;
}

.empty-action-item {
  background: linear-gradient(135deg, var(--color-indigo) 0%, var(--color-purple) 100%);
  color: #FFFFFF;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg) var(--spacing-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  transition: var(--transition-normal);
  box-shadow: 0 4rpx 16rpx rgba(88, 86, 214, 0.3);
  min-width: 140rpx;
}

.empty-action-item:active {
  transform: scale(0.95);
}

.empty-action-item .emoji-icon {
  font-size: 32rpx;
}

.empty-action-item text:last-child {
  font-size: 26rpx;
  font-weight: 600;
}

/* ============================================================
   弹窗样式
   ============================================================ */
.popup-content {
  padding: var(--spacing-xl);
  background: var(--bg-secondary);
  min-height: 200rpx;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--bg-tertiary);
}

.popup-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  flex: 1;
  text-align: center;
}

.popup-back-btn {
  color: var(--color-blue);
  padding: var(--spacing-xs);
  transition: var(--transition-fast);
}

.popup-back-btn:active {
  transform: scale(0.9);
}

.popup-buttons {
  display: flex;
  gap: var(--spacing-lg);
  margin-top: var(--spacing-xl);
  padding-top: var(--spacing-xl);
  border-top: 1rpx solid var(--bg-tertiary);
}

.popup-buttons .van-button {
  flex: 1;
}

/* ============================================================
   记录弹窗 - iOS 17 Sheet 风格
   ============================================================ */
.record-popup-content {
  background: var(--bg-primary);
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.record-popup-scroll {
  flex: 1;
  overflow-y: auto;
  padding-bottom: var(--spacing-lg);
}

/* 弹窗头部 */
.record-popup-header {
  background: linear-gradient(135deg, var(--color-indigo) 0%, var(--color-purple) 100%);
  padding: var(--spacing-xl) var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.record-popup-header.warning {
  background: linear-gradient(135deg, var(--color-orange) 0%, #FFB340 100%);
}

.record-popup-header.expired {
  background: linear-gradient(135deg, var(--color-red) 0%, #FF6B6B 100%);
}

/* 头部装饰 */
.record-popup-header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  pointer-events: none;
}

.record-popup-back {
  width: 44rpx;
  height: 44rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-fast);
}

.record-popup-back:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.record-popup-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin: 0 var(--spacing-md);
}

.record-popup-status {
  min-width: 48rpx;
}

.status-badge {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  color: #FFFFFF;
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-full);
  font-size: 22rpx;
  font-weight: 600;
}

/* 状态卡片 */
.record-status-card {
  margin: var(--spacing-lg);
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  border-left: 6rpx solid var(--color-valid);
}

.record-status-card.warning {
  border-left-color: var(--color-warning);
  background: linear-gradient(135deg, #FFF9F0 0%, #FFFFFF 100%);
}

.record-status-card.expired {
  border-left-color: var(--color-expired);
  background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 100%);
}

.record-status-info {
  margin-bottom: var(--spacing-lg);
}

.record-status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.record-status-row:last-child {
  margin-bottom: 0;
}

.record-status-label {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 28rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.record-status-label .emoji-icon {
  font-size: 24rpx;
}

.record-status-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.expired-text {
  color: var(--color-expired) !important;
}

/* 进度条 */
.record-progress {
  margin-top: var(--spacing-lg);
}

.record-progress-bar {
  width: 100%;
  height: 10rpx;
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-bottom: var(--spacing-sm);
}

.record-progress-fill {
  height: 100%;
  border-radius: var(--radius-full);
  transition: width var(--transition-slow);
  background: linear-gradient(90deg, var(--color-valid) 0%, #5ED578 100%);
}

.record-progress-fill.warning {
  background: linear-gradient(90deg, var(--color-warning) 0%, #FFB340 100%);
}

.record-progress-fill.expired {
  background: linear-gradient(90deg, var(--color-expired) 0%, #FF6B6B 100%);
}

.record-progress-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* 区域标题 */
.record-section-title {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
  padding: 0 var(--spacing-lg);
}

.record-section-title .emoji-icon {
  font-size: 28rpx;
}

/* 添加记录区域 */
.record-add-section {
  margin: var(--spacing-lg) 0;
}

.record-form {
  margin: 0 var(--spacing-lg);
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.record-form-item {
  margin-bottom: var(--spacing-md);
}

.record-form-item:last-child {
  margin-bottom: 0;
}

.record-form-label {
  font-size: 26rpx;
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-sm);
  font-weight: 500;
}

.record-form-input {
  background: var(--bg-primary);
  border: 2rpx solid var(--bg-tertiary);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: 28rpx;
  transition: var(--transition-fast);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.record-form-input:focus-within {
  border-color: var(--color-blue);
  background: var(--bg-secondary);
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.date-input {
  cursor: pointer;
}

.date-input:active {
  transform: scale(0.98);
}

.count-input {
  border: none;
  outline: none;
  background: transparent;
  width: 100%;
  font-size: 28rpx;
  color: var(--text-primary);
}

.record-form-button {
  margin-top: var(--spacing-lg);
}

.add-record-btn {
  width: 100%;
  background: linear-gradient(135deg, var(--color-indigo) 0%, var(--color-purple) 100%);
  color: #FFFFFF;
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  transition: var(--transition-normal);
  box-shadow: 0 4rpx 16rpx rgba(88, 86, 214, 0.3);
}

.add-record-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(88, 86, 214, 0.3);
}

/* 历史记录区域 */
.record-history-section {
  margin: var(--spacing-lg) 0;
}

.record-history-list {
  margin: 0 var(--spacing-lg);
}

.record-history-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  margin-bottom: var(--spacing-sm);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-fast);
}

.record-history-item:active {
  transform: scale(0.98);
}

.record-history-date {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.record-history-count {
  background: var(--color-indigo);
  color: #FFFFFF;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-full);
  font-size: 22rpx;
  font-weight: 600;
}

.record-history-delete {
  width: 36rpx;
  height: 36rpx;
  background: rgba(255, 59, 48, 0.1);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-fast);
}

.record-history-delete .emoji-icon {
  font-size: 20rpx;
}

.record-history-delete:active {
  transform: scale(0.9);
  background: rgba(255, 59, 48, 0.2);
}

.record-clear-all {
  background: rgba(255, 59, 48, 0.08);
  border: 1rpx solid rgba(255, 59, 48, 0.15);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-top: var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  font-size: 26rpx;
  color: var(--color-expired);
  font-weight: 600;
  transition: var(--transition-fast);
}

.record-clear-all:active {
  background: rgba(255, 59, 48, 0.15);
  transform: scale(0.98);
}

/* 空状态 */
.record-empty-state {
  text-align: center;
  padding: var(--spacing-2xl) var(--spacing-lg);
  margin: 0 var(--spacing-lg);
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.record-empty-state .emoji-icon.large {
  font-size: 72rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.empty-subtext {
  display: block;
  font-size: 26rpx;
  color: var(--text-tertiary);
}

/* 提醒设置区域 */
.record-reminder-section {
  margin: var(--spacing-lg) 0;
}

.record-reminder-form {
  margin: 0 var(--spacing-lg);
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.record-reminder-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
}

.record-reminder-item:last-child {
  margin-bottom: 0;
}

.record-reminder-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.record-reminder-input {
  flex: 1;
  max-width: 180rpx;
  margin-left: var(--spacing-md);
}

.days-input {
  background: var(--bg-primary);
  border: 2rpx solid var(--bg-tertiary);
  border-radius: var(--radius-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: 28rpx;
  text-align: center;
  transition: var(--transition-fast);
  color: var(--text-primary);
}

.days-input:focus {
  border-color: var(--color-blue);
  background: var(--bg-secondary);
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.days-input.disabled {
  opacity: 0.5;
  background: var(--bg-tertiary);
}

/* 底部操作区域 */
.record-bottom-actions {
  margin: var(--spacing-xl) var(--spacing-lg) var(--spacing-2xl);
}

.delete-qualification-btn {
  width: 100%;
  background: rgba(255, 59, 48, 0.08);
  color: var(--color-expired);
  border: 1rpx solid rgba(255, 59, 48, 0.15);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  transition: var(--transition-fast);
}

.delete-qualification-btn:active {
  background: rgba(255, 59, 48, 0.15);
  transform: scale(0.98);
}

/* 底部安全距离 */
.record-bottom-safe-area {
  height: env(safe-area-inset-bottom, 40rpx);
}

/* ============================================================
   帮助说明区域
   ============================================================ */
.help-section {
  margin-top: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
}

/* ============================================================
   广告区域
   ============================================================ */
.ad-banner-container {
  margin: var(--spacing-lg) 0;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

/* ============================================================
   Vant 组件覆盖样式
   ============================================================ */
.van-tag--success {
  background-color: rgba(52, 199, 89, 0.1) !important;
  color: var(--color-valid) !important;
  border: 1rpx solid rgba(52, 199, 89, 0.3) !important;
}

.van-tag--warning {
  background-color: rgba(255, 149, 0, 0.1) !important;
  color: var(--color-warning) !important;
  border: 1rpx solid rgba(255, 149, 0, 0.3) !important;
}

.van-tag--danger {
  background-color: rgba(255, 59, 48, 0.1) !important;
  color: var(--color-expired) !important;
  border: 1rpx solid rgba(255, 59, 48, 0.3) !important;
}

.van-popup--bottom {
  border-radius: var(--radius-xl) var(--radius-xl) 0 0 !important;
}

.van-datetime-picker__toolbar {
  padding: var(--spacing-md) !important;
}

.van-datetime-picker__toolbar .van-picker__toolbar-title {
  font-weight: 600 !important;
  font-size: 32rpx !important;
}

.van-cell:active {
  background-color: var(--bg-primary);
}

.van-cell__label {
  margin-top: var(--spacing-xs);
  color: var(--text-tertiary) !important;
  font-size: 24rpx;
}

.van-empty {
  padding: 100rpx 0;
}

/* ============================================================
   响应式适配
   ============================================================ */
@media (max-width: 375px) {
  .container {
    padding: var(--spacing-md);
  }
  
  .qualification-status-card {
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
  }
  
  .qualification-title {
    font-size: 32rpx;
  }
  
  .qualification-subtitle {
    font-size: 24rpx;
  }
  
  .status-value {
    font-size: 40rpx;
  }
  
  .action-item {
    padding: var(--spacing-md) var(--spacing-sm);
    min-height: 90rpx;
  }
  
  .action-text {
    font-size: 22rpx;
  }
  
  .qualification-list-card {
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
  }
  
  .list-title {
    font-size: 28rpx;
  }
  
  .qual-name {
    font-size: 28rpx;
  }
  
  .empty-title {
    font-size: 30rpx;
  }
  
  .empty-subtitle {
    font-size: 26rpx;
  }
  
  .empty-action-item {
    padding: var(--spacing-md) var(--spacing-lg);
    min-width: 120rpx;
  }
  
  .record-popup-title {
    font-size: 30rpx;
  }
}

/* ============================================================
   深色模式支持
   ============================================================ */
@media (prefers-color-scheme: dark) {
  page {
    --bg-primary: #000000;
    --bg-secondary: #1C1C1E;
    --bg-tertiary: #2C2C2E;
    
    --text-primary: #FFFFFF;
    --text-secondary: #EBEBF5;
    --text-tertiary: #8E8E93;
    --text-quaternary: #636366;
    
    --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
  }
  
  .qualification-card.qualification-warning {
    background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, #1C1C1E 100%);
  }
  
  .qualification-card.qualification-expired {
    background: linear-gradient(135deg, rgba(255, 59, 48, 0.1) 0%, #1C1C1E 100%);
  }
  
  .record-status-card.warning {
    background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, #1C1C1E 100%);
  }
  
  .record-status-card.expired {
    background: linear-gradient(135deg, rgba(255, 59, 48, 0.1) 0%, #1C1C1E 100%);
  }
  
  .record-form-input,
  .days-input {
    background: var(--bg-tertiary);
    border-color: #3C3C3E;
  }
  
  .count-input {
    color: var(--text-primary);
  }
}

/* ============================================================
   动画效果
   ============================================================ */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.qualification-card {
  animation: fadeIn 0.3s ease-out;
}

.qualification-list-card {
  animation: fadeIn 0.4s ease-out;
}

.empty-state-card {
  animation: fadeIn 0.5s ease-out;
}
