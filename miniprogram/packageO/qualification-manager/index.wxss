/* ============================================================
   资质管理页面样式 - iOS 17 Premium Design
   Version: 2.0 - Complete Redesign
   ============================================================ */

/* CSS Variables - Design Tokens */
page {
  /* iOS 17 Color Palette */
  --color-blue: #007AFF;
  --color-green: #30D158;
  --color-orange: #FF9F0A;
  --color-red: #FF453A;
  --color-purple: #BF5AF2;
  --color-indigo: #5E5CE6;
  --color-teal: #64D2FF;
  --color-yellow: #FFD60A;
  --color-mint: #63E6BE;
  --color-cyan: #32D2FF;
  
  /* Semantic Colors */
  --color-valid: #30D158;
  --color-warning: #FF9F0A;
  --color-expired: #FF453A;
  --color-primary: #5E5CE6;
  
  /* Background Colors */
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: #E5E5EA;
  --bg-elevated: #FFFFFF;
  
  /* Text Colors */
  --text-primary: #1C1C1E;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  /* Gradient Presets */
  --gradient-hero: linear-gradient(145deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  --gradient-valid: linear-gradient(135deg, #30D158 0%, #63E6BE 100%);
  --gradient-warning: linear-gradient(135deg, #FF9F0A 0%, #FFD60A 100%);
  --gradient-expired: linear-gradient(135deg, #FF453A 0%, #FF6B6B 100%);
  --gradient-action: linear-gradient(135deg, #5E5CE6 0%, #BF5AF2 100%);
  
  /* Border Radius */
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-2xl: 40rpx;
  --radius-full: 9999rpx;
  
  /* Shadows */
  --shadow-xs: 0 1rpx 3rpx rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.10);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.14);
  --shadow-hero: 0 12rpx 40rpx -8rpx rgba(102, 126, 234, 0.45);
  
  /* Transitions */
  --ease-out: cubic-bezier(0.16, 1, 0.3, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --duration-fast: 0.15s;
  --duration-normal: 0.25s;
  --duration-slow: 0.4s;
  
  /* Spacing */
  --space-1: 4rpx;
  --space-2: 8rpx;
  --space-3: 12rpx;
  --space-4: 16rpx;
  --space-5: 20rpx;
  --space-6: 24rpx;
  --space-7: 28rpx;
  --space-8: 32rpx;
  --space-10: 40rpx;
  --space-12: 48rpx;
}

/* ============================================================
   Base Container
   ============================================================ */
.container {
  padding: var(--space-6);
  margin: 0;
  background: var(--bg-primary);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* Emoji Icon Base */
.emoji-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  line-height: 1;
  vertical-align: middle;
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
  font-style: normal;
  font-weight: normal;
}

.emoji-icon.small { font-size: 28rpx; }
.emoji-icon.large { font-size: 72rpx; }
.emoji-icon.extra-large { font-size: 120rpx; }

/* ============================================================
   Hero Status Card - Premium Glass Design
   ============================================================ */
.qualification-status-card {
  background: var(--gradient-hero);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  margin-bottom: var(--space-6);
  box-shadow: var(--shadow-hero);
  position: relative;
  overflow: hidden;
}

/* Decorative Elements */
.qualification-status-card::before {
  content: '';
  position: absolute;
  top: -60%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.25) 0%, transparent 60%);
  pointer-events: none;
}

.qualification-status-card::after {
  content: '';
  position: absolute;
  bottom: -40%;
  left: -10%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 60%);
  pointer-events: none;
}

/* Header Row */
.status-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-8);
  position: relative;
  z-index: 2;
}

.qualification-avatar {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: saturate(180%) blur(20rpx);
  -webkit-backdrop-filter: saturate(180%) blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--space-5);
  flex-shrink: 0;
}

.qualification-avatar .emoji-icon {
  font-size: 44rpx;
}

.avatar-ring {
  display: none;
}

.qualification-info {
  flex: 1;
  min-width: 0;
}

.qualification-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 0.5rpx;
  line-height: 1.2;
  margin-bottom: 6rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.qualification-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* Status Badge */
.status-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: saturate(180%) blur(20rpx);
  -webkit-backdrop-filter: saturate(180%) blur(20rpx);
  border-radius: var(--radius-xl);
  padding: var(--space-4) var(--space-6);
  border: 2rpx solid rgba(255, 255, 255, 0.25);
  min-width: 110rpx;
}

.status-value {
  font-size: 52rpx;
  font-weight: 800;
  color: #FFFFFF;
  line-height: 1;
  letter-spacing: -2rpx;
}

.status-unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
  margin-top: 4rpx;
  letter-spacing: 1rpx;
}

.status-ring {
  display: none;
}

/* ============================================================
   Quick Actions - Pill Style Buttons
   ============================================================ */
.quick-actions {
  display: flex;
  gap: var(--space-3);
  position: relative;
  z-index: 2;
  margin-bottom: var(--space-6);
}

.action-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: saturate(180%) blur(20rpx);
  -webkit-backdrop-filter: saturate(180%) blur(20rpx);
  border: 1.5rpx solid rgba(255, 255, 255, 0.3);
  border-radius: var(--radius-xl);
  padding: var(--space-5) var(--space-4);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  transition: all var(--duration-normal) var(--ease-out);
  min-height: 120rpx;
}

.action-item:active {
  transform: scale(0.94);
  background: rgba(255, 255, 255, 0.35);
}

.action-icon {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon .emoji-icon {
  font-size: 32rpx;
}

.action-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1.3;
  letter-spacing: 0.5rpx;
}

.action-ripple {
  display: none;
}

/* ============================================================
   Status Stats - Bottom Bar
   ============================================================ */
.status-stats {
  display: flex;
  gap: var(--space-2);
  position: relative;
  z-index: 2;
  background: rgba(0, 0, 0, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--space-2);
}

.stat-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--radius-md);
  padding: var(--space-3) var(--space-2);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-1);
  transition: all var(--duration-fast) var(--ease-out);
}

.stat-item:active {
  background: rgba(255, 255, 255, 0.25);
}

.stat-item .emoji-icon {
  font-size: 22rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* ============================================================
   Qualification List Card - Clean Design
   ============================================================ */
.qualification-list-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-2xl);
  padding: var(--space-6);
  margin-bottom: var(--space-5);
  box-shadow: var(--shadow-md);
}

.list-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-5);
  padding-bottom: var(--space-4);
  border-bottom: 1rpx solid var(--bg-tertiary);
}

.list-icon {
  width: 52rpx;
  height: 52rpx;
  background: var(--gradient-action);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--space-4);
  box-shadow: 0 4rpx 12rpx rgba(94, 92, 230, 0.25);
}

.list-icon .emoji-icon {
  font-size: 28rpx;
}

.list-content {
  flex: 1;
}

.list-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.3;
  letter-spacing: -0.5rpx;
}

.list-subtitle {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-top: 4rpx;
}

/* ============================================================
   Qualification Item Cards - Modern Card Design
   ============================================================ */
.qualification-items {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.qualification-card {
  background: var(--bg-secondary);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  border-radius: var(--radius-xl);
  padding: var(--space-5);
  transition: all var(--duration-normal) var(--ease-out);
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.qualification-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-xs);
}

/* Left Status Accent Bar */
.qualification-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 5rpx;
  background: var(--color-valid);
}

.qualification-card.qualification-valid::before {
  background: var(--gradient-valid);
}

.qualification-card.qualification-warning::before {
  background: var(--gradient-warning);
}

.qualification-card.qualification-expired::before {
  background: var(--gradient-expired);
}

/* Warning State Background */
.qualification-card.qualification-warning {
  background: linear-gradient(135deg, rgba(255, 159, 10, 0.06) 0%, #FFFFFF 100%);
  border-color: rgba(255, 159, 10, 0.15);
}

/* Expired State Background */
.qualification-card.qualification-expired {
  background: linear-gradient(135deg, rgba(255, 69, 58, 0.06) 0%, #FFFFFF 100%);
  border-color: rgba(255, 69, 58, 0.15);
}

/* Card Header */
.qual-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-4);
}

.qual-status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: var(--radius-full);
  margin-right: var(--space-3);
  flex-shrink: 0;
}

.qualification-valid .qual-status-dot {
  background: var(--color-valid);
  box-shadow: 0 0 0 4rpx rgba(48, 209, 88, 0.2);
}

.qualification-warning .qual-status-dot {
  background: var(--color-warning);
  box-shadow: 0 0 0 4rpx rgba(255, 159, 10, 0.2);
  animation: pulse-warning 2s ease-in-out infinite;
}

.qualification-expired .qual-status-dot {
  background: var(--color-expired);
  box-shadow: 0 0 0 4rpx rgba(255, 69, 58, 0.2);
  animation: pulse-error 1.5s ease-in-out infinite;
}

@keyframes pulse-warning {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0.7; }
}

@keyframes pulse-error {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.4); opacity: 0.6; }
}

.qual-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.3rpx;
}

.qual-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  font-size: 28rpx;
  padding: var(--space-2);
  border-radius: var(--radius-full);
  transition: all var(--duration-fast) var(--ease-out);
  opacity: 0.5;
}

.delete-btn:active {
  transform: scale(0.85);
  opacity: 1;
  background: rgba(255, 69, 58, 0.12);
}

/* Card Details */
.qual-details {
  margin-bottom: var(--space-4);
}

.qual-mode {
  font-size: 26rpx;
  color: var(--text-tertiary);
  margin-bottom: var(--space-2);
  line-height: 1.4;
}

.qual-countdown {
  font-size: 24rpx;
  font-weight: 600;
}

.qualification-valid .qual-countdown { color: var(--color-valid); }
.qualification-warning .qual-countdown { color: var(--color-warning); }
.qualification-expired .qual-countdown { color: var(--color-expired); }

.countdown-text {
  display: inline-block;
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 14rpx;
  border-radius: var(--radius-sm);
}

.countdown-text.valid {
  color: var(--color-valid);
  background: rgba(48, 209, 88, 0.12);
}

.countdown-text.warning {
  color: var(--color-warning);
  background: rgba(255, 159, 10, 0.12);
}

.countdown-text.expired {
  color: var(--color-expired);
  background: rgba(255, 69, 58, 0.12);
}

/* Progress Bar */
.qual-progress {
  margin-top: var(--space-4);
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-bottom: var(--space-2);
}

.progress-fill {
  height: 100%;
  background: var(--gradient-valid);
  border-radius: var(--radius-full);
  transition: width var(--duration-slow) var(--ease-out);
}

.qualification-warning .progress-fill {
  background: var(--gradient-warning);
}

.qualification-expired .progress-fill {
  background: var(--gradient-expired);
}

.progress-text {
  font-size: 22rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* ============================================================
   Empty State Card - Friendly Design
   ============================================================ */
.empty-state-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-2xl);
  padding: var(--space-12) var(--space-8);
  text-align: center;
  box-shadow: var(--shadow-md);
}

.empty-icon {
  margin-bottom: var(--space-6);
  opacity: 0.9;
}

.empty-icon .emoji-icon {
  font-size: 100rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--space-3);
  letter-spacing: -0.5rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: var(--text-tertiary);
  margin-bottom: var(--space-8);
  line-height: 1.6;
}

.empty-actions {
  display: flex;
  gap: var(--space-4);
  justify-content: center;
}

.empty-action-item {
  background: var(--gradient-action);
  color: #FFFFFF;
  border-radius: var(--radius-xl);
  padding: var(--space-5) var(--space-6);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
  transition: all var(--duration-normal) var(--ease-out);
  box-shadow: 0 6rpx 20rpx rgba(94, 92, 230, 0.35);
  min-width: 160rpx;
}

.empty-action-item:active {
  transform: scale(0.94);
  box-shadow: 0 2rpx 10rpx rgba(94, 92, 230, 0.3);
}

.empty-action-item .emoji-icon {
  font-size: 36rpx;
}

.empty-action-item text:last-child {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* ============================================================
   Popup Styles - iOS Sheet Design
   ============================================================ */
.popup-content {
  padding: var(--space-6);
  background: var(--bg-primary);
  min-height: 200rpx;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-6);
  padding-bottom: var(--space-4);
  border-bottom: 1rpx solid var(--bg-tertiary);
}

.popup-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  flex: 1;
  text-align: center;
  letter-spacing: -0.5rpx;
}

.popup-back-btn {
  color: var(--color-blue);
  padding: var(--space-2);
  transition: all var(--duration-fast) var(--ease-out);
}

.popup-back-btn:active {
  transform: scale(0.88);
}

.popup-buttons {
  display: flex;
  gap: var(--space-4);
  margin-top: var(--space-6);
  padding-top: var(--space-5);
  border-top: 1rpx solid var(--bg-tertiary);
}

.popup-buttons .van-button {
  flex: 1;
}

/* ============================================================
   Record Popup - Premium Sheet Design
   ============================================================ */
.record-popup-content {
  background: var(--bg-primary);
  border-radius: var(--radius-2xl) var(--radius-2xl) 0 0;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.record-popup-scroll {
  flex: 1;
  overflow-y: auto;
  padding-bottom: var(--space-6);
}

/* Popup Header */
.record-popup-header {
  background: var(--gradient-hero);
  padding: var(--space-6) var(--space-5);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.record-popup-header.warning {
  background: linear-gradient(145deg, #FF9F0A 0%, #FFD60A 100%);
}

.record-popup-header.expired {
  background: linear-gradient(145deg, #FF453A 0%, #FF6B6B 100%);
}

/* Header Decoration */
.record-popup-header::before {
  content: '';
  position: absolute;
  top: -40%;
  right: -15%;
  width: 250rpx;
  height: 250rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 60%);
  pointer-events: none;
}

.record-popup-back {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: saturate(180%) blur(10rpx);
  -webkit-backdrop-filter: saturate(180%) blur(10rpx);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--duration-fast) var(--ease-out);
}

.record-popup-back:active {
  transform: scale(0.88);
  background: rgba(255, 255, 255, 0.35);
}

.record-popup-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin: 0 var(--space-4);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-popup-status {
  min-width: 48rpx;
}

.status-badge {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: saturate(180%) blur(10rpx);
  -webkit-backdrop-filter: saturate(180%) blur(10rpx);
  color: #FFFFFF;
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-full);
  font-size: 22rpx;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* Status Info Card */
.record-status-card {
  margin: var(--space-5);
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  box-shadow: var(--shadow-md);
  border-left: 5rpx solid var(--color-valid);
}

.record-status-card.warning {
  border-left-color: var(--color-warning);
  background: linear-gradient(135deg, rgba(255, 159, 10, 0.05) 0%, #FFFFFF 100%);
}

.record-status-card.expired {
  border-left-color: var(--color-expired);
  background: linear-gradient(135deg, rgba(255, 69, 58, 0.05) 0%, #FFFFFF 100%);
}

.record-status-info {
  margin-bottom: var(--space-5);
}

.record-status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-4);
}

.record-status-row:last-child {
  margin-bottom: 0;
}

.record-status-label {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: 28rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.record-status-label .emoji-icon {
  font-size: 24rpx;
}

.record-status-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.expired-text {
  color: var(--color-expired) !important;
}

/* Progress Bar in Popup */
.record-progress {
  margin-top: var(--space-5);
}

.record-progress-bar {
  width: 100%;
  height: 12rpx;
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-bottom: var(--space-3);
}

.record-progress-fill {
  height: 100%;
  border-radius: var(--radius-full);
  transition: width var(--duration-slow) var(--ease-out);
  background: var(--gradient-valid);
}

.record-progress-fill.warning {
  background: var(--gradient-warning);
}

.record-progress-fill.expired {
  background: var(--gradient-expired);
}

.record-progress-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* Section Titles */
.record-section-title {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--space-4);
  padding: 0 var(--space-5);
  letter-spacing: -0.3rpx;
}

.record-section-title .emoji-icon {
  font-size: 28rpx;
}

/* Add Record Section */
.record-add-section {
  margin: var(--space-5) 0;
}

.record-form {
  margin: 0 var(--space-5);
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--space-5);
  box-shadow: var(--shadow-sm);
}

.record-form-item {
  margin-bottom: var(--space-4);
}

.record-form-item:last-child {
  margin-bottom: 0;
}

.record-form-label {
  font-size: 26rpx;
  color: var(--text-tertiary);
  margin-bottom: var(--space-3);
  font-weight: 500;
}

.record-form-input {
  background: var(--bg-primary);
  border: 2rpx solid transparent;
  border-radius: var(--radius-md);
  padding: var(--space-4) var(--space-5);
  font-size: 30rpx;
  transition: all var(--duration-fast) var(--ease-out);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.record-form-input:focus-within {
  border-color: var(--color-blue);
  background: var(--bg-secondary);
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.12);
}

.date-input {
  cursor: pointer;
}

.date-input:active {
  transform: scale(0.98);
}

.count-input {
  border: none;
  outline: none;
  background: transparent;
  width: 100%;
  font-size: 30rpx;
  color: var(--text-primary);
}

.record-form-button {
  margin-top: var(--space-5);
}

.add-record-btn {
  width: 100%;
  background: var(--gradient-action);
  color: #FFFFFF;
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-5);
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  transition: all var(--duration-normal) var(--ease-out);
  box-shadow: 0 6rpx 20rpx rgba(94, 92, 230, 0.35);
}

.add-record-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 2rpx 10rpx rgba(94, 92, 230, 0.3);
}

/* History Records Section */
.record-history-section {
  margin: var(--space-5) 0;
}

.record-history-list {
  margin: 0 var(--space-5);
}

.record-history-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--space-4) var(--space-5);
  margin-bottom: var(--space-3);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: var(--shadow-sm);
  transition: all var(--duration-fast) var(--ease-out);
}

.record-history-item:active {
  transform: scale(0.98);
}

.record-history-date {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.record-history-count {
  background: var(--gradient-action);
  color: #FFFFFF;
  padding: 6rpx 14rpx;
  border-radius: var(--radius-full);
  font-size: 22rpx;
  font-weight: 600;
}

.record-history-delete {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 69, 58, 0.1);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--duration-fast) var(--ease-out);
}

.record-history-delete .emoji-icon {
  font-size: 20rpx;
}

.record-history-delete:active {
  transform: scale(0.88);
  background: rgba(255, 69, 58, 0.2);
}

.record-clear-all {
  background: rgba(255, 69, 58, 0.08);
  border: 1rpx solid rgba(255, 69, 58, 0.12);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  margin-top: var(--space-4);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  font-size: 26rpx;
  color: var(--color-expired);
  font-weight: 600;
  transition: all var(--duration-fast) var(--ease-out);
}

.record-clear-all:active {
  background: rgba(255, 69, 58, 0.15);
  transform: scale(0.98);
}

/* Empty State in History */
.record-empty-state {
  text-align: center;
  padding: var(--space-10) var(--space-5);
  margin: 0 var(--space-5);
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.record-empty-state .emoji-icon.large {
  font-size: 80rpx;
  margin-bottom: var(--space-4);
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: var(--space-2);
}

.empty-subtext {
  display: block;
  font-size: 26rpx;
  color: var(--text-tertiary);
}

/* Reminder Settings Section */
.record-reminder-section {
  margin: var(--space-5) 0;
}

.record-reminder-form {
  margin: 0 var(--space-5);
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--space-5);
  box-shadow: var(--shadow-sm);
}

.record-reminder-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-4);
}

.record-reminder-item:last-child {
  margin-bottom: 0;
}

.record-reminder-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.record-reminder-input {
  flex: 1;
  max-width: 180rpx;
  margin-left: var(--space-4);
}

.days-input {
  background: var(--bg-primary);
  border: 2rpx solid transparent;
  border-radius: var(--radius-md);
  padding: var(--space-3) var(--space-4);
  font-size: 28rpx;
  text-align: center;
  transition: all var(--duration-fast) var(--ease-out);
  color: var(--text-primary);
}

.days-input:focus {
  border-color: var(--color-blue);
  background: var(--bg-secondary);
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.12);
}

.days-input.disabled {
  opacity: 0.5;
  background: var(--bg-tertiary);
}

/* Bottom Actions */
.record-bottom-actions {
  margin: var(--space-8) var(--space-5) var(--space-10);
}

.delete-qualification-btn {
  width: 100%;
  background: rgba(255, 69, 58, 0.08);
  color: var(--color-expired);
  border: 1rpx solid rgba(255, 69, 58, 0.12);
  border-radius: var(--radius-lg);
  padding: var(--space-5);
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  transition: all var(--duration-fast) var(--ease-out);
}

.delete-qualification-btn:active {
  background: rgba(255, 69, 58, 0.15);
  transform: scale(0.98);
}

/* Bottom Safe Area */
.record-bottom-safe-area {
  height: env(safe-area-inset-bottom, 40rpx);
}

/* ============================================================
   Help Section
   ============================================================ */
.help-section {
  margin-top: var(--space-8);
  margin-bottom: var(--space-8);
}

/* ============================================================
   Ad Banner Area
   ============================================================ */
.ad-banner-container {
  margin: var(--space-5) 0;
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

/* ============================================================
   Vant Component Overrides
   ============================================================ */
.van-tag--success {
  background-color: rgba(48, 209, 88, 0.12) !important;
  color: var(--color-valid) !important;
  border: 1rpx solid rgba(48, 209, 88, 0.2) !important;
}

.van-tag--warning {
  background-color: rgba(255, 159, 10, 0.12) !important;
  color: var(--color-warning) !important;
  border: 1rpx solid rgba(255, 159, 10, 0.2) !important;
}

.van-tag--danger {
  background-color: rgba(255, 69, 58, 0.12) !important;
  color: var(--color-expired) !important;
  border: 1rpx solid rgba(255, 69, 58, 0.2) !important;
}

.van-popup--bottom {
  border-radius: var(--radius-2xl) var(--radius-2xl) 0 0 !important;
}

.van-datetime-picker__toolbar {
  padding: var(--space-4) !important;
}

.van-datetime-picker__toolbar .van-picker__toolbar-title {
  font-weight: 600 !important;
  font-size: 32rpx !important;
}

.van-cell:active {
  background-color: var(--bg-primary);
}

.van-cell__label {
  margin-top: var(--space-2);
  color: var(--text-tertiary) !important;
  font-size: 24rpx;
}

.van-empty {
  padding: 100rpx 0;
}

/* ============================================================
   Responsive Design
   ============================================================ */
@media (max-width: 375px) {
  .container {
    padding: var(--space-4);
  }
  
  .qualification-status-card {
    padding: var(--space-6);
    border-radius: var(--radius-xl);
  }
  
  .qualification-title {
    font-size: 34rpx;
  }
  
  .qualification-subtitle {
    font-size: 24rpx;
  }
  
  .status-value {
    font-size: 44rpx;
  }
  
  .action-item {
    padding: var(--space-4) var(--space-3);
    min-height: 100rpx;
  }
  
  .action-text {
    font-size: 22rpx;
  }
  
  .qualification-list-card {
    padding: var(--space-5);
    border-radius: var(--radius-xl);
  }
  
  .list-title {
    font-size: 30rpx;
  }
  
  .qual-name {
    font-size: 28rpx;
  }
  
  .empty-title {
    font-size: 32rpx;
  }
  
  .empty-subtitle {
    font-size: 26rpx;
  }
  
  .empty-action-item {
    padding: var(--space-4) var(--space-5);
    min-width: 140rpx;
  }
  
  .record-popup-title {
    font-size: 32rpx;
  }
}

/* ============================================================
   Animations
   ============================================================ */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-16rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.qualification-card {
  animation: fadeIn 0.3s var(--ease-out);
}

.qualification-list-card {
  animation: scaleIn 0.4s var(--ease-out);
}

.empty-state-card {
  animation: fadeIn 0.5s var(--ease-out);
}
