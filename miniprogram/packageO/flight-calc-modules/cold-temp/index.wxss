/* 温度修正页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.container[data-theme="dark"] {
  background-color: #1a1a1a;
  color: #ffffff;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.instruction-section {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.container[data-theme="dark"] .instruction-section {
  background-color: #2a2a2a;
}

.instruction-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.container[data-theme="dark"] .instruction-title {
  color: #ffffff;
}

.instruction-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.instruction-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.container[data-theme="dark"] .instruction-text {
  color: #cccccc;
}

.calculation-module {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.container[data-theme="dark"] .calculation-module {
  background-color: #2a2a2a;
}

.input-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 3rpx solid #667eea;
}

.container[data-theme="dark"] .section-title {
  color: #ffffff;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.label-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.container[data-theme="dark"] .label-text {
  color: #ffffff;
}

.label-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 5rpx;
}

.container[data-theme="dark"] .label-desc {
  color: #aaaaaa;
}

.unit-label {
  font-size: 26rpx;
  color: #666666;
  padding: 0 10rpx;
}

.container[data-theme="dark"] .unit-label {
  color: #cccccc;
}

.switch-group {
  display: flex;
  flex-direction: column;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  margin-bottom: 20rpx;
}

.container[data-theme="dark"] .switch-group {
  border-bottom-color: #444444;
}

.switch-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.container[data-theme="dark"] .switch-label {
  color: #ffffff;
}

.switch-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 15rpx;
}

.container[data-theme="dark"] .switch-desc {
  color: #aaaaaa;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 40rpx 0;
}

.result-section {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #eeeeee;
}

.container[data-theme="dark"] .result-section {
  border-top-color: #444444;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 25rpx;
  text-align: center;
}

.container[data-theme="dark"] .result-title {
  color: #ffffff;
}

.result-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.result-item {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 25rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
}

.container[data-theme="dark"] .result-item {
  background-color: #333333;
  border-color: #555555;
}

.result-item.major {
  grid-column: span 2;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.result-label {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.container[data-theme="dark"] .result-label {
  color: #cccccc;
}

.result-item.major .result-label {
  color: white;
}

.label-icon {
  font-size: 24rpx;
}

.result-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.container[data-theme="dark"] .result-value {
  color: #ffffff;
}

.result-value.major {
  font-size: 40rpx;
  color: white;
}

.faf-result-section {
  margin-top: 30rpx;
  padding-top: 25rpx;
  border-top: 1rpx solid #eeeeee;
}

.container[data-theme="dark"] .faf-result-section {
  border-top-color: #444444;
}

.calculation-notes {
  margin-top: 30rpx;
  padding: 25rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 5rpx solid #667eea;
}

.container[data-theme="dark"] .calculation-notes {
  background-color: #333333;
}

.notes-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.container[data-theme="dark"] .notes-title {
  color: #ffffff;
}

.notes-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.note-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.container[data-theme="dark"] .note-text {
  color: #cccccc;
}