/* 速度换算页面样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 50%, #2563eb 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
}

/* 动态背景效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(37, 99, 235, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(29, 78, 216, 0.2) 0%, transparent 50%);
  animation: backgroundFloat 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes backgroundFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(1deg); }
  66% { transform: translateY(10px) rotate(-1deg); }
}

/* 计算模块样式 */
.calculation-module {
  margin: 40rpx 16rpx 20rpx 16rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(59, 130, 246, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 10;
}

/* 输入区域样式 */
.input-section {
  padding: 32rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.unit-label {
  font-size: 24rpx;
  color: #64748b;
  margin-right: 12rpx;
}

/* 按钮区域样式 */
.action-buttons {
  padding: 0 32rpx 32rpx 32rpx;
  display: flex;
  gap: 16rpx;
}

.action-buttons .van-button {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* 结果区域样式 */
.result-section {
  margin-top: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-top: 1rpx solid #e2e8f0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  text-align: center;
}

.result-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.result-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.1);
  text-align: center;
  transition: all 0.3s ease;
}

.result-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
}

.result-label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.result-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  word-break: break-word;
}

/* 广告容器样式 */
.ad-banner-container {
  margin: 20rpx 16rpx 40rpx 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  z-index: 10;
}
