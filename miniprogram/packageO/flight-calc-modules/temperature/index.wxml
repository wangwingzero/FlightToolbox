<view class="container">
  <view class="calculation-module">
    <view class="input-section">
      <view class="input-group">
        <van-field
          value="{{ temperatureValues.celsius }}"
          label="🌡️ 摄氏度"
          placeholder="请输入数值"
          type="text"
          confirm-type="done"
          bind:input="onNumberInput"
          bind:change="onTemperatureInput"
          data-unit="celsius"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">°C</view>
        </van-field>
      </view>

      <view class="input-group">
        <van-field
          value="{{ temperatureValues.fahrenheit }}"
          label="🌡️ 华氏度"
          placeholder="请输入数值"
          type="text"
          confirm-type="done"
          bind:input="onNumberInput"
          bind:change="onTemperatureInput"
          data-unit="fahrenheit"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">°F</view>
        </van-field>
      </view>

      <view class="input-group">
        <van-field
          value="{{ temperatureValues.kelvin }}"
          label="🌡️ 开尔文"
          placeholder="请输入数值"
          type="text"
          confirm-type="done"
          bind:input="onNumberInput"
          bind:change="onTemperatureInput"
          data-unit="kelvin"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">K</view>
        </van-field>
      </view>
    </view>

    <view class="action-buttons">
      <van-button type="default" bind:click="clearTemperature" block>
        🗑️ 清空数据
      </van-button>
    </view>
  </view>

  <!-- 广告位 -->
  <view wx:if="{{ !isAdFree }}" class="ad-banner-container">
    <ad unit-id="adunit-2f5afef0d27dc863" ad-type="banner" ad-intervals="30"></ad>
  </view>
</view>