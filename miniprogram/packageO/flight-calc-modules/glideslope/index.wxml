<view class="container">
  <view class="calculation-module">
    <view class="input-section">
      <view class="input-group">
        <view class="input-label">📐 下滑角</view>
        <van-field
          value="{{ glideslope.angle }}"
          placeholder="请输入下滑角"
          type="digit"
          bind:change="onAngleChange"
        >
          <view slot="right-icon" class="unit-label">度</view>
        </van-field>
      </view>

      <view class="input-group">
        <view class="input-label">📍 距离跑道头</view>
        <van-field
          value="{{ glideslope.distance }}"
          placeholder="请输入距离"
          type="digit"
          bind:change="onDistanceChange"
        >
          <view slot="right-icon" class="unit-label">海里</view>
        </van-field>
      </view>

      <view class="input-group">
        <view class="input-label">🏔️ 机场标高</view>
        <van-field
          value="{{ glideslope.elevation }}"
          placeholder="请输入机场标高"
          type="digit"
          bind:change="onElevationChange"
        >
          <view slot="right-icon" class="unit-label">英尺</view>
        </van-field>
      </view>

      <view class="input-group">
        <view class="input-label">✈️ 飞越跑道入口高度</view>
        <van-field
          value="{{ glideslope.thresholdHeight }}"
          placeholder="请输入入口高度"
          type="digit"
          bind:change="onThresholdHeightChange"
        >
          <view slot="right-icon" class="unit-label">英尺</view>
        </van-field>
      </view>
    </view>

    <view class="action-buttons">
      <van-button type="primary" bind:click="calculateGlideslope" block>
        🚀 计算五边高度
      </van-button>
      <van-button type="default" bind:click="clearGlideslope" block>
        🗑️ 清空数据
      </van-button>
    </view>

    <view wx:if="{{ glideslope.aglAltitude }}" class="result-section" id="result-section">
      <view class="result-title">📊 计算结果</view>

      <!-- PAPI灯显示 -->
      <view wx:if="{{ glideslope.papiLights }}" class="papi-section">
        <view class="papi-title">🔴⚪ PAPI灯指示</view>
        <view class="papi-lights-container">
          <view class="papi-light {{ index < glideslope.papiLights.red ? 'red' : 'white' }}"
                wx:for="{{ [0,1,2,3] }}"
                wx:key="index">
          </view>
        </view>
        <view class="papi-description {{ glideslope.papiLights.status }}">
          {{ glideslope.papiLights.description }}
        </view>
      </view>

      <view class="result-grid">
        <view class="result-item">
          <view class="result-label">AGL高度</view>
          <view class="result-value">{{ glideslope.aglAltitude }} 英尺</view>
          <view class="result-description">相对于地面的高度</view>
        </view>
        <view class="result-item">
          <view class="result-label">QNH高度</view>
          <view class="result-value">{{ glideslope.qnhAltitude }} 英尺</view>
          <view class="result-description">修正海平面气压高度</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 横幅广告 -->
  <view wx:if="{{ !isAdFree }}" class="ad-banner-container">
    <ad unit-id="adunit-d6c8a55bd3cb4fd1" ad-type="banner" ad-intervals="30"></ad>
  </view>

</view>