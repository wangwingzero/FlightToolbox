<view class="container">
  <view class="calculation-module">
    <view class="input-section">
      <view class="input-group">
        <van-field
          value="{{ weightValues.gram }}"
          label="📏 克"
          placeholder="请输入数值"
          type="digit"
          bind:change="onWeightInput"
          data-unit="gram"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">g</view>
        </van-field>
      </view>

      <view class="input-group">
        <van-field
          value="{{ weightValues.kilogram }}"
          label="⚖️ 千克"
          placeholder="请输入数值"
          type="digit"
          bind:change="onWeightInput"
          data-unit="kilogram"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">kg</view>
        </van-field>
      </view>

      <view class="input-group">
        <van-field
          value="{{ weightValues.pound }}"
          label="💪 磅"
          placeholder="请输入数值"
          type="digit"
          bind:change="onWeightInput"
          data-unit="pound"
          input-align="right"
        >
          <view slot="right-icon" class="unit-label">lb</view>
        </van-field>
      </view>
    </view>

    <view class="action-buttons">
      <van-button type="default" bind:click="clearWeight" block>
        🗑️ 清空数据
      </van-button>
    </view>
  </view>

  <!-- 横幅广告 -->
  <view wx:if="{{ !isAdFree }}" class="ad-banner-container">
    <ad unit-id="adunit-3a1bf3800fa937a2" ad-type="banner" ad-intervals="30"></ad>
  </view>

</view>