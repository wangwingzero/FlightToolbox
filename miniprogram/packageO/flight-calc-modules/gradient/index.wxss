/* 梯度计算页面 - 现代化精美设计 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow-x: hidden;
  padding: 0;
  margin: 0;
}

/* 动画背景 */
.animated-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

/* 飞机路径动画 */
.plane-path {
  position: absolute;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.4) 50%, transparent 100%);
  top: 25%;
  animation: planeFly 15s linear infinite;
  transform-origin: left center;
}

@keyframes planeFly {
  0% { transform: translateX(-100%) rotate(0deg); }
  25% { transform: translateX(0%) rotate(2deg); }
  50% { transform: translateX(50%) rotate(-1deg); }
  75% { transform: translateX(75%) rotate(1deg); }
  100% { transform: translateX(100%) rotate(0deg); }
}

/* 云朵动画 */
.cloud {
  position: absolute;
  width: 120rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  animation: cloudFloat 20s ease-in-out infinite;
}

.cloud::before,
.cloud::after {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.cloud::before {
  width: 50rpx;
  height: 50rpx;
  top: -25rpx;
  left: 10rpx;
}

.cloud::after {
  width: 60rpx;
  height: 40rpx;
  top: -15rpx;
  right: 15rpx;
}

.cloud1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.cloud2 {
  top: 60%;
  right: 20%;
  animation-delay: -5s;
}

.cloud3 {
  top: 40%;
  left: 70%;
  animation-delay: -10s;
}

@keyframes cloudFloat {
  0%, 100% { transform: translateX(0px) translateY(0px); }
  33% { transform: translateX(-20rpx) translateY(-10rpx); }
  66% { transform: translateX(15rpx) translateY(5rpx); }
}

/* 英雄区域 */
.hero-section {
  position: relative;
  z-index: 10;
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
}

.hero-content {
  animation: heroFadeIn 1s ease-out;
}

@keyframes heroFadeIn {
  0% { opacity: 0; transform: translateY(30rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

.hero-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: iconBounce 2s ease-in-out infinite;
}

@keyframes iconBounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}

.hero-title {
  font-size: 52rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 32rpx;
  font-weight: 500;
}

.hero-features {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-top: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  font-size: 24rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.feature-item text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 主要内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 24rpx 40rpx;
  animation: contentSlideUp 1s ease-out 0.3s both;
}

@keyframes contentSlideUp {
  0% { opacity: 0; transform: translateY(50rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

/* 卡片通用样式 */
.presets-card,
.input-card,
.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.presets-card:hover,
.input-card:hover,
.result-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.3);
}

.card-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

/* 预设卡片 */
.preset-grid {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
}

.preset-item {
  flex: 1;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.preset-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
  pointer-events: none;
}

.preset-item:active {
  transform: scale(0.95);
}

.preset-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.preset-title {
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.preset-value {
  font-size: 28rpx;
  font-weight: 800;
}

/* 输入卡片 */
.input-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 24rpx;
}

.input-item {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-item:focus-within {
  border-color: #4facfe;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(79, 172, 254, 0.1);
}

.input-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.gradient-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.speed-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.vertical-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.angle-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.input-info {
  flex: 1;
}

.input-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 2rpx;
}

.input-unit {
  font-size: 20rpx;
  color: #718096;
  font-weight: 500;
}

.custom-input {
  background: transparent;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a202c;
  text-align: center;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.primary-action,
.secondary-action {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 600;
  font-size: 28rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.primary-action {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.4);
}

.primary-action:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.3);
}

.secondary-action {
  background: rgba(255, 255, 255, 0.9);
  color: #4a5568;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.secondary-action:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 结果卡片 */
.result-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
  padding: 24rpx;
}

.result-item {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.result-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
}

.result-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.result-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.gradient-result {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.vertical-result {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.angle-result {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.result-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
}

.result-badge {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.result-value {
  font-size: 32rpx;
  font-weight: 800;
  color: #1a202c;
  text-align: center;
}

















