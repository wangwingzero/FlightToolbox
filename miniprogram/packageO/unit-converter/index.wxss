/* 常用换算页面 - 全新卡片式设计 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 50%, #a855f7 100%);
  position: relative;
  overflow-x: hidden;
}

/* 动态背景效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(139, 92, 246, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(168, 85, 247, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(124, 58, 237, 0.2) 0%, transparent 50%);
  animation: backgroundFloat 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes backgroundFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(1deg); }
  66% { transform: translateY(10px) rotate(-1deg); }
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 32rpx 30rpx 32rpx;
  position: relative;
  z-index: 10;
}

.header-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    0 0 20rpx rgba(255, 255, 255, 0.5);
  margin-bottom: 8rpx;
  animation: titleGlow 3s ease-in-out infinite alternate;
}

.header-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

@keyframes titleGlow {
  0% {
    text-shadow: 
      0 2rpx 4rpx rgba(0, 0, 0, 0.3),
      0 0 20rpx rgba(255, 255, 255, 0.5);
  }
  100% {
    text-shadow: 
      0 2rpx 4rpx rgba(0, 0, 0, 0.3),
      0 0 30rpx rgba(255, 255, 255, 0.8),
      0 0 40rpx rgba(139, 92, 246, 0.3);
  }
}

/* 广告容器 */
.calculator-ad-container {
  margin: 20rpx 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.1);
}

/* 功能模块网格 */
.modules-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  position: relative;
  z-index: 10;
}

/* 功能模块卡片 */
.module-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.module-card:nth-child(1) { animation-delay: 0.1s; }
.module-card:nth-child(2) { animation-delay: 0.2s; }
.module-card:nth-child(3) { animation-delay: 0.3s; }
.module-card:nth-child(4) { animation-delay: 0.4s; }
.module-card:nth-child(5) { animation-delay: 0.5s; }
.module-card:nth-child(6) { animation-delay: 0.6s; }

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.module-card:hover {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: 
    0 16rpx 48rpx rgba(139, 92, 246, 0.2),
    0 0 0 2rpx rgba(139, 92, 246, 0.1);
}

.module-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.module-card:active::before {
  left: 100%;
}

.module-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.module-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.module-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}

/* 计算模块容器 */
.calculation-module {
  position: relative;
  z-index: 10;
  animation: moduleSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes moduleSlideIn {
  0% {
    opacity: 0;
    transform: translateX(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 模块头部 */
.module-header {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  margin: 0 16rpx 20rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.1);
}

.back-btn {
  font-size: 32rpx;
  color: #8b5cf6;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(139, 92, 246, 0.1);
  transition: all 0.3s;
}

.back-btn:active {
  background: rgba(139, 92, 246, 0.2);
  transform: scale(0.95);
}

.module-header .module-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin: 0;
}

/* 输入区域 */
.input-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.1);
}

.input-group {
  margin-bottom: 24rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
  padding-left: 8rpx;
}

/* 输入框美化 */
.van-field {
  background: rgba(248, 250, 252, 0.8) !important;
  border-radius: 16rpx !important;
  border: 2rpx solid rgba(139, 92, 246, 0.1) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.van-field:hover {
  border-color: rgba(139, 92, 246, 0.3) !important;
  transform: translateY(-2rpx) !important;
}

.van-field--focus {
  border-color: #8b5cf6 !important;
  box-shadow: 0 0 0 4rpx rgba(139, 92, 246, 0.1) !important;
  transform: translateY(-2rpx) !important;
}

.van-field__input {
  font-size: 32rpx !important;
  font-weight: 500 !important;
  color: #1f2937 !important;
}

.van-field__label {
  font-size: 30rpx !important;
  font-weight: 600 !important;
  color: #374151 !important;
}

/* 单位标签 */
.unit-label {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%) !important;
  color: #ffffff !important;
  padding: 8rpx 16rpx !important;
  border-radius: 12rpx !important;
  font-size: 24rpx !important;
  font-weight: 600 !important;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.3) !important;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 16rpx 20rpx 16rpx;
  display: flex;
  gap: 16rpx;
}

.van-button {
  flex: 1 !important;
  border-radius: 16rpx !important;
  font-weight: 700 !important;
  font-size: 32rpx !important;
  padding: 24rpx !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative !important;
  overflow: hidden !important;
}

.van-button[type="primary"] {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3) !important;
  color: #ffffff !important;
}

.van-button[type="primary"]:active {
  transform: translateY(2rpx) scale(0.98) !important;
}

.van-button[type="default"] {
  background: rgba(255, 255, 255, 0.9) !important;
  border: 2rpx solid rgba(139, 92, 246, 0.2) !important;
  color: #8b5cf6 !important;
}

.van-button[type="default"]:active {
  background: rgba(139, 92, 246, 0.1) !important;
  transform: translateY(2rpx) scale(0.98) !important;
}

/* 结果区域 */
.result-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.1);
  border-left: 6rpx solid #10b981;
  animation: resultSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes resultSlideIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #065f46;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.result-item {
  background: rgba(16, 185, 129, 0.05);
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  border: 1rpx solid rgba(16, 185, 129, 0.1);
}

.result-label {
  font-size: 24rpx;
  color: #064e3b;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.result-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #059669;
}

/* 深色模式适配 */
.container[data-theme="dark"] {
  background: linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #3730a3 100%);
}

.container[data-theme="dark"] .module-card {
  background: rgba(30, 41, 59, 0.9);
  color: #f1f5f9;
}

.container[data-theme="dark"] .module-title {
  color: #f1f5f9;
}

.container[data-theme="dark"] .module-desc {
  color: #94a3b8;
}

.container[data-theme="dark"] .module-header {
  background: rgba(30, 41, 59, 0.9);
}

.container[data-theme="dark"] .module-header .module-title {
  color: #f1f5f9;
}

.container[data-theme="dark"] .input-section {
  background: rgba(30, 41, 59, 0.9);
}

.container[data-theme="dark"] .input-label {
  color: #e2e8f0;
}

.container[data-theme="dark"] .van-field {
  background: rgba(51, 65, 85, 0.8) !important;
  border-color: rgba(71, 85, 105, 0.3) !important;
}

.container[data-theme="dark"] .van-field__input {
  color: #f1f5f9 !important;
}

.container[data-theme="dark"] .van-field__label {
  color: #e2e8f0 !important;
}

.container[data-theme="dark"] .result-section {
  background: rgba(30, 41, 59, 0.9);
  border-left-color: #10b981;
}

.container[data-theme="dark"] .result-title {
  color: #34d399;
}

.container[data-theme="dark"] .result-item {
  background: rgba(16, 185, 129, 0.1);
  border-color: rgba(16, 185, 129, 0.2);
}

.container[data-theme="dark"] .result-label {
  color: #a7f3d0;
}

.container[data-theme="dark"] .result-value {
  color: #10b981;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .modules-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .module-card {
    padding: 24rpx 20rpx;
  }
  
  .module-icon {
    font-size: 48rpx;
  }
  
  .module-title {
    font-size: 28rpx;
  }
  
  .module-desc {
    font-size: 22rpx;
  }
  
  .result-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
}

/* 强制覆盖所有按钮样式 - 保持原有功能 */
.van-button,
.van-button[type="primary"],
.van-button[type="default"],
.van-button--primary,
.van-button--default {
  width: 100% !important;
  height: 80rpx !important;
  border-radius: 16rpx !important;
  font-size: 32rpx !important;
  font-weight: 700 !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative !important;
  overflow: hidden !important;
}

/* 保持原有的按钮点击效果 */
.van-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.van-button:active::before {
  left: 100%;
}