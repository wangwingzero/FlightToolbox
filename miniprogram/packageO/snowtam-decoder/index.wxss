.snowtam-decoder-ad {
  background: linear-gradient(135deg, #e8f4fd 0%, #f0f9ff 50%, #fafbfc 100%);
  border: 2rpx solid rgba(25, 137, 250, 0.2);
  border-radius: 16rpx;
  margin: 24rpx 16rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.12);
  position: relative;
  overflow: hidden;
  animation: slideInUp 0.7s ease-out;
}

.snowtam-decoder-ad::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #1989fa 0%, #0066cc 50%, #1989fa 100%);
  background-size: 200% 100%;
  animation: shimmer 2s ease-in-out infinite;
}

.snowtam-decoder-ad .ad-label {
  position: absolute;
  top: 12rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #1989fa 0%, #0066cc 100%);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.3);
  z-index: 10;
}

/* æ·±è‰²æ¨¡å¼é€‚é… */
@media (prefers-color-scheme: dark) {
  .snowtam-decoder-ad {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    border-color: rgba(25, 137, 250, 0.4);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  }
  
  .snowtam-decoder-ad .ad-label {
    background: linear-gradient(135deg, #1989fa 0%, #4fc3f7 100%);
    color: #000;
  }
}

/* å“åº”å¼è®¾è®¡ */
@media screen and (max-width: 400px) {
  .snowtam-decoder-ad {
    margin: 20rpx 12rpx;
    padding: 16rpx;
    border-radius: 12rpx;
  }
  
  .snowtam-decoder-ad .ad-label {
    font-size: 18rpx;
    padding: 3rpx 10rpx;
  }
}

/* åŠ¨ç”»æ•ˆæœ */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* å¹¿å‘Šå®¹å™¨æ‚¬åœæ•ˆæœ */
.snowtam-decoder-ad:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

 