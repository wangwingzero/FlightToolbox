/* 积分头部组件样式 */
.points-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24rpx 32rpx 16rpx 32rpx;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
}

/* 积分显示和操作区域 */
.points-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

/* 积分显示 */
.points-display {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.points-icon {
  font-size: 32rpx !important;
  color: #ffd700;
  margin-right: 12rpx;
}

.points-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-right: 8rpx;
}

.arrow-icon {
  font-size: 24rpx !important;
  color: rgba(255, 255, 255, 0.8);
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.signin-button, .ad-button {
  position: relative;
  border-radius: 20rpx !important;
  font-size: 24rpx !important;
  backdrop-filter: blur(10rpx);
}

.signin-button {
  background: rgba(255, 255, 255, 0.2) !important;
  border: 1px solid rgba(255, 255, 255, 0.3) !important;
  color: white !important;
}

.signin-button[disabled] {
  background: rgba(255, 255, 255, 0.1) !important;
  color: rgba(255, 255, 255, 0.6) !important;
}

.ad-button {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%) !important;
  border: none !important;
  color: white !important;
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx !important;
}

.ad-text {
  margin-left: 8rpx;
  margin-right: 8rpx;
}

.reward-hint {
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  margin-left: 8rpx;
}

/* 连续签到进度条 */
.streak-progress {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 16rpx;
  backdrop-filter: blur(10rpx);
}

.streak-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.streak-text {
  font-size: 28rpx;
  font-weight: 500;
  color: white;
}

.next-milestone {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 积分详情弹窗 */
.points-detail-popup {
  padding: 32rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-icon {
  font-size: 32rpx !important;
  color: #999;
  padding: 8rpx;
}

/* 积分概览 */
.points-overview {
  display: flex;
  justify-content: space-around;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.overview-item {
  text-align: center;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.overview-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.overview-value.primary {
  color: #1989fa;
}

.overview-value.warning {
  color: #ff9a56;
}

/* 积分规则 */
.points-rules {
  margin-bottom: 32rpx;
}

.rules-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.rule-group {
  margin-bottom: 24rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1989fa;
  margin-bottom: 16rpx;
  display: block;
}

.rule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-desc {
  font-size: 28rpx;
  color: #333;
}

.rule-cost {
  font-size: 24rpx;
  color: #f56c6c;
  font-weight: 500;
}

.rule-cost.free {
  color: #67c23a;
}

.rule-reward {
  font-size: 24rpx;
  color: #67c23a;
  font-weight: 500;
}

.rule-item.free .rule-desc {
  color: #67c23a;
}

.rule-item.reward .rule-desc {
  color: #333;
}

/* 交易历史 */
.transaction-history {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.history-list {
  flex: 1;
  height: 300rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-main {
  flex: 1;
}

.transaction-desc {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 28rpx;
  font-weight: 600;
  min-width: 100rpx;
  text-align: right;
}

.transaction-amount.consume {
  color: #f56c6c;
}

.transaction-amount.reward {
  color: #67c23a;
}

.empty-history {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

/* 积分头部组件样式 */
.points-header-component {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  color: #fff;
  margin: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.points-display {
  display: flex;
  align-items: center;
  flex: 1;
}

.points-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.points-info {
  display: flex;
  flex-direction: column;
}

.points-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
}

.points-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 2rpx;
}

.header-actions {
  flex-shrink: 0;
}

.signin-btn {
  background: rgba(255, 255, 255, 0.2) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.3) !important;
  color: #fff !important;
  font-weight: 600 !important;
  border-radius: 20rpx !important;
  padding: 0 20rpx !important;
  height: 56rpx !important;
  line-height: 52rpx !important;
  font-size: 22rpx !important;
}

.signed-status {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
} 