/* TabBar蒙版引导组件样式 */

/* 容器 */
.tabbar-guide-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  pointer-events: auto;
}

/* 半透明蒙版 */
.guide-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  animation: maskFadeIn 0.3s ease-out;
}

@keyframes maskFadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

/* TabBar高亮区域 */
.tabbar-highlight {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px; /* 使用px单位，TabBar固定高度约50px */
  height: calc(50px + constant(safe-area-inset-bottom)); /* 加上底部安全区域 */
  height: calc(50px + env(safe-area-inset-bottom)); /* 加上底部安全区域 */
  background: #ffffff;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.3);
  z-index: 100;
  animation: highlightPulse 2s ease-in-out infinite;
}

@keyframes highlightPulse {
  0%, 100% {
    box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.3);
  }
  50% {
    box-shadow:
      0 -8rpx 40rpx rgba(25, 137, 250, 0.5),
      0 -4rpx 20rpx rgba(25, 137, 250, 0.3);
  }
}

/* 聚光灯效果 */
.spotlight {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200%;
  height: 300rpx;
  background: radial-gradient(
    ellipse at center,
    rgba(25, 137, 250, 0.2) 0%,
    transparent 70%
  );
  pointer-events: none;
  animation: spotlightGlow 2s ease-in-out infinite;
}

@keyframes spotlightGlow {
  0%, 100% {
    opacity: 0.5;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 0.8;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* 引导文本容器 */
.guide-text-container {
  position: absolute;
  left: 50%;
  bottom: 240rpx;
  transform: translateX(-50%);
  text-align: center;
  z-index: 101;
  animation: textSlideUp 0.5s ease-out 0.3s backwards;
}

@keyframes textSlideUp {
  0% {
    opacity: 0;
    transform: translateX(-50%) translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

.guide-text {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  box-shadow:
    0 12rpx 40rpx rgba(25, 137, 250, 0.4),
    0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  max-width: 600rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.guide-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.5;
  font-weight: 500;
}

.guide-arrow {
  font-size: 48rpx;
  margin-top: 16rpx;
  animation: arrowBounce 1s ease-in-out infinite;
}

@keyframes arrowBounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

/* 手指指示动画 */
.finger-pointer {
  position: absolute;
  z-index: 102;
  transform: translateX(-50%); /* 居中对齐 */
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  animation: fingerFloat 1.5s ease-in-out infinite;
}

@keyframes fingerFloat {
  0%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  50% {
    transform: translateX(-50%) translateY(-16rpx);
  }
}

.finger-icon {
  font-size: 64rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.3));
  animation: fingerTap 0.6s ease-in-out infinite;
}

@keyframes fingerTap {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.9);
  }
}

.finger-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  animation: rippleExpand 1.5s ease-out infinite;
}

@keyframes rippleExpand {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(2);
    opacity: 0;
  }
}

/* Tab标签说明 */
.tab-label {
  position: absolute;
  z-index: 103;
  transform: translateX(-50%); /* 居中对齐 */
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  animation: labelFadeIn 0.5s ease-out;
}

@keyframes labelFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.label-text {
  background: rgba(0, 0, 0, 0.85);
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  white-space: nowrap;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
}

/* 跳过按钮 */
.skip-button {
  position: absolute;
  top: 80rpx;
  right: 40rpx;
  z-index: 104;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
  animation: skipButtonSlideIn 0.5s ease-out 0.5s backwards;
}

@keyframes skipButtonSlideIn {
  0% {
    opacity: 0;
    transform: translateX(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.skip-button:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.skip-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}
