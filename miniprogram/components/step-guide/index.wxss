/* 分步引导组件样式 - 参考RODEX设计模式 */

/* 主容器 */
.step-guide-container {
  width: 100%;
}

/* 步骤指示器增强动画 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 20rpx;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 25rpx;
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  position: relative;
  animation: indicatorFadeIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes indicatorFadeIn {
  0% {
    opacity: 0;
    transform: translateY(-20rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.step-indicator::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 25rpx;
  padding: 2rpx;
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
  z-index: -1;
  animation: borderGlow 3s ease-in-out infinite;
}

@keyframes borderGlow {
  0%, 100% {
    opacity: 0.5;
  }
  50% {
    opacity: 1;
  }
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  animation: stepItemFadeIn 0.6s ease-out;
}

@keyframes stepItemFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.step-item.clickable {
  cursor: pointer;
}

.step-item.clickable:hover {
  transform: scale(1.05) translateY(-5rpx);
}

.step-item.clickable:active {
  transform: scale(0.95) translateY(2rpx);
}

/* 步骤数字增强动画 */
.step-number {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e5e5e5 0%, #d3d3d3 100%);
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.step-number::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.4s ease;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  color: white;
  transform: scale(1.15);
  box-shadow: 0 8rpx 25rpx rgba(255, 149, 0, 0.4);
  animation: activeStepPulse 2s ease-in-out infinite;
}

@keyframes activeStepPulse {
  0%, 100% {
    box-shadow: 0 8rpx 25rpx rgba(255, 149, 0, 0.4);
  }
  50% {
    box-shadow: 0 12rpx 35rpx rgba(255, 149, 0, 0.6), 0 0 0 6rpx rgba(255, 149, 0, 0.1);
  }
}

.step-item.active .step-number::before {
  width: 80rpx;
  height: 80rpx;
}

.step-item.completed .step-number {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(81, 207, 102, 0.3);
  animation: completedBounce 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes completedBounce {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3) rotate(10deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
  }
}

.step-item.completed .step-number::after {
  content: '✓';
  position: absolute;
  font-size: 24rpx;
  animation: checkMarkSlide 0.6s ease-out 0.2s;
  opacity: 0;
  animation-fill-mode: forwards;
}

@keyframes checkMarkSlide {
  0% {
    opacity: 0;
    transform: translateY(10rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 步骤标签动画 */
.step-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  font-weight: 500;
  transition: all 0.3s ease;
  opacity: 0;
  animation: labelFadeIn 0.6s ease-out 0.3s forwards;
}

@keyframes labelFadeIn {
  0% {
    opacity: 0;
    transform: translateY(10rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.step-item.active .step-label {
  color: #ff9500;
  font-weight: bold;
  font-size: 26rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 149, 0, 0.2);
}

.step-item.completed .step-label {
  color: #51cf66;
  font-weight: 600;
  font-size: 25rpx;
}

/* 连接线增强动画 */
.step-line {
  flex: 1;
  height: 8rpx;
  background: linear-gradient(135deg, #e5e5e5 0%, #d3d3d3 100%);
  margin: 0 25rpx;
  margin-top: -35rpx;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 4rpx;
  position: relative;
  z-index: 0;
  overflow: hidden;
}

.step-line.completed {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  box-shadow: 0 2rpx 8rpx rgba(81, 207, 102, 0.3);
  height: 10rpx;
  margin-top: -36rpx;
}

.step-line.completed::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: 0;
  right: 0;
  height: 14rpx;
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  border-radius: 7rpx;
  animation: lineGrow 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes lineGrow {
  0% {
    transform: scaleX(0);
    opacity: 0;
  }
  100% {
    transform: scaleX(1);
    opacity: 1;
  }
}

/* 实时预览区域增强动画 */
.preview-section {
  margin: 20rpx;
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  border-radius: 25rpx;
  padding: 35rpx;
  box-shadow: 0 8rpx 35rpx rgba(255, 149, 0, 0.25);
  position: relative;
  overflow: hidden;
  animation: previewSlideIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes previewSlideIn {
  0% {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.preview-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: shimmer 4s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

.preview-header {
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
  animation: headerFloatIn 0.8s ease-out 0.3s;
  opacity: 0;
  animation-fill-mode: forwards;
}

@keyframes headerFloatIn {
  0% {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.preview-title {
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  animation: titleGlow 3s ease-in-out infinite;
}

@keyframes titleGlow {
  0%, 100% {
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  }
  50% {
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2), 0 0 10rpx rgba(255, 255, 255, 0.3);
  }
}

.preview-content {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 18rpx;
  padding: 30rpx;
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: contentSlideUp 0.6s ease-out 0.5s;
  opacity: 0;
  animation-fill-mode: forwards;
}

@keyframes contentSlideUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 步骤导航按钮增强动画 */
.nav-button {
  flex: 1;
  height: 80rpx;
  border-radius: 25rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: buttonSlideIn 0.6s ease-out;
}

@keyframes buttonSlideIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.prev-button {
  background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(108, 117, 125, 0.25);
}

.prev-button:not([disabled]):hover {
  transform: translateY(-2rpx) scale(1.02);
  box-shadow: 0 8rpx 25rpx rgba(108, 117, 125, 0.35);
}

.prev-button:not([disabled]):active {
  transform: translateY(0) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(108, 117, 125, 0.4);
}

.next-button {
  background: linear-gradient(135deg, #ff9500 0%, #ff6b00 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.25);
  animation: nextButtonGlow 2s ease-in-out infinite;
}

@keyframes nextButtonGlow {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.25);
  }
  50% {
    box-shadow: 0 6rpx 20rpx rgba(255, 149, 0, 0.4);
  }
}

.next-button.final-step {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.25);
  animation: finalStepPulse 1.5s ease-in-out infinite;
}

@keyframes finalStepPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.25);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 6rpx 20rpx rgba(40, 167, 69, 0.4);
  }
}

.next-button:not([disabled]):hover {
  transform: translateY(-2rpx) scale(1.02);
  box-shadow: 0 8rpx 25rpx rgba(255, 149, 0, 0.35);
}

.next-button.final-step:not([disabled]):hover {
  box-shadow: 0 8rpx 25rpx rgba(40, 167, 69, 0.35);
}

.next-button:not([disabled]):active {
  transform: translateY(0) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.4);
}

.next-button.final-step:not([disabled]):active {
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.4);
}

.nav-button[disabled] {
  opacity: 0.4;
  transform: none !important;
  box-shadow: none !important;
  cursor: not-allowed;
  filter: grayscale(0.5);
}

/* 按钮光泽效果增强 */
.nav-button::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s ease;
  border-radius: inherit;
}

.nav-button:not([disabled]):hover::after {
  left: 100%;
}

