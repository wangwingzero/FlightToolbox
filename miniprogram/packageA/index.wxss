/* 通信翻译页面样式 */

.communication-page {
  padding: 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 搜索框容器 */
.search-container {
  padding: 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #ebedf0;
}

.search-action {
  color: #969799;
  font-size: 24rpx;
}

/* 标签栏样式 */
.tabs-container {
  background-color: white;
  border-bottom: 1rpx solid #ebedf0;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-wrapper {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 15rpx;
  margin: 0 10rpx;
  min-width: 120rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  background-color: #667eea;
  color: white;
}

.tab-item:not(.active) {
  background-color: #f7f8fa;
  color: #646566;
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-title {
  font-size: 24rpx;
  font-weight: 500;
}

.tab-count {
  font-size: 20rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

/* 内容容器 */
.content-container {
  flex: 1;
  padding: 20rpx;
}

/* 数据列表 */
.data-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.data-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s ease;
}

.data-item:active {
  transform: scale(0.98);
  background-color: #f8f9fa;
}

/* 分类标签 */
.category-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: white;
}

.category-tag.icao900 {
  background-color: #1989fa;
}

.category-tag.emergency {
  background-color: #ee0a24;
}

/* 章节信息 */
.chapter-info {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 8rpx;
  font-weight: 500;
}

/* 英文文本 */
.english-text {
  font-size: 30rpx;
  color: #323233;
  line-height: 1.6;
  margin-bottom: 12rpx;
  font-weight: 500;
}

/* 中文文本 */
.chinese-text {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

/* 类型指示器 */
.type-indicator {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.type-sentence, .type-term {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: #f2f3f5;
  color: #646566;
}

.type-sentence {
  background-color: #e1f5fe;
  color: #0277bd;
}

.type-term {
  background-color: #fff3e0;
  color: #ef6c00;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #969799;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #c8c9cc;
}

/* 详情弹窗 */
.detail-popup {
  padding: 0;
  height: 100%;
  background-color: #f8f9fa;
}

.detail-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  color: white;
  text-align: center;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.detail-category {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.detail-content {
  padding: 30rpx;
  height: calc(100% - 120rpx);
  overflow-y: auto;
}

.detail-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f2f3f5;
}

.section-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #646566;
}

.section-content.english {
  font-size: 32rpx;
  color: #1989fa;
  font-weight: 500;
}

.section-content.chinese {
  font-size: 30rpx;
  color: #323233;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .header {
    padding: 30rpx 20rpx 20rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
  
  .data-item {
    padding: 20rpx;
  }
  
  .english-text {
    font-size: 28rpx;
  }
  
  .chinese-text {
    font-size: 26rpx;
  }
}

/* 主题适配 */
.dark .communication-page {
  background-color: #1a1a1a;
}

.dark .header {
  background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
}

.dark .search-container,
.dark .tabs-container {
  background-color: #2d3748;
  border-color: #4a5568;
}

.dark .data-item,
.dark .detail-section {
  background-color: #2d3748;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
}

.dark .english-text {
  color: #e2e8f0;
}

.dark .chinese-text {
  color: #a0aec0;
}

.dark .empty-text {
  color: #718096;
}

.dark .section-title {
  color: #e2e8f0;
  border-color: #4a5568;
}

.dark .section-content {
  color: #a0aec0;
}