/* 通信翻译页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding-bottom: 20rpx;
}

/* 现代标签页样式 */
.modern-tabs-container {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  padding: 20rpx 0;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.tabs-scroll {
  width: 100%;
}

.tabs-wrapper {
  display: flex;
  white-space: nowrap;
  padding: 0 20rpx;
}

.modern-tab {
  position: relative;
  margin: 0 12rpx;
  padding: 0 24rpx;
  min-width: 130rpx;
  border-radius: 30rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modern-tab.active {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15px);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  transform: translateY(-2rpx);
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 22rpx 0;
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  filter: grayscale(1);
  transition: filter 0.3s ease;
}

.modern-tab.active .tab-icon {
  filter: grayscale(0);
}

.tab-title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.75);
  transition: color 0.3s ease;
}

.modern-tab.active .tab-title {
  color: white;
  font-weight: 600;
}

.tab-count {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.65);
  margin-top: 6rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 4rpx 14rpx;
  border-radius: 12rpx;
  min-width: 36rpx;
  text-align: center;
}

.modern-tab.active .tab-count {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.9);
}

/* 搜索框样式 */
.search-section {
  margin: 0 20rpx 20rpx;
  padding: 0;
}

.communication-search {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(15px);
  border-radius: 20rpx;
  padding: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 通信内容列表样式 */
.communication-section {
  margin: 0 20rpx;
}

.modern-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.modern-communication-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.modern-communication-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.primary-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.type-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.type-indicator.emergency {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
}

.type-indicator.icao900 {
  background: linear-gradient(135deg, #4dabf7, #74c0fc);
  color: white;
}

.type-icon {
  font-size: 28rpx;
}

/* 头部右侧标签区域 */
.header-tags {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.type-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.type-tag.icao {
  background: linear-gradient(135deg, #4dabf7, #74c0fc);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(77, 171, 247, 0.3);
}

.priority-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.priority-tag.emergency {
  background: linear-gradient(135deg, #ff4757, #ff6b6b);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.3);
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.3);
  }
  50% {
    box-shadow: 0 6rpx 20rpx rgba(255, 71, 87, 0.5);
  }
}

/* 卡片内容 */
.card-content {
  margin: 20rpx 0;
}

.chinese-primary {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.english-secondary {
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.4;
  font-style: italic;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.category-info {
  flex: 1;
}

/* 扩展的分类标签 */
.category-badge-extended {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  max-width: 460rpx;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.category-badge-extended.emergency {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.15), rgba(255, 71, 87, 0.1));
  color: #ff4757;
  border-color: rgba(255, 71, 87, 0.2);
}

.category-badge-extended.icao900 {
  background: linear-gradient(135deg, rgba(77, 171, 247, 0.15), rgba(116, 192, 252, 0.1));
  color: #4dabf7;
  border-color: rgba(77, 171, 247, 0.2);
}

.category-icon {
  font-size: 26rpx;
  flex-shrink: 0;
}

.category-name-extended {
  font-size: 26rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

/* 加载更多样式 */
.load-more-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.load-more-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.load-more-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.load-more-text {
  font-size: 28rpx;
  color: #4dabf7;
  font-weight: 600;
}

.load-more-icon {
  font-size: 32rpx;
}

.load-more-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 12rpx;
}

/* 加载中状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-top: 16rpx;
}

/* 无更多数据 */
.no-more-section {
  display: flex;
  flex-direction: column;
  align-items: center;  
  padding: 40rpx 0;
}

.no-more-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 无结果样式 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 20rpx;
  text-align: center;
}

.no-results-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.no-results-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  margin-bottom: 12rpx;
}

.no-results-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  padding: 40rpx 20rpx;
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 详情弹窗样式 */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 30rpx 40rpx;
  border-radius: 20rpx 20rpx 0 0;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-header-content {
  flex: 1;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

.popup-close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  margin-left: 20rpx;
}

.popup-content {
  flex: 1;
  padding: 40rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.detail-content {
  font-size: 30rpx;
  line-height: 1.6;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #4dabf7;
}

.chinese-content {
  color: #2c3e50;
  font-weight: 600;
}

.english-content {
  color: #5a6c7d;
  font-style: italic;
}

.category-content {
  color: #4dabf7;
  font-weight: 500;
}

.source-content {
  color: #27ae60;
  font-weight: 500;
}

/* 章节导航栏样式 */
.chapter-nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  margin: 0 20rpx 20rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  display: flex;
  align-items: center;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.back-button:active {
  opacity: 0.7;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
}

.chapter-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

/* 章节列表样式 */
.chapter-list {
  margin: 0 20rpx;
}

.modern-chapter-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(15px);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.modern-chapter-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.chapter-card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chapter-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.chapter-info {
  flex: 1;
}

.chapter-name {
  color: #2c3e50;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.chapter-count {
  color: #7f8c8d;
  font-size: 26rpx;
  font-weight: 400;
}

.chapter-arrow {
  color: #3498db;
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 16rpx;
}

/* 应急特情分类卡片特殊样式 */
.emergency-category-card {
  border-left: 6rpx solid #ff4757;
}

.emergency-icon {
  color: #ff4757;
  animation: pulse 2s infinite;
}

.emergency-category-name {
  color: #2c3e50;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.3;
}

.emergency-count {
  color: #ff4757;
  font-size: 24rpx;
  font-weight: 500;
  margin-top: 4rpx;
}

.emergency-arrow {
  color: #ff4757;
  font-size: 32rpx;
  font-weight: 600;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}