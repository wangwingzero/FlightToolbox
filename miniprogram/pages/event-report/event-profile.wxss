.container {
  padding: 0 16rpx !important;
  margin: 0 !important;
  background-color: #f7f8fa;
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
}

.help-content {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 0 16rpx;
}

.help-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
} /* 个人设置页面额外样式 */
.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #722ed1 0%, #9254de 100%);
  margin: 0 -16rpx 30rpx -16rpx;
  color: white;
  position: relative;
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #9254de;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.deadline-hint {
  display: flex;
  align-items: center;
}

.help-content {
  padding: 24rpx !important;
  background: linear-gradient(135deg, #f0f9ff, #e6f7ff) !important;
  border-radius: 16rpx !important;
  margin: 16rpx !important;
  border: 1rpx solid #91d5ff !important;
}

.help-text {
  font-size: 28rpx !important;
  line-height: 1.6 !important;
  color: #1890ff !important;
  font-weight: 500 !important;
}

/* 表单字段美化 */
.van-cell-group {
  border-radius: 16rpx !important;
  overflow: hidden !important;
  margin: 16rpx 0 !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05) !important;
}

.van-field {
  background: #fff !important;
}

/* 按钮美化 */
.van-button {
  border-radius: 24rpx !important;
  font-weight: 600 !important;
}
