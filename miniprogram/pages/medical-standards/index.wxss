/* 体检标准页面样式 - 基于性能详解页面设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 20%, #bae6fd 40%, #f0f9ff 60%, #f0fdfa 80%, #f0f9ff 100%),
    radial-gradient(circle at 30% 40%, rgba(34, 197, 94, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(59, 130, 246, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}


/* 分类菜单系统 */
.category-tabs-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(226, 232, 240, 0.4);
  box-shadow: 
    0 2rpx 32rpx rgba(148, 163, 184, 0.12),
    0 8rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.category-tabs-scroll {
  height: 140rpx;
  white-space: nowrap;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  gap: 24rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  min-width: 80rpx;
}

.category-tab-item.active {
  background: rgba(34, 197, 94, 0.1);
  transform: scale(1.05);
}

.category-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #94a3b8;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.category-tab-item.active .category-badge {
  background: #22c55e;
  box-shadow: 
    0 4rpx 16rpx rgba(34, 197, 94, 0.3),
    0 8rpx 32rpx rgba(34, 197, 94, 0.15);
  transform: scale(1.1);
}

.category-title {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.category-tab-item.active .category-title {
  color: #22c55e;
  font-weight: 600;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx 32rpx;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.medical-search::before {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 50%, #059669 100%);
  border-radius: 0 0 12rpx 12rpx;
  animation: decorationPulse 3s ease-in-out infinite;
}

@keyframes decorationPulse {
  0%, 100% { opacity: 0.6; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.02); }
}

.search-section .van-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 28rpx !important;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.5);
  overflow: hidden;
  position: relative;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
}

.search-section .van-search:focus-within {
  border-color: rgba(34, 197, 94, 0.4);
  box-shadow: 
    0 12rpx 40rpx rgba(34, 197, 94, 0.15),
    0 20rpx 80rpx rgba(34, 197, 94, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 28rpx !important;
  position: relative;
  z-index: 2;
}

.search-section .van-field__input {
  font-size: 30rpx !important;
  color: #1e293b !important;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding: 20rpx 32rpx !important;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #94a3b8 !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

