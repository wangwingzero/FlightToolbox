/* 加载更多按钮样式 */
.load-more-container {
  padding: 40rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.load-more-btn {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: white;
  border: none;
  border-radius: 32rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 
    0 8rpx 24rpx rgba(34, 197, 94, 0.3),
    0 12rpx 48rpx rgba(34, 197, 94, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 200rpx;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.load-more-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.load-more-btn:hover::before {
  left: 100%;
}

.load-more-btn:active:not(.loading) {
  transform: scale(0.95);
  box-shadow: 
    0 4rpx 16rpx rgba(34, 197, 94, 0.4),
    0 8rpx 32rpx rgba(34, 197, 94, 0.2);
}

.load-more-btn.loading {
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
  box-shadow: 
