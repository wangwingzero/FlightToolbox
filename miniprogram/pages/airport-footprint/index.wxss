.footprint-page {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding: 24rpx;
  box-sizing: border-box;
}

.stats-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #111827;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #6b7280;
}

.stats-value {
  font-size: 28rpx;
  color: #111827;
}

.empty-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
  text-align: center;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #6b7280;
}

.footprint-list {
  max-height: calc(100vh - 280rpx);
}

.footprint-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.item-name-row {
  display: flex;
  align-items: baseline;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.item-code {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 12rpx;
}

.item-country {
  font-size: 24rpx;
  color: #6b7280;
}

.item-meta-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.item-meta {
  font-size: 24rpx;
  color: #9ca3af;
}
