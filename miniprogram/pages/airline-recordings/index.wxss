/* 航线录音页面 - 全新设计 */

/* ========== 容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f766e 0%, #14b8a6 50%, #2dd4bf 100%);
  padding-bottom: 120rpx;
}

/* ========== 页面标题 ========== */
.page-header {
  padding: 48rpx 32rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-icon {
  font-size: 80rpx;
  line-height: 1;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.header-content {
  flex: 1;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

/* ========== 统计卡片 ========== */
.stats-card {
  margin: 0 32rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #0f766e, #14b8a6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent, #e2e8f0, transparent);
}

/* ========== 分类区域 ========== */
.recording-categories {
  padding: 0 32rpx;
}

.category-section {
  margin-bottom: 48rpx;
}

/* ========== 大洲标题 ========== */
.continent-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.continent-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-emoji {
  font-size: 40rpx;
  line-height: 1;
}

.continent-info {
  flex: 1;
}

.continent-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 6rpx;
}

.continent-stats {
  display: block;
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

/* ========== 国家卡片网格 ========== */
.regions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.region-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.region-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #0f766e, #14b8a6, #2dd4bf);
  transform: scaleX(0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.region-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.region-card:active::before {
  transform: scaleX(1);
}

.region-card.disabled {
  opacity: 0.5;
  transform: none !important;
  cursor: not-allowed;
}

.card-flag {
  font-size: 64rpx;
  line-height: 1;
  margin-bottom: 8rpx;
}

.card-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  text-align: center;
  margin-bottom: 4rpx;
}

.card-desc {
  font-size: 22rpx;
  color: #64748b;
  text-align: center;
  font-weight: 500;
}

.card-badge {
  margin-top: 12rpx;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  background: #e2e8f0;
  color: #64748b;
  transition: all 0.3s ease;
}

.card-badge.active {
  background: linear-gradient(135deg, #0f766e, #14b8a6);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(20, 184, 166, 0.3);
}

/* ========== 广告容器 ========== */
.ad-container {
  margin: 32rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* ========== 响应式优化 ========== */
@media screen and (max-width: 375px) {
  .header-title {
    font-size: 42rpx;
  }
  
  .stat-value {
    font-size: 38rpx;
  }
  
  .card-flag {
    font-size: 56rpx;
  }
}

/* ========== 加载状态 ========== */
@keyframes shimmer {
  0% {
    background-position: -200rpx 0;
  }
  100% {
    background-position: 200rpx 0;
  }
}

.region-card.loading {
  background: linear-gradient(
    90deg,
    #f8fafc 25%,
    #e2e8f0 50%,
    #f8fafc 75%
  );
  background-size: 200rpx 100%;
  animation: shimmer 1.5s infinite;
}
