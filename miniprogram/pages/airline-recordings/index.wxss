/* 航线录音主页 - 友好易用设计 */

/* ========== 页面容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* ========== 顶部引导区域 ========== */
.guide-section {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 0 0 40rpx 40rpx;
  padding: 40rpx 32rpx 32rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.guide-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.guide-emoji {
  font-size: 56rpx;
  line-height: 1;
}

.guide-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1f2937;
  letter-spacing: 0.5rpx;
}

.guide-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(135deg, #f8f9ff, #f0f3ff);
  border-radius: 20rpx;
  padding: 20rpx 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: #e5e7eb;
}

/* ========== 搜索区域 ========== */
.search-section {
  padding: 0 24rpx 24rpx 24rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 28rpx;
  padding: 20rpx 28rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  gap: 16rpx;
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.25);
  transform: translateY(-2rpx);
}

.search-icon {
  font-size: 32rpx;
  color: #667eea;
  line-height: 1;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.5;
  min-width: 0;
}

.search-input::placeholder {
  color: #9ca3af;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  background: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1;
  flex-shrink: 0;
  transition: all 0.2s ease;
  /* 扩大点击区域 */
  padding: 8rpx;
  margin: -8rpx;
  position: relative;
}

.clear-icon::before {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  left: -8rpx;
  border-radius: 50%;
}

.clear-icon:active {
  background: #e5e7eb;
  transform: scale(0.9);
}

.search-result-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(16, 185, 129, 0.15);
  border-radius: 16rpx;
  padding: 12rpx 20rpx;
  margin-top: 16rpx;
}

.result-icon {
  font-size: 24rpx;
  color: #10b981;
  line-height: 1;
}

.result-text {
  font-size: 26rpx;
  color: #059669;
  font-weight: 600;
}

/* ========== 地区列表包装器 ========== */
.regions-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 24rpx;
}

.continent-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* ========== 大洲标题卡片 ========== */
.continent-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.continent-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.continent-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.continent-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #eef2ff, #e0e7ff);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.continent-emoji {
  font-size: 44rpx;
  line-height: 1;
}

.continent-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.continent-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.2;
}

.continent-meta {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  line-height: 1.4;
}

/* ========== 展开/折叠指示器 ========== */
.expand-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #eef2ff, #e0e7ff);
  border-radius: 16rpx;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.expand-text {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 600;
  line-height: 1;
}

.expand-arrow {
  font-size: 16rpx;
  color: #667eea;
  font-weight: 700;
  line-height: 1;
  transition: transform 0.3s ease;
  display: inline-block;
}

.expand-indicator.expanded .expand-arrow {
  transform: rotate(180deg);
}

.expand-indicator.collapsed .expand-arrow {
  transform: rotate(0deg);
}

/* ========== 国家卡片列表 ========== */
.country-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-left: 8rpx;
}

.country-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.country-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea, #764ba2);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.country-card.available:active {
  transform: translateX(8rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.country-card.available:active::before {
  transform: scaleY(1);
}

.country-card.unavailable {
  opacity: 0.5;
}

.country-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

/* ========== 国旗容器 ========== */
.flag-container {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.country-flag {
  font-size: 72rpx;
  line-height: 1;
}

.ready-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 12rpx;
  padding: 4rpx 10rpx;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.3);
}

.badge-text {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 700;
  line-height: 1;
}

/* ========== 国家详情 ========== */
.country-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.country-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.2;
}

.country-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 20rpx;
  line-height: 1;
}

.meta-text {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.country-stats {
  display: flex;
  align-items: center;
}

.stats-text {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 600;
  background: linear-gradient(135deg, #eef2ff, #e0e7ff);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* ========== 操作按钮 ========== */
.action-button {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.action-button.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.4);
}

.action-button.disabled {
  background: #f3f4f6;
}

.button-icon {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1;
  font-weight: 700;
}

.action-button.disabled .button-icon {
  color: #9ca3af;
  font-size: 32rpx;
}

.action-button.active:active {
  transform: scale(0.9);
}

/* ========== 广告区域 ========== */
.ad-section {
  margin: 32rpx 24rpx 0 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: 40rpx;
}

/* ========== 响应式优化 ========== */
@media screen and (max-width: 375px) {
  .guide-title {
    font-size: 40rpx;
  }

  .guide-emoji {
    font-size: 48rpx;
  }

  .stat-number {
    font-size: 32rpx;
  }

  .country-flag {
    font-size: 64rpx;
  }

  .country-name {
    font-size: 28rpx;
  }
}

/* ========== 加载动画 ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.continent-section {
  animation: fadeIn 0.4s ease-out;
}

@keyframes shimmer {
  0% {
    background-position: -200rpx 0;
  }
  100% {
    background-position: 200rpx 0;
  }
}

.country-card.loading {
  background: linear-gradient(
    90deg,
    #f8fafc 25%,
    #e2e8f0 50%,
    #f8fafc 75%
  );
  background-size: 200rpx 100%;
  animation: shimmer 1.5s infinite;
}
