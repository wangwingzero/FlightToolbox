/* 常用换算样式 */
.container {
  padding: 0 16rpx !important;
  margin: 0 !important;
  background-color: #f7f8fa;
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
}

.button-group {
  padding: 20rpx 0;
}

/* 侧风计算专用样式 */
.wind-compass {
  margin-top: 40rpx;
  text-align: center;
  pointer-events: none; /* 禁用指针事件，避免干扰滚动 */
}

.compass-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.compass-container {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
  pointer-events: none; /* 禁用指针事件，避免干扰滚动 */
}

.compass-circle {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  border: 4rpx solid #1989fa;
  border-radius: 50%;
  background-color: #f7f8fa;
  pointer-events: none; /* 禁用指针事件，避免干扰滚动 */
}

/* 度数刻度 */
.compass-degrees {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none; /* 禁用指针事件，避免干扰滚动 */
}

.degree-mark {
  position: absolute;
  font-size: 24rpx;
  font-weight: bold;
  color: #1989fa;
  background-color: white;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 2rpx solid #1989fa;
}

.degree-mark.north {
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.degree-mark.east {
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.degree-mark.south {
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.degree-mark.west {
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 航向指针（钟表样式） */
.heading-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform-origin: center bottom;
  transform: translate(-50%, -100%);
  z-index: 5;
  pointer-events: none;
}

.heading-line {
  width: 4rpx;
  height: 120rpx;
  background-color: #323233;
  margin: 0 auto;
}

.heading-arrow {
  display: none;
}

/* 风向指针（钟表样式） */
.wind-arrow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform-origin: center bottom;
  transform: translate(-50%, -100%);
  pointer-events: none;
}

.arrow-line {
  width: 4rpx;
  height: 120rpx;
  background-color: #ff6b35;
  margin: 0 auto;
}

.arrow-head {
  display: none;
}

.wind-label {
  position: absolute;
  top: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #ff6b35;
  font-weight: bold;
  background-color: white;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
}

/* 航迹指针（钟表样式） */
.track-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform-origin: center bottom;
  transform: translate(-50%, -100%);
  z-index: 3;
  pointer-events: none;
}

.track-line {
  width: 4rpx;
  height: 120rpx;
  background-color: #07c160;
  margin: 0 auto;
}

.track-arrow {
  display: none;
}

/* 指针图例 */
.compass-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 20rpx;
  pointer-events: none;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 20rpx;
  height: 4rpx;
  border-radius: 2rpx;
}

.heading-color {
  background-color: #323233;
}

.wind-color {
  background-color: #ff6b35;
}

.track-color {
  background-color: #07c160;
}

.legend-text {
  font-size: 24rpx;
  color: #646566;
}

 