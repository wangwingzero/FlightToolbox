/* 测试地图页面样式 */
.container {
  width: 100%;
  height: 100vh;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

/* 调试面板 */
.debug-panel {
  position: absolute;
  top: 10px;
  left: 10px;
  right: 10px;
  background: rgba(0, 0, 0, 0.9);
  color: white;
  padding: 15px;
  border-radius: 8px;
  z-index: 1000;
  max-height: 50vh;
  overflow-y: auto;
}

.debug-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #4CAF50;
}

.debug-content {
  display: block;
  font-size: 12px;
  line-height: 1.4;
  margin-bottom: 8px;
  white-space: pre-wrap;
  word-break: break-all;
}

.debug-buttons {
  margin-top: 10px;
  display: flex;
  gap: 10px;
}

.debug-btn {
  background: #1976d2;
  color: white;
  border: none;
  padding: 8px 15px;
  border-radius: 4px;
  font-size: 12px;
  flex: 1;
}

.show-debug-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #1976d2;
  color: white;
  border: none;
  padding: 8px 15px;
  border-radius: 4px;
  font-size: 12px;
  z-index: 999;
}

/* 状态栏 */
.status-bar {
  position: absolute;
  bottom: 10px;
  left: 10px;
  right: 10px;
  background: rgba(255, 255, 255, 0.9);
  padding: 10px;
  border-radius: 4px;
  text-align: center;
  font-size: 14px;
  z-index: 999;
}