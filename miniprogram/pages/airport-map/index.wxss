/* 机场分布地图页面样式 */

.airport-map-container {
  height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* ========== 地图头部 ========== */
.map-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #1a1a2e, #16213e);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.header-info {
  display: flex;
  flex-direction: column;
}

.title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subtitle {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.header-controls {
  display: flex;
  gap: 20rpx;
}

/* ========== 加载状态 ========== */
.loading-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000;
  color: #ffffff;
  flex-direction: column;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: 400rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #40a9ff);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: #1890ff;
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 地图容器 ========== */
.map-container {
  flex: 1;
  position: relative;
}

.airport-map {
  width: 100%;
  height: 100%;
}

/* ========== 底部信息栏 ========== */
.bottom-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #1a1a2e, #16213e);
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
}

.info-item {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.info-label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.info-value {
  color: #00ff88;
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 机场信息弹窗 ========== */
.airport-info-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background: linear-gradient(135deg, #1a1a2e, #16213e);
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: calc(100% - 80rpx);
  max-height: 70vh;
  overflow-y: auto;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  position: relative;
}

.airport-code {
  color: #00ff88;
  font-size: 36rpx;
  font-weight: bold;
}

.airport-iata {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  position: absolute;
  right: 80rpx;
  top: 50%;
  transform: translateY(-50%);
}

.close-button {
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
}

.popup-body {
  padding: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
  width: 180rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #ffffff;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
}

.popup-actions {
  padding: 30rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
}

/* ========== 响应式适配 ========== */
@media (max-width: 750rpx) {
  .popup-content {
    margin: 20rpx;
    width: calc(100% - 40rpx);
  }
}

/* ========== 自定义Vant组件样式 ========== */
.van-button--small {
  font-size: 24rpx !important;
}

/* ========== 机场图标样式（如果需要自定义） ========== */
.airport-marker {
  background: #00ff88;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 255, 136, 0.4);
}