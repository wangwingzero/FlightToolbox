/* 机场分布地图页面样式 */

.airport-map-container {
  height: 100vh;
  width: 100vw;
  background: #000;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}


/* ========== 地图头部 ========== */
.map-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #1a1a2e, #16213e);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.header-info {
  display: flex;
  flex-direction: column;
}

.title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subtitle {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.header-controls {
  display: flex;
  gap: 20rpx;
}

/* ========== 加载状态 ========== */
.loading-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000;
  color: #ffffff;
  flex-direction: column;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: 400rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #40a9ff);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: #1890ff;
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 地图容器 ========== */
.map-container {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 选中位置信息 */
.selected-location-info {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(24, 144, 255, 0.9);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  z-index: 10;
  backdrop-filter: blur(10px);
}

.location-name {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.airport-map {
  width: 100%;
  height: 100%;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 50rpx; /* 状态栏下方 */
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.8);
}

/* 底部优雅按钮组 */
.bottom-button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: transparent;
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  z-index: 1000;
}

.elegant-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx 16rpx;
  border-radius: 24rpx;
  min-height: 80rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.elegant-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.05));
  border-radius: 24rpx;
  transition: opacity 0.3s ease;
}

.elegant-button:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.elegant-button:active::before {
  opacity: 0.5;
}

.button-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  z-index: 1;
  position: relative;
}

/* 个性化按钮主题色 */
.search-button {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
}

.location-button {
  background: linear-gradient(135deg, #52c41a, #73d13d);
}

.satellite-button {
  background: linear-gradient(135deg, #faad14, #ffc53d);
}

.labels-button {
  background: linear-gradient(135deg, #722ed1, #9254de);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .bottom-button-group {
    gap: 12rpx;
    padding: 25rpx 16rpx;
    padding-bottom: calc(25rpx + env(safe-area-inset-bottom));
  }
  
  .elegant-button {
    padding: 18rpx 12rpx;
    min-height: 76rpx;
    gap: 8rpx;
  }
  
  .button-label {
    font-size: 22rpx;
  }
}

/* 小屏幕优化 - 可能需要缩短文字 */
@media (max-width: 600rpx) {
  .button-label {
    font-size: 20rpx;
  }
  
  .elegant-button {
    padding: 16rpx 10rpx;
    min-height: 72rpx;
  }
}


.info-item {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.info-label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.info-value {
  color: #00ff88;
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 机场信息弹窗 ========== */
.airport-info-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background: linear-gradient(135deg, #1a1a2e, #16213e);
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: calc(100% - 80rpx);
  max-height: 70vh;
  overflow-y: auto;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  position: relative;
}

.airport-code {
  color: #00ff88;
  font-size: 36rpx;
  font-weight: bold;
}

.airport-iata {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  position: absolute;
  right: 80rpx;
  top: 50%;
  transform: translateY(-50%);
}

.close-button {
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
}

.popup-body {
  padding: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
  width: 180rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #ffffff;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
}

.popup-actions {
  padding: 30rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
}

/* ========== 响应式适配 ========== */
@media (max-width: 750rpx) {
  .popup-content {
    margin: 20rpx;
    width: calc(100% - 40rpx);
  }
}

/* ========== 自定义Vant组件样式 ========== */
.van-button--small {
  font-size: 24rpx !important;
}

/* ========== 机场图标样式（如果需要自定义） ========== */
.airport-marker {
  background: #00ff88;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 255, 136, 0.4);
}