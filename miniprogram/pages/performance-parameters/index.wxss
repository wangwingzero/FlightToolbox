/* 性能参数页面样式 */
.page-content {
  min-height: 100vh;
  background: #f7f9fc;
  padding-bottom: 40rpx;
}


/* 页面标题 */
.page-header {
  padding: 40rpx 32rpx;
  text-align: center;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: white;
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

/* 功能卡片网格 */
.modules-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 单个功能卡片 */
.module-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}


.module-card:nth-child(1) { animation-delay: 0.1s; }
.module-card:nth-child(2) { animation-delay: 0.2s; }
.module-card:nth-child(3) { animation-delay: 0.3s; }
.module-card:nth-child(4) { animation-delay: 0.4s; }

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.module-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(79, 70, 229, 0.2),
    0 0 0 2rpx rgba(79, 70, 229, 0.1);
}

.module-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.module-card:active::before {
  left: 100%;
}

.module-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.module-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}


.module-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  line-height: 1.5;
}


.module-count {
  display: flex;
  justify-content: center;
}

/* 提示信息区域 */
.tips-section {
  margin: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.8s ease-out 0.4s both;
}


@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 16rpx;
}


.tips-content {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
}


.tip-item {
  margin: 8rpx 0;
}