/* 性能参数页面样式 */
.page-content {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 页面标题区域 */
.page-header {
  text-align: center;
  padding: 20rpx 0 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -20rpx -20rpx 30rpx -20rpx;
  border-radius: 0 0 30rpx 30rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 功能卡片网格 */
.modules-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 单个功能卡片 */
.module-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 为每个卡片添加不同颜色的细边框 */
.module-card:nth-child(1) {
  border: 1rpx solid rgba(102, 126, 234, 0.3);
}

.module-card:nth-child(1):hover {
  border: 1rpx solid rgba(102, 126, 234, 0.6);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(102, 126, 234, 0.15);
}

.module-card:nth-child(2) {
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.module-card:nth-child(2):hover {
  border: 1rpx solid rgba(24, 144, 255, 0.6);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(24, 144, 255, 0.15);
}

.module-card:nth-child(3) {
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.module-card:nth-child(3):hover {
  border: 1rpx solid rgba(82, 196, 26, 0.6);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(82, 196, 26, 0.15);
}

.module-card:nth-child(4) {
  border: 1rpx solid rgba(255, 107, 53, 0.3);
}

.module-card:nth-child(4):hover {
  border: 1rpx solid rgba(255, 107, 53, 0.6);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(255, 107, 53, 0.15);
}


.module-card:nth-child(1) { animation-delay: 0.1s; }
.module-card:nth-child(2) { animation-delay: 0.2s; }
.module-card:nth-child(3) { animation-delay: 0.3s; }
.module-card:nth-child(4) { animation-delay: 0.4s; }

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.module-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(79, 70, 229, 0.2),
    0 0 0 2rpx rgba(79, 70, 229, 0.1);
}

.module-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.module-card:active::before {
  left: 100%;
}

.module-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.module-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}


.module-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  line-height: 1.5;
}


/* ========== 积分标签区域 - 与航班运行页面统一样式 ========== */
/* 积分标签 - 位于右上角 */
.module-points {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 2;
}

/* 数据量标签 - 位于底部 */
.module-count {
  display: flex;
  justify-content: center;
  margin-top: 8rpx;
}

/* ========== Vant Tag 组件样式覆盖 ========== */
/* 使用CSS变量覆盖Vant组件默认样式 */

/* 通用标签样式变量 */
.module-points,
.module-count {
  --tag-border-radius: 12rpx;
  --tag-font-size: 24rpx;
  --tag-line-height: 32rpx;
  --tag-padding: 8rpx 16rpx;
  --tag-medium-padding: 10rpx 20rpx;
}

/* Warning 类型标签 - 橙色渐变 */
.module-points,
.module-count {
  --tag-warning-color: #ff8a50;
}

/* Success 类型标签 - 绿色渐变 */
.module-points,
.module-count {
  --tag-success-color: #06ad56;
}

/* Primary 类型标签 - 蓝色渐变 */
.module-points,
.module-count {
  --tag-primary-color: #0570de;
}

/* Default 类型标签 - 灰色渐变 */
.module-points,
.module-count {
  --tag-default-color: #7d7e80;
}

/* Danger 类型标签 - 红色渐变 */
.module-points,
.module-count {
  --tag-danger-color: #d60a21;
}

/* ========== 深度选择器覆盖样式 ========== */
/* 使用深度选择器穿透组件样式 */

/* 右上角积分标签容器 */
.module-points {
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.1));
}

/* 底部功能标签容器 */
.module-count {
  filter: drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.08));
}

/* 交互效果 */
.module-card:active .module-points,
.module-card:active .module-count {
  transform: scale(0.95);
  opacity: 0.8;
  transition: all 0.2s ease;
}

/* 功能说明区域 - 统一资料查询页面样式 */
.tips-section {
  margin: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.8s ease-out 0.4s both;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
}

.tip-item {
  margin: 8rpx 0;
}