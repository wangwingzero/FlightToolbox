/* 录音列表页面样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #16a085 0%, #27ae60 50%, #2ecc71 100%);
  position: relative;
  overflow-x: hidden;
  padding: 32rpx;
}

/* 动态背景效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(22, 160, 133, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(46, 204, 113, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(39, 174, 96, 0.2) 0%, transparent 50%);
  animation: backgroundFloat 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes backgroundFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(1deg); }
  66% { transform: translateY(10px) rotate(-1deg); }
}

/* 录音网格 */
.clips-grid {
  position: relative;
  z-index: 10;
}

.grid-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.header-count {
  font-size: 24rpx;
  color: #64748b;
}

/* 录音卡片 */
.audio-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  position: relative;
}

.audio-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.3);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.learned-status {
  font-size: 40rpx;
  transition: all 0.2s ease;
  padding: 8rpx;
  border-radius: 8rpx;
}

.learned-status:active {
  transform: scale(1.2);
}

.card-content {
  margin-bottom: 16rpx;
}

.card-label {
  font-size: 20rpx;
  color: #3b82f6;
  font-weight: 600;
  margin-bottom: 8rpx;
  background: rgba(59, 130, 246, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-subtitle {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-footer {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.play-icon {
  font-size: 32rpx;
}

.play-text {
  font-size: 24rpx;
  color: #16a085;
  font-weight: 500;
}

/* 广告容器样式 */
.ad-container {
  margin: 32rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 底部广告特殊样式 */
.ad-container.bottom-ad {
  margin-top: 48rpx;
  margin-bottom: 32rpx;
}