/* 录音列表页面 - 全新友好设计 */

/* ========== 容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 20rpx 40rpx 20rpx;
}

/* ========== 页面头部 ========== */
.page-header {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.header-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.region-flag {
  font-size: 64rpx;
  line-height: 1;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-region {
  font-size: 36rpx;
  font-weight: 800;
  color: #1f2937;
  line-height: 1.2;
}

.header-category {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

.header-stats {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ede9fe, #ddd6fe);
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
}

.stats-icon {
  font-size: 24rpx;
  line-height: 1;
}

.stats-text {
  font-size: 24rpx;
  color: #5b21b6;
  font-weight: 600;
}

/* ========== 录音列表 ========== */
.clips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.clip-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.clip-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #9f7aea);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.clip-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.clip-card:active::before {
  transform: scaleX(1);
}

/* 学习状态样式 */
.clip-card.learned {
  background: linear-gradient(135deg, rgba(236, 253, 245, 0.98), rgba(209, 250, 229, 0.98));
}

.clip-card.unlearned {
  background: rgba(255, 255, 255, 0.98);
}

/* 编号和状态 */
.clip-number-wrapper {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.clip-number {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.clip-status {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.clip-card.learned .clip-status {
  background: linear-gradient(135deg, #10b981, #059669);
}

.clip-card.unlearned .clip-status {
  background: #f3f4f6;
  border: 2rpx solid #e5e7eb;
}

.status-icon {
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
}

.clip-card.learned .status-icon {
  color: #ffffff;
}

.clip-card.unlearned .status-icon {
  color: #9ca3af;
}

.clip-status:active {
  transform: scale(1.1) rotate(360deg);
}

/* 录音详情 */
.clip-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.clip-label-tag {
  display: inline-block;
  background: linear-gradient(135deg, #667eea15, #764ba215);
  color: #667eea;
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.clip-transcript {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.5;
  word-break: break-word;
}

.clip-card.unlearned .clip-transcript {
  color: #9ca3af;
  font-style: italic;
}

.clip-translation {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  word-break: break-word;
  padding-left: 16rpx;
  border-left: 4rpx solid #667eea;
}

/* 播放按钮 */
.clip-play-button {
  flex-shrink: 0;
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.play-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 700;
  line-height: 1;
  margin-left: 4rpx;
}

.clip-card:active .clip-play-button {
  transform: scale(1.1);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.5);
}

/* ========== 广告区域 ========== */
.ad-section {
  margin: 32rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: 40rpx;
}

/* ========== 响应式优化 ========== */
@media screen and (max-width: 375px) {
  .header-region {
    font-size: 32rpx;
  }
  
  .region-flag {
    font-size: 56rpx;
  }
  
  .clip-number {
    width: 56rpx;
    height: 56rpx;
    font-size: 24rpx;
  }
  
  .clip-status {
    width: 44rpx;
    height: 44rpx;
  }
  
  .clip-transcript {
    font-size: 26rpx;
  }
  
  .clip-play-button {
    width: 56rpx;
    height: 56rpx;
  }
  
  .play-icon {
    font-size: 24rpx;
  }
}

/* ========== 空状态 ========== */
.empty-state {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
}
