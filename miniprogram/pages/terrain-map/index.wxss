/* 地形图页面样式 */

.terrain-map-container {
  height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 顶部功能栏 */
.header-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  border-bottom: 1px solid #333;
  z-index: 10;
}

.control-group-left,
.control-group-right {
  display: flex;
  gap: 16rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 96rpx;
  padding: 8rpx 16rpx;
  background-color: #2a2a3e;
  border: 1px solid #444;
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 24rpx;
  transition: all 0.2s;
  position: relative;
}

.control-btn.active {
  background-color: #FF6600;
  border-color: #FF6600;
  box-shadow: 0 0 8px rgba(255, 102, 0, 0.4);
}

.control-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 20rpx;
  color: inherit;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background-color: #ff4444;
  color: white;
  border-radius: 16rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 地图容器 */
.map-container {
  flex: 1;
  position: relative;
  overflow: hidden;
}

/* 腾讯地图组件 */
.terrain-map {
  width: 100%;
  height: 100%;
}

/* Canvas覆盖层 */
.terrain-canvas-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 5;
}

/* 原始Canvas（作为备用） */
.terrain-canvas {
  width: 100%;
  height: 100%;
  background-color: #000000;
}

.control-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 20rpx;
  white-space: nowrap;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #ff4444;
  color: #ffffff;
  font-size: 16rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 地图容器 */
.map-container {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.terrain-canvas {
  width: 100%;
  height: 100%;
  background-color: #000000;
}

/* 地图叠加层 */
.map-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 5;
}

.gps-info {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  background-color: rgba(0, 0, 0, 0.8);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  border: 1px solid #333;
}

.coord-text {
  display: block;
  color: #00ff88;
  font-size: 24rpx;
  font-family: monospace;
  font-weight: bold;
}

.accuracy-text {
  display: block;
  color: #999;
  font-size: 20rpx;
  margin-top: 4rpx;
}

/* 地形图例 */
.terrain-legend {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background-color: rgba(0, 0, 0, 0.9);
  padding: 24rpx;
  border-radius: 16rpx;
  border: 1px solid #333;
  min-width: 240rpx;
}

.legend-title {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-align: center;
}

.legend-items {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  border: 1px solid #666;
}

.legend-text {
  color: #cccccc;
  font-size: 20rpx;
  flex: 1;
}

/* 缩放信息 */
.zoom-info {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  background-color: rgba(0, 0, 0, 0.8);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  border: 1px solid #333;
}

.zoom-text {
  color: #00ff88;
  font-size: 28rpx;
  font-weight: bold;
  font-family: monospace;
}

.scale-text {
  color: #cccccc;
  font-size: 24rpx;
  font-family: monospace;
  margin-top: 4rpx;
  display: block;
}

/* 浮动操作按钮 */
.floating-actions {
  position: absolute;
  right: 32rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  z-index: 20;
}

.fab {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8800 100%);
  border: none;
  box-shadow: 0 4px 12px rgba(255, 102, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(255, 102, 0, 0.6);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
}

.mode-fab {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  box-shadow: 0 4px 12px rgba(76, 175, 80, 0.4);
}

.mode-fab:active {
  box-shadow: 0 2px 8px rgba(76, 175, 80, 0.6);
}

/* 长按提示 */
.long-press-hint {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 8;
  animation: pulse 2s infinite;
}

.hint-content {
  background-color: rgba(255, 102, 0, 0.9);
  padding: 32rpx 40rpx;
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

.hint-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.hint-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 航点面板 */
.waypoint-panel {
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  border-top: 2px solid #FF6600;
  transition: all 0.3s ease-in-out;
  z-index: 15;
}

.waypoint-panel.collapsed {
  height: 120rpx;
}

.waypoint-panel.expanded {
  height: 40vh;
  max-height: 800rpx;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  background-color: rgba(255, 102, 0, 0.1);
  cursor: pointer;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.panel-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.waypoint-count {
  color: #FF6600;
  font-size: 24rpx;
}

.expand-icon {
  color: #FF6600;
  font-size: 32rpx;
  transition: transform 0.3s;
}

.expand-icon.rotated {
  transform: rotate(180deg);
}

/* 航点列表 */
.waypoint-list {
  flex: 1;
  padding: 0 32rpx;
  max-height: calc(40vh - 240rpx);
}

.waypoint-item {
  background-color: #2a2a3e;
  border: 1px solid #444;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  transition: all 0.2s;
}

.waypoint-item.enabled {
  border-color: #FF6600;
  box-shadow: 0 0 8px rgba(255, 102, 0, 0.2);
}

.waypoint-item.disabled {
  opacity: 0.6;
  border-color: #666;
}

.waypoint-item.selected {
  background-color: #3a3a4e;
  border-color: #00ff88;
}

.waypoint-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.waypoint-info {
  flex: 1;
  margin-right: 24rpx;
}

.waypoint-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.waypoint-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  border: 2px solid #ffffff;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.3);
}

.waypoint-name {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
}

.waypoint-type {
  color: #999999;
  font-size: 20rpx;
  background-color: #444;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.waypoint-coords {
  color: #00ff88;
  font-size: 22rpx;
  font-family: monospace;
}

.waypoint-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.distance-info {
  text-align: right;
}

.distance-text {
  display: block;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.bearing-text {
  display: block;
  color: #999999;
  font-size: 20rpx;
}

.action-buttons {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  font-size: 20rpx;
  height: 48rpx;
  padding: 0 16rpx;
  border-radius: 8rpx;
  border: none;
  color: #ffffff;
}

.edit-btn {
  background-color: #0066cc;
}

.toggle-btn.enabled {
  background-color: #ff4444;
}

.toggle-btn.disabled {
  background-color: #666666;
}

/* 航点详情 */
.waypoint-details {
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #444;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6px;
}

.detail-label {
  color: #999999;
  font-size: 22rpx;
}

.detail-value {
  color: #ffffff;
  font-size: 22rpx;
  font-family: monospace;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 96rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  color: #999999;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  color: #666666;
  font-size: 24rpx;
}

/* 快速操作栏 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-top: 1px solid #333;
}

.quick-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 72rpx;
  background-color: #2a2a3e;
  border: 1px solid #444;
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 24rpx;
}

.quick-btn.primary {
  background-color: #FF6600;
  border-color: #FF6600;
}

.quick-btn:active {
  transform: scale(0.95);
}

/* 浮动操作按钮 */
.floating-actions {
  position: absolute;
  bottom: 160rpx;
  right: 32rpx;
  z-index: 20;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.fab {
  width: 56px;
  height: 56px;
  border-radius: 28px;
  border: none;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.location-fab {
  background-color: #0066cc;
}

.create-fab {
  background-color: #FF6600;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  color: #ffffff;
  font-size: 24px;
}

/* 设置面板 */
.settings-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 30;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-content {
  width: 90%;
  max-width: 400px;
  background-color: #1a1a2e;
  border-radius: 12px;
  border: 1px solid #333;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
}

.settings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #333;
}

.settings-title {
  color: #ffffff;
  font-size: 18px;
  font-weight: bold;
}

.close-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background-color: #666;
  border: none;
  color: #ffffff;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-body {
  padding: 20px;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #333;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  color: #ffffff;
  font-size: 14px;
}

/* 响应式设计 */
@media (max-height: 600px) {
  .waypoint-panel.expanded {
    height: 50vh;
  }
  
  .floating-actions {
    bottom: 70px;
  }
}