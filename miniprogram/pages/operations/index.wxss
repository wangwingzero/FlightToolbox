/* 航班运行页面样式 - 现代航空专业设计 */

/* ========== Emoji图标系统 ========== */
.emoji-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
  vertical-align: middle;
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
  font-style: normal;
  font-weight: normal;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.emoji-icon.small { font-size: 28rpx; }
.emoji-icon.large { font-size: 64rpx; }
.emoji-icon.extra-large { font-size: 96rpx; }

/* ========== 页面内容区域 ========== */
.page-content {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* ========== 页面容器 - 保持兼容性 ========== */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  position: relative;
  overflow-x: hidden;
}


/* 广告容器 */
.calculator-ad-container {
  margin: 20rpx 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(79, 70, 229, 0.1);
}

/* 主页面样式 */
.main-page {
  position: relative;
  z-index: 10;
}

/* ========== 主要内容区域 ========== */
.main-page {
  background: #ffffff;
  min-height: calc(100vh - 160rpx);
  padding-top: 0;
}

/* ========== 航班运行功能分组 ========== */
.tools-categories {
  margin-bottom: 32rpx;
  background: #ffffff;
  padding: 20rpx;
}

.category-section {
  margin-bottom: 24rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx 28rpx;
  animation: fadeInUp 0.6s ease-out;
  animation-fill-mode: both;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.06), 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.category-section:nth-child(1) { animation-delay: 0.1s; }
.category-section:nth-child(2) { animation-delay: 0.2s; }
.category-section:nth-child(3) { animation-delay: 0.3s; }
.category-section:nth-child(4) { animation-delay: 0.4s; }

.category-section::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle at center, rgba(91, 99, 245, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0,0,0,0.05);
  position: relative;
}

.category-icon-wrapper {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.category-icon-bg {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 通信学习组背景 */
.communication-learning-bg {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

/* 通信规范组背景 */
.communication-rules-bg {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

/* 专业工具组背景 */
.professional-tools-bg {
  background: linear-gradient(135deg, #fa8c16 0%, #d46b08 100%);
}

/* 应急程序组背景 */
.emergency-procedures-bg {
  background: linear-gradient(135deg, #f5222d 0%, #cf1322 100%);
}

.category-icon-emoji {
  font-size: 28rpx;
  z-index: 2;
}

.category-info {
  flex: 1;
  min-width: 0;
}

.category-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #262626;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.category-desc {
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.3;
}

.category-badge {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(240rpx, 1fr));
  gap: 24rpx;
  animation: fadeInUp 0.6s ease-out;
  background: transparent;
}

/* 功能模块网格 */
.modules-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background: transparent;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 现代化功能卡片 ========== */
.module-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  /* 使用flexbox布局，让底部标签固定在底部 */
  display: flex;
  flex-direction: column;
  min-height: 240rpx;
}

/* 为不同类型的航班运行卡片添加细边框颜色效果 */
.module-card:nth-child(1) {
  border: 1rpx solid rgba(102, 126, 234, 0.3);
}

.module-card:nth-child(1):hover {
  border: 1rpx solid rgba(102, 126, 234, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(102, 126, 234, 0.15);
}

.module-card:nth-child(2) {
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.module-card:nth-child(2):hover {
  border: 1rpx solid rgba(24, 144, 255, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(24, 144, 255, 0.15);
}

.module-card:nth-child(3) {
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.module-card:nth-child(3):hover {
  border: 1rpx solid rgba(82, 196, 26, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(82, 196, 26, 0.15);
}

.module-card:nth-child(4) {
  border: 1rpx solid rgba(255, 107, 53, 0.3);
}

.module-card:nth-child(4):hover {
  border: 1rpx solid rgba(255, 107, 53, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(255, 107, 53, 0.15);
}

.module-card:nth-child(5) {
  border: 1rpx solid rgba(255, 77, 79, 0.3);
}

.module-card:nth-child(5):hover {
  border: 1rpx solid rgba(255, 77, 79, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(255, 77, 79, 0.15);
}

.module-card:nth-child(6) {
  border: 1rpx solid rgba(124, 58, 237, 0.3);
}

.module-card:nth-child(6):hover {
  border: 1rpx solid rgba(124, 58, 237, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(124, 58, 237, 0.15);
}

.module-card:nth-child(1) { animation-delay: 0.1s; }
.module-card:nth-child(2) { animation-delay: 0.2s; }
.module-card:nth-child(3) { animation-delay: 0.3s; }
.module-card:nth-child(4) { animation-delay: 0.4s; }
.module-card:nth-child(5) { animation-delay: 0.5s; }
.module-card:nth-child(6) { animation-delay: 0.6s; }
.module-card:nth-child(7) { animation-delay: 0.7s; }
.module-card:nth-child(8) { animation-delay: 0.8s; }

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* ========== 卡片悬浮效果 ========== */
.module-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(79, 70, 229, 0.2),
    0 0 0 2rpx rgba(79, 70, 229, 0.1);
}

.module-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.module-card:active::before {
  left: 100%;
}

/* ========== 卡片图标 ========== */
.module-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

/* ========== 卡片标题 ========== */
.module-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

/* ========== 卡片描述 ========== */
.module-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

/* ========== 积分标签区域 - 与性能参数页面统一样式 ========== */
/* 积分标签 - 位于右上角 */
.module-points {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 2;
}

/* 数据量标签 - 固定在卡片底部 */
.module-count {
  display: flex;
  justify-content: center;
  margin-top: auto;
  padding-top: 16rpx;
}

/* ========== Vant Tag 组件样式覆盖 ========== */
/* 使用CSS变量覆盖Vant组件默认样式 */

/* 通用标签样式变量 */
.module-points,
.module-count {
  --tag-border-radius: 12rpx;
  --tag-font-size: 24rpx;
  --tag-line-height: 32rpx;
  --tag-padding: 8rpx 16rpx;
  --tag-medium-padding: 10rpx 20rpx;
}

/* Warning 类型标签 - 橙色渐变 */
.module-points,
.module-count {
  --tag-warning-color: #ff8a50;
}

/* Success 类型标签 - 绿色渐变 */
.module-points,
.module-count {
  --tag-success-color: #06ad56;
}

/* Primary 类型标签 - 蓝色渐变 */
.module-points,
.module-count {
  --tag-primary-color: #0570de;
}

/* Default 类型标签 - 灰色渐变 */
.module-points,
.module-count {
  --tag-default-color: #7d7e80;
}

/* Danger 类型标签 - 红色渐变 */
.module-points,
.module-count {
  --tag-danger-color: #d60a21;
}

/* ========== 深度选择器覆盖样式 ========== */
/* 使用深度选择器穿透组件样式 */

/* 右上角积分标签容器 */
.module-points {
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.1));
}

/* 底部功能标签容器 */
.module-count {
  filter: drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.08));
}

/* 交互效果 */
.module-card:active .module-points,
.module-card:active .module-count {
  transform: scale(0.95);
  opacity: 0.8;
  transition: all 0.2s ease;
}

/* 模块页面样式 */
.module-page {
  position: relative;
  z-index: 10;
  animation: pageSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes pageSlideIn {
