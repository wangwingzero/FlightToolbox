/* 完整地图页面样式 */
.full-map-container {
  height: 100vh;
  width: 100vw;
  position: relative;
  background: #000;
  overflow: hidden;
}

/* ========== 顶部工具栏 ========== */
.toolbar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10rpx);
  padding: 20rpx;
}

.search-container {
  margin-bottom: 20rpx;
}

.search-field {
  background: rgba(255, 255, 255, 0.1) !important;
  border-radius: 50rpx !important;
}

.map-type-switcher {
  display: flex;
  justify-content: center;
}

/* ========== 地图容器 ========== */
.map-wrapper {
  height: 100vh;
  width: 100vw;
}

.full-map {
  height: 100%;
  width: 100%;
}

/* ========== 底部信息面板 ========== */
.info-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(15rpx);
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  color: #fff;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.target-info {
  flex: 1;
}

.target-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
  margin-bottom: 8rpx;
}

.target-address {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  display: block;
}

.navigation-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 20rpx;
}

.nav-item {
  text-align: center;
  flex: 1;
}

.nav-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  display: block;
  margin-bottom: 8rpx;
}

.nav-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons .van-button {
  flex: 1;
  border-radius: 50rpx !important;
}

/* ========== 右侧控制按钮 ========== */
.control-buttons {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.zoom-controls {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.zoom-in, .zoom-out {
  width: 60rpx;
  height: 60rpx;
}

/* ========== 加载状态 ========== */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-text {
  color: #1890ff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* ========== 响应式适配 ========== */
@media (max-width: 750rpx) {
  .toolbar {
    padding: 15rpx;
  }
  
  .info-panel {
    padding: 25rpx;
  }
  
  .navigation-info {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .nav-item {
    display: flex;
    justify-content: space-between;
    text-align: left;
  }
  
  .control-buttons {
    right: 20rpx;
  }
}

/* ========== Vant组件样式覆盖 ========== */
.van-search__content {
  background: rgba(255, 255, 255, 0.1) !important;
  border-radius: 50rpx !important;
}

.van-field__input {
  color: #fff !important;
}

.van-search__field {
  background: transparent !important;
}

.van-tabs__line {
  background: #1890ff !important;
}

.van-tab--active {
  color: #1890ff !important;
}