/* 资料查询页面样式 */

.page-content {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 页面标题区域 */
.page-header {
  text-align: center;
  padding: 20rpx 0 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -20rpx -20rpx 30rpx -20rpx;
  border-radius: 0 0 30rpx 30rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 资料卡片网格 */
.categories-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background: transparent;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes iconFloat {
  0%, 100% { 
    transform: translateY(0); 
  }
  50% { 
    transform: translateY(-8rpx); 
  }
}

/* 单个资料卡片 */
.category-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  min-height: 280rpx;
}

/* 为不同类型的资料卡片添加细边框颜色效果 */
.category-card:nth-child(1) {
  border: 1rpx solid rgba(102, 126, 234, 0.3);
}

.category-card:nth-child(1):hover {
  border: 1rpx solid rgba(102, 126, 234, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(102, 126, 234, 0.15);
}

.category-card:nth-child(2) {
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.category-card:nth-child(2):hover {
  border: 1rpx solid rgba(24, 144, 255, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(24, 144, 255, 0.15);
}

.category-card:nth-child(3) {
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.category-card:nth-child(3):hover {
  border: 1rpx solid rgba(82, 196, 26, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(82, 196, 26, 0.15);
}

.category-card:nth-child(4) {
  border: 1rpx solid rgba(255, 107, 53, 0.3);
}

.category-card:nth-child(4):hover {
  border: 1rpx solid rgba(255, 107, 53, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(255, 107, 53, 0.15);
}

.category-card:nth-child(5) {
  border: 1rpx solid rgba(255, 77, 79, 0.3);
}

.category-card:nth-child(5):hover {
  border: 1rpx solid rgba(255, 77, 79, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(255, 77, 79, 0.15);
}

.category-card:nth-child(6) {
  border: 1rpx solid rgba(124, 58, 237, 0.3);
}

.category-card:nth-child(6):hover {
  border: 1rpx solid rgba(124, 58, 237, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(124, 58, 237, 0.15);
}

.category-card:nth-child(1) { animation-delay: 0.1s; }
.category-card:nth-child(2) { animation-delay: 0.2s; }
.category-card:nth-child(3) { animation-delay: 0.3s; }
.category-card:nth-child(4) { animation-delay: 0.4s; }
.category-card:nth-child(5) { animation-delay: 0.5s; }

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.category-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(79, 70, 229, 0.2),
    0 0 0 2rpx rgba(79, 70, 229, 0.1);
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.category-card:active::before {
  left: 100%;
}

.category-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.category-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

/* 积分标签 - 位于右上角 */
.category-points {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 2;
}

/* 数据量标签 - 位于底部 */
.category-count {
  display: flex;
  justify-content: center;
  margin-top: auto;
  padding-top: 16rpx;
}

/* Vant Tag 组件样式优化 */
.van-tag {
  border-radius: 12rpx !important;
  font-weight: 600 !important;
  padding: 8rpx 16rpx !important;
  font-size: 22rpx !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15) !important;
  border: none !important;
  backdrop-filter: blur(10rpx) !important;
}

/* 不同类型标签的渐变样式 */
.van-tag--success {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.3) !important;
}

.van-tag--primary {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%) !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3) !important;
}

.van-tag--warning {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%) !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3) !important;
}

.van-tag--danger {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%) !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3) !important;
}

.van-tag--default {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%) !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(107, 114, 128, 0.3) !important;
}

.van-tag--pink {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%) !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(236, 72, 153, 0.3) !important;
}

/* 鼓励作者卡片特殊样式 */
.category-card.support {
  border: 2rpx solid rgba(236, 72, 153, 0.3);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(253, 242, 248, 0.95) 100%);
  position: relative;
  overflow: hidden;
}

.category-card.support::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(236, 72, 153, 0.1) 0%, transparent 70%);
  animation: heartBeat 3s ease-in-out infinite;
  z-index: 0;
}

.category-card.support .category-icon,
.category-card.support .category-title,
.category-card.support .category-desc,
.category-card.support .category-count {
  position: relative;
  z-index: 1;
}

@keyframes heartBeat {
  0%, 100% {
    transform: scale(1);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.3;
  }
}

.category-card.support:hover {
  border: 2rpx solid rgba(236, 72, 153, 0.6);
  box-shadow: 
    0 12rpx 48rpx rgba(236, 72, 153, 0.2),
    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 3rpx rgba(236, 72, 153, 0.15);
  transform: translateY(-4rpx);
}

.category-card.support .category-icon {
  animation: heartPulse 2s ease-in-out infinite;
}

@keyframes heartPulse {
  0%, 100% {
    transform: scale(1) translateY(0);
  }
  25% {
    transform: scale(1.1) translateY(-2rpx);
  }
  50% {
    transform: scale(1.05) translateY(-4rpx);
  }
  75% {
    transform: scale(1.1) translateY(-2rpx);
  }
}

/* 高亮脉冲动画 */
.category-card.highlight-pulse {
  animation: highlightPulse 2s ease-in-out;
  border: 2rpx solid rgba(236, 72, 153, 0.8) !important;
  box-shadow: 
    0 0 20rpx rgba(236, 72, 153, 0.4),
    0 0 40rpx rgba(236, 72, 153, 0.2) !important;
}

@keyframes highlightPulse {
  0%, 100% {
    box-shadow: 
      0 12rpx 48rpx rgba(236, 72, 153, 0.2),
      0 0 0 1rpx rgba(255, 255, 255, 0.2),
      0 0 0 3rpx rgba(236, 72, 153, 0.15);
  }
  50% {
    box-shadow: 
      0 16rpx 64rpx rgba(236, 72, 153, 0.4),
      0 0 20rpx rgba(236, 72, 153, 0.3),
      0 0 40rpx rgba(236, 72, 153, 0.2);
  }
}

/* 广告计数器样式 */
.ad-counter {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
  color: white;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(236, 72, 153, 0.3);
  z-index: 2;
}

.counter-number {
  line-height: 1;
}

/* 功能说明区域 */
.tips-section {
  margin: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.8s ease-out 0.4s both;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
}

.tip-item {
  margin: 8rpx 0;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .categories-grid {
    grid-template-columns: 1fr;
  }
  
  .category-card {
    padding: 24rpx;
  }
  
  .category-icon {
    font-size: 50rpx;
  }
  
  .category-title {
    font-size: 28rpx;
  }
}

@media (min-width: 1200px) {
  .categories-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}