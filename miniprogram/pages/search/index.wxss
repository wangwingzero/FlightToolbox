/* 资料查询页面样式 */

.page-content {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 页面标题区域 */
.page-header {
  text-align: center;
  padding: 20rpx 0 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -20rpx -20rpx 30rpx -20rpx;
  border-radius: 0 0 30rpx 30rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 资料卡片网格 */
.categories-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 单个资料卡片 */
.category-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-card:nth-child(1) { animation-delay: 0.1s; }
.category-card:nth-child(2) { animation-delay: 0.2s; }
.category-card:nth-child(3) { animation-delay: 0.3s; }
.category-card:nth-child(4) { animation-delay: 0.4s; }
.category-card:nth-child(5) { animation-delay: 0.5s; }

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.category-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(79, 70, 229, 0.2),
    0 0 0 2rpx rgba(79, 70, 229, 0.1);
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.category-card:active::before {
  left: 100%;
}

.category-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.category-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

/* 积分标签 - 位于右上角 */
.category-points {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 2;
}

/* 数据量标签 - 位于底部 */
.category-count {
  display: flex;
  justify-content: center;
  margin-top: 8rpx;
}

/* 功能说明区域 */
.tips-section {
  margin: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.8s ease-out 0.4s both;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
}

.tip-item {
  margin: 8rpx 0;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .categories-grid {
    grid-template-columns: 1fr;
  }
  
  .category-card {
    padding: 24rpx;
  }
  
  .category-icon {
    font-size: 50rpx;
  }
  
  .category-title {
    font-size: 28rpx;
  }
}

@media (min-width: 1200px) {
  .categories-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}