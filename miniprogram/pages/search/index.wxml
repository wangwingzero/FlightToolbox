<view class="container page-content">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="header-title">📚 资料查询</view>
    <view class="header-subtitle">航空专业资料查询入口</view>
  </view>

  <!-- 资料卡片网格 -->
  <view class="categories-grid">
    <view 
      wx:for="{{ categories }}" 
      wx:key="id"
      class="category-card" 
      bind:tap="onCategoryClick" 
      data-category="{{ item }}"
    >
      <view class="category-icon">{{ item.icon }}</view>
      <view class="category-title">{{ item.title }}</view>
      <view class="category-desc">{{ item.description }}</view>
      <view class="category-count">
        <van-tag type="{{ item.tagType }}" size="mini">{{ item.count }}</van-tag>
      </view>
    </view>
  </view>

  <!-- 功能说明 -->
  <view class="tips-section">
    <view class="tips-title">💡 使用说明</view>
    <view class="tips-content">
      <view class="tip-item">• 提供民航局最新规章制度查询</view>
      <view class="tip-item">• 包含CCAR规章及配套规范性文件</view>
      <view class="tip-item">• 支持分类浏览和关键字搜索</view>
      <view class="tip-item">• 支持离线使用，无需网络连接</view>
      <view class="tip-item">• 点击规章可复制下载链接</view>
    </view>
  </view>
</view>

<van-toast id="van-toast" />