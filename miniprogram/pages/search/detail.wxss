/* 定义内容专用样式 */
.detail-section.definition-content .detail-label {
  background: linear-gradient(135deg, #d97706 0%, #f59e0b 100%);
  box-shadow: 
    0 4rpx 16rpx rgba(217, 119, 6, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.detail-section.definition-content .detail-label::before {
  background: #fbbf24;
  box-shadow: 0 0 12rpx rgba(251, 191, 36, 0.8);
}

