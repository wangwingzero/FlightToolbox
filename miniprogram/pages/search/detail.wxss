/* 万能查询通用详情页面样式 */

/* ================================= 
   基础页面设置 - Context7 Foundation
   ================================= */

.container {
  min-height: 100vh;
  background: 
    linear-gradient(135deg, #f8fafc 0%, #f1f5f9 20%, #e2e8f0 40%, #f8fafc 60%, #f0f9ff 80%, #f8fafc 100%),
    radial-gradient(circle at 30% 40%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(168, 85, 247, 0.03) 0%, transparent 50%);
  padding: 0;
  box-sizing: border-box;
  position: relative;
  overflow-x: hidden;
}

/* Context7风格的全局覆盖层 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.06) 0%, transparent 60%),
    radial-gradient(circle at 80% 70%, rgba(168, 85, 247, 0.06) 0%, transparent 60%),
    radial-gradient(circle at 50% 50%, rgba(34, 197, 94, 0.03) 0%, transparent 80%);
  pointer-events: none;
  z-index: 0;
  animation: overlayPulse 12s ease-in-out infinite;
}

@keyframes overlayPulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 确保所有内容在覆盖层之上 */
.container > view {
  position: relative;
  z-index: 1;
}

/* ================================= 
   分享按钮 - Context7 Navigation
   ================================= */

.share-button-container {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 32rpx;
  position: relative;
  z-index: 100;
}

.share-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #6366f1;
  transition: all 0.3s ease;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(99, 102, 241, 0.1);
  backdrop-filter: blur(10rpx);
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.share-button:active {
  transform: scale(0.95);
  background: rgba(99, 102, 241, 0.15);
}

.share-text {
  margin-left: 8rpx;
  font-weight: 600;
}

/* ================================= 
   内容区域 - Context7 Content Design
   ================================= */

.detail-content {
  padding: 32rpx;
  animation: contentFadeIn 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes contentFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.content-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(32rpx) saturate(180%);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(148, 163, 184, 0.12),
    0 16rpx 64rpx rgba(148, 163, 184, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.3);
  position: relative;
  overflow: hidden;
}

.content-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(135deg, 
    rgba(99, 102, 241, 0.8) 0%, 
    rgba(168, 85, 247, 0.6) 50%, 
    rgba(99, 102, 241, 0.4) 100%);
  border-radius: 32rpx 32rpx 0 0;
}

/* ================================= 
   详情区块 - Context7 Detail Sections
   ================================= */

.detail-section {
  margin-bottom: 32rpx;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  box-shadow: none;
  transition: all 0.3s ease;
  position: relative;
}

.detail-section:last-child {
  margin-bottom: 0;
}

/* 航空数据标签设计 - 关键信息突出显示 */
.detail-label {
  display: inline-flex;
  align-items: center;
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
  text-transform: uppercase;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  width: fit-content;
  background: linear-gradient(135deg, #374151 0%, #4b5563 100%);
  box-shadow: 
    0 2rpx 8rpx rgba(55, 65, 81, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.detail-label::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 6rpx;
  background: #10b981;
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(16, 185, 129, 0.6);
}

/* 航空数据值容器 - 飞行员友好设计 */
.detail-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.5;
  letter-spacing: 0.5rpx;
  word-wrap: break-word;
  word-break: break-all;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx) saturate(180%);
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(229, 231, 235, 0.8);
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: relative;
  margin-bottom: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.detail-value:hover {
  transform: translateY(-1rpx);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

/* ================================= 
   特殊内容样式 - 不同类型的专用样式
   ================================= */

