.airport-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #059669;
  background: linear-gradient(135deg, rgba(5, 150, 105, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
  border: 2rpx solid rgba(5, 150, 105, 0.2);
}

.code-value {
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  letter-spacing: 2rpx;
}

.communication-english {
  font-size: 30rpx;
  font-weight: 600;
  color: #ea580c;
  font-style: italic;
  background: linear-gradient(135deg, rgba(234, 88, 12, 0.1) 0%, rgba(249, 115, 22, 0.05) 100%);
  border: 2rpx solid rgba(234, 88, 12, 0.2);
}

.regulation-number {
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  font-size: 32rpx;
  font-weight: 700;
  color: #dc2626;
  text-align: center;
  background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(239, 68, 68, 0.05) 100%);
  border: 2rpx solid rgba(220, 38, 38, 0.2);
}

/* ================================= 
   标签和徽章样式
   ================================= */

.detail-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

/* ================================= 
   CCAR规章特殊样式
   ================================= */

.ccar-regulation-header {
  text-align: center;
  padding: 32rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, 
    rgba(255, 193, 7, 0.15) 0%, 
    rgba(255, 235, 59, 0.1) 50%,
    rgba(255, 193, 7, 0.05) 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 193, 7, 0.3);
  position: relative;
  overflow: hidden;
}

.ccar-regulation-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
  animation: goldShimmer 3s ease-in-out infinite;
}

@keyframes goldShimmer {
  0%, 100% { transform: rotate(0deg) scale(1); opacity: 0.5; }
  50% { transform: rotate(180deg) scale(1.1); opacity: 0.8; }
}

.ccar-icon {
  color: #f59e0b;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(245, 158, 11, 0.3));
}

.ccar-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #92400e;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
}

.ccar-subtitle {
  font-size: 24rpx;
  color: #a16207;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* ================================= 
   操作区域
   ================================= */

.action-section {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid rgba(226, 232, 240, 0.5);
  text-align: center;
}

.copy-link-button {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%) !important;
  border: none !important;
  border-radius: 24rpx !important;
  box-shadow: 
    0 4rpx 16rpx rgba(99, 102, 241, 0.3),
    0 8rpx 32rpx rgba(99, 102, 241, 0.15) !important;
  font-weight: 600 !important;
  letter-spacing: 1rpx !important;
}

.copy-link-button:active {
  transform: scale(0.95);
  box-shadow: 
    0 2rpx 8rpx rgba(99, 102, 241, 0.4),
    0 4rpx 16rpx rgba(99, 102, 241, 0.2) !important;
}

/* ================================= 
   加载和空状态
   ================================= */

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.back-button-empty {
  margin-top: 32rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%) !important;
  border: none !important;
  border-radius: 24rpx !important;
  box-shadow: 
    0 4rpx 16rpx rgba(99, 102, 241, 0.3),
    0 8rpx 32rpx rgba(99, 102, 241, 0.15) !important;
}

/* ================================= 
   深色模式支持
   ================================= */

.container[data-theme="dark"] {
  background: 
    linear-gradient(135deg, #0f172a 0%, #1e293b 20%, #334155 40%, #1e293b 60%, #0f172a 80%, #1e293b 100%),
    radial-gradient(circle at 30% 40%, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(168, 85, 247, 0.08) 0%, transparent 50%);
}

.container[data-theme="dark"] .share-button {
  color: #8b5cf6;
  background: rgba(139, 92, 246, 0.15);
}

.container[data-theme="dark"] .content-card {
  background: rgba(30, 41, 59, 0.95);
  border-color: rgba(71, 85, 105, 0.3);
}

.container[data-theme="dark"] .detail-value {
  background: rgba(15, 23, 42, 0.95);
  color: #f1f5f9;
  border-color: rgba(71, 85, 105, 0.8);
}

/* ================================= 
   响应式适配
   ================================= */

@media screen and (max-width: 375px) {
  .detail-header {
    padding: 24rpx 32rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .detail-content {
    padding: 24rpx;
  }
  
  .content-card {
    padding: 32rpx 24rpx;
  }
  
  .detail-value {
    font-size: 28rpx;
    padding: 20rpx 24rpx;
  }
}