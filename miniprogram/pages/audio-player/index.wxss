/* 音频播放页面样式 */

/* ========== 基础容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #16a085 0%, #27ae60 50%, #2ecc71 100%);
  position: relative;
  overflow-x: hidden;
}

/* 动态背景效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(22, 160, 133, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(46, 204, 113, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(39, 174, 96, 0.2) 0%, transparent 50%);
  animation: backgroundFloat 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes backgroundFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(1deg); }
  66% { transform: translateY(10px) rotate(-1deg); }
}

/* ========== 页面标题 ========== */
.page-header {
  text-align: center;
  padding: 40rpx 32rpx 30rpx 32rpx;
  position: relative;
  z-index: 10;
}

.header-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    0 0 20rpx rgba(255, 255, 255, 0.5);
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* ========== 录音信息卡片 ========== */
.audio-info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.clip-number-large {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 学习状态toggle切换开关 */
.learned-status-switcher {
  display: flex;
  align-items: center;
  gap: 10rpx;
  cursor: pointer;
  padding: 10rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.learned-status-switcher:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.05);
}

.learned-toggle {
  display: flex;
  align-items: center;
}

.toggle-track {
  position: relative;
  width: 60rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
}

/* 已学会状态 - 绿色 */
.learned-toggle.learned .toggle-track {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-color: #059669;
}

/* 未学会状态 - 红色 */
.learned-toggle.unlearned .toggle-track {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  border-color: #dc2626;
}

.toggle-thumb {
  position: absolute;
  top: 3rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  left: 3rpx;
}

/* 已学会时滑块向右 */
.learned-toggle.learned .toggle-thumb {
  transform: translateX(28rpx);
}

/* 未学会时滑块在左边 */
.learned-toggle.unlearned .toggle-thumb {
  transform: translateX(0);
}

.learned-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
  transition: all 0.3s ease;
}

/* 已学会时文字为绿色 */
.learned-toggle.learned ~ .learned-text {
  color: #059669;
}

/* 未学会时文字为红色 */
.learned-toggle.unlearned ~ .learned-text {
  color: #dc2626;
}

.info-content {
  text-align: center;
}

.clip-label-large {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 600;
  margin-bottom: 16rpx;
  background: rgba(59, 130, 246, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.clip-title-large {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.clip-subtitle-large {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.3;
}

/* ========== 播放器控制面板 ========== */
.player-controls {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

/* 进度条 */
.audio-progress {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #1d4ed8);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-time {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

/* 播放控制按钮 */
.control-buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  margin: 32rpx 0;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #3b82f6;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.play-pause-large {
  width: 100rpx;
  height: 100rpx;
  font-size: 48rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.control-btn:active {
  transform: scale(0.9);
}

.control-btn.active {
  background: #3b82f6;
  color: white;
}

/* 音量控制 */
.volume-control {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 16rpx 0;
}

.volume-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
}

/* 功能开关 */
.feature-controls {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 16rpx 0;
}

.control-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.control-item:last-child {
  margin-bottom: 0;
}

.control-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

/* 语言选择 */
.language-selector {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.lang-btn {
  flex: 1;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  text-align: center;
  font-size: 24rpx;
  color: #6b7280;
  transition: all 0.2s ease;
}

.lang-btn.active {
  background: #3b82f6;
  color: white;
  border-color: #3b82f6;
}

/* ========== 字幕显示 ========== */
.subtitle-display {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

.subtitle-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #1f2937;
  text-align: center;
}

/* ========== 录音列表预览 ========== */
.clips-preview {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

.preview-header {
  padding: 24rpx 32rpx 16rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.clips-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.clip-preview-item {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.clip-preview-item:last-child {
  border-bottom: none;
}

.clip-preview-item.active {
  background: rgba(59, 130, 246, 0.1);
}

.clip-preview-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.preview-number {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.preview-content {
  flex: 1;
  min-width: 0;
}

.preview-label {
  font-size: 20rpx;
  color: #3b82f6;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.preview-title {
  font-size: 24rpx;
  color: #1f2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.preview-status {
  font-size: 32rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  min-width: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ========== 响应式适配 ========== */
@media (max-width: 400px) {
  .clip-number-large {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }

  /* 响应式适配：学习状态toggle切换开关 */
  .learned-text {
    font-size: 22rpx;
  }

  .toggle-track {
    width: 54rpx;
    height: 28rpx;
  }

  .toggle-thumb {
    width: 22rpx;
    height: 22rpx;
  }

  .learned-toggle.learned .toggle-thumb {
    transform: translateX(26rpx);
  }

  .play-pause-large {
    width: 90rpx;
    height: 90rpx;
    font-size: 44rpx;
  }
  
  .control-btn {
    width: 70rpx;
    height: 70rpx;
    font-size: 36rpx;
  }
}

/* 广告容器样式 */
.ad-container {
  margin: 32rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 底部广告特殊样式 */
.ad-container.bottom-ad {
  margin-top: 48rpx;
  margin-bottom: 32rpx;
}