/* 音频播放器 - 全新UI设计 */

/* ========== 全局容器 ========== */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
}

/* ========== 页面头部 ========== */
.page-header {
  text-align: center;
  padding: 40rpx 20rpx 30rpx 20rpx;
  color: #ffffff;
}

.header-title {
  font-size: 52rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.header-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.header-progress {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  backdrop-filter: blur(10rpx);
}

.progress-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

/* ========== 主播放器卡片 ========== */
.main-player-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.12),
    0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 录音信息 */
.audio-info {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.audio-number-badge {
  display: inline-block;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.audio-label {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 12rpx;
}

/* 录音文本区域 - 可点击 */
.audio-transcript {
  min-height: 100rpx;
  margin-top: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* 点击提示状态 */
.transcript-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  border: 2rpx dashed #D1D5DB;
  border-radius: 16rpx;
  background: #F9FAFB;
  transition: all 0.3s ease;
}

.transcript-hint:active {
  background: #F3F4F6;
  transform: scale(0.98);
}

.hint-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  animation: bounce 2s infinite ease-in-out;
}

.hint-text {
  font-size: 28rpx;
  color: #6B7280;
  font-weight: 500;
}

/* 字幕内容显示状态 */
.transcript-content {
  padding: 30rpx 24rpx;
  line-height: 1.8;
  font-size: 28rpx;
  color: #1F2937;
  background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
  border-radius: 16rpx;
  border: 2rpx solid #3B82F6;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.1);
}

/* 跳动动画 */
@keyframes bounce {
  0%, 100% { 
    transform: translateY(0); 
  }
  50% { 
    transform: translateY(-10rpx); 
  }
}

/* 进度条区域 */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-bar-wrapper {
  padding: 0 8rpx;
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 6rpx;
  overflow: visible;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  position: relative;
  transition: width 0.3s ease;
}

.progress-dot {
  position: absolute;
  right: -6rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  background: #ffffff;
  border: 4rpx solid #667eea;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.time-display {
  display: flex;
  justify-content: space-between;
  padding: 0 8rpx;
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* 主控制区 */
.main-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
}

.control-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  border-radius: 24rpx;
  background: #f9fafb;
  transition: all 0.3s ease;
  cursor: pointer;
  min-width: 140rpx;
}

.control-button.secondary {
  flex: 0 0 auto;
}

.control-button.primary {
  flex: 1;
  max-width: 240rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  padding: 32rpx 20rpx;
}

.control-button:active {
  transform: scale(0.95);
}

.button-icon {
  font-size: 40rpx;
  color: #4b5563;
  font-weight: 700;
  line-height: 1;
}

.control-button.primary .button-icon {
  font-size: 56rpx;
  color: #ffffff;
}

.button-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #6b7280;
  white-space: nowrap;
}

.control-button.primary .button-label {
  color: #ffffff;
  font-size: 28rpx;
}

/* 播放状态动画 */
.control-button.primary.playing {
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  }
  50% {
    box-shadow: 0 12rpx 36rpx rgba(102, 126, 234, 0.5);
  }
}

/* ========== 功能卡片区域 ========== */
.function-cards {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.function-card {
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 3rpx solid transparent;
}

.function-card:active {
  transform: scale(0.98);
}

.function-card.learned {
  border-color: #10b981;
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.function-card.unlearned {
  border-color: #ef4444;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
}

.function-card.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
}

.card-icon {
  width: 56rpx;
  height: 56rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.function-card.learned .card-icon {
  color: #10b981;
}

.function-card.unlearned .card-icon {
  color: #ef4444;
}

.function-card.active .card-icon {
  color: #667eea;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-hint {
  font-size: 20rpx;
  color: #6b7280;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ========== 设置卡片 ========== */
.settings-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.settings-header {
  margin-bottom: 24rpx;
}

.settings-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.setting-item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.setting-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.setting-item.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.setting-item.row .setting-label {
  margin-bottom: 0;
}

.label-icon {
  font-size: 32rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.label-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #667eea;
  margin-left: auto;
}

.volume-slider {
  width: 100%;
}

/* ========== 播放列表卡片 ========== */
.playlist-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.playlist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  border-bottom: 2rpx solid #e5e7eb;
}

.playlist-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.playlist-count {
  font-size: 24rpx;
  font-weight: 600;
  color: #667eea;
  background: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

.playlist-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.playlist-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f3f4f6;
  transition: all 0.3s ease;
  cursor: pointer;
}

.playlist-item:last-child {
  border-bottom: none;
}

.playlist-item:active {
  background: #f9fafb;
}

.playlist-item.playing {
  background: linear-gradient(90deg, #e0e7ff 0%, #f0f4ff 100%);
  border-left: 6rpx solid #667eea;
}

.item-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.playlist-item.playing .item-number {
  background: linear-gradient(135deg, #764ba2, #667eea);
  animation: numberPulse 1.5s ease-in-out infinite;
}

@keyframes numberPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.item-info {
  flex: 1;
  min-width: 0;
  margin-right: 16rpx;
}

.item-label {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-preview {
  font-size: 26rpx;
  color: #4b5563;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.playlist-item.learned .item-preview {
  color: #1f2937;
}

.item-status {
  flex-shrink: 0;
}

.status-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
}

.status-badge.learned {
  background: linear-gradient(135deg, #d1fae5, #a7f3d0);
  color: #10b981;
}

.status-badge.unlearned {
  background: #f3f4f6;
  color: #9ca3af;
  border: 2rpx solid #e5e7eb;
}

/* ========== 广告区域 ========== */
.ad-section {
  margin: 32rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: 40rpx;
}

/* ========== 响应式设计 ========== */
@media (max-width: 400px) {
  .header-title {
    font-size: 44rpx;
  }

  .control-button {
    min-width: 120rpx;
    padding: 16rpx;
  }

  .control-button.primary {
    padding: 28rpx 16rpx;
  }

  .button-icon {
    font-size: 36rpx;
  }

  .control-button.primary .button-icon {
    font-size: 48rpx;
  }

  .button-label {
    font-size: 22rpx;
  }

  .function-card {
    padding: 20rpx 16rpx;
  }

  .card-icon {
    width: 48rpx;
    height: 48rpx;
    font-size: 28rpx;
  }

  .card-title {
    font-size: 26rpx;
  }

  .card-hint {
    font-size: 18rpx;
  }
}

/* ========== 自定义滚动条 ========== */
::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
}

::-webkit-scrollbar-track {
  background: #f3f4f6;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #764ba2, #667eea);
}
