/* 危险品查询页面样式 */

.container {
  padding: 0 16rpx !important;
  margin: 0 !important;
  background-color: #f7f8fa;
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
}

/* 现代化搜索框样式 */
.search-section {
  padding: 20rpx 32rpx;
  background-color: #f7f8fa;
  margin-bottom: 20rpx;
}

/* 搜索图标插槽样式 */
.search-icon-slot {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: 50%;
  margin-right: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.25);
}

.search-icon-slot:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

.search-icon {
  font-size: 32rpx !important;
  color: white !important;
}

/* 标签页内容样式 */
.loading-section {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.results-section {
  padding: 20rpx;
}

/* 携带规定样式 */
.regulation-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.regulation-status {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

/* 应急响应样式 */
.emergency-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.emergency-code {
  display: flex;
  align-items: center;
}

/* 隐含危险品样式 */
.hidden-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 统计信息样式 */
.stats-section {
  padding: 40rpx 32rpx;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 16rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 标签页优化 */
.van-tabs {
  background: #fff;
}

.van-tab {
  font-weight: 500;
}

/* Cell组件优化 */
.van-cell-group {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.van-cell {
  border-radius: 0;
}

.van-cell:first-child {
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.van-cell:last-child {
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

/* Tag组件优化 */
.van-tag--success {
  background-color: #07c160;
  border-color: #07c160;
}

.van-tag--primary {
  background-color: #1989fa;
  border-color: #1989fa;
}

.van-tag--danger {
  background-color: #ee0a24;
  border-color: #ee0a24;
}

.van-tag--warning {
  background-color: #ff976a;
  border-color: #ff976a;
}

/* 空状态优化 */
.van-empty {
  padding: 60rpx 0;
}

/* 详情弹窗样式 */
.detail-popup-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f7f8fa;
}

/* 弹窗标题栏 */
.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: sticky;
  top: 0;
  z-index: 100;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  font-size: 40rpx;
  color: white;
  opacity: 0.8;
}

/* 滚动内容区域 */
.detail-content {
  flex: 1;
  padding: 20rpx;
  height: calc(70vh - 120rpx - 120rpx); /* 减去标题栏和底部栏高度 */
  overflow-y: auto;
  overflow-x: hidden;
}

.detail-section {
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 携带条件网格 */
.conditions-grid {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background-color: white;
}

.condition-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.condition-item.allowed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
}

.condition-item.forbidden {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 2rpx solid #ffadd2;
}

.condition-item van-icon {
  margin-bottom: 8rpx;
  font-size: 32rpx;
}

/* 特殊条件 */
.special-conditions {
  padding: 24rpx;
  background-color: white;
}

.special-conditions van-notice-bar {
  margin-bottom: 16rpx;
}

.special-note {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #fffbe6;
  border: 2rpx solid #ffe58f;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.note-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #d48806;
}

/* 描述内容 */
.description-content {
  padding: 24rpx;
  background-color: white;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

.description-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  overflow: visible;
  text-overflow: inherit;
  max-width: 100%;
  width: 100%;
  box-sizing: border-box;
  display: block;
}

/* 危险类型 */
.hazard-item {
  padding: 24rpx;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.hazard-item:last-child {
  border-bottom: none;
}

.hazard-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.hazard-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  padding-left: 44rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  overflow: visible;
  display: block;
}

/* 应急程序 */
.procedure-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  padding: 24rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  overflow: visible;
  display: block;
  width: 100%;
  box-sizing: border-box;
}

/* 可能包含的物品 */
.possible-items {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 24rpx;
  background-color: white;
}

.item-tag {
  margin: 0 !important;
}

/* 底部操作栏 */
.detail-footer {
  padding: 24rpx 32rpx;
  background-color: white;
  border-top: 1rpx solid #f0f0f0;
  position: sticky;
  bottom: 0;
  z-index: 100;
}

/* 原有的列表样式优化 */
.regulation-cell,
.emergency-cell,
.hidden-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.regulation-status,
.emergency-code {
  display: flex;
  gap: 8rpx;
  align-items: center;
} 