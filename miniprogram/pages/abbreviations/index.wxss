/* Context7风格的有效性筛选按钮样式 */
/* Framework7官方Segmented Strong样式 */
.validity-filter-section {
  padding: 16px;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  margin: 8px 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Framework7 Segmented Strong 样式 */
.segmented {
  display: flex;
  background: rgba(0, 0, 0, 0.07);
  border-radius: 8px;
  padding: 4px;
  position: relative;
  overflow: hidden;
}

.segmented.segmented-strong {
  background: rgba(0, 0, 0, 0.07);
}

.segmented .button {
  flex: 1;
  background: transparent;
  border: none;
  color: #000;
  font-size: 14px;
  font-weight: 500;
  padding: 8px 16px;
  border-radius: 6px;
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
  min-height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.segmented .button.button-active {
  background: #fff;
  color: #000;
  font-weight: 600;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.15);
}

.segmented .button:active {
  transform: scale(0.98);
}

/* 高亮指示器 */
.segmented-highlight {
  position: absolute;
  top: 4px;
  bottom: 4px;
  background: #fff;
  border-radius: 6px;
  transition: all 0.3s ease;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.15);
  z-index: 1;
  width: calc(33.333% - 4px);
  left: 4px;
}

/* 根据活跃按钮调整高亮位置 */
.segmented .button:nth-child(1).button-active ~ .segmented-highlight {
  transform: translateX(0);
}

.segmented .button:nth-child(2).button-active ~ .segmented-highlight {
  transform: translateX(calc(100% + 4px));
}

.segmented .button:nth-child(3).button-active ~ .segmented-highlight {
  transform: translateX(calc(200% + 8px));
}

/* 筛选统计样式 */
.filter-stats {
  margin-top: 12px;
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8px;
  font-size: 12px;
  color: #666;
  text-align: center;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.filter-type {
  color: #007bff;
  font-weight: 600;
  margin-left: 4px;
}

/* 深色模式支持 */
