/* 万能查询样式 - Material Design 3 + Ant Design Pro 美化版本 */

/* 页面容器 - 现代化渐变背景 */
.container {
  padding: 0 16rpx !important;
  margin: 0 !important;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 标签页系统 - Material Design 3 优化 */
.van-tabs {
  background: #ffffff;
  border-radius: 16rpx 16rpx 0 0;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.1);
  margin: 16rpx 0 0 0;
  overflow: hidden;
  position: relative;
}

.van-tabs__wrap {
  overflow-x: auto !important;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-bottom: 1px solid #e2e8f0;
  padding: 8rpx 0;
}

.van-tabs__scroll {
  position: relative;
}

.van-tabs__line {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border-radius: 4rpx !important;
  height: 6rpx !important;
}

.van-tab {
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.van-tab__text {
  font-weight: 500 !important;
  font-size: 28rpx !important;
  color: #64748b !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.van-tab--active .van-tab__text {
  color: #667eea !important;
  font-weight: 600 !important;
  text-shadow: 0 1rpx 2rpx rgba(102, 126, 234, 0.1);
}

.van-tab:hover .van-tab__text {
  color: #667eea !important;
  transform: translateY(-1rpx);
}

/* 搜索区域 - Pro Components 风格 */
.search-section {
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-bottom: 1rpx solid #e2e8f0;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.1);
  position: relative;
  overflow: hidden;
}

.search-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 25%, #52c41a 50%, #ff9a56 75%, #722ed1 100%);
}

/* 搜索框美化 - Material Design 3 */
.search-section .van-search {
  background: transparent !important;
}

.search-section .van-search__content {
  background: rgba(255, 255, 255, 0.95) !important;
  border-radius: 28rpx !important;
  border: 2rpx solid rgba(148, 163, 184, 0.1) !important;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.1) !important;
  backdrop-filter: blur(12rpx) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.search-section .van-search__content:focus-within {
  border-color: rgba(102, 126, 234, 0.3) !important;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.2) !important;
  transform: translateY(-2rpx);
}

.search-section .van-search__field {
  font-size: 28rpx !important;
  color: #1e293b !important;
}

.search-section .van-search__field::placeholder {
  color: #94a3b8 !important;
}

/* 搜索按钮 - Ant Design Pro 风格 */
.search-action-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  border-radius: 24rpx !important;
  color: #fff !important;
  font-weight: 600 !important;
  font-size: 28rpx !important;
  padding: 18rpx 36rpx !important;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  min-width: 120rpx !important;
  position: relative;
  overflow: hidden;
}

.search-action-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.search-action-button:active::before {
  width: 300rpx;
  height: 300rpx;
}

.search-action-button:active {
  transform: translateY(2rpx) scale(0.98) !important;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4) !important;
}

/* 不同标签页的搜索按钮主题色 - Pro Components 主题化 */

/* 缩写页面 - 蓝紫色渐变 */
.abbreviations-search .search-action-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3) !important;
}

.abbreviations-search .search-action-button:active {
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4) !important;
}

/* 定义页面 - 绿色渐变 */
.definitions-search .search-action-button {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%) !important;
  box-shadow: 0 6rpx 20rpx rgba(82, 196, 26, 0.3) !important;
}

.definitions-search .search-action-button:active {
  box-shadow: 0 4rpx 15rpx rgba(82, 196, 26, 0.4) !important;
}

/* 机场页面 - 橙红色渐变 */
.airports-search .search-action-button {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%) !important;
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 86, 0.3) !important;
}

.airports-search .search-action-button:active {
  box-shadow: 0 4rpx 15rpx rgba(255, 154, 86, 0.4) !important;
}

/* 通信页面 - 紫色渐变 */
.communications-search .search-action-button {
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%) !important;
  box-shadow: 0 6rpx 20rpx rgba(114, 46, 209, 0.3) !important;
}

.communications-search .search-action-button:active {
  box-shadow: 0 4rpx 15rpx rgba(114, 46, 209, 0.4) !important;
}

/* 规章页面 - 金色渐变 */
.normative-search .search-action-button {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%) !important;
  box-shadow: 0 6rpx 20rpx rgba(250, 173, 20, 0.3) !important;
}

.normative-search .search-action-button:active {
  box-shadow: 0 4rpx 15rpx rgba(250, 173, 20, 0.4) !important;
}

/* 字母分组区域 - StatisticCard 风格 */
.letter-groups-section {
  padding: 24rpx 20rpx;
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideInUp {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 36rpx;
  text-align: center;
  position: relative;
  padding-bottom: 16rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

/* 字母项卡片 - Pro Components Card 设计 */
.custom-letter-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.custom-letter-item::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  border-radius: 22rpx;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.custom-letter-item:hover {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
}

.custom-letter-item:hover::before {
  opacity: 1;
}

.custom-letter-item:active {
  transform: translateY(-2rpx) scale(1.01);
}

/* 机场字母项样式 - 橙红色渐变 */
.airport-letter-item {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%) !important;
  box-shadow: 0 8rpx 32rpx rgba(255, 154, 86, 0.3) !important;
}

.airport-letter-item:hover {
  box-shadow: 0 12rpx 40rpx rgba(255, 154, 86, 0.4) !important;
}

/* 定义字母项样式 - 绿色渐变 */
.definition-letter-item {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%) !important;
  box-shadow: 0 8rpx 32rpx rgba(82, 196, 26, 0.3) !important;
}

.definition-letter-item:hover {
  box-shadow: 0 12rpx 40rpx rgba(82, 196, 26, 0.4) !important;
}

/* 通信字母项样式 - 紫色渐变 */
.communication-letter-item {
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%) !important;
  box-shadow: 0 8rpx 32rpx rgba(114, 46, 209, 0.3) !important;
}

.communication-letter-item:hover {
  box-shadow: 0 12rpx 40rpx rgba(114, 46, 209, 0.4) !important;
}

/* 规章字母项样式 - 金色渐变 */
.normative-letter-item {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%) !important;
  box-shadow: 0 8rpx 32rpx rgba(250, 173, 20, 0.3) !important;
}

.normative-letter-item:hover {
  box-shadow: 0 12rpx 40rpx rgba(250, 173, 20, 0.4) !important;
}

/* 字母图标 - Material Design 3 */
.letter-icon-large {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-right: 28rpx;
  flex-shrink: 0;
  text-align: center;
  line-height: 1;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.custom-letter-item:hover .letter-icon-large {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(1.1);
}

.letter-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.letter-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 6rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.letter-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.3;
}

.letter-count {
  font-size: 30rpx;
  color: #fff;
  font-weight: 700;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  min-width: 60rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.letter-arrow {
  font-size: 36rpx;
  color: #fff;
  font-weight: 700;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.custom-letter-item:hover .letter-arrow {
  transform: translateX(4rpx);
}

/* 统计信息卡片 - StatisticCard 风格 */
.stats-section {
  display: flex;
  justify-content: center;
  padding: 32rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  margin: 24rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(148, 163, 184, 0.1);
  border: 1rpx solid rgba(148, 163, 184, 0.05);
  position: relative;
  overflow: hidden;
}

.stats-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #52c41a 50%, #ff9a56 100%);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 48rpx;
  position: relative;
  animation: countUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes countUp {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.stats-number {
  font-size: 56rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
  text-align: center;
}

/* 详情列表样式 - Pro Components List */
.abbreviations-list, 
.definitions-list, 
.airports-list, 
.communications-list, 
.normative-categories {
  padding: 20rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.abbr-cell, 
.definition-cell, 
.airport-cell, 
.communication-cell {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.1);
  border: 1rpx solid rgba(148, 163, 184, 0.05);
}

.abbr-cell:hover,
.definition-cell:hover, 
.airport-cell:hover, 
.communication-cell:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(148, 163, 184, 0.15);
}

.abbr-cell .van-cell,
.definition-cell .van-cell,
.airport-cell .van-cell,
.communication-cell .van-cell {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%) !important;
}

/* 机场代码显示样式 - Pro Components 数据展示 */
.airport-codes {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.code-item {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
  padding: 4rpx 12rpx;
  background: rgba(25, 137, 250, 0.08);
  border-radius: 12rpx;
  border: 1rpx solid rgba(25, 137, 250, 0.1);
}

.code-label {
  font-size: 22rpx;
  color: #64748b;
  margin-right: 8rpx;
  font-weight: 500;
}

.code-value {
  font-size: 26rpx;
  color: #1989fa;
  font-weight: 700;
  font-family: 'SF Mono', 'Monaco', 'Cascadia Code', monospace;
  letter-spacing: 0.5rpx;
}

/* 字母详情页面 - Pro Components PageContainer 风格 */
.letter-detail-section {
  padding: 20rpx;
  animation: slideInRight 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideInRight {
  0% {
    opacity: 0;
    transform: translateX(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.back-cell {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.back-cell:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(148, 163, 184, 0.15);
}

.back-cell .van-cell {
  background: transparent !important;
}

.back-cell .van-cell__title {
  color: #1989fa !important;
  font-weight: 600 !important;
  font-size: 28rpx !important;
}

.back-cell .van-cell__left-icon {
  color: #1989fa !important;
  margin-right: 12rpx !important;
}

/* 搜索结果样式 - Pro Components 结果展示 */
.search-results-section {
  padding: 20rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-results-section .van-cell-group {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.1);
  border: 1rpx solid rgba(148, 163, 184, 0.05);
}

.search-results-section .van-cell-group__title {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%) !important;
  color: #1e293b !important;
  font-weight: 600 !important;
  font-size: 28rpx !important;
  padding: 20rpx 32rpx !important;
}

/* 详情弹窗样式 - Material Design 3 Modal */
.abbreviation-detail,
.definition-detail {
  padding: 48rpx;
  max-height: 80vh;
  overflow-y: auto;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
}

.abbreviation-header,
.definition-header {
  margin-bottom: 36rpx;
  border-bottom: 2rpx solid #e2e8f0;
  padding-bottom: 24rpx;
  position: relative;
}

.abbreviation-title,
.definition-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.abbreviation-english,
.definition-english {
  display: block;
  font-size: 30rpx;
  color: #64748b;
  font-style: italic;
  font-weight: 500;
}

.abbreviation-content,
.definition-content {
  margin-bottom: 36rpx;
}

.abbreviation-chinese {
  font-size: 32rpx;
  color: #1e293b;
  line-height: 1.6;
  font-weight: 500;
}

.abbreviation-pronunciation {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff7e6 0%, #fef3c7 100%);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.1);
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.1);
}

.pronunciation-label {
  font-size: 28rpx;
  color: #78716c;
  margin-right: 12rpx;
  font-weight: 500;
}

.pronunciation-text {
  font-size: 28rpx;
  color: #f59e0b;
  font-weight: 600;
  font-style: italic;
}

.abbreviation-source {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.1);
  box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.05);
}

/* 空状态样式 - Material Design 3 Empty State */
.van-empty {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%) !important;
  border-radius: 16rpx !important;
  margin: 20rpx !important;
  padding: 48rpx 24rpx !important;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.1) !important;
}

.van-empty__description {
  color: #64748b !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
}

/* Cell Group 全局美化 */
.van-cell-group {
  margin: 0 0 20rpx 0 !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.1) !important;
  border: 1rpx solid rgba(148, 163, 184, 0.05) !important;
}

.van-cell-group__title {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%) !important;
  color: #1e293b !important;
  font-weight: 600 !important;
  font-size: 28rpx !important;
  padding: 20rpx 32rpx !important;
  position: relative !important;
}

.van-cell-group__title::before {
  content: '';
  position: absolute;
  left: 32rpx;
  bottom: 0;
  width: 32rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

.van-cell {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.van-cell:hover {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%) !important;
}

.van-cell__title {
  font-weight: 500 !important;
  color: #1e293b !important;
}

.van-cell__value {
  color: #64748b !important;
  font-weight: 500 !important;
}

.van-cell__label {
  color: #94a3b8 !important;
  font-size: 24rpx !important;
}

/* Tag 组件美化 */
.van-tag {
  border-radius: 12rpx !important;
  font-weight: 600 !important;
  font-size: 22rpx !important;
  padding: 6rpx 12rpx !important;
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.2) !important;
}

/* 响应式设计 */
@media (max-width: 360px) {
  .section-title {
    font-size: 36rpx;
  }
  
  .letter-icon-large {
    width: 76rpx;
    height: 76rpx;
    font-size: 32rpx;
  }
  
  .stats-number {
    font-size: 48rpx;
  }
}

@media (min-width: 768px) {
  .container {
    max-width: 768rpx;
    margin: 0 auto;
  }
  
  .letter-groups-section {
    padding: 24rpx 40rpx;
  }
}

/* 深色模式兼容 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  }
  
  .van-tabs {
    background: #1e293b;
  }
  
  .section-title {
    color: #f1f5f9;
  }
  
  .stats-section {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  }
}

/* 无障碍访问支持 */
.custom-letter-item:focus,
.search-action-button:focus,
.back-cell:focus {
  outline: 2rpx solid #667eea;
  outline-offset: 4rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .custom-letter-item {
    border: 2rpx solid #000;
  }
  
  .search-action-button {
    border: 2rpx solid #000;
  }
}

 