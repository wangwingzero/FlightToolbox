/* 万能查询样式 */
.container {
  padding: 0 16rpx !important;
  margin: 0 !important;
  background-color: #f7f8fa;
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
}

.search-section {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-bottom: 1rpx solid #e6e8ff;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.1);
}

/* 搜索框美化 */
.search-section .van-search {
  background: transparent !important;
}

.search-section .van-search__content {
  background: rgba(255, 255, 255, 0.9) !important;
  border-radius: 24rpx !important;
  border: 2rpx solid rgba(102, 126, 234, 0.1) !important;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1) !important;
  backdrop-filter: blur(10rpx) !important;
}

.search-section .van-search__content:focus-within {
  border-color: rgba(102, 126, 234, 0.3) !important;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.2) !important;
}

/* 搜索按钮美化样式 */
.search-action-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  border-radius: 20rpx !important;
  color: #fff !important;
  font-weight: 600 !important;
  font-size: 28rpx !important;
  padding: 16rpx 32rpx !important;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3) !important;
  transition: all 0.3s ease !important;
  min-width: 120rpx !important;
}

.search-action-button:active {
  transform: translateY(2rpx) !important;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4) !important;
}

/* 规章搜索按钮组样式 */
