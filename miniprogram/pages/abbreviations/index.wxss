  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
  line-height: 1.5;
  letter-spacing: 1rpx;
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.definition-cell-label {
  margin-top: 4rpx;
}

.definition-cell-label .english-subtitle {
  display: block;
  font-size: 26rpx;
  font-weight: 400;
  color: #64748b;
  font-style: italic;
  opacity: 0.8;
  letter-spacing: 0.5rpx;
}