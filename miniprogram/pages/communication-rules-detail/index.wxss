}

.number-row:last-child {
  border-bottom: none;
}

.number-digit {
  width: 100rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #3B82F6;
  text-align: center;
}

.number-zh, .number-en {
  flex: 1;
  font-size: 30rpx;
  color: #1F2937;
  padding: 10rpx 20rpx;
  cursor: pointer;
  border-radius: 10rpx;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.number-zh:active, .number-en:active {
  background: rgba(59, 130, 246, 0.12);
  transform: scale(0.98);
}


.rule-text {
  font-size: 28rpx;
  color: #1F2937;
  line-height: 1.8;
  margin-bottom: 20rpx;
  padding: 20rpx 24rpx;
  background: rgba(59, 130, 246, 0.08);
  border-radius: 16rpx;
  border-left: 4rpx solid #3B82F6;
  box-shadow: 0 1rpx 4rpx rgba(59, 130, 246, 0.08);
}


/* 示例容器 - 精致卡片 */
