/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}


.empty-hint {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 广告容器 */
.ad-container {
  margin: 24rpx 32rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* ===== 响应式适配 ===== */
/* 小屏设备（iPhone SE等） */
@media (max-width: 375px) {
  .page-header {
    padding: 40rpx 28rpx 32rpx;
  }
  
  .header-title {
    font-size: 44rpx;
  }
  
  .header-subtitle {
    font-size: 24rpx;
  }
  
  .section-card {
    margin: 20rpx 28rpx;
    border-radius: 24rpx;
  }
  
  .section-header {
    padding: 28rpx 28rpx 24rpx;
    gap: 16rpx;
  }
  
  .section-icon {
    font-size: 48rpx;
  }
  
  .section-title {
    font-size: 34rpx;
  }
  
  .section-content {
    padding: 24rpx 28rpx 32rpx;
  }
  
  .text-content .text-item,
  .list-content .list-item {
    padding: 20rpx 24rpx;
    font-size: 30rpx;
  }
  
  .list-number {
    width: 48rpx;
    height: 48rpx;
    font-size: 24rpx;
  }
  
  .subsection-title {
    font-size: 32rpx;
  }
  
  .number-digit,
  .alphabet-letter {
    font-size: 34rpx;
  }
  
  .number-zh, .number-en,
  .alphabet-word, .alphabet-pronunciation {
    font-size: 28rpx;
  }
  
  .example-item {
    padding: 18rpx 22rpx;
  }
  
  .example-number, .example-altitude, .example-callsign,
  .example-time, .example-pressure, .example-frequency,
  .example-speed, .example-heading, .example-runway,
  .example-distance, .example-code, .example-coord,
  .example-type, .example-position {
    font-size: 30rpx;
  }
}