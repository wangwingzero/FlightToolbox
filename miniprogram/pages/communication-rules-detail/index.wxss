  font-weight: 700;
  color: #EF4444;
  margin-bottom: 12rpx;
}

.example-reading {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  padding: 12rpx 16rpx;
  background: rgba(249, 250, 251, 0.8);
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.example-reading:last-child {
  margin-bottom: 0;
}

.example-reading:active {
  background: rgba(241, 245, 249, 1);
  transform: scale(0.99);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}



.reading-label {
  font-size: 24rpx;
  color: #6B7280;
  min-width: 100rpx;
  font-weight: 600;
}

