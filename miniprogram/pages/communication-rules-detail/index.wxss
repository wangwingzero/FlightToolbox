/* 通信规范详情页面样式 - 现代iOS风格 */
.detail-container {
  padding: 0;
  background: linear-gradient(180deg, #F9FAFB 0%, #F2F2F7 100%);
  min-height: 100vh;
}

/* 页面标题 - 精致渐变 */
.page-header {
  padding: 44rpx 32rpx 36rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFBFC 100%);
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  z-index: 10;
}

/* 通话要求页头部 - 紫色 */
.detail-container.phraseologyRequirements .page-header {
  background: linear-gradient(135deg, #F3E8FF 0%, #FDFCFF 100%);
}

/* 发音规则页头部 - 蓝色 */
.detail-container.pronunciation .page-header {
  background: linear-gradient(135deg, #DBEAFE 0%, #F0F9FF 100%);
}

/* 标准用语页头部 - 橙色 */
.detail-container.standardPhrases .page-header {
  background: linear-gradient(135deg, #FFEDD5 0%, #FEF3C7 100%);
}

/* 呼号用法页头部 - 青色 */
.detail-container.callSignPhraseology .page-header {
  background: linear-gradient(135deg, #CFFAFE 0%, #E0F2FE 100%);
}

/* 天气报文页头部 - 绿色 */
.detail-container.weatherPhraseology .page-header {
  background: linear-gradient(135deg, #D1FAE5 0%, #ECFDF5 100%);
}

.header-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #000000;
  letter-spacing: -0.03em;
  margin-bottom: 12rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.header-subtitle {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
  letter-spacing: 0.01em;
}



/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 内容容器 */
.content-container {
  margin-bottom: 40rpx;
}

/* 章节卡片 - 现代卡片式 */
.section-card {
  background: #FFFFFF;
  margin: 24rpx 32rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-left: 6rpx solid #E5E7EB;
}

.section-card:first-child {
  margin-top: 24rpx;
}

.section-card:last-child {
  margin-bottom: 40rpx;
}

/* 通话要求 - 紫色accent */
.detail-container.phraseologyRequirements .section-card {
  border-left-color: #AF52DE;
}

/* 发音规则 - 蓝色accent */
.detail-container.pronunciation .section-card {
  border-left-color: #007AFF;
}

/* 标准用语 - 橙色accent */
.detail-container.standardPhrases .section-card {
  border-left-color: #FF9500;
}

/* 呼号用法 - 青色accent */
.detail-container.callSignPhraseology .section-card {
  border-left-color: #5AC8FA;
}

/* 天气报文 - 绿色accent */
.detail-container.weatherPhraseology .section-card {
  border-left-color: #34C759;
}


/* 章节标题 - 优雅设计 */
.section-header {
  display: flex;
  align-items: center;
  padding: 32rpx 32rpx 28rpx;
  gap: 20rpx;
  background: linear-gradient(180deg, #FAFBFC 0%, #FFFFFF 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.section-icon {
  font-size: 52rpx;
  flex-shrink: 0;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.section-info {
  flex: 1;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #000000;
  letter-spacing: -0.01em;
  line-height: 1.4;
}

/* 章节内容 - 清爽布局 */
.section-content {
  padding: 28rpx 32rpx 36rpx;
  background: linear-gradient(180deg, #FAFBFC 0%, #F9FAFB 100%);
}

/* 文本内容 - 优化可读性 */
.text-content .text-item {
  padding: 24rpx 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  line-height: 2;
  color: #1F2937;
  font-size: 32rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.text-content .text-item:active {
  background: #F8FAFC;
  border-color: #CBD5E1;
  transform: scale(0.985);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 列表内容 - 清晰层次 */
.list-content .list-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.list-content .list-item:active {
  background: #F8FAFC;
  border-color: #CBD5E1;
  transform: scale(0.985);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.list-number {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 
    0 4rpx 12rpx rgba(59, 130, 246, 0.35),
    0 2rpx 4rpx rgba(59, 130, 246, 0.2);
}

.list-text {
  flex: 1;
  line-height: 2;
  color: #1F2937;
  font-size: 32rpx;
  padding-top: 6rpx;
}


/* 通话结构内容 - 现代卡片 */
.structure-content .structure-item {
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
  background: rgba(155, 89, 182, 0.08);
  border-radius: 20rpx;
  border-left: 6rpx solid #9b59b6;
  box-shadow: 0 2rpx 8rpx rgba(155, 89, 182, 0.08);
}


.structure-scenario {
  font-size: 32rpx;
  font-weight: 700;
  color: #9b59b6;
  margin-bottom: 10rpx;
}

.structure-party {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
}


.structure-format {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.structure-format:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.99);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}



.format-label {
  font-size: 26rpx;
  color: #6B7280;
  min-width: 100rpx;
  font-weight: 600;
}

.format-text {
  font-size: 28rpx;
  color: #1F2937;
  font-family: 'SF Mono', 'Consolas', 'Monaco', monospace;
  flex: 1;
  font-weight: 500;
  line-height: 1.6;
}


.structure-note {
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 193, 7, 0.12);
  border-radius: 12rpx;
  border-left: 4rpx solid #FFC107;
  box-shadow: 0 1rpx 4rpx rgba(255, 193, 7, 0.08);
}

.note-label {
  font-size: 26rpx;
  color: #F59E0B;
  font-weight: 700;
}

.note-text {
  font-size: 26rpx;
  color: #1F2937;
  line-height: 1.7;
}


/* 数字发音内容 - 现代分组 */
.numbers-content .numbers-section {
  margin-bottom: 36rpx;
}

.subsection-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #3B82F6;
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.08) 0%, transparent 100%);
  border-radius: 8rpx;
}


.numbers-table {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(0, 0, 0, 0.04);
}


.number-row {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #F3F4F6;
