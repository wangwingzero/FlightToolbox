/* 标准通信用语页面样式 - 基于体检标准专业设计理念 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: 
    linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 20%, #bae6fd 40%, #f0f9ff 60%, #ecfdf5 80%, #f0f9ff 100%),
    radial-gradient(circle at 30% 40%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(34, 197, 94, 0.03) 0%, transparent 50%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载更多按钮样式 */
.load-more-container {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-more-btn {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 24rpx 40rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 123, 255, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.load-more-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 123, 255, 0.15),
    0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.loading-text, .load-more-text {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-direction: column;
}

.loading-label, .load-more-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #007bff;
  margin: 0;
}

.remaining-count {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
}

/* 加载完成提示样式 */
.load-complete-container {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-complete-text {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #28a745;
  font-weight: 500;
}

/* 搜索高亮样式 */
mark {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #92400e;
  padding: 3rpx 8rpx;
  border-radius: 10rpx;
  font-weight: 600;
  box-shadow:
    0 3rpx 12rpx rgba(251, 191, 36, 0.25),
    0 2rpx 6rpx rgba(251, 191, 36, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
  border: 1rpx solid rgba(251, 191, 36, 0.4);
  animation: highlightPulse 0.8s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  display: inline-block;
}

/* 中文标题中的高亮 */
.item-name-zh mark {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
  border-color: rgba(59, 130, 246, 0.3);
  box-shadow:
    0 3rpx 12rpx rgba(59, 130, 246, 0.2),
    0 2rpx 6rpx rgba(59, 130, 246, 0.1);
}

/* 英文内容中的高亮 */
.phrase-en mark,
.item-name-en mark {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  color: #0f62fe;
  border-color: rgba(15, 98, 254, 0.3);
  box-shadow:
    0 3rpx 12rpx rgba(15, 98, 254, 0.2),
    0 2rpx 6rpx rgba(15, 98, 254, 0.1);
  font-style: italic;
}

/* 中文内容中的高亮 */
.phrase-cn mark {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  color: #166534;
  border-color: rgba(34, 197, 94, 0.3);
  box-shadow:
    0 3rpx 12rpx rgba(34, 197, 94, 0.2),
    0 2rpx 6rpx rgba(34, 197, 94, 0.1);
}

/* 弹窗标题中的高亮 */
.popup-title mark,
.popup-subtitle mark {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  color: white;
  border-color: rgba(255, 255, 255, 0.4);
  box-shadow:
    0 3rpx 12rpx rgba(255, 255, 255, 0.2),
    0 2rpx 6rpx rgba(255, 255, 255, 0.1);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

@keyframes highlightPulse {
  0% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.08);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.95;
  }
}


/* 分类菜单系统 */
