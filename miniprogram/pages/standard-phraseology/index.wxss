/* 陆空通话页面样式 - 现代苹果风格 */

/* ===== 基础页面设置 ===== */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: #F2F2F7; /* iOS System Grouped Background */
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  position: relative;
  overflow-x: hidden;
}

/* ===== 模式切换器 (iOS Segmented Control) ===== */
.mode-switcher-container {
  padding: 16rpx 32rpx;
  background: #F2F2F7;
  position: sticky;
  top: 0;
  z-index: 200;
}

.mode-switcher {
  display: flex;
  background: rgba(118, 118, 128, 0.12); /* iOS Separator */
  border-radius: 18rpx;
  padding: 4rpx;
  position: relative;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border-radius: 14rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: pointer;
  position: relative;
  z-index: 1;
}

.mode-option-active {
  background: #FFFFFF;
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

.mode-option:active {
  transform: scale(0.98);
}

.mode-icon {
  font-size: 40rpx;
  line-height: 1;
}

.mode-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  letter-spacing: -0.01em;
}

.mode-option-active .mode-label {
  color: #007AFF; /* iOS Blue */
}

/* ===== 页面头部 ===== */
.page-header {
  padding: 24rpx 32rpx 16rpx 32rpx;
  background: #F2F2F7;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.page-subtitle {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #8E8E93; /* iOS Secondary Label */
  line-height: 1.3;
}

/* ===== 加载更多按钮 ===== */
.load-more-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F2F2F7;
}

.load-more-btn {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s ease;
  cursor: pointer;
}

.load-more-btn:active {
  transform: scale(0.98);
  box-shadow: 
    0 1rpx 2rpx rgba(0, 0, 0, 0.08),
    0 1rpx 1rpx rgba(0, 0, 0, 0.04);
}

.loading-text, .load-more-text {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-direction: column;
}

.loading-label, .load-more-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #007AFF;
  margin: 0;
}

.remaining-count {
  font-size: 22rpx;
  color: #8E8E93;
  margin-top: 4rpx;
}

/* ===== 加载完成提示 ===== */
.load-complete-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F2F2F7;
}

.load-complete-text {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #34C759; /* iOS Green */
  font-weight: 500;
}

/* ===== 搜索高亮样式 (iOS风格) ===== */
mark {
  background: rgba(255, 204, 0, 0.3); /* iOS Yellow tint */
  color: #000000;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  font-weight: 600;
  display: inline;
}

/* 中文标题中的高亮 */
.item-name-zh mark {
  background: rgba(0, 122, 255, 0.15);
  color: #007AFF;
}

/* 英文内容中的高亮 */
.phrase-en mark,
.item-name-en mark {
  background: rgba(0, 122, 255, 0.15);
  color: #007AFF;
  font-style: italic;
}

/* 中文内容中的高亮 */
.phrase-cn mark {
  background: rgba(52, 199, 89, 0.15);
  color: #34C759;
}

/* 弹窗标题中的高亮 */
.popup-title mark,
.popup-subtitle mark {
  background: rgba(255, 255, 255, 0.3);
  color: white;
}


/* ===== 分类标签 ===== */
.category-tabs-container {
  background: #FFFFFF;
  position: sticky;
  top: 88rpx; /* 模式切换器高度 */
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 1rpx 0 rgba(0, 0, 0, 0.04);
}

.category-tabs-scroll {
  height: 120rpx;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  gap: 16rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.25s ease;
  cursor: pointer;
  min-width: 88rpx;
}

.category-tab-item.active {
  background: rgba(0, 122, 255, 0.08); /* iOS Blue tint */
}

.category-badge {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #C7C7CC; /* iOS Tertiary Fill */
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.25s ease;
}

.category-tab-item.active .category-badge {
  background: #007AFF; /* iOS Blue */
  transform: scale(1.08);
}

/* ===== 词汇类型徽章配色（仅作用于结果卡片上的 context7-badge） ===== */
.context7-badge.badge-phraseology {
  background: #007AFF; /* iOS Blue - 标准通话 */
}

.context7-badge.badge-vocab-routine {
  background: #34C759; /* iOS Green - 日常词汇 */
}

.context7-badge.badge-vocab-emergency {
  background: #FF3B30; /* iOS Red - 应急特情 */
}

.context7-badge.badge-vocab-icao900 {
  background: #AF52DE; /* iOS Purple - ICAO 900句 */
}

.category-title {
  font-size: 22rpx;
  color: #3C3C43; /* iOS Label */
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: all 0.25s ease;
}

.category-tab-item.active .category-title {
  color: #007AFF;
  font-weight: 600;
}

/* ===== 搜索框 ===== */
.search-section {
  padding: 16rpx 32rpx 24rpx;
  background: #F2F2F7;
}

.search-section .van-search {
  background: rgba(142, 142, 147, 0.12) !important; /* iOS Fill */
  border-radius: 20rpx !important;
  overflow: hidden;
  transition: all 0.25s ease;
  border: none !important;
}

.search-section .van-search:focus-within {
  background: #FFFFFF !important;
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.08),
    0 0 0 4rpx rgba(0, 122, 255, 0.08);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: 20rpx !important;
  padding-left: 16rpx !important;
}

.search-section .van-field__input {
  font-size: 28rpx !important;
  color: #000000 !important;
  font-weight: 400;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: #8E8E93 !important; /* iOS Secondary Label */
  font-size: 28rpx !important;
}

/* ===== 通信用语列表 ===== */
.phraseology-section {
  padding: 0 32rpx 32rpx;
  background: #F2F2F7;
}

.context7-content-container {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.phraseology-item-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 200rpx;
}

.phraseology-item-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #007AFF 0%, #0051D5 100%);
  opacity: 0;
  transition: opacity 0.25s ease;
}

.phraseology-item-card:active {
  transform: scale(0.985);
  box-shadow: 
    0 1rpx 2rpx rgba(0, 0, 0, 0.08),
    0 1rpx 1rpx rgba(0, 0, 0, 0.04);
}

.phraseology-item-card:active::before {
  opacity: 1;
}

/* ===== 卡片内容 ===== */
.item-card-header {
  margin-bottom: 20rpx;
}

.item-primary {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-name-zh {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1.3;
  flex: 1;
  margin-right: 12rpx;
  letter-spacing: -0.01em;
}

.item-secondary {
  margin-top: 8rpx;
}

.item-name-en {
  font-size: 26rpx;
  color: #8E8E93; /* iOS Secondary Label */
  font-style: italic;
  line-height: 1.4;
}

.item-badges {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  align-items: center;
}

.context7-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

/* ===== 分类徽章颜色 (iOS风格) ===== */
.category-badge[data-category="通用"] {
  background: #007AFF; /* iOS Blue */
  color: white;
}

.category-badge[data-category="区域管制服务"] {
  background: #FF9500; /* iOS Orange */
  color: white;
}

.category-badge[data-category="进近管制服务"] {
  background: #AF52DE; /* iOS Purple */
  color: white;
}

.category-badge[data-category="机场管制"] {
  background: #FF3B30; /* iOS Red */
  color: white;
}

.category-badge[data-category="ATS监视服务"] {
  background: #5AC8FA; /* iOS Teal Blue */
  color: white;
}

.category-badge[data-category="告警"] {
  background: #FF9500; /* iOS Orange */
  color: white;
}

.category-badge[data-category="地勤_飞行机组"] {
  background: #34C759; /* iOS Green */
  color: white;
}

/* ===== 使用者标签 (iOS风格) ===== */
.speaker-badge {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.speaker-ATC {
  background: rgba(52, 199, 89, 0.15); /* iOS Green tint */
  color: #34C759;
}

.speaker-FlightCrew {
  background: rgba(0, 122, 255, 0.15); /* iOS Blue tint */
  color: #007AFF;
}

.speaker-GroundCrew {
  background: rgba(255, 149, 0, 0.15); /* iOS Orange tint */
  color: #FF9500;
}

.speaker-Pilot {
  background: rgba(255, 149, 0, 0.15); /* iOS Orange tint */
  color: #FF9500;
}

.speaker-PilotATC {
  background: rgba(175, 82, 222, 0.15); /* iOS Purple tint */
  color: #AF52DE;
}

/* ===== 短语显示 ===== */
.item-card-content {
  margin-bottom: 20rpx;
  flex: 1;
}

.item-definition {
  font-size: 28rpx;
  color: #3C3C43; /* iOS Label */
  line-height: 1.5;
}

.phrase-en {
  font-size: 28rpx;
  color: #007AFF; /* iOS Blue */
  font-style: italic;
  line-height: 1.6;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.phrase-en text {
  font-size: 28rpx;
  color: #007AFF;
  font-style: italic;
  line-height: 1.6;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.phrase-cn {
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.6;
  font-weight: 400;
  letter-spacing: 0.01em;
}

/* ===== 卡片底部 ===== */
.item-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  margin-top: auto;
}

.item-meta {
  flex: 1;
}

.meta-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-text {
  font-size: 22rpx;
  color: #8E8E93; /* iOS Secondary Label */
  font-weight: 500;
}

.item-arrow {
  color: #C7C7CC;
  transition: transform 0.2s ease;
}

/* ===== 无结果状态 ===== */
.no-results {
  text-align: center;
  padding: 120rpx 48rpx;
  background: #F2F2F7;
}

.no-results-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.no-results-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #000000;
  letter-spacing: -0.01em;
}

.no-results-tip {
  font-size: 26rpx;
  line-height: 1.4;
  color: #8E8E93;
}

/* ===== 统计信息 ===== */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 64rpx;
  padding: 32rpx;
  background: #FFFFFF;
  margin: 16rpx 32rpx 32rpx;
  border-radius: 20rpx;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #007AFF;
  margin-bottom: 8rpx;
  letter-spacing: -0.02em;
}

.stats-label {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* ===== 详情弹窗 ===== */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #F2F2F7;
}

.popup-header {
  padding: 32rpx 24rpx;
  background: #007AFF;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}

.popup-header-content {
  flex: 1;
  margin-right: 16rpx;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  letter-spacing: -0.01em;
}

.popup-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  font-style: italic;
  line-height: 1.3;
}

.popup-close-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.popup-close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.popup-content {
  flex: 1;
  padding: 24rpx;
  -webkit-overflow-scrolling: touch;
}

.detail-section {
  margin-bottom: 28rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.06),
    0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.detail-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #8E8E93;
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.detail-content {
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.6;
}

.phrase-content {
  background: rgba(0, 122, 255, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #007AFF;
}

.detail-popup .phrase-en {
  font-size: 30rpx;
  color: #007AFF;
  font-style: italic;
  line-height: 1.6;
  margin-bottom: 16rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.detail-popup .phrase-en text {
  font-size: 30rpx;
  color: #007AFF;
  font-style: italic;
  line-height: 1.6;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.detail-popup .phrase-cn {
  font-size: 30rpx;
  color: #3C3C43;
  line-height: 1.6;
  font-weight: 400;
  letter-spacing: 0.01em;
}

.speaker-tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.disclaimer-content {
  font-size: 22rpx;
  color: #8E8E93;
  font-style: italic;
}

/* Emoji图标样式 */
.emoji-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  line-height: 1;
  vertical-align: middle;
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
}

.emoji-icon.close-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.emoji-icon.close-icon:hover {
  background-color: rgba(255, 255, 255, 0.1);
  transform: scale(1.1);
}

/* ===== 广告容器 ===== */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 16rpx 0;
  margin: 8rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

/* ===== 响应式适配 (小屏设备) ===== */
@media (max-width: 375px) {
  .page-title {
    font-size: 44rpx;
  }
  
  .mode-switcher {
    padding: 3rpx;
  }
  
  .mode-option {
    padding: 14rpx 20rpx;
    gap: 10rpx;
  }
  
  .mode-icon {
    font-size: 36rpx;
  }
  
  .mode-label {
    font-size: 26rpx;
  }
  
  .category-badge {
    width: 52rpx;
    height: 52rpx;
    font-size: 24rpx;
  }
  
  .category-title {
    font-size: 20rpx;
  }
  
  .phraseology-item-card {
    padding: 20rpx;
  }
  
  .item-name-zh {
    font-size: 30rpx;
  }
  
  .item-name-en {
    font-size: 24rpx;
  }
  
  .phrase-en, .phrase-cn {
    font-size: 26rpx;
  }
  
  .context7-badge, .speaker-badge {
    font-size: 20rpx;
    padding: 5rpx 10rpx;
  }
}




























