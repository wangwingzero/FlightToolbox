/* 陆空通话页面样式 - iOS 17 设计语言 */

/* ===== CSS 变量系统 ===== */
page {
  --color-blue: #007AFF;
  --color-green: #34C759;
  --color-orange: #FF9500;
  --color-red: #FF3B30;
  --color-purple: #AF52DE;
  --color-teal: #5AC8FA;
  --color-indigo: #5856D6;
  
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  
  --transition-fast: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ===== 基础页面设置 ===== */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background: var(--bg-primary);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  position: relative;
  overflow-x: hidden;
}

/* ===== 模式切换器 (iOS Segmented Control) ===== */
.mode-switcher-container {
  padding: 16rpx 24rpx;
  background: var(--bg-primary);
  position: sticky;
  top: 0;
  z-index: 200;
}

.mode-switcher {
  display: flex;
  background: rgba(118, 118, 128, 0.12);
  border-radius: 16rpx;
  padding: 4rpx;
  position: relative;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 14rpx 20rpx;
  border-radius: 12rpx;
  transition: all var(--transition-normal);
  cursor: pointer;
  position: relative;
  z-index: 1;
}

.mode-option-active {
  background: var(--bg-secondary);
  box-shadow: var(--shadow-sm);
}

.mode-option:active {
  transform: scale(0.98);
}

.mode-icon {
  font-size: 36rpx;
  line-height: 1;
}

.mode-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.01em;
}

.mode-option-active .mode-label {
  color: var(--color-blue);
}

/* ===== 页面头部 ===== */
.page-header {
  padding: 20rpx 24rpx 16rpx 24rpx;
  background: var(--bg-primary);
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-primary);
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.page-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.3;
}

/* ===== 加载更多按钮 ===== */
.load-more-container {
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--bg-primary);
}

.load-more-btn {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: 16rpx 28rpx;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal);
  cursor: pointer;
}

.load-more-btn:active {
  transform: scale(0.98);
  box-shadow: none;
}

.loading-text, .load-more-text {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-direction: column;
}

.loading-label, .load-more-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-blue);
  margin: 0;
}

.remaining-count {
  font-size: 20rpx;
  color: var(--text-tertiary);
  margin-top: 2rpx;
}

/* ===== 加载完成提示 ===== */
.load-complete-container {
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--bg-primary);
}

.load-complete-text {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 22rpx;
  color: var(--color-green);
  font-weight: 500;
}

/* ===== 搜索高亮样式 (iOS风格) ===== */
mark {
  background: rgba(255, 204, 0, 0.3); /* iOS Yellow tint */
  color: #000000;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  font-weight: 600;
  display: inline;
}

/* 中文标题中的高亮 */
.item-name-zh mark {
  background: rgba(0, 122, 255, 0.15);
  color: #007AFF;
}

/* 英文内容中的高亮 */
.phrase-en mark,
.item-name-en mark {
  background: rgba(0, 122, 255, 0.15);
  color: #007AFF;
  font-style: italic;
}

/* 中文内容中的高亮 */
.phrase-cn mark {
  background: rgba(52, 199, 89, 0.15);
  color: #34C759;
}

/* 弹窗标题中的高亮 */
.popup-title mark,
.popup-subtitle mark {
  background: rgba(255, 255, 255, 0.3);
  color: white;
}


/* ===== 分类标签 ===== */
.category-tabs-container {
  background: var(--bg-secondary);
  position: sticky;
  top: 80rpx;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.category-tabs-scroll {
  height: 110rpx;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
}

.category-tabs-wrapper {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  gap: 12rpx;
  min-width: max-content;
}

.category-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 10rpx 14rpx;
  border-radius: var(--radius-sm);
  transition: all var(--transition-normal);
  cursor: pointer;
  min-width: 80rpx;
}

.category-tab-item.active {
  background: rgba(0, 122, 255, 0.08);
}

.category-badge {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #C7C7CC;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  transition: all var(--transition-normal);
}

.category-tab-item.active .category-badge {
  background: var(--color-blue);
  transform: scale(1.05);
}

/* ===== 词汇类型徽章配色（仅作用于结果卡片上的 context7-badge） ===== */
.context7-badge.badge-phraseology {
  background: #007AFF; /* iOS Blue - 标准通话 */
}

.context7-badge.badge-vocab-routine {
  background: #34C759; /* iOS Green - 日常词汇 */
}

.context7-badge.badge-vocab-emergency {
  background: #FF3B30; /* iOS Red - 应急特情 */
}

.context7-badge.badge-vocab-icao900 {
  background: #AF52DE; /* iOS Purple - ICAO 900句 */
}

.category-title {
  font-size: 22rpx;
  color: #3C3C43; /* iOS Label */
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  transition: all 0.25s ease;
}

.category-tab-item.active .category-title {
  color: #007AFF;
  font-weight: 600;
}

/* ===== 搜索框 ===== */
.search-section {
  padding: 12rpx 24rpx 20rpx;
  background: var(--bg-primary);
}

.search-section .van-search {
  background: rgba(142, 142, 147, 0.12) !important;
  border-radius: var(--radius-md) !important;
  overflow: hidden;
  transition: all var(--transition-normal);
  border: none !important;
}

.search-section .van-search:focus-within {
  background: var(--bg-secondary) !important;
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.08),
    0 0 0 3rpx rgba(0, 122, 255, 0.08);
}

.search-section .van-search__content {
  background: transparent !important;
  border: none !important;
  border-radius: var(--radius-md) !important;
  padding-left: 16rpx !important;
}

.search-section .van-field__input {
  font-size: 26rpx !important;
  color: var(--text-primary) !important;
  font-weight: 400;
  background: transparent !important;
}

.search-section .van-field__placeholder {
  color: var(--text-tertiary) !important;
  font-size: 26rpx !important;
}

/* ===== 通信用语列表 ===== */
.phraseology-section {
  padding: 0 24rpx 24rpx;
  background: var(--bg-primary);
}

.context7-content-container {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.phraseology-item-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: 20rpx;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 180rpx;
}

.phraseology-item-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 5rpx;
  background: linear-gradient(180deg, var(--color-blue) 0%, var(--color-teal) 100%);
  opacity: 0;
  transition: opacity var(--transition-normal);
}

.phraseology-item-card:active {
  transform: scale(0.985);
  box-shadow: none;
}

.phraseology-item-card:active::before {
  opacity: 1;
}

/* ===== 卡片内容 ===== */
.item-card-header {
  margin-bottom: 16rpx;
}

.item-primary {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.item-name-zh {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.3;
  flex: 1;
  margin-right: 10rpx;
  letter-spacing: -0.01em;
}

.item-secondary {
  margin-top: 6rpx;
}

.item-name-en {
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-style: italic;
  line-height: 1.4;
}

.item-badges {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  align-items: center;
}

.context7-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

/* ===== 分类徽章颜色 (iOS风格) ===== */
.category-badge[data-category="通用"] {
  background: #007AFF; /* iOS Blue */
  color: white;
}

.category-badge[data-category="区域管制服务"] {
  background: #FF9500; /* iOS Orange */
  color: white;
}

.category-badge[data-category="进近管制服务"] {
  background: #AF52DE; /* iOS Purple */
  color: white;
}

.category-badge[data-category="机场管制"] {
  background: #FF3B30; /* iOS Red */
  color: white;
}

.category-badge[data-category="ATS监视服务"] {
  background: #5AC8FA; /* iOS Teal Blue */
  color: white;
}

.category-badge[data-category="告警"] {
  background: #FF9500; /* iOS Orange */
  color: white;
}

.category-badge[data-category="地勤_飞行机组"] {
  background: #34C759; /* iOS Green */
  color: white;
}

/* ===== 使用者标签 (iOS风格) ===== */
.speaker-badge {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.speaker-ATC {
  background: rgba(52, 199, 89, 0.15); /* iOS Green tint */
  color: #34C759;
}

.speaker-FlightCrew {
  background: rgba(0, 122, 255, 0.15); /* iOS Blue tint */
  color: #007AFF;
}

.speaker-GroundCrew {
  background: rgba(255, 149, 0, 0.15); /* iOS Orange tint */
  color: #FF9500;
}

.speaker-Pilot {
  background: rgba(255, 149, 0, 0.15); /* iOS Orange tint */
  color: #FF9500;
}

.speaker-PilotATC {
  background: rgba(175, 82, 222, 0.15); /* iOS Purple tint */
  color: #AF52DE;
}

/* ===== 短语显示 ===== */
.item-card-content {
  margin-bottom: 16rpx;
  flex: 1;
}

.item-definition {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.phrase-en {
  font-size: 26rpx;
  color: var(--color-blue);
  font-style: italic;
  line-height: 1.6;
  margin-bottom: 10rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.phrase-en text {
  font-size: 26rpx;
  color: var(--color-blue);
  font-style: italic;
  line-height: 1.6;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.phrase-cn {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  font-weight: 400;
  letter-spacing: 0.01em;
}

/* ===== 卡片底部 ===== */
.item-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
  margin-top: auto;
}

.item-meta {
  flex: 1;
}

.meta-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-text {
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.item-arrow {
  color: #C7C7CC;
  transition: transform var(--transition-fast);
}

/* ===== 无结果状态 ===== */
.no-results {
  text-align: center;
  padding: 100rpx 40rpx;
  background: var(--bg-primary);
}

.no-results-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.no-results-text {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: var(--text-primary);
  letter-spacing: -0.01em;
}

.no-results-tip {
  font-size: 24rpx;
  line-height: 1.4;
  color: var(--text-tertiary);
}

/* ===== 统计信息 ===== */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  padding: 24rpx;
  background: var(--bg-secondary);
  margin: 16rpx 24rpx 24rpx;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-blue);
  margin-bottom: 6rpx;
  letter-spacing: -0.02em;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* ===== 详情弹窗 ===== */
.detail-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: var(--bg-primary);
}

.popup-header {
  padding: 28rpx 24rpx;
  background: linear-gradient(135deg, var(--color-blue) 0%, var(--color-teal) 100%);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  overflow: hidden;
}

/* 装饰光晕 */
.popup-header::before {
  content: '';
  position: absolute;
  top: -30%;
  right: -10%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.25) 0%, transparent 70%);
  pointer-events: none;
}

.popup-header-content {
  flex: 1;
  margin-right: 16rpx;
  position: relative;
  z-index: 1;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  letter-spacing: -0.01em;
}

.popup-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  font-style: italic;
  line-height: 1.3;
}

.popup-close-btn {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-fast);
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.popup-close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.popup-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.popup-content-card {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 20rpx;
  box-shadow: var(--shadow-sm);
}

.popup-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.popup-definition {
  padding: 16rpx 20rpx;
  background: rgba(142, 142, 147, 0.08);
  border-radius: var(--radius-md);
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.detail-section {
  margin-bottom: 28rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.06),
    0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.detail-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #8E8E93;
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.detail-content {
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.6;
}

.phrase-content {
  background: rgba(0, 122, 255, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #007AFF;
}

.detail-popup .phrase-en {
  font-size: 30rpx;
  color: #007AFF;
  font-style: italic;
  line-height: 1.6;
  margin-bottom: 16rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.detail-popup .phrase-en text {
  font-size: 30rpx;
  color: #007AFF;
  font-style: italic;
  line-height: 1.6;
  font-weight: 500;
  letter-spacing: 0.01em;
}

.detail-popup .phrase-cn {
  font-size: 30rpx;
  color: #3C3C43;
  line-height: 1.6;
  font-weight: 400;
  letter-spacing: 0.01em;
}

.speaker-tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.disclaimer-content {
  font-size: 22rpx;
  color: #8E8E93;
  font-style: italic;
}

/* Emoji图标样式 */
.emoji-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  line-height: 1;
  vertical-align: middle;
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
}

.emoji-icon.close-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.emoji-icon.close-icon:hover {
  background-color: rgba(255, 255, 255, 0.1);
  transform: scale(1.1);
}

/* ===== 广告容器 ===== */
.ad-banner-container {
  position: relative;
  z-index: 10;
  padding: 16rpx 0;
  margin: 8rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-banner-container ad {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

/* 底部广告 */
.ad-banner-container.bottom-ad {
  margin: 24rpx;
  padding: 0;
}

/* ===== 响应式适配 (小屏设备) ===== */
@media (max-width: 375px) {
  .page-title {
    font-size: 44rpx;
  }
  
  .mode-switcher {
    padding: 3rpx;
  }
  
  .mode-option {
    padding: 14rpx 20rpx;
    gap: 10rpx;
  }
  
  .mode-icon {
    font-size: 36rpx;
  }
  
  .mode-label {
    font-size: 26rpx;
  }
  
  .category-badge {
    width: 52rpx;
    height: 52rpx;
    font-size: 24rpx;
  }
  
  .category-title {
    font-size: 20rpx;
  }
  
  .phraseology-item-card {
    padding: 20rpx;
  }
  
  .item-name-zh {
    font-size: 30rpx;
  }
  
  .item-name-en {
    font-size: 24rpx;
  }
  
  .phrase-en, .phrase-cn {
    font-size: 26rpx;
  }
  
  .context7-badge, .speaker-badge {
    font-size: 20rpx;
    padding: 5rpx 10rpx;
  }
}

/* ===== 卡片入场动画 ===== */
@keyframes phraseSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.phraseology-item-card {
  animation: phraseSlideIn 0.35s ease-out backwards;
}

/* 错开动画延迟 */
.phraseology-item-card:nth-child(1) { animation-delay: 0.03s; }
.phraseology-item-card:nth-child(2) { animation-delay: 0.06s; }
.phraseology-item-card:nth-child(3) { animation-delay: 0.09s; }
