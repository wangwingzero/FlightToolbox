}

/* 搜索区域 */
.search-section {
  padding: 36rpx 32rpx 24rpx;
  background:
    linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.9) 100%);
  backdrop-filter: blur(32rpx) saturate(180%);
  position: sticky;
  top: 88rpx;
  z-index: 100;
  border-bottom: 2rpx solid rgba(226, 232, 240, 0.2);
  box-shadow:
    0 8rpx 32rpx rgba(15, 23, 42, 0.04),
    0 4rpx 16rpx rgba(148, 163, 184, 0.06);
}

.search-section .van-search {
  background:
    linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(248, 250, 252, 0.95) 100%);
  border-radius: 36rpx;
  box-shadow:
    0 6rpx 24rpx rgba(15, 23, 42, 0.06),
    0 12rpx 48rpx rgba(15, 23, 42, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(226, 232, 240, 0.4);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}

.search-section .van-search:focus-within {
  border-color: #0f62fe;
  box-shadow:
    0 8rpx 32rpx rgba(15, 98, 254, 0.12),
    0 16rpx 64rpx rgba(15, 98, 254, 0.08),
    0 0 0 4rpx rgba(15, 98, 254, 0.1);
}

/* 通信用语列表 */
.phraseology-section {
  padding: 32rpx;
  min-height: calc(100vh - 200rpx);
}

.context7-content-container {
  width: 100%;
}

.context7-card-wrapper {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  animation: fadeInStagger 0.8s cubic-bezier(0.23, 1, 0.32, 1);
}

@keyframes fadeInStagger {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.phraseology-item-card {
  background:
    linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%),
    linear-gradient(180deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.6) 100%);
  backdrop-filter: blur(40rpx) saturate(200%);
  border-radius: 28rpx;
  padding: 36rpx;
  box-shadow:
    0 12rpx 48rpx rgba(15, 23, 42, 0.08),
    0 24rpx 96rpx rgba(15, 23, 42, 0.04),
    0 4rpx 16rpx rgba(148, 163, 184, 0.12),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.95),
    inset 0 -1rpx 0 rgba(226, 232, 240, 0.1);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  border: 3rpx solid rgba(226, 232, 240, 0.2);
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
  will-change: transform, box-shadow;
}

.phraseology-item-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 50%, #8b5cf6 100%);
  opacity: 0;
  transition: opacity 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}

.phraseology-item-card:hover::before {
  opacity: 0.8;
}

.phraseology-item-card:hover {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow:
    0 20rpx 64rpx rgba(15, 23, 42, 0.12),
    0 32rpx 128rpx rgba(15, 23, 42, 0.08),
    0 8rpx 32rpx rgba(148, 163, 184, 0.16),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.98);
  border-color: rgba(226, 232, 240, 0.3);
}

.phraseology-item-card:active {
  transform: translateY(-4rpx) scale(0.99);
  box-shadow:
    0 8rpx 32rpx rgba(15, 23, 42, 0.1),
    0 16rpx 64rpx rgba(15, 23, 42, 0.06),
    0 4rpx 16rpx rgba(148, 163, 184, 0.14);
}

