/* 标准通信用语页面样式 - 基于体检标准页面设计 */

/* 基础页面设置 */
.container {
  padding: 0 !important;
  margin: 0 !important;
  background:
    linear-gradient(135deg, #f8fafc 0%, #f1f5f9 20%, #e2e8f0 40%, #f8fafc 60%, #f0fdf4 80%, #f8fafc 100%),
    radial-gradient(circle at 25% 35%, rgba(34, 197, 94, 0.04) 0%, transparent 60%),
    radial-gradient(circle at 75% 65%, rgba(59, 130, 246, 0.04) 0%, transparent 60%),
    radial-gradient(circle at 50% 50%, rgba(139, 92, 246, 0.02) 0%, transparent 80%);
  min-height: 100vh;
  width: 100% !important;
  box-sizing: border-box !important;
  display: block !important;
  animation: containerFadeIn 1s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  overflow-x: hidden;
}

@keyframes containerFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 搜索高亮样式 */
mark {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #92400e;
  padding: 3rpx 8rpx;
  border-radius: 10rpx;
  font-weight: 600;
  box-shadow:
    0 3rpx 12rpx rgba(251, 191, 36, 0.25),
    0 2rpx 6rpx rgba(251, 191, 36, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
  border: 1rpx solid rgba(251, 191, 36, 0.4);
  animation: highlightPulse 0.8s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  display: inline-block;
}

/* 中文标题中的高亮 */
.item-name-zh mark {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
  border-color: rgba(59, 130, 246, 0.3);
  box-shadow:
    0 3rpx 12rpx rgba(59, 130, 246, 0.2),
    0 2rpx 6rpx rgba(59, 130, 246, 0.1);
}

/* 英文内容中的高亮 */
.phrase-en mark,
.item-name-en mark {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  color: #0f62fe;
  border-color: rgba(15, 98, 254, 0.3);
  box-shadow:
    0 3rpx 12rpx rgba(15, 98, 254, 0.2),
    0 2rpx 6rpx rgba(15, 98, 254, 0.1);
  font-style: italic;
}

/* 中文内容中的高亮 */
.phrase-cn mark {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  color: #166534;
  border-color: rgba(34, 197, 94, 0.3);
  box-shadow:
    0 3rpx 12rpx rgba(34, 197, 94, 0.2),
    0 2rpx 6rpx rgba(34, 197, 94, 0.1);
}

/* 弹窗标题中的高亮 */
.popup-title mark,
.popup-subtitle mark {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  color: white;
  border-color: rgba(255, 255, 255, 0.4);
  box-shadow:
    0 3rpx 12rpx rgba(255, 255, 255, 0.2),
    0 2rpx 6rpx rgba(255, 255, 255, 0.1);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

@keyframes highlightPulse {
  0% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.08);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.95;
  }
}

.page-content[data-theme='dark'] {
  background: #1a1a1a;
}

/* 标签页系统 */
.container .van-tabs {
