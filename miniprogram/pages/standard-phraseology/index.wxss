  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stats-label {
  font-size: 26rpx;
  color: #475569;
  margin-top: 12rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
}

@keyframes slideInUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
