/* 国际通信失效程序页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

.container[data-theme="dark"] {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 8rpx;
}

.container[data-theme="dark"] .header-title {
  color: #74b9ff;
}

.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

.container[data-theme="dark"] .header-subtitle {
  color: #bdc3c7;
}

/* 快速操作栏 */
.quick-actions {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  min-width: 120rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.container[data-theme="dark"] .action-btn {
  background: #34495e;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #2c3e50;
  font-weight: 500;
}

.container[data-theme="dark"] .action-text {
  color: #ecf0f1;
}

/* 章节卡片 */
.section-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.container[data-theme="dark"] .section-card {
  background: #34495e;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.25);
}

.section-title {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
}

.content-box {
  padding: 30rpx;
}

/* 程序步骤 */
.procedure-step {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #3498db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.container[data-theme="dark"] .step-title {
  color: #ecf0f1;
}

.step-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #34495e;
}

.container[data-theme="dark"] .step-description {
  color: #bdc3c7;
}

/* 管制行动项目 */
.atc-action-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #3498db;
}

.container[data-theme="dark"] .atc-action-item {
  background: #2c3e50;
}

.action-number {
  width: 50rpx;
  height: 50rpx;
  background: #3498db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.action-content {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #2c3e50;
}

.container[data-theme="dark"] .action-content {
  color: #ecf0f1;
}

/* 气象条件选择标签 */
.weather-tabs {
  display: flex;
  margin-bottom: 25rpx;
  background: #f1f2f6;
  border-radius: 12rpx;
  padding: 6rpx;
}

.container[data-theme="dark"] .weather-tabs {
  background: #2c3e50;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.container[data-theme="dark"] .tab-item.active {
  background: #34495e;
}

.tab-text {
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #2c3e50;
  font-weight: bold;
}

.container[data-theme="dark"] .tab-item.active .tab-text {
  color: #ecf0f1;
}

/* 气象内容 */
.weather-content {
  padding: 20rpx;
  background: #e8f4fd;
  border-radius: 15rpx;
  border: 2rpx solid #bee5eb;
}

.container[data-theme="dark"] .weather-content {
  background: #2d3436;
  border-color: #636e72;
}

.weather-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 20rpx;
}

.container[data-theme="dark"] .weather-title {
  color: #74b9ff;
}

/* 步骤列表 */
.steps-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
}

.step-bullet {
  width: 40rpx;
  height: 40rpx;
  background: #27ae60;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.step-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #0d47a1;
}

.container[data-theme="dark"] .step-text {
  color: #a2d2ff;
}

/* IMC部分 */
.imc-section {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: rgba(52, 152, 219, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(52, 152, 219, 0.2);
}

.container[data-theme="dark"] .imc-section {
  background: rgba(116, 185, 255, 0.1);
  border-color: rgba(116, 185, 255, 0.3);
}

.imc-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #2980b9;
  margin-bottom: 15rpx;
}

.container[data-theme="dark"] .imc-subtitle {
  color: #74b9ff;
}

.imc-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #34495e;
}

.container[data-theme="dark"] .imc-description {
  color: #bdc3c7;
}

/* 间隔类型标签 */
.separation-tabs {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.separation-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 20rpx;
  background: #f1f2f6;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.separation-tab.active {
  background: #3498db;
}

.container[data-theme="dark"] .separation-tab {
  background: #2c3e50;
}

.container[data-theme="dark"] .separation-tab.active {
  background: #2980b9;
}

.separation-tab .tab-text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.separation-tab.active .tab-text {
  color: white;
  font-weight: bold;
}

/* 间隔内容 */
.separation-content {
  padding: 15rpx;
  background: #fff3cd;
  border-radius: 10rpx;
  border: 2rpx solid #ffeaa7;
}

.container[data-theme="dark"] .separation-content {
  background: #3a3a3a;
  border-color: #555;
}

.separation-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #856404;
}

.container[data-theme="dark"] .separation-description {
  color: #f39c12;
}

/* 关键提醒 */
.key-reminders {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
}

.container[data-theme="dark"] .key-reminders {
  background: #3a3a3a;
  border-color: #555;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 20rpx;
  text-align: center;
}

.container[data-theme="dark"] .reminder-title {
  color: #f39c12;
}

.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.reminder-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.reminder-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.4;
}

.container[data-theme="dark"] .reminder-text {
  color: #f39c12;
}

