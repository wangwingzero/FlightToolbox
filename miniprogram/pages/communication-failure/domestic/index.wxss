/* 国内通信失效程序页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

.container[data-theme="dark"] {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 8rpx;
}

.container[data-theme="dark"] .header-title {
  color: #e67e22;
}

.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

.container[data-theme="dark"] .header-subtitle {
  color: #bdc3c7;
}

/* 快速操作栏 */
.quick-actions {
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

/* 应答机编码组 */
.transponder-group {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.container[data-theme="dark"] .transponder-group {
  background: #34495e;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.25);
}

.transponder-title {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 20rpx;
}

.container[data-theme="dark"] .transponder-title {
  color: #e67e22;
}

.transponder-buttons {
  display: flex;
  gap: 15rpx;
  justify-content: center;
}

.transponder-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 12rpx;
  min-width: 120rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.transponder-btn:active {
  transform: scale(0.95);
}

/* 主要按钮 - 7600 */
.transponder-btn.primary {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

.transponder-btn.primary:active {
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.4);
}

/* 次要按钮 - 7601, 7602 */
.transponder-btn.secondary {
  background: #f8f9fa;
  color: #e74c3c;
  border: 2rpx solid #e74c3c;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.transponder-btn.secondary:active {
  background: #e74c3c;
  color: white;
}

.container[data-theme="dark"] .transponder-btn.secondary {
  background: #2c3e50;
  color: #e67e22;
  border-color: #e67e22;
}

.container[data-theme="dark"] .transponder-btn.secondary:active {
  background: #e67e22;
  color: white;
}

.transponder-code {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.transponder-desc {
  font-size: 20rpx;
  opacity: 0.9;
  text-align: center;
  line-height: 1.2;
}


/* 响应式设计 */
@media (max-width: 600rpx) {
  .transponder-buttons {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .transponder-btn {
    min-width: auto;
    width: 100%;
  }
}

/* 章节卡片 */
.section-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.container[data-theme="dark"] .section-card {
  background: #34495e;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.25);
}

.section-title {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
}

.content-box {
  padding: 30rpx;
}

/* 程序步骤 */
.procedure-step {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #3498db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.special-intention .step-number {
  background: #f39c12;
  width: 80rpx;
  font-size: 30rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.container[data-theme="dark"] .step-title {
  color: #ecf0f1;
}

.step-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #34495e;
}

.container[data-theme="dark"] .step-description {
  color: #bdc3c7;
}

/* 意图列表 */
.intention-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.intention-item {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  border-left: 4rpx solid #e74c3c;
}

.container[data-theme="dark"] .intention-item {
  background: #2c3e50;
}

.intention-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 5rpx;
}

.intention-value {
  font-size: 24rpx;
  color: #2c3e50;
  line-height: 1.5;
}

.container[data-theme="dark"] .intention-value {
  color: #ecf0f1;
}

/* 要求项目 */
.requirement-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 6rpx solid #27ae60;
}

.container[data-theme="dark"] .requirement-item {
  background: #2c3e50;
}

.requirement-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #27ae60;
  margin-bottom: 10rpx;
}

.requirement-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #2c3e50;
}

.container[data-theme="dark"] .requirement-content {
  color: #ecf0f1;
}

/* 空域选择标签 */
.airspace-tabs {
  display: flex;
  margin-bottom: 25rpx;
  background: #f1f2f6;
  border-radius: 12rpx;
  padding: 6rpx;
}

.container[data-theme="dark"] .airspace-tabs {
  background: #2c3e50;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.container[data-theme="dark"] .tab-item.active {
  background: #34495e;
}

.tab-text {
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #2c3e50;
  font-weight: bold;
}

.container[data-theme="dark"] .tab-item.active .tab-text {
  color: #ecf0f1;
}

/* 空域内容 */
.airspace-content {
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 15rpx;
  border: 2rpx solid #ffeaa7;
  margin-bottom: 25rpx;
}

.container[data-theme="dark"] .airspace-content {
  background: #3a3a3a;
  border-color: #555;
}

.airspace-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 10rpx;
}

.container[data-theme="dark"] .airspace-title {
  color: #f39c12;
}

.airspace-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #856404;
  margin-bottom: 15rpx;
}

.container[data-theme="dark"] .airspace-description {
  color: #f39c12;
}

.timing-info {
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 10rpx;
}

.timing-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #856404;
  margin-right: 10rpx;
}

.timing-value {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}

.container[data-theme="dark"] .timing-label,
.container[data-theme="dark"] .timing-value {
  color: #f39c12;
}

/* 共同步骤 */
.common-steps {
  padding: 20rpx;
  background: #e8f5e8;
  border-radius: 15rpx;
  border: 2rpx solid #c3e6c3;
}

.container[data-theme="dark"] .common-steps {
  background: #2d5a2d;
  border-color: #4a7c4a;
}

.steps-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #27ae60;
  margin-bottom: 15rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.step-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #27ae60;
  margin-bottom: 5rpx;
}

.step-value {
  font-size: 24rpx;
  line-height: 1.5;
  color: #2d5016;
}

.container[data-theme="dark"] .step-value {
  color: #a9d3a9;
}

/* 意图标签 */
.intention-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 25rpx;
}

.intention-tab {
  flex: 1;
  min-width: 200rpx;
  text-align: center;
  padding: 15rpx 20rpx;
  background: #f1f2f6;
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.intention-tab.active {
  background: #3498db;
}

.container[data-theme="dark"] .intention-tab {
  background: #2c3e50;
}

.container[data-theme="dark"] .intention-tab.active {
  background: #2980b9;
}

.intention-tab .tab-text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.intention-tab.active .tab-text {
  color: white;
  font-weight: bold;
}

/* 意图内容 */
.intention-content {
  padding: 25rpx;
  background: #e3f2fd;
  border-radius: 15rpx;
  border: 2rpx solid #bbdefb;
}

.container[data-theme="dark"] .intention-content {
  background: #2d3436;
  border-color: #636e72;
}

.intention-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976d2;
  margin-bottom: 15rpx;
}

.container[data-theme="dark"] .intention-title {
  color: #74b9ff;
}

.intention-description {
  font-size: 26rpx;
  line-height: 1.6;
  color: #0d47a1;
}

.container[data-theme="dark"] .intention-description {
  color: #a2d2ff;
}

