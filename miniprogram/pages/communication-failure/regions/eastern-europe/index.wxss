/* 东欧地区通信差异页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #eceff1 0%, #cfd8dc 100%);
  min-height: 100vh;
}

.container[data-theme="dark"] {
  background: linear-gradient(135deg, #37474f 0%, #455a64 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #607d8b;
  margin-bottom: 8rpx;
}

.container[data-theme="dark"] .header-title {
  color: #90a4ae;
}

.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

.container[data-theme="dark"] .header-subtitle {
  color: #bdc3c7;
}

/* 卡片样式 */
.section-card {
  background: white;
  border-radius: 20rpx;
  margin: 0 20rpx 25rpx;
  box-shadow: 0 8rpx 32rpx rgba(96, 125, 139, 0.1);
  border: 2rpx solid #eceff1;
  overflow: hidden;
}

.container[data-theme="dark"] .section-card {
  background: #34495e;
  border-color: #2c3e50;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 卡片标题 */
.section-title {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 2rpx solid #eceff1;
}

.container[data-theme="dark"] .section-title {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  border-bottom-color: #2c3e50;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.container[data-theme="dark"] .section-text {
  color: #ecf0f1;
}

/* 卡片内容 */
.content-box {
  padding: 30rpx;
}

/* 语言切换器 */
.language-switcher {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  margin: 30rpx 0;
  border: 2rpx solid #eceff1;
}

.container[data-theme="dark"] .language-switcher {
  background: #2c3e50;
  border-color: #34495e;
}

.lang-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  color: #7f8c8d;
  border-radius: 8rpx;
  cursor: pointer;
}

.lang-btn.active {
  background: #607d8b;
  color: white;
  font-weight: 600;
}

.container[data-theme="dark"] .lang-btn {
  color: #bdc3c7;
}

.container[data-theme="dark"] .lang-btn.active {
  background: #546e7a;
  color: white;
}

/* 国家选择标签 */
.country-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.country-tab {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.2s ease;
}

.country-tab.active {
  background: linear-gradient(135deg, #607d8b 0%, #546e7a 100%);
  color: white;
  border-color: #607d8b;
}

.container[data-theme="dark"] .country-tab {
  background: #2c3e50;
  border-color: #34495e;
}

.container[data-theme="dark"] .country-tab.active {
  background: linear-gradient(135deg, #90a4ae 0%, #78909c 100%);
}

.country-flag {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.country-name {
  font-size: 24rpx;
  color: #2c3e50;
}

.country-tab.active .country-name {
  color: white;
}

.container[data-theme="dark"] .country-name {
  color: #ecf0f1;
}

/* 选中国家程序 */
.country-procedures {
  border-top: 2rpx solid #e9ecef;
  padding-top: 25rpx;
}

.container[data-theme="dark"] .country-procedures {
  border-top-color: #2c3e50;
}

.country-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #eceff1 0%, #cfd8dc 100%);
  border-radius: 15rpx;
}

.container[data-theme="dark"] .country-header {
  background: linear-gradient(135deg, #37474f 0%, #455a64 100%);
}

.country-flag-large {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.country-info {
  flex: 1;
}

.country-name-cn {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.container[data-theme="dark"] .country-name-cn {
  color: #ecf0f1;
}

.country-name-en {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.container[data-theme="dark"] .country-name-en {
  color: #bdc3c7;
}

/* ICAO差异 */
.icao-differences {
  margin-bottom: 25rpx;
}

.diff-section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #607d8b;
  margin-bottom: 15rpx;
}

.container[data-theme="dark"] .diff-section-title {
  color: #90a4ae;
}

.diff-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.6;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.container[data-theme="dark"] .diff-text {
  color: #ecf0f1;
  background: #2c3e50;
}

/* 程序步骤 */
.procedures-list {
  margin-top: 25rpx;
}

.procedures-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #607d8b;
  margin-bottom: 20rpx;
}

.container[data-theme="dark"] .procedures-title {
  color: #90a4ae;
}

.procedure-step {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 6rpx solid #607d8b;
}

.container[data-theme="dark"] .procedure-step {
  background: #2c3e50;
  border-left-color: #90a4ae;
}

.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #607d8b;
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.container[data-theme="dark"] .step-number {
  background: #90a4ae;
}

.step-content {
  flex: 1;
}

.step-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.6;
}

.container[data-theme="dark"] .step-text {
  color: #ecf0f1;
}

/* 选择提示 */
.select-prompt {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #7f8c8d;
}

.container[data-theme="dark"] .select-prompt {
  color: #bdc3c7;
}

.prompt-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.prompt-text {
  font-size: 26rpx;
}

