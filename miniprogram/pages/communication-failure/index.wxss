  margin-bottom: 20rpx;
}


/* 紧急信息区域 */
.emergency-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 15rpx;
}

.emergency-item {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid;
  background: rgba(255, 255, 255, 0.1);
}

/* 关键差异 - 红色警告 */
.emergency-item.critical {
  border-left-color: #e74c3c;
  background: rgba(231, 76, 60, 0.05);
}

/* 重要程序 - 橙色提醒 */
.emergency-item.important {
  border-left-color: #f39c12;
  background: rgba(243, 156, 18, 0.05);
}

/* 一般信息 - 蓝色标识 */
.emergency-item.normal {
  border-left-color: #3498db;
  background: rgba(52, 152, 219, 0.05);
}

.emergency-label {
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 8rpx;
  min-width: 100rpx;
  flex-shrink: 0;
}

.emergency-value {
  font-size: 24rpx;
  font-weight: 500;
  color: #2c3e50;
  line-height: 1.3;
}

