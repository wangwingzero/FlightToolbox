/* 箭头 */
.card-arrow {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #bdc3c7;
  font-weight: bold;
}


/* 快速提示 */
.quick-tips {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
}


.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 20rpx;
  text-align: center;
}


.tips-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.tip-number {
  width: 50rpx;
  height: 50rpx;
  background: #e17055;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 28rpx;
  color: #856404;
  line-height: 1.4;
}


/* 响应式设计 */
@media (min-width: 768rpx) {
  .cards-container {
    flex-direction: row;
    gap: 40rpx;
  }
  
  .procedure-card {
    flex: 1;
  }
}