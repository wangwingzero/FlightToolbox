/* 通信失效页面样式 */
.container {
  padding: 0 20rpx 20rpx;
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* 搜索栏容器 */
.search-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search-box {
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.search-box:active {
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 搜索图标 */
.search-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  opacity: 0.6;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 40rpx;
}

/* 搜索占位符 */
.search-placeholder {
  color: #95a5a6;
  font-size: 28rpx;
}

/* 清除按钮 */
.clear-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-left: 15rpx;
  transition: all 0.2s ease;
}

.clear-icon:active {
  background: #bdbdbd;
  transform: scale(0.9);
}

/* 搜索结果提示 */
.search-result-tip {
  padding: 15rpx 20rpx;
  background: rgba(52, 152, 219, 0.1);
  border-left: 6rpx solid #3498db;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-result-tip text {
  font-size: 26rpx;
  color: #3498db;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #7f8c8d;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #95a5a6;
}


/* 广告容器 */
.ad-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底部横幅广告容器 */
.ad-banner-container {
  position: relative;
  z-index: 10;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  padding: 20rpx 0;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 广告元素样式增强 */
.ad-banner-container ad {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 卡片容器 */
.cards-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

/* 程序卡片 */
.procedure-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.procedure-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}


/* 国内程序卡片 */
.domestic-card {
  border-left: 8rpx solid #e74c3c;
}

