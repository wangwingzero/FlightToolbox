/* 通信失效页面样式 */
.container {
  padding: 0 20rpx 20rpx;
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}


/* 页面标题 - 高端优雅设计 */
.page-header {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 40rpx 30rpx 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(102, 126, 234, 0.3);
}

.page-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>') repeat;
  opacity: 0.3;
}

/* 装饰元素 */
.header-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
}

.decoration-line {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);
  flex: 1;
}

.left-line {
  margin-right: 30rpx;
}

.right-line {
  margin-left: 30rpx;
}

.decoration-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.icon-signal {
  font-size: 40rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.2));
}

/* 标题内容 */
.header-content {
  position: relative;
  z-index: 2;
  margin-bottom: 20rpx;
}

.header-title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
  line-height: 1.2;
}

.header-title-en {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-bottom: 25rpx;
  opacity: 0.9;
}

/* 徽章标签 */
.header-badge {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  padding: 8rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.badge-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 描述文本 */
.header-description {
  position: relative;
  z-index: 2;
}

.description-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
  letter-spacing: 1rpx;
  line-height: 1.4;
}


/* 卡片容器 */
.cards-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

/* 程序卡片 */
.procedure-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.procedure-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}


