/* 资料查询页面样式 */

.page-content {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 页面标题区域 */
.page-header {
  text-align: center;
  padding: 20rpx 0 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -20rpx -20rpx 30rpx -20rpx;
  border-radius: 0 0 30rpx 30rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 资料卡片网格 */
.categories-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.category-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.category-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.category-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  line-height: 1;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.category-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.category-count {
  display: flex;
  justify-content: center;
}

/* 功能说明区域 */
.tips-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.tips-content {
  line-height: 1.6;
}

.tip-item {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  position: relative;
}

.tip-item:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (min-width: 750px) {
  .categories-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1200px) {
  .categories-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}