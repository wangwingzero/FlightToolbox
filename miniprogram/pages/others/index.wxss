/* 实用工具样式 */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 新版积分系统卡片样式 */
.points-card {
  margin: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.points-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
}

.points-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.points-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.2));
}

.points-main {
  flex: 1;
}

.points-number {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.points-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
  font-weight: 500;
}

.signin-status {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: right;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.points-actions {
  display: flex;
  gap: 16rpx;
  position: relative;
  z-index: 1;
  align-items: stretch;
  justify-content: space-between;
  height: 72rpx;
}

/* 基于Vant官方文档的按钮样式规范 - 深度覆盖内部组件 */
.points-action-button {
  flex: 1 !important;
  min-width: 140rpx !important;
  max-width: none !important;
  margin: 0 !important;
}

/* 覆盖Vant按钮内部样式 */
.points-action-button .van-button {
  width: 100% !important;
  height: 72rpx !important;
  line-height: 70rpx !important;
  border-radius: 20rpx !important;
  font-size: 26rpx !important;
  font-weight: 600 !important;
  transition: all 0.3s ease !important;
  backdrop-filter: blur(10rpx) !important;
  padding: 0 24rpx !important;
  box-sizing: border-box !important;
}

.points-action-button .van-button__text {
  font-size: 26rpx !important;
  font-weight: 600 !important;
  line-height: 1 !important;
}

/* 签到按钮样式 */
.signin-button .van-button {
  background: rgba(255, 255, 255, 0.2) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.3) !important;
  color: #fff !important;
}

.signin-button .van-button__text {
  color: #fff !important;
}

.signin-button:active .van-button {
  background: rgba(255, 255, 255, 0.3) !important;
  transform: scale(0.96);
}

/* 已签到按钮样式 */
.signin-button-disabled .van-button {
  background: rgba(255, 255, 255, 0.1) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.2) !important;
  color: rgba(255, 255, 255, 0.6) !important;
}

.signin-button-disabled .van-button__text {
  color: rgba(255, 255, 255, 0.6) !important;
}

/* 积分规则按钮样式 */
.rules-button .van-button {
  background: rgba(255, 255, 255, 0.15) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.25) !important;
  color: rgba(255, 255, 255, 0.9) !important;
}

.rules-button .van-button__text {
  color: rgba(255, 255, 255, 0.9) !important;
}

.rules-button:active .van-button {
  background: rgba(255, 255, 255, 0.25) !important;
  transform: scale(0.96);
}

/* 确保图标和文字对齐 */
.rules-button .van-button__icon {
  margin-right: 8rpx !important;
  color: rgba(255, 255, 255, 0.9) !important;
  font-size: 24rpx !important;
}

/* 强制统一所有按钮内容的垂直对齐 */
.points-action-button .van-button__content {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  height: 68rpx !important;
  line-height: 1 !important;
}

/* 移除Vant按钮可能的默认边距和内边距差异 */
.points-action-button .van-button__text,
.points-action-button .van-button__icon {
  margin: 0 !important;
  padding: 0 !important;
  vertical-align: middle !important;
}

/* 获取更多积分卡片 */
.earn-points-card {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.earn-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.earn-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 12rpx;
}

.ad-watch-section {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #1989fa;
}

.ad-info {
  margin-bottom: 20rpx;
}

.ad-count {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.current-tier {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.next-reward {
  font-size: 32rpx;
  color: #1976d2;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.tier-hint {
  font-size: 22rpx;
  color: #666;
  font-style: italic;
}

.watch-ad-button {
  width: 100%;
  background: linear-gradient(135deg, #1989fa 0%, #1976d2 100%) !important;
  border: none !important;
  color: #fff !important;
  font-weight: bold !important;
  border-radius: 16rpx !important;
  height: 80rpx !important;
  line-height: 76rpx !important;
  font-size: 28rpx !important;
  box-shadow: 0 6rpx 20rpx rgba(25, 137, 250, 0.4) !important;
  transition: all 0.3s ease !important;
}

.watch-ad-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(25, 137, 250, 0.5) !important;
}

.watch-ad-button[disabled] {
  background: #f5f5f5 !important;
  color: #ccc !important;
  box-shadow: none !important;
}

/* 积分详情弹窗样式 */
.points-modal {
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #666;
}

.points-summary {
  display: flex;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.total-points {
  flex: 1;
  text-align: center;
}

.points-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.points-text {
  font-size: 24rpx;
  opacity: 0.8;
}

.signin-info {
  flex: 1;
  text-align: center;
  border-left: 2rpx solid rgba(255, 255, 255, 0.3);
  padding-left: 20rpx;
}

.streak-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.streak-text {
  font-size: 24rpx;
  opacity: 0.8;
}

.transaction-list {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 60rpx 0;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-info {
  flex: 1;
}

.transaction-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 28rpx;
  font-weight: bold;
}

.transaction-amount.positive {
  color: #52c41a;
}

.transaction-amount.negative {
  color: #ff4d4f;
}

/* 签到结果弹窗样式 */
.signin-modal {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  min-width: 500rpx;
}

.signin-result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.signin-result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.signin-result-message {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.signin-streak {
  font-size: 24rpx;
  color: #1989fa;
  margin-bottom: 30rpx;
}

.signin-close-btn {
  width: 200rpx !important;
  margin: 0 auto !important;
}

/* 积分规则弹窗样式 */
.rules-modal {
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.rules-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.rule-section {
  margin-bottom: 40rpx;
}

.rule-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.rule-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.rule-item.free {
  color: #52c41a;
  font-weight: 500;
}

.tools-section {
  margin: 0 20rpx 40rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
}

.tool-item {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 资质仪表板样式 */
.qualification-dashboard {
  margin: 40rpx 20rpx;
}

.qualification-item {
  position: relative;
}

.qualification-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
}

.days-remaining {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.status-text {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 资质状态颜色 */
.qualification-item-valid .days-remaining {
  color: #52c41a;
}

.qualification-item-valid .status-text {
  color: #52c41a;
}

.qualification-item-warning .days-remaining {
  color: #faad14;
}

.qualification-item-warning .status-text {
  color: #faad14;
}

.qualification-item-expired .days-remaining {
  color: #ff4d4f;
}

.qualification-item-expired .status-text {
  color: #ff4d4f;
}

.dashboard-footer {
  text-align: center;
  padding: 20rpx;
  font-size: 26rpx;
  color: #1989fa;
  background-color: #f8f9fa;
  border-radius: 0 0 16rpx 16rpx;
  margin-top: -20rpx;
}

.app-info-section {
  margin: 40rpx 20rpx;
}

/* 确保应用信息部分文字左对齐 */
.app-info-section .van-cell__title {
  text-align: left !important;
}

.app-info-section .van-cell__value {
  text-align: right !important;
}

.disclaimer {
  margin: 40rpx 20rpx;
  padding: 30rpx;
  background-color: #fff3cd;
  border-radius: 16rpx;
  border-left: 6rpx solid #ffc107;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 15rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.6;
}

/* Vant 组件样式覆盖 */
.van-grid-item__content {
  padding: 40rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.van-grid-item__icon {
  font-size: 48rpx;
  color: #1989fa;
}

.van-grid-item__text {
  font-size: 26rpx;
  color: #333;
  margin-top: 15rpx;
}

.van-cell-group {
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.van-cell-group__title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 20rpx 20rpx;
}

.van-cell__title {
  font-size: 28rpx;
  color: #333;
  text-align: left;
}

.van-cell__label {
  font-size: 24rpx;
  color: #969799;
  margin-top: 5rpx;
}

.van-cell__value {
  font-size: 26rpx;
  color: #969799;
}

/* 日出日落计算器样式 */
.sun-calculator-section {
  margin: 40rpx 20rpx;
}

.info-text {
  font-size: 24rpx;
  color: #646566;
  line-height: 1.6;
  padding: 10rpx 0;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1f1f1f;
  }

  .section-title {
    color: #ffffff;
  }

  .tool-item {
    background-color: #2a2a2a;
  }

  .disclaimer {
    background-color: #3a3a2a;
    border-left-color: #ffc107;
  }

  .points-modal, .signin-modal, .rules-modal {
    background-color: #2a2a2a;
  }

  .modal-title, .rule-title, .signin-result-title {
    color: #ffffff;
  }

  .transaction-desc {
    color: #ffffff;
  }

  .rule-item {
    color: #cccccc;
  }

  .disclaimer-title {
    color: #ffd54f;
  }

  .disclaimer-text {
    color: #ffd54f;
  }

  .van-grid-item__content {
    background-color: #2a2a2a;
  }

  .van-grid-item__icon {
    color: #51a937;
  }

  .van-grid-item__text {
    color: #ffffff;
  }

  .van-cell-group__title {
    color: #ffffff;
  }

  .van-cell__title {
    color: #ffffff;
  }

  .van-cell__value {
    color: #cccccc;
  }

  .van-cell__label {
    color: #999999;
  }

  .info-text {
    color: #cccccc;
  }

  .dashboard-footer {
    background-color: #2a2a2a;
    color: #1989fa;
  }
}



 