/* ========== 常用换算模块专用样式 ========== */

/* 确保按钮在常用换算中有特殊的视觉效果 */
.calculation-page .van-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.calculation-page .van-button:active::before {
  left: 100%;
}

/* 换算模块的特殊强调样式 */
.calculation-page .unit-label {
  animation: unitLabelPulse 2s ease-in-out infinite;
}

@keyframes unitLabelPulse {
  0%, 100% {
    box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
  }
  50% {
    box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.5);
  }
}

/* 结果显示增强动画 */
.calculation-page .result-item {
  animation: resultItemSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes resultItemSlideIn {
  0% {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 输入框聚焦时的增强效果 */
.calculation-page .van-field--focus {
  transform: translateY(-4rpx) !important;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.15) !important;
}

/* 换算按钮的特殊渐变效果 */
.calculation-page .van-button[type="primary"] {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 50%, #2563eb 100%) !important;
  position: relative !important;
  overflow: hidden !important;
}

.calculation-page .van-button[type="primary"]::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform 0.6s;
}

.calculation-page .van-button[type="primary"]:active::after {
  transform: translateX(100%);
}

  overflow: hidden;
}

