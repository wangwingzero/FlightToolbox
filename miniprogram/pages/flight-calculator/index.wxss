/* ========== GPWS 模块专用样式 ========== */
.gpws-module {
  position: relative;
}

.gpws-mode-selector {
  margin: 20rpx 16rpx;
  background: rgba(248, 250, 252, 0.9);
  border: 2rpx solid rgba(59, 130, 246, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
}

.gpws-mode-selector .section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 16rpx;
  text-align: center;
}

.mode-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
}

