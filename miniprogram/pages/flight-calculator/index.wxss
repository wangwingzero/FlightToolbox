/* 飞行计算页面 - 优雅专业的设计风格 */

/* 页面容器 - 与其他页面保持一致的淡色背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  position: relative;
  overflow-x: hidden;
  padding: 20rpx;
}

/* 页面标题区域 - 采用统一的紫色渐变主题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  text-align: center;
  padding: 20rpx 0 40rpx 0;
  margin: -20rpx -20rpx 30rpx -20rpx;
  border-radius: 0 0 30rpx 30rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

/* 装饰性背景图案 */
.page-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -30%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, 
    rgba(255,255,255,0.12) 0%, 
    rgba(255,255,255,0.06) 35%, 
    transparent 70%);
  pointer-events: none;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 2;
}

.header-subtitle {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.9);
  opacity: 0.9;
  position: relative;
  z-index: 2;
}

/* 广告容器 */
.calculator-ad-container {
  margin: 20rpx 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(79, 70, 229, 0.1);
}

/* 主页面样式 */
.main-page {
  position: relative;
  z-index: 10;
}

/* 功能分区样式 - 更加优雅的设计 */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  margin: 0 0 20rpx 0;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-right: 12rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #6b7280;
  flex: 1;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 分类页面和模块页面样式 */
.category-page,
.calculation-page {
  position: relative;
  z-index: 10;
  animation: pageSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes pageSlideIn {
  0% {
    opacity: 0;
    transform: translateX(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 模块头部 */
.module-header {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  margin: 0 16rpx 20rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.1);
}

.back-btn {
  font-size: 32rpx;
  color: #3b82f6;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(59, 130, 246, 0.1);
  transition: all 0.3s;
}

.back-btn:active {
  background: rgba(59, 130, 246, 0.2);
  transform: scale(0.95);
}

.module-header .module-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin: 0;
}

/* 功能模块网格 - 与其他页面保持一致 */
.modules-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx 32rpx 32rpx;
  animation: fadeInUp 0.6s ease-out;
}

/* 功能模块卡片 - 优雅的白色卡片设计 */
.module-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 36rpx 24rpx 32rpx 24rpx;
  text-align: center;
  box-shadow: 
    0 4rpx 24rpx rgba(0, 0, 0, 0.06),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: cardSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 280rpx;
}

.module-card:nth-child(1) { animation-delay: 0.1s; }
.module-card:nth-child(2) { animation-delay: 0.2s; }
.module-card:nth-child(3) { animation-delay: 0.3s; }
.module-card:nth-child(4) { animation-delay: 0.4s; }
.module-card:nth-child(5) { animation-delay: 0.5s; }
.module-card:nth-child(6) { animation-delay: 0.6s; }

.module-card:active {
  transform: scale(0.98);
  box-shadow: 
    0 2rpx 12rpx rgba(102, 126, 234, 0.15),
    0 0 0 2rpx rgba(102, 126, 234, 0.1);
  border-color: rgba(102, 126, 234, 0.2);
}

.module-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s;
}

.module-card:active::before {
  left: 100%;
}

.module-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 24rpx;
  position: relative;
}

.module-icon::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  transform: scale(1.2);
  z-index: -1;
}

/* ========== 积分标签区域 - 与性能参数页面统一样式 ========== */
/* 积分标签 - 位于右上角 */
.module-points {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 2;
}

/* 数据量标签 - 位于底部 */
.module-count {
  display: flex;
  justify-content: center;
  margin-top: auto;
  padding-top: 16rpx;
}

/* ========== Vant Tag 组件样式覆盖 ========== */
/* 使用CSS变量覆盖Vant组件默认样式 */

/* 通用标签样式变量 */
.module-points,
.module-count {
  --tag-border-radius: 12rpx;
  --tag-font-size: 24rpx;
  --tag-line-height: 32rpx;
  --tag-padding: 8rpx 16rpx;
  --tag-medium-padding: 10rpx 20rpx;
}

/* Warning 类型标签 - 橙色渐变 */
.module-points,
.module-count {
  --tag-warning-color: #ff8a50;
}

/* Success 类型标签 - 绿色渐变 */
.module-points,
.module-count {
  --tag-success-color: #06ad56;
}

/* Primary 类型标签 - 蓝色渐变 */
.module-points,
.module-count {
  --tag-primary-color: #0570de;
}

/* Default 类型标签 - 灰色渐变 */
.module-points,
.module-count {
  --tag-default-color: #7d7e80;
}

/* Danger 类型标签 - 红色渐变 */
.module-points,
.module-count {
  --tag-danger-color: #d60a21;
}

/* ========== 深度选择器覆盖样式 ========== */
/* 使用深度选择器穿透组件样式 */

/* 右上角积分标签容器 */
.module-points {
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.1));
}

/* 底部功能标签容器 */
.module-count {
  filter: drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.08));
}

/* 交互效果 */
.module-card:active .module-points,
.module-card:active .module-count {
  transform: scale(0.95);
  opacity: 0.8;
  transition: all 0.2s ease;
}

.module-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.module-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
}

/* 计算内容区域 */
.calculation-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 40rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.1);
  text-align: center;
}

.placeholder-text {
  font-size: 32rpx;
  color: #64748b;
  font-weight: 500;
}

/* 计算模块容器 */
.calculation-module {
  position: relative;
  z-index: 10;
  animation: moduleSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes moduleSlideIn {
  0% {
    opacity: 0;
    transform: translateX(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 输入区域 */
.input-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.1);
}

.input-group {
  margin-bottom: 24rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
  padding-left: 8rpx;
}

/* 输入框美化 */
.van-field {
  background: rgba(248, 250, 252, 0.8) !important;
  border-radius: 16rpx !important;
  border: 2rpx solid rgba(59, 130, 246, 0.1) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.van-field:hover {
  border-color: rgba(59, 130, 246, 0.3) !important;
  transform: translateY(-2rpx) !important;
}

.van-field--focus {
  border-color: #3b82f6 !important;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1) !important;
  transform: translateY(-2rpx) !important;
}

.van-field__input {
  font-size: 32rpx !important;
  font-weight: 500 !important;
  color: #1f2937 !important;
}

/* 单位标签 */
.unit-label {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%) !important;
  color: #ffffff !important;
  padding: 8rpx 16rpx !important;
  border-radius: 12rpx !important;
  font-size: 24rpx !important;
  font-weight: 600 !important;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3) !important;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 16rpx 20rpx 16rpx;
  display: flex;
  gap: 16rpx;
}

.van-button {
  flex: 1 !important;
  border-radius: 16rpx !important;
  font-weight: 700 !important;
  font-size: 32rpx !important;
  padding: 24rpx !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative !important;
  overflow: hidden !important;
}

.van-button[type="primary"] {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3) !important;
}

.van-button[type="primary"]:active {
  transform: translateY(2rpx) scale(0.98) !important;
}

.van-button[type="default"] {
  background: rgba(255, 255, 255, 0.9) !important;
  border: 2rpx solid rgba(59, 130, 246, 0.2) !important;
  color: #3b82f6 !important;
}

.van-button[type="default"]:active {
  background: rgba(59, 130, 246, 0.1) !important;
  transform: translateY(2rpx) scale(0.98) !important;
}

/* 结果区域 */
.result-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.1);
  border-left: 6rpx solid #10b981;
  animation: resultSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes resultSlideIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #065f46;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.result-item {
  background: rgba(16, 185, 129, 0.05);
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  border: 1rpx solid rgba(16, 185, 129, 0.1);
}

.result-label {
  font-size: 24rpx;
  color: #064e3b;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.result-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #059669;
}

/* 罗盘区域 */
.compass-section {
  margin-top: 24rpx;
  text-align: center;
}

.compass-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #065f46;
  margin-bottom: 16rpx;
}

.compass-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 16rpx auto;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.8) 100%);
  backdrop-filter: blur(10rpx);
  box-shadow: 
    0 8rpx 24rpx rgba(59, 130, 246, 0.15),
    0 0 0 2rpx rgba(255, 255, 255, 0.3);
  border: 4rpx solid rgba(59, 130, 246, 0.1);
}

.compass-needle {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 4rpx;
  height: 80rpx;
  transform-origin: bottom center;
  border-radius: 2rpx;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  margin-left: -2rpx;
  margin-top: -80rpx;
}

.wind-needle {
  background: linear-gradient(to top, #ef4444 0%, #dc2626 100%);
  z-index: 3;
}

.heading-needle {
  background: linear-gradient(to top, #3b82f6 0%, #1d4ed8 100%);
  z-index: 2;
  height: 70rpx;
  margin-top: -70rpx;
}

.track-needle {
  background: linear-gradient(to top, #10b981 0%, #059669 100%);
  z-index: 1;
  height: 60rpx;
  margin-top: -60rpx;
}

.compass-degrees {
  position: absolute;
  font-size: 20rpx;
  font-weight: 600;
  color: #374151;
}

.compass-degrees.north { top: 8rpx; left: 50%; transform: translateX(-50%); }
.compass-degrees.east { top: 50%; right: 8rpx; transform: translateY(-50%); }
.compass-degrees.south { bottom: 8rpx; left: 50%; transform: translateX(-50%); }
.compass-degrees.west { top: 50%; left: 8rpx; transform: translateY(-50%); }

.compass-center {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 12rpx;
  height: 12rpx;
  background: #374151;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 4;
}

.compass-legend {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #374151;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 2rpx;
}

.wind-color { background: #ef4444; }
.heading-color { background: #3b82f6; }
.track-color { background: #10b981; }

/* 计算详情 */
.calculation-details {
  margin-top: 24rpx;
  background: rgba(59, 130, 246, 0.05);
  border-radius: 12rpx;
  padding: 16rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.1);
}

.details-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 12rpx;
}

.details-content {
  font-size: 24rpx;
  color: #1e3a8a;
  line-height: 1.6;
  white-space: pre-line;
}


/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .modules-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .module-card {
    padding: 24rpx 20rpx;
  }
  
  .module-icon {
    font-size: 48rpx;
  }
  
  .module-title {
    font-size: 28rpx;
  }
  
  .module-desc {
    font-size: 22rpx;
  }
  
  .category-icon {
    font-size: 64rpx;
  }
  
  .category-title {
    font-size: 32rpx;
  }
  
  .category-desc {
    font-size: 24rpx;
  }
  
  .result-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .compass-container {
    width: 160rpx;
    height: 160rpx;
  }
  
  .compass-needle {
    height: 60rpx;
    margin-top: -60rpx;
  }
  
  .heading-needle {
    height: 50rpx;
    margin-top: -50rpx;
  }
  
  .track-needle {
    height: 40rpx;
    margin-top: -40rpx;
  }
}

/* ========== 特殊计算模块样式 ========== */

/* 节标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #374151;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #3b82f6;
}

/* 开关组样式 */
.switch-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 16rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.1);
}

.switch-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  flex: 1;
}

.switch-desc {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

/* 选择器组样式 */
.picker-group {
  margin-bottom: 24rpx;
}

.picker-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
  padding-left: 8rpx;
}

.picker-value {
  background: rgba(248, 250, 252, 0.8);
  border: 2rpx solid rgba(59, 130, 246, 0.1);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  color: #1f2937;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.picker-value:active {
  background: rgba(59, 130, 246, 0.05);
  border-color: rgba(59, 130, 246, 0.3);
  transform: scale(0.98);
}

.picker-value::after {
  content: '▼';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #6b7280;
  font-size: 24rpx;
}

/* 结果列表样式 */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #065f46;
  margin-bottom: 12rpx;
  padding: 8rpx 16rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 8rpx;
  border-left: 4rpx solid #10b981;
}

.result-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 0 16rpx;
}

.result-original,
.result-correction,
.result-final {
  font-size: 26rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.result-original {
  color: #6b7280;
  background: rgba(107, 114, 128, 0.1);
}

.result-correction {
  color: #059669;
  background: rgba(16, 185, 129, 0.1);
}

.result-final {
  color: #065f46;
  background: rgba(16, 185, 129, 0.15);
  font-weight: 600;
}

.result-warning {
  margin-top: 12rpx;
  padding: 16rpx;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #f59e0b;
}

.warning-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #92400e;
  margin-bottom: 8rpx;
}

.warning-message {
  font-size: 24rpx;
  color: #b45309;
  line-height: 1.5;
}

/* 错误信息样式 */
.error-section {
