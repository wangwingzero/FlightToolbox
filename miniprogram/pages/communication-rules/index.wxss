  border-radius: 12rpx;
  padding: 12rpx;
  border: 1rpx solid rgba(255, 204, 0, 0.16);
}

.clock-position {
  font-size: 26rpx;
  font-weight: 700;
  color: #FFCC00;
  margin-bottom: 6rpx;
}

.clock-reading-zh {
  font-size: 24rpx;
  color: #000000;
  margin-bottom: 2rpx;
}

.clock-reading-en {
  font-size: 20rpx;
  color: #8E8E93;
}

/* ===== 字母发音 ===== */
.section-phonetic .content-card {
  border-left: 4rpx solid #5856D6;
}

.phonetic-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.phonetic-item {
  background: rgba(88, 86, 214, 0.05);
  border-radius: 12rpx;
  padding: 12rpx;
  text-align: center;
  border: 1rpx solid rgba(88, 86, 214, 0.12);
}

.phonetic-letter {
  font-size: 32rpx;
  font-weight: 700;
  color: #5856D6;
  margin-bottom: 4rpx;
}

.phonetic-word {
  font-size: 22rpx;
  color: #000000;
  margin-bottom: 2rpx;
}

.phonetic-pronunciation {
  font-size: 20rpx;
  color: #8E8E93;
}

/* ===== 代号与导航点 ===== */
.section-identifiers .content-card {
  border-left: 4rpx solid #007AFF;
}

.identifiers-card + .identifiers-card {
  margin-top: 16rpx;
}

.identifier-list {
  margin-top: 12rpx;
}

.identifier-item {
  padding: 10rpx 0;
  border-top: 1rpx solid #E5E5EA;
}

.identifier-item:first-child {
  border-top-width: 0;
}

.identifier-code {
  font-size: 26rpx;
  font-weight: 700;
  color: #007AFF;
  margin-bottom: 2rpx;
}

.identifier-name-zh {
  font-size: 24rpx;
  color: #000000;
  margin-bottom: 2rpx;
}

.identifier-reading-zh {
  font-size: 24rpx;
  color: #000000;
  margin-bottom: 2rpx;
}

.identifier-reading-en {
  font-size: 20rpx;
  color: #8E8E93;
}

/* ===== 数字组合 ===== */
.section-number-combo .content-card {
  border-left: 4rpx solid #FF9500;
}

.numbercombo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
  margin-top: 12rpx;
}

.numbercombo-item {
  background: rgba(255, 149, 0, 0.05);
  border-radius: 12rpx;
  padding: 12rpx;
  border: 1rpx solid rgba(255, 149, 0, 0.12);
}

.numbercombo-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #FF9500;
  margin-bottom: 4rpx;
}

.numbercombo-reading-zh {
  font-size: 24rpx;
  color: #000000;
  margin-bottom: 2rpx;
}

.numbercombo-reading-en {
  font-size: 20rpx;
  color: #8E8E93;
}

/* ===== 高度与气压设置 ===== */
.section-altimeter .content-card {
  border-left: 4rpx solid #5AC8FA;
}

.simple-list {
  margin-top: 8rpx;
}

.list-row {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 8rpx 0;
  border-top: 1rpx solid #E5E5EA;
}

.list-row:first-child {
  border-top-width: 0;
}

.list-label {
  min-width: 180rpx;
  font-size: 24rpx;
  color: #8E8E93;
}

.list-value {
  flex: 1;
  font-size: 24rpx;
  color: #000000;
}

.list-value-en {
  flex: 1;
  font-size: 20rpx;
  color: #8E8E93;
}

