/* 通信技术要点页面 - iOS 17 设计语言 (Enhanced) */

/* ===== CSS 变量系统 ===== */
page {
  /* iOS 17 标准色 */
  --color-blue: #007AFF;
  --color-green: #34C759;
  --color-orange: #FF9500;
  --color-red: #FF3B30;
  --color-purple: #AF52DE;
  --color-teal: #5AC8FA;
  --color-indigo: #5856D6;
  --color-yellow: #FFCC00;
  --color-pink: #FF2D55;
  
  /* 背景色 */
  --bg-primary: #F2F2F7;
  --bg-secondary: #FFFFFF;
  --bg-tertiary: #F9FAFB;
  
  /* 文字层次 */
  --text-primary: #000000;
  --text-secondary: #3C3C43;
  --text-tertiary: #8E8E93;
  --text-quaternary: #C7C7CC;
  
  /* 圆角系统 */
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 28rpx;
  --radius-xl: 36rpx;
  
  /* 阴影系统 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 12rpx 32rpx rgba(0, 0, 0, 0.16);
  
  /* 过渡动画 */
  --transition-fast: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* ===== 页面容器 ===== */
.container {
  min-height: 100vh;
  background: var(--bg-primary);
  padding-bottom: 40rpx;
}

/* ===== 顶部标题区 - 渐变头部 ===== */
.page-header {
  padding: 48rpx 32rpx 40rpx;
  background: linear-gradient(135deg, var(--color-indigo) 0%, var(--color-purple) 50%, #BF5AF2 100%);
  position: relative;
  overflow: hidden;
}

/* 装饰光晕 */
.page-header::before {
  content: '';
  position: absolute;
  top: -40%;
  right: -15%;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  pointer-events: none;
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20%;
  left: -10%;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  pointer-events: none;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #FFFFFF;
  letter-spacing: -0.02em;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 1;
}

.page-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.5;
  position: relative;
  z-index: 1;
}

/* 头部装饰动效 */
.header-decoration {
  position: absolute;
  top: 50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  pointer-events: none;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(-50%) scale(1); }
  50% { transform: translateY(-50%) scale(1.1); }
}

/* ===== 模块卡片列表 ===== */
.tech-card-list {
  margin: 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tech-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx 32rpx;
  border-radius: var(--radius-lg);
  background: var(--bg-secondary);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

/* 左侧彩色装饰条 - 渐变效果 */
.tech-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  transition: all var(--transition-normal);
  opacity: 1;
}

/* 右侧箭头指示 - SF Symbol 风格 */
.tech-card::after {
  content: '';
  position: absolute;
  right: 28rpx;
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid var(--text-quaternary);
  border-bottom: 3rpx solid var(--text-quaternary);
  transform: rotate(-45deg);
  transition: all var(--transition-normal);
}

.tech-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
  border-color: transparent;
}

.tech-card:active::before {
  width: 8rpx;
}

.tech-card:active::after {
  transform: translateX(4rpx) rotate(-45deg);
  border-color: var(--text-tertiary);
}

/* 通话要求 - 紫色 */
.tech-card[data-type="phraseologyRequirements"]::before {
  background: linear-gradient(180deg, var(--color-purple) 0%, #BF5AF2 100%);
}
.tech-card[data-type="phraseologyRequirements"]:active {
  background: rgba(175, 82, 222, 0.04);
}

/* 发音规则 - 蓝色 */
.tech-card[data-type="pronunciation"]::before {
  background: linear-gradient(180deg, var(--color-blue) 0%, #5AC8FA 100%);
}
.tech-card[data-type="pronunciation"]:active {
  background: rgba(0, 122, 255, 0.04);
}

/* 标准用语要点 - 橙色 */
.tech-card[data-type="standardPhrases"]::before {
  background: linear-gradient(180deg, var(--color-orange) 0%, #FFD60A 100%);
}
.tech-card[data-type="standardPhrases"]:active {
  background: rgba(255, 149, 0, 0.04);
}

/* 呼号用法 - 青色 */
.tech-card[data-type="callSignPhraseology"]::before {
  background: linear-gradient(180deg, var(--color-teal) 0%, #64D2FF 100%);
}
.tech-card[data-type="callSignPhraseology"]:active {
  background: rgba(90, 200, 250, 0.04);
}

/* 天气报文 - 绿色 */
.tech-card[data-type="weatherPhraseology"]::before {
  background: linear-gradient(180deg, var(--color-green) 0%, #30D158 100%);
}
.tech-card[data-type="weatherPhraseology"]:active {
  background: rgba(52, 199, 89, 0.04);
}

.tech-card-left {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  transition: all var(--transition-bounce);
  position: relative;
}

/* 图标容器光晕效果 */
.tech-card-left::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  opacity: 0;
  transition: all var(--transition-normal);
}

.tech-card:active .tech-card-left {
  transform: scale(1.08);
}

.tech-card:active .tech-card-left::after {
  opacity: 1;
}

/* 通话要求图标 - 紫色渐变 */
.tech-card[data-type="phraseologyRequirements"] .tech-card-left {
  background: linear-gradient(135deg, rgba(175, 82, 222, 0.15) 0%, rgba(191, 90, 242, 0.08) 100%);
}
.tech-card[data-type="phraseologyRequirements"] .tech-card-left::after {
  box-shadow: 0 0 20rpx rgba(175, 82, 222, 0.3);
}

/* 发音规则图标 - 蓝色渐变 */
.tech-card[data-type="pronunciation"] .tech-card-left {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.15) 0%, rgba(90, 200, 250, 0.08) 100%);
}
.tech-card[data-type="pronunciation"] .tech-card-left::after {
  box-shadow: 0 0 20rpx rgba(0, 122, 255, 0.3);
}

/* 标准用语要点图标 - 橙色渐变 */
.tech-card[data-type="standardPhrases"] .tech-card-left {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.15) 0%, rgba(255, 214, 10, 0.08) 100%);
}
