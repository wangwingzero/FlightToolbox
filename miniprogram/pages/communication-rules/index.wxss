/* 通信技术要点页面 - iOS风格 */

/* ===== 页面容器 ===== */
.container {
  min-height: 100vh;
  background: #F2F2F7;
  padding-bottom: 40rpx;
}

/* 顶部标题区 */
.page-header {
  padding: 40rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F9FAFB 100%);
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1A1A1A;
  letter-spacing: -0.02em;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.5;
}

/* 模块卡片列表 */
.tech-card-list {
  margin: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tech-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx 32rpx;
  border-radius: 28rpx;
  background: #FFFFFF;
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.08),
    0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  border-left: 6rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: visible;
}

.tech-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  border-radius: 28rpx;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tech-card:active {
  transform: scale(0.97) translateY(-4rpx);
  box-shadow:
    0 12rpx 32rpx rgba(0, 0, 0, 0.14),
    0 6rpx 12rpx rgba(0, 0, 0, 0.08);
}

.tech-card:active::before {
  opacity: 1;
}

/* 通话要求 - 紫色 */
.tech-card[data-type="phraseologyRequirements"] {
  border-left-color: #AF52DE;
}

.tech-card[data-type="phraseologyRequirements"]::before {
  background: linear-gradient(135deg, rgba(175, 82, 222, 0.12) 0%, rgba(191, 90, 242, 0.06) 100%);
}

/* 发音规则 - 蓝色 */
.tech-card[data-type="pronunciation"] {
  border-left-color: #007AFF;
}

.tech-card[data-type="pronunciation"]::before {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.12) 0%, rgba(10, 132, 255, 0.06) 100%);
}

/* 标准用语要点 - 橙色 */
.tech-card[data-type="standardPhrases"] {
  border-left-color: #FF9500;
}

.tech-card[data-type="standardPhrases"]::before {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.12) 0%, rgba(255, 159, 10, 0.06) 100%);
}

/* 呼号用法 - 青色 */
.tech-card[data-type="callSignPhraseology"] {
  border-left-color: #5AC8FA;
}

.tech-card[data-type="callSignPhraseology"]::before {
  background: linear-gradient(135deg, rgba(90, 200, 250, 0.12) 0%, rgba(100, 210, 255, 0.06) 100%);
}

/* 天气报文 - 绿色 */
.tech-card[data-type="weatherPhraseology"] {
  border-left-color: #34C759;
}

.tech-card[data-type="weatherPhraseology"]::before {
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.12) 0%, rgba(48, 209, 88, 0.06) 100%);
}

.tech-card-left {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tech-card:active .tech-card-left {
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.16);
}

/* 通话要求图标 - 紫色 */
.tech-card[data-type="phraseologyRequirements"] .tech-card-left {
