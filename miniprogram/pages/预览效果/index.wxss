.preview-page { padding: 24rpx; background: linear-gradient(180deg, #0f172a 0%, #111827 100%); min-height: 100vh; color: #e5e7eb; }
.header { margin-bottom: 24rpx; }
.title { font-size: 36rpx; font-weight: 700; color: #f8fafc; }
.subtitle { font-size: 24rpx; color: #94a3b8; display: block; margin-top: 8rpx; }

.controls { background: rgba(255,255,255,0.04); border: 1rpx solid rgba(148,163,184,0.2); border-radius: 16rpx; padding: 20rpx; margin-bottom: 24rpx; }
.control-item { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.label { font-size: 28rpx; color: #e5e7eb; }
.btn { margin-right: 16rpx; }
.btn.danger { background: #ef4444; color: #fff; border: none; }

.panel { background: rgba(255,255,255,0.06); border: 1rpx solid rgba(148,163,184,0.25); border-radius: 20rpx; padding: 24rpx; }
.instrument { position: relative; height: 360rpx; border-radius: 16rpx; overflow: hidden; background: radial-gradient(120% 120% at 50% 0%, #1f2937 0%, #0b1324 100%); }
.horizon { position: absolute; left: -50%; width: 200%; height: 400rpx; top: 0; background: linear-gradient(180deg, #3b82f6 0%, #3b82f6 45%, #a3a3a3 50%, #f59e0b 55%, #f59e0b 100%); transition: transform 80ms linear; }
.overlay { position: absolute; bottom: 0; left: 0; right: 0; padding: 16rpx; display: flex; justify-content: space-between; background: linear-gradient(180deg, transparent, rgba(0,0,0,0.35)); }
.metric { font-size: 26rpx; color: #f1f5f9; }
.tips { margin-top: 16rpx; color: #9ca3af; font-size: 24rpx; }