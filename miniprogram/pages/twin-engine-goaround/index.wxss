/* 页面容器 - 优化性能 */
.container {
  padding: 16rpx;
  background-color: #f8f9fb;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 飞机系列列表 - 简化设计 */
.aircraft-series-section {
  padding: 16rpx;
}

.series-title-header {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 16rpx 0 24rpx 0;
  padding: 0 8rpx;
}

/* 飞机系列项 - 现代简约风格 */
.aircraft-series-item {
  background: #1677ff;
  color: #fff;
  padding: 20rpx 24rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.2s;
}

.aircraft-series-item:active {
  opacity: 0.8;
}

.series-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.series-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.series-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 4rpx;
}

.series-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.series-count {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
  margin-right: 16rpx;
}

/* 机型列表样式 */
.model-list-section {
  padding: 16rpx;
}

/* 返回按钮 */
.back-cell {
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.back-cell .van-cell__title {
  color: #1677ff !important;
  font-weight: 500;
}

/* 查询结果区域 */
.results-section {
  padding: 16rpx;
}

/* 参数选择区域 */
.parameter-section {
  margin: 16rpx 0;
  background: white;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.picker-trigger-cell {
  background: white !important;
  padding: 20rpx 24rpx !important;
}

.picker-trigger-cell .van-cell__value {
  color: #1677ff !important;
  font-weight: 500;
  font-size: 28rpx;
}

/* 提示信息 */
.no-weight-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

.hint-cell {
  background: #f8f9fa !important;
  border-radius: 6rpx;
  margin: 12rpx 24rpx;
}

/* 结果卡片 - 简化设计 */
.result-card {
  margin: 24rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  box-shadow: 0 4rpx 16rpx rgba(22, 119, 255, 0.2);
  transform: translateY(0);
  transition: opacity 0.2s;
}

.result-card:active {
  opacity: 0.9;
}

/* 结果标题栏 */
.result-header-cell {
  background: transparent !important;
  padding: 20rpx 24rpx !important;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}

.result-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.refresh-icon {
  color: white !important;
  font-size: 36rpx !important;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transition: all 0.2s;
}

.refresh-icon:active {
  background: rgba(255, 255, 255, 0.2);
  transform: rotate(90deg);
}

/* 梯度值显示 */
.gradient-value-cell {
  background: transparent !important;
  padding: 24rpx !important;
}

.gradient-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.value {
  font-size: 64rpx;
  font-weight: 700;
  color: white;
  line-height: 1;
}

.unit {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 参数摘要 */
.params-summary-cell {
  background: rgba(255, 255, 255, 0.1) !important;
  padding: 20rpx 24rpx !important;
}

.params-summary {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.param-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.param-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 4rpx;
}

.param-value {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

/* 安全提示 */
.safety-notice-cell {
  background: rgba(255, 255, 255, 0.1) !important;
  padding: 16rpx 24rpx !important;
}

.safety-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.safety-notice van-icon {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.safety-notice text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  margin: 24rpx 0;
  padding: 24rpx;
  background: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #1677ff;
  line-height: 1;
}

.stats-label {
  font-size: 22rpx;
  color: #666;
  margin-top: 8rpx;
}

/* Picker组件优化 */
.van-picker__toolbar {
  background: #1677ff !important;
}

.van-picker__title {
  color: white !important;
  font-weight: 600 !important;
}

.van-picker__cancel,
.van-picker__confirm {
  color: white !important;
  font-weight: 600 !important;
}

.van-picker-column__item--selected {
  color: #1677ff !important;
  font-weight: 600 !important;
}

/* 警告弹窗简化 */
.warning-dialog .van-dialog__header {
  padding: 32rpx 24rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  color: #ff4d4f !important;
  background: #fff !important;
}

.warning-dialog .van-dialog__message {
  padding: 0 32rpx 32rpx !important;
  font-size: 28rpx !important;
  line-height: 1.6 !important;
  color: #333 !important;
  background: #fff !important;
}

.warning-dialog .van-dialog__footer .van-button--primary {
  background: #1677ff !important;
  border: none !important;
  color: white !important;
  font-weight: 600 !important;
  border-radius: 6rpx !important;
}

/* 广告区域简化 */
.ad-section {
  margin: 16rpx 0;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #1677ff;
}

.ad-label {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
  text-align: center;
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .stats-section {
    padding: 20rpx;
    gap: 36rpx;
  }
  
  .stats-number {
    font-size: 32rpx;
  }
  
  .series-icon {
    width: 48rpx;
    height: 48rpx;
    font-size: 22rpx;
  }
}

/* 无数据提示 */
.van-empty {
  margin: 48rpx 0;
  padding: 24rpx;
  background: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 通用优化 */
.van-cell {
  -webkit-tap-highlight-color: transparent;
  touch-action: manipulation;
}

.van-popup {
  z-index: 10000 !important;
}