<view class="container" data-theme="light">
  <!-- 功能介绍卡片 -->
  <view class="feature-intro-card">
    <view class="intro-header">
      <view class="intro-icon">
        <text class="emoji-icon large">{{ regionFlag }}</text>
      </view>
      <view class="intro-content">
        <view class="intro-title">{{ regionFlag }} {{ regionName }}</view>
        <view class="intro-desc">按照通信类型分类的真实陆空通话录音</view>
      </view>
    </view>
  </view>

  <!-- 分类卡片网格 -->
  <view class="categories-grid">
    <view wx:for="{{ recordingCategories }}" wx:key="id" class="category-card" bind:tap="selectCategory" data-category="{{ item.id }}">
      <view class="category-icon-large">
        <text class="emoji-icon">{{ item.icon }}</text>
        <view class="category-icon-bg" style="background: {{ item.color }}20;"></view>
      </view>
      <view class="category-name">{{ item.name }}</view>
      <view class="category-count">{{ item.clips.length }}个录音</view>
    </view>
  </view>
</view>