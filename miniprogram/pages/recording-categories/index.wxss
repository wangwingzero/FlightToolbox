    0 0 0 1rpx rgba(255, 255, 255, 0.2),
    0 0 0 2rpx rgba(124, 58, 237, 0.15);
}

.category-card:active {
  transform: translateY(-8rpx) scale(0.98);
}

.category-icon-large {
  position: relative;
  width: 96rpx;
  height: 96rpx;
  margin: 0 auto 24rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-icon-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 24rpx;
  z-index: -1;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.category-count {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* 广告容器样式 */
.ad-container {
