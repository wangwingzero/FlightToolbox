  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx 20rpx 0 0;
  margin: 0 16rpx 0 16rpx;
  padding: 24rpx;
  position: relative;
  z-index: 10;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(22, 160, 133, 0.1);
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.header-count {
  font-size: 24rpx;
  color: #16a085;
  font-weight: 600;
  background: rgba(22, 160, 133, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

/* 更多录音提示 */
.more-clips-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(16, 185, 129, 0.1));
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 6rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.3;
}

.clip-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background: rgba(248, 250, 252, 0.8);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.clip-item:last-child {
  margin-bottom: 0;
}

.clip-item:active {
  transform: scale(0.98);
  background: rgba(22, 160, 133, 0.05);
}

.clip-item.active {
  background: linear-gradient(135deg, rgba(22, 160, 133, 0.1), rgba(39, 174, 96, 0.1));
  border-color: #16a085;
  box-shadow: 0 2rpx 8rpx rgba(22, 160, 133, 0.2);
}

.clip-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(22, 160, 133, 0.1);
  color: #16a085;
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.clip-item.active .clip-number {
  background: linear-gradient(135deg, #16a085, #27ae60);
  color: white;
}

.clip-content {
  flex: 1;
  min-width: 0;
}

.clip-label {
  font-size: 22rpx;
  color: #16a085;
  font-weight: 600;
  background: rgba(22, 160, 133, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.clip-transcript {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 600;
  margin-bottom: 6rpx;
  font-family: 'Courier New', monospace;
  line-height: 1.3;
  word-break: break-word;
}

.clip-translation {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.3;
  word-break: break-word;
}

.clip-status {
  font-size: 28rpx;
  color: #94a3b8;
  flex-shrink: 0;
}

.clip-item.active .clip-status {
  color: #16a085;
  animation: playingPulse 2s ease-in-out infinite;
}

@keyframes playingPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(1.1); }
}

