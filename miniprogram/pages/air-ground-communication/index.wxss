.learned-status-large:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.1);
}

.info-content {
  text-align: center;
}

.clip-label-large {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 600;
  margin-bottom: 16rpx;
  background: rgba(59, 130, 246, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.clip-title-large {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.clip-subtitle-large {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.3;
}

.player-controls-single {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
}

.progress-time {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.control-buttons-single {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  margin: 32rpx 0;
}

.control-btn-single {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #3b82f6;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.play-pause-large {
  width: 80rpx;
  height: 80rpx;
  font-size: 40rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.control-btn-single:active {
  transform: scale(0.9);
}

.control-btn-single.active {
  background: #3b82f6;
  color: white;
}

.volume-control-single,
.subtitle-controls-single {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 16rpx 0;
}

.volume-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
}

.subtitle-display-single {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.2);
}

.subtitle-text-single {
  font-size: 28rpx;
  line-height: 1.6;
  color: #1f2937;
  text-align: center;
}

/* ========== 响应式适配 ========== */
@media (max-width: 400px) {
  .audio-card {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .card-number {
    width: 36rpx;
    height: 36rpx;
    font-size: 18rpx;
  }
  
  .card-title {
    font-size: 24rpx;
  }
  
  .card-subtitle {
    font-size: 20rpx;
  }
  
  .clip-number-large {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
  
  .learned-status-large {
    font-size: 24rpx;
    padding: 10rpx 16rpx;
  }
}