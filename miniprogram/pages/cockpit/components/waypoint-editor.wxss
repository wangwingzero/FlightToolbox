/* 航点编辑器样式 */

.waypoint-editor-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.3s ease-in-out;
}

.waypoint-editor-modal {
  width: 85%;
  max-width: 380px;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-in-out;
}

/* 标题栏 */
.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #e0e0e0;
  background-color: #f8f9fa;
  border-radius: 12px 12px 0 0;
}

.editor-title {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background-color 0.2s;
}

.close-btn:active {
  background-color: #e0e0e0;
}

.close-icon {
  font-size: 20px;
  color: #666666;
  line-height: 1;
}

/* 地形信息 */
.terrain-info {
  padding: 12px 20px;
  background-color: #f0f8ff;
  border-bottom: 1px solid #e0e0e0;
}

.terrain-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.terrain-label {
  font-size: 14px;
  color: #666666;
}

.terrain-value {
  font-size: 14px;
  font-weight: 600;
  color: #333333;
}

.terrain-elevation-bar {
  height: 4px;
  border-radius: 2px;
  width: 100%;
}

/* 编辑器内容区域 */
.editor-content {
  flex: 1;
  padding: 0 20px;
  overflow-y: auto;
}

/* 表单组件 */
.form-group {
  margin: 20px 0;
}

.form-label {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12px;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  border: 1px solid #d0d0d0;
  border-radius: 8px;
  font-size: 16px;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #FF6600;
  outline: none;
}

/* 坐标输入 */
.coordinate-row {
  margin-bottom: 12px;
}

.coordinate-label {
  display: block;
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}

.coordinate-inputs {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: flex-start;
}

.coord-input {
  width: 90rpx;
  height: 72rpx;
  padding: 0 8rpx;
  border: 2rpx solid #d0d0d0;
  border-radius: 12rpx;
  font-size: 26rpx;
  text-align: center;
  background-color: #ffffff;
  box-sizing: border-box;
}

.coord-input.coord-sec {
  width: 120rpx;
}

.coord-input:focus {
  border-color: #FF6600;
  outline: none;
}

.coord-unit {
  font-size: 28rpx;
  color: #666666;
  margin-right: 8rpx;
}

.coord-picker {
  padding: 10rpx 16rpx;
  border: 2rpx solid #d0d0d0;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  min-width: 60rpx;
}

.picker-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

/* 小数坐标显示 */
.decimal-coords {
  margin-top: 12px;
  padding: 8px 12px;
  background-color: #f8f9fa;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.decimal-label {
  font-size: 12px;
  color: #666666;
}

.decimal-value {
  font-size: 12px;
  color: #333333;
  font-family: monospace;
}

/* 快速操作按钮 */
.quick-actions {
  margin-top: 12px;
  display: flex;
  gap: 8px;
}

.quick-btn {
  flex: 1;
  height: 32px;
  font-size: 12px;
  background-color: #f0f0f0;
  color: #666666;
  border: none;
  border-radius: 6px;
}

.quick-btn:active {
  background-color: #e0e0e0;
}

/* 开关和滑块 */
.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.switch-label {
  font-size: 14px;
  color: #333333;
}

.form-switch {
  transform: scale(0.8);
}

.slider-row {
  margin-top: 12px;
}

.slider-label {
  display: block;
  font-size: 14px;
  color: #333333;
  margin-bottom: 8px;
}

.form-slider {
  width: 100%;
  margin: 8px 0;
}

.slider-marks {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4px;
}

.mark-text {
  font-size: 10px;
  color: #999999;
}

/* 选择器 */
.form-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border: 1px solid #d0d0d0;
  border-radius: 8px;
  background-color: #ffffff;
}

.picker-value {
  font-size: 16px;
  color: #333333;
}

.picker-arrow {
  font-size: 16px;
  color: #999999;
}

/* 颜色选项 */
.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 8px;
}

.color-option {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  border: 2px solid transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s;
}

.color-option.selected {
  border-color: #333333;
  transform: scale(1.1);
}

.color-check {
  color: #ffffff;
  font-size: 18px;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 80px;
  padding: 12px;
  border: 1px solid #d0d0d0;
  border-radius: 8px;
  font-size: 14px;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #FF6600;
  outline: none;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 12px;
  color: #999999;
  margin-top: 4px;
}

/* 操作按钮 */
.editor-actions {
  display: flex;
  padding: 16px 20px;
  border-top: 1px solid #e0e0e0;
  background-color: #f8f9fa;
  border-radius: 0 0 12px 12px;
  gap: 12px;
}

.action-btn {
  flex: 1;
  height: 44px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  transition: all 0.2s;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666666;
}

.cancel-btn:active {
  background-color: #e0e0e0;
}

.delete-btn {
  background-color: #ff4444;
  color: #ffffff;
}

.delete-btn:active {
  background-color: #ee3333;
}

.confirm-btn {
  background-color: #FF6600;
  color: #ffffff;
}

.confirm-btn:active {
  background-color: #ee5500;
}

.confirm-btn:disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式设计 - 使用rpx自动适配 */
@media (max-width: 480px) {
  .color-option {
    width: 72rpx;
    height: 72rpx;
  }
}