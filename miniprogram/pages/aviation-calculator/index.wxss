/* 飞机配置状态样式 */
.config-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  min-width: 80rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.config-status.active {
  background-color: #52c41a;
  color: white;
  border-color: #389e0d;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

.config-status.inactive {
  background-color: #f5f5f5;
  color: #8c8c8c;
  border-color: #d9d9d9;
}

