/* 动画效果 */
.todo-item {
  animation: slideInUp 0.3s ease forwards;
}

.todo-item:nth-child(2) { animation-delay: 0.1s; }
.todo-item:nth-child(3) { animation-delay: 0.2s; }
.todo-item:nth-child(4) { animation-delay: 0.3s; }
.todo-item:nth-child(5) { animation-delay: 0.4s; }

/* 页面过渡 */
.container {
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态（可选） */
.loading-skeleton {
  background: linear-gradient(90deg, var(--border-color) 25%, transparent 50%, var(--border-color) 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 提前提醒选择样式 */
.advance-reminder-options {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  background: var(--bg-color);
  border-radius: 16rpx;
  padding: 16rpx;
  border: 2rpx solid var(--border-color);
}

.reminder-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: var(--card-bg);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.reminder-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}

.reminder-option:active {
  transform: scale(0.98);
}

.reminder-option.selected {
  border-color: #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.reminder-option.selected::before {
  opacity: 0.1;
}

.reminder-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.reminder-option.selected .reminder-text {
  color: #667eea;
  font-weight: 600;
}

.reminder-check {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
  position: relative;
  z-index: 1;
  animation: checkBounce 0.3s ease;
}

@keyframes checkBounce {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 小屏幕适配 */
@media (max-width: 750rpx) {
  .advance-reminder-options {
    padding: 12rpx;
    gap: 6rpx;
  }
  
  .reminder-option {
    padding: 12rpx 16rpx;
  }
  
  .reminder-text {
    font-size: 26rpx;
  }
  
  .reminder-check {
    font-size: 28rpx;
  }
}