/* TODO待办清单页面样式 */
page {
  background: var(--bg-color, #f8f9fb);
  min-height: 100vh;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

.container {
  padding: 0 24rpx 120rpx;
  transition: all 0.3s ease;
  min-height: 100vh;
  overflow-x: hidden;
}

/* 主题切换 */
.container[data-theme="dark"] {
  --bg-color: #0f172a;
  --card-bg: #1e293b;
  --text-primary: #f1f5f9;
  --text-secondary: #94a3b8;
  --border-color: #334155;
}

.container[data-theme="light"] {
  --bg-color: #f8f9fb;
  --card-bg: #ffffff;
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --border-color: #e2e8f0;
}

/* Emoji图标统一样式 */
.emoji-icon {
  font-size: 36rpx;
  line-height: 1;
}

.emoji-icon.small {
  font-size: 28rpx;
}

.emoji-icon.large {
  font-size: 48rpx;
}

.emoji-icon.extra-large {
  font-size: 80rpx;
}

.emoji-icon.close-icon {
  font-size: 32rpx;
  opacity: 0.6;
}

/* 头部状态卡片 */
.todo-status-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.todo-status-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  transform: rotate(45deg);
  pointer-events: none;
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.todo-avatar {
  position: relative;
  margin-right: 24rpx;
}

.todo-avatar .emoji-icon {
  font-size: 48rpx;
  display: block;
  background: rgba(255, 255, 255, 0.2);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  backdrop-filter: blur(10rpx);
}

.avatar-ring {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  width: 96rpx;
  height: 96rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: ring-pulse 2s infinite;
}

@keyframes ring-pulse {
  0%, 100% { transform: scale(1); opacity: 0.7; }
  50% { transform: scale(1.1); opacity: 0.3; }
}

.todo-info {
  flex: 1;
}

.todo-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.todo-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.status-display {
  position: relative;
  text-align: center;
  cursor: pointer;
}

.status-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  line-height: 1;
  margin-bottom: 4rpx;
}

.status-unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.status-ring {
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  right: -16rpx;
  bottom: -16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: status-rotate 3s linear infinite;
}

@keyframes status-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 快速操作区 */
.quick-actions {
  display: flex;
  gap: 16rpx;
}

.action-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.action-item:active {
  transform: translateY(2rpx) scale(0.98);
}

.action-icon {
  margin-right: 12rpx;
}

.action-icon .emoji-icon {
  font-size: 32rpx;
}

.action-content {
  flex: 1;
}

.action-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

.action-ripple {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.action-item:active .action-ripple {
  opacity: 1;
}

/* 统计信息 */
.status-stats {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stat-item .emoji-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.stat-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-item.today {
  background: rgba(59, 130, 246, 0.2);
  border-color: rgba(59, 130, 246, 0.3);
}

.stat-item.overdue {
  background: rgba(239, 68, 68, 0.2);
  border-color: rgba(239, 68, 68, 0.3);
}

.stat-item.completed {
  background: rgba(34, 197, 94, 0.2);
  border-color: rgba(34, 197, 94, 0.3);
}

/* 搜索栏 */
.search-container {
  margin: 24rpx 0;
  animation: slideInDown 0.3s ease;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 筛选和排序 */
.filter-container {
  margin: 24rpx 0;
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid var(--border-color);
}

.filter-scroll {
  margin-bottom: 20rpx;
}

.filter-items {
  display: flex;
  gap: 12rpx;
  white-space: nowrap;
}

.filter-item {
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  background: var(--bg-color);
  border: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  flex-shrink: 0;
}

.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.filter-text {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.filter-item.active .filter-text {
  color: white;
}

.sort-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sort-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.sort-option {
  font-size: 26rpx;
  color: var(--text-secondary);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.sort-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 600;
}

/* 批量操作栏 */
.batch-actions {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid var(--border-color);
  animation: slideInUp 0.3s ease;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.batch-info {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.batch-buttons {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  cursor: pointer;
}

.batch-btn.complete {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.batch-btn.complete:active {
  background: rgba(34, 197, 94, 0.2);
  transform: scale(0.95);
}

.batch-btn.delete {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

.batch-btn.delete:active {
  background: rgba(239, 68, 68, 0.2);
  transform: scale(0.95);
}

/* 待办列表 */
.todo-list {
  margin: 24rpx 0;
}

.todo-item {
  background: var(--card-bg);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.todo-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.todo-item.completed {
  opacity: 0.7;
  background: var(--bg-color);
}

.todo-item.completed .todo-title {
  text-decoration: line-through;
  color: var(--text-secondary);
}

/* 优先级边框 */
.todo-item.high::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #ef4444;
  border-radius: 0 6rpx 6rpx 0;
}

.todo-item.medium::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #f59e0b;
  border-radius: 0 6rpx 6rpx 0;
}

.todo-item.low::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #22c55e;
  border-radius: 0 6rpx 6rpx 0;
}

.todo-checkbox,
.todo-complete-btn {
  padding: 8rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
  background: var(--bg-color);
  border: 1rpx solid var(--border-color);
}

.todo-checkbox:active,
.todo-complete-btn:active {
  transform: scale(0.9);
  background: var(--border-color);
}

.todo-content {
  flex: 1;
  cursor: pointer;
}

.todo-header {
  margin-bottom: 12rpx;
}

.todo-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.todo-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.priority-indicator {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.priority-indicator.priority-high {
  background: rgba(239, 68, 68, 0.1);
}

.priority-indicator.priority-medium {
  background: rgba(245, 158, 11, 0.1);
}

.priority-indicator.priority-low {
  background: rgba(34, 197, 94, 0.1);
}

.todo-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.todo-category {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.todo-due-date {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.todo-due-time {
  color: var(--text-primary);
  font-weight: 500;
}

.todo-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.todo-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.todo-tag {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}



.todo-advance-reminder {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.advance-reminder-text {
  color: #ff9500;
  font-size: 24rpx;
  margin-left: 8rpx;
  font-weight: 500;
}

.todo-delete-btn {
  padding: 12rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
  background: rgba(239, 68, 68, 0.1);
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

.todo-delete-btn:active {
  transform: scale(0.9);
  background: rgba(239, 68, 68, 0.2);
}

.todo-delete-btn .emoji-icon {
  color: #ef4444;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: var(--card-bg);
  border-radius: 24rpx;
  margin: 40rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid var(--border-color);
}

.empty-icon {
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.empty-action {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  cursor: pointer;
}

.empty-action:active {
  transform: translateY(2rpx) scale(0.98);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--card-bg);
  border-top: 1rpx solid var(--border-color);
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-around;
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.bottom-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  cursor: pointer;
  color: var(--text-secondary);
}

.bottom-btn:active {
  transform: scale(0.95);
  background: var(--bg-color);
}

.bottom-btn-text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 弹窗样式 */
.modal-container {
  background: var(--card-bg);
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  height: 80vh;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1000;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
  background: var(--card-bg);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  padding: 8rpx;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.modal-close:active {
  transform: scale(0.9);
  background: var(--bg-color);
}

.modal-content {
  flex: 1;
  padding: 24rpx 32rpx;
  height: calc(80vh - 200rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.modal-footer {
  padding: 24rpx 32rpx 32rpx;
  border-top: 1rpx solid var(--border-color);
  display: flex;
  gap: 16rpx;
  background: var(--card-bg);
  position: sticky;
  bottom: 0;
  z-index: 1001;
  flex-shrink: 0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
}

.priority-options {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.priority-option {
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
  background: var(--bg-color);
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.priority-option.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
}

.priority-label {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.priority-option.selected .priority-label {
  color: white;
}

.category-scroll {
  margin-top: 12rpx;
}

.category-options {
  display: flex;
  gap: 12rpx;
  white-space: nowrap;
}

.category-option {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
  background: var(--bg-color);
  font-size: 26rpx;
  color: var(--text-primary);
  transition: all 0.2s ease;
  cursor: pointer;
  flex-shrink: 0;
}

.category-option.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
}

.date-time-row {
  display: flex;
  gap: 16rpx;
}

.date-time-row .van-field {
  flex: 1;
}

/* 统计弹窗 */
.stats-modal {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx;
  min-width: 600rpx;
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.stats-close {
  padding: 8rpx;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.stats-close:active {
  transform: scale(0.9);
  background: var(--bg-color);
}

.stats-content {
  text-align: center;
}

.stats-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  line-height: 1;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stats-item.warning .stats-number {
  color: #ef4444;
}

.stats-item.today .stats-number {
  color: #3b82f6;
}

.stats-item.tomorrow .stats-number {
  color: #f59e0b;
}

.completion-rate {
  margin-top: 40rpx;
}

.completion-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.completion-bar {
  height: 12rpx;
  background: var(--border-color);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.completion-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.completion-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

/* 导入弹窗 */
.import-modal {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx;
  width: 100%;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.import-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.import-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.import-close {
  padding: 8rpx;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.import-close:active {
  transform: scale(0.9);
  background: var(--bg-color);
}

.import-content {
  flex: 1;
  margin-bottom: 24rpx;
}

.import-tip {
