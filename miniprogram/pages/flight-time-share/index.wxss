.flight-time-share-ad {
  margin: 32rpx 0;
  padding: 0;
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(82, 196, 26, 0.2);
  box-shadow: 0 6rpx 16rpx rgba(82, 196, 26, 0.15);
  position: relative;
  animation: flightTimeShareAdSlideIn 0.7s ease-out;
