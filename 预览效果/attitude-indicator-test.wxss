/* 测试预览页面样式（rpx响应式） */
.test-container { padding: 24rpx; background: radial-gradient(120% 120% at 50% 0%, #0c1022 0%, #080b18 60%, #050812 100%); min-height: 100vh; color: #e6f0ff; }
.test-title { font-size: 32rpx; font-weight: 600; margin-bottom: 24rpx; letter-spacing: 2rpx; color: #b8c7ff; }

.attitude-display { background: rgba(19, 25, 48, 0.7); border: 2rpx solid rgba(79, 114, 255, 0.25); border-radius: 16rpx; padding: 20rpx; box-shadow: 0 8rpx 28rpx rgba(0,0,0,0.35), inset 0 0 40rpx rgba(79,114,255,0.08); }
.attitude-canvas { width: 600rpx; height: 600rpx; margin: 20rpx auto; display: block; border-radius: 50%; box-shadow: 0 0 40rpx rgba(79,114,255,0.35), 0 0 120rpx rgba(37, 255, 196, 0.15) inset; background: radial-gradient(70% 70% at 50% 50%, rgba(18, 29, 61, 0.9) 0%, rgba(7, 12, 26, 0.9) 100%); }

.attitude-data { display: flex; justify-content: space-around; margin-top: 12rpx; }
.data-item { display: flex; align-items: baseline; gap: 8rpx; }
.label { font-size: 24rpx; color: #8AA4FF; }
.value { font-size: 34rpx; font-weight: 700; text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.25); }
.value.pitch { color: #4DD0E1; }
.value.roll { color: #FFB74D; }
.value.heading { color: #B388FF; }

.control-buttons { display: flex; gap: 16rpx; margin: 24rpx 0; }
.test-btn { flex: 1; background: rgba(28, 38, 78, 0.8); color: #E3ECFF; border: 2rpx solid rgba(79,114,255,0.35); border-radius: 12rpx; padding: 16rpx 0; font-size: 28rpx; }
.test-btn.primary { background: linear-gradient(135deg, rgba(79,114,255,0.9), rgba(37,255,196,0.5)); color: #061225; }

.test-modes { background: rgba(19, 25, 48, 0.7); border: 2rpx solid rgba(79,114,255,0.25); border-radius: 16rpx; padding: 16rpx; margin-bottom: 20rpx; }
.mode-title { font-size: 24rpx; color: #8AA4FF; margin-bottom: 12rpx; }
.mode-buttons { display: flex; gap: 16rpx; }
.mode-btn { flex: 1; background: rgba(28, 38, 78, 0.8); color: #E3ECFF; border: 2rpx solid rgba(79,114,255,0.35); border-radius: 12rpx; padding: 16rpx 0; font-size: 28rpx; }
.mode-btn.active { background: linear-gradient(135deg, rgba(79,114,255,0.9), rgba(37,255,196,0.5)); color: #061225; }

.debug-info { background: rgba(19, 25, 48, 0.7); border: 2rpx solid rgba(79,114,255,0.25); border-radius: 16rpx; padding: 16rpx; display: flex; align-items: center; justify-content: space-between; gap: 20rpx; }
.debug-title { font-size: 24rpx; color: #8AA4FF; }
.debug-content { display: grid; grid-template-columns: 1fr 1fr; gap: 8rpx 16rpx; }
.debug-text { font-size: 22rpx; color: #D5E0FF; }

.performance-monitor { margin-top: 20rpx; display: grid; grid-template-columns: 1fr; gap: 12rpx; }
.perf-item { background: rgba(19, 25, 48, 0.7); border: 2rpx solid rgba(79,114,255,0.25); border-radius: 16rpx; padding: 16rpx; }
.perf-label { font-size: 24rpx; color: #8AA4FF; margin-bottom: 8rpx; display: block; }

.error-log { margin-top: 20rpx; background: rgba(54, 8, 27, 0.35); border: 2rpx solid rgba(255, 99, 132, 0.45); border-radius: 16rpx; }
.error-title { padding: 12rpx 16rpx; font-size: 24rpx; color: #FF9DB0; }
.error-content { max-height: 300rpx; }
.error-item { padding: 10rpx 16rpx; border-top: 2rpx dashed rgba(255, 99, 132, 0.25); display: flex; gap: 8rpx; }
.error-time { color: #FFB3C1; font-size: 22rpx; }
.error-message { color: #FFD9E1; font-size: 22rpx; }