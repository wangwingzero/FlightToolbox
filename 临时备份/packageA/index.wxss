/* 通信翻译页面样式 - 高端优雅重构版 */

/* ================== 全局布局 ================== */
.elegant-communication-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  position: relative;
  overflow: hidden;
}

/* ================== 固定顶部搜索栏 ================== */
.fixed-search-header {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.search-header-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.search-header-content {
  position: relative;
  padding: 20rpx 30rpx 30rpx;
  z-index: 1;
}

/* 页面标题区域 */
.page-title-section {
  margin-bottom: 30rpx;
  text-align: center;
}

.main-title {
  font-size: 56rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle-badge {
  display: inline-block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

.subtitle-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* 高端搜索框 */
.premium-search-container {
  margin-top: 20rpx;
}

.search-input-wrapper {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 10rpx 40rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  color: #667eea;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.search-placeholder {
  color: #999;
  font-size: 26rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.clear-btn:active {
  background: #e0e0e0;
  transform: scale(0.9);
}

.clear-icon {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.search-stats {
  text-align: center;
  margin-top: 15rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

/* ================== 胶囊式标签栏 ================== */
.capsule-tabs-container {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
  margin-top: 200rpx; /* 为固定头部留空间 */
}

.tabs-scroll-area {
  white-space: nowrap;
}

.tabs-capsule-wrapper {
  display: flex;
  padding: 0 30rpx;
  position: relative;
  align-items: center;
}

/* 动态指示器 */
.tab-indicator {
  position: absolute;
  height: 70rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 35rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.4);
  z-index: 1;
}

/* 胶囊标签项目 */
.capsule-tab-item {
  position: relative;
  z-index: 2;
  margin: 0 8rpx;
  border-radius: 35rpx;
  transition: all 0.3s ease;
}

.tab-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 25rpx;
  min-width: 120rpx;
}

.capsule-tab-item.active .tab-emoji,
.capsule-tab-item.active .tab-label,
.capsule-tab-item.active .tab-badge {
  color: white;
}

.capsule-tab-item:not(.active) .tab-emoji,
.capsule-tab-item:not(.active) .tab-label,
.capsule-tab-item:not(.active) .tab-badge {
  color: #667eea;
}

.tab-emoji {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.tab-label {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  transition: all 0.3s ease;
}

.tab-badge {
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  min-width: 30rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.capsule-tab-item.active .tab-badge {
  background: rgba(255, 255, 255, 0.3);
}

.capsule-tab-item:not(.active) .tab-badge {
  background: rgba(102, 126, 234, 0.1);
}

/* ================== 主内容区域 ================== */
.main-content-scroll {
  height: calc(100vh - 200rpx);
  padding: 0 30rpx;
}

.elegant-card-list {
  padding: 20rpx 0;
}

/* 优雅卡片设计 */
.premium-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.08);
  transform: translateY(0);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.premium-card:active {
  transform: translateY(-8rpx) scale(0.98);
  box-shadow: 0 25rpx 50rpx rgba(0, 0, 0, 0.15);
}

.premium-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.premium-card:hover::before {
  opacity: 1;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-pill {
  padding: 8rpx 20rpx;
  border-radius: 25rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.category-pill.icao900 {
  background: linear-gradient(135deg, #1989fa 0%, #0b7ce8 100%);
}

.category-pill.emergency {
  background: linear-gradient(135deg, #ee0a24 0%, #d0021b 100%);
}

.type-badge {
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.badge-text {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 500;
}

/* 章节标识 */
.chapter-label {
  margin-bottom: 15rpx;
}

.chapter-text {
  font-size: 22rpx;
  color: #888;
  background: rgba(102, 126, 234, 0.08);
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
  font-weight: 500;
}

/* 卡片主要内容 */
.card-main-content {
  position: relative;
}

.english-section {
  margin-bottom: 16rpx;
}

.english-content {
  font-size: 32rpx;
  color: #2c3e50;
  line-height: 1.6;
  font-weight: 600;
  display: block;
}

.chinese-section {
  margin-bottom: 15rpx;
}

.chinese-content {
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.5;
  display: block;
}

/* 卡片底部装饰 */
.card-decoration {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent 0%, #667eea 100%);
  border-radius: 2rpx;
}

/* ================== 优雅空状态 ================== */
.elegant-empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-illustration {
  margin-bottom: 40rpx;
}

.empty-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 20rpx 40rpx rgba(102, 126, 234, 0.3);
}

.empty-emoji {
  font-size: 60rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-title {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

/* ================== 全屏详情模态 ================== */
.fullscreen-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

.modal-content {
  position: relative;
  width: 100%;
  height: 85vh;
  background: #f8f9fa;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 模态头部 */
.modal-header {
  position: relative;
  height: 140rpx;
  overflow: hidden;
}

.modal-header-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.modal-header-content {
  position: relative;
  z-index: 1;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.modal-title-section {
  flex: 1;
}

.modal-main-title {
  font-size: 40rpx;
  color: white;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.modal-category-badge {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.category-badge-text {
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

.modal-close-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
}

.modal-close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.close-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

/* 模态内容 */
.modal-body {
  height: calc(100% - 140rpx);
  padding: 30rpx;
}

.detail-info-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.detail-info-card.primary {
  border-left: 6rpx solid #1989fa;
}

.detail-info-card.secondary {
  border-left: 6rpx solid #52c41a;
}

.detail-info-card.accent {
  border-left: 6rpx solid #faad14;
}

.info-card-header {
  background: rgba(102, 126, 234, 0.05);
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-card-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.info-card-content {
  padding: 25rpx;
}

.info-text {
  font-size: 30rpx;
  color: #34495e;
  line-height: 1.6;
}

.info-text.english-detail {
  font-size: 32rpx;
  color: #1989fa;
  font-weight: 600;
}

.info-text.chinese-detail {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.type-detail-badge {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.type-text {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
}

/* ================== 底部安全区域 ================== */
.bottom-safe-area {
  height: 50rpx;
}

/* ================== 响应式设计 ================== */
@media (max-width: 375px) {
  .main-title {
    font-size: 48rpx;
  }
  
  .premium-card {
    padding: 25rpx;
    margin-bottom: 16rpx;
  }
  
  .english-content {
    font-size: 30rpx;
  }
  
  .chinese-content {
    font-size: 26rpx;
  }
}

/* ================== 暗色主题适配 ================== */
.dark .elegant-communication-page {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
}

.dark .search-header-backdrop {
  background: rgba(26, 26, 46, 0.85);
}

.dark .premium-card {
  background: rgba(30, 30, 60, 0.9);
  border-color: rgba(255, 255, 255, 0.1);
}

.dark .english-content {
  color: #e2e8f0;
}

.dark .chinese-content {
  color: #a0aec0;
}

.dark .detail-info-card {
  background: rgba(30, 30, 60, 0.9);
  border-color: rgba(255, 255, 255, 0.1);
}

.dark .info-text {
  color: #cbd5e0;
}

.dark .modal-content {
  background: #1a1a2e;
}

/* ================== 动画优化 ================== */
.premium-card,
.capsule-tab-item,
.search-input-wrapper {
  will-change: transform;
}

/* 防止动画卡顿 */
view, text, button, input {
  -webkit-tap-highlight-color: transparent;
}

/* 平滑滚动 */
scroll-view {
  scroll-behavior: smooth;
}