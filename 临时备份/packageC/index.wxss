  font-size: 30rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.tips-content {
  line-height: 2;
}

.tip-item {
  font-size: 26rpx;
  color: #646566;
  margin-bottom: 10rpx;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .airport-main {
    flex-direction: column;
  }
  
  .airport-codes {
    margin-right: 0;
    margin-bottom: 15rpx;
    display: flex;
    align-items: center;
    gap: 15rpx;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .stat-number {
    font-size: 32rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .search-suggestions {
    background: var(--bg-color-card);
    border: 1rpx solid var(--border-color);
  }
  
  .airport-item {
    background: var(--bg-color-card);
  }
  
  .statistics-section,
  .tips-section {
    background: var(--bg-color-card);
  }
  
  .stat-item {
    background: var(--bg-color-page);
  }
}

