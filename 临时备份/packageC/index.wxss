/* 机场数据搜索页面样式 - 优雅版 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

.page-content {
  position: relative;
  z-index: 1;
}

/* 优雅搜索容器 */
.elegant-search-container {
  position: relative;
  padding: 60rpx 32rpx 40rpx;
  overflow: hidden;
}

/* 背景装饰 */
.search-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -75rpx;
  left: -30rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  right: 20rpx;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(180deg); }
}

/* 主搜索包装器 */
.main-search-wrapper {
  position: relative;
  z-index: 1;
}

/* 搜索标题 */
.search-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.title-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

/* 高端搜索框 */
.premium-search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 0 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.premium-search-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
  transition: left 0.6s ease;
}

.premium-search-box.focused {
  border-color: #6366f1;
  box-shadow: 0 12rpx 40rpx rgba(99, 102, 241, 0.25);
  transform: translateY(-4rpx);
}

.premium-search-box.focused::before {
  left: 100%;
}

.search-icon-wrapper {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  transition: transform 0.3s ease;
}

.premium-search-box.focused .search-icon-wrapper {
  transform: scale(1.1);
}

.premium-search-input {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
  color: #1f2937;
  background: transparent;
  border: none;
  outline: none;
  font-weight: 500;
}

.premium-search-placeholder {
  color: #9ca3af;
  font-size: 30rpx;
  font-weight: 400;
}

.search-clear-btn,
.search-loading-indicator {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(156, 163, 175, 0.1);
  transition: all 0.3s ease;
}

.search-clear-btn:active {
  background: rgba(156, 163, 175, 0.2);
  transform: scale(0.9);
}

/* 搜索状态优雅版 */
.search-status-elegant {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.status-indicator {
  margin-right: 16rpx;
  position: relative;
}

.pulse-dot {
  width: 12rpx;
  height: 12rpx;
  background: #10b981;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.pulse-dot::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  width: 20rpx;
  height: 20rpx;
  background: rgba(16, 185, 129, 0.3);
  border-radius: 50%;
  animation: pulse-ring 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes pulse-ring {
  0% { transform: scale(0.8); opacity: 1; }
  100% { transform: scale(2); opacity: 0; }
}

.status-text-elegant {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 快速筛选标签优雅版 */
.quick-filters {
  margin-bottom: 32rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tags {
  display: flex;
  padding: 0 10rpx;
  gap: 16rpx;
}

.filter-tag {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  min-width: fit-content;
}

.filter-tag.active {
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(255, 255, 255, 0.8);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.filter-tag:active {
  transform: scale(0.95);
}

.tag-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  margin-right: 8rpx;
}

.filter-tag.active .tag-text {
  color: #1f2937;
  font-weight: 600;
}

.tag-count {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
  font-weight: 500;
}

.filter-tag.active .tag-count {
  color: #6366f1;
  background: rgba(99, 102, 241, 0.1);
}

/* 建议卡片优雅版 */
.suggestions-card {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 10;
  max-height: 500rpx;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.suggestions-header-elegant {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.05));
  border-bottom: 1rpx solid rgba(245, 158, 11, 0.1);
}

.suggestions-title-elegant {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.suggestions-close-elegant {
  padding: 12rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.suggestions-close-elegant:active {
  background: rgba(156, 163, 175, 0.2);
  transform: scale(0.9);
}

.suggestions-content-elegant {
  padding: 12rpx 0;
  max-height: 400rpx;
  overflow-y: auto;
}

.suggestion-item-elegant {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  transition: all 0.3s ease;
  position: relative;
}

.suggestion-item-elegant::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(99, 102, 241, 0.05));
  transition: width 0.3s ease;
}

.suggestion-item-elegant:active::before {
  width: 100%;
}

.suggestion-icon-elegant {
  margin-right: 20rpx;
  z-index: 1;
}

.suggestion-content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  z-index: 1;
}

.suggestion-code-elegant {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
}

.suggestion-name-elegant {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 400;
}

.suggestion-arrow-elegant {
  margin-left: 20rpx;
  z-index: 1;
  transition: transform 0.3s ease;
}

.suggestion-item-elegant:active .suggestion-arrow-elegant {
  transform: translateX(4rpx);
}

