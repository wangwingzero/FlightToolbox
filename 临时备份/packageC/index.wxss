  font-size: 40rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #646566;
}

/* 使用说明 */
.tips-section {
  margin: 40rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

