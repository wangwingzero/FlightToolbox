.option-text {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.sort-option.active .option-text {
  color: #1989fa;
}

.option-desc {
  font-size: 24rpx;
  color: #969799;
  margin-left: 15rpx;
}

.option-check {
  margin-left: 20rpx;
}

/* 动画效果 */
.airport-item {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.search-suggestions {
  animation: fadeInDown 0.2s ease-out;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}