/* 机场详情页面样式 - 重新设计 */

/* 设计系统变量 */
:root {
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  --secondary-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  --glass-bg: rgba(255, 255, 255, 0.15);
  --glass-border: rgba(255, 255, 255, 0.25);
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.9);
  --text-tertiary: rgba(255, 255, 255, 0.7);
  --accent-blue: #4fc3f7;
  --accent-purple: #9c27b0;
  --accent-pink: #e91e63;
  --shadow-premium: 0 25rpx 80rpx rgba(0, 0, 0, 0.25), 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
  --shadow-soft: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --border-radius: 28rpx;
  --border-radius-large: 36rpx;
  --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.container {
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* 高端机场信息卡片 */
.airport-header-premium {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  color: #ffffff;
  padding: 50rpx 40rpx;
  margin: 30rpx;
  border-radius: 36rpx;
  box-shadow: 0 25rpx 80rpx rgba(0, 0, 0, 0.25), 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(30rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.25);
}

/* 毛玻璃层 */
.airport-header-premium::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 36rpx;
  z-index: -1;
}

/* 装饰性背景元素 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
}

.circle-2 {
  width: 120rpx;
  height: 120rpx;
  bottom: -60rpx;
  left: -30rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.03));
}

.circle-3 {
  width: 80rpx;
  height: 80rpx;
  top: 50%;
  right: 20rpx;
  background: linear-gradient(225deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.02));
}

/* 顶部代码显示区域 */
.header-codes-section {
  position: relative;
  z-index: 1;
  text-align: center;
  margin-bottom: 40rpx;
}

.codes-display {
  display: inline-flex;
  align-items: baseline;
  gap: 16rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.primary-code {
  font-size: 48rpx;
  font-weight: 800;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  color: #ffffff;
  text-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.2);
  letter-spacing: 2rpx;
}

.secondary-code {
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 1rpx;
}

/* 地图操作区域 - 醒目设计 */
.map-action-section {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.map-action-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 12rpx 40rpx rgba(79, 172, 254, 0.4), 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  backdrop-filter: blur(20rpx);
  position: relative;
  overflow: hidden;
}

/* 地图按钮发光效果 */
.map-action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.map-action-btn:active::before {
  left: 100%;
}

.map-action-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 8rpx 30rpx rgba(79, 172, 254, 0.6), 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.map-btn-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.map-btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

/* 主信息区域 */
.header-main-info {
  position: relative;
  z-index: 1;
  text-align: center;
  margin-bottom: 40rpx;
}

.airport-name-primary {
  font-size: 56rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
  line-height: 1.2;
}

.airport-name-secondary {
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  font-style: italic;
  opacity: 0.9;
}

/* 位置信息行 */
.header-location-info {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.location-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx 24rpx;
  border-radius: 25rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.location-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.location-icon {
  font-size: 28rpx;
}

.location-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
}

/* 移除旧的底部操作区域样式 */

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 动画效果 */
.airport-header-premium {
  animation: slideInScale 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideInScale {
  0% {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 响应式设计 */
@media screen and (max-width: 480px) {
  .header-location-info {
    flex-direction: column;
    align-items: center;
    gap: 16rpx;
  }
  
  .header-actions {
    flex-direction: row;
    justify-content: space-around;
  }
  
  .header-action-btn {
    min-width: 80rpx;
    padding: 12rpx 16rpx;
  }
  
  .airport-name-primary {
    font-size: 40rpx;
  }
  
  .primary-code {
    font-size: 36rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  :root {
    --primary-gradient: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #2a2a2a 100%);
  }
}

/* 信息卡片 - 保留现有样式 */
.info-cards {
  margin-bottom: 40rpx;
}

/* 机场详情 */
.airport-detail {
  padding: 30rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.error-container {
  text-align: center;
  padding: 200rpx 60rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 32rpx;
  color: #646566;
  margin-bottom: 40rpx;
}

.info-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.card-content {
  line-height: 1.6;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #646566;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
  word-break: break-all;
}

.code-value {
  font-family: 'Monaco', 'Consolas', monospace;
  font-weight: bold;
  color: #1989fa;
}

.coord-value {
  font-family: 'Monaco', 'Consolas', monospace;
  font-size: 26rpx;
}

.coordinate-actions {
  margin-top: 20rpx;
  text-align: center;
}

/* 地图 */
.airport-map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 相关机场 */
.related-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.related-airports {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320rpx, 1fr));
  gap: 15rpx;
}

.related-airport-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  cursor: pointer;
}

.related-airport-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.related-codes {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.related-icao {
  font-size: 26rpx;
  font-weight: bold;
  color: #1989fa;
  font-family: 'Monaco', 'Consolas', monospace;
}

.related-iata {
  font-size: 22rpx;
  color: #646566;
  font-family: 'Monaco', 'Consolas', monospace;
  background: #f0f0f0;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

.related-info {
  font-size: 24rpx;
}

.related-name {
  color: #323233;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.related-english,
.related-distance {
  color: #969799;
  font-size: 22rpx;
}

.related-distance {
  font-weight: bold;
  color: #ff976a;
}

/* 底部操作 */
.bottom-actions {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

/* 响应式设计 */
@media screen and (max-width: 480px) {
  .airport-codes {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .main-code {
    font-size: 40rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .info-row {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .info-label {
    margin-bottom: 5rpx;
    min-width: auto;
  }
  
  .related-airports {
    grid-template-columns: 1fr;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .info-card {
    background: var(--bg-color-card);
  }
  
  .related-airport-item {
    background: var(--bg-color-card);
  }
}

/* 动画效果 */
.info-card {
  animation: slideInUp 0.3s ease-out;
}

.related-airport-item {
  animation: fadeIn 0.4s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 地图标记样式优化 */
.airport-map {
  border: 2rpx solid #f0f0f0;
}

/* 坐标显示优化 */
.coord-value {
  display: block;
  line-height: 1.4;
}

/* 按钮组优化 */
.action-buttons .van-button {
  min-width: 120rpx;
}

/* 信息行优化 */
.info-row .info-value {
  padding-left: 10rpx;
}

/* 相关机场卡片悬停效果 */
.related-airport-item {
  border: 1rpx solid transparent;
}

.related-airport-item:hover {
  border-color: #1989fa;
}